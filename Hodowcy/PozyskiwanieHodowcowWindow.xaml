<Window x:Class="Kalendarz1.Hodowcy.PozyskiwanieHodowcowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pozyskiwanie Hodowców"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A"
        FontFamily="Segoe UI"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <SolidColorBrush x:Key="BgPrimary" Color="#0F172A"/>
        <SolidColorBrush x:Key="BgSecondary" Color="#1E293B"/>
        <SolidColorBrush x:Key="BgTertiary" Color="#334155"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#94A3B8"/>
        <SolidColorBrush x:Key="TextMuted" Color="#64748B"/>
        <SolidColorBrush x:Key="BorderDefault" Color="#334155"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#22C55E"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.25" BlurRadius="15" ShadowDepth="0" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnIcon" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#334155"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnPrimary" TargetType="Button">
            <Setter Property="Background" Value="#22C55E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#16A34A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnDanger" TargetType="Button">
            <Setter Property="Background" Value="#7F1D1D"/>
            <Setter Property="Foreground" Value="#FCA5A5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#991B1B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

<!-- Status button style with colored bg -->
        <Style x:Key="BtnStatus" TargetType="Button">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="8" Opacity="0.85">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="1"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="White" BlurRadius="8" ShadowDepth="0" Opacity="0.15"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark ComboBox Style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#334155"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="BorderBrush" Value="#475569"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="Border" Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"/>
                                                <Path Grid.Column="1" Fill="#94A3B8"
                                                      HorizontalAlignment="Center" VerticalAlignment="Center"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#475569"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="8,4,24,4"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <Popup Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Background="#1E293B" BorderBrush="#475569"
                                            BorderThickness="1" CornerRadius="6" Margin="0,2,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="10" ShadowDepth="2"/>
                                        </Border.Effect>
                                        <ScrollViewer Margin="4" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}" CornerRadius="4" Margin="2,1">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#334155"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#22C55E"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark ScrollViewer -->
        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="6"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="460"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT COLUMN: Header + DataGrid -->
        <Grid Grid.Column="0" Margin="0,0,12,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Padding="14,10" Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 0: Title + User + Search -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title with icon -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,15,0">
                        <Border Background="#14532D" CornerRadius="8" Padding="8,4" Margin="0,0,10,0">
                            <TextBlock Text="&#x1F414;" FontSize="18" Foreground="White"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Pozyskiwanie Hodowców" FontWeight="Bold" FontSize="17" Foreground="#22C55E"/>
                            <TextBlock Text="CRM hodowców drobiu" FontSize="9" Foreground="#64748B"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- User avatar + name (double-click = ranking) -->
                    <Border Grid.Column="1" Background="#334155" CornerRadius="8" Padding="8,5" Margin="0,0,15,0" VerticalAlignment="Center"
                            Cursor="Hand" MouseLeftButtonDown="UserAvatar_DoubleClick" ToolTip="Kliknij 2x — ranking aktywności">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="borderUserAvatar" Width="32" Height="32" CornerRadius="16" ClipToBounds="True" Margin="0,0,8,0" Background="#312E81"
                                    BorderBrush="#22C55E" BorderThickness="2">
                                <Image x:Name="imgUserAvatar" Stretch="UniformToFill"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="txtUserName" Text="" FontSize="12" FontWeight="Bold" Foreground="#E2E8F0"/>
                                <TextBlock Text="Handlowiec" FontSize="8" Foreground="#64748B"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Search -->
                    <Border Grid.Column="2" Background="#0F172A" CornerRadius="8" VerticalAlignment="Center" Height="34" BorderBrush="#334155" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="34"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Path Data="M15.5,14h-0.79l-0.28-0.27C15.41,12.59,16,11.11,16,9.5C16,5.91,13.09,3,9.5,3S3,5.91,3,9.5S5.91,16,9.5,16c1.61,0,3.09-0.59,4.23-1.57l0.27,0.28v0.79l5,4.99L20.49,19L15.5,14z M9.5,14C7.01,14,5,11.99,5,9.5S7.01,5,9.5,5S14,7.01,14,9.5S11.99,14,9.5,14z"
                                  Fill="#64748B" Stretch="Uniform" Width="14" Height="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtSzukaj" Grid.Column="1" Background="Transparent" BorderThickness="0"
                                     VerticalContentAlignment="Center" FontSize="12" Padding="0,0,8,0" Foreground="#E2E8F0" CaretBrush="#E2E8F0"
                                     TextChanged="TxtSzukaj_TextChanged"/>
                            <!-- Placeholder -->
                            <TextBlock Grid.Column="1" Text="Szukaj hodowcy..." FontSize="11" Foreground="#475569" VerticalAlignment="Center" IsHitTestVisible="False"
                                       Margin="2,0,0,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=txtSzukaj}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- KPI avatary użytkowników -->
                    <ScrollViewer Grid.Column="3" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="10,0,10,0">
                        <StackPanel x:Name="panelKpiUsers" Orientation="Horizontal"/>
                    </ScrollViewer>

                    <!-- Count + refresh + map + duplicates -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="txtLiczbaWynikow" Text="0 hodowców" FontSize="11" Foreground="#64748B" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Button Style="{StaticResource BtnIcon}" Padding="6" ToolTip="Wykrywanie duplikatów" Click="BtnDuplikaty_Click" Margin="0,0,4,0">
                            <TextBlock Text="&#x1F465;" FontSize="16" Foreground="#F59E0B"/>
                        </Button>
                        <Button Style="{StaticResource BtnIcon}" Padding="6" ToolTip="Pokaż mapę hodowców" Click="BtnMapa_Click" Margin="0,0,4,0">
                            <TextBlock Text="&#x1F5FA;" FontSize="16" Foreground="White"/>
                        </Button>
                        <Button Style="{StaticResource BtnIcon}" Padding="6" ToolTip="Odśwież (F5)" Click="BtnRefresh_Click">
                            <Path Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z"
                                  Fill="#94A3B8" Stretch="Uniform" Width="14" Height="14"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Row 1: Filters -->
                <StackPanel Grid.Row="1" Margin="0,8,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Towar:" FontSize="10" Foreground="#94A3B8" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <ComboBox x:Name="cmbTowar" Style="{StaticResource DarkComboBox}" Width="110" Margin="0,0,16,0" SelectionChanged="CmbFilter_SelectionChanged" ItemContainerStyle="{StaticResource DarkComboBoxItem}"/>

                        <TextBlock Text="Status:" FontSize="10" Foreground="#94A3B8" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <ComboBox x:Name="cmbStatus" Style="{StaticResource DarkComboBox}" Width="145" Margin="0,0,16,0" SelectionChanged="CmbFilter_SelectionChanged" ItemContainerStyle="{StaticResource DarkComboBoxItem}"/>

                        <TextBlock Text="Województwo:" FontSize="10" Foreground="#94A3B8" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <ComboBox x:Name="cmbWojewodztwo" Style="{StaticResource DarkComboBox}" Width="165" Margin="0,0,16,0" SelectionChanged="CmbWojewodztwo_SelectionChanged" ItemContainerStyle="{StaticResource DarkComboBoxItem}"/>

                        <TextBlock Text="Powiat:" FontSize="10" Foreground="#94A3B8" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <ComboBox x:Name="cmbPowiat" Style="{StaticResource DarkComboBox}" Width="165" SelectionChanged="CmbFilter_SelectionChanged" ItemContainerStyle="{StaticResource DarkComboBoxItem}"/>
                    </StackPanel>

                    <!-- Legenda usunięta — przeniesiona do panelu podpowiedzi -->
                </StackPanel>


                <!-- Row 2: Podpowiedź rozmowy (zwijana) -->
                <Grid Grid.Row="2" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Lewa połowa: Podpowiedź rozmowy -->
                    <Border x:Name="panelPodpowiedz" Grid.Column="0" Background="#0F2E1A" CornerRadius="10,0,0,10" Padding="14,10,14,10"
                            BorderBrush="#22C55E" BorderThickness="0,1,0,0" Margin="0,0,1,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="&#x1F4AC;" FontSize="13" Margin="0,0,5,0" VerticalAlignment="Center" Foreground="White"/>
                                <TextBlock Text="PODPOWIEDŹ" FontSize="10" FontWeight="Bold" Foreground="#4ADE80" VerticalAlignment="Center"/>
                                <Button Margin="8,0,0,0" Padding="8,3" Cursor="Hand" Click="BtnNastepnySzablon_Click"
                                        BorderThickness="0" Background="#334155" Foreground="#94A3B8" FontSize="9"
                                        VerticalAlignment="Center" ToolTip="Losuj inny szablon">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#x1F504;" FontSize="10" Margin="0,0,3,0" Foreground="White"/>
                                        <TextBlock Text="Inny" FontSize="9"/>
                                    </StackPanel>
                                </Button>
                                <Button Margin="4,0,0,0" Padding="6,3" Cursor="Hand" Click="BtnTogglePodpowiedz_Click"
                                        BorderThickness="0" Background="#334155" Foreground="#94A3B8" FontSize="9"
                                        VerticalAlignment="Center" ToolTip="Zwiń / rozwiń">
                                    <TextBlock x:Name="txtTogglePodpowiedz" Text="&#x25B2;" FontSize="9" Foreground="#94A3B8"/>
                                </Button>
                            </StackPanel>
                            <TextBlock x:Name="txtSzablonRozmowy" Text="" FontSize="12" Foreground="#E2E8F0"
                                       TextWrapping="Wrap" LineHeight="18" MaxHeight="54"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Border>

                    <!-- Prawa połowa: Legenda statusów -->
                    <Border Grid.Column="1" Background="#1E293B" CornerRadius="0,10,10,0" Padding="14,10,14,10"
                            BorderBrush="#334155" BorderThickness="0,1,0,0" Margin="1,0,0,0">
                        <StackPanel>
                            <TextBlock Text="LEGENDA STATUSÓW" FontSize="10" FontWeight="Bold" Foreground="#94A3B8" Margin="0,0,0,6"/>
                            <WrapPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,16,4">
                                    <TextBlock Text="&#x1F4DE;" FontSize="12" Foreground="White" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock FontSize="11" VerticalAlignment="Center">
                                        <Run Text="Do zadzwonienia" FontWeight="SemiBold" Foreground="#F59E0B"/>
                                        <Run Text=" — nowy lub do ponownego kontaktu" Foreground="#94A3B8"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,16,4">
                                    <TextBlock Text="&#x231B;" FontSize="12" Foreground="White" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock FontSize="11" VerticalAlignment="Center">
                                        <Run Text="Próba kontaktu" FontWeight="SemiBold" Foreground="#FB923C"/>
                                        <Run Text=" — nie odebrano" Foreground="#94A3B8"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,16,4">
                                    <TextBlock Text="&#x2705;" FontSize="12" Foreground="White" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock FontSize="11" VerticalAlignment="Center">
                                        <Run Text="Nawiązano kontakt" FontWeight="SemiBold" Foreground="#22C55E"/>
                                        <Run Text=" — potencjalnie chętny" Foreground="#94A3B8"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,16,4">
                                    <TextBlock Text="&#x1F91D;" FontSize="12" Foreground="White" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock FontSize="11" VerticalAlignment="Center">
                                        <Run Text="Zdaje" FontWeight="SemiBold" Foreground="#10B981"/>
                                        <Run Text=" — regularnie dostarcza do nas" Foreground="#94A3B8"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,16,4">
                                    <TextBlock Text="&#x274C;" FontSize="12" Foreground="White" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock FontSize="11" VerticalAlignment="Center">
                                        <Run Text="Nie zainteresowany" FontWeight="SemiBold" Foreground="#EF4444"/>
                                        <Run Text=" — odmawia lub nie hoduje" Foreground="#94A3B8"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,16,4">
                                    <TextBlock Text="&#x1F512;" FontSize="12" Foreground="White" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock FontSize="11" VerticalAlignment="Center">
                                        <Run Text="Obcy kontrakt" FontWeight="SemiBold" Foreground="#06B6D4"/>
                                        <Run Text=" — umowa z inną ubojnią" Foreground="#94A3B8"/>
                                    </TextBlock>
                                </StackPanel>
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="1" Background="#1E293B" CornerRadius="8" BorderBrush="#334155" BorderThickness="1" ClipToBounds="True">
                <DataGrid x:Name="dgHodowcy" AutoGenerateColumns="False" IsReadOnly="True"
                          HeadersVisibility="Column" GridLinesVisibility="None"
                          BorderThickness="0" Background="#1E293B" RowBackground="#1E293B" AlternatingRowBackground="#273548" RowHeaderWidth="0"
                          SelectionMode="Single" SelectionUnit="FullRow"
                          SelectionChanged="DgHodowcy_SelectionChanged"
                          CanUserSortColumns="True">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#0F172A"/>
                            <Setter Property="Foreground" Value="#94A3B8"/>
                            <Setter Property="Padding" Value="10,12"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="#334155"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="Padding" Value="6,3"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#E2E8F0"/>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="58"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Background" Value="#1E293B"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Margin" Value="2,1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#334155"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#1E3A5F"/>
                                    <Setter Property="BorderBrush" Value="#22C55E"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#22C55E" BlurRadius="12" ShadowDepth="0" Opacity="0.5"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <!-- Status -->
                        <DataGridTemplateColumn Header="Status" Width="145" SortMemberPath="Status">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
