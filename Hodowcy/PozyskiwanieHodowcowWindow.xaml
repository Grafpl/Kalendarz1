                                        <TextBlock x:Name="txtDetTel2" Grid.Column="1" Text="" FontSize="13" FontWeight="Bold" Foreground="#4ADE80" VerticalAlignment="Center"
                                                   Cursor="Hand" MouseLeftButtonDown="TxtTelefon_Click" ToolTip="Kliknij aby skopiować"/>
                                        <TextBlock Grid.Column="2" Text="&#x1F4CB;" FontSize="10" Foreground="#64748B" VerticalAlignment="Center" Cursor="Hand"
                                                   MouseLeftButtonDown="TxtTelefon_Click" ToolTip="Kopiuj"/>
                                    </Grid>
                                </StackPanel>
                                <StackPanel x:Name="panelTel3" Margin="0,0,0,2" Visibility="Collapsed">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="&#x1F4F1;" FontSize="11" VerticalAlignment="Center" Margin="0,0,6,0" Foreground="White"/>
                                        <TextBlock x:Name="txtDetTel3" Grid.Column="1" Text="" FontSize="13" FontWeight="Bold" Foreground="#4ADE80" VerticalAlignment="Center"
                                                   Cursor="Hand" MouseLeftButtonDown="TxtTelefon_Click" ToolTip="Kliknij aby skopiować"/>
                                        <TextBlock Grid.Column="2" Text="&#x1F4CB;" FontSize="10" Foreground="#64748B" VerticalAlignment="Center" Cursor="Hand"
                                                   MouseLeftButtonDown="TxtTelefon_Click" ToolTip="Kopiuj"/>
                                    </Grid>
                                </StackPanel>
                                <TextBlock x:Name="txtBrakTelefonow" Text="Brak numerów telefonu" FontSize="10" Foreground="#64748B" FontStyle="Italic"/>
                            </StackPanel>
                        </Border>

                        <!-- Action Buttons - compact -->
                        <Border Style="{StaticResource CardStyle}" Padding="10,6" Margin="0,0,0,6">
                            <StackPanel>
                                <!-- Main action: Call -->
                                <Button Style="{StaticResource BtnPrimary}" Padding="10,6" Click="BtnZadzwon_Click" Margin="0,0,0,6" HorizontalAlignment="Stretch">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Path Data="M6.62,10.79C8.06,13.62 10.38,15.94 13.21,17.38L15.41,15.18C15.69,14.9 16.08,14.82 16.43,14.93C17.55,15.3 18.75,15.5 20,15.5A1,1 0 0,1 21,16.5V20A1,1 0 0,1 20,21A17,17 0 0,1 3,4A1,1 0 0,1 4,3H7.5A1,1 0 0,1 8.5,4C8.5,5.25 8.7,6.45 9.07,7.57C9.18,7.92 9.1,8.31 8.82,8.59L6.62,10.79Z"
                                              Fill="White" Stretch="Uniform" Width="13" Height="13" Margin="0,0,6,0"/>
                                        <TextBlock Text="Zadzwoń i rejestruj" FontSize="11" FontWeight="Bold"/>
                                    </StackPanel>
                                </Button>

                                <!-- Quick status -->
                                <TextBlock Text="ZMIEŃ STATUS" FontSize="8" FontWeight="Bold" Foreground="#475569" Margin="0,0,0,3"/>
                                <WrapPanel>
                                    <Button Style="{StaticResource BtnStatus}" Background="#78350F" Padding="7,3" Margin="0,0,3,3" Tag="Do zadzwonienia" Click="BtnQuickStatus_Click" ToolTip="Do zadzwonienia">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#x1F4DE;" FontSize="10" Margin="0,0,3,0" Foreground="White"/>
                                            <TextBlock Text="Do zadzw." FontSize="9" Foreground="#FCD34D" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource BtnStatus}" Background="#78350F" Padding="7,3" Margin="0,0,3,3" Tag="Próba kontaktu" Click="BtnQuickStatus_Click" ToolTip="Próba kontaktu">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#x23F3;" FontSize="10" Margin="0,0,3,0" Foreground="White"/>
                                            <TextBlock Text="Próba" FontSize="9" Foreground="#FCD34D" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource BtnStatus}" Background="#14532D" Padding="7,3" Margin="0,0,3,3" Tag="Nawiązano kontakt" Click="BtnQuickStatus_Click" ToolTip="Nawiązano kontakt">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#x2705;" FontSize="10" Margin="0,0,3,0" Foreground="White"/>
                                            <TextBlock Text="Kontakt" FontSize="9" Foreground="#4ADE80" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource BtnStatus}" Background="#14532D" Padding="7,3" Margin="0,0,3,3" Tag="Zdaje" Click="BtnQuickStatus_Click" ToolTip="Zdaje">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#x1F91D;" FontSize="10" Margin="0,0,3,0" Foreground="White"/>
                                            <TextBlock Text="Zdaje" FontSize="9" Foreground="#4ADE80" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource BtnStatus}" Background="#7F1D1D" Padding="7,3" Margin="0,0,3,3" Tag="Nie zainteresowany" Click="BtnQuickStatus_Click" ToolTip="Nie zainteresowany">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#x274C;" FontSize="10" Margin="0,0,3,0" Foreground="White"/>
                                            <TextBlock Text="Nie zaint." FontSize="9" Foreground="#FCA5A5" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource BtnStatus}" Background="#134E4A" Padding="7,3" Margin="0,0,3,3" Tag="Obcy kontrakt" Click="BtnQuickStatus_Click" ToolTip="Obcy kontrakt">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#x1F512;" FontSize="10" Margin="0,0,3,0" Foreground="White"/>
                                            <TextBlock Text="Obcy" FontSize="9" Foreground="#2DD4BF" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Button>
                                </WrapPanel>

                                <!-- Secondary actions inline -->
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <Button Style="{StaticResource BtnIcon}" Padding="6,4" Click="MenuMapa_Click" ToolTip="Pokaż na mapie">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#x1F5FA;" FontSize="10" Margin="0,0,3,0" Foreground="White"/>
                                            <TextBlock Text="Mapa" FontSize="10" Foreground="#94A3B8"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource BtnIcon}" Padding="6,4" Margin="3,0,0,0" Click="MenuGoogle_Click" ToolTip="Szukaj w Google">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#x1F50D;" FontSize="10" Margin="0,0,3,0" Foreground="White"/>
                                            <TextBlock Text="Google" FontSize="10" Foreground="#94A3B8"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Notes / History -->
                        <Border Style="{StaticResource CardStyle}" Padding="10,6" Margin="0,0,0,6">
                            <StackPanel>
                                <TextBlock Text="HISTORIA AKTYWNOŚCI" FontSize="9" FontWeight="Bold" Foreground="#64748B" Margin="0,0,0,4"/>

                                <!-- Note input at TOP for easier access -->
                                <Border Background="#0F172A" CornerRadius="6" Padding="3" Margin="0,0,0,6" BorderBrush="#334155" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="txtNowaNotatka" Background="Transparent" Foreground="#E2E8F0" BorderThickness="0"
                                                 Padding="10,8" VerticalContentAlignment="Center" FontSize="12" CaretBrush="#E2E8F0"
                                                 KeyDown="TxtNowaNotatka_KeyDown" AcceptsReturn="False"/>
                                        <!-- Placeholder -->
                                        <TextBlock Text="Wpisz notatkę i naciśnij Enter..." FontSize="11" Foreground="#475569" VerticalAlignment="Center" IsHitTestVisible="False"
                                                   Margin="12,0,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=txtNowaNotatka}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <Button Grid.Column="1" Content="Dodaj" Style="{StaticResource BtnPrimary}" Padding="14,6" Click="BtnDodajNotatke_Click" FontSize="11" Margin="4,0,0,0"/>
                                    </Grid>
                                </Border>

                                <!-- History list -->
                                <Border Background="#0F172A" CornerRadius="8" Height="180" BorderBrush="#334155" BorderThickness="1" Padding="4">
                                    <ScrollViewer>
                                        <ItemsControl x:Name="listaAktywnosci">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border CornerRadius="6" Margin="2,1,2,4" Background="#1E293B" Padding="8,5,8,5">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="BorderBrush" Value="#475569"/>
                                                                <Setter Property="BorderThickness" Value="3,1,1,1"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding TypAktywnosci}" Value="Telefon">
                                                                        <Setter Property="BorderBrush" Value="#22C55E"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding TypAktywnosci}" Value="Notatka">
                                                                        <Setter Property="BorderBrush" Value="#3B82F6"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding TypAktywnosci}" Value="Zmiana statusu">
                                                                        <Setter Property="BorderBrush" Value="#F59E0B"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding TypAktywnosci}" Value="Przypisanie">
                                                                        <Setter Property="BorderBrush" Value="#A78BFA"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <!-- Avatar -->
                                                            <Border Width="24" Height="24" CornerRadius="12" ClipToBounds="True"
                                                                    VerticalAlignment="Top" Margin="0,1,8,0" Background="#312E81">
                                                                <Image x:Name="imgAktywnoscAvatar" Stretch="UniformToFill"/>
                                                            </Border>
                                                            <StackPanel Grid.Column="1">
                                                                <!-- Type header badge (colored by type) -->
                                                                <Border CornerRadius="3" Padding="5,1" HorizontalAlignment="Left" Margin="0,0,0,2">
                                                                    <Border.Style>
                                                                        <Style TargetType="Border">
                                                                            <Setter Property="Background" Value="#334155"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding TypAktywnosci}" Value="Telefon">
                                                                                    <Setter Property="Background" Value="#14532D"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding TypAktywnosci}" Value="Notatka">
                                                                                    <Setter Property="Background" Value="#1E3A5F"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding TypAktywnosci}" Value="Zmiana statusu">
                                                                                    <Setter Property="Background" Value="#78350F"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding TypAktywnosci}" Value="Przypisanie">
                                                                                    <Setter Property="Background" Value="#312E81"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Border.Style>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock Text="{Binding IkonaTypu}" FontSize="11" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                                                        <TextBlock Text="{Binding TypAktywnosci}" FontSize="9" FontWeight="Bold" VerticalAlignment="Center">
                                                                            <TextBlock.Style>
                                                                                <Style TargetType="TextBlock">
                                                                                    <Setter Property="Foreground" Value="#94A3B8"/>
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding TypAktywnosci}" Value="Telefon">
                                                                                            <Setter Property="Foreground" Value="#4ADE80"/>
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding TypAktywnosci}" Value="Notatka">
                                                                                            <Setter Property="Foreground" Value="#60A5FA"/>
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding TypAktywnosci}" Value="Zmiana statusu">
                                                                                            <Setter Property="Foreground" Value="#FCD34D"/>
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding TypAktywnosci}" Value="Przypisanie">
                                                                                            <Setter Property="Foreground" Value="#A5B4FC"/>
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </TextBlock.Style>
                                                                        </TextBlock>
                                                                    </StackPanel>
                                                                </Border>
                                                                <!-- Content -->
                                                                <TextBlock Text="{Binding Tresc}" FontSize="11" Foreground="#E2E8F0" TextWrapping="Wrap" MaxHeight="34" TextTrimming="CharacterEllipsis"/>
                                                                <!-- User + date -->
                                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                                    <TextBlock Text="{Binding UzytkownikNazwa}" FontSize="10" FontWeight="Bold" Foreground="#22C55E"/>
                                                                    <TextBlock Text=" • " FontSize="10" Foreground="#64748B"/>
                                                                    <TextBlock Text="{Binding DataUtworzenia, StringFormat='dd.MM.yyyy HH:mm'}" FontSize="10" Foreground="#64748B"/>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading overlay -->
        <Border x:Name="loadingOverlay" Grid.ColumnSpan="2" Background="#E60F172A" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Background="#14532D" CornerRadius="20" Padding="30,20" BorderBrush="#22C55E" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="&#x1F414;" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="White"/>
                        <ProgressBar IsIndeterminate="True" Width="180" Height="4" Foreground="#22C55E" Background="#334155" BorderThickness="0"/>
                        <TextBlock Text="Wczytywanie bazy hodowców..." Foreground="#4ADE80" Margin="0,12,0,0" HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="13"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Toast -->
        <Border x:Name="toastPopup" Grid.ColumnSpan="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,40"
                Background="#14532D" CornerRadius="25" Padding="25,12" Opacity="0" IsHitTestVisible="False" BorderBrush="#22C55E" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#22C55E" Opacity="0.3" BlurRadius="15"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="&#x2705; " Foreground="#22C55E" FontSize="14"/>
                <TextBlock x:Name="toastText" Text="Wykonano" Foreground="#E2E8F0" FontWeight="SemiBold" FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
