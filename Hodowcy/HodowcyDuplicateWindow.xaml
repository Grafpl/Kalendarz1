<Window x:Class="Kalendarz1.Hodowcy.HodowcyDuplicateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wykrywanie duplikatów hodowców"
        Width="1000" Height="700"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <SolidColorBrush x:Key="BgPrimary" Color="#0F172A"/>
        <SolidColorBrush x:Key="BgSecondary" Color="#1E293B"/>
        <SolidColorBrush x:Key="BgTertiary" Color="#334155"/>
        <SolidColorBrush x:Key="AccentAmber" Color="#F59E0B"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#94A3B8"/>
        <SolidColorBrush x:Key="BorderColor" Color="#334155"/>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#F59E0B"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#D97706"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="#475569"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#475569"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#64748B"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="#334155"/>
                                <Setter Property="Foreground" Value="#64748B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#DC2626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#B91C1C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="#475569"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BgPrimary}" CornerRadius="16" BorderThickness="1" BorderBrush="{StaticResource BorderColor}">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.5" BlurRadius="30"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#B45309" CornerRadius="16,16,0,0" Padding="24,18" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="&#x1F50D;" FontSize="24" VerticalAlignment="Center" Margin="0,0,14,0"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Wykrywanie duplikatów" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Znajdź i połącz potencjalne duplikaty hodowców" FontSize="12" Foreground="#FDE68A" Margin="0,3,0,0"/>
                    </StackPanel>
                    <Button Grid.Column="2" Style="{StaticResource SecondaryButton}" Content="X" Padding="10,6" Click="BtnClose_Click" ToolTip="Zamknij"/>
                </Grid>
            </Border>

            <!-- Search Options -->
            <Border Grid.Row="1" Background="{StaticResource BgSecondary}" Padding="20,14">
                <StackPanel>
                    <TextBlock Text="Szukaj duplikatów według:" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,0,0,10"/>
                    <WrapPanel>
                        <CheckBox x:Name="chkTelefon" Content="Telefon" Foreground="{StaticResource TextPrimary}" IsChecked="True" Margin="0,0,20,0" FontSize="13"/>
                        <CheckBox x:Name="chkNazwa" Content="Nazwa (Dostawca)" Foreground="{StaticResource TextPrimary}" Margin="0,0,20,0" FontSize="13"/>
                        <Button Style="{StaticResource ActionButton}" Content="Szukaj duplikatów" Click="BtnSearch_Click" Padding="16,8"/>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Results -->
            <Border Grid.Row="2" Margin="16" Background="{StaticResource BgSecondary}" CornerRadius="10" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock x:Name="txtResultCount" Text="Kliknij 'Szukaj duplikatów' aby rozpocząć" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                    </StackPanel>

                    <DataGrid x:Name="dgDuplicates" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                              Background="{StaticResource BgSecondary}" RowBackground="{StaticResource BgSecondary}"
                              AlternatingRowBackground="#273548" BorderThickness="0" GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="{StaticResource BorderColor}" RowHeaderWidth="0"
                              SelectionMode="Single" SelectionChanged="DgDuplicates_SelectionChanged">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#0F172A"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                                <Setter Property="Padding" Value="12,10"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                <Setter Property="BorderBrush" Value="#334155"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#E2E8F0"/>
                                <Setter Property="Padding" Value="8,6"/>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Height" Value="40"/>
                                <Setter Property="Background" Value="#1E293B"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#334155"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#B45309"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Gr." Binding="{Binding Grupa}" Width="50"/>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                            <DataGridTextColumn Header="Dostawca" Binding="{Binding Dostawca}" Width="*"/>
                            <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" Width="140"/>
                            <DataGridTextColumn Header="Miejscowość" Binding="{Binding Miejscowosc}" Width="120"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                            <DataGridTextColumn Header="Towar" Binding="{Binding Towar}" Width="90"/>
                            <DataGridTextColumn Header="Dopasowanie" Binding="{Binding MatchReason}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="3" Background="{StaticResource BgSecondary}" CornerRadius="0,0,16,16" Padding="20,14">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="txtSelectedInfo" Text="Wybierz grupę duplikatów" VerticalAlignment="Center"
                               Foreground="{StaticResource TextSecondary}" FontSize="12"/>

                    <Button Grid.Column="1" x:Name="btnIgnore" Style="{StaticResource SecondaryButton}"
                            Content="Ignoruj grupę" Click="BtnIgnore_Click" Margin="0,0,10,0" IsEnabled="False"/>
                    <Button Grid.Column="2" x:Name="btnMerge" Style="{StaticResource DangerButton}"
                            Content="Połącz duplikaty" Click="BtnMerge_Click" Margin="0,0,10,0" IsEnabled="False"/>
                    <Button Grid.Column="3" Style="{StaticResource SecondaryButton}" Content="Zamknij" Click="BtnClose_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
