                        <TextBlock x:Name="txtUserName" Text="-" FontWeight="SemiBold" Foreground="#2C3E50" VerticalAlignment="Center" FontSize="11"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- TABELE DOSTAW -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition x:Name="colNastepnyTydzien" Width="0"/>
                </Grid.ColumnDefinitions>

                <!-- TABELA GÅÃ“WNA (bieÅ¼Ä…cy tydzieÅ„) -->
                <Border Grid.Column="0" Margin="6,3,3,3" Background="White" CornerRadius="4" BorderBrush="#DDDDDD" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="#34495E" Padding="8,4">
                            <TextBlock x:Name="txtTydzien1Header" Text="BieÅ¼Ä…cy tydzieÅ„" Foreground="White" FontWeight="SemiBold" FontSize="11"/>
                        </Border>
                        <DataGrid x:Name="dgDostawy" Grid.Row="1" Style="{StaticResource MainDataGridStyle}"
                                  SelectionChanged="DgDostawy_SelectionChanged" MouseDoubleClick="DgDostawy_MouseDoubleClick" LoadingRow="DgDostawy_LoadingRow">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="LP" Binding="{Binding LP}" Visibility="Collapsed"/>
                                <DataGridTextColumn Header="Data" Binding="{Binding DataOdbioru, StringFormat=MM-dd ddd}" Width="70" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Dostawca" Binding="{Binding Dostawca}" Width="120" IsReadOnly="True"/>
                                <DataGridTextColumn Header="A" Binding="{Binding Auta}" Width="28" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Center"/><Setter Property="FontWeight" Value="SemiBold"/></Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Sztuki" Binding="{Binding SztukiDekDisplay}" Width="75" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Waga" Binding="{Binding WagaDekDisplay}" Width="60" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Doby" Binding="{Binding RoznicaDniDisplay}" Width="45" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Center"/></Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Typ" Binding="{Binding TypCeny}" Width="65" IsReadOnly="True"/>
                                <DataGridTextColumn x:Name="colCena" Header="Cena" Binding="{Binding CenaDisplay}" Width="55" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="KM" Binding="{Binding KmDisplay}" Width="45" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Uwagi" Binding="{Binding Uwagi}" Width="*" MinWidth="100" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock"><Setter Property="TextTrimming" Value="CharacterEllipsis"/><Setter Property="ToolTip" Value="{Binding Uwagi}"/></Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridCheckBoxColumn Header="âœ“" Binding="{Binding IsConfirmed, UpdateSourceTrigger=PropertyChanged}" Width="28"/>
                                <DataGridCheckBoxColumn Header="W" Binding="{Binding IsWstawienieConfirmed, UpdateSourceTrigger=PropertyChanged}" Width="28"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Bufor}" Visibility="Collapsed"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- TABELA NASTÄ˜PNY TYDZIEÅƒ -->
                <Border x:Name="borderNastepnyTydzien" Grid.Column="1" Margin="3,3,3,3" Background="White" CornerRadius="4" BorderBrush="#3498DB" BorderThickness="2" Visibility="Collapsed">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="#3498DB" Padding="8,4">
                            <TextBlock x:Name="txtTydzien2Header" Text="NastÄ™pny tydzieÅ„" Foreground="White" FontWeight="SemiBold" FontSize="11"/>
                        </Border>
                        <DataGrid x:Name="dgDostawyNastepny" Grid.Row="1" Style="{StaticResource MainDataGridStyle}" LoadingRow="DgDostawy_LoadingRow">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="LP" Binding="{Binding LP}" Visibility="Collapsed"/>
                                <DataGridTextColumn Header="Data" Binding="{Binding DataOdbioru, StringFormat=MM-dd ddd}" Width="70" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Dostawca" Binding="{Binding Dostawca}" Width="120" IsReadOnly="True"/>
                                <DataGridTextColumn Header="A" Binding="{Binding Auta}" Width="28" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Center"/><Setter Property="FontWeight" Value="SemiBold"/></Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Sztuki" Binding="{Binding SztukiDekDisplay}" Width="75" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Waga" Binding="{Binding WagaDekDisplay}" Width="60" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Doby" Binding="{Binding RoznicaDniDisplay}" Width="45" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Center"/></Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Typ" Binding="{Binding TypCeny}" Width="65" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Cena" Binding="{Binding CenaDisplay}" Width="55" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Uwagi" Binding="{Binding Uwagi}" Width="*" MinWidth="80" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock"><Setter Property="TextTrimming" Value="CharacterEllipsis"/><Setter Property="ToolTip" Value="{Binding Uwagi}"/></Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridCheckBoxColumn Header="âœ“" Binding="{Binding IsConfirmed}" Width="28"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Bufor}" Visibility="Collapsed"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>

            <!-- PANEL PARTII BIEÅ»Ä„CYCH -->
            <Border Grid.Row="2" Background="White" Margin="6,3,3,6" CornerRadius="4" BorderBrush="#DDDDDD" BorderThickness="1" MaxHeight="180">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="#388E3C" Padding="8,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Partie bieÅ¼Ä…ce (dziÅ›)" Foreground="White" FontWeight="SemiBold" FontSize="11"/>
                            <TextBlock x:Name="txtPartieSuma" Text="" Foreground="#C8E6C9" FontSize="10" Margin="20,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <DataGrid x:Name="dgPartie" Grid.Row="1" Style="{StaticResource SmallDataGridStyle}" CellEditEnding="DgPartie_CellFormatting">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nr" Binding="{Binding Partia}" Width="35"/>
                            <DataGridTextColumn Header="Dostawca" Binding="{Binding Dostawca}" Width="110"/>
                            <DataGridTextColumn Header="Åšrednia" Binding="{Binding SredniaDisplay}" Width="60"/>
                            <DataGridTextColumn Header="Å»ywiec" Binding="{Binding ZywiecDisplay}" Width="60"/>
                            <DataGridTextColumn Header="RÃ³Å¼nica" Binding="{Binding RoznicaDisplay}" Width="65"/>
                            <DataGridTextColumn Header="SkrzydÅ‚a" Binding="{Binding SkrzydlaDisplay}" Width="55"/>
                            <DataGridTextColumn Header="Nogi" Binding="{Binding NogiDisplay}" Width="50"/>
                            <DataGridTextColumn Header="Oparz." Binding="{Binding OparzeniaDisplay}" Width="50"/>
                            <DataGridTextColumn Header="Klasa B" Binding="{Binding KlasaBDisplay}" Width="55"/>
                            <DataGridTextColumn Header="Przek." Binding="{Binding PrzekarmienieDisplay}" Width="55"/>
                            <DataGridHyperlinkColumn Header="ZdjÄ™cia" Binding="{Binding ZdjeciaLink}" Width="70">
                                <DataGridHyperlinkColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <EventSetter Event="Hyperlink.Click" Handler="Hyperlink_Click"/>
                                    </Style>
                                </DataGridHyperlinkColumn.ElementStyle>
                            </DataGridHyperlinkColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- ==================== PRAWA STRONA - SZCZEGÃ“ÅY ==================== -->
        <Grid Grid.Column="1" Margin="3,6,6,6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- KALENDARZ I NAWIGACJA -->
            <Border Grid.Row="0" Background="White" CornerRadius="4" Padding="8" Margin="0,0,0,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Kalendarz -->
                    <StackPanel Grid.Column="0">
                        <Calendar x:Name="calendarMain" HorizontalAlignment="Left"
                                  SelectedDatesChanged="CalendarMain_SelectedDatesChanged"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                            <Button Content="â—€" Style="{StaticResource NavButtonStyle}" Click="BtnPreviousWeek_Click" ToolTip="Poprzedni tydzieÅ„"/>
                            <Button Content="DziÅ›" Style="{StaticResource MainButtonStyle}" Click="BtnToday_Click" Margin="4,0"/>
                            <Button Content="â–¶" Style="{StaticResource NavButtonStyle}" Click="BtnNextWeek_Click" ToolTip="NastÄ™pny tydzieÅ„"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Numer tygodnia i ceny -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <!-- Numer tygodnia -->
                        <Border Background="#ECEFF1" CornerRadius="4" Padding="10,6" Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="TYDZIEÅƒ " FontSize="12" Foreground="#7F8C8D" VerticalAlignment="Center"/>
                                <TextBlock x:Name="txtWeekNumber" Text="1" FontSize="28" FontWeight="Bold" Foreground="#2C3E50"/>
                            </StackPanel>
                        </Border>

                        <!-- Panel cen rynkowych -->
                        <GroupBox Header="Ceny rynkowe" Style="{StaticResource ModernGroupBoxStyle}" Padding="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Rolnicza:" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox x:Name="txtCenaRolnicza" Grid.Row="0" Grid.Column="1" Style="{StaticResource ReadOnlyTextBoxStyle}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Ministerialna:" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox x:Name="txtCenaMinister" Grid.Row="1" Grid.Column="1" Style="{StaticResource ReadOnlyTextBoxStyle}"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="ÅÄ…czona:" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox x:Name="txtCenaLaczona" Grid.Row="2" Grid.Column="1" Style="{StaticResource ReadOnlyTextBoxStyle}"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Tuszka A:" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox x:Name="txtCenaTuszki" Grid.Row="3" Grid.Column="1" Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- PRZYCISKI AKCJI -->
            <Border Grid.Row="1" Background="White" CornerRadius="4" Padding="8" Margin="0,0,0,4">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="â–² DzieÅ„" Style="{StaticResource ActionButtonStyle}" Click="BtnDateUp_Click" Width="70"/>
                    <Button Content="â–¼ DzieÅ„" Style="{StaticResource ActionButtonStyle}" Click="BtnDateDown_Click" Width="70"/>
                    <Button Content="âž• Nowa" Style="{StaticResource MainButtonStyle}" Click="BtnNowaDostawa_Click" Width="70"/>
                    <Button Content="ðŸ“‹ Duplikuj" Style="{StaticResource ActionButtonStyle}" Click="BtnDuplikuj_Click" Width="75"/>
                    <Button Content="ðŸ”„" Style="{StaticResource ActionButtonStyle}" Click="BtnRefresh_Click" Width="35" ToolTip="OdÅ›wieÅ¼"/>
                    <Button Content="ðŸ—‘" Style="{StaticResource DangerButtonStyle}" Click="BtnUsun_Click" Width="35" ToolTip="UsuÅ„"/>
                </StackPanel>
            </Border>

            <!-- PANEL SZCZEGÃ“ÅÃ“W - TABCONTROL -->
            <Border Grid.Row="2" Background="White" CornerRadius="4" Margin="0,0,0,4">
                <TabControl x:Name="tabSzczegoly" FontSize="10">
                    <!-- TAB: HODOWCA -->
                    <TabItem Header="Hodowca">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="8">
                                <GroupBox Header="Dane hodowcy" Style="{StaticResource ModernGroupBoxStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
