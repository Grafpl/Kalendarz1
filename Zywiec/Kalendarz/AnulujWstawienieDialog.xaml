<Window x:Class="Kalendarz1.Zywiec.Kalendarz.AnulujWstawienieDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Anulowanie dostaw z wstawienia"
        Height="450" Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NAGŁÓWEK -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="❌ Anulowanie dostaw" FontSize="24" FontWeight="Bold" Foreground="#DC2626"/>
            <TextBlock x:Name="txtDostawca" Text="Hodowca: -" Foreground="#666" FontSize="14" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- PYTANIE -->
        <Border Grid.Row="1" Background="#FEF2F2" BorderBrush="#FECACA" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Czy chcesz anulować wszystkie dostawy z tego wstawienia?"
                           FontSize="16" FontWeight="SemiBold" Foreground="#991B1B" TextWrapping="Wrap"/>
                <TextBlock x:Name="txtInfo" Text="Znaleziono X dostaw powiązanych z tym wstawieniem:"
                           Foreground="#7F1D1D" FontSize="13" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- LISTA DOSTAW -->
        <DataGrid x:Name="dgDostawy" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True"
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                  AlternatingRowBackground="#FEF2F2" FontSize="13"
                  BorderBrush="#E5E7EB" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Data odbioru" Binding="{Binding DataOdbioru, StringFormat=dd.MM.yyyy (ddd)}" Width="140">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Auta" Binding="{Binding Auta}" Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Sztuki" Binding="{Binding SztukiDek, StringFormat=N0}" Width="90">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Waga" Binding="{Binding WagaDek, StringFormat=N2}" Width="90">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Status" Binding="{Binding Bufor}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- PODSUMOWANIE -->
        <Border Grid.Row="3" Background="#F3F4F6" CornerRadius="6" Padding="10" Margin="0,10,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Suma: " FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtSumaAuta" Text="0 aut" Margin="5,0,15,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtSumaSztuki" Text="0 sztuk" Margin="0,0,15,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtSumaWaga" Text="0 kg" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- PRZYCISKI -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnAnulujWszystkie" Grid.Column="1" Content="❌ Anuluj WSZYSTKIE"
                    Width="180" Height="45" FontSize="14" FontWeight="Bold"
                    Background="#DC2626" Foreground="White" Cursor="Hand"
                    Click="BtnAnulujWszystkie_Click" Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="15,10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B91C1C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="btnAnulujJedna" Grid.Column="2" Content="Anuluj tylko wybraną"
                    Width="150" Height="45" FontSize="13"
                    Background="#F59E0B" Foreground="White" Cursor="Hand"
                    Click="BtnAnulujJedna_Click" Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="15,10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D97706"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="btnZamknij" Grid.Column="3" Content="Zamknij"
                    Width="100" Height="45" FontSize="13"
                    Background="#6B7280" Foreground="White" Cursor="Hand"
                    Click="BtnZamknij_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="15,10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4B5563"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>
