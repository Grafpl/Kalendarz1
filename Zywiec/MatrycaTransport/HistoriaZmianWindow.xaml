<Window x:Class="Kalendarz1.HistoriaZmianWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historia Zmian - Specyfikacja Surowca"
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Styl przyciskÃ³w okresu -->
        <Style x:Key="PeriodButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E3F2FD"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PeriodButtonActiveStyle" TargetType="Button" BasedOn="{StaticResource PeriodButtonStyle}">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- NAGLOWEK -->
        <Border Grid.Row="0" Background="White" Padding="20,15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="&#xE81C;" FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="#1976D2" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="Historia Zmian - Specyfikacja Surowca" FontSize="22" FontWeight="SemiBold" Foreground="#333" VerticalAlignment="Center"/>
                </StackPanel>
                <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Center"
                        Width="36" Height="36" FontSize="18" Foreground="#666"
                        Background="Transparent" BorderThickness="0" Cursor="Hand"
                        Click="BtnClose_Click"/>
            </Grid>
        </Border>

        <!-- FILTRY -->
        <Border Grid.Row="1" Background="White" Padding="15" Margin="15,15,15,0" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Color="#000" Opacity="0.1" BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Szybkie filtry czasowe -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="btnDzis" Content="Dzis" Style="{StaticResource PeriodButtonActiveStyle}" Click="BtnDzis_Click"/>
                    <Button x:Name="btnWczoraj" Content="Wczoraj" Style="{StaticResource PeriodButtonStyle}" Click="BtnWczoraj_Click"/>
                    <Button x:Name="btnTydzien" Content="Tydzien" Style="{StaticResource PeriodButtonStyle}" Click="BtnTydzien_Click"/>
                    <Button x:Name="btnMiesiac" Content="Miesiac" Style="{StaticResource PeriodButtonStyle}" Click="BtnMiesiac_Click"/>
                </StackPanel>

                <!-- Filtry szczegolowe -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Od:" VerticalAlignment="Center" Margin="20,0,5,0"/>
                    <DatePicker x:Name="dpDateFrom" Width="120" SelectedDateChanged="DateFilter_Changed"/>
                    <TextBlock Text="Do:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                    <DatePicker x:Name="dpDateTo" Width="120" SelectedDateChanged="DateFilter_Changed"/>

                    <TextBlock Text="Pole:" VerticalAlignment="Center" Margin="20,0,5,0"/>
                    <ComboBox x:Name="cboFieldFilter" Width="150" SelectionChanged="Filter_Changed">
                        <ComboBoxItem Content="(wszystkie)" IsSelected="True"/>
                        <ComboBoxItem Content="Price"/>
                        <ComboBoxItem Content="Loss"/>
                        <ComboBoxItem Content="PriceTypeID"/>
                        <ComboBoxItem Content="CustomerGID"/>
                        <ComboBoxItem Content="CarLp"/>
                        <ComboBoxItem Content="DeclI1"/>
                        <ComboBoxItem Content="DeclI2"/>
                        <ComboBoxItem Content="LumQnt"/>
                    </ComboBox>
                </StackPanel>

                <!-- Przyciski akcji -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Odswiez" Padding="15,8" Margin="5,0" Click="BtnRefresh_Click" Style="{StaticResource PeriodButtonStyle}"/>
                    <Button Content="Eksport CSV" Padding="15,8" Margin="5,0" Click="BtnExport_Click" Style="{StaticResource PeriodButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- TABELA ZMIAN -->
        <Border Grid.Row="2" Background="White" Margin="15" CornerRadius="8" Padding="15">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Color="#000" Opacity="0.1" BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Naglowek sekcji -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#1976D2" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Lista Zmian" FontWeight="SemiBold" FontSize="14" Foreground="#333"/>
                    <TextBlock x:Name="lblRecordCount" Text=" (0 rekordow)" Foreground="#666" FontSize="14" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" x:Name="dgChanges"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#F0F0F0"
                          RowHeight="32"
                          Background="White"
                          BorderThickness="1"
                          BorderBrush="#E0E0E0"
                          FontSize="12"
                          HeadersVisibility="Column"
                          SelectionMode="Single">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#FAFAFA"/>
                            <Setter Property="Foreground" Value="#333"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="60"/>
                        <DataGridTextColumn Header="FarmerCalcID" Binding="{Binding FarmerCalcID}" Width="100"/>
                        <DataGridTextColumn Header="Dzien Ubojowy" Binding="{Binding DzienUbojowy, StringFormat=yyyy-MM-dd}" Width="110"/>
                        <DataGridTextColumn Header="Pole" Binding="{Binding FieldName}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#1976D2"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Poprzednia wartosc" Binding="{Binding OldValue}" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#E53935"/>
                                    <Setter Property="Padding" Value="5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Nowa wartosc" Binding="{Binding NewValue}" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#43A047"/>
                                    <Setter Property="Padding" Value="5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Zmienil" Binding="{Binding ChangedBy}" Width="150"/>
                        <DataGridTextColumn Header="Data zmiany" Binding="{Binding ChangedAt, StringFormat=yyyy-MM-dd HH:mm:ss}" Width="150"/>
                        <DataGridTextColumn Header="Zrodlo" Binding="{Binding ChangeSource}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Stopka z podsumowaniem -->
                <Border Grid.Row="2" Background="#FAFAFA" Padding="10" Margin="0,10,0,0" CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="Zmiany Price: " Foreground="#666"/>
                            <TextBlock x:Name="lblPriceChanges" Text="0" FontWeight="Bold" Foreground="#1976D2"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="Zmiany Loss: " Foreground="#666"/>
                            <TextBlock x:Name="lblLossChanges" Text="0" FontWeight="Bold" Foreground="#FF9800"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <TextBlock Text="Zmiany PriceType: " Foreground="#666"/>
                            <TextBlock x:Name="lblPriceTypeChanges" Text="0" FontWeight="Bold" Foreground="#9C27B0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="3" Orientation="Horizontal">
                            <TextBlock Text="Inne: " Foreground="#666"/>
                            <TextBlock x:Name="lblOtherChanges" Text="0" FontWeight="Bold" Foreground="#607D8B"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
