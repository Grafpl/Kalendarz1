<Window x:Class="Kalendarz1.WidokMatrycaWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Matryca Avilog - Planowanie Transportu"
        Height="900" Width="1900"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#ECEFF1"
        FontFamily="Segoe UI"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Styl dla przyciskÃ³w gÅ‚Ã³wnych -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B732F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A5C24"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl dla przyciskÃ³w pomocniczych -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#607D8B"/>
        </Style>

        <!-- Styl dla przyciskÃ³w nawigacji -->
        <Style x:Key="NavButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Styl dla przyciskÃ³w akcji -->
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#3498DB"/>
        </Style>

        <!-- Styl dla przyciskÃ³w niebezpiecznych -->
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
        </Style>

        <!-- Styl dla nagÅ‚Ã³wkÃ³w DataGrid -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>

        <!-- Style dla nagÅ‚Ã³wkÃ³w kolorowych grup -->
        <Style x:Key="HodowcaHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#F57C00"/>
        </Style>

        <Style x:Key="TransportHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#1976D2"/>
        </Style>

        <Style x:Key="CzasHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#7B1FA2"/>
        </Style>

        <Style x:Key="DaneHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#388E3C"/>
        </Style>

        <!-- Style dla komÃ³rek -->
        <Style x:Key="CellStyleOrange" TargetType="DataGridCell">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFE0B2"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleBlue" TargetType="DataGridCell">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#BBDEFB"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStylePurple" TargetType="DataGridCell">
            <Setter Property="Background" Value="#F3E5F5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E1BEE7"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleGreen" TargetType="DataGridCell">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla komÃ³rek DataGrid -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla DataGrid -->
        <Style x:Key="MainDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource DataGridHeaderStyle}"/>
            <Setter Property="CellStyle" Value="{StaticResource DataGridCellStyle}"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
        </Style>

        <!-- Style dla kolorowanych kolumn matrycy -->
        <Style x:Key="LpColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="HodowcaColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#FFF8E1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="TransportColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CzasColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#FCE4EC"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Styl dla GroupBox -->
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="13" Foreground="#34495E"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NAGÅÃ“WEK -->
        <Border Grid.Row="0" Background="#5C8A3A" Padding="20,15">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Color="#000000" Opacity="0.2" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- TytuÅ‚ -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="MATRYCA AVILOG - PLANOWANIE TRANSPORTU"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="System planowania dostaw drobiu od hodowcÃ³w"
                               FontSize="12"
                               Foreground="#E0F0D6"
                               Margin="0,3,0,0"/>
                </StackPanel>

                <!-- WybÃ³r daty -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Data:"
                               Foreground="White"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <Button Content="â—€"
                            Click="BtnPreviousDay_Click"
                            Style="{StaticResource NavButtonStyle}"/>
                    <DatePicker x:Name="dateTimePicker1"
                                SelectedDateChanged="DateTimePicker1_SelectedDateChanged"
                                Width="160"
                                FontSize="13"
                                Padding="10,8"
                                Margin="5,0"
                                VerticalContentAlignment="Center"/>
                    <Button Content="â–¶"
                            Click="BtnNextDay_Click"
                            Style="{StaticResource NavButtonStyle}"/>
                    <TextBlock x:Name="lblDayOfWeek"
                               Text=""
                               Foreground="White"
                               FontWeight="SemiBold"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- GÅÃ“WNA ZAWARTOÅšÄ† -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- LEWA STRONA - MATRYCA -->
            <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Pasek narzÄ™dzi matrycy -->
                    <Border Grid.Row="0" Background="#F8F9FA" Padding="12" CornerRadius="10,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Przyciski kolejnoÅ›ci -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Button Content="PrzesuÅ„ w gÃ³rÄ™"
                                        Click="BtnMoveUp_Click"
                                        Style="{StaticResource ActionButtonStyle}"
                                        FontSize="11"/>
                                <Button Content="PrzesuÅ„ w dÃ³Å‚"
                                        Click="BtnMoveDown_Click"
                                        Style="{StaticResource ActionButtonStyle}"
                                        FontSize="11"/>
                                <Button Content="Sugeruj kolejnoÅ›Ä‡"
                                        Click="BtnSuggestOrder_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        FontSize="11"
                                        ToolTip="Sortuj wg odlegÅ‚oÅ›ci - najbliÅ¼sze rano"/>
                            </StackPanel>

                            <!-- Przyciski edycji -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Content="+ Dodaj"
                                        Click="BtnAddRow_Click"
                                        Style="{StaticResource MainButtonStyle}"
                                        FontSize="11"/>
                                <Button Content="UsuÅ„"
                                        Click="BtnDeleteRow_Click"
                                        Style="{StaticResource DangerButtonStyle}"
                                        FontSize="11"/>
                                <Button Content="OdÅ›wieÅ¼"
                                        Click="BtnRefresh_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        FontSize="11"/>
                                <Button Content="ZAPISZ DO BAZY"
                                        Click="BtnSaveToDatabase_Click"
                                        Style="{StaticResource MainButtonStyle}"
                                        FontSize="12"
                                        FontWeight="Bold"
                                        Padding="20,10"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- DataGrid Matrycy -->
                    <DataGrid x:Name="dataGridMatryca"
                              Grid.Row="1"
                              Style="{StaticResource MainDataGridStyle}"
                              AllowDrop="True"
                              PreviewMouseLeftButtonDown="DataGrid_PreviewMouseLeftButtonDown"
                              PreviewMouseMove="DataGrid_PreviewMouseMove"
                              Drop="DataGrid_Drop"
                              DragOver="DataGrid_DragOver"
                              SelectionChanged="DataGridMatryca_SelectionChanged"
                              Margin="5">

                        <DataGrid.Columns>
                            <!-- LP Dostawy -->
                            <DataGridTextColumn Header="LP" Binding="{Binding LpDostawy}" Width="50" IsReadOnly="True"
                                                HeaderStyle="{StaticResource DataGridHeaderStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Foreground" Value="#1976D2"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Hodowca -->
                            <DataGridTextColumn Header="Hodowca" Binding="{Binding HodowcaNazwa}" Width="160" IsReadOnly="True"
                                                HeaderStyle="{StaticResource HodowcaHeaderStyle}"
                                                CellStyle="{StaticResource CellStyleOrange}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="5,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Numer auta u hodowcy -->
                            <DataGridTemplateColumn Header="Auto" Width="55" IsReadOnly="True"
                                                    HeaderStyle="{StaticResource HodowcaHeaderStyle}"
                                                    CellStyle="{StaticResource CellStyleOrange}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0}/{1}">
                                                    <Binding Path="AutoNrUHodowcy"/>
                                                    <Binding Path="IloscAutUHodowcy"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Waga deklarowana -->
                            <DataGridTextColumn Header="Waga (kg)" Binding="{Binding WagaDek, StringFormat={}{0:N2}}" Width="90"
                                                HeaderStyle="{StaticResource DaneHeaderStyle}"
                                                CellStyle="{StaticResource CellStyleGreen}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="0,0,8,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Sztuki -->
                            <DataGridTextColumn Header="Sztuk" Binding="{Binding SztPoj}" Width="70"
                                                HeaderStyle="{StaticResource DaneHeaderStyle}"
                                                CellStyle="{StaticResource CellStyleGreen}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Kierowca - ComboBox -->
                            <DataGridComboBoxColumn x:Name="colKierowca"
                                                    Header="Kierowca"
                                                    SelectedValueBinding="{Binding DriverGID}"
                                                    DisplayMemberPath="Name"
                                                    SelectedValuePath="GID"
                                                    Width="150"
                                                    HeaderStyle="{StaticResource TransportHeaderStyle}"/>

                            <!-- CiÄ…gnik - ComboBox -->
                            <DataGridComboBoxColumn x:Name="colCiagnik"
                                                    Header="CiÄ…gnik"
                                                    SelectedValueBinding="{Binding CarID}"
                                                    DisplayMemberPath="ID"
                                                    SelectedValuePath="ID"
                                                    Width="100"
                                                    HeaderStyle="{StaticResource TransportHeaderStyle}"/>

                            <!-- Naczepa - ComboBox -->
                            <DataGridComboBoxColumn x:Name="colNaczepa"
                                                    Header="Naczepa"
                                                    SelectedValueBinding="{Binding TrailerID}"
                                                    DisplayMemberPath="ID"
                                                    SelectedValuePath="ID"
                                                    Width="100"
                                                    HeaderStyle="{StaticResource TransportHeaderStyle}"/>

                            <!-- Godziny -->
                            <DataGridTextColumn Header="Wyjazd" Binding="{Binding Wyjazd, StringFormat={}{0:HH:mm}}" Width="70"
                                                HeaderStyle="{StaticResource CzasHeaderStyle}"
                                                CellStyle="{StaticResource CellStylePurple}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="ZaÅ‚adunek" Binding="{Binding Zaladunek, StringFormat={}{0:HH:mm}}" Width="85"
                                                HeaderStyle="{StaticResource CzasHeaderStyle}"
                                                CellStyle="{StaticResource CellStylePurple}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="#7B1FA2"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Przyjazd" Binding="{Binding Przyjazd, StringFormat={}{0:HH:mm}}" Width="75"
                                                HeaderStyle="{StaticResource CzasHeaderStyle}"
                                                CellStyle="{StaticResource CellStylePurple}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- WÃ³zek - ComboBox -->
                            <DataGridComboBoxColumn x:Name="colWozek"
                                                    Header="WÃ³zek"
                                                    SelectedValueBinding="{Binding NotkaWozek}"
                                                    Width="140"
                                                    HeaderStyle="{StaticResource TransportHeaderStyle}"/>

                            <!-- OdlegÅ‚oÅ›Ä‡ (KM) -->
                            <DataGridTextColumn Header="KM" Binding="{Binding Odleglosc}" Width="60" IsReadOnly="True"
                                                HeaderStyle="{StaticResource DataGridHeaderStyle}"
                                                CellStyle="{StaticResource CellStyleBlue}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- MiejscowoÅ›Ä‡ -->
                            <DataGridTextColumn Header="MiejscowoÅ›Ä‡" Binding="{Binding Miejscowosc}" Width="*" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="8,5"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- PRAWA STRONA - PANEL INFORMACYJNY -->
            <Border Grid.Column="1" Background="White" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- NagÅ‚Ã³wek panelu -->
                    <Border Grid.Row="0" Background="#34495E" Padding="15,12" CornerRadius="10,10,0,0">
                        <TextBlock Text="INFORMACJE O DOSTAWIE"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </Border>

                    <!-- ZawartoÅ›Ä‡ panelu -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
                        <StackPanel>
                            <!-- Dane Hodowcy -->
                            <GroupBox Header="Dane Hodowcy" Style="{StaticResource ModernGroupBox}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="28"/>
                                        <RowDefinition Height="28"/>
                                        <RowDefinition Height="28"/>
                                        <RowDefinition Height="28"/>
                                        <RowDefinition Height="28"/>
                                        <RowDefinition Height="28"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Nazwa:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="lblHodowcaNazwa" Text="-"
                                               FontWeight="Bold" Foreground="#F57C00" VerticalAlignment="Center"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Adres:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="lblHodowcaAdres" Text="-"
                                               TextWrapping="Wrap" VerticalAlignment="Center"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Miasto:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="lblHodowcaMiejscowosc" Text="-" VerticalAlignment="Center"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="OdlegÅ‚oÅ›Ä‡:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="lblHodowcaOdleglosc" Text="-"
                                               FontWeight="Bold" Foreground="#1976D2" VerticalAlignment="Center"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Telefon:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="lblHodowcaTelefon" Text="-"
                                               Foreground="#388E3C" FontWeight="SemiBold" VerticalAlignment="Center"/>

                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Email:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" x:Name="lblHodowcaEmail" Text="-"
                                               Foreground="#1976D2" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                </Grid>
                            </GroupBox>

                            <!-- Dane Transportowe -->
                            <GroupBox Header="Dane Transportowe" Style="{StaticResource ModernGroupBox}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="28"/>
                                        <RowDefinition Height="28"/>
                                        <RowDefinition Height="28"/>
                                        <RowDefinition Height="28"/>
                                        <RowDefinition Height="28"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Kierowca:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="lblKierowca" Text="-"
