<Window x:Class="Kalendarz1.WidokMatrycaWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Matryca Avilog - Planowanie Transportu"
        Height="850" Width="1700"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#ECEFF1"
        FontFamily="Segoe UI"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Styl dla przycisków głównych -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="6"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B732F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A5C24"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl dla przycisków pomocniczych -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#7F8C8D"/>
        </Style>

        <!-- Styl dla przycisków nawigacji -->
        <Style x:Key="NavButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Styl dla przycisków akcji -->
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#3498DB"/>
        </Style>

        <!-- Styl dla przycisków niebezpiecznych -->
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
        </Style>

        <!-- Styl dla nagłówków DataGrid -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2D3945"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#1E2A33"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>

        <!-- Styl dla komórek DataGrid -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla DataGrid -->
        <Style x:Key="MainDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="RowHeight" Value="38"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource DataGridHeaderStyle}"/>
            <Setter Property="CellStyle" Value="{StaticResource DataGridCellStyle}"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
        </Style>

        <!-- Styl dla TabItem -->
        <Style x:Key="ModernTabItem" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0,0,0,3"
                                BorderBrush="Transparent"
                                Padding="{TemplateBinding Padding}"
                                Margin="0,0,5,0">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="#5C8A3A"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#5C8A3A"/>
                                <Setter TargetName="border" Property="Background" Value="#F0F7EC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style dla kolorowanych kolumn matrycy -->
        <Style x:Key="LpColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="HodowcaColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#FFF8E1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="TransportColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CzasColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#FCE4EC"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NAGŁÓWEK -->
        <Border Grid.Row="0" Background="#5C8A3A" Padding="20,15">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Color="#000000" Opacity="0.2" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Tytuł -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="MATRYCA AVILOG - PLANOWANIE TRANSPORTU"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="System planowania dostaw brojlerów od hodowców"
                               FontSize="12"
                               Foreground="#E0F0D6"
                               Margin="0,3,0,0"/>
                </StackPanel>

                <!-- Wybór daty -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Data:"
                               Foreground="White"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <Button Content="◀"
                            Click="BtnPreviousDay_Click"
                            Style="{StaticResource NavButtonStyle}"/>
                    <DatePicker x:Name="dateTimePicker1"
                                SelectedDateChanged="DateTimePicker1_SelectedDateChanged"
                                Width="160"
                                FontSize="13"
                                Padding="10,8"
                                Margin="5,0"
                                VerticalContentAlignment="Center"/>
                    <Button Content="▶"
                            Click="BtnNextDay_Click"
                            Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- GŁÓWNA ZAWARTOŚĆ Z ZAKŁADKAMI -->
        <TabControl Grid.Row="1" Margin="15" Background="White" BorderThickness="0">
            <TabControl.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="10"/>
            </TabControl.Effect>

            <!-- ZAKŁADKA: MATRYCA TRANSPORTU -->
            <TabItem Header="Matryca Transportu" Style="{StaticResource ModernTabItem}">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Pasek narzędzi matrycy -->
                    <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Przyciski kolejności -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="Kolejność:"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>
                                <Button Content="Przesuń w górę"
                                        Click="BtnMoveUp_Click"
                                        Style="{StaticResource ActionButtonStyle}"/>
                                <Button Content="Przesuń w dół"
                                        Click="BtnMoveDown_Click"
                                        Style="{StaticResource ActionButtonStyle}"/>
                                <Button Content="Sugeruj kolejność"
                                        Click="BtnSuggestOrder_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        ToolTip="Automatycznie sortuj: najbliższe fermy rano, dalsze w środku, problemowe na koniec"/>
                            </StackPanel>

                            <!-- Przyciski edycji -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Content="+ Dodaj wiersz"
                                        Click="BtnAddRow_Click"
                                        Style="{StaticResource MainButtonStyle}"/>
                                <Button Content="Usuń wiersz"
                                        Click="BtnDeleteRow_Click"
                                        Style="{StaticResource DangerButtonStyle}"/>
                                <Button Content="Odśwież"
                                        Click="BtnRefresh_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"/>
                            </StackPanel>

                            <!-- Przycisk zapisu -->
                            <Button Grid.Column="3"
                                    Content="ZAPISZ DO BAZY"
                                    Click="BtnSaveToDatabase_Click"
                                    Style="{StaticResource MainButtonStyle}"
                                    FontSize="14"
                                    Padding="25,12"
                                    Margin="20,0,0,0"/>
                        </Grid>
                    </Border>

                    <!-- DataGrid Matrycy -->
                    <DataGrid x:Name="dataGridMatryca"
                              Grid.Row="1"
                              Style="{StaticResource MainDataGridStyle}"
                              AllowDrop="True"
                              PreviewMouseLeftButtonDown="DataGrid_PreviewMouseLeftButtonDown"
                              PreviewMouseMove="DataGrid_PreviewMouseMove"
                              Drop="DataGrid_Drop"
                              DragOver="DataGrid_DragOver"
                              SelectionChanged="DataGridMatryca_SelectionChanged">

                        <DataGrid.Columns>
                            <!-- LP Dostawy -->
                            <DataGridTextColumn Header="LP" Binding="{Binding LpDostawy}" Width="60" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource LpColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Hodowca -->
                            <DataGridTextColumn Header="Hodowca" Binding="{Binding HodowcaNazwa}" Width="180" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource HodowcaColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Numer auta u hodowcy -->
                            <DataGridTemplateColumn Header="Auto" Width="55" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0}/{1}">
                                                    <Binding Path="AutoNrUHodowcy"/>
                                                    <Binding Path="IloscAutUHodowcy"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Waga deklarowana -->
                            <DataGridTextColumn Header="Waga Dek (kg)" Binding="{Binding WagaDek, StringFormat={}{0:N2}}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Padding" Value="8,5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Sztuki -->
                            <DataGridTextColumn Header="Sztuk" Binding="{Binding SztPoj}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="8,5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Kierowca - ComboBox -->
                            <DataGridComboBoxColumn x:Name="colKierowca"
                                                    Header="Kierowca"
                                                    SelectedValueBinding="{Binding DriverGID}"
                                                    DisplayMemberPath="Name"
                                                    SelectedValuePath="GID"
                                                    Width="160"/>

                            <!-- Ciągnik - ComboBox -->
                            <DataGridComboBoxColumn x:Name="colCiagnik"
                                                    Header="Ciągnik"
                                                    SelectedValueBinding="{Binding CarID}"
                                                    DisplayMemberPath="ID"
                                                    SelectedValuePath="ID"
                                                    Width="110"/>

                            <!-- Naczepa - ComboBox -->
                            <DataGridComboBoxColumn x:Name="colNaczepa"
                                                    Header="Naczepa"
                                                    SelectedValueBinding="{Binding TrailerID}"
                                                    DisplayMemberPath="ID"
                                                    SelectedValuePath="ID"
                                                    Width="110"/>

                            <!-- Godziny -->
                            <DataGridTextColumn Header="Wyjazd" Binding="{Binding Wyjazd, StringFormat={}{0:HH:mm}}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CzasColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Załadunek" Binding="{Binding Zaladunek, StringFormat={}{0:HH:mm}}" Width="90">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CzasColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Przyjazd" Binding="{Binding Przyjazd, StringFormat={}{0:HH:mm}}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CzasColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Wózek - ComboBox -->
                            <DataGridComboBoxColumn x:Name="colWozek"
                                                    Header="Wózek"
                                                    SelectedValueBinding="{Binding NotkaWozek}"
                                                    Width="150"/>

                            <!-- Odległość (KM) -->
                            <DataGridTextColumn Header="KM" Binding="{Binding Odleglosc}" Width="70" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource TransportColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Adres -->
                            <DataGridTextColumn Header="Miejscowość" Binding="{Binding Miejscowosc}" Width="130" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="8,5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ZAKŁADKA: SPECYFIKACJA DOSTAWY -->
            <TabItem Header="Specyfikacja Dostawy" Style="{StaticResource ModernTabItem}">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Informacja o wybranej dostawie -->
                    <Border Grid.Row="0" Background="#FFF8E1" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Wybrana dostawa:"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <TextBlock x:Name="lblWybranaDostawaInfo"
                                       Text="Wybierz dostawę w zakładce Matryca"
                                       FontSize="14"
                                       Foreground="#5C8A3A"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                            <Button Content="Pokaż pełną specyfikację"
                                    Click="BtnShowFullSpecyfikacja_Click"
                                    Style="{StaticResource MainButtonStyle}"
                                    Margin="30,0,0,0"/>
                            <Button Content="Drukuj PDF"
                                    Click="BtnPrintPDF_Click"
                                    Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Panel specyfikacji -->
                    <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Dane hodowcy -->
                            <GroupBox Grid.Column="0" Grid.Row="0" Header="Dane Hodowcy" Margin="0,0,10,10" Padding="15">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Nazwa:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="lblHodowcaNazwa" Text="-"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Adres:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="lblHodowcaAdres" Text="-"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Miejscowość:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="lblHodowcaMiejscowosc" Text="-"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Odległość:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="lblHodowcaOdleglosc" Text="-"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <!-- Dane transportowe -->
                            <GroupBox Grid.Column="1" Grid.Row="0" Header="Dane Transportowe" Margin="10,0,0,10" Padding="15">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Kierowca:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="lblKierowca" Text="-"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Ciągnik:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="lblCiagnik" Text="-"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Naczepa:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="lblNaczepa" Text="-"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Wózek:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="lblWozek" Text="-"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <!-- Dane ilościowe -->
                            <GroupBox Grid.Column="0" Grid.Row="1" Header="Dane Ilościowe" Margin="0,0,10,10" Padding="15">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Sztuki deklarowane:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="lblSztukiDek" Text="-" FontWeight="Bold" Foreground="#5C8A3A"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Waga deklarowana:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="lblWagaDek" Text="-" FontWeight="Bold" Foreground="#5C8A3A"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Waga całkowita:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="lblWagaCalkowita" Text="-" FontWeight="Bold" Foreground="#E74C3C"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <!-- Godziny -->
                            <GroupBox Grid.Column="1" Grid.Row="1" Header="Harmonogram Czasowy" Margin="10,0,0,10" Padding="15">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Wyjazd:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="lblWyjazd" Text="-" FontWeight="Bold"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Załadunek:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="lblZaladunek" Text="-" FontWeight="Bold"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Przyjazd:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="lblPrzyjazd" Text="-" FontWeight="Bold" Foreground="#E74C3C"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <!-- Uwagi -->
                            <GroupBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Header="Uwagi i notatki" Padding="15">
                                <TextBox x:Name="txtUwagi"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"
                                         MinHeight="100"/>
                            </GroupBox>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- STOPKA ZE STATYSTYKAMI -->
        <Border Grid.Row="2" Background="White" Padding="15" Margin="15,0,15,15">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Statystyki -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="#E3F2FD" CornerRadius="5" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Rekordów: " FontWeight="SemiBold"/>
                            <TextBlock x:Name="lblRecordCount" Text="0" FontWeight="Bold" Foreground="#1976D2"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#E8F5E9" CornerRadius="5" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Suma wagi: " FontWeight="SemiBold"/>
                            <TextBlock x:Name="lblTotalWeight" Text="0 kg" FontWeight="Bold" Foreground="#388E3C"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#FFF3E0" CornerRadius="5" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Suma sztuk: " FontWeight="SemiBold"/>
                            <TextBlock x:Name="lblTotalPieces" Text="0" FontWeight="Bold" Foreground="#F57C00"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Status -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Status: " Foreground="#7F8C8D"/>
                    <TextBlock x:Name="lblStatus" Text="Gotowy" FontWeight="SemiBold" Foreground="#5C8A3A"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
