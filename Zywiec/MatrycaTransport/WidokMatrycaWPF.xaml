<Window x:Class="Kalendarz1.WidokMatrycaWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Kalendarz1"
        Title="Matryca Transport - Planowanie dostaw ≈ºywca"
        Height="900" Width="1900"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#ECEFF1"
        FontFamily="Segoe UI"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Konwerter skr√≥t√≥w godzin -->
        <local:TimeShortcutConverter x:Key="TimeShortcutConverter"/>
        <!-- Styl dla przycisk√≥w g≈Ç√≥wnych -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B732F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A5C24"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl dla przycisk√≥w pomocniczych -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#607D8B"/>
        </Style>

        <!-- Styl dla przycisk√≥w nawigacji -->
        <Style x:Key="NavButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Styl dla przycisk√≥w akcji -->
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#3498DB"/>
        </Style>

        <!-- Styl dla przycisk√≥w niebezpiecznych -->
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
        </Style>

        <!-- Styl dla nag≈Ç√≥wk√≥w DataGrid -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>

        <!-- Style dla nag≈Ç√≥wk√≥w kolorowych grup -->
        <Style x:Key="HodowcaHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#F57C00"/>
        </Style>

        <Style x:Key="TransportHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#1976D2"/>
        </Style>

        <Style x:Key="CzasHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#7B1FA2"/>
        </Style>

        <Style x:Key="DaneHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#388E3C"/>
        </Style>

        <Style x:Key="CenaHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#1976D2"/>
        </Style>

        <!-- Style dla kom√≥rek -->
        <Style x:Key="CellStyleOrange" TargetType="DataGridCell">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFE0B2"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleBlue" TargetType="DataGridCell">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#BBDEFB"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStylePurple" TargetType="DataGridCell">
            <Setter Property="Background" Value="#F3E5F5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E1BEE7"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleGreen" TargetType="DataGridCell">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla kom√≥rek DataGrid -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla DataGrid -->
        <Style x:Key="MainDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource DataGridHeaderStyle}"/>
            <Setter Property="CellStyle" Value="{StaticResource DataGridCellStyle}"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
        </Style>

        <!-- Style dla kolorowanych kolumn matrycy -->
        <Style x:Key="LpColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="HodowcaColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#FFF8E1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="TransportColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CzasColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#FCE4EC"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Styl dla GroupBox -->
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="13" Foreground="#34495E"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NAG≈Å√ìWEK -->
        <Border Grid.Row="0" Background="#5C8A3A" Padding="20,15">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Color="#000000" Opacity="0.2" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Tytu≈Ç -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="MATRYCA TRANSPORT - PLANOWANIE DOSTAW"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="System planowania odbioru ≈ºywca od hodowc√≥w"
                               FontSize="12"
                               Foreground="#E0F0D6"
                               Margin="0,3,0,0"/>
                </StackPanel>

                <!-- Wyb√≥r daty -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Data:"
                               Foreground="White"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <Button Content="‚óÄ"
                            Click="BtnPreviousDay_Click"
                            Style="{StaticResource NavButtonStyle}"/>
                    <DatePicker x:Name="dateTimePicker1"
                                SelectedDateChanged="DateTimePicker1_SelectedDateChanged"
                                Width="160"
                                FontSize="13"
                                Padding="10,8"
                                Margin="5,0"
                                VerticalContentAlignment="Center"/>
                    <Button Content="‚ñ∂"
                            Click="BtnNextDay_Click"
                            Style="{StaticResource NavButtonStyle}"/>
                    <TextBlock x:Name="lblDayOfWeek"
                               Text=""
                               Foreground="White"
                               FontWeight="SemiBold"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- G≈Å√ìWNA ZAWARTO≈öƒÜ -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- LEWA STRONA - MATRYCA -->
            <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Pasek narzƒôdzi matrycy -->
                    <Border Grid.Row="0" Background="#F8F9FA" Padding="12" CornerRadius="10,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Przyciski kolejno≈õci -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <!-- ComboBox z dostawami z harmonogramu -->
                                <Border Background="#E3F2FD" CornerRadius="4" Padding="8,4" Margin="4" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Dostawa:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                        <ComboBox x:Name="cmbHarmonogramDostawy"
                                                  Width="280"
                                                  DisplayMemberPath="DisplayText"
                                                  SelectedValuePath="LP"
                                                  SelectionChanged="CmbHarmonogramDostawy_SelectionChanged"
                                                  ToolTip="Wybierz dostawƒô z harmonogramu aby skopiowaƒá cenƒô, ubytek i typ ceny do wierszy tego dostawcy"/>
                                        <Button x:Name="btnApplyHarmonogramPrice"
                                                Content="Zastosuj cenƒô"
                                                Click="BtnApplyHarmonogramPrice_Click"
                                                Background="#FF9800"
                                                Foreground="White"
                                                FontWeight="SemiBold"
                                                Padding="10,4"
                                                Margin="8,0,0,0"
                                                Cursor="Hand"
                                                BorderThickness="0"
                                                ToolTip="Zastosuj cenƒô, ubytek i typ ceny z wybranej dostawy do wszystkich wierszy tego dostawcy">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#F57C00"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </StackPanel>
                                </Border>
                                <Border Width="1" Background="#E0E0E0" Margin="8,5"/>
                                <Button x:Name="btnImportAvilog"
                                        Content="üìÑ IMPORT PDF"
                                        Click="BtnImportAvilog_Click"
                                        Background="#E65100"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        FontSize="11"
                                        Padding="14,10"
                                        Margin="4"
                                        Cursor="Hand"
                                        ToolTip="Importuj plan transportu z pliku PDF AVILOG">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <Border.Effect>
                                                    <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                                                </Border.Effect>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#BF360C"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button x:Name="btnImportExcel"
                                        Content="üìä IMPORT EXCEL"
                                        Click="BtnImportExcel_Click"
                                        Background="#217346"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        FontSize="11"
                                        Padding="14,10"
                                        Margin="4"
                                        Cursor="Hand"
                                        ToolTip="Importuj plan transportu z pliku Excel AVILOG (.xls/.xlsx)">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <Border.Effect>
                                                    <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                                                </Border.Effect>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#1D5C33"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button x:Name="btnLoadFromDatabase"
                                        Content="üóÑÔ∏è WCZYTAJ Z BAZY"
                                        Click="BtnLoadFromDatabase_Click"
                                        Background="#1976D2"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        FontSize="11"
                                        Padding="14,10"
                                        Margin="4"
                                        Cursor="Hand"
                                        ToolTip="Wczytaj zapisane dane z bazy dla wybranej daty">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <Border.Effect>
                                                    <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                                                </Border.Effect>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#1565C0"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Border Width="1" Background="#E0E0E0" Margin="8,5"/>
                                <Button Content="Przesu≈Ñ w g√≥rƒô"
                                        Click="BtnMoveUp_Click"
                                        Style="{StaticResource ActionButtonStyle}"
                                        FontSize="11"/>
                                <Button Content="Przesu≈Ñ w d√≥≈Ç"
                                        Click="BtnMoveDown_Click"
                                        Style="{StaticResource ActionButtonStyle}"
                                        FontSize="11"/>
                                <Button Content="Sugeruj kolejno≈õƒá"
                                        Click="BtnSuggestOrder_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        FontSize="11"
                                        ToolTip="Sortuj wg odleg≈Ço≈õci - najbli≈ºsze rano"/>
                            </StackPanel>

                            <!-- Przyciski edycji -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Content="+ Dodaj"
                                        Click="BtnAddRow_Click"
                                        Style="{StaticResource MainButtonStyle}"
                                        FontSize="11"/>
                                <Button Content="Usu≈Ñ"
                                        Click="BtnDeleteRow_Click"
                                        Style="{StaticResource DangerButtonStyle}"
                                        FontSize="11"/>
                                <Button Content="Od≈õwie≈º"
                                        Click="BtnRefresh_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        FontSize="11"/>
                                <Button Content="ZAPISZ DO BAZY"
                                        Click="BtnSaveToDatabase_Click"
                                        Style="{StaticResource MainButtonStyle}"
                                        FontSize="12"
                                        FontWeight="Bold"
                                        Padding="20,10"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- DataGrid Matrycy -->
                    <DataGrid x:Name="dataGridMatryca"
                              Grid.Row="1"
                              Style="{StaticResource MainDataGridStyle}"
                              AllowDrop="True"
                              PreviewMouseLeftButtonDown="DataGrid_PreviewMouseLeftButtonDown"
                              PreviewMouseMove="DataGrid_PreviewMouseMove"
                              Drop="DataGrid_Drop"
                              DragOver="DataGrid_DragOver"
                              SelectionChanged="DataGridMatryca_SelectionChanged"
                              Margin="5">

                        <DataGrid.Columns>
                            <!-- LP Dostawy -->
                            <DataGridTextColumn Header="LP" Binding="{Binding LpDostawy}" Width="50" IsReadOnly="True"
                                                HeaderStyle="{StaticResource DataGridHeaderStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Foreground" Value="#1976D2"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Hodowca - ComboBox -->
                            <DataGridComboBoxColumn x:Name="colHodowca"
                                                    Header="Hodowca"
                                                    SelectedValueBinding="{Binding HodowcaNazwa, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    DisplayMemberPath="Name"
                                                    SelectedValuePath="Name"
                                                    Width="180"
                                                    HeaderStyle="{StaticResource HodowcaHeaderStyle}"/>

                            <!-- Waga deklarowana -->
                            <DataGridTextColumn Header="Waga (kg)" Binding="{Binding WagaDek, StringFormat={}{0:N2}}" Width="90"
                                                HeaderStyle="{StaticResource DaneHeaderStyle}"
                                                CellStyle="{StaticResource CellStyleGreen}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="0,0,8,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Sztuki -->
                            <DataGridTextColumn Header="Sztuk" Binding="{Binding SztPoj}" Width="70"
                                                HeaderStyle="{StaticResource DaneHeaderStyle}"
                                                CellStyle="{StaticResource CellStyleGreen}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Kierowca - ComboBox -->
                            <DataGridComboBoxColumn x:Name="colKierowca"
                                                    Header="Kierowca"
                                                    SelectedValueBinding="{Binding DriverGID}"
                                                    DisplayMemberPath="Name"
                                                    SelectedValuePath="GID"
                                                    Width="150"
                                                    HeaderStyle="{StaticResource TransportHeaderStyle}"/>

                            <!-- CiƒÖgnik - ComboBox -->
                            <DataGridComboBoxColumn x:Name="colCiagnik"
                                                    Header="CiƒÖgnik"
                                                    SelectedValueBinding="{Binding CarID}"
                                                    DisplayMemberPath="ID"
                                                    SelectedValuePath="ID"
                                                    Width="100"
                                                    HeaderStyle="{StaticResource TransportHeaderStyle}"/>

                            <!-- Naczepa - ComboBox -->
                            <DataGridComboBoxColumn x:Name="colNaczepa"
                                                    Header="Naczepa"
                                                    SelectedValueBinding="{Binding TrailerID}"
                                                    DisplayMemberPath="ID"
                                                    SelectedValuePath="ID"
                                                    Width="100"
                                                    HeaderStyle="{StaticResource TransportHeaderStyle}"/>

                            <!-- Godziny - z konwerterem obs≈ÇugujƒÖcym skr√≥ty -->
                            <DataGridTemplateColumn Header="Wyjazd" Width="70"
                                                    HeaderStyle="{StaticResource CzasHeaderStyle}"
                                                    CellStyle="{StaticResource CellStylePurple}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Wyjazd, Converter={StaticResource TimeShortcutConverter}}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Wyjazd, Converter={StaticResource TimeShortcutConverter}, UpdateSourceTrigger=LostFocus, Mode=TwoWay}"
                                                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                                 BorderThickness="0" Background="White"
                                                 PreviewKeyDown="TimeTextBox_PreviewKeyDown"
                                                 Loaded="TimeTextBox_Loaded"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Za≈Çadunek" Width="85"
                                                    HeaderStyle="{StaticResource CzasHeaderStyle}"
                                                    CellStyle="{StaticResource CellStylePurple}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Zaladunek, Converter={StaticResource TimeShortcutConverter}}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#7B1FA2"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Zaladunek, Converter={StaticResource TimeShortcutConverter}, UpdateSourceTrigger=LostFocus, Mode=TwoWay}"
                                                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                                 BorderThickness="0" Background="White"
                                                 PreviewKeyDown="TimeTextBox_PreviewKeyDown"
                                                 Loaded="TimeTextBox_Loaded"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Przyjazd" Width="75"
                                                    HeaderStyle="{StaticResource CzasHeaderStyle}"
                                                    CellStyle="{StaticResource CellStylePurple}">
                                <DataGridTemplateColumn.CellTemplate>
