<Window x:Class="Kalendarz1.StatystykiPracownikowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statystyki Pracowników - SMS"
        Height="850" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#ECEFF1"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Style przycisków - taki sam jak w RaportyStatystyki -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B732F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A5C24"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#607D8B"/>
        </Style>

        <!-- Style dla TabItem - taki sam jak w RaportyStatystyki -->
        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border"
                                Background="#34495E"
                                CornerRadius="8,8,0,0"
                                Margin="2,0,2,0"
                                Padding="20,12">
                            <ContentPresenter x:Name="ContentSite"
                                              ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#5C8A3A"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4B732F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- NAGŁÓWEK - taki sam styl jak RaportyStatystyki -->
        <Border Grid.Row="0" Background="#5C8A3A" Padding="25,18">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Color="#000000" Opacity="0.2" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <TextBlock Text="STATYSTYKI PRACOWNIKÓW - SMS"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <Button Content="ZAMKNIJ"
                        HorizontalAlignment="Right"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="BtnClose_Click"/>
            </Grid>
        </Border>

        <!-- ZAKŁADKI -->
        <TabControl Grid.Row="1" Margin="20" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem" BasedOn="{StaticResource TabItemStyle}"/>
            </TabControl.Resources>

            <!-- ZAKŁADKA 1: RANKING PRACOWNIKÓW -->
            <TabItem Header="Ranking Pracowników">
                <Border Background="White" CornerRadius="0,10,10,10" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="15"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Panel filtrów -->
                        <Border Grid.Row="0" Background="#F5F5F5" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="Zakres dat:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                    <DatePicker x:Name="dpOd" Width="130" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="-" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <DatePicker x:Name="dpDo" Width="130" VerticalAlignment="Center" Margin="0,0,30,0"/>

                                    <TextBlock Text="Szybki wybór:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <Button Content="Dziś" Click="BtnDzis_Click" Padding="12,6" FontSize="11" Background="#27AE60" Foreground="White" Margin="3"/>
                                    <Button Content="Tydzień" Click="BtnTydzien_Click" Padding="12,6" FontSize="11" Background="#2980B9" Foreground="White" Margin="3"/>
                                    <Button Content="Miesiąc" Click="BtnMiesiac_Click" Padding="12,6" FontSize="11" Background="#8E44AD" Foreground="White" Margin="3"/>
                                    <Button Content="Rok" Click="BtnRok_Click" Padding="12,6" FontSize="11" Background="#E74C3C" Foreground="White" Margin="3"/>
                                </StackPanel>

                                <Button Grid.Column="2" Content="GENERUJ RANKING"
                                        Style="{StaticResource MainButtonStyle}"
                                        Click="BtnRefresh_Click"/>
                            </Grid>
                        </Border>

                        <!-- Karty podsumowania -->
                        <Grid Grid.Row="1" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Suma SMS -->
                            <Border Grid.Column="0" Background="#E8F5E9" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="SUMA SMS" FontWeight="Bold" Foreground="#2E7D32" FontSize="12"/>
                                    <TextBlock x:Name="lblTotalSms" Text="0" FontSize="36" FontWeight="Bold" Foreground="#1B5E20" Margin="0,5,0,0"/>
                                    <TextBlock Text="wysłanych wiadomości" FontSize="11" Foreground="#4CAF50"/>
                                </StackPanel>
                            </Border>

                            <!-- SMS Zbiorczych -->
                            <Border Grid.Column="1" Background="#E3F2FD" CornerRadius="8" Padding="20" Margin="5,0,5,0">
                                <StackPanel>
                                    <TextBlock Text="SMS ZBIORCZYCH" FontWeight="Bold" Foreground="#1976D2" FontSize="12"/>
                                    <TextBlock x:Name="lblSmsAll" Text="0" FontSize="36" FontWeight="Bold" Foreground="#0D47A1" Margin="0,5,0,0"/>
                                    <TextBlock Text="wszystkie auta hodowcy" FontSize="11" Foreground="#64B5F6"/>
                                </StackPanel>
                            </Border>

                            <!-- SMS Pojedynczych -->
                            <Border Grid.Column="2" Background="#FFF3E0" CornerRadius="8" Padding="20" Margin="5,0,5,0">
                                <StackPanel>
                                    <TextBlock Text="SMS POJEDYNCZYCH" FontWeight="Bold" Foreground="#F57C00" FontSize="12"/>
                                    <TextBlock x:Name="lblSmsOne" Text="0" FontSize="36" FontWeight="Bold" Foreground="#E65100" Margin="0,5,0,0"/>
                                    <TextBlock Text="jedno auto" FontSize="11" Foreground="#FFB74D"/>
                                </StackPanel>
                            </Border>

                            <!-- Aktywni pracownicy -->
                            <Border Grid.Column="3" Background="#F3E5F5" CornerRadius="8" Padding="20" Margin="10,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="AKTYWNI PRACOWNICY" FontWeight="Bold" Foreground="#7B1FA2" FontSize="12"/>
                                    <TextBlock x:Name="lblActiveUsers" Text="0" FontSize="36" FontWeight="Bold" Foreground="#4A148C" Margin="0,5,0,0"/>
                                    <TextBlock Text="wysyłających SMS" FontSize="11" Foreground="#BA68C8"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Główna zawartość - Ranking + Diagram -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="400"/>
                            </Grid.ColumnDefinitions>

                            <!-- Tabela rankingu -->
                            <DataGrid Grid.Column="0" x:Name="dgSmsStats"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="Horizontal"
                                      HorizontalGridLinesBrush="#E0E0E0"
                                      RowHeight="45"
                                      Background="White"
                                      BorderThickness="1"
                                      BorderBrush="#E0E0E0"
                                      FontSize="13"
                                      Margin="0,0,15,0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Poz." Binding="{Binding Rank}" Width="50">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="FontSize" Value="16"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Pracownik" Binding="{Binding UserId}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="Padding" Value="10,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="SMS" Binding="{Binding SmsCount}" Width="80">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="FontSize" Value="16"/>
                                                <Setter Property="Foreground" Value="#1B5E20"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Zbiorczych" Binding="{Binding SmsAllCount}" Width="90">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="Foreground" Value="#1976D2"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Pojedynczych" Binding="{Binding SmsOneCount}" Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="Foreground" Value="#F57C00"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Hodowców" Binding="{Binding UniqueFarmers}" Width="90">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="Foreground" Value="#7B1FA2"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Śr./dzień" Binding="{Binding AvgPerDayF}" Width="80">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Diagram kołowy -->
                            <Border Grid.Column="1" Background="#FAFAFA" CornerRadius="8" Padding="20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="UDZIAŁ PRACOWNIKÓW W SMS"
                                               FontWeight="Bold" FontSize="14" Foreground="#34495E"
                                               HorizontalAlignment="Center" Margin="0,0,0,15"/>

                                    <!-- Diagram kołowy -->
                                    <Canvas Grid.Row="1" x:Name="pieChartCanvas" Width="250" Height="250"
                                            HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <!-- Legenda -->
                                    <ItemsControl Grid.Row="2" x:Name="pieLegend" Margin="0,15,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="0,3">
                                                    <Border Width="16" Height="16" Background="{Binding Color}" CornerRadius="3" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding Label}" FontSize="11" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Percent, StringFormat=' ({0:F1}%)'}" FontSize="11"
                                                               Foreground="#7F8C8D" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- ZAKŁADKA 2: GDZIE POSZŁY SMS -->
            <TabItem Header="Gdzie poszły SMS">
                <Border Background="White" CornerRadius="0,10,10,10" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="15"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Filtry -->
                        <Border Grid.Row="0" Background="#F5F5F5" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="Pracownik:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <ComboBox x:Name="cboFiltPracownik" Width="180" VerticalAlignment="Center" Margin="0,0,30,0"
                                              SelectionChanged="CboFiltPracownik_SelectionChanged"/>

                                    <TextBlock Text="Zakres dat:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <DatePicker x:Name="dpSmsOd" Width="130" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="-" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <DatePicker x:Name="dpSmsDo" Width="130" VerticalAlignment="Center"/>
                                </StackPanel>

                                <Button Grid.Column="2" Content="POKAŻ HISTORIĘ SMS"
                                        Style="{StaticResource MainButtonStyle}"
                                        Click="BtnShowSmsHistory_Click"/>
                            </Grid>
                        </Border>

                        <!-- Tabela SMS -->
                        <DataGrid Grid.Row="1" x:Name="dgSmsHistory"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#E0E0E0"
                                  RowHeight="38"
                                  Background="White"
                                  BorderThickness="1"
                                  BorderBrush="#E0E0E0"
                                  FontSize="12">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Data" Binding="{Binding SentDateF}" Width="90"/>
                                <DataGridTextColumn Header="Godz." Binding="{Binding SentTimeF}" Width="60"/>
                                <DataGridTextColumn Header="Pracownik" Binding="{Binding SentByUser}" Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="#1B5E20"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Typ" Binding="{Binding SmsTypeF}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Hodowca (CustomerGID)" Binding="{Binding CustomerGID}" Width="180"/>
                                <DataGridTextColumn Header="Telefon" Binding="{Binding PhoneNumber}" Width="120"/>
                                <DataGridTextColumn Header="Treść SMS" Binding="{Binding SmsContent}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            <Setter Property="ToolTip" Value="{Binding SmsContent}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- ZAKŁADKA 3: STATYSTYKI MIESIĘCZNE -->
            <TabItem Header="Statystyki Miesięczne">
                <Border Background="White" CornerRadius="0,10,10,10" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="15"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="200"/>
                        </Grid.RowDefinitions>

                        <!-- Filtr roku -->
                        <Border Grid.Row="0" Background="#F5F5F5" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Rok:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                <ComboBox x:Name="cboRokMiesiace" Width="100" SelectionChanged="CboRokMiesiace_SelectionChanged"/>
                                <Button Content="GENERUJ STATYSTYKI" Style="{StaticResource MainButtonStyle}"
                                        Click="BtnRefreshMiesiace_Click" Margin="30,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Tabela miesięczna -->
                        <DataGrid Grid.Row="1" x:Name="dgMonthlyStats"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#E0E0E0"
                                  RowHeight="40"
                                  Background="White"
                                  BorderThickness="1"
                                  BorderBrush="#E0E0E0"
                                  FontSize="13">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Miesiąc" Binding="{Binding MonthName}" Width="150">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Padding" Value="10,0"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="SMS Razem" Binding="{Binding TotalSms}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontSize" Value="15"/>
                                            <Setter Property="Foreground" Value="#1B5E20"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Zbiorczych" Binding="{Binding SmsAll}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#1976D2"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Pojedynczych" Binding="{Binding SmsOne}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#F57C00"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Pracownicy" Binding="{Binding ActiveUsers}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Hodowców" Binding="{Binding UniqueFarmers}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#7B1FA2"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Śr./dzień" Binding="{Binding AvgPerDayF}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Wykres słupkowy miesięczny -->
                        <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="0,10,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="TREND MIESIĘCZNY SMS" FontSize="14" FontWeight="Bold" Foreground="#34495E" Margin="0,0,0,10"/>
                                <ItemsControl Grid.Row="1" x:Name="chartMonthly" VerticalAlignment="Bottom" Margin="0,0,0,25">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Rows="1"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="3,0">
                                                <TextBlock Text="{Binding TotalSms}" HorizontalAlignment="Center"
                                                           FontWeight="Bold" Foreground="#1B5E20" FontSize="10" Margin="0,0,0,2"/>
                                                <Border Background="#5C8A3A"
                                                        Height="{Binding BarHeight}"
                                                        CornerRadius="3,3,0,0"
                                                        VerticalAlignment="Bottom"/>
                                                <TextBlock Text="{Binding ShortName}" HorizontalAlignment="Center"
                                                           FontSize="9" Margin="0,3,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>

            <!-- ZAKŁADKA 4: POTWIERDZENIA ZMIAN -->
            <TabItem Header="Potwierdzenia Zmian">
                <Border Background="White" CornerRadius="0,10,10,10" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="15"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Info -->
                        <Border Grid.Row="0" Background="#FFF3E0" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠️" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Potwierdzenia zmian planu - gdy pracownik zmienił kolejność/godziny po wysłaniu SMS do hodowcy"
                                           FontSize="13" Foreground="#E65100" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Filtry -->
                        <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Zakres dat:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                <DatePicker x:Name="dpConfOd" Width="130" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="-" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <DatePicker x:Name="dpConfDo" Width="130" VerticalAlignment="Center" Margin="0,0,30,0"/>
                                <Button Content="POKAŻ POTWIERDZENIA" Style="{StaticResource MainButtonStyle}" Click="BtnShowConfirmations_Click"/>
                            </StackPanel>
                        </Border>

                        <!-- Tabela potwierdzeń -->
                        <DataGrid Grid.Row="2" x:Name="dgConfirmations"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#E0E0E0"
                                  RowHeight="38"
                                  Background="White"
                                  BorderThickness="1"
                                  BorderBrush="#E0E0E0"
                                  FontSize="12">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Data planu" Binding="{Binding CalcDateF}" Width="100"/>
                                <DataGridTextColumn Header="Potwierdził" Binding="{Binding AcknowledgedByUser}" Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="#E65100"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Kiedy" Binding="{Binding AcknowledgedDateF}" Width="130"/>
                                <DataGridTextColumn Header="Hodowca" Binding="{Binding HodowcaNazwa}" Width="200"/>
                                <DataGridTextColumn Header="Typ zmiany" Binding="{Binding ChangeTypeF}" Width="120"/>
                                <DataGridTextColumn Header="Oryg. SMS wysłał" Binding="{Binding OriginalSmsUser}" Width="120"/>
                                <DataGridTextColumn Header="Oryg. SMS kiedy" Binding="{Binding OriginalSmsDateF}" Width="130"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
