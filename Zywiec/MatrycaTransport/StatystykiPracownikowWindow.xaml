<Window x:Class="Kalendarz1.StatystykiPracownikowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statystyki Pracowników - SMS"
        Height="900" Width="1500"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F5F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Styl przycisków okresu -->
        <Style x:Key="PeriodButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E8F5E9"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4CAF50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl aktywnego przycisku okresu -->
        <Style x:Key="PeriodButtonActiveStyle" TargetType="Button" BasedOn="{StaticResource PeriodButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
        </Style>

        <!-- Styl przycisków miesięcy -->
        <Style x:Key="MonthButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#ECEFF1"/>
            <Setter Property="Foreground" Value="#546E7A"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="4,2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#CFD8DC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- NAGŁÓWEK -->
        <Border Grid.Row="0" Background="White" Padding="20,15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="&#xE8B8;" FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="#1976D2" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="Statystyki Pracowników - SMS" FontSize="22" FontWeight="SemiBold" Foreground="#333" VerticalAlignment="Center"/>
                </StackPanel>
                <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Center"
                        Width="36" Height="36" FontSize="18" Foreground="#666"
                        Background="Transparent" BorderThickness="0" Cursor="Hand"
                        Click="BtnClose_Click"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- WYBÓR OKRESU -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="1" Color="#000" Opacity="0.1" BlurRadius="8"/>
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="&#xE787;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#1976D2" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Wybór Okresu" FontWeight="SemiBold" FontSize="14" Foreground="#333"/>
                        </StackPanel>

                        <!-- Przyciski szybkiego wyboru -->
                        <WrapPanel Margin="0,0,0,15">
                            <Button x:Name="btnDzis" Content="&#xE787; Dziś" Style="{StaticResource PeriodButtonStyle}" Click="BtnDzis_Click"/>
                            <Button x:Name="btnWczoraj" Content="&#xE81C; Wczoraj" Style="{StaticResource PeriodButtonStyle}" Click="BtnWczoraj_Click"/>
                            <Button x:Name="btnTenTydzien" Content="&#xE8BF; Ten Tydzień" Style="{StaticResource PeriodButtonStyle}" Click="BtnTenTydzien_Click"/>
                            <Button x:Name="btnPoprzedniTydzien" Content="&#xE76B; Poprzedni Tydzień" Style="{StaticResource PeriodButtonStyle}" Click="BtnPoprzedniTydzien_Click"/>
                            <Button x:Name="btnTenMiesiac" Content="&#xE8BF; Ten Miesiąc" Style="{StaticResource PeriodButtonActiveStyle}" Click="BtnTenMiesiac_Click"/>
                            <Button x:Name="btnPoprzedniMiesiac" Content="&#xE76B; Poprzedni Miesiąc" Style="{StaticResource PeriodButtonStyle}" Click="BtnPoprzedniMiesiac_Click"/>
                            <Button x:Name="btn2025" Content="&#xE787; 2025" Style="{StaticResource PeriodButtonStyle}" Click="BtnRok2025_Click"/>
                            <Button x:Name="btn2024" Content="&#xE787; 2024" Style="{StaticResource PeriodButtonStyle}" Click="BtnRok2024_Click"/>
                        </WrapPanel>

                        <!-- Przyciski miesięcy 2025 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="2025:" FontWeight="SemiBold" Width="45" VerticalAlignment="Center" Foreground="#666"/>
                            <Button Content="Sty" Style="{StaticResource MonthButtonStyle}" Tag="2025-1" Click="BtnMonth_Click"/>
                            <Button Content="Lut" Style="{StaticResource MonthButtonStyle}" Tag="2025-2" Click="BtnMonth_Click"/>
                            <Button Content="Mar" Style="{StaticResource MonthButtonStyle}" Tag="2025-3" Click="BtnMonth_Click"/>
                            <Button Content="Kwi" Style="{StaticResource MonthButtonStyle}" Tag="2025-4" Click="BtnMonth_Click"/>
                            <Button Content="Maj" Style="{StaticResource MonthButtonStyle}" Tag="2025-5" Click="BtnMonth_Click"/>
                            <Button Content="Cze" Style="{StaticResource MonthButtonStyle}" Tag="2025-6" Click="BtnMonth_Click"/>
                            <Button Content="Lip" Style="{StaticResource MonthButtonStyle}" Tag="2025-7" Click="BtnMonth_Click"/>
                            <Button Content="Sie" Style="{StaticResource MonthButtonStyle}" Tag="2025-8" Click="BtnMonth_Click"/>
                            <Button Content="Wrz" Style="{StaticResource MonthButtonStyle}" Tag="2025-9" Click="BtnMonth_Click"/>
                            <Button Content="Paź" Style="{StaticResource MonthButtonStyle}" Tag="2025-10" Click="BtnMonth_Click"/>
                            <Button Content="Lis" Style="{StaticResource MonthButtonStyle}" Tag="2025-11" Click="BtnMonth_Click"/>
                            <Button Content="Gru" Style="{StaticResource MonthButtonStyle}" Tag="2025-12" Click="BtnMonth_Click"/>
                        </StackPanel>

                        <!-- Przyciski miesięcy 2024 -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="2024:" FontWeight="SemiBold" Width="45" VerticalAlignment="Center" Foreground="#666"/>
                            <Button Content="Sty" Style="{StaticResource MonthButtonStyle}" Tag="2024-1" Click="BtnMonth_Click"/>
                            <Button Content="Lut" Style="{StaticResource MonthButtonStyle}" Tag="2024-2" Click="BtnMonth_Click"/>
                            <Button Content="Mar" Style="{StaticResource MonthButtonStyle}" Tag="2024-3" Click="BtnMonth_Click"/>
                            <Button Content="Kwi" Style="{StaticResource MonthButtonStyle}" Tag="2024-4" Click="BtnMonth_Click"/>
                            <Button Content="Maj" Style="{StaticResource MonthButtonStyle}" Tag="2024-5" Click="BtnMonth_Click"/>
                            <Button Content="Cze" Style="{StaticResource MonthButtonStyle}" Tag="2024-6" Click="BtnMonth_Click"/>
                            <Button Content="Lip" Style="{StaticResource MonthButtonStyle}" Tag="2024-7" Click="BtnMonth_Click"/>
                            <Button Content="Sie" Style="{StaticResource MonthButtonStyle}" Tag="2024-8" Click="BtnMonth_Click"/>
                            <Button Content="Wrz" Style="{StaticResource MonthButtonStyle}" Tag="2024-9" Click="BtnMonth_Click"/>
                            <Button Content="Paź" Style="{StaticResource MonthButtonStyle}" Tag="2024-10" Click="BtnMonth_Click"/>
                            <Button Content="Lis" Style="{StaticResource MonthButtonStyle}" Tag="2024-11" Click="BtnMonth_Click"/>
                            <Button Content="Gru" Style="{StaticResource MonthButtonStyle}" Tag="2024-12" Click="BtnMonth_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- KARTY PODSUMOWANIA -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Suma SMS -->
                    <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,8,0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="1" Color="#000" Opacity="0.1" BlurRadius="8"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8BD;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#4CAF50" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Wysłane SMS" Foreground="#666" FontSize="13"/>
                            </StackPanel>
                            <TextBlock x:Name="lblTotalSms" Text="0" FontSize="36" FontWeight="Bold" Foreground="#4CAF50" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- SMS Zbiorczych -->
                    <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20" Margin="4,0,4,0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="1" Color="#000" Opacity="0.1" BlurRadius="8"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE762;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#2196F3" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="SMS Zbiorczych" Foreground="#666" FontSize="13"/>
                            </StackPanel>
                            <TextBlock x:Name="lblSmsAll" Text="0" FontSize="36" FontWeight="Bold" Foreground="#2196F3" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- SMS Pojedynczych -->
                    <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="20" Margin="4,0,4,0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="1" Color="#000" Opacity="0.1" BlurRadius="8"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8EC;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#FF9800" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="SMS Pojedynczych" Foreground="#666" FontSize="13"/>
                            </StackPanel>
                            <TextBlock x:Name="lblSmsOne" Text="0" FontSize="36" FontWeight="Bold" Foreground="#FF9800" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Aktywni pracownicy -->
                    <Border Grid.Column="3" Background="White" CornerRadius="8" Padding="20" Margin="8,0,0,0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="1" Color="#000" Opacity="0.1" BlurRadius="8"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#9C27B0" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Aktywni Pracownicy" Foreground="#666" FontSize="13"/>
                            </StackPanel>
                            <TextBlock x:Name="lblActiveUsers" Text="0" FontSize="36" FontWeight="Bold" Foreground="#9C27B0" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- GŁÓWNA ZAWARTOŚĆ - Wykresy + Tabela -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="450"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEWA STRONA - Wykresy -->
                    <StackPanel Grid.Column="0" Margin="0,0,15,0">

                        <!-- Kto wysłał SMS - Donut Chart -->
                        <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1" Color="#000" Opacity="0.1" BlurRadius="8"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#1976D2" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Kto Wysłał SMS" FontWeight="SemiBold" FontSize="14" Foreground="#333"/>
                                </StackPanel>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="170"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Donut Chart -->
                                    <Canvas Grid.Column="0" x:Name="donutChartSent" Width="150" Height="150" Margin="10"/>

                                    <!-- Legenda z paskami -->
                                    <ItemsControl Grid.Column="1" x:Name="legendSent" VerticalAlignment="Center">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,6">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="12"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Ellipse Grid.Column="0" Width="10" Height="10" Fill="{Binding Color}" VerticalAlignment="Center"/>
                                                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                        <TextBlock Text="{Binding Label}" FontSize="12" Foreground="{Binding Color}" FontWeight="SemiBold"/>
                                                        <Border Background="#ECEFF1" Height="6" CornerRadius="3" Margin="0,3,0,0">
                                                            <Border Background="{Binding Color}" Width="{Binding BarWidth}" Height="6" CornerRadius="3" HorizontalAlignment="Left"/>
                                                        </Border>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="2" Text="{Binding PercentText}" FontSize="11" Foreground="#666" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Potwierdzenia zmian - Donut Chart -->
                        <Border Background="White" CornerRadius="8" Padding="20">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1" Color="#000" Opacity="0.1" BlurRadius="8"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#1976D2" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Potwierdzenia Zmian" FontWeight="SemiBold" FontSize="14" Foreground="#333"/>
                                </StackPanel>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="170"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Donut Chart -->
                                    <Canvas Grid.Column="0" x:Name="donutChartConfirm" Width="150" Height="150" Margin="10"/>

                                    <!-- Legenda z paskami -->
                                    <ItemsControl Grid.Column="1" x:Name="legendConfirm" VerticalAlignment="Center">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,6">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="12"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Ellipse Grid.Column="0" Width="10" Height="10" Fill="{Binding Color}" VerticalAlignment="Center"/>
                                                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                        <TextBlock Text="{Binding Label}" FontSize="12" Foreground="{Binding Color}" FontWeight="SemiBold"/>
                                                        <Border Background="#ECEFF1" Height="6" CornerRadius="3" Margin="0,3,0,0">
                                                            <Border Background="{Binding Color}" Width="{Binding BarWidth}" Height="6" CornerRadius="3" HorizontalAlignment="Left"/>
                                                        </Border>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="2" Text="{Binding PercentText}" FontSize="11" Foreground="#666" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- PRAWA STRONA - Szczegółowa lista SMS -->
                    <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="1" Color="#000" Opacity="0.1" BlurRadius="8"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#1976D2" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Szczegółowa Lista SMS" FontWeight="SemiBold" FontSize="14" Foreground="#333"/>
                            </StackPanel>

                            <DataGrid Grid.Row="1" x:Name="dgSmsHistory"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="Horizontal"
                                      HorizontalGridLinesBrush="#F0F0F0"
                                      RowHeight="36"
                                      Background="White"
                                      BorderThickness="0"
                                      FontSize="12"
                                      HeadersVisibility="Column">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#FAFAFA"/>
                                        <Setter Property="Foreground" Value="#666"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="Padding" Value="10,8"/>
                                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Lp" Binding="{Binding Lp}" Width="40">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Padding" Value="8,0"/>
                                                <Setter Property="Foreground" Value="#999"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Hodowca" Binding="{Binding CustomerGID}" Width="160"/>
                                    <DataGridTextColumn Header="Data planu" Binding="{Binding CalcDateF}" Width="90"/>
                                    <DataGridTextColumn Header="Typ" Binding="{Binding SmsTypeF}" Width="80">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Padding" Value="4,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Wysłał" Binding="{Binding SentByUser}" Width="120">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#1976D2"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Data wysłania" Binding="{Binding SentDateTimeF}" Width="130"/>
                                    <DataGridTextColumn Header="Telefon" Binding="{Binding PhoneNumber}" Width="110"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
