<Window x:Class="Kalendarz1.StatystykiPracownikowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statystyki Pracownik贸w - SMS i Aktywno"
        Height="850" Width="1300"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#ECEFF1"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Style dla kart statystyk -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style dla przycisk贸w -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style dla TabItem -->
        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border"
                                Background="#34495E"
                                CornerRadius="8,8,0,0"
                                Margin="2,0,2,0"
                                Padding="20,12">
                            <ContentPresenter x:Name="ContentSite"
                                              ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E67E22"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#D35400"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Style dla DataGrid -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- NAGWEK -->
        <Border Grid.Row="0" Background="#E67E22" Padding="20,15">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Color="#000000" Opacity="0.2" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="STATYSTYKI PRACOWNIKW - SMS"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="Analiza aktywnoci wysyki SMS i potwierdze zmian"
                               FontSize="13"
                               Foreground="#FDEBD0"
                               Margin="0,3,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Content="ZAMKNIJ"
                        Style="{StaticResource MainButtonStyle}"
                        Background="#C0392B"
                        Click="BtnClose_Click"/>
            </Grid>
        </Border>

        <!-- ZAKADKI -->
        <TabControl Grid.Row="1" Margin="15" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem" BasedOn="{StaticResource TabItemStyle}"/>
            </TabControl.Resources>

            <!-- ZAKADKA 1: PRZEGLD -->
            <TabItem Header="Przegld">
                <Border Background="White" CornerRadius="0,10,10,10" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="15"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Filtry -->
                        <Border Grid.Row="0" Background="#F5F5F5" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Zakres dat:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                <DatePicker x:Name="dpOd" Width="130" Margin="0,0,10,0"/>
                                <TextBlock Text="-" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <DatePicker x:Name="dpDo" Width="130" Margin="0,0,20,0"/>
                                <Button Content="ODWIE呕" Click="BtnRefresh_Click" Style="{StaticResource MainButtonStyle}"/>

                                <Separator Margin="20,0"/>

                                <TextBlock Text="Szybki wyb贸r:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <Button Content="Dzi" Click="BtnDzis_Click" Style="{StaticResource MainButtonStyle}" Background="#27AE60" Padding="12,8"/>
                                <Button Content="Tydzie" Click="BtnTydzien_Click" Style="{StaticResource MainButtonStyle}" Background="#2980B9" Padding="12,8"/>
                                <Button Content="Miesic" Click="BtnMiesiac_Click" Style="{StaticResource MainButtonStyle}" Background="#8E44AD" Padding="12,8"/>
                                <Button Content="Rok" Click="BtnRok_Click" Style="{StaticResource MainButtonStyle}" Background="#E74C3C" Padding="12,8"/>
                            </StackPanel>
                        </Border>

                        <!-- KARTY PODSUMOWANIA -->
                        <Grid Grid.Row="1" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Karta: Suma SMS -->
                            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="" FontSize="32" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="lblTotalSms" Text="0" FontSize="36" FontWeight="Bold"
                                               Foreground="#3498DB" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <TextBlock Text="Wysanych SMS" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Karta: SMS Zbiorczych -->
                            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="" FontSize="32" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="lblSmsAll" Text="0" FontSize="36" FontWeight="Bold"
                                               Foreground="#9B59B6" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <TextBlock Text="SMS Zbiorczych" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Karta: Aktywni pracownicy -->
                            <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="" FontSize="32" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="lblActiveUsers" Text="0" FontSize="36" FontWeight="Bold"
                                               Foreground="#27AE60" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <TextBlock Text="Aktywnych pracownik贸w" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Karta: Potwierdzenia zmian -->
                            <Border Grid.Column="3" Style="{StaticResource StatCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="锔" FontSize="32" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="lblTotalConfirmations" Text="0" FontSize="36" FontWeight="Bold"
                                               Foreground="#F39C12" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <TextBlock Text="Potwierdze zmian" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Karta: Hodowc贸w obsu偶onych -->
                            <Border Grid.Column="4" Style="{StaticResource StatCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="" FontSize="32" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="lblUniqueFarmers" Text="0" FontSize="36" FontWeight="Bold"
                                               Foreground="#E67E22" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <TextBlock Text="Hodowc贸w obsu偶onych" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- GWNA ZAWARTO -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="350"/>
                            </Grid.ColumnDefinitions>

                            <!-- LEWA STRONA - Ranking i wykres -->
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="220"/>
                                </Grid.RowDefinitions>

                                <!-- Ranking pracownik贸w -->
                                <Border Grid.Row="0" Style="{StaticResource StatCardStyle}" Margin="0,0,10,5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                            <TextBlock Text=" RANKING PRACOWNIKW - SMS"
                                                       FontSize="16" FontWeight="Bold" Foreground="#34495E"/>
                                            <TextBlock Text="(kliknij 2x aby zobaczy szczeg贸y)"
                                                       FontSize="11" Foreground="#95A5A6" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                        </StackPanel>

                                        <DataGrid Grid.Row="1" x:Name="dgSmsStats" Style="{StaticResource ModernDataGridStyle}"
                                                  MouseDoubleClick="DgSmsStats_MouseDoubleClick">
                                            <DataGrid.Columns>
                                                <DataGridTemplateColumn Header="#" Width="50">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Border CornerRadius="15" Width="30" Height="30" HorizontalAlignment="Center">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Setter Property="Background" Value="#BDC3C7"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Rank}" Value="1">
                                                                                <Setter Property="Background" Value="#FFD700"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Rank}" Value="2">
                                                                                <Setter Property="Background" Value="#C0C0C0"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Rank}" Value="3">
                                                                                <Setter Property="Background" Value="#CD7F32"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <TextBlock Text="{Binding Rank}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                           FontWeight="Bold" Foreground="White"/>
                                                            </Border>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTextColumn Header="Pracownik" Binding="{Binding UserId}" Width="*">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                                            <Setter Property="Padding" Value="5,0"/>
                                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="SMS" Binding="{Binding SmsCount}" Width="80">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                            <Setter Property="FontSize" Value="16"/>
                                                            <Setter Property="Foreground" Value="#3498DB"/>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Zbiorczych" Binding="{Binding SmsAllCount}" Width="90">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                                            <Setter Property="Foreground" Value="#9B59B6"/>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Pojedynczych" Binding="{Binding SmsOneCount}" Width="100">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                                            <Setter Property="Foreground" Value="#2980B9"/>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Hodowc贸w" Binding="{Binding UniqueFarmers}" Width="90">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                                            <Setter Property="Foreground" Value="#E67E22"/>
                                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="r./dzie" Binding="{Binding AvgPerDay, StringFormat={}{0:F1}}" Width="80">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                                            <Setter Property="Foreground" Value="#27AE60"/>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </Border>

                                <!-- Wykres supkowy -->
                                <Border Grid.Row="1" Style="{StaticResource StatCardStyle}" Margin="0,5,10,0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Text=" WYKRES AKTYWNOCI (Top 8)"
                                                   FontSize="14" FontWeight="Bold" Foreground="#34495E" Margin="0,0,0,10"/>

                                        <ItemsControl Grid.Row="1" x:Name="chartBars" VerticalAlignment="Bottom" Margin="0,0,0,25">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <UniformGrid Rows="1"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Margin="5,0">
                                                        <TextBlock Text="{Binding SmsCount}" HorizontalAlignment="Center"
                                                                   FontWeight="Bold" Foreground="#3498DB" FontSize="12" Margin="0,0,0,3"/>
                                                        <Border Background="{Binding BarColor}"
                                                                Height="{Binding BarHeight}"
                                                                Width="45"
                                                                CornerRadius="5,5,0,0"
                                                                VerticalAlignment="Bottom"/>
                                                        <TextBlock Text="{Binding UserId}" HorizontalAlignment="Center"
                                                                   FontSize="9" Margin="0,5,0,0" TextTrimming="CharacterEllipsis"
                                                                   MaxWidth="55" ToolTip="{Binding UserId}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!-- PRAWA STRONA - Ostatnia aktywno -->
                            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Margin="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text=" OSTATNIA AKTYWNO"
                                               FontSize="14" FontWeight="Bold" Foreground="#34495E" Margin="0,0,0,10"/>

                                    <DataGrid Grid.Row="1" x:Name="dgRecentActivity" Style="{StaticResource ModernDataGridStyle}"
                                              RowHeight="32" FontSize="11">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Data" Binding="{Binding DateStr}" Width="55"/>
                                            <DataGridTextColumn Header="Godz." Binding="{Binding TimeStr}" Width="45"/>
                                            <DataGridTextColumn Header="U偶ytkownik" Binding="{Binding UserId}" Width="85"/>
                                            <DataGridTemplateColumn Header="Typ" Width="50">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Border CornerRadius="4" Padding="5,2" HorizontalAlignment="Center">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Background" Value="#E3F2FD"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding ActionType}" Value="POT">
                                                                            <Setter Property="Background" Value="#FFF3E0"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock Text="{Binding ActionType}" FontSize="10" FontWeight="SemiBold">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground" Value="#1976D2"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ActionType}" Value="POT">
                                                                                <Setter Property="Foreground" Value="#F57C00"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Border>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <!-- Podsumowanie potwierdze -->
                                    <Border Grid.Row="2" Background="#FFF3E0" CornerRadius="8" Padding="12" Margin="0,10,0,0">
                                        <StackPanel>
                                            <TextBlock Text="锔 Potwierdzenia zmian" FontWeight="Bold" Foreground="#E65100" FontSize="12" Margin="0,0,0,8"/>
                                            <DataGrid x:Name="dgConfirmations" Style="{StaticResource ModernDataGridStyle}"
                                                      MaxHeight="120" RowHeight="28" FontSize="10">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="U偶ytkownik" Binding="{Binding UserId}" Width="*"/>
                                                    <DataGridTextColumn Header="Ilo" Binding="{Binding Count}" Width="50">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                                <Setter Property="Foreground" Value="#E65100"/>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- ZAKADKA 2: TYGODNIE -->
            <TabItem Header="Statystyki Tygodniowe">
                <Border Background="White" CornerRadius="0,10,10,10" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="15"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Filtr roku -->
                        <Border Grid.Row="0" Background="#F5F5F5" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Rok:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                <ComboBox x:Name="cboRokTygodnie" Width="100" SelectionChanged="CboRokTygodnie_SelectionChanged"/>
                                <Button Content="ODWIE呕" Click="BtnRefreshTygodnie_Click" Style="{StaticResource MainButtonStyle}" Margin="20,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Tabela tygodniowa -->
                        <DataGrid Grid.Row="1" x:Name="dgWeeklyStats" Style="{StaticResource ModernDataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Tydzie" Binding="{Binding WeekNumber}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontSize" Value="14"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Okres" Binding="{Binding Period}" Width="150"/>
                                <DataGridTextColumn Header="SMS Razem" Binding="{Binding TotalSms}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="#3498DB"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Zbiorczych" Binding="{Binding SmsAll}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#9B59B6"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Pojedynczych" Binding="{Binding SmsOne}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#2980B9"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Pracownicy" Binding="{Binding ActiveUsers}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#27AE60"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Hodowc贸w" Binding="{Binding UniqueFarmers}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#E67E22"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Potwierdzenia" Binding="{Binding Confirmations}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#F39C12"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="r./dzie" Binding="{Binding AvgPerDay, StringFormat={}{0:F1}}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- ZAKADKA 3: MIESICE -->
            <TabItem Header="Statystyki Miesiczne">
                <Border Background="White" CornerRadius="0,10,10,10" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="15"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
