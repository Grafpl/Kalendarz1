<Window x:Class="Kalendarz1.StatystykiPracownikowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statystyki PracownikÃ³w - SMS i Potwierdzenia"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#ECEFF1"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Style dla kart statystyk -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style dla przyciskÃ³w -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style dla DataGrid -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- NAGÅÃ“WEK -->
        <Border Grid.Row="0" Background="#34495E" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="STATYSTYKI PRACOWNIKÃ“W"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="Analiza wysyÅ‚ki SMS i potwierdzeÅ„ zmian"
                               FontSize="12"
                               Foreground="#BDC3C7"
                               Margin="0,3,0,0"/>
                </StackPanel>

                <!-- Filtr dat -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Od:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <DatePicker x:Name="dpOd" Width="130" Margin="0,0,15,0"/>
                    <TextBlock Text="Do:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <DatePicker x:Name="dpDo" Width="130" Margin="0,0,15,0"/>
                    <Button Content="OdÅ›wieÅ¼" Click="BtnRefresh_Click" Style="{StaticResource MainButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- KARTY PODSUMOWANIA -->
        <Grid Grid.Row="1" Margin="15,15,15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Karta: Suma SMS -->
            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                <StackPanel>
                    <TextBlock Text="ðŸ“±" FontSize="28" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="lblTotalSms" Text="0" FontSize="36" FontWeight="Bold"
                               Foreground="#3498DB" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Text="WysÅ‚anych SMS" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Karta: Aktywni pracownicy -->
            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                <StackPanel>
                    <TextBlock Text="ðŸ‘¥" FontSize="28" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="lblActiveUsers" Text="0" FontSize="36" FontWeight="Bold"
                               Foreground="#27AE60" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Text="Aktywnych pracownikÃ³w" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Karta: Potwierdzenia zmian -->
            <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                <StackPanel>
                    <TextBlock Text="âœ…" FontSize="28" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="lblTotalConfirmations" Text="0" FontSize="36" FontWeight="Bold"
                               Foreground="#F39C12" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Text="PotwierdzeÅ„ zmian" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Karta: HodowcÃ³w obsÅ‚uÅ¼onych -->
            <Border Grid.Column="3" Style="{StaticResource StatCardStyle}">
                <StackPanel>
                    <TextBlock Text="ðŸ”" FontSize="28" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="lblUniqueFarmers" Text="0" FontSize="36" FontWeight="Bold"
                               Foreground="#9B59B6" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Text="HodowcÃ³w obsÅ‚uÅ¼onych" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- GÅÃ“WNA ZAWARTOÅšÄ† -->
        <Grid Grid.Row="2" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- LEWA STRONA - Tabela i wykres -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Tabela statystyk pracownikÃ³w -->
                <Border Grid.Row="0" Style="{StaticResource StatCardStyle}" Margin="0,0,10,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="ðŸ“Š Ranking pracownikÃ³w - SMS"
                                   FontSize="16" FontWeight="Bold" Foreground="#34495E" Margin="0,0,0,10"/>

                        <DataGrid Grid.Row="1" x:Name="dgSmsStats" Style="{StaticResource ModernDataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding Rank}" Width="40">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Pracownik" Binding="{Binding UserId}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="5,0"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="SMS" Binding="{Binding SmsCount}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="#3498DB"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Zbiorczych" Binding="{Binding SmsAllCount}" Width="90">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Pojedynczych" Binding="{Binding SmsOneCount}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="HodowcÃ³w" Binding="{Binding UniqueFarmers}" Width="90">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#9B59B6"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- Wykres sÅ‚upkowy -->
                <Border Grid.Row="1" Style="{StaticResource StatCardStyle}" Margin="0,5,10,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="ðŸ“ˆ Wykres aktywnoÅ›ci (SMS)"
                                   FontSize="16" FontWeight="Bold" Foreground="#34495E" Margin="0,0,0,10"/>

                        <!-- Prosty wykres sÅ‚upkowy -->
                        <ItemsControl Grid.Row="1" x:Name="chartBars" VerticalAlignment="Bottom">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="5,0">
                                        <TextBlock Text="{Binding SmsCount}" HorizontalAlignment="Center"
                                                   FontWeight="Bold" Foreground="#3498DB" Margin="0,0,0,3"/>
                                        <Border Background="{Binding BarColor}"
                                                Height="{Binding BarHeight}"
                                                Width="50"
                                                CornerRadius="5,5,0,0"
                                                VerticalAlignment="Bottom"/>
                                        <TextBlock Text="{Binding UserId}" HorizontalAlignment="Center"
                                                   FontSize="10" Margin="0,5,0,0" TextTrimming="CharacterEllipsis"
                                                   MaxWidth="60"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>

            <!-- PRAWA STRONA - SzczegÃ³Å‚y i historia -->
            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Margin="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="ðŸ“‹ Ostatnia aktywnoÅ›Ä‡"
                               FontSize="16" FontWeight="Bold" Foreground="#34495E" Margin="0,0,0,10"/>

                    <DataGrid Grid.Row="1" x:Name="dgRecentActivity" Style="{StaticResource ModernDataGridStyle}"
                              RowHeight="35" FontSize="11">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Data" Binding="{Binding DateStr}" Width="75"/>
                            <DataGridTextColumn Header="Godz." Binding="{Binding TimeStr}" Width="50"/>
                            <DataGridTextColumn Header="UÅ¼ytkownik" Binding="{Binding UserId}" Width="80"/>
                            <DataGridTextColumn Header="Typ" Binding="{Binding ActionType}" Width="50"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Podsumowanie potwierdzeÅ„ -->
                    <Border Grid.Row="2" Background="#FFF3E0" CornerRadius="8" Padding="15" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="âš ï¸ Potwierdzenia zmian planu" FontWeight="Bold" Foreground="#E65100" Margin="0,0,0,8"/>
                            <DataGrid x:Name="dgConfirmations" Style="{StaticResource ModernDataGridStyle}"
                                      MaxHeight="150" RowHeight="30" FontSize="10">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="UÅ¼ytkownik" Binding="{Binding UserId}" Width="*"/>
                                    <DataGridTextColumn Header="IloÅ›Ä‡" Binding="{Binding Count}" Width="50">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="Foreground" Value="#E65100"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
