<Window x:Class="Kalendarz1.WstawienieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🐔 Wstawienia Kurczaków"
        Height="700" Width="980"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        FontFamily="Segoe UI"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- STYLE -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4B732F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#95A5A6"/>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="SmallButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Background" Value="#3498DB"/>
        </Style>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" Color="#000" Opacity="0.06" BlurRadius="12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#DFE6E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ReadOnlyTextBox" TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="#F8F9FA"/>
        </Style>

        <Style x:Key="HighlightTextBox" TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>

        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="6"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition x:Name="kolumnaPomoc" Width="0"/>
        </Grid.ColumnDefinitions>

        <!-- LEWA STRONA - GŁÓWNA ZAWARTOŚĆ -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,12,0">
            <StackPanel>

                <!-- NAGŁÓWEK + DOSTAWCA W JEDNEJ LINII -->
                <Border Style="{StaticResource Card}" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Lewa: Ikona + Nazwa -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,15,0">
                            <TextBlock Text="🐔" FontSize="22" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Wstawienia" FontSize="14" FontWeight="Bold" Foreground="#2C3E50"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Tryb: " FontSize="10" Foreground="#7F8C8D"/>
                                    <TextBlock x:Name="txtTrybFormularza" Text="Nowe" FontSize="10" FontWeight="SemiBold" Foreground="#5C8A3A"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Środek: Dostawca -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="👨‍🌾" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox x:Name="cmbDostawca" Style="{StaticResource ModernComboBox}" Width="200" SelectionChanged="CmbDostawca_SelectionChanged"/>
                        </StackPanel>

                        <!-- Prawa: Checkboxy -->
                        <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                            <CheckBox x:Name="chkPomoc" Content="❓ Pomoc"
                                      FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,12,0"
                                      Checked="ChkPomoc_Changed" Unchecked="ChkPomoc_Changed"/>
                            <CheckBox x:Name="chkSeria" Content="📋 Seria"
                                      FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,12,0"
                                      Checked="ChkSeria_Checked" Unchecked="ChkSeria_Unchecked"/>
                            <CheckBox x:Name="chkDostawy" Content="🚚 Dostawy"
                                      FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center"
                                      IsChecked="True"
                                      Checked="ChkDostawy_Changed" Unchecked="ChkDostawy_Changed"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Ukryte pola (używane w kodzie) -->
                <Border x:Name="panelDaneDostawcy" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock x:Name="txtNazwaDostawcy"/>
                        <TextBlock x:Name="txtAdresDostawcy"/>
                        <TextBlock x:Name="txtTelefonDostawcy"/>
                        <TextBlock x:Name="txtKmDostawcy"/>
                        <TextBlock x:Name="txtEmailDostawcy"/>
                        <TextBox x:Name="txtKmH"/>
                    </StackPanel>
                </Border>

                <!-- JEDNO WSTAWIENIE + SUMA/RÓŻNICA -->
                <Border x:Name="panelJednePodstawy" Style="{StaticResource Card}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="0,0,6,0">
                            <TextBlock Text="📅 Data" FontSize="11" Margin="0,0,0,4"/>
                            <DatePicker x:Name="dpDataWstawienia" Style="{StaticResource ModernDatePicker}" SelectedDateChanged="DpDataWstawienia_SelectedDateChanged"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="6,0">
                            <TextBlock Text="🐣 Sztuk" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox x:Name="txtSztukiWstawienia" Style="{StaticResource HighlightTextBox}" TextChanged="TxtSztukiWstawienia_TextChanged"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="6,0">
                            <TextBlock Text="📊 Po 3% upadku" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox x:Name="txtSztukiUpadki" Style="{StaticResource ReadOnlyTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" Margin="6,0">
                            <TextBlock Text="📈 Suma" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox x:Name="txtSztukiSuma" Style="{StaticResource ReadOnlyTextBox}" Background="#E8F5E9"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4" Margin="6,0,0,0">
                            <TextBlock Text="✅ Różnica" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox x:Name="txtSztukiRoznica" Style="{StaticResource ReadOnlyTextBox}" Background="#FFF3E0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- SERIA WSTAWIEŃ (od #2 - #1 jest na górze) -->
                <Border x:Name="panelSeria" Style="{StaticResource Card}" Visibility="Collapsed">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="📋 Kolejne wstawienia (od #2)" FontSize="13" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center"/>
                                <Button Content="📋 Wklej wszystkie" Style="{StaticResource SmallButton}"
                                        Margin="15,0,0,0" Click="BtnWklejWszystkieSztuki_Click"
                                        ToolTip="Wklej ilość wstawienia do wszystkich serii"/>
                            </StackPanel>
                            <Button Content="➕ Dodaj" Style="{StaticResource SmallButton}" HorizontalAlignment="Right" Click="BtnDodajSerie_Click"/>
                        </Grid>

                        <Grid Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35"/>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="#" FontSize="10" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="Data" FontSize="10" FontWeight="Bold" Margin="2,0,0,0"/>
                            <TextBlock Grid.Column="2" Text="Ilość Sztuk" FontSize="10" FontWeight="Bold" Margin="2,0,0,0"/>
                            <TextBlock Grid.Column="3" Text="" FontSize="10" FontWeight="Bold" Margin="2,0,0,0"/>
                        </Grid>

                        <ScrollViewer MaxHeight="220" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="stackPanelSeria"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- SZABLON DOSTAW -->
                <Border x:Name="panelDostawy" Style="{StaticResource Card}" Visibility="Visible">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="🚚 Szablon Dostaw" FontSize="13" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center"/>
                                <Button Content="📋 Wklej różnicę" Style="{StaticResource SmallButton}"
                                        Margin="15,0,0,0" Click="BtnWklejRozniceDoWszystkich_Click"
                                        ToolTip="Wklej różnicę do wszystkich dostaw"/>
                            </StackPanel>
                            <Button Content="➕ Dostawa" Style="{StaticResource SmallButton}" HorizontalAlignment="Right" Click="BtnDodajDostawe_Click"/>
                        </Grid>

                        <!-- Nagłówki -->
                        <Grid Margin="0,0,0,5" Background="#F8F9FA" Height="28">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="45"/>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="#" FontSize="9" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            <TextBlock Grid.Column="1" Text="Doba" FontSize="9" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Data" FontSize="9" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="Dni" FontSize="9" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="Waga" FontSize="9" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="5" Text="Szt/poj" FontSize="9" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="6" Text="Mnóż" FontSize="9" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="7" Text="Sztuki" FontSize="9" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="8" Text="Auta" FontSize="9" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="9" Text="Auto Wyl." FontSize="9" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="10" Text="Akcje" FontSize="9" FontWeight="Bold" VerticalAlignment="Center"/>
                        </Grid>

                        <ScrollViewer MaxHeight="280" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="stackPanelDostawy"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- NOTATKI + PRZYCISKI W JEDNEJ LINII -->
                <Border Style="{StaticResource Card}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Anuluj -->
                        <Button Grid.Column="0" Content="❌ Anuluj" Style="{StaticResource SecondaryButton}"
                                Width="100" Click="BtnAnuluj_Click" VerticalAlignment="Center"/>

                        <!-- Notatki -->
                        <Border Grid.Column="1" Background="#FFF9E6" CornerRadius="4" Padding="8,4" Margin="10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📝" FontSize="12" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox x:Name="txtNotatki"
                                         Style="{StaticResource ModernTextBox}"
                                         Width="350"
                                         Height="28"
                                         VerticalContentAlignment="Center"
                                         Background="White"
                                         FontSize="10"/>
                            </StackPanel>
                        </Border>

                        <!-- Zapisz -->
                        <Button Grid.Column="3" Content="💾 Zapisz" Style="{StaticResource PrimaryButton}"
                                Width="120" Click="BtnZapisz_Click" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- PRAWA STRONA - WSKAZÓWKI (widoczne gdy kolumna poszerzona) -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- WSKAZÓWKI - FORMUŁY -->
                <Border Style="{StaticResource Card}" Background="#E3F2FD" BorderBrush="#64B5F6" BorderThickness="2">
                    <StackPanel>
                        <TextBlock Text="💡 Formuły" FontSize="13" FontWeight="Bold" Foreground="#1976D2" Margin="0,0,0,8"/>

                        <Border Background="White" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                            <StackPanel>
                                <TextBlock FontSize="11" TextWrapping="Wrap" FontWeight="SemiBold" Foreground="#1565C0">
                                    🔢 Formuła sztuk:
                                </TextBlock>
                                <TextBlock FontSize="10" TextWrapping="Wrap" Foreground="#424242" Margin="0,2,0,0">
                                    Mnożnik × Szt/poj × 264 = Sztuki
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Background="White" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                            <StackPanel>
                                <TextBlock FontSize="11" TextWrapping="Wrap" FontWeight="SemiBold" Foreground="#1565C0">
                                    📦 Przykład:
                                </TextBlock>
                                <TextBlock FontSize="10" TextWrapping="Wrap" Foreground="#424242" Margin="0,2,0,0">
                                    2 × 20 × 264 = 10,560 sztuk
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Background="White" CornerRadius="4" Padding="8">
                            <StackPanel>
                                <TextBlock FontSize="11" TextWrapping="Wrap" FontWeight="SemiBold" Foreground="#1565C0">
                                    🚚 Auto Wyliczone:
                                </TextBlock>
                                <TextBlock FontSize="10" TextWrapping="Wrap" Foreground="#424242" Margin="0,2,0,0">
                                    Automatycznie z dokładnością do 2 miejsc
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- WSKAZÓWKI - FUNKCJE -->
                <Border Style="{StaticResource Card}" Background="#F3E5F5" BorderBrush="#BA68C8" BorderThickness="2">
                    <StackPanel>
                        <TextBlock Text="⚡ Funkcje" FontSize="13" FontWeight="Bold" Foreground="#7B1FA2" Margin="0,0,0,8"/>

                        <Border Background="White" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                            <StackPanel>
                                <TextBlock FontSize="11" TextWrapping="Wrap" FontWeight="SemiBold" Foreground="#6A1B9A">
                                    📋 Przycisk Wklej:
                                </TextBlock>
                                <TextBlock FontSize="10" TextWrapping="Wrap" Foreground="#424242" Margin="0,2,0,0">
                                    Wkleja różnicę i zaokrągla auta
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Background="White" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                            <StackPanel>
                                <TextBlock FontSize="11" TextWrapping="Wrap" FontWeight="SemiBold" Foreground="#6A1B9A">
                                    🔢 Mnożnik:
                                </TextBlock>
                                <TextBlock FontSize="10" TextWrapping="Wrap" Foreground="#424242" Margin="0,2,0,0">
                                    Automatycznie kopiuje do ręcznych Aut
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Background="White" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                            <StackPanel>
                                <TextBlock FontSize="11" TextWrapping="Wrap" FontWeight="SemiBold" Foreground="#6A1B9A">
                                    ➕ Nowa dostawa:
                                </TextBlock>
                                <TextBlock FontSize="10" TextWrapping="Wrap" Foreground="#424242" Margin="0,2,0,0">
                                    Automatycznie kopiuje Wagę i Szt/poj z poprzedniej
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Background="White" CornerRadius="4" Padding="8">
                            <StackPanel>
                                <TextBlock FontSize="11" TextWrapping="Wrap" FontWeight="SemiBold" Foreground="#6A1B9A">
                                    📊 Różnica:
                                </TextBlock>
                                <TextBlock FontSize="10" TextWrapping="Wrap" Foreground="#424242" Margin="0,2,0,0">
                                    Różnica między ilością po upadku a sumą
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- WAŻNE INFORMACJE -->
                <Border Style="{StaticResource Card}" Background="#FFEBEE" BorderBrush="#EF5350" BorderThickness="2">
                    <StackPanel>
                        <TextBlock Text="⚠️ Ważne" FontSize="13" FontWeight="Bold" Foreground="#C62828" Margin="0,0,0,8"/>

                        <Border Background="White" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                            <StackPanel>
                                <TextBlock FontSize="11" TextWrapping="Wrap" FontWeight="SemiBold" Foreground="#D32F2F">
                                    🚫 Zapis Aut:
                                </TextBlock>
                                <TextBlock FontSize="10" TextWrapping="Wrap" Foreground="#424242" Margin="0,2,0,0">
                                    NIE zapisywane dla "Wolnyrynek" (nie wierny)
                                </TextBlock>
                                <TextBlock FontSize="10" TextWrapping="Wrap" Foreground="#388E3C" Margin="0,4,0,0" FontWeight="SemiBold">
                                    ✅ Zapisywane dla: Wierny i Kontrakt
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Background="White" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                            <StackPanel>
                                <TextBlock FontSize="11" TextWrapping="Wrap" FontWeight="SemiBold" Foreground="#D32F2F">
                                    📅 Sprawdzanie dat:
                                </TextBlock>
                                <TextBlock FontSize="10" TextWrapping="Wrap" Foreground="#424242" Margin="0,2,0,0">
                                    System sprawdza ±1 dzień od wybranej daty
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Background="White" CornerRadius="4" Padding="8">
                            <StackPanel>
                                <TextBlock FontSize="11" TextWrapping="Wrap" FontWeight="SemiBold" Foreground="#D32F2F">
                                    🔒 Modyfikacja:
                                </TextBlock>
                                <TextBlock FontSize="10" TextWrapping="Wrap" Foreground="#424242" Margin="0,2,0,0">
                                    Podczas edycji seria jest zablokowana
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>