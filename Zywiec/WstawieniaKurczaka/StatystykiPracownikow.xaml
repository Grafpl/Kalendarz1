<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Kalendarz1.StatystykiPracownikow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalendarz1"
        mc:Ignorable="d"
        Title="📊 Statystyki Wstawień Kurczaków" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F7">
    
    <Window.Resources>
        <Style x:Key="FilterButton" TargetType="Button">
            <Setter Property="Background" Value="#EAECEE"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#BDC3C7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <TextBlock Grid.Row="0" 
                   Text="📊 Statystyki Wstawień Kurczaków" 
                   FontSize="26" 
                   FontWeight="Bold" 
                   Foreground="#2C3E50" 
                   Margin="0,0,0,20"/>

        <!-- Panel wyboru daty -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="15" Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect Color="#D5D8DC" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="🗓️ Wybór Okresu" FontSize="14" FontWeight="Bold" Foreground="#34495E" Margin="0,0,0,10"/>
                
                <!-- Szybki wybór -->
                <WrapPanel Margin="0,0,0,8">
                    <Button x:Name="btnDzis" Content="📅 Dziś" Style="{StaticResource FilterButton}" 
                            Padding="12,6" FontSize="12" Margin="0,0,8,4" Click="FilterButton_Click" Tag="Today"/>
                    <Button x:Name="btnWczoraj" Content="📅 Wczoraj" Style="{StaticResource FilterButton}" 
                            Padding="12,6" FontSize="12" Margin="0,0,8,4" Click="FilterButton_Click" Tag="Yesterday"/>
                    <Button x:Name="btnTydzien" Content="📊 Ten Tydzień" Style="{StaticResource FilterButton}" 
                            Padding="12,6" FontSize="12" Margin="0,0,8,4" Click="FilterButton_Click" Tag="Week"/>
                    <Button x:Name="btnPoprzedniTydzien" Content="📊 Poprzedni Tydzień" Style="{StaticResource FilterButton}" 
                            Padding="12,6" FontSize="12" Margin="0,0,8,4" Click="FilterButton_Click" Tag="LastWeek"/>
                    <Button x:Name="btnMiesiac" Content="📆 Ten Miesiąc" Style="{StaticResource FilterButton}" 
                            Padding="12,6" FontSize="12" Margin="0,0,8,4" Click="FilterButton_Click" Tag="Month"/>
                    <Button x:Name="btnPoprzedniMiesiac" Content="📆 Poprzedni Miesiąc" Style="{StaticResource FilterButton}" 
                            Padding="12,6" FontSize="12" Margin="0,0,8,4" Click="FilterButton_Click" Tag="LastMonth"/>
                    <Button x:Name="btnRok" Content="🗓️ 2025" Style="{StaticResource FilterButton}" 
                            Padding="12,6" FontSize="12" Margin="0,0,8,4" Click="FilterButton_Click" Tag="Year"/>
                    <Button x:Name="btnPoprzedniRok" Content="🗓️ 2024" Style="{StaticResource FilterButton}" 
                            Padding="12,6" FontSize="12" Margin="0,0,8,4" Click="FilterButton_Click" Tag="LastYear"/>
                </WrapPanel>

                <!-- Miesiące 2025 -->
                <StackPanel Margin="0,4,0,8">
                    <TextBlock Text="2025:" FontSize="11" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,4"/>
                    <WrapPanel>
                        <Button Content="Sty" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2025-01"/>
                        <Button Content="Lut" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2025-02"/>
                        <Button Content="Mar" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2025-03"/>
                        <Button Content="Kwi" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2025-04"/>
                        <Button Content="Maj" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2025-05"/>
                        <Button Content="Cze" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2025-06"/>
                        <Button Content="Lip" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2025-07"/>
                        <Button Content="Sie" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2025-08"/>
                        <Button Content="Wrz" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2025-09"/>
                        <Button Content="Paź" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2025-10"/>
                        <Button Content="Lis" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2025-11"/>
                        <Button Content="Gru" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2025-12"/>
                    </WrapPanel>
                </StackPanel>

                <!-- Miesiące 2024 -->
                <StackPanel Margin="0,4,0,0">
                    <TextBlock Text="2024:" FontSize="11" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,4"/>
                    <WrapPanel>
                        <Button Content="Sty" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2024-01"/>
                        <Button Content="Lut" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2024-02"/>
                        <Button Content="Mar" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2024-03"/>
                        <Button Content="Kwi" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2024-04"/>
                        <Button Content="Maj" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2024-05"/>
                        <Button Content="Cze" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2024-06"/>
                        <Button Content="Lip" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2024-07"/>
                        <Button Content="Sie" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2024-08"/>
                        <Button Content="Wrz" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2024-09"/>
                        <Button Content="Paź" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2024-10"/>
                        <Button Content="Lis" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2024-11"/>
                        <Button Content="Gru" Style="{StaticResource FilterButton}" Padding="10,5" FontSize="11" Margin="0,0,6,3" Click="FilterButton_Click" Tag="2024-12"/>
                    </WrapPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Podsumowanie -->
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="20" Margin="0,0,5,0">
                <Border.Effect>
                    <DropShadowEffect Color="#D5D8DC" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="📝 Utworzone" FontSize="14" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBlock x:Name="txtTotalStworzone" Text="0" FontSize="32" FontWeight="Bold" Foreground="#5C8A3A"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="20" Margin="5,0,5,0">
                <Border.Effect>
                    <DropShadowEffect Color="#D5D8DC" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="✅ Potwierdzone" FontSize="14" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBlock x:Name="txtTotalPotwierdzone" Text="0" FontSize="32" FontWeight="Bold" Foreground="#3498DB"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="20" Margin="5,0,5,0">
                <Border.Effect>
                    <DropShadowEffect Color="#D5D8DC" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="⏳ Oczekujące" FontSize="14" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBlock x:Name="txtTotalOczekujace" Text="0" FontSize="32" FontWeight="Bold" Foreground="#F39C12"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="3" Background="White" CornerRadius="12" Padding="20" Margin="5,0,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="#D5D8DC" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="📊 % Potwierdzonych" FontSize="14" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBlock x:Name="txtProcentPotwierdzone" Text="0%" FontSize="32" FontWeight="Bold" Foreground="#9B59B6"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Główne statystyki -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Lewa kolumna -->
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Kto utworzył -->
                <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,10">
                    <Border.Effect>
                        <DropShadowEffect Color="#D5D8DC" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="👥 Kto Utworzył Wstawienia" FontSize="18" FontWeight="Bold" Foreground="#34495E" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Canvas x:Name="canvasStworzone" Grid.Column="0" Width="180" Height="180" Margin="10"/>
                            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="10,0,0,0">
                                <ItemsControl x:Name="itemsStworzone">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,8">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Button Background="Transparent" BorderThickness="0" Cursor="Hand" HorizontalContentAlignment="Stretch" Padding="0" Click="BtnPracownikDetails_Click" Tag="{Binding NazwaPracownika}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Ellipse Width="12" Height="12" Fill="{Binding Kolor}" Margin="0,0,8,0"/>
                                                        <TextBlock Text="{Binding NazwaPracownika}" FontWeight="SemiBold" Foreground="#5D6D7E" TextDecorations="Underline"/>
                                                        <TextBlock FontWeight="Bold" Foreground="#5C8A3A" Margin="5,0,0,0">
                                                            <Run Text=" ("/><Run Text="{Binding LiczbaAkcji}"/><Run Text=")"/>
                                                        </TextBlock>
                                                        <TextBlock FontStyle="Italic" Foreground="#7F8C8D" Margin="5,0,0,0">
                                                            <Run Text=" - "/><Run Text="{Binding ProcentTekst, Mode=OneWay}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Button>
                                                <Border Grid.Row="1" Height="8" Background="#EAECEE" CornerRadius="4" Margin="0,5,0,0">
                                                    <Border HorizontalAlignment="Left" Background="{Binding Kolor}" CornerRadius="4" Width="{Binding ProcentWidth, Mode=OneWay}"/>
                                                </Border>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Kto potwierdził -->
                <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="#D5D8DC" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="✅ Kto Potwierdził Wstawienia" FontSize="18" FontWeight="Bold" Foreground="#34495E" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Canvas x:Name="canvasPotwierdzone" Grid.Column="0" Width="180" Height="180" Margin="10"/>
                            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="10,0,0,0">
                                <ItemsControl x:Name="itemsPotwierdzone">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,8">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Button Background="Transparent" BorderThickness="0" Cursor="Hand" HorizontalContentAlignment="Stretch" Padding="0" Click="BtnPracownikDetails_Click" Tag="{Binding NazwaPracownika}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Ellipse Width="12" Height="12" Fill="{Binding Kolor}" Margin="0,0,8,0"/>
                                                        <TextBlock Text="{Binding NazwaPracownika}" FontWeight="SemiBold" Foreground="#5D6D7E" TextDecorations="Underline"/>
                                                        <TextBlock FontWeight="Bold" Foreground="#3498DB" Margin="5,0,0,0">
                                                            <Run Text=" ("/><Run Text="{Binding LiczbaAkcji}"/><Run Text=")"/>
                                                        </TextBlock>
                                                        <TextBlock FontStyle="Italic" Foreground="#7F8C8D" Margin="5,0,0,0">
                                                            <Run Text=" - "/><Run Text="{Binding ProcentTekst, Mode=OneWay}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Button>
                                                <Border Grid.Row="1" Height="8" Background="#EAECEE" CornerRadius="4" Margin="0,5,0,0">
                                                    <Border HorizontalAlignment="Left" Background="{Binding Kolor}" CornerRadius="4" Width="{Binding ProcentWidth, Mode=OneWay}"/>
                                                </Border>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Prawa kolumna - Tabela -->
            <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="20" Margin="10,0,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="#D5D8DC" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="📋 Szczegółowa Lista Wstawień" FontSize="18" FontWeight="Bold" Foreground="#34495E" Margin="0,0,0,15"/>
                    <DataGrid x:Name="dgSzczegoly" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False" GridLinesVisibility="Horizontal" HeadersVisibility="Column" BorderThickness="0" Background="White" RowBackground="White" AlternatingRowBackground="#F8F9FA" FontSize="12">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Lp" Binding="{Binding Lp}" Width="50"/>
                            <DataGridTextColumn Header="Dostawca" Binding="{Binding Dostawca}" Width="150"/>
                            <DataGridTextColumn Header="Data Wstawienia" Binding="{Binding DataWstawienia, StringFormat=dd.MM.yyyy}" Width="120"/>
                            <DataGridTextColumn Header="Ilość" Binding="{Binding IloscWstawienia}" Width="80"/>
                            <DataGridTextColumn Header="Utworzył" Binding="{Binding KtoStworzyl}" Width="120"/>
                            <DataGridTextColumn Header="Data Utw." Binding="{Binding DataUtw, StringFormat=dd.MM.yyyy HH:mm}" Width="130"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Potwierdził" Binding="{Binding KtoPotwierdził}" Width="120"/>
                            <DataGridTextColumn Header="Data Potw." Binding="{Binding DataConf, StringFormat=dd.MM.yyyy HH:mm}" Width="130"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
