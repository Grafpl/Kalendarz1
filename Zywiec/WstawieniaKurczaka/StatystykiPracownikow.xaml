<Window x:Class="Kalendarz1.StatystykiPracownikow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalendarz1"
        mc:Ignorable="d"
        Title="📊 Statystyki Efektywności Pracowników" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F7">
    <Window.Resources>
        <Style x:Key="FilterButton" TargetType="Button">
            <Setter Property="Background" Value="#EAECEE"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#BDC3C7"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Selected">
                                <Setter TargetName="border" Property="Background" Value="#5C8A3A"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Statystyki Efektywności Pracowników" FontSize="22" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="📅 Dziś" Style="{StaticResource FilterButton}" Margin="0,0,10,0" Click="FilterButton_Click" Tag="Today"/>
            <Button Content="📊 Tydzień" Style="{StaticResource FilterButton}" Margin="0,0,10,0" Click="FilterButton_Click" Tag="Week"/>
            <Button Content="📆 Miesiąc" Style="{StaticResource FilterButton}" Margin="0,0,10,0" Click="FilterButton_Click" Tag="Month"/>
            <Button Content="🗓️ Rok" Style="{StaticResource FilterButton}" Click="FilterButton_Click" Tag="Year"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="👥 Kto utworzył wstawienia" FontSize="16" FontWeight="Bold" Foreground="#34495E" Margin="0,0,0,15"/>
                    <ItemsControl x:Name="itemsWstawienia">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding NazwaPracownika}" FontWeight="SemiBold" Foreground="#5D6D7E"/>
                                        <TextBlock Text="{Binding LiczbaAkcji, StringFormat=' ({0})'}" Foreground="#5C8A3A" FontWeight="Bold"/>
                                    </StackPanel>
                                    <Border Grid.Row="1" Height="12" Background="#EAECEE" CornerRadius="6" Margin="0,5,0,0">
                                        <Border HorizontalAlignment="Left" Background="#5C8A3A" CornerRadius="6" Width="{Binding Procent, Mode=OneWay}"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="20" Margin="10,0">
                <StackPanel>
                    <TextBlock Text="✅ Kto potwierdził wstawienia" FontSize="16" FontWeight="Bold" Foreground="#34495E" Margin="0,0,0,15"/>
                    <ItemsControl x:Name="itemsPotwierdzenia">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding NazwaPracownika}" FontWeight="SemiBold" Foreground="#5D6D7E"/>
                                        <TextBlock Text="{Binding LiczbaAkcji, StringFormat=' ({0})'}" Foreground="#3498DB" FontWeight="Bold"/>
                                    </StackPanel>
                                    <Border Grid.Row="1" Height="12" Background="#EAECEE" CornerRadius="6" Margin="0,5,0,0">
                                        <Border HorizontalAlignment="Left" Background="#3498DB" CornerRadius="6" Width="{Binding Procent, Mode=OneWay}"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="20" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="📞 Kto kontaktował się z hodowcami" FontSize="16" FontWeight="Bold" Foreground="#34495E" Margin="0,0,0,15"/>
                    <ItemsControl x:Name="itemsKontakty">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding NazwaPracownika}" FontWeight="SemiBold" Foreground="#5D6D7E"/>
                                        <TextBlock Text="{Binding LiczbaAkcji, StringFormat=' ({0})'}" Foreground="#F39C12" FontWeight="Bold"/>
                                    </StackPanel>
                                    <Border Grid.Row="1" Height="12" Background="#EAECEE" CornerRadius="6" Margin="0,5,0,0">
                                        <Border HorizontalAlignment="Left" Background="#F39C12" CornerRadius="6" Width="{Binding Procent, Mode=OneWay}"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</Window>