<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Kalendarz1.SzczegółyPracownika"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szczegoly Pracownika" 
        Width="1200" 
        Height="800"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F7">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Naglowek z nazwą pracownika -->
        <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#D5D8DC" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" x:Name="txtNazwaPracownika" Text="Pracownik" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
                <TextBlock Grid.Column="1" x:Name="txtOkres" Text="" FontSize="14" Foreground="#7F8C8D" VerticalAlignment="Bottom" Margin="20,0,0,5"/>
                <Button Grid.Column="2" Content="Zamknij" Click="BtnZamknij_Click" Padding="15,8" FontSize="13" Background="#E74C3C" Foreground="White" BorderThickness="0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Podsumowanie statystyk -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="20" Margin="0,0,5,0">
                <Border.Effect>
                    <DropShadowEffect Color="#D5D8DC" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Utworzyl" FontSize="14" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBlock x:Name="txtLiczbaStworzone" Text="0" FontSize="32" FontWeight="Bold" Foreground="#5C8A3A"/>
                    <TextBlock Text="wstawien" FontSize="12" Foreground="#95A5A6"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="20" Margin="5,0">
                <Border.Effect>
                    <DropShadowEffect Color="#D5D8DC" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Potwierdzil" FontSize="14" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBlock x:Name="txtLiczbaPotwierdzone" Text="0" FontSize="32" FontWeight="Bold" Foreground="#3498DB"/>
                    <TextBlock Text="wstawien" FontSize="12" Foreground="#95A5A6"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="20" Margin="5,0,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="#D5D8DC" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Razem Akcji" FontSize="14" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBlock x:Name="txtLiczbaRazem" Text="0" FontSize="32" FontWeight="Bold" Foreground="#9B59B6"/>
                    <TextBlock Text="dzialań" FontSize="12" Foreground="#95A5A6"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Tabele z danymi -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Tabela: Co utworzyl -->
            <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="20" Margin="0,0,5,0">
                <Border.Effect>
                    <DropShadowEffect Color="#D5D8DC" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Co Utworzyl" FontSize="18" FontWeight="Bold" Foreground="#5C8A3A" Margin="0,0,0,15"/>
                    
                    <DataGrid Grid.Row="1" x:Name="dgStworzone" AutoGenerateColumns="False" IsReadOnly="True" 
                              CanUserAddRows="False" CanUserDeleteRows="False" GridLinesVisibility="Horizontal" 
                              HeadersVisibility="Column" BorderThickness="0" Background="White" 
                              RowBackground="White" AlternatingRowBackground="#F8F9FA" FontSize="11">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Lp" Binding="{Binding Lp}" Width="50"/>
                            <DataGridTextColumn Header="Dostawca" Binding="{Binding Dostawca}" Width="*"/>
                            <DataGridTextColumn Header="Data Wst." Binding="{Binding DataWstawienia, StringFormat=dd.MM.yyyy}" Width="90"/>
                            <DataGridTextColumn Header="Ilosc" Binding="{Binding IloscWstawienia}" Width="60"/>
                            <DataGridTextColumn Header="Data Utw." Binding="{Binding DataUtw, StringFormat=dd.MM.yyyy HH:mm}" Width="120"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Tabela: Co potwierdzil -->
            <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="20" Margin="5,0,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="#D5D8DC" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Co Potwierdzil" FontSize="18" FontWeight="Bold" Foreground="#3498DB" Margin="0,0,0,15"/>
                    
                    <DataGrid Grid.Row="1" x:Name="dgPotwierdzone" AutoGenerateColumns="False" IsReadOnly="True" 
                              CanUserAddRows="False" CanUserDeleteRows="False" GridLinesVisibility="Horizontal" 
                              HeadersVisibility="Column" BorderThickness="0" Background="White" 
                              RowBackground="White" AlternatingRowBackground="#F8F9FA" FontSize="11">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Lp" Binding="{Binding Lp}" Width="50"/>
                            <DataGridTextColumn Header="Dostawca" Binding="{Binding Dostawca}" Width="*"/>
                            <DataGridTextColumn Header="Data Wst." Binding="{Binding DataWstawienia, StringFormat=dd.MM.yyyy}" Width="90"/>
                            <DataGridTextColumn Header="Ilosc" Binding="{Binding IloscWstawienia}" Width="60"/>
                            <DataGridTextColumn Header="Utworzyl" Binding="{Binding KtoStworzyl}" Width="90"/>
                            <DataGridTextColumn Header="Data Potw." Binding="{Binding DataConf, StringFormat=dd.MM.yyyy HH:mm}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
