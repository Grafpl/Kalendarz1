<Window x:Class="Kalendarz1.DeliveryCalendarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kalendarz Dostaw"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#ECF0F1"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Style for week header -->
        <Style x:Key="WeekHeaderStyle" TargetType="Border">
            <Setter Property="Background" Value="#1565C0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <!-- Style for day header -->
        <Style x:Key="DayHeaderStyle" TargetType="Border">
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
        </Style>

        <Style x:Key="HeaderButton" TargetType="Button">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B732F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#5C8A3A"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E8F5E9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid styles -->
        <Style x:Key="DeliveryDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="RowHeight" Value="24"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#5C8A3A" Padding="20,15">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="Kalendarz Dostaw" FontSize="22" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Dzisiaj" Style="{StaticResource HeaderButton}" Click="BtnToday_Click" Margin="0,0,10,0"/>
                    <Button Content="Zamknij" Style="{StaticResource HeaderButton}" Click="BtnClose_Click" Background="#E74C3C"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Navigation / Date Range -->
        <Border Grid.Row="1" Background="White" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Poprzednie" Style="{StaticResource NavButton}" Click="BtnPrevWeeks_Click" Width="100"/>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBlock x:Name="txtDateRange" Text="tyg. 1-8 (01.01 - 25.02)" FontSize="18" FontWeight="Bold"
                               Foreground="#2C3E50" VerticalAlignment="Center"/>
                    <Border Background="#FFF3E0" CornerRadius="6" Padding="10,5" Margin="20,0,0,0" VerticalAlignment="Center">
                        <TextBlock x:Name="txtTotalSummary" Text="Suma: 0 szt. | 0 aut" FontSize="12" FontWeight="SemiBold" Foreground="#EF6C00"/>
                    </Border>
                </StackPanel>

                <Button Grid.Column="2" Content="Nastepne" Style="{StaticResource NavButton}" Click="BtnNextWeeks_Click" Width="100"/>
            </Grid>
        </Border>

        <!-- Main Content - Split into two columns like Dostawy Zywca -->
        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - First set of weeks -->
            <Border Grid.Column="0" Margin="3" Background="White" CornerRadius="4" BorderBrush="#5C8A3A" BorderThickness="2">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" Color="#000000" Opacity="0.1" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#5C8A3A" Padding="10,6">
                        <TextBlock x:Name="txtLeftPanelHeader" Text="tyg.4 (19.01-25.01)" FontWeight="Bold" FontSize="12" Foreground="White"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="panelLeftWeeks"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Right Panel - Second set of weeks -->
            <Border Grid.Column="1" Margin="3" Background="White" CornerRadius="4" BorderBrush="#3498DB" BorderThickness="2">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" Color="#000000" Opacity="0.1" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#3498DB" Padding="10,6">
                        <TextBlock x:Name="txtRightPanelHeader" Text="tyg.5 (26.01-01.02)" FontWeight="Bold" FontSize="12" Foreground="White"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="panelRightWeeks"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Legend -->
        <Border Grid.Row="3" Background="White" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Border Background="#E8F5E9" CornerRadius="4" Padding="8,4" Margin="5,0">
                    <TextBlock Text="Zielony = Poniżej 50%" FontSize="11" Foreground="#2E7D32"/>
                </Border>
                <Border Background="#FFF3E0" CornerRadius="4" Padding="8,4" Margin="5,0">
                    <TextBlock Text="Żółty = 50-80%" FontSize="11" Foreground="#EF6C00"/>
                </Border>
                <Border Background="#FFEBEE" CornerRadius="4" Padding="8,4" Margin="5,0">
                    <TextBlock Text="Czerwony = Powyżej 80%" FontSize="11" Foreground="#C62828"/>
                </Border>
                <Border Background="#F3E5F5" CornerRadius="4" Padding="8,4" Margin="5,0">
                    <TextBlock Text="Limit: 80 000 szt./dzień" FontSize="11" FontWeight="Bold" Foreground="#7B1FA2"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
