<Window x:Class="Kalendarz1.Zywiec.WidokSpecyfikacji.NowaSpecyfikacjaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nowa Specyfikacja" 
        MinHeight="420" MinWidth="550"
        Height="480" Width="620"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F8FAFC"
        KeyDown="Window_KeyDown">
    
    <Window.Resources>
        <Style x:Key="FieldBox" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
        
        <Style x:Key="FieldCombo" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>
    
    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Grid Width="600" MinHeight="410">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- NAGÅÃ“WEK -->
            <Border Grid.Row="0" Background="#1E3A5F" Padding="20,14">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel>
                        <TextBlock x:Name="lblTytul" Text="âž• Nowa Specyfikacja" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="lblInfo" Text="Enter = Zapisz â€¢ Escape = Anuluj" 
                                   FontSize="11" Foreground="#94A3B8" Margin="0,2,0,0"/>
                    </StackPanel>
                    
                    <Border Grid.Column="1" Background="#3B82F6" CornerRadius="6" Padding="15,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Nr " FontSize="14" Foreground="#BFDBFE" VerticalAlignment="Center"/>
                            <TextBlock x:Name="lblNumerSpec" Text="1" FontSize="22" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            
            <!-- ZAWARTOÅšÄ† -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20,15">
                <StackPanel>
                    
                    <!-- INFO O DUPLIKACIE -->
                    <Border x:Name="pnlDuplikatInfo" Background="#FEF3C7" CornerRadius="8" Padding="12,10" Margin="0,0,0,15" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="ðŸ“‹ DUPLIKOWANIE USTAWIEÅƒ" FontSize="11" FontWeight="Bold" Foreground="#92400E" Margin="0,0,0,4"/>
                            <TextBlock x:Name="lblDuplikatInfo" Text="" FontSize="12" Foreground="#78350F" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- POWIÄ„ZANIE Z DOSTAWÄ„ -->
                    <Border Background="#DBEAFE" CornerRadius="8" Padding="12,10" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸ”— DOÅÄ„CZ DO ISTNIEJÄ„CEJ DOSTAWY (opcjonalnie)" FontSize="11" FontWeight="Bold" Foreground="#1E40AF" Margin="0,0,0,8"/>
                            <ComboBox x:Name="cmbPowiazanaSpec" FontSize="13" Padding="8,6"
                                      SelectionChanged="CmbPowiazanaSpec_SelectionChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Run Text="Nr "/><Run Text="{Binding CarLp}" FontWeight="Bold"/>
                                            <Run Text=" - "/><Run Text="{Binding Hodowca}"/>
                                            <Run Text=" ("/>
                                            <Run Text="{Binding Ciagnik}" Foreground="#6B7280"/>
                                            <Run Text=")"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <TextBlock Text="Wybierz jeÅ›li ten sam samochÃ³d przywiÃ³zÅ‚ kilku hodowcÃ³w" 
                                       FontSize="10" Foreground="#3B82F6" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Data i Hodowca -->
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="DATA UBOJU" Style="{StaticResource FieldLabel}"/>
                            <Border Style="{StaticResource FieldBox}">
                                <DatePicker x:Name="dpDataUboju" BorderThickness="0" FontSize="14"
                                            SelectedDateChanged="DpDataUboju_SelectedDateChanged"/>
                            </Border>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="ðŸ” HODOWCA (dostawca)" Style="{StaticResource FieldLabel}"/>
                            <Border Style="{StaticResource FieldBox}">
                                <ComboBox x:Name="cmbHodowca" Style="{StaticResource FieldCombo}"
                                          IsEditable="True" StaysOpenOnEdit="True"
                                          IsTextSearchEnabled="True"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Transport -->
                    <TextBlock Text="ðŸšš TRANSPORT" Style="{StaticResource FieldLabel}" Margin="0,5,0,0"/>
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" Style="{StaticResource FieldBox}">
                            <StackPanel>
                                <TextBlock Text="CiÄ…gnik" FontSize="10" Foreground="#94A3B8" Margin="0,0,0,4"/>
                                <ComboBox x:Name="cmbCiagnik" Style="{StaticResource FieldCombo}" IsEditable="True"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Column="2" Style="{StaticResource FieldBox}">
                            <StackPanel>
                                <TextBlock Text="Naczepa" FontSize="10" Foreground="#94A3B8" Margin="0,0,0,4"/>
                                <ComboBox x:Name="cmbNaczepa" Style="{StaticResource FieldCombo}" IsEditable="True"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Column="4" Style="{StaticResource FieldBox}">
                            <StackPanel>
                                <TextBlock Text="Kierowca" FontSize="10" Foreground="#94A3B8" Margin="0,0,0,4"/>
                                <ComboBox x:Name="cmbKierowca" Style="{StaticResource FieldCombo}" IsEditable="True"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Opcja: dodaj kolejnÄ… -->
                    <Border Background="#EFF6FF" CornerRadius="6" Padding="12,10" Margin="0,12,0,0">
                        <CheckBox x:Name="chkDodajKolejna" Foreground="#1E40AF" FontSize="13">
                            <CheckBox.Content>
                                <TextBlock>
                                    <Run Text="âž• Dodaj kolejnÄ…" FontWeight="SemiBold"/>
                                    <Run Text=" po zapisie"/>
                                </TextBlock>
                            </CheckBox.Content>
                        </CheckBox>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- STOPKA -->
            <Border Grid.Row="2" Background="#E2E8F0" Padding="20,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button x:Name="btnAnuluj" Content="Anuluj" 
                            Style="{StaticResource ActionButton}"
                            Background="#94A3B8" Foreground="White"
                            Click="BtnAnuluj_Click"/>
                    
                    <TextBlock x:Name="lblOstatni" Grid.Column="1" 
                               Text="" FontSize="11" Foreground="#64748B"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    
                    <Button x:Name="btnZapisz" Content="ðŸ’¾ Zapisz" 
                            Grid.Column="2"
                            Style="{StaticResource ActionButton}"
                            Background="#16A34A" Foreground="White"
                            Click="BtnZapisz_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Viewbox>
</Window>
