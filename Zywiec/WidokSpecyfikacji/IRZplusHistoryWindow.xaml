<Window x:Class="Kalendarz1.IRZplusHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IRZplus - Historia wysylek"
        Height="650" Width="1000"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#757575"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#616161"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Padding" Value="4"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="Margin" Value="0,0,5,3"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naglowek -->
        <Border Grid.Row="0" Background="#1976D2" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Historia wysylek IRZplus"
                               FontSize="22" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="txtSubtitle" Text="Przegladaj historie zgloszen do ARiMR"
                               FontSize="13" Foreground="#BBDEFB" Margin="0,3,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="txtRecordCount" Text="0 rekordow"
                               FontSize="16" Foreground="White" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button Content="Odswiez" Click="BtnRefresh_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Panel filtrow -->
        <Border Grid.Row="1" Background="White" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Data od:" Style="{StaticResource LabelStyle}"/>
                    <DatePicker x:Name="dateFrom" Width="130" Style="{StaticResource DatePickerStyle}"/>
                </StackPanel>

                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Data do:" Style="{StaticResource LabelStyle}"/>
                    <DatePicker x:Name="dateTo" Width="130" Style="{StaticResource DatePickerStyle}"/>
                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" Margin="10,0,0,0">
                    <Button Content="Filtruj" Click="BtnFilter_Click" Style="{StaticResource PrimaryButtonStyle}" Width="80"/>
                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" Margin="5,0,0,0">
                    <Button Content="Dzisiaj" Click="BtnToday_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" Margin="5,0,0,0">
                    <Button Content="Ten tydzien" Click="BtnThisWeek_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" Margin="5,0,0,0">
                    <Button Content="Ten miesiac" Click="BtnThisMonth_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" Margin="5,0,0,0">
                    <Button Content="Wszystko" Click="BtnAll_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- DataGrid z historia -->
        <DataGrid x:Name="dgHistory" Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  CanUserSortColumns="True"
                  CanUserReorderColumns="True"
                  GridLinesVisibility="Horizontal"
                  AlternatingRowBackground="#FAFAFA"
                  RowBackground="White"
                  BorderBrush="#E0E0E0"
                  BorderThickness="0"
                  Margin="10"
                  MouseDoubleClick="DgHistory_MouseDoubleClick">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#ECEFF1"/>
                    <Setter Property="Foreground" Value="#37474F"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderBrush" Value="#CFD8DC"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="8,6"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Background="{TemplateBinding Background}"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#E3F2FD"/>
                            <Setter Property="Foreground" Value="#1565C0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Data wyslania" Binding="{Binding DataWyslania, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" Width="140"/>
                <DataGridTextColumn Header="Nr zgloszenia" Binding="{Binding NumerZgloszenia}" Width="120"/>
                <DataGridTemplateColumn Header="Status" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Padding="5,2" CornerRadius="3">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="WYSLANE">
                                                <Setter Property="Background" Value="#C8E6C9"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="PRZYJETE">
                                                <Setter Property="Background" Value="#A5D6A7"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="BLAD">
                                                <Setter Property="Background" Value="#FFCDD2"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="ODRZUCONE">
                                                <Setter Property="Background" Value="#FFCDD2"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding Status}" FontWeight="Medium" HorizontalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Data uboju" Binding="{Binding DataUboju, StringFormat='{}{0:dd.MM.yyyy}'}" Width="100"/>
                <DataGridTextColumn Header="Dostawcow" Binding="{Binding IloscDyspozycji}" Width="90"/>
                <DataGridTextColumn Header="Sztuk" Binding="{Binding SumaIloscSztuk, StringFormat=N0}" Width="90"/>
                <DataGridTextColumn Header="Waga [kg]" Binding="{Binding SumaWagaKg, StringFormat=N2}" Width="100"/>
                <DataGridTextColumn Header="Uzytkownik" Binding="{Binding UzytkownikNazwa}" Width="120"/>
                <DataGridTextColumn Header="Uwagi" Binding="{Binding Uwagi}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pasek statusu -->
        <Border Grid.Row="3" Background="#ECEFF1" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtStatus" Text="Gotowe" VerticalAlignment="Center" Foreground="#616161"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0">
                    <Button Content="Sprawdz status" Click="BtnCheckStatus_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                    <Button Content="Pokaz szczegoly" Click="BtnShowDetails_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>

                <Button Grid.Column="2" Content="Zamknij" Click="BtnClose_Click"
                        Style="{StaticResource SecondaryButtonStyle}" Width="80"/>
            </Grid>
        </Border>
    </Grid>
</Window>
