<Window x:Class="Kalendarz1.Zywiec.WidokSpecyfikacji.IRZplusExportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eksport IRZplus - Zgloszenie Uboju Drobiu"
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="600" MinWidth="750"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NAGLOWEK -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Eksport do pliku CSV/XML" FontSize="26" FontWeight="Bold" Foreground="#1976D2"/>
            <TextBlock Text="Wygeneruj plik do recznego importu w portalu IRZplus (gdy API nie dziala)"
                       Foreground="#666" FontSize="14" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- TYP DOKUMENTU -->
        <GroupBox Grid.Row="1" Header="Typ dokumentu" Margin="0,0,0,10" Padding="15" FontSize="14">
            <StackPanel>
                <RadioButton x:Name="rbZURD" IsChecked="True" GroupName="TypDokumentu" Margin="5,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ZURD - Zgloszenie Uboju Drobiu w Rzezni" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="  (sklada RZEZNIA)" Foreground="#666" FontSize="12" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton x:Name="rbZSSD" GroupName="TypDokumentu" Margin="5,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ZSSD - Zgloszenie Zmiany Stanu Stada" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="  (plik DLA HODOWCY)" Foreground="#666" FontSize="12" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
            </StackPanel>
        </GroupBox>

        <!-- FORMAT PLIKU -->
        <GroupBox Grid.Row="2" Header="Format i tryb eksportu" Margin="0,0,0,10" Padding="15" FontSize="14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Format pliku -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Format pliku:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <RadioButton x:Name="rbCSV" IsChecked="True" GroupName="Format" Margin="10,5" VerticalContentAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="CSV (zalecany)" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="Import: 'Wczytaj dane z pliku CSV/TXT'" Foreground="#666" FontSize="11"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton x:Name="rbXML" GroupName="Format" Margin="10,5" VerticalContentAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="XML" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="Import: 'Import z pliku XML'" Foreground="#666" FontSize="11"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>

                <!-- Tryb eksportu -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Tryb eksportu:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <RadioButton x:Name="rbPojedynczo" IsChecked="True" GroupName="TrybEksportu" Margin="10,5" VerticalContentAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="POJEDYNCZO (kazde auto osobny plik)" FontWeight="Bold" FontSize="14" Foreground="#1976D2"/>
                            <TextBlock Text="Pliki: 1-Kowalski-16-01-2026.csv, 2-Nowak-16-01-2026.csv..." Foreground="#666" FontSize="11"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton x:Name="rbRazem" GroupName="TrybEksportu" Margin="10,5" VerticalContentAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="RAZEM (wszystko w jednym pliku)" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="Plik: ZURD_RAZEM_16-01-2026.csv" Foreground="#666" FontSize="11"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- PODSUMOWANIE ZGLOSZENIA -->
        <GroupBox Grid.Row="3" Header="Podsumowanie zgloszenia" Margin="0,0,0,10" Padding="15" FontSize="14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Kolumna 1 -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Data uboju: " FontWeight="Bold"/>
                    <TextBlock x:Name="txtDataUboju" Text="-" FontSize="14"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Numer rzezni: " FontWeight="Bold"/>
                    <TextBlock x:Name="txtNumerRzezni" Text="039806095-001" FontSize="14"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Nr partii uboju: " FontWeight="Bold"/>
                    <TextBlock x:Name="txtNumerPartii" Text="-" FontSize="14"/>
                </StackPanel>
                <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Gatunek: " FontWeight="Bold"/>
                    <TextBlock x:Name="txtGatunek" Text="KURY" FontSize="14"/>
                </StackPanel>

                <!-- Kolumna 2 -->
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Liczba pozycji (autow): " FontWeight="Bold"/>
                    <TextBlock x:Name="txtLiczbaPozycji" Text="-" Foreground="#1976D2" FontWeight="Bold" FontSize="14"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Liczba hodowcow: " FontWeight="Bold"/>
                    <TextBlock x:Name="txtLiczbaHodowcow" Text="-" FontSize="14"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Suma sztuk: " FontWeight="Bold"/>
                    <TextBlock x:Name="txtSumaSztuk" Text="-" Foreground="Green" FontWeight="Bold" FontSize="14"/>
                </StackPanel>
                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Suma masa: " FontWeight="Bold"/>
                    <TextBlock x:Name="txtSumaMasa" Text="-" FontSize="14"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- PODGLAD POZYCJI -->
        <GroupBox Grid.Row="4" Header="Podglad pozycji (transporty/auty)" Margin="0,0,0,10" Padding="5" FontSize="14">
            <DataGrid x:Name="dgPodglad" AutoGenerateColumns="False" IsReadOnly="True"
                      CanUserAddRows="False" CanUserDeleteRows="False"
                      HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                      AlternatingRowBackground="#F8F8F8" FontSize="12">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Lp" Binding="{Binding Lp}" Width="40"/>
                    <DataGridTextColumn Header="Nr partii drobiu" Binding="{Binding NumerPartiiDrobiu}" Width="130"/>
                    <DataGridTextColumn Header="Typ" Binding="{Binding TypZdarzenia}" Width="50"/>
                    <DataGridTextColumn Header="Liczba szt." Binding="{Binding LiczbaSztuk, StringFormat=N0}" Width="90"/>
                    <DataGridTextColumn Header="Masa (kg)" Binding="{Binding MasaKg, StringFormat=N2}" Width="100"/>
                    <DataGridTextColumn Header="Data" Binding="{Binding DataZdarzenia, StringFormat=dd-MM-yyyy}" Width="90"/>
                    <DataGridTextColumn Header="Przyjete z dzialalnosci" Binding="{Binding PrzyjeteZDzialalnosci}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- PRZYCISKI -->
        <Border Grid.Row="5" Background="#E0E0E0" Padding="20" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnOtworzFolder" Grid.Column="0" Content="Otworz folder eksportu"
                        Width="200" Height="45" FontSize="13"
                        Click="BtnOtworzFolder_Click"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="btnEksportuj" Content="EKSPORTUJ"
                            Width="180" Height="50" FontSize="16" FontWeight="Bold"
                            Background="#4CAF50" Foreground="White"
                            Click="BtnEksportuj_Click"/>
                    <Button x:Name="btnAnuluj" Content="Anuluj"
                            Width="120" Height="50" FontSize="14"
                            Margin="15,0,0,0"
                            Click="BtnAnuluj_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
