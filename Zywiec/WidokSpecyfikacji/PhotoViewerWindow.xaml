<Window x:Class="Kalendarz.Zywiec.WidokSpecyfikacji.PhotoViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Podglad zdjecia"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        KeyDown="Window_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Pasek narzędzi -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="10,8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnZoomIn" Content="+ Zoom" Click="BtnZoomIn_Click"
                        Width="80" Height="32" Margin="0,0,5,0"
                        Background="#3C3C3C" Foreground="White" BorderThickness="0"
                        FontSize="13" Cursor="Hand"/>
                <Button x:Name="btnZoomOut" Content="- Zoom" Click="BtnZoomOut_Click"
                        Width="80" Height="32" Margin="0,0,5,0"
                        Background="#3C3C3C" Foreground="White" BorderThickness="0"
                        FontSize="13" Cursor="Hand"/>
                <Button x:Name="btnZoom100" Content="100%" Click="BtnZoom100_Click"
                        Width="60" Height="32" Margin="0,0,5,0"
                        Background="#3C3C3C" Foreground="White" BorderThickness="0"
                        FontSize="13" Cursor="Hand"/>
                <Button x:Name="btnFitToWindow" Content="Dopasuj" Click="BtnFitToWindow_Click"
                        Width="80" Height="32" Margin="0,0,20,0"
                        Background="#3C3C3C" Foreground="White" BorderThickness="0"
                        FontSize="13" Cursor="Hand"/>
                <TextBlock x:Name="txtZoomLevel" Text="100%" VerticalAlignment="Center"
                           Foreground="#CCCCCC" FontSize="13" Margin="0,0,20,0"/>
                <Button x:Name="btnRotateLeft" Content="Obroc w lewo" Click="BtnRotateLeft_Click"
                        Width="100" Height="32" Margin="0,0,5,0"
                        Background="#3C3C3C" Foreground="White" BorderThickness="0"
                        FontSize="13" Cursor="Hand"/>
                <Button x:Name="btnRotateRight" Content="Obroc w prawo" Click="BtnRotateRight_Click"
                        Width="100" Height="32"
                        Background="#3C3C3C" Foreground="White" BorderThickness="0"
                        FontSize="13" Cursor="Hand"/>
            </StackPanel>
        </Border>

        <!-- Obszar zdjęcia z możliwością przewijania -->
        <Border Grid.Row="1" Background="#1E1E1E" ClipToBounds="True">
            <ScrollViewer x:Name="scrollViewer"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          Background="Transparent"
                          PreviewMouseWheel="ScrollViewer_PreviewMouseWheel"
                          PreviewMouseLeftButtonDown="ScrollViewer_PreviewMouseLeftButtonDown"
                          PreviewMouseLeftButtonUp="ScrollViewer_PreviewMouseLeftButtonUp"
                          PreviewMouseMove="ScrollViewer_PreviewMouseMove"
                          Cursor="Hand">
                <Grid x:Name="imageContainer"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      RenderTransformOrigin="0.5,0.5">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                            <RotateTransform x:Name="rotateTransform" Angle="0"/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <Image x:Name="imgPhoto"
                           Stretch="None"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Pasek statusu -->
        <Border Grid.Row="2" Background="#2D2D2D" Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock x:Name="txtFileName" Text="Nazwa pliku"
                               Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtFilePath" Text="Sciezka do pliku"
                               Foreground="#888888" FontSize="11"
                               TextTrimming="CharacterEllipsis"
                               ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                    <TextBlock x:Name="txtImageInfo" Text="Wymiary: - | Rozmiar: -"
                               Foreground="#666666" FontSize="10" Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="btnOpenFolder" Content="Otworz folder" Click="BtnOpenFolder_Click"
                            Height="32" Padding="15,0"
                            Background="#0078D4" Foreground="White" BorderThickness="0"
                            FontSize="12" Cursor="Hand" Margin="0,0,10,0"/>
                    <Button x:Name="btnClose" Content="Zamknij" Click="BtnClose_Click"
                            Height="32" Padding="15,0"
                            Background="#3C3C3C" Foreground="White" BorderThickness="0"
                            FontSize="12" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
