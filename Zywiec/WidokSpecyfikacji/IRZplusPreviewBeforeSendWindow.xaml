<Window x:Class="Kalendarz1.Zywiec.WidokSpecyfikacji.IRZplusPreviewBeforeSendWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Podglad danych przed wyslaniem do API IRZplus"
        Width="1100" Height="700"
        MinWidth="900" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#37474F"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1976D2"/>
        </Style>

        <Style x:Key="SendButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#388E3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2E7D32"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1B5E20"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#757575"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#616161"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naglowek z informacjami o srodowisku -->
        <Border Grid.Row="0" Padding="15,12">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#1976D2" Offset="0"/>
                    <GradientStop Color="#1565C0" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="PODGLAD DANYCH PRZED WYSLANIEM DO API"
                               FontSize="16" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Sprawdz czy wszystkie dane sa poprawne przed wyslaniem zgloszenia ZURD"
                               FontSize="11" Foreground="#BBDEFB" Margin="0,3,0,0"/>
                </StackPanel>

                <Border Grid.Column="1" x:Name="borderEnv" Background="#FF9800" CornerRadius="4" Padding="12,6">
                    <TextBlock x:Name="txtEnvironment" Text="SRODOWISKO TESTOWE"
                               FontSize="12" FontWeight="Bold" Foreground="White"/>
                </Border>
            </Grid>
        </Border>

        <!-- Podsumowanie -->
        <Border Grid.Row="1" Background="White" Margin="10,5,10,5" Padding="15,10"
                BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,30,0">
                    <TextBlock Text="Data uboju:" Style="{StaticResource HeaderStyle}"/>
                    <TextBlock x:Name="txtDataUboju" Text="-" Style="{StaticResource ValueStyle}" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0,0,30,0">
                    <TextBlock Text="Liczba pozycji:" Style="{StaticResource HeaderStyle}"/>
                    <TextBlock x:Name="txtLiczbaPozycji" Text="0" Style="{StaticResource ValueStyle}" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="0,0,30,0">
                    <TextBlock Text="Suma sztuk:" Style="{StaticResource HeaderStyle}"/>
                    <TextBlock x:Name="txtSumaSztuk" Text="0" Style="{StaticResource ValueStyle}" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Margin="0,0,30,0">
                    <TextBlock Text="Suma wagi (kg):" Style="{StaticResource HeaderStyle}"/>
                    <TextBlock x:Name="txtSumaWagi" Text="0.00" Style="{StaticResource ValueStyle}" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="4" Margin="0,0,30,0">
                    <TextBlock Text="Numer rzezni:" Style="{StaticResource HeaderStyle}"/>
                    <TextBlock x:Name="txtNumerRzezni" Text="039806095-001" Style="{StaticResource ValueStyle}" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="5">
                    <TextBlock Text="Gatunek:" Style="{StaticResource HeaderStyle}"/>
                    <TextBlock x:Name="txtGatunek" Text="KURY" Style="{StaticResource ValueStyle}" FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- TabControl z danymi i JSON-em -->
        <TabControl Grid.Row="2" Margin="10,5,10,5">
            <!-- Zakladka z tabela danych -->
            <TabItem Header="Dane do wyslania" Padding="15,5">
                <Border BorderBrush="#E0E0E0" BorderThickness="1">
                    <DataGrid x:Name="dgPodglad"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              CanUserSortColumns="True"
                              GridLinesVisibility="All"
                              HorizontalGridLinesBrush="#E0E0E0"
                              VerticalGridLinesBrush="#E0E0E0"
                              AlternatingRowBackground="#FAFAFA"
                              RowBackground="White"
                              BorderThickness="0"
                              FontSize="11"
                              RowHeight="24"
                              ColumnHeaderHeight="28">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#37474F"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="BorderBrush" Value="#263238"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="6,4"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Lp" Binding="{Binding Lp}" Width="40">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Hodowca" Binding="{Binding Hodowca}" Width="150"/>

                            <DataGridTextColumn Header="NumerIdenPartiiDrobiu" Binding="{Binding NumerIdenPartiiDrobiu}" Width="130">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="#1565C0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="LiczbaDrobiu" Binding="{Binding LiczbaDrobiu, StringFormat=N0}" Width="90">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="MasaDrobiu (kg)" Binding="{Binding MasaDrobiu, StringFormat=N2}" Width="110">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#388E3C"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="TypZdarzenia" Binding="{Binding TypZdarzenia}" Width="90">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="DataZdarzenia" Binding="{Binding DataZdarzenia}" Width="100"/>

                            <DataGridTextColumn Header="DataKupnaWwozu" Binding="{Binding DataKupnaWwozu}" Width="110"/>

                            <DataGridTextColumn Header="PrzyjeteZDzialalnosci" Binding="{Binding PrzyjeteZDzialalnosci}" Width="140">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#E65100"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridCheckBoxColumn Header="UbojRytualny" Binding="{Binding UbojRytualny}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>

            <!-- Zakladka z surowym JSON-em -->
            <TabItem Header="JSON Request" Padding="15,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5,0,5">
                        <TextBlock Text="Surowy JSON ktory zostanie wyslany do API:"
                                   FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <Button x:Name="btnCopyJson" Content="Kopiuj JSON" Margin="15,0,0,0"
                                Padding="10,5" Background="#E3F2FD" Foreground="#1976D2"
                                BorderThickness="1" BorderBrush="#1976D2" Cursor="Hand"
                                Click="BtnCopyJson_Click"/>
                    </StackPanel>

                    <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" Background="White">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <TextBox x:Name="txtJson"
                                     IsReadOnly="True"
                                     TextWrapping="NoWrap"
                                     FontFamily="Consolas"
                                     FontSize="11"
                                     Padding="10"
                                     BorderThickness="0"
                                     Background="White"
                                     AcceptsReturn="True"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Przyciski dolne -->
        <Border Grid.Row="3" Background="#ECEFF1" Padding="15,12" BorderBrush="#B0BEC5" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtInfo" Text="Sprawdz dane i kliknij 'Wyslij' aby wyslac zgloszenie do API IRZplus"
                           VerticalAlignment="Center" Foreground="#616161" FontStyle="Italic"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="btnSend" Content="WYSLIJ DO API" Style="{StaticResource SendButtonStyle}"
                            Click="BtnSend_Click" Margin="0,0,10,0"/>
                    <Button x:Name="btnCancel" Content="Anuluj" Style="{StaticResource CancelButtonStyle}"
                            Click="BtnCancel_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
