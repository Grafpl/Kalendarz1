<Window x:Class="Kalendarz1.IRZplusSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IRZplus - Ustawienia"
        Height="580" Width="550"
        MinHeight="500" MinWidth="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#757575"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#616161"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TestButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#388E3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2E7D32"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naglowek -->
        <Border Grid.Row="0" Background="#1976D2" Padding="20,15">
            <StackPanel>
                <TextBlock Text="Ustawienia IRZplus"
                           FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Konfiguracja polaczenia z systemem ARiMR"
                           FontSize="12" Foreground="#BBDEFB" Margin="0,3,0,0"/>
            </StackPanel>
        </Border>

        <!-- Formularz -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Dane ubojni -->
                <TextBlock Text="DANE UBOJNI" FontSize="12" FontWeight="Bold" Foreground="#1976D2" Margin="0,0,0,10"/>

                <TextBlock Text="Numer weterynaryjny ubojni:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtNumerUbojni" Style="{StaticResource TextBoxStyle}" Margin="0,0,0,15"/>

                <TextBlock Text="Nazwa ubojni:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtNazwaUbojni" Style="{StaticResource TextBoxStyle}" Margin="0,0,0,20"/>

                <!-- Dane logowania OAuth -->
                <TextBlock Text="DANE LOGOWANIA API" FontSize="12" FontWeight="Bold" Foreground="#1976D2" Margin="0,10,0,10"/>

                <TextBlock Text="Client ID:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtClientId" Style="{StaticResource TextBoxStyle}" Margin="0,0,0,15"/>

                <TextBlock Text="Client Secret:" Style="{StaticResource LabelStyle}"/>
                <PasswordBox x:Name="txtClientSecret" Style="{StaticResource PasswordBoxStyle}" Margin="0,0,0,15"/>

                <TextBlock Text="Nazwa uzytkownika:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtUsername" Style="{StaticResource TextBoxStyle}" Margin="0,0,0,15"/>

                <TextBlock Text="Haslo:" Style="{StaticResource LabelStyle}"/>
                <PasswordBox x:Name="txtPassword" Style="{StaticResource PasswordBoxStyle}" Margin="0,0,0,20"/>

                <!-- Srodowisko -->
                <TextBlock Text="SRODOWISKO" FontSize="12" FontWeight="Bold" Foreground="#1976D2" Margin="0,10,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <RadioButton x:Name="rbTestEnv" Content="Srodowisko testowe (zalecane na poczatek)"
                                 GroupName="Environment" IsChecked="True" Margin="0,0,20,0"/>
                    <RadioButton x:Name="rbProdEnv" Content="Srodowisko produkcyjne"
                                 GroupName="Environment" Foreground="#D32F2F" FontWeight="SemiBold"/>
                </StackPanel>

                <Border Background="#FFF3E0" Padding="10" CornerRadius="4" Margin="0,0,0,20">
                    <TextBlock TextWrapping="Wrap" Foreground="#E65100" FontSize="11">
                        <Run FontWeight="Bold">Uwaga:</Run>
                        <Run>Przed uzyciem srodowiska produkcyjnego, przetestuj integracje na srodowisku testowym!</Run>
                    </TextBlock>
                </Border>

                <!-- Opcje dodatkowe -->
                <TextBlock Text="OPCJE DODATKOWE" FontSize="12" FontWeight="Bold" Foreground="#1976D2" Margin="0,10,0,10"/>

                <CheckBox x:Name="chkSaveLocalCopy" Content="Zapisuj lokalna kopie przed wyslaniem" IsChecked="True" Margin="0,0,0,10"/>
                <CheckBox x:Name="chkAutoSend" Content="Automatycznie wysylaj przy zapisie specyfikacji (zaawansowane)" Margin="0,0,0,15"/>

                <TextBlock Text="Sciezka do lokalnych kopii:" Style="{StaticResource LabelStyle}"/>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtExportPath" Grid.Column="0" Style="{StaticResource TextBoxStyle}"/>
                    <Button Grid.Column="1" Content="..." Width="40" Margin="5,0,0,0"
                            Style="{StaticResource SecondaryButtonStyle}" Click="BtnBrowse_Click" Padding="10,8"/>
                </Grid>

                <!-- Test polaczenia -->
                <Border Background="#E3F2FD" Padding="15" CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="TEST POLACZENIA" FontSize="12" FontWeight="Bold" Foreground="#1976D2" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btnTestConnection" Content="Testuj polaczenie" Click="BtnTestConnection_Click"
                                    Style="{StaticResource TestButtonStyle}"/>
                            <TextBlock x:Name="txtTestResult" VerticalAlignment="Center" Margin="15,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Przyciski -->
        <Border Grid.Row="2" Background="#ECEFF1" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Zapisz" Click="BtnSave_Click" Style="{StaticResource PrimaryButtonStyle}"/>
                <Button Content="Anuluj" Click="BtnCancel_Click" Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
