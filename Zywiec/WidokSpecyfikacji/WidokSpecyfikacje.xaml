<Window x:Class="Kalendarz1.WidokSpecyfikacje"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Specyfikacje Dostaw - System Piórkowscy" 
        Height="750" Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F5F5"
        FontFamily="Segoe UI"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Styl dla przycisków głównych -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B732F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A5C24"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl dla przycisków pomocniczych -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#7F8C8D"/>
        </Style>

        <!-- Styl dla nagłówków DataGrid -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="5,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#4B732F"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>

        <!-- Styl dla komórek DataGrid -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla DataGrid -->
        <Style x:Key="MainDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#BDBDBD"/>
            <Setter Property="RowHeight" Value="32"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource DataGridHeaderStyle}"/>
            <Setter Property="CellStyle" Value="{StaticResource DataGridCellStyle}"/>
        </Style>

        <!-- Style dla kolorowanych kolumn -->
        <Style x:Key="WhiteColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="GrayColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="PeachColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#FFDAB9"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <Style x:Key="PlumColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#DDA0DD"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="LavenderColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#FFF0F5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <Style x:Key="GreenColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#90EE90"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CyanColumnStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#A1EDEE"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek i kontrolki -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Sekcja daty -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="📅 Data dostawy:" 
                               VerticalAlignment="Center" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"
                               Margin="0,0,10,0"/>
                    <DatePicker x:Name="dateTimePicker1" 
                                SelectedDateChanged="DateTimePicker1_SelectedDateChanged"
                                Width="150"
                                FontSize="13"
                                Padding="8,5"/>

                    <Button Content="⬆ Góra" 
                            x:Name="buttonUP"
                            Click="ButtonUP_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="80"
                            Margin="20,0,0,0"/>
                    <Button Content="⬇ Dół" 
                            x:Name="buttonDown"
                            Click="ButtonDown_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="80"/>
                </StackPanel>

                <!-- Przyciski akcji -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="buttonBon"
                            Click="ButtonBon_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Width="130">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📋" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="AVILOG" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnLoadData"
                            Content="📊 LUMEL"
                            Click="BtnLoadData_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Width="120"/>

                    <Button x:Name="button1"
                            Click="Button1_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Width="140">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🖨️" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="DRUKUJ PDF" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Główna tabela danych -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- DataGrid główny -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="10"/>
                </Border.Effect>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <DataGrid x:Name="dataGridView1" 
                              Style="{StaticResource MainDataGridStyle}"
                              SelectionChanged="DataGridView1_SelectionChanged"
                              CellEditEnding="DataGridView1_CellEditEnding"
                              LoadingRow="DataGridView1_LoadingRow">

                        <DataGrid.Columns>
                            <!-- BIAŁE KOLUMNY - Informacje podstawowe -->
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource WhiteColumnStyle}">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Nr" Binding="{Binding Nr}" Width="50">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource WhiteColumnStyle}">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Dostawca" Binding="{Binding Dostawca}" Width="110" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource WhiteColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Prawdziwy" Binding="{Binding RealDostawca}" Width="110" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource WhiteColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- SZARE KOLUMNY - Deklaracje -->
                            <DataGridTextColumn Header="Szt. Dek" Binding="{Binding SztukiDek}" Width="65">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource GrayColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Padłe" Binding="{Binding Padle}" Width="60">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource GrayColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="CH" Binding="{Binding CH}" Width="50">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource GrayColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="NW" Binding="{Binding NW}" Width="50">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource GrayColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="ZM" Binding="{Binding ZM}" Width="50">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource GrayColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- BRZOSKWINIOWE KOLUMNY - Wagi Hodowcy -->
                            <DataGridTextColumn Header="Brutto H" Binding="{Binding BruttoHodowcy}" Width="80" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource PeachColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Tara H" Binding="{Binding TaraHodowcy}" Width="75" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource PeachColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Netto H" Binding="{Binding NettoHodowcy}" Width="80" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource PeachColumnStyle}">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- BRZOSKWINIOWE KOLUMNY - Wagi Ubojni -->
                            <DataGridTextColumn Header="Brutto U" Binding="{Binding BruttoUbojni}" Width="80" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource PeachColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Tara U" Binding="{Binding TaraUbojni}" Width="75" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource PeachColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Netto U" Binding="{Binding NettoUbojni}" Width="80" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource PeachColumnStyle}">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- ŚLIWKOWA KOLUMNA - LUMEL -->
                            <DataGridTextColumn Header="LUMEL" Binding="{Binding LUMEL}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource PlumColumnStyle}">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- LAWENDOWE KOLUMNY - Wybijak -->
                            <DataGridTextColumn Header="Szt. Wyb" Binding="{Binding SztukiWybijak}" Width="75">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource LavenderColumnStyle}">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="KG Wyb" Binding="{Binding KilogramyWybijak}" Width="75">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource LavenderColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- ZIELONE KOLUMNY - Ceny -->
                            <DataGridTextColumn Header="Cena" Binding="{Binding Cena, StringFormat={}{0:F2}}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource GreenColumnStyle}">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Typ Ceny" Binding="{Binding TypCeny}" Width="85" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource GreenColumnStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- TURKUSOWE KOLUMNY - Ubytki -->
                            <DataGridCheckBoxColumn Header="PiK?" Binding="{Binding PiK, UpdateSourceTrigger=PropertyChanged}" Width="60">
                                <DataGridCheckBoxColumn.ElementStyle>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="Background" Value="#A1EDEE"/>
                                    </Style>
                                </DataGridCheckBoxColumn.ElementStyle>
                            </DataGridCheckBoxColumn>

                            <DataGridTextColumn Header="Ubytek %" Binding="{Binding Ubytek, StringFormat={}{0:F2}}" Width="75">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CyanColumnStyle}">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </Border>

            <!-- Panel LUMEL -->
            <Border Grid.Column="1" 
                    x:Name="lumelPanel"
                    Background="White" 
                    CornerRadius="8" 
                    Width="300"
                    Visibility="Collapsed">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#5C8A3A" CornerRadius="8,8,0,0" Padding="10">
                        <TextBlock Text="📊 Dane LUMEL" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <DataGrid Grid.Row="1" 
                              x:Name="dataGridView2"
                              AutoGenerateColumns="True"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              Margin="5"
                              AlternatingRowBackground="#F5F5F5"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Stopka z informacjami -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="12" Margin="0,10,0,0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="💡 Wskazówki:" 
                               FontWeight="SemiBold" 
                               Foreground="#5C8A3A"
                               Margin="0,0,10,0"/>
                    <TextBlock Text="F5 - Odśwież • Ctrl+S - Zapisz • Ctrl+P - Drukuj PDF • Alt+↑↓ - Zmień kolejność"
                               Foreground="#7F8C8D"
                               FontSize="11"/>
                </StackPanel>

                <TextBlock x:Name="statusLabel"
                           Text="Gotowy"
                           HorizontalAlignment="Right"
                           Foreground="#5C8A3A"
                           FontWeight="SemiBold"
                           FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>