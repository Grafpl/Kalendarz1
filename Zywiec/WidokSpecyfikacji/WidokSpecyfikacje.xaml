<Window x:Class="Kalendarz1.WidokSpecyfikacje"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Kalendarz1"
        Title="Specyfikacje Dostaw - System PiÃ³rkowscy"
        Height="850" Width="1900"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#ECEFF1"
        FontFamily="Segoe UI"
        Loaded="Window_Loaded">

    <!-- RenderTransform dla animacji shake -->
    <Window.RenderTransform>
        <TranslateTransform/>
    </Window.RenderTransform>

    <Window.Resources>
        <!-- BooleanToVisibility converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Converter dla Dodatek - pokazuje puste gdy 0 -->
        <local:ZeroToEmptyConverter x:Key="ZeroToEmptyConverter"/>

        <!-- === ANIMACJA: Shake on error === -->
        <Storyboard x:Key="ShakeAnimation">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="0:0:0.05" Value="10"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="-10"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.15" Value="8"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="-8"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.25" Value="5"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="-5"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.35" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- === STYL: Row hover highlight === -->
        <Style x:Key="DataGridRowHoverStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#BBDEFB"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsMouseOver" Value="True"/>
                        <Condition Property="IsSelected" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#90CAF9"/>
                    <Setter Property="Foreground" Value="Black"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <!-- === STYL: TextBox numeryczny - SelectAll przy fokusie === -->
        <Style x:Key="NumericTextBoxStyle" TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <EventSetter Event="GotFocus" Handler="NumericTextBox_GotFocus"/>
        </Style>

        <!-- === STYL: KomÃ³rka - czarna czcionka przy zaznaczeniu === -->
        <Style TargetType="DataGridCell">
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- GÅ‚Ã³wny styl przyciskÃ³w -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B732F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A5C24"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#607D8B"/>
        </Style>

        <!-- Styl dla nagÅ‚Ã³wkÃ³w DataGrid -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>

        <!-- Style dla nagÅ‚Ã³wkÃ³w grup kolumn -->
        <Style x:Key="DeklaracjeHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#F57C00"/>
        </Style>

        <Style x:Key="WagiHodowcyHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#FFA000"/>
        </Style>

        <Style x:Key="WagiUbojniHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#388E3C"/>
        </Style>

        <Style x:Key="WybijakHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#7B1FA2"/>
        </Style>

        <Style x:Key="CenaHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#1976D2"/>
        </Style>

        <!-- Style dla komÃ³rek -->
        <Style x:Key="CellStyleOrange" TargetType="DataGridCell">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFE0B2"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleYellow" TargetType="DataGridCell">
            <Setter Property="Background" Value="#FFECB3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFD54F"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleGreen" TargetType="DataGridCell">
            <Setter Property="Background" Value="#C8E6C9"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#A5D6A7"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleGreenDark" TargetType="DataGridCell">
            <Setter Property="Background" Value="#A5D6A7"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#81C784"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStylePurple" TargetType="DataGridCell">
            <Setter Property="Background" Value="#E1BEE7"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#CE93D8"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleBlue" TargetType="DataGridCell">
            <Setter Property="Background" Value="#BBDEFB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#90CAF9"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleRed" TargetType="DataGridCell">
            <Setter Property="Background" Value="#FFCDD2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EF9A9A"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NAGÅÃ“WEK -->
        <Border Grid.Row="0" Background="#5C8A3A" Padding="25,18">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Color="#000000" Opacity="0.2" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- TytuÅ‚ i data -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#4B732F" CornerRadius="6" Padding="15,8">
                        <StackPanel Orientation="Horizontal">
                            <!-- StrzaÅ‚ka wstecz -->
                            <Button Content="â—€"
                                    x:Name="btnPrevDay"
                                    Click="BtnPrevDay_Click"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="16"
                                    Cursor="Hand"
                                    Padding="8,0"
                                    VerticalAlignment="Center"
                                    ToolTip="Poprzedni dzieÅ„"/>

                            <DatePicker x:Name="dateTimePicker1"
                                        SelectedDateChanged="DateTimePicker1_SelectedDateChanged"
                                        Width="140"
                                        FontSize="14"
                                        Background="White"
                                        Margin="5,0"/>

                            <!-- StrzaÅ‚ka naprzÃ³d -->
                            <Button Content="â–¶"
                                    x:Name="btnNextDay"
                                    Click="BtnNextDay_Click"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="16"
                                    Cursor="Hand"
                                    Padding="8,0"
                                    VerticalAlignment="Center"
                                    ToolTip="NastÄ™pny dzieÅ„"/>

                            <!-- PeÅ‚na data z dniem tygodnia -->
                            <TextBlock x:Name="lblFullDate"
                                       Text=""
                                       Foreground="White"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Margin="15,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Separator -->
                    <Border Width="1" Background="#4B732F" Margin="15,5"/>

                    <!-- Checkboxy Opasienie i Klasa B -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                        <CheckBox x:Name="chkShowOpasienie"
                                  Content="Opasienie"
                                  Foreground="White"
                                  FontSize="12"
                                  VerticalAlignment="Center"
                                  Checked="ChkShowOpasienie_Changed"
                                  Unchecked="ChkShowOpasienie_Changed"
                                  Margin="0,0,15,0"/>
                        <CheckBox x:Name="chkShowKlasaB"
                                  Content="Klasa B"
                                  Foreground="White"
                                  FontSize="12"
                                  VerticalAlignment="Center"
                                  Checked="ChkShowKlasaB_Changed"
                                  Unchecked="ChkShowKlasaB_Changed"/>
                    </StackPanel>
                </StackPanel>

                <!-- Przyciski akcji -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="AVILOG"
                            x:Name="buttonBon"
                            Click="ButtonBon_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#3498DB"/>
                    <Button Content="LUMEL"
                            x:Name="btnLoadData"
                            Click="BtnLoadData_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#9B59B6"/>
                    <Button Content="DRUKUJ PDF"
                            x:Name="button1"
                            Click="Button1_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#E67E22"
                            ToolTip="Drukuj specyfikacjÄ™ dla wybranego dostawcy"/>
                    <Button Content="DRUKUJ WSZYSTKO"
                            x:Name="btnPrintAll"
                            Click="BtnPrintAll_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#D35400"
                            ToolTip="Drukuj wszystkie specyfikacje z dnia"/>
                    <Button Content="ðŸ“"
                            x:Name="btnPdfSettings"
                            Click="BtnPdfSettings_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            FontSize="16"
                            Padding="10,8"
                            ToolTip="Ustawienia lokalizacji PDF"/>
                    <Button Content="ðŸ“± SMS"
                            x:Name="btnSendSms"
                            Click="BtnSendSms_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#16A085"
                            ToolTip="SMS z rozliczeniem"/>
                    <Button Content="ðŸš› ZAÅADUNEK"
                            x:Name="btnSmsZaladunek"
                            Click="BtnSmsZaladunek_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#3498DB"
                            ToolTip="SMS z godzinÄ… przyjazdu auta"/>
                    <Button Content="ðŸ“§ EMAIL"
                            x:Name="btnSendEmail"
                            Click="BtnSendEmail_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#E74C3C"
                            ToolTip="WyÅ›lij email z PDF w zaÅ‚Ä…czniku"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- TABCONTROL Z KARTAMI -->
        <TabControl Grid.Row="1" Margin="20,15,20,10" x:Name="mainTabControl" SelectionChanged="MainTabControl_SelectionChanged">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="20,10"/>
                    <Setter Property="Background" Value="#ECEFF1"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Border"
                                        Background="{TemplateBinding Background}"
                                        BorderThickness="1,1,1,0"
                                        BorderBrush="#CFD8DC"
                                        CornerRadius="8,8,0,0"
                                        Margin="2,0,2,0"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter ContentSource="Header"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="#5C8A3A"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#E8F5E9"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- ===== KARTA 1: SPECYFIKACJE ===== -->
            <TabItem Header="ðŸ“‹ Specyfikacje">
                <Border Background="White" CornerRadius="0,10,10,10">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="15"/>
                    </Border.Effect>
                    <DataGrid x:Name="dataGridView1"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserReorderColumns="False"
                      SelectionMode="Single"
                      SelectionUnit="CellOrRowHeader"
                      GridLinesVisibility="All"
                      HorizontalGridLinesBrush="#E0E0E0"
                      VerticalGridLinesBrush="#EEEEEE"
                      RowHeight="36"
                      Background="White"
                      BorderThickness="0"
                      FontSize="12"
                      AlternatingRowBackground="#FAFAFA"
                      ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                      RowStyle="{StaticResource DataGridRowHoverStyle}"
                      CellEditEnding="DataGridView1_CellEditEnding"
                      SelectionChanged="DataGridView1_SelectionChanged"
                      CurrentCellChanged="DataGridView1_CurrentCellChanged"
                      PreviewKeyDown="DataGridView1_PreviewKeyDown"
                      PreviewTextInput="DataGridView1_PreviewTextInput"
                      AllowDrop="True"
                      PreviewMouseLeftButtonDown="DataGrid_PreviewMouseLeftButtonDown"
                      PreviewMouseMove="DataGrid_PreviewMouseMove"
                      Drop="DataGrid_Drop"
                      DragOver="DataGrid_DragOver"
                      DragLeave="DataGrid_DragLeave"
                      EnableRowVirtualization="True"
                      EnableColumnVirtualization="True"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      VirtualizingPanel.ScrollUnit="Pixel">

                <DataGrid.Columns>
                    <!-- LP -->
                    <DataGridTextColumn Header="LP" Binding="{Binding Nr}" Width="45" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="14"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Wydrukowano - znaczek V -->
                    <DataGridTemplateColumn Header="âœ“" Width="30" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="âœ“"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Foreground="#4CAF50"
                                           Visibility="{Binding Wydrukowano, Converter={StaticResource BoolToVis}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Dostawca - ComboBox zawsze widoczny -->
                    <DataGridTemplateColumn Header="Dostawca" Width="160">
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="#E8F5E9"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.ListaDostawcow}"
                                          SelectedValue="{Binding DostawcaGID, UpdateSourceTrigger=PropertyChanged}"
                                          SelectedValuePath="GID"
                                          DisplayMemberPath="ShortName"
                                          SelectionChanged="ComboBox_Dostawca_SelectionChanged"
                                          Background="#E8F5E9"
                                          Padding="5"
                                          VerticalContentAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Szt.Dek - TextBox zawsze widoczny -->
                    <DataGridTemplateColumn Header="Szt.Dek" Width="65" HeaderStyle="{StaticResource DeklaracjeHeaderStyle}">
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="#FFE0B2"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding SztukiDek, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ZeroToEmptyConverter}}"
                                         Style="{StaticResource NumericTextBoxStyle}"
                                         FontWeight="SemiBold"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- PadÅ‚e - TextBox zawsze widoczny, skreÅ›lone gdy PiK -->
                    <DataGridTemplateColumn Header="PadÅ‚e" Width="55" HeaderStyle="{StaticResource DeklaracjeHeaderStyle}">
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="#FFCCBC"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Padle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ZeroToEmptyConverter}}"
                                         Style="{StaticResource NumericTextBoxStyle}"
                                         Foreground="#BF360C"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- CH - TextBox zawsze widoczny -->
                    <DataGridTemplateColumn Header="CH" Width="45" HeaderStyle="{StaticResource DeklaracjeHeaderStyle}">
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="#FFF3E0"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding CH, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ZeroToEmptyConverter}}"
                                         Style="{StaticResource NumericTextBoxStyle}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- NW - TextBox zawsze widoczny -->
                    <DataGridTemplateColumn Header="NW" Width="45" HeaderStyle="{StaticResource DeklaracjeHeaderStyle}">
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="#FFF3E0"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding NW, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ZeroToEmptyConverter}}"
                                         Style="{StaticResource NumericTextBoxStyle}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- ZM - TextBox zawsze widoczny -->
                    <DataGridTemplateColumn Header="ZM" Width="45" HeaderStyle="{StaticResource DeklaracjeHeaderStyle}">
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="#FFF3E0"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding ZM, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ZeroToEmptyConverter}}"
                                         Style="{StaticResource NumericTextBoxStyle}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- LUMEL - TextBox zawsze widoczny -->
                    <DataGridTemplateColumn Header="LUMEL" Width="65" HeaderStyle="{StaticResource DeklaracjeHeaderStyle}">
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="#E1BEE7"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding LUMEL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ZeroToEmptyConverter}}"
                                         Style="{StaticResource NumericTextBoxStyle}"
                                         FontWeight="Bold"
                                         Foreground="#7B1FA2"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- WAGI HODOWCY -->
                    <DataGridTextColumn Header="Brutto H" Binding="{Binding BruttoHodowcy}" Width="80"
                                        IsReadOnly="True" HeaderStyle="{StaticResource WagiHodowcyHeaderStyle}"
                                        CellStyle="{StaticResource CellStyleYellow}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Tara H" Binding="{Binding TaraHodowcy}" Width="70"
                                        IsReadOnly="True" HeaderStyle="{StaticResource WagiHodowcyHeaderStyle}"
                                        CellStyle="{StaticResource CellStyleYellow}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

