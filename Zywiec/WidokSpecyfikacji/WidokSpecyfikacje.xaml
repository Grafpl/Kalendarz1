<Window x:Class="Kalendarz1.WidokSpecyfikacje"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Specyfikacje Dostaw - System Piórkowscy"
        Height="900" Width="1700"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#ECEFF1"
        FontFamily="Segoe UI"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Główny styl przycisków -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B732F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A5C24"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#607D8B"/>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
        </Style>

        <!-- Styl dla nagłówków grup -->
        <Style x:Key="GroupHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Styl dla etykiet -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <!-- Styl dla pól tekstowych -->
        <Style x:Key="EditableTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#5C8A3A"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl dla pól tylko do odczytu -->
        <Style x:Key="ReadOnlyTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource EditableTextBoxStyle}">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#5D6D7E"/>
        </Style>

        <!-- Styl dla wartości liczbowych (większe) -->
        <Style x:Key="NumberTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource EditableTextBoxStyle}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>

        <!-- Styl dla DataGrid -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="RowHeight" Value="45"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NAGŁÓWEK -->
        <Border Grid.Row="0" Background="#5C8A3A" Padding="25,18">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Color="#000000" Opacity="0.2" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Tytuł i data -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="SPECYFIKACJA DOSTAW"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <Border Background="#4B732F" CornerRadius="6" Padding="15,8" Margin="30,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Data:"
                                       Foreground="#C8E6C9"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <DatePicker x:Name="dateTimePicker1"
                                        SelectedDateChanged="DateTimePicker1_SelectedDateChanged"
                                        Width="140"
                                        FontSize="14"
                                        Background="White"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Przyciski akcji -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="AVILOG"
                            x:Name="buttonBon"
                            Click="ButtonBon_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#3498DB"/>
                    <Button Content="LUMEL"
                            x:Name="btnLoadData"
                            Click="BtnLoadData_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#9B59B6"/>
                    <Button Content="DRUKUJ PDF"
                            x:Name="button1"
                            Click="Button1_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#E67E22"/>
                    <Button Content="ZAPISZ WSZYSTKO"
                            x:Name="btnSaveAll"
                            Click="BtnSaveAll_Click"
                            Style="{StaticResource MainButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- GŁÓWNA ZAWARTOŚĆ -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="500"/>
                <ColumnDefinition Width="420"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- LEWA STRONA - Lista dostaw -->
            <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="0,0,15,0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="15"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Nagłówek listy -->
                    <Border Grid.Row="0" Background="#F8F9FA" Padding="20,15" CornerRadius="10,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Lista Dostaw"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#2C3E50"
                                       VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Content="W górę"
                                        x:Name="buttonUP"
                                        Click="ButtonUP_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="12,8"/>
                                <Button Content="W dół"
                                        x:Name="buttonDown"
                                        Click="ButtonDown_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="12,8"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- DataGrid z listą -->
                    <DataGrid Grid.Row="1"
                              x:Name="dataGridView1"
                              Style="{StaticResource ModernDataGridStyle}"
                              ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                              CellStyle="{StaticResource DataGridCellStyle}"
                              SelectionChanged="DataGridView1_SelectionChanged"
                              Margin="0,0,0,10">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="LP" Binding="{Binding Nr}" Width="55">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="14"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Dostawca" Binding="{Binding Dostawca}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="5,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Szt." Binding="{Binding LUMEL}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="#8E44AD"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Netto H" Binding="{Binding NettoHodowcy}" Width="90">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#E67E22"/>
                                        <Setter Property="Padding" Value="0,0,10,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Netto U" Binding="{Binding NettoUbojni}" Width="90">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="#27AE60"/>
                                        <Setter Property="Padding" Value="0,0,10,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Cena" Binding="{Binding Cena, StringFormat={}{0:F2}}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="#2980B9"/>
                                        <Setter Property="Padding" Value="0,0,10,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Ubytek" Binding="{Binding Ubytek, StringFormat={}{0:F2}%}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#C0392B"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- PRAWA STRONA - Panel szczegółów -->
            <Border Grid.Column="1" Background="White" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="15"/>
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="detailsPanel" Margin="20">

                        <!-- Nagłówek szczegółów -->
                        <Border Background="#5C8A3A" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <TextBlock x:Name="lblSelectedDostawca"
                                       Text="Wybierz dostawę z listy"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <!-- SEKCJA: Informacje podstawowe -->
                        <TextBlock Text="INFORMACJE PODSTAWOWE" Style="{StaticResource GroupHeaderStyle}"/>
                        <Border Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,10">
                                    <TextBlock Text="ID" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtID" Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0,0,10">
                                    <TextBlock Text="Nr (LP)" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtNr" Style="{StaticResource NumberTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1">
                                    <TextBlock Text="Dostawca prawdziwy" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtRealDostawca" Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- SEKCJA: Deklaracje -->
                        <TextBlock Text="DEKLARACJE" Style="{StaticResource GroupHeaderStyle}"/>
                        <Border Background="#FFF8E1" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,5,10">
                                    <TextBlock Text="Sztuki Dek." Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtSztukiDek" Style="{StaticResource NumberTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="5,0,5,10">
                                    <TextBlock Text="Padłe" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtPadle" Style="{StaticResource NumberTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Margin="5,0,0,10">
                                    <TextBlock Text="CH" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtCH" Style="{StaticResource NumberTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,5,0">
                                    <TextBlock Text="NW" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtNW" Style="{StaticResource NumberTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="1" Margin="5,0,5,0">
                                    <TextBlock Text="ZM" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtZM" Style="{StaticResource NumberTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Grid.Row="1" Margin="5,0,0,0">
                                    <TextBlock Text="LUMEL" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtLUMEL" Style="{StaticResource NumberTextBoxStyle}"
                                             Background="#E1BEE7" FontSize="18"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- SEKCJA: Wagi Hodowcy -->
                        <TextBlock Text="WAGI HODOWCY" Style="{StaticResource GroupHeaderStyle}"/>
                        <Border Background="#FFECB3" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="Brutto" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtBruttoH" Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="5,0,5,0">
                                    <TextBlock Text="Tara" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtTaraH" Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Margin="5,0,0,0">
                                    <TextBlock Text="Netto" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtNettoH" Style="{StaticResource ReadOnlyTextBoxStyle}"
                                             FontWeight="Bold" FontSize="16"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- SEKCJA: Wagi Ubojni -->
                        <TextBlock Text="WAGI UBOJNI" Style="{StaticResource GroupHeaderStyle}"/>
                        <Border Background="#C8E6C9" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="Brutto" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtBruttoU" Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="5,0,5,0">
                                    <TextBlock Text="Tara" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtTaraU" Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Margin="5,0,0,0">
                                    <TextBlock Text="Netto" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtNettoU" Style="{StaticResource ReadOnlyTextBoxStyle}"
                                             FontWeight="Bold" FontSize="16" Foreground="#27AE60"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- SEKCJA: Wybijak -->
                        <TextBlock Text="WYBIJAK" Style="{StaticResource GroupHeaderStyle}"/>
                        <Border Background="#E1BEE7" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Sztuki" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtSztWybijak" Style="{StaticResource NumberTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Kilogramy" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtKgWybijak" Style="{StaticResource NumberTextBoxStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- SEKCJA: Cena i Ubytek -->
                        <TextBlock Text="CENA I UBYTEK" Style="{StaticResource GroupHeaderStyle}"/>
                        <Border Background="#BBDEFB" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,10">
                                    <TextBlock Text="Cena (zł/kg)" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtCena" Style="{StaticResource NumberTextBoxStyle}"
                                             FontSize="20" Foreground="#2980B9"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10,0,0,10">
                                    <TextBlock Text="Typ ceny" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtTypCeny" Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,10,0">
                                    <TextBlock Text="Ubytek (%)" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtUbytek" Style="{StaticResource NumberTextBoxStyle}"
                                             FontSize="20" Foreground="#C0392B"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                    <CheckBox x:Name="chkPiK" Content="PiK (wlicz padłe)"
                                              FontSize="14"
                                              Margin="0,20,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Przycisk zapisu -->
                        <Button Content="ZAPISZ ZMIANY"
                                x:Name="btnSaveRow"
                                Click="BtnSaveRow_Click"
                                Style="{StaticResource MainButtonStyle}"
                                HorizontalAlignment="Stretch"
                                FontSize="16"
                                Padding="20,15"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- PANEL LUMEL (ukryty domyślnie) -->
            <Border x:Name="lumelPanel"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Background="White"
                    CornerRadius="10"
                    Margin="0,15,0,0"
                    Visibility="Collapsed"
                    MaxHeight="250">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="15"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#9B59B6" Padding="15,10" CornerRadius="10,10,0,0">
                        <Grid>
                            <TextBlock Text="Dane LUMEL"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <Button Content="X"
                                    HorizontalAlignment="Right"
                                    Click="BtnCloseLumel_Click"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    Padding="8,2"/>
                        </Grid>
                    </Border>

                    <DataGrid Grid.Row="1"
                              x:Name="dataGridView2"
                              AutoGenerateColumns="True"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              FontSize="12"
                              RowHeight="30"
                              Background="White"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#E0E0E0"
                              Margin="0,0,0,10"/>
                </Grid>
            </Border>
        </Grid>

        <!-- STOPKA -->
        <Border Grid.Row="2" Background="White" Padding="20,15" Margin="20,0,20,15">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Statystyki -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="#E3F2FD" CornerRadius="6" Padding="15,8" Margin="0,0,15,0">
