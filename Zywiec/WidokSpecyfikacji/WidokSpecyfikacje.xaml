        <Style x:Key="CellStyleOrange" TargetType="DataGridCell">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
