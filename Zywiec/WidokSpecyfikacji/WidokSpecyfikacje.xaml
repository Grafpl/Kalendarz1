<Window x:Class="Kalendarz1.WidokSpecyfikacje"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Kalendarz1"
        Title="Specyfikacje Dostaw - System PiÃ³rkowscy"
        Height="850" Width="1900"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#ECEFF1"
        FontFamily="Segoe UI"
        Loaded="Window_Loaded">

    <Window.RenderTransform>
        <TranslateTransform/>
    </Window.RenderTransform>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <local:ZeroToEmptyConverter x:Key="ZeroToEmptyConverter"/>
        <local:ZeroToRedBrushConverter x:Key="ZeroToRedBrush"/>
        <local:ZeroToBoldConverter x:Key="ZeroToBold"/>
        <local:PercentToPixelConverter x:Key="PercentToPixelConverter"/>
        <local:PercentToMarginConverter x:Key="PercentToMarginConverter"/>
        <local:PercentToWidthConverter x:Key="PercentToWidthConverter"/>

        <Storyboard x:Key="ShakeAnimation">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="0:0:0.05" Value="10"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="-10"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.15" Value="8"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="-8"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.25" Value="5"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="-5"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.35" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Animacja pulsowania dla wartoÅ›ci wymagajÄ…cych uwagi -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="1.0" To="0.4" Duration="0:0:0.8"
                AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Animacja pÅ‚ynnego przejÅ›cia dla wierszy -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Animacja slidowania dla grupowania -->
        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="-20" To="0" Duration="0:0:0.25">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.25"/>
        </Storyboard>

        <!-- Styl dla DropShadow paneli -->
        <DropShadowEffect x:Key="CardShadow" ShadowDepth="4" Color="#000000" Opacity="0.15" BlurRadius="12" Direction="270"/>
        <DropShadowEffect x:Key="CardShadowHover" ShadowDepth="6" Color="#000000" Opacity="0.22" BlurRadius="16" Direction="270"/>

        <Style x:Key="CenterBoldStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="CenterStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="RightStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0,0,5,0"/>
        </Style>
        <Style x:Key="NormalStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
        <Style x:Key="RightOrangeStyle" TargetType="TextBlock" BasedOn="{StaticResource RightStyle}">
            <Setter Property="Foreground" Value="#F57C00"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="RightGreenStyle" TargetType="TextBlock" BasedOn="{StaticResource RightStyle}">
            <Setter Property="Foreground" Value="#388E3C"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="RightBlueStyle" TargetType="TextBlock" BasedOn="{StaticResource RightStyle}">
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="ItalicStyle" TargetType="TextBlock" BasedOn="{StaticResource NormalStyle}">
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Foreground" Value="Gray"/>
        </Style>

        <Style x:Key="DataGridRowHoverStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <!-- 1. Hover (najniÅ¼szy priorytet) -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
                <!-- 2. Zaznaczenie - pogrubienie czcionki, bez zmiany tÅ‚a -->
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
                <!-- 3. Hover + Zaznaczenie -->
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsMouseOver" Value="True"/>
                        <Condition Property="IsSelected" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </MultiTrigger>
                <!-- 4. PODÅšWIETLENIE GRUPY - subtelne, bez zmiany ukÅ‚adu -->
                <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                    <Setter Property="Background" Value="#FFF8E1"/>
                </DataTrigger>
                <!-- 5. PodÅ›wietlenie + hover -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsHighlighted}" Value="True"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#FFECB3"/>
                </MultiDataTrigger>
                <!-- 6. PodÅ›wietlenie + zaznaczenie -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsHighlighted}" Value="True"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsSelected}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#FFF8E1"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </MultiDataTrigger>
                <!-- 7. Separator grupy dostawcy - grubsza gÃ³rna linia -->
                <DataTrigger Binding="{Binding IsFirstInGroup}" Value="True">
                    <Setter Property="BorderBrush" Value="#1976D2"/>
                    <Setter Property="BorderThickness" Value="0,3,0,0"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NumericTextBoxStyle" TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>

            <EventSetter Event="GotFocus" Handler="NumericTextBox_GotFocus"/>
            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="NumericTextBox_PreviewMouseLeftButtonDown"/>
            <EventSetter Event="PreviewKeyDown" Handler="NumericTextBox_PreviewKeyDown"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}"
                                ClipToBounds="True">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                            </Border.Effect>
                            <Grid>
                                <!-- Ripple effect overlay -->
                                <Ellipse x:Name="ripple"
                                         Fill="White"
                                         Opacity="0"
                                         RenderTransformOrigin="0.5,0.5"
                                         IsHitTestVisible="False">
                                    <Ellipse.RenderTransform>
                                        <ScaleTransform ScaleX="0" ScaleY="0"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B732F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A5C24"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ripple"
                                                             Storyboard.TargetProperty="Opacity"
                                                             From="0.3" To="0" Duration="0:0:0.4"/>
                                            <DoubleAnimation Storyboard.TargetName="ripple"
                                                             Storyboard.TargetProperty="(Ellipse.RenderTransform).(ScaleTransform.ScaleX)"
                                                             From="0" To="3" Duration="0:0:0.4">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="ripple"
                                                             Storyboard.TargetProperty="(Ellipse.RenderTransform).(ScaleTransform.ScaleY)"
                                                             From="0" To="3" Duration="0:0:0.4">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#607D8B"/>
        </Style>

        <!-- Styl pulsujÄ…cej komÃ³rki dla wartoÅ›ci wymagajÄ…cych uwagi -->
        <Style x:Key="PulsingCellStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFCDD2"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="4,2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RequiresAttention}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                From="#FFCDD2" To="#EF9A9A" Duration="0:0:0.8"
                                                AutoReverse="True">
                                    <ColorAnimation.EasingFunction>
                                        <SineEase EasingMode="EaseInOut"/>
                                    </ColorAnimation.EasingFunction>
                                </ColorAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Loading Skeleton styl dla animacji Å‚adowania -->
        <Style x:Key="SkeletonStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#EEEEEE" Offset="0"/>
                        <GradientStop Color="#E0E0E0" Offset="0.5"/>
                        <GradientStop Color="#EEEEEE" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="4"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[0].Offset"
                                             From="-1" To="2" Duration="0:0:1.5"/>
                            <DoubleAnimation Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].Offset"
                                             From="-0.5" To="2.5" Duration="0:0:1.5"/>
                            <DoubleAnimation Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[2].Offset"
                                             From="0" To="3" Duration="0:0:1.5"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <!-- Styl karty z cieniem i hover efektem -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="3" Color="#000000" Opacity="0.12" BlurRadius="10" Direction="270"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.ShadowDepth)"
                                                 To="6" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)"
                                                 To="15" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                                 To="0.18" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.ShadowDepth)"
                                                 To="3" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)"
                                                 To="10" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                                 To="0.12" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>

        <Style x:Key="DeklaracjeHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#F57C00"/>
        </Style>

        <Style x:Key="WagiHodowcyHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#FFA000"/>
        </Style>

        <Style x:Key="WagiUbojniHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#388E3C"/>
        </Style>

        <Style x:Key="WybijakHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#7B1FA2"/>
        </Style>

        <Style x:Key="CenaHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#1976D2"/>
        </Style>

        <Style x:Key="CellStyleOrange" TargetType="DataGridCell">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFE0B2"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleYellow" TargetType="DataGridCell">
            <Setter Property="Background" Value="#FFECB3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFD54F"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleGreen" TargetType="DataGridCell">
            <Setter Property="Background" Value="#C8E6C9"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#A5D6A7"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleGreenDark" TargetType="DataGridCell">
            <Setter Property="Background" Value="#A5D6A7"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#81C784"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStylePurple" TargetType="DataGridCell">
            <Setter Property="Background" Value="#E1BEE7"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#CE93D8"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleBlue" TargetType="DataGridCell">
            <Setter Property="Background" Value="#BBDEFB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#90CAF9"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleRed" TargetType="DataGridCell">
            <Setter Property="Background" Value="#FFCDD2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EF9A9A"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#5C8A3A" Padding="25,18">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Color="#000000" Opacity="0.2" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#4B732F" CornerRadius="6" Padding="15,8">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="â—€"
                                    x:Name="btnPrevDay"
                                    Click="BtnPrevDay_Click"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="16"
                                    Cursor="Hand"
                                    Padding="8,0"
                                    VerticalAlignment="Center"
                                    ToolTip="Poprzedni dzieÅ„"/>

                            <DatePicker x:Name="dateTimePicker1"
                                        SelectedDateChanged="DateTimePicker1_SelectedDateChanged"
                                        Width="140"
                                        FontSize="14"
                                        Background="White"
                                        Margin="5,0"/>

                            <Button Content="â–¶"
                                    x:Name="btnNextDay"
                                    Click="BtnNextDay_Click"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="16"
                                    Cursor="Hand"
                                    Padding="8,0"
                                    VerticalAlignment="Center"
                                    ToolTip="NastÄ™pny dzieÅ„"/>

                            <TextBlock x:Name="lblFullDate"
                                       Text=""
                                       Foreground="White"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Margin="15,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Mini kalendarz z podglÄ…dem dni -->
                    <Border Background="#4B732F" CornerRadius="6" Padding="10,6" Margin="15,0,0,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="TydzieÅ„:" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <ItemsControl x:Name="miniCalendarDays">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border x:Name="dayBorder"
                                                Width="28" Height="28"
                                                CornerRadius="4"
                                                Margin="2,0"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="MiniCalendarDay_Click"
                                                ToolTip="{Binding ToolTipText}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasData}" Value="True">
                                                            <Setter Property="Background" Value="#81C784"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                            <Setter Property="Background" Value="White"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsToday}" Value="True">
                                                            <Setter Property="BorderBrush" Value="#FFC107"/>
                                                            <Setter Property="BorderThickness" Value="2"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding DayNumber}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontSize="11"
                                                       FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                <Setter Property="Foreground" Value="#5C8A3A"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="DRUKUJ PDF"
                            x:Name="button1"
                            Click="Button1_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#E67E22"
                            ToolTip="Drukuj specyfikacjÄ™ dla wybranego dostawcy"/>
                    <Button Content="ðŸ“‚ OtwÃ³rz folder"
                            x:Name="btnOpenPdfFolder"
                            Click="BtnOpenPdfFolder_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="12,8"
                            ToolTip="OtwÃ³rz folder ze specyfikacjami"/>
                    <Button Content="âš™ï¸"
                            x:Name="btnPdfSettings"
                            Click="BtnPdfSettings_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            FontSize="16"
                            Padding="10,8"
                            ToolTip="Ustawienia lokalizacji PDF"/>
                    <Button Content="ðŸ“± SMS"
                            x:Name="btnSendSms"
