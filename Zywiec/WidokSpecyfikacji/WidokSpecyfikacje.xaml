<Window x:Class="Kalendarz1.WidokSpecyfikacje"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Kalendarz1"
        Title="Specyfikacje Dostaw - System PiÃ³rkowscy"
        Height="850" Width="1900"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#ECEFF1"
        FontFamily="Segoe UI"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- BooleanToVisibility converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Converter dla Dodatek - pokazuje puste gdy 0 -->
        <local:ZeroToEmptyConverter x:Key="ZeroToEmptyConverter"/>

        <!-- GÅ‚Ã³wny styl przyciskÃ³w -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B732F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A5C24"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#607D8B"/>
        </Style>

        <!-- Styl dla nagÅ‚Ã³wkÃ³w DataGrid -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>

        <!-- Style dla nagÅ‚Ã³wkÃ³w grup kolumn -->
        <Style x:Key="DeklaracjeHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#F57C00"/>
        </Style>

        <Style x:Key="WagiHodowcyHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#FFA000"/>
        </Style>

        <Style x:Key="WagiUbojniHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#388E3C"/>
        </Style>

        <Style x:Key="WybijakHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#7B1FA2"/>
        </Style>

        <Style x:Key="CenaHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#1976D2"/>
        </Style>

        <!-- Style dla komÃ³rek -->
        <Style x:Key="CellStyleOrange" TargetType="DataGridCell">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFE0B2"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleYellow" TargetType="DataGridCell">
            <Setter Property="Background" Value="#FFECB3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFD54F"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleGreen" TargetType="DataGridCell">
            <Setter Property="Background" Value="#C8E6C9"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#A5D6A7"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleGreenDark" TargetType="DataGridCell">
            <Setter Property="Background" Value="#A5D6A7"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#81C784"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStylePurple" TargetType="DataGridCell">
            <Setter Property="Background" Value="#E1BEE7"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#CE93D8"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleBlue" TargetType="DataGridCell">
            <Setter Property="Background" Value="#BBDEFB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#90CAF9"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellStyleRed" TargetType="DataGridCell">
            <Setter Property="Background" Value="#FFCDD2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EF9A9A"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NAGÅÃ“WEK -->
        <Border Grid.Row="0" Background="#5C8A3A" Padding="25,18">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Color="#000000" Opacity="0.2" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- TytuÅ‚ i data -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="SPECYFIKACJA DOSTAW"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <Border Background="#4B732F" CornerRadius="6" Padding="15,8" Margin="30,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <!-- StrzaÅ‚ka wstecz -->
                            <Button Content="â—€"
                                    x:Name="btnPrevDay"
                                    Click="BtnPrevDay_Click"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="16"
                                    Cursor="Hand"
                                    Padding="8,0"
                                    VerticalAlignment="Center"
                                    ToolTip="Poprzedni dzieÅ„"/>

                            <DatePicker x:Name="dateTimePicker1"
                                        SelectedDateChanged="DateTimePicker1_SelectedDateChanged"
                                        Width="140"
                                        FontSize="14"
                                        Background="White"
                                        Margin="5,0"/>

                            <!-- StrzaÅ‚ka naprzÃ³d -->
                            <Button Content="â–¶"
                                    x:Name="btnNextDay"
                                    Click="BtnNextDay_Click"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="16"
                                    Cursor="Hand"
                                    Padding="8,0"
                                    VerticalAlignment="Center"
                                    ToolTip="NastÄ™pny dzieÅ„"/>

                            <!-- PeÅ‚na data z dniem tygodnia -->
                            <TextBlock x:Name="lblFullDate"
                                       Text=""
                                       Foreground="White"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Margin="15,0,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Przyciski akcji -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="W GÃ“RÄ˜"
                            x:Name="buttonUP"
                            Click="ButtonUP_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="12,8"/>
                    <Button Content="W DÃ“Å"
                            x:Name="buttonDown"
                            Click="ButtonDown_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="12,8"/>
                    <Button Content="AVILOG"
                            x:Name="buttonBon"
                            Click="ButtonBon_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#3498DB"/>
                    <Button Content="LUMEL"
                            x:Name="btnLoadData"
                            Click="BtnLoadData_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#9B59B6"/>
                    <Button Content="DRUKUJ PDF"
                            x:Name="button1"
                            Click="Button1_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#E67E22"
                            ToolTip="Drukuj specyfikacjÄ™ dla wybranego dostawcy"/>
                    <Button Content="DRUKUJ WSZYSTKO"
                            x:Name="btnPrintAll"
                            Click="BtnPrintAll_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#D35400"
                            ToolTip="Drukuj wszystkie specyfikacje z dnia"/>
                    <Button Content="ðŸ“"
                            x:Name="btnPdfSettings"
                            Click="BtnPdfSettings_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            FontSize="16"
                            Padding="10,8"
                            ToolTip="Ustawienia lokalizacji PDF"/>
                    <Button Content="PDF SKRÃ“CONY"
                            x:Name="btnShortPdf"
                            Click="BtnShortPdf_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#8E44AD"
                            ToolTip="Generuj skrÃ³conÄ… wersjÄ™ PDF (1 strona)"/>
                    <Button Content="ðŸ“± SMS"
                            x:Name="btnSendSms"
                            Click="BtnSendSms_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#16A085"
                            ToolTip="WyÅ›lij SMS z podsumowaniem do hodowcy"/>
                    <Button Content="ZAPISZ WSZYSTKO"
                            x:Name="btnSaveAll"
                            Click="BtnSaveAll_Click"
                            Style="{StaticResource MainButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- GÅÃ“WNA TABELA -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Margin="20,15,20,10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="15"/>
            </Border.Effect>
            <DataGrid x:Name="dataGridView1"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      SelectionUnit="Cell"
                      GridLinesVisibility="All"
                      HorizontalGridLinesBrush="#E0E0E0"
                      VerticalGridLinesBrush="#EEEEEE"
                      RowHeight="36"
                      Background="White"
                      BorderThickness="0"
                      FontSize="12"
                      AlternatingRowBackground="#FAFAFA"
                      ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                      CellEditEnding="DataGridView1_CellEditEnding"
                      SelectionChanged="DataGridView1_SelectionChanged"
                      PreviewMouseLeftButtonDown="DataGridView1_PreviewMouseLeftButtonDown"
                      PreviewKeyDown="DataGridView1_PreviewKeyDown">

                <DataGrid.Columns>
                    <!-- LP -->
                    <DataGridTextColumn Header="LP" Binding="{Binding Nr}" Width="45" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="14"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Wydrukowano - znaczek V -->
                    <DataGridTemplateColumn Header="âœ“" Width="30" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="âœ“"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Foreground="#4CAF50"
                                           Visibility="{Binding Wydrukowano, Converter={StaticResource BoolToVis}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Dostawca - ComboBox -->
                    <DataGridTemplateColumn Header="Dostawca" Width="150">
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="#E8F5E9"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Dostawca}"
                                           VerticalAlignment="Center"
                                           Padding="5,0"
                                           FontWeight="SemiBold"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox x:Name="cboDostawca"
                                          SelectedValue="{Binding DostawcaGID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          SelectedValuePath="GID"
                                          DisplayMemberPath="ShortName"
                                          Loaded="CboDostawca_Loaded"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- Szt.Dek -->
                    <DataGridTextColumn Header="Szt.Dek" Binding="{Binding SztukiDek, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="65" HeaderStyle="{StaticResource DeklaracjeHeaderStyle}"
                                        CellStyle="{StaticResource CellStyleOrange}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- PadÅ‚e - skreÅ›lone gdy PiK -->
                    <DataGridTemplateColumn Header="PadÅ‚e" Width="55" HeaderStyle="{StaticResource DeklaracjeHeaderStyle}">
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="#FFCCBC"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Padle}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#BF360C"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding PiK}" Value="True">
                                                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                    <Setter Property="Foreground" Value="#C62828"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Padle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                         HorizontalContentAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- CH - skreÅ›lone gdy PiK -->
                    <DataGridTemplateColumn Header="CH" Width="45" HeaderStyle="{StaticResource DeklaracjeHeaderStyle}">
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="#FFF3E0"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding CH}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding PiK}" Value="True">
                                                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                    <Setter Property="Foreground" Value="#C62828"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding CH, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                         HorizontalContentAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- NW - skreÅ›lone gdy PiK -->
                    <DataGridTemplateColumn Header="NW" Width="45" HeaderStyle="{StaticResource DeklaracjeHeaderStyle}">
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="#FFF3E0"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding NW}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding PiK}" Value="True">
                                                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                    <Setter Property="Foreground" Value="#C62828"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding NW, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                         HorizontalContentAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- ZM - skreÅ›lone gdy PiK -->
                    <DataGridTemplateColumn Header="ZM" Width="45" HeaderStyle="{StaticResource DeklaracjeHeaderStyle}">
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="#FFF3E0"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ZM}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding PiK}" Value="True">
                                                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                    <Setter Property="Foreground" Value="#C62828"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding ZM, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                         HorizontalContentAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- LUMEL -->
                    <DataGridTextColumn Header="LUMEL" Binding="{Binding LUMEL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="65" HeaderStyle="{StaticResource DeklaracjeHeaderStyle}"
                                        CellStyle="{StaticResource CellStylePurple}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#7B1FA2"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- WAGI HODOWCY -->
                    <DataGridTextColumn Header="Brutto H" Binding="{Binding BruttoHodowcy}" Width="80"
                                        IsReadOnly="True" HeaderStyle="{StaticResource WagiHodowcyHeaderStyle}"
                                        CellStyle="{StaticResource CellStyleYellow}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Tara H" Binding="{Binding TaraHodowcy}" Width="70"
                                        IsReadOnly="True" HeaderStyle="{StaticResource WagiHodowcyHeaderStyle}"
                                        CellStyle="{StaticResource CellStyleYellow}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Netto H" Binding="{Binding NettoHodowcy}" Width="85"
                                        IsReadOnly="True" HeaderStyle="{StaticResource WagiHodowcyHeaderStyle}">
                        <DataGridTextColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="#FFE0B2"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTextColumn.CellStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#E65100"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- WAGI UBOJNI -->
                    <DataGridTextColumn Header="Brutto U" Binding="{Binding BruttoUbojni}" Width="80"
                                        IsReadOnly="True" HeaderStyle="{StaticResource WagiUbojniHeaderStyle}"
                                        CellStyle="{StaticResource CellStyleGreen}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Tara U" Binding="{Binding TaraUbojni}" Width="70"
                                        IsReadOnly="True" HeaderStyle="{StaticResource WagiUbojniHeaderStyle}"
                                        CellStyle="{StaticResource CellStyleGreen}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Netto U" Binding="{Binding NettoUbojni}" Width="85"
                                        IsReadOnly="True" HeaderStyle="{StaticResource WagiUbojniHeaderStyle}"
                                        CellStyle="{StaticResource CellStyleGreenDark}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#1B5E20"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- WYBIJAK -->
                    <DataGridTextColumn Header="Szt.Wyb" Binding="{Binding SztukiWybijak, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="65" HeaderStyle="{StaticResource WybijakHeaderStyle}"
                                        CellStyle="{StaticResource CellStylePurple}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="KG Wyb" Binding="{Binding KilogramyWybijak, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:F0}}"
                                        Width="70" HeaderStyle="{StaticResource WybijakHeaderStyle}"
                                        CellStyle="{StaticResource CellStylePurple}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- CENA -->
                    <DataGridTextColumn Header="Cena" Binding="{Binding Cena, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:F2}}"
                                        Width="70" HeaderStyle="{StaticResource CenaHeaderStyle}"
                                        CellStyle="{StaticResource CellStyleBlue}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#1565C0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- DODATEK - uÅ¼ywa konwertera aby pokazaÄ‡ puste gdy 0 -->
                    <DataGridTemplateColumn Header="Dodatek" Width="70"
                                            HeaderStyle="{StaticResource CenaHeaderStyle}"
                                            CellStyle="{StaticResource CellStyleBlue}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Dodatek, Converter={StaticResource ZeroToEmptyConverter}}"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Padding="0,0,8,0"
                                           FontWeight="Bold"
                                           Foreground="#0D47A1"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox x:Name="txtDodatek"
                                         Text="{Binding Dodatek, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ZeroToEmptyConverter}}"
                                         HorizontalAlignment="Stretch"
                                         VerticalAlignment="Center"
                                         FontWeight="Bold"
                                         Foreground="#0D47A1"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         TextAlignment="Right"
                                         Padding="0,0,8,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- Typ Ceny - ComboBox -->
                    <DataGridTemplateColumn Header="Typ Ceny" Width="100" HeaderStyle="{StaticResource CenaHeaderStyle}">
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="#BBDEFB"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TypCeny}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontSize="11"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox SelectedItem="{Binding TypCeny, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Loaded="CboTypCeny_Loaded"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- Ubytek -->
                    <DataGridTextColumn Header="Ubytek%" Binding="{Binding Ubytek, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:F2}}"
                                        Width="70" HeaderStyle="{StaticResource CenaHeaderStyle}"
                                        CellStyle="{StaticResource CellStyleRed}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#C62828"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- PiK checkbox -->
                    <DataGridCheckBoxColumn Header="PiK" Binding="{Binding PiK, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Width="45" HeaderStyle="{StaticResource CenaHeaderStyle}">
                        <DataGridCheckBoxColumn.ElementStyle>
                            <Style TargetType="CheckBox">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridCheckBoxColumn.ElementStyle>
                    </DataGridCheckBoxColumn>

                    <!-- WartoÅ›Ä‡ -->
                    <DataGridTextColumn Header="WartoÅ›Ä‡" Binding="{Binding Wartosc, StringFormat={}{0:N0} zÅ‚}"
                                        Width="100" IsReadOnly="True" HeaderStyle="{StaticResource CenaHeaderStyle}"
                                        CellStyle="{StaticResource CellStyleGreenDark}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#1B5E20"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- PANEL LUMEL -->
        <Border x:Name="lumelPanel"
                Grid.Row="2"
                Background="White"
                CornerRadius="10"
                Margin="20,0,20,10"
                Visibility="Collapsed"
                MaxHeight="200">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="15"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#9B59B6" Padding="15,8" CornerRadius="10,10,0,0">
                    <Grid>
                        <TextBlock Text="Dane LUMEL - wybierz wiersz i kliknij dwukrotnie aby przypisaÄ‡"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                        <Button Content="X"
                                HorizontalAlignment="Right"
                                Click="BtnCloseLumel_Click"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Padding="8,2"/>
                    </Grid>
                </Border>

                <DataGrid Grid.Row="1"
                          x:Name="dataGridView2"
                          AutoGenerateColumns="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          FontSize="12"
                          RowHeight="28"
                          Background="White"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#E0E0E0"
                          MouseDoubleClick="DataGridView2_MouseDoubleClick"
                          Margin="0,0,0,5"/>
            </Grid>
        </Border>

        <!-- STOPKA -->
        <Border Grid.Row="3" Background="White" Padding="20,12" Margin="20,0,20,15">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Statystyki -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="#E3F2FD" CornerRadius="6" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="RekordÃ³w: " FontWeight="SemiBold" Foreground="#1976D2"/>
                            <TextBlock x:Name="lblRecordCount" Text="0" FontWeight="Bold" Foreground="#1976D2"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#E8F5E9" CornerRadius="6" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Suma Netto U: " FontWeight="SemiBold" Foreground="#388E3C"/>
                            <TextBlock x:Name="lblSumaNetto" Text="0 kg" FontWeight="Bold" Foreground="#388E3C"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#FFF3E0" CornerRadius="6" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Suma LUMEL: " FontWeight="SemiBold" Foreground="#F57C00"/>
                            <TextBlock x:Name="lblSumaSztuk" Text="0" FontWeight="Bold" Foreground="#F57C00"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#C8E6C9" CornerRadius="6" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Suma WartoÅ›Ä‡: " FontWeight="SemiBold" Foreground="#1B5E20"/>
                            <TextBlock x:Name="lblSumaWartosc" Text="0 zÅ‚" FontWeight="Bold" Foreground="#1B5E20"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Legenda PiK -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="PiK ="
                               Foreground="#C62828"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    <TextBlock Text=" PadÅ‚e/CH/NW/ZM "
                               Foreground="#C62828"
                               FontWeight="Bold"
                               TextDecorations="Strikethrough"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="(wliczone, nie odejmowane)"
                               Foreground="#666"
                               FontStyle="Italic"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Status -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Status: " Foreground="#7F8C8D"/>
                    <TextBlock x:Name="statusLabel" Text="Gotowy" FontWeight="SemiBold" Foreground="#5C8A3A"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
