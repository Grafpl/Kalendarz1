<Window x:Class="Kalendarz1.WidokSpecyfikacje"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Specyfikacje Dostaw - System Piórkowscy"
        Height="850" Width="1900"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#ECEFF1"
        FontFamily="Segoe UI"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Główny styl przycisków -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B732F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A5C24"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#607D8B"/>
        </Style>

        <!-- Styl dla nagłówków DataGrid -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>

        <!-- Style dla nagłówków grup kolumn -->
        <Style x:Key="DeklaracjeHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#F57C00"/>
        </Style>

        <Style x:Key="WagiHodowcyHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#FFA000"/>
        </Style>

        <Style x:Key="WagiUbojniHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#388E3C"/>
        </Style>

        <Style x:Key="WybijakHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#7B1FA2"/>
        </Style>

        <Style x:Key="CenaHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
            <Setter Property="Background" Value="#1976D2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NAGŁÓWEK -->
        <Border Grid.Row="0" Background="#5C8A3A" Padding="25,18">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Color="#000000" Opacity="0.2" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Tytuł i data -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="SPECYFIKACJA DOSTAW"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <Border Background="#4B732F" CornerRadius="6" Padding="15,8" Margin="30,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Data:"
                                       Foreground="#C8E6C9"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <DatePicker x:Name="dateTimePicker1"
                                        SelectedDateChanged="DateTimePicker1_SelectedDateChanged"
                                        Width="140"
                                        FontSize="14"
                                        Background="White"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Przyciski akcji -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="W GÓRĘ"
                            x:Name="buttonUP"
                            Click="ButtonUP_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="12,8"/>
                    <Button Content="W DÓŁ"
                            x:Name="buttonDown"
                            Click="ButtonDown_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="12,8"/>
                    <Button Content="AVILOG"
                            x:Name="buttonBon"
                            Click="ButtonBon_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#3498DB"/>
                    <Button Content="LUMEL"
                            x:Name="btnLoadData"
                            Click="BtnLoadData_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#9B59B6"/>
                    <Button Content="DRUKUJ PDF"
                            x:Name="button1"
                            Click="Button1_Click"
                            Style="{StaticResource MainButtonStyle}"
                            Background="#E67E22"/>
                    <Button Content="ZAPISZ WSZYSTKO"
                            x:Name="btnSaveAll"
                            Click="BtnSaveAll_Click"
                            Style="{StaticResource MainButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- GŁÓWNA TABELA -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Margin="20,15,20,10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="15"/>
            </Border.Effect>
            <DataGrid x:Name="dataGridView1"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      GridLinesVisibility="All"
                      HorizontalGridLinesBrush="#E0E0E0"
                      VerticalGridLinesBrush="#EEEEEE"
                      RowHeight="40"
                      Background="White"
                      BorderThickness="0"
                      FontSize="12"
                      AlternatingRowBackground="#FAFAFA"
                      ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                      CellEditEnding="DataGridView1_CellEditEnding"
                      SelectionChanged="DataGridView1_SelectionChanged"
                      LoadingRow="DataGridView1_LoadingRow">

                <DataGrid.Columns>
                    <!-- LP -->
                    <DataGridTextColumn Header="LP" Binding="{Binding Nr}" Width="45" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="14"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Dostawca - ComboBox -->
                    <DataGridTemplateColumn Header="Dostawca" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Dostawca}"
                                           VerticalAlignment="Center"
                                           Padding="5,0"
                                           FontWeight="SemiBold"
                                           Background="#E8F5E9"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox x:Name="cboDostawca"
                                          SelectedValue="{Binding DostawcaGID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          SelectedValuePath="GID"
                                          DisplayMemberPath="ShortName"
                                          Background="#C8E6C9"
                                          Loaded="CboDostawca_Loaded"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- DEKLARACJE - edytowalne (pomarańczowy nagłówek) -->
                    <DataGridTextColumn Header="Szt.Dek" Binding="{Binding SztukiDek, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="65" HeaderStyle="{StaticResource DeklaracjeHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Background" Value="#FFF3E0"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="#FFE0B2"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Padłe" Binding="{Binding Padle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="55" HeaderStyle="{StaticResource DeklaracjeHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Background" Value="#FFCCBC"/>
                                <Setter Property="Foreground" Value="#BF360C"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="#FFAB91"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="CH" Binding="{Binding CH, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="45" HeaderStyle="{StaticResource DeklaracjeHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Background" Value="#FFF3E0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="#FFE0B2"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="NW" Binding="{Binding NW, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="45" HeaderStyle="{StaticResource DeklaracjeHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Background" Value="#FFF3E0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="#FFE0B2"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="ZM" Binding="{Binding ZM, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="45" HeaderStyle="{StaticResource DeklaracjeHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Background" Value="#FFF3E0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="#FFE0B2"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="LUMEL" Binding="{Binding LUMEL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="65" HeaderStyle="{StaticResource DeklaracjeHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#8E24AA"/>
                                <Setter Property="Background" Value="#E1BEE7"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="#CE93D8"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>

                    <!-- WAGI HODOWCY - tylko do odczytu (z Avilog) -->
                    <DataGridTextColumn Header="Brutto H" Binding="{Binding BruttoHodowcy}" Width="80"
                                        IsReadOnly="True" HeaderStyle="{StaticResource WagiHodowcyHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                                <Setter Property="Background" Value="#FFECB3"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Tara H" Binding="{Binding TaraHodowcy}" Width="70"
                                        IsReadOnly="True" HeaderStyle="{StaticResource WagiHodowcyHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                                <Setter Property="Background" Value="#FFECB3"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Netto H" Binding="{Binding NettoHodowcy}" Width="85"
                                        IsReadOnly="True" HeaderStyle="{StaticResource WagiHodowcyHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#E65100"/>
                                <Setter Property="Background" Value="#FFE0B2"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- WAGI UBOJNI - tylko do odczytu (z Avilog) -->
                    <DataGridTextColumn Header="Brutto U" Binding="{Binding BruttoUbojni}" Width="80"
                                        IsReadOnly="True" HeaderStyle="{StaticResource WagiUbojniHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                                <Setter Property="Background" Value="#C8E6C9"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Tara U" Binding="{Binding TaraUbojni}" Width="70"
                                        IsReadOnly="True" HeaderStyle="{StaticResource WagiUbojniHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                                <Setter Property="Background" Value="#C8E6C9"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Netto U" Binding="{Binding NettoUbojni}" Width="85"
                                        IsReadOnly="True" HeaderStyle="{StaticResource WagiUbojniHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#1B5E20"/>
                                <Setter Property="Background" Value="#A5D6A7"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- WYBIJAK - edytowalne (fioletowy nagłówek) -->
                    <DataGridTextColumn Header="Szt.Wyb" Binding="{Binding SztukiWybijak, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="65" HeaderStyle="{StaticResource WybijakHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Background" Value="#E1BEE7"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="#CE93D8"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="KG Wyb" Binding="{Binding KilogramyWybijak, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:F0}}"
                                        Width="70" HeaderStyle="{StaticResource WybijakHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                                <Setter Property="Background" Value="#E1BEE7"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="#CE93D8"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>

                    <!-- CENA I UBYTEK - edytowalne (niebieski nagłówek) -->
                    <DataGridTextColumn Header="Cena" Binding="{Binding Cena, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:F2}}"
                                        Width="70" HeaderStyle="{StaticResource CenaHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#1565C0"/>
                                <Setter Property="Background" Value="#BBDEFB"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="#90CAF9"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>

                    <!-- Typ Ceny - ComboBox -->
                    <DataGridTemplateColumn Header="Typ Ceny" Width="110" HeaderStyle="{StaticResource CenaHeaderStyle}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TypCeny}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Background="#BBDEFB"
                                           FontSize="11"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox SelectedItem="{Binding TypCeny, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Background="#90CAF9"
                                          Loaded="CboTypCeny_Loaded"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Ubytek%" Binding="{Binding Ubytek, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:F2}}"
                                        Width="70" HeaderStyle="{StaticResource CenaHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#C62828"/>
                                <Setter Property="Background" Value="#FFCDD2"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="#EF9A9A"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>

                    <!-- PiK checkbox - Padłe i Konfiskaty wliczone -->
                    <DataGridCheckBoxColumn Header="PiK" Binding="{Binding PiK, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Width="45" HeaderStyle="{StaticResource CenaHeaderStyle}">
                        <DataGridCheckBoxColumn.ElementStyle>
                            <Style TargetType="CheckBox">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridCheckBoxColumn.ElementStyle>
                    </DataGridCheckBoxColumn>

                    <!-- Wartość obliczona -->
                    <DataGridTextColumn Header="Wartość" Binding="{Binding Wartosc, StringFormat={}{0:N0} zł}"
                                        Width="100" IsReadOnly="True" HeaderStyle="{StaticResource CenaHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#1B5E20"/>
                                <Setter Property="Background" Value="#A5D6A7"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- PANEL LUMEL (ukryty domyślnie) -->
        <Border x:Name="lumelPanel"
                Grid.Row="2"
                Background="White"
                CornerRadius="10"
                Margin="20,0,20,10"
                Visibility="Collapsed"
                MaxHeight="200">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="15"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#9B59B6" Padding="15,8" CornerRadius="10,10,0,0">
                    <Grid>
                        <TextBlock Text="Dane LUMEL - wybierz wiersz i kliknij dwukrotnie aby przypisać"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                        <Button Content="X"
                                HorizontalAlignment="Right"
                                Click="BtnCloseLumel_Click"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Padding="8,2"/>
                    </Grid>
                </Border>

                <DataGrid Grid.Row="1"
                          x:Name="dataGridView2"
                          AutoGenerateColumns="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          FontSize="12"
                          RowHeight="28"
                          Background="White"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#E0E0E0"
                          MouseDoubleClick="DataGridView2_MouseDoubleClick"
                          Margin="0,0,0,5"/>
            </Grid>
        </Border>

        <!-- STOPKA -->
        <Border Grid.Row="3" Background="White" Padding="20,12" Margin="20,0,20,15">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Statystyki -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="#E3F2FD" CornerRadius="6" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Rekordów: " FontWeight="SemiBold" Foreground="#1976D2"/>
                            <TextBlock x:Name="lblRecordCount" Text="0" FontWeight="Bold" Foreground="#1976D2"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#E8F5E9" CornerRadius="6" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Suma Netto U: " FontWeight="SemiBold" Foreground="#388E3C"/>
                            <TextBlock x:Name="lblSumaNetto" Text="0 kg" FontWeight="Bold" Foreground="#388E3C"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#FFF3E0" CornerRadius="6" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Suma LUMEL: " FontWeight="SemiBold" Foreground="#F57C00"/>
                            <TextBlock x:Name="lblSumaSztuk" Text="0" FontWeight="Bold" Foreground="#F57C00"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#C8E6C9" CornerRadius="6" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Suma Wartość: " FontWeight="SemiBold" Foreground="#1B5E20"/>
