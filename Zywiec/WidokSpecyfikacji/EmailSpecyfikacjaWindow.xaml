<Window x:Class="Kalendarz1.Zywiec.WidokSpecyfikacji.EmailSpecyfikacjaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wyslij email ze specyfikacja"
        Height="650" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#F9FAFB"
        ResizeMode="CanResize"
        MinWidth="600"
        MinHeight="500">

    <Window.Resources>
        <Style x:Key="ButtonGreen" TargetType="Button">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6EAD5A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonBlue" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naglowek -->
        <Border Grid.Row="0" Background="#5C8A3A" Padding="20">
            <StackPanel>
                <TextBlock Text="Wyslij specyfikacje e-mailem"
                          FontSize="20"
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtDostawca"
                          FontSize="14"
                          Foreground="#E0E0E0"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Formularz -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Informacje o specyfikacji -->
                <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Informacje o specyfikacji" FontSize="14" FontWeight="Bold" Foreground="#5C8A3A" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Data uboju:" FontSize="10" Foreground="#666"/>
                                <TextBlock x:Name="txtDataUboju" FontSize="14" FontWeight="Bold" Foreground="#1976D2" Margin="0,3,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Sztuki:" FontSize="10" Foreground="#666"/>
                                <TextBlock x:Name="txtSztuki" FontSize="14" FontWeight="Bold" Foreground="#F57C00" Margin="0,3,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Kilogramy:" FontSize="10" Foreground="#666"/>
                                <TextBlock x:Name="txtKilogramy" FontSize="14" FontWeight="Bold" Foreground="#388E3C" Margin="0,3,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Netto:" FontSize="10" Foreground="#666"/>
                                <TextBlock x:Name="txtWartosc" FontSize="14" FontWeight="Bold" Foreground="#D32F2F" Margin="0,3,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Dane emaila -->
                <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="4" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Dane wiadomosci" FontSize="14" FontWeight="Bold" Foreground="#5C8A3A" Margin="0,0,0,10"/>

                        <TextBlock Text="Do:" FontSize="11" Foreground="#666" Margin="0,5,0,3"/>
                        <TextBox x:Name="txtDo" FontSize="12" Padding="8" />
                        <TextBlock Text="Jesli brak adresu email w bazie - pole bedzie puste" FontSize="9" Foreground="#999" Margin="0,2,0,0" FontStyle="Italic"/>

                        <TextBlock Text="Temat:" FontSize="11" Foreground="#666" Margin="0,10,0,3"/>
                        <TextBox x:Name="txtTemat" FontSize="12" Padding="8" />

                        <Grid Margin="0,10,0,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Wiadomosc:" FontSize="11" Foreground="#666"/>
                            <Button Grid.Column="1" Content="Zmien szablon (5 wariantow)" FontSize="10" Padding="8,3"
                                    Background="#FF9800" Foreground="White" BorderThickness="0" Cursor="Hand" Click="BtnZmienSzablon_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                        <TextBox x:Name="txtWiadomosc"
                                FontSize="11"
                                Padding="8"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                MinHeight="180"/>

                        <TextBlock Text="Zalacznik PDF:" FontSize="11" Foreground="#666" Margin="0,10,0,3"/>
                        <Border Background="#E8F5E9" Padding="10" CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="PDF" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#388E3C" FontWeight="Bold"/>
                                <TextBlock Grid.Column="1" x:Name="txtZalacznik" FontSize="10" VerticalAlignment="Center" TextWrapping="Wrap" Foreground="#2E7D32"/>
                                <Button Grid.Column="2" Content="Otworz folder" FontSize="10" Padding="8,4" Cursor="Hand"
                                        Background="#4CAF50" Foreground="White" BorderThickness="0" Click="BtnOtworzFolder_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Przyciski -->
        <Border Grid.Row="2" Background="#F3F4F6" Padding="15" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="Kopiuj tresc" Style="{StaticResource ButtonBlue}" Width="120" Click="BtnKopiuj_Click"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Otworz w kliencie email" Style="{StaticResource ButtonGreen}" Width="180" Margin="0,0,10,0" Click="BtnWyslij_Click"/>
                    <Button Content="Anuluj" Style="{StaticResource ButtonGreen}" Background="#9CA3AF" Width="100" Click="BtnAnuluj_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
