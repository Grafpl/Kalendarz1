<Window x:Class="Kalendarz1.Zywiec.WidokSpecyfikacji.PosrednikManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zarządzanie Pośrednikami"
        Height="650" Width="1200"
        MinHeight="500" MinWidth="900"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="PanelHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#D32F2F"/>
        </Style>
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#388E3C"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEWY PANEL: Moi pośrednicy -->
        <Border Grid.Column="0" Background="White" CornerRadius="6" Padding="12"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,8">
                    <TextBlock Style="{StaticResource PanelHeader}" Foreground="#1976D2">
                        <Run Text="&#x1F4CB;"/> Moi pośrednicy
                    </TextBlock>
                    <TextBlock Text="Whitelista pośredników dodanych z kontrahentów Symfonii"
                               FontSize="11" Foreground="#757575" Margin="0,0,0,4"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                    <Button x:Name="btnRefreshPosrednicy" Content="Odśwież"
                            Style="{StaticResource ActionButton}" Margin="0,0,8,0"
                            Click="BtnRefreshPosrednicy_Click"/>
                    <Button x:Name="btnDeactivate" Content="Usuń zaznaczonego"
                            Style="{StaticResource DangerButton}"
                            Click="BtnDeactivate_Click"/>
                </StackPanel>

                <DataGrid x:Name="dgPosrednicy" AutoGenerateColumns="False"
                          IsReadOnly="True" SelectionMode="Single"
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#F5F9FF"
                          BorderBrush="#E0E0E0" BorderThickness="1"
                          FontSize="12">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nazwa" Binding="{Binding Nazwa}" Width="*"/>
                        <DataGridTextColumn Header="Skrót" Binding="{Binding Kod}" Width="100"/>
                        <DataGridTextColumn Header="NIP" Binding="{Binding NIP}" Width="110"/>
                        <DataGridTextColumn Header="Miasto" Binding="{Binding Miasto}" Width="100"/>
                        <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>

        <!-- PRAWY PANEL: Kontrahenci Symfonia -->
        <Border Grid.Column="2" Background="White" CornerRadius="6" Padding="12"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,8">
                    <TextBlock Style="{StaticResource PanelHeader}" Foreground="#F57C00">
                        <Run Text="&#x1F50D;"/> Kontrahenci Symfonia
                    </TextBlock>
                    <TextBlock Text="Wyszukaj kontrahenta i dodaj go jako pośrednika"
                               FontSize="11" Foreground="#757575" Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtSearch" Grid.Column="0"
                                 FontSize="13" Padding="8,6"
                                 VerticalContentAlignment="Center"
                                 TextChanged="TxtSearch_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="BorderBrush" Value="#BDBDBD"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <Button Grid.Column="1" Content="Szukaj" Margin="8,0,0,0"
                                Style="{StaticResource ActionButton}" Background="#F57C00"
                                Click="BtnSearch_Click"/>
                    </Grid>
                </StackPanel>

                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                    <Button x:Name="btnAddPosrednik" Content="← Dodaj jako pośrednika"
                            Style="{StaticResource SuccessButton}"
                            Click="BtnAddPosrednik_Click"/>
                </StackPanel>

                <DataGrid x:Name="dgSymfonia" AutoGenerateColumns="False"
                          IsReadOnly="True" SelectionMode="Single"
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#FFF8E1"
                          BorderBrush="#E0E0E0" BorderThickness="1"
                          FontSize="12">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Skrót" Binding="{Binding Shortcut}" Width="120"/>
                        <DataGridTextColumn Header="Nazwa" Binding="{Binding Name1}" Width="*"/>
                        <DataGridTextColumn Header="NIP" Binding="{Binding NIP}" Width="110"/>
                        <DataGridTextColumn Header="Miasto" Binding="{Binding City}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </Grid>
</Window>
