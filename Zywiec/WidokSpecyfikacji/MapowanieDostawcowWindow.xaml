<Window x:Class="Kalendarz1.Zywiec.WidokSpecyfikacji.MapowanieDostawcowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mapowanie DostawcÃ³w LibraNet â†’ Symfonia"
        Height="800" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterOwner"
        Background="#ECEFF1"
        FontFamily="Segoe UI"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <!-- Styl gÅ‚Ã³wnych przyciskÃ³w -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#9C27B0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#7B1FA2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#6A1B9A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#BDBDBD"/>
                                <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#43A047"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#388E3C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#BDBDBD"/>
                                <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#607D8B"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#546E7A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#455A64"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#E53935"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C62828"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#B71C1C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#BDBDBD"/>
                                <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SmallButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF9800"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="3,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F57C00"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl nagÅ‚Ã³wka DataGrid -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>

        <!-- Styl wiersza DataGrid dla dostawcÃ³w -->
        <Style x:Key="DostawcaRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinHeight" Value="36"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8F5E9"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="#1B5E20"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsUnmapped}" Value="True">
                    <Setter Property="Background" Value="#FFF8E1"/>
                </DataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsUnmapped}" Value="True"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#FFECB3"/>
                </MultiDataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsUnmapped}" Value="True"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsSelected}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#FFE082"/>
                    <Setter Property="Foreground" Value="#E65100"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Styl wiersza DataGrid dla kontrahentÃ³w -->
        <Style x:Key="KontrahentRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinHeight" Value="36"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#BBDEFB"/>
                    <Setter Property="Foreground" Value="#0D47A1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl komÃ³rki DataGrid -->
        <Style TargetType="DataGridCell">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="#333333"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl TextBox filtra -->
        <Style x:Key="FilterTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NagÅ‚Ã³wek z logo i statystykami -->
        <Border Grid.Row="0" Background="Linear Gradient" Padding="20,15" Margin="10,10,10,5">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#9C27B0" Offset="0"/>
                    <GradientStop Color="#7B1FA2" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Color="#000000" Opacity="0.2" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ”—" FontSize="28" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="Mapowanie DostawcÃ³w" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="LibraNet â†’ Symfonia Handel" FontSize="12" Foreground="#E1BEE7" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Panel statystyk -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="#7B1FA2" CornerRadius="6" Padding="15,8" Margin="5,0">
                        <StackPanel>
                            <TextBlock x:Name="txtStatZmapowani" Text="0" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="Zmapowani" FontSize="10" Foreground="#E1BEE7" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#E91E63" CornerRadius="6" Padding="15,8" Margin="5,0">
                        <StackPanel>
                            <TextBlock x:Name="txtStatNiezmapowani" Text="0" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="Niezmapowani" FontSize="10" Foreground="#F8BBD9" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#00796B" CornerRadius="6" Padding="15,8" Margin="5,0">
                        <StackPanel>
                            <TextBlock x:Name="txtStatProcent" Text="0%" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="KompletnoÅ›Ä‡" FontSize="10" Foreground="#B2DFDB" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Pasek filtrÃ³w dostawcÃ³w -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15,10" Margin="10,5">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Color="#000000" Opacity="0.1" BlurRadius="5"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="ðŸ” Szukaj dostawcy:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold" Foreground="#555"/>
                <TextBox x:Name="txtFilterDostawcy" Grid.Column="1"
                         Style="{StaticResource FilterTextBoxStyle}"
                         TextChanged="TxtFilterDostawcy_TextChanged"
                         ToolTip="Wpisz ID lub nazwÄ™ dostawcy (Enter = szukaj)"/>
                <CheckBox x:Name="chkOnlyUnmapped" Grid.Column="2" Content="âš ï¸ Tylko niezmapowani"
                          VerticalAlignment="Center" Margin="20,0,0,0" FontWeight="SemiBold"
                          Checked="ChkOnlyUnmapped_Changed" Unchecked="ChkOnlyUnmapped_Changed"/>

                <StackPanel Grid.Column="4" Orientation="Horizontal">
                    <Button Content="ðŸ”„ OdÅ›wieÅ¼" Click="BtnRefresh_Click"
                            Style="{StaticResource SmallButtonStyle}" Background="#2196F3"
                            ToolTip="OdÅ›wieÅ¼ dane z bazy (F5)"/>
                    <Button x:Name="btnAutoMatch" Content="âœ¨ Auto-dopasuj" Click="BtnAutoMatch_Click"
                            Style="{StaticResource SmallButtonStyle}" Background="#FF9800"
                            ToolTip="Automatycznie dopasuj dostawcÃ³w po nazwie"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Lista dostawcÃ³w LibraNet -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Margin="10,5" Padding="0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#9C27B0" Padding="12,8">
                    <Grid>
                        <TextBlock Text="ðŸ“¦ DOSTAWCY LIBRANET" FontWeight="Bold" Foreground="White" FontSize="13" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtDostawcyCount" Text="(0)" FontWeight="Normal" Foreground="#E1BEE7"
                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <DataGrid Grid.Row="1" x:Name="dgDostawcy"
                          ItemsSource="{Binding Dostawcy}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          RowStyle="{StaticResource DostawcaRowStyle}"
                          ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#EEEEEE"
                          RowHeight="38"
                          HeadersVisibility="Column"
                          BorderThickness="0"
                          SelectionChanged="DgDostawcy_SelectionChanged"
                          MouseDoubleClick="DgDostawcy_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Consolas"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#5C6BC0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Nazwa dostawcy (LibraNet)" Binding="{Binding ShortName}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Kontrahent Symfonia" Binding="{Binding MappedName}" Width="200">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontStyle" Value="Italic"/>
                                    <Setter Property="Foreground" Value="#00796B"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="IdSymf" Binding="{Binding IdSymf}" Width="70">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Consolas"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Status" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Center"
                                            Background="{Binding StatusBackground}">
                                        <TextBlock Text="{Binding StatusIcon}" FontWeight="Bold"
                                                   Foreground="{Binding StatusForeground}" FontSize="11"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Panel wybranego dostawcy -->
        <Border Grid.Row="3" Margin="10,5" CornerRadius="8" Padding="15,10"
                Background="{Binding SelectedDostawcaBackground, FallbackValue=#E8F5E9}">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Color="#000000" Opacity="0.1" BlurRadius="5"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="ðŸ“Œ Wybrany:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" x:Name="txtSelectedDostawca" Text="(kliknij na dostawcÄ™ aby wybraÄ‡)"
                           FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Foreground="#2E7D32"/>
                <TextBlock Grid.Column="2" x:Name="txtSelectedHint" Text="ðŸ’¡ Dwuklik = szybkie przypisanie"
                           FontSize="11" Foreground="#757575" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Lista kontrahentÃ³w Symfonia -->
        <Border Grid.Row="4" Background="White" CornerRadius="8" Margin="10,5" Padding="0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#1976D2" Padding="12,8">
                    <Grid>
                        <TextBlock Text="ðŸ¢ KONTRAHENCI SYMFONIA" FontWeight="Bold" Foreground="White" FontSize="13" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtKontrahenciCount" Text="(0)" FontWeight="Normal" Foreground="#BBDEFB"
                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Background="#F5F5F5" Padding="12,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="ðŸ” Szukaj:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold" Foreground="#555"/>
                        <TextBox x:Name="txtFilterKontrahenci" Grid.Column="1"
                                 Style="{StaticResource FilterTextBoxStyle}"
                                 TextChanged="TxtFilterKontrahenci_TextChanged"
                                 ToolTip="Szukaj po kodzie, NIP lub nazwie"/>
                        <TextBlock Grid.Column="2" x:Name="txtKontrahenciHint"
                                   Text="ðŸ’¡ Zacznij pisaÄ‡ nazwÄ™ dostawcy - kontrahenci zostanÄ… przefiltrowani"
                                   FontSize="11" Foreground="#757575" VerticalAlignment="Center" Margin="15,0,0,0"/>
                    </Grid>
                </Border>

                <DataGrid Grid.Row="2" x:Name="dgKontrahenci"
                          ItemsSource="{Binding Kontrahenci}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          RowStyle="{StaticResource KontrahentRowStyle}"
                          ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#EEEEEE"
                          RowHeight="38"
                          HeadersVisibility="Column"
                          BorderThickness="0"
                          MouseDoubleClick="DgKontrahenci_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Consolas"/>
                                    <Setter Property="Foreground" Value="#5C6BC0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Kod (SkrÃ³t)" Binding="{Binding Code}" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Consolas"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="NIP" Binding="{Binding NIP}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Consolas"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Nazwa kontrahenta" Binding="{Binding Name}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Przyciski akcji -->
        <Border Grid.Row="5" Background="White" CornerRadius="8" Padding="15" Margin="10,5">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnPrzypisz" Content="âœ… PRZYPISZ WYBRANEGO (Enter)"
                            Click="BtnPrzypisz_Click"
                            Style="{StaticResource SuccessButtonStyle}"
                            IsEnabled="False"
                            ToolTip="Przypisz wybranego kontrahenta do dostawcy (Enter)"/>
                    <Button x:Name="btnUsunMapowanie" Content="ðŸ—‘ï¸ USUÅƒ MAPOWANIE (Del)"
                            Click="BtnUsunMapowanie_Click"
                            Style="{StaticResource DangerButtonStyle}"
                            IsEnabled="False"
                            ToolTip="UsuÅ„ przypisanie kontrahenta (Delete)"/>
                    <Button x:Name="btnClose" Content="âœ– Zamknij (Esc)"
