<Window x:Class="Kalendarz1.HistoriaOcenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ“œ Historia Ocen Dostawcy" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NAGÅÃ“WEK -->
        <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="ðŸ“œ HISTORIA OCEN DOSTAWCY" 
                           FontSize="18" FontWeight="Bold" Foreground="#2C3E50"/>
                <TextBlock x:Name="txtNazwaDostawcy" Text="Åadowanie..." 
                           FontSize="12" Foreground="#7F8C8D" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- TABELA Z HISTORIIÄ„ -->
        <DataGrid Grid.Row="1" x:Name="dgHistoria" 
                  Background="White"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  FontSize="12">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="ðŸ“… Data Oceny" 
                                    Binding="{Binding DataOceny, StringFormat=dd.MM.yyyy}" 
                                    Width="100"/>
                <DataGridTextColumn Header="ðŸ“‹ Nr Raportu" 
                                    Binding="{Binding NumerRaportu}" 
                                    Width="120"/>
                <DataGridTextColumn Header="âœ… Punkty 1-5" 
                                    Binding="{Binding PunktySekcja1_5}" 
                                    Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="âœ… Punkty 6-20" 
                                    Binding="{Binding PunktySekcja6_20}" 
                                    Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="ðŸ† SUMA" 
                                    Binding="{Binding PunktyRazem}" 
                                    Width="80"
                                    FontWeight="Bold">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="ðŸ‘¤ OceniajÄ…cy" 
                                    Binding="{Binding OceniajacyUserID}" 
                                    Width="100"/>
                <DataGridTextColumn Header="ðŸ“ Uwagi" 
                                    Binding="{Binding Uwagi}" 
                                    Width="*"/>
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=PunktyRazem, 
                                     Converter={StaticResource ResourceKey=PointsToColorConverter}}" 
                                     Value="Green">
                            <Setter Property="Background" Value="#E8F5E9"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=PunktyRazem, 
                                     Converter={StaticResource ResourceKey=PointsToColorConverter}}" 
                                     Value="Yellow">
                            <Setter Property="Background" Value="#FFF9C4"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=PunktyRazem, 
                                     Converter={StaticResource ResourceKey=PointsToColorConverter}}" 
                                     Value="Red">
                            <Setter Property="Background" Value="#FFEBEE"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <!-- PRZYCISKI -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="10" Margin="0,10,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“Š Statystyki: " VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock x:Name="txtStatystyki" Text="Åadowanie..." VerticalAlignment="Center" Margin="5,0"/>
                </StackPanel>
                
                <Button x:Name="btnZamknij" Content="âŒ Zamknij" 
                        HorizontalAlignment="Right"
                        Width="100" Height="30"
                        Background="#95A5A6" Foreground="White"
                        FontWeight="Bold" Click="BtnZamknij_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>