<Window x:Class="Kalendarz1.HistoriaOcenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalendarz1"
        mc:Ignorable="d"
        Title="ðŸ“Š Historia Ocen Dostawcy" 
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Konwerter punktÃ³w na kolor -->
        <local:PointsToColorConverter x:Key="PointsToColorConverter"/>
        
        <!-- Style dla nagÅ‚Ã³wka -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1E3A5F" Offset="0"/>
            <GradientStop Color="#2E4A7F" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Style dla przyciskÃ³w -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#2E8B57"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3CB371"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        
        <!-- NagÅ‚Ã³wek -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo placeholder -->
                <Border Grid.Column="0" 
                        Width="100" Height="60" 
                        Margin="20,0"
                        Background="#D4AF37"
                        CornerRadius="5"
                        VerticalAlignment="Center">
                    <TextBlock Text="LOGO" 
                               FontWeight="Bold" 
                               FontSize="16"
                               Foreground="#1E3A5F"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
                
                <!-- Informacje o dostawcy - NAZWA DOPASOWANA DO C# -->
                <StackPanel Grid.Column="1" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center">
                    <TextBlock x:Name="txtNazwaDostawcy" 
                               Text="Nazwa dostawcy" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Statystyki -->
                <Border Grid.Column="2" 
                        Background="#D4AF37" 
                        CornerRadius="10" 
                        Margin="20" 
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="STATYSTYKI" 
                                   FontSize="10" 
                                   FontWeight="Bold" 
                                   Foreground="#1E3A5F"/>
                        <TextBlock x:Name="txtStatystyki" 
                                   Text="Brak ocen" 
                                   FontSize="11" 
                                   Foreground="#1E3A5F" 
                                   TextWrapping="Wrap"
                                   MaxWidth="200"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Lista ocen - NAZWA DOPASOWANA DO C# -->
        <DataGrid Grid.Row="1" 
                  x:Name="dgHistoria" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Background="White"
                  BorderThickness="0"
                  RowHeight="45"
                  FontSize="11"
                  Margin="10"
                  AlternationCount="2">
            
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#36454F"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Padding" Value="10,0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="White"/>
                    <Style.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="#F8F8F8"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E8F4F8"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
            
            <DataGrid.Columns>
                <!-- Kolumna ID -->
                <DataGridTextColumn Header="ID" 
                                    Binding="{Binding ID}" 
                                    Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- Data oceny -->
                <DataGridTextColumn Header="ðŸ“… Data oceny" 
                                    Binding="{Binding DataOceny, StringFormat=yyyy-MM-dd}" 
                                    Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- Nr raportu -->
                <DataGridTextColumn Header="Nr raportu" 
                                    Binding="{Binding NumerRaportu}" 
                                    Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- Punkty Sekcja 1-5 -->
                <DataGridTextColumn Header="Sek. 1-5" 
                                    Binding="{Binding PunktySekcja1_5}" 
                                    Width="70">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- Punkty Sekcja 6-20 -->
                <DataGridTextColumn Header="Sek. 6-20" 
                                    Binding="{Binding PunktySekcja6_20}" 
                                    Width="70">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- Punkty RAZEM z kolorami -->
                <DataGridTemplateColumn Header="ðŸ† Punkty" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="{Binding PunktyRazem, Converter={StaticResource PointsToColorConverter}}"
                                    CornerRadius="15"
                                    Padding="10,5"
                                    Margin="5"
                                    HorizontalAlignment="Center">
                                <TextBlock Text="{Binding PunktyRazem, StringFormat={}{0} pkt}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           Foreground="White"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <!-- OceniajÄ…cy -->
                <DataGridTextColumn Header="ðŸ‘¤ OceniajÄ…cy" 
                                    Binding="{Binding OceniajacyUserID}" 
                                    Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- Uwagi -->
                <DataGridTextColumn Header="ðŸ“ Uwagi" 
                                    Binding="{Binding Uwagi}" 
                                    Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- Status -->
                <DataGridTextColumn Header="Status" 
                                    Binding="{Binding Status}" 
                                    Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Panel dolny z przyciskami -->
        <Border Grid.Row="2" 
                Background="#F0F0F0" 
                BorderBrush="#DDDDDD" 
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Info po lewej -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center" 
                            Margin="20,0">
                    <Border Background="#2E8B57" 
                            CornerRadius="5" 
                            Padding="8,3" 
                            Margin="0,0,10,0">
                        <TextBlock Text="Bardzo dobry: â‰¥30 pkt" 
                                   Foreground="White" 
                                   FontSize="10"/>
                    </Border>
                    <Border Background="#D4AF37" 
                            CornerRadius="5" 
                            Padding="8,3" 
                            Margin="0,0,10,0">
                        <TextBlock Text="Dobry: 20-29 pkt" 
                                   Foreground="White" 
                                   FontSize="10"/>
                    </Border>
                    <Border Background="#DC143C" 
                            CornerRadius="5" 
                            Padding="8,3">
                        <TextBlock Text="NiezadowalajÄ…cy: &lt;20 pkt" 
                                   Foreground="White" 
                                   FontSize="10"/>
                    </Border>
                </StackPanel>
                
                <!-- Przyciski po prawej -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button x:Name="btnZamknij" 
                            Content="âŒ Zamknij" 
                            Style="{StaticResource ActionButton}"
                            Background="#DC143C"
                            Click="BtnZamknij_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
