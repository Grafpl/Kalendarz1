<Window x:Class="Kalendarz1.Zywiec.RaportyStatystyki.RaportyStatystykiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Raporty i Statystyki Hodowców"
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#ECEFF1"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Style przycisków -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B732F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A5C24"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#607D8B"/>
        </Style>

        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border"
                                Background="#34495E"
                                CornerRadius="8,8,0,0"
                                Margin="2,0,2,0"
                                Padding="20,12">
                            <ContentPresenter x:Name="ContentSite"
                                              ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#5C8A3A"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4B732F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- NAGLOWEK -->
        <Border Grid.Row="0" Background="#5C8A3A" Padding="25,18">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Color="#000000" Opacity="0.2" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <TextBlock Text="RAPORTY I STATYSTYKI HODOWCOW"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <Button Content="ZAMKNIJ"
                        HorizontalAlignment="Right"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="BtnClose_Click"/>
            </Grid>
        </Border>

        <!-- ZAKLADKI -->
        <TabControl Grid.Row="1" Margin="20" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem" BasedOn="{StaticResource TabItemStyle}"/>
            </TabControl.Resources>

            <!-- ZAKLADKA 1: RAPORT HODOWCY -->
            <TabItem Header="Raport Hodowcy">
                <Border Background="White" CornerRadius="0,10,10,10" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="15"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Panel filtrow -->
                        <Border Grid.Row="0" Background="#F5F5F5" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Wybor zakresu dat -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <TextBlock Text="Zakres dat:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,15,0"/>

                                        <RadioButton x:Name="rbRok" Content="Rok:" GroupName="ZakresDat"
                                                     VerticalAlignment="Center" Margin="0,0,10,0"
                                                     Checked="RbZakres_Checked"/>
                                        <ComboBox x:Name="cboRok" Width="80" VerticalAlignment="Center" Margin="0,0,20,0"
                                                  SelectionChanged="CboRok_SelectionChanged"/>

                                        <RadioButton x:Name="rbWlasny" Content="Wlasny zakres:" GroupName="ZakresDat"
                                                     VerticalAlignment="Center" Margin="0,0,10,0" IsChecked="True"
                                                     Checked="RbZakres_Checked"/>
                                        <DatePicker x:Name="dpOd" Width="130" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <TextBlock Text="-" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <DatePicker x:Name="dpDo" Width="130" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Wybor hodowcy -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="40,0,0,0">
                                        <TextBlock Text="Hodowca:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                        <ComboBox x:Name="cboHodowca" Width="250" VerticalAlignment="Center"
                                                  DisplayMemberPath="ShortName" SelectedValuePath="GID"
                                                  SelectionChanged="CboHodowca_SelectionChanged"/>

                                        <!-- Termin zaplaty -->
                                        <TextBlock Text="Termin zaplaty:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0,10,0"/>
                                        <TextBox x:Name="txtTerminZaplaty" Width="50" VerticalAlignment="Center"
                                                 TextAlignment="Center" FontSize="13"/>
                                        <TextBlock Text="dni" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        <Button x:Name="btnZapiszTermin" Content="Zapisz"
                                                VerticalAlignment="Center" Margin="10,0,0,0"
                                                Padding="12,6" FontSize="11"
                                                Background="#1976D2" Foreground="White"
                                                Click="BtnZapiszTermin_Click"/>
                                    </StackPanel>

                                    <!-- Przycisk generowania -->
                                    <Button Grid.Column="2" Content="GENERUJ RAPORT"
                                            Style="{StaticResource MainButtonStyle}"
                                            Click="BtnGenerujRaport_Click"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Podglad raportu -->
                        <Border Grid.Row="1" Background="#FAFAFA" CornerRadius="8" Padding="10">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                <StackPanel x:Name="raportPreviewPanel">
                                    <!-- Naglowek raportu -->
                                    <Border x:Name="raportHeader" Background="#5C8A3A" CornerRadius="8" Padding="20" Margin="0,0,0,15" Visibility="Collapsed">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock x:Name="lblRaportTytul" Text="RAPORT HODOWCY" FontSize="20" FontWeight="Bold" Foreground="White"/>
                                                <TextBlock x:Name="lblRaportHodowca" Text="" FontSize="16" Foreground="White" Margin="0,5,0,0"/>
                                                <TextBlock x:Name="lblRaportOkres" Text="" FontSize="12" Foreground="#C8E6C9"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                <TextBlock x:Name="lblRaportDostawy" Text="Dostawy: 0" FontSize="14" Foreground="White" HorizontalAlignment="Right"/>
                                                <TextBlock x:Name="lblRaportSumaKG" Text="Suma: 0 kg" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Right"/>
                                                <TextBlock x:Name="lblRaportWartosc" Text="Wartosc: 0 zl" FontSize="14" Foreground="#C8E6C9" HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- Statystyki jakosci -->
                                    <Border x:Name="raportStatystyki" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15" Visibility="Collapsed">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="1" Color="#000000" Opacity="0.1" BlurRadius="5"/>
                                        </Border.Effect>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Roznica wag -->
                                            <Border Grid.Column="0" Background="#E3F2FD" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                                                <StackPanel>
                                                    <TextBlock Text="ROZNICA WAG (H vs U)" FontWeight="Bold" Foreground="#1976D2" FontSize="12"/>
                                                    <TextBlock x:Name="lblStatRoznicaWag" Text="0%" FontSize="24" FontWeight="Bold" Foreground="#1565C0" Margin="0,10,0,0"/>
                                                    <TextBlock x:Name="lblStatRoznicaWagMinMax" Text="Min: 0% | Max: 0%" FontSize="11" Foreground="#64B5F6"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Opasienie -->
                                            <Border Grid.Column="1" Background="#FFF3E0" CornerRadius="8" Padding="15" Margin="5,0,5,0">
                                                <StackPanel>
                                                    <TextBlock Text="OPASIENIE" FontWeight="Bold" Foreground="#F57C00" FontSize="12"/>
                                                    <TextBlock x:Name="lblStatOpasienie" Text="0 kg" FontSize="24" FontWeight="Bold" Foreground="#EF6C00" Margin="0,10,0,0"/>
                                                    <TextBlock x:Name="lblStatOpasienieProcent" Text="0% netto" FontSize="11" Foreground="#FFB74D"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Padle -->
                                            <Border Grid.Column="2" Background="#FFEBEE" CornerRadius="8" Padding="15" Margin="10,0,0,0">
                                                <StackPanel>
                                                    <TextBlock Text="PADLE" FontWeight="Bold" Foreground="#C62828" FontSize="12"/>
                                                    <TextBlock x:Name="lblStatPadle" Text="0 szt" FontSize="24" FontWeight="Bold" Foreground="#B71C1C" Margin="0,10,0,0"/>
                                                    <TextBlock x:Name="lblStatPadleProcent" Text="0% dostarczonych" FontSize="11" Foreground="#EF9A9A"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <!-- Tabela dostaw -->
                                    <Border x:Name="raportTabela" Background="White" CornerRadius="8" Padding="15" Visibility="Collapsed">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="1" Color="#000000" Opacity="0.1" BlurRadius="5"/>
                                        </Border.Effect>
                                        <StackPanel>
                                            <TextBlock Text="SZCZEGOLY DOSTAW" FontWeight="Bold" FontSize="14" Foreground="#34495E" Margin="0,0,0,10"/>
                                            <DataGrid x:Name="dgDostawy"
                                                      AutoGenerateColumns="False"
                                                      CanUserAddRows="False"
                                                      CanUserDeleteRows="False"
                                                      IsReadOnly="True"
                                                      GridLinesVisibility="Horizontal"
                                                      HorizontalGridLinesBrush="#E0E0E0"
                                                      RowHeight="32"
                                                      MaxHeight="400"
                                                      Background="White"
                                                      BorderThickness="1"
                                                      BorderBrush="#E0E0E0">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Data" Binding="{Binding Data, StringFormat={}{0:dd.MM.yyyy}}" Width="90"/>
                                                    <DataGridTextColumn Header="Netto H" Binding="{Binding NettoHodowcy, StringFormat={}{0:N0}}" Width="80"/>
                                                    <DataGridTextColumn Header="Netto U" Binding="{Binding NettoUbojni, StringFormat={}{0:N0}}" Width="80"/>
                                                    <DataGridTextColumn Header="Rozn.%" Binding="{Binding RoznicaProc, StringFormat={}{0:F1}%}" Width="70"/>
                                                    <DataGridTextColumn Header="Opasienie" Binding="{Binding Opasienie, StringFormat={}{0:N0}}" Width="80"/>
                                                    <DataGridTextColumn Header="Padle" Binding="{Binding Padle}" Width="60"/>
                                                    <DataGridTextColumn Header="Konfiskaty" Binding="{Binding Konfiskaty}" Width="80"/>
                                                    <DataGridTextColumn Header="Sztuki" Binding="{Binding SztukiLumel}" Width="70"/>
                                                    <DataGridTextColumn Header="Cena" Binding="{Binding Cena, StringFormat={}{0:F2}}" Width="70"/>
                                                    <DataGridTextColumn Header="Wartosc" Binding="{Binding Wartosc, StringFormat={}{0:N0} zl}" Width="100"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </StackPanel>
                                    </Border>

                                    <!-- Placeholder gdy brak raportu -->
                                    <Border x:Name="raportPlaceholder" Background="#FAFAFA" CornerRadius="8" Padding="50" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="Wybierz hodowce i zakres dat, a nastepnie kliknij GENERUJ RAPORT"
                                                       FontSize="16" Foreground="#9E9E9E" TextAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>

                        <!-- Przyciski akcji -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                            <Button Content="DRUKUJ PDF"
                                    Style="{StaticResource MainButtonStyle}"
                                    Background="#E67E22"
                                    Click="BtnDrukujRaportPDF_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </TabItem>

            <!-- ZAKLADKA 2: RANKING HODOWCOW -->
            <TabItem Header="Ranking Hodowcow">
                <Border Background="White" CornerRadius="0,10,10,10" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="15"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Panel filtrow rankingu -->
                        <Border Grid.Row="0" Background="#F5F5F5" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Zakres dat dla rankingu -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="Zakres dat:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                    <RadioButton x:Name="rbRankingRok" Content="Rok:" GroupName="RankingZakres"
                                                 VerticalAlignment="Center" Margin="0,0,10,0"
                                                 Checked="RbRankingZakres_Checked"/>
                                    <ComboBox x:Name="cboRankingRok" Width="80" VerticalAlignment="Center" Margin="0,0,20,0"/>

                                    <RadioButton x:Name="rbRankingWlasny" Content="Wlasny:" GroupName="RankingZakres"
                                                 VerticalAlignment="Center" Margin="0,0,10,0" IsChecked="True"
                                                 Checked="RbRankingZakres_Checked"/>
                                    <DatePicker x:Name="dpRankingOd" Width="130" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="-" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <DatePicker x:Name="dpRankingDo" Width="130" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Sortowanie -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="40,0,0,0">
                                    <TextBlock Text="Sortuj wg:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <ComboBox x:Name="cboRankingSortowanie" Width="180" VerticalAlignment="Center">
                                        <ComboBoxItem Content="Roznica wag (najlepsza)" IsSelected="True"/>
                                        <ComboBoxItem Content="Opasienie (najnizsza)"/>
                                        <ComboBoxItem Content="Padle % (najnizsza)"/>
                                        <ComboBoxItem Content="Suma kg (najwieksza)"/>
                                        <ComboBoxItem Content="Liczba dostaw"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Przycisk generowania -->
                                <Button Grid.Column="3" Content="GENERUJ RANKING"
                                        Style="{StaticResource MainButtonStyle}"
                                        Click="BtnGenerujRanking_Click"/>
                            </Grid>
                        </Border>

                        <!-- Tabela rankingu -->
                        <DataGrid Grid.Row="1" x:Name="dgRanking"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#E0E0E0"
                                  RowHeight="40"
                                  Background="White"
                                  BorderThickness="1"
                                  BorderBrush="#E0E0E0"
                                  FontSize="13">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Poz." Binding="{Binding Pozycja}" Width="50">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontSize" Value="16"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Hodowca" Binding="{Binding Hodowca}" Width="200">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Dostawy" Binding="{Binding LiczbaDostawF}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Suma kg" Binding="{Binding SumaKGF}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Rozn. wag" Binding="{Binding RoznicaWagF}" Width="90">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Opasienie %" Binding="{Binding OpasienieF}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Padle %" Binding="{Binding PadleF}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Wartosc" Binding="{Binding WartoscF}" Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="#1B5E20"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Przyciski akcji rankingu -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                            <Button Content="DRUKUJ RANKING PDF"
                                    Style="{StaticResource MainButtonStyle}"
                                    Background="#E67E22"
                                    Click="BtnDrukujRankingPDF_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </TabItem>

            <!-- ZAKLADKA 3: USTAWIENIA PROGOW -->
            <TabItem Header="Ustawienia Progow">
                <Border Background="White" CornerRadius="0,10,10,10" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="15"/>
                    </Border.Effect>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel MaxWidth="800" HorizontalAlignment="Left">
                            <TextBlock Text="Ustawienia progow walidacji" FontSize="18" FontWeight="Bold" Foreground="#34495E" Margin="0,0,0,20"/>
                            <TextBlock Text="Progi okreslaja kiedy pokazac ostrzezenie (zolty) lub blad (czerwony) w specyfikacji."
                                       FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,30"/>

                            <!-- ROZNICA WAG -->
                            <Border Background="#E3F2FD" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="ROZNICA WAG (Hodowca vs Ubojnia)" FontWeight="Bold" Foreground="#1976D2" FontSize="14" Margin="0,0,0,15"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                            <TextBlock Text="Ostrzezenie (zolty) gdy roznica >" FontSize="12" Margin="0,0,0,5"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBox x:Name="txtProgRoznicaWagZolty" Width="80" Text="1.0" FontSize="14" Padding="8"/>
                                                <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Blad (czerwony) gdy roznica >" FontSize="12" Margin="0,0,0,5"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBox x:Name="txtProgRoznicaWagCzerwony" Width="80" Text="2.0" FontSize="14" Padding="8"/>
                                                <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- OPASIENIE -->
                            <Border Background="#FFF3E0" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="OPASIENIE (% wagi netto)" FontWeight="Bold" Foreground="#F57C00" FontSize="14" Margin="0,0,0,15"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                            <TextBlock Text="Ostrzezenie (zolty) gdy >" FontSize="12" Margin="0,0,0,5"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBox x:Name="txtProgOpasieniZolty" Width="80" Text="0.5" FontSize="14" Padding="8"/>
                                                <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Blad (czerwony) gdy >" FontSize="12" Margin="0,0,0,5"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBox x:Name="txtProgOpasienienCzerwony" Width="80" Text="1.0" FontSize="14" Padding="8"/>
                                                <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- PADLE -->
                            <Border Background="#FFEBEE" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="PADLE (% sztuk dostarczonych)" FontWeight="Bold" Foreground="#C62828" FontSize="14" Margin="0,0,0,15"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                            <TextBlock Text="Ostrzezenie (zolty) gdy >" FontSize="12" Margin="0,0,0,5"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBox x:Name="txtProgPadleZolty" Width="80" Text="0.5" FontSize="14" Padding="8"/>
                                                <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Blad (czerwony) gdy >" FontSize="12" Margin="0,0,0,5"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBox x:Name="txtProgPadleCzerwony" Width="80" Text="1.0" FontSize="14" Padding="8"/>
                                                <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- KONFISKATY -->
                            <Border Background="#F3E5F5" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="KONFISKATY (% sztuk dostarczonych)" FontWeight="Bold" Foreground="#7B1FA2" FontSize="14" Margin="0,0,0,15"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                            <TextBlock Text="Ostrzezenie (zolty) gdy >" FontSize="12" Margin="0,0,0,5"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBox x:Name="txtProgKonfiskatyZolty" Width="80" Text="0.3" FontSize="14" Padding="8"/>
                                                <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Blad (czerwony) gdy >" FontSize="12" Margin="0,0,0,5"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBox x:Name="txtProgKonfiskatyCzerwony" Width="80" Text="0.5" FontSize="14" Padding="8"/>
                                                <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Przyciski -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0">
                                <Button Content="ZAPISZ USTAWIENIA"
                                        Style="{StaticResource MainButtonStyle}"
                                        Click="BtnZapiszProgi_Click"/>
                                <Button Content="PRZYWROC DOMYSLNE"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="BtnPrzywrocDomyslne_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
