<Window x:Class="Kalendarz1.Menu1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ZPSP - Logowanie"
        Height="850" Width="1300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="FloatingLabelPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="Padding" Value="8,0,8,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Grid>
                            <Border x:Name="border" Background="Transparent" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid>
                                    <TextBlock x:Name="Label" Text="{TemplateBinding Tag}" FontSize="16" Foreground="#7F8C8D" Margin="8,0" VerticalAlignment="Center" IsHitTestVisible="False">
                                        <TextBlock.RenderTransform>
                                            <TranslateTransform/>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                    <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#5C8A3A"/>
                            </Trigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsFocused, RelativeSource={RelativeSource Self}}" Value="False"/>
                                    <Condition Binding="{Binding Password.Length, RelativeSource={RelativeSource Self}}" Value="0"/>
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="Label" Property="RenderTransform" >
                                    <Setter.Value>
                                        <TranslateTransform Y="0"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Label" Property="FontSize" Value="16"/>
                            </MultiDataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsFocused, RelativeSource={RelativeSource Self}}" Value="True"/>
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="Label" Property="RenderTransform" >
                                    <Setter.Value>
                                        <TranslateTransform Y="-24"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Label" Property="FontSize" Value="12"/>
                            </MultiDataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding Password.Length, RelativeSource={RelativeSource Self}}" Value="0" />
                                </MultiDataTrigger.Conditions>
                                <MultiDataTrigger.Setters></MultiDataTrigger.Setters>
                                <MultiDataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Label" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" To="-24" Duration="0:0:0.01"/>
                                            <DoubleAnimation Storyboard.TargetName="Label" Storyboard.TargetProperty="FontSize" To="12" Duration="0:0:0.01"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiDataTrigger.ExitActions>
                            </MultiDataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style dla przycisków klawiatury dotykowej -->
        <Style x:Key="TouchKeyButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="55"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="btnBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btnBorder" Property="Background" Value="#E8F5E9"/>
                                <Setter TargetName="btnBorder" Property="BorderBrush" Value="#5C8A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="btnBorder" Property="Background" Value="#C8E6C9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TouchKeyBackspaceStyle" TargetType="Button">
            <Setter Property="Width" Value="55"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#FFEBEE"/>
            <Setter Property="Foreground" Value="#C62828"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bsBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bsBorder" Property="Background" Value="#FFCDD2"/>
                                <Setter TargetName="bsBorder" Property="BorderBrush" Value="#C62828"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bsBorder" Property="Background" Value="#EF9A9A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TouchKeyClearStyle" TargetType="Button">
            <Setter Property="Width" Value="118"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="Foreground" Value="#E65100"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="clrBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="clrBorder" Property="Background" Value="#FFE0B2"/>
                                <Setter TargetName="clrBorder" Property="BorderBrush" Value="#E65100"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="clrBorder" Property="Background" Value="#FFCC80"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TouchKeyEnterStyle" TargetType="Button">
            <Setter Property="Width" Value="118"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4B732F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="okBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="okBorder" Property="Background" Value="#4B732F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="okBorder" Property="Background" Value="#3A5C24"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="#FFFFFF">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.2" BlurRadius="20"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="520"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" CornerRadius="15,0,0,15" ClipToBounds="True">
                <Grid>
                    <Border Name="AnimatedBackground" Background="#5C8A3A">
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                      From="#5C8A3A" To="#4B732F" Duration="0:0:10"
                                                      AutoReverse="True" RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">
                        <Image Source="pack://application:,,,/logo2white.png" Height="100" Margin="0,0,0,30" RenderOptions.BitmapScalingMode="Fant"/>
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center" Foreground="White" FontSize="18" Margin="0,15,0,10">
                            <Run FontWeight="SemiBold">Szanowni Pracownicy,</Run>
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Foreground="#E0F0D6" TextAlignment="Center" FontSize="14" LineHeight="22">
                            <Run>Ten system to nasze wspólne narzędzie do budowania przyszłości firmy. Powstał, by uprościć i usprawnić naszą codzienną pracę.</Run>
                            <LineBreak/>
                            <Run>Zrobię wszystko, co w mojej mocy, aby był dla Was realnym wsparciem.</Run>
                        </TextBlock>
                        <Image Source="pack://application:,,,/logo2white.png" Height="50"
                               Margin="0,40,0,15" Opacity="0.7" RenderOptions.BitmapScalingMode="Fant"/>
                        <TextBlock Text="Sergiusz Piórkowski" Foreground="White" FontWeight="Bold"
                                   TextAlignment="Center" FontSize="15" Margin="0,0,0,0" Opacity="0.8"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <!-- Logo firmy na górze -->
                <Border x:Name="LogoBorder" HorizontalAlignment="Center" VerticalAlignment="Top"
                        Margin="0,20,0,0" Padding="10" Background="Transparent"
                        MouseRightButtonUp="LogoBorder_MouseRightButtonUp" Cursor="Arrow">
                    <Image x:Name="CompanyLogoImage" Height="60" RenderOptions.BitmapScalingMode="Fant"/>
                </Border>

                <Button x:Name="CloseButton" Content="✕" Click="CloseButton_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,20,0" Width="35" Height="35" Background="Transparent" Foreground="#A0A0A0" BorderThickness="0" FontSize="16" Cursor="Hand" ToolTip="Zamknij aplikację"/>
                <StackPanel VerticalAlignment="Center" Margin="100,0">
                    <TextBlock Text="Witaj w Systemie" HorizontalAlignment="Left" FontSize="42" FontWeight="Light" Foreground="#2C3E50" Margin="0,0,0,15"/>
                    <TextBlock Text="Zaloguj się, aby rozpocząć pracę." HorizontalAlignment="Left" FontSize="20" Foreground="#7F8C8D" Margin="0,0,0,60"/>
                    <PasswordBox x:Name="PasswordBox" Tag="Identyfikator pracownika" Margin="0,10" Style="{StaticResource FloatingLabelPasswordBoxStyle}" KeyDown="PasswordBox_KeyDown"/>
                    <Button x:Name="LoginButton" Content="ZALOGUJ SIĘ" Height="50" Click="LoginButton_Click" FontWeight="Bold" FontFamily="Segoe UI" FontSize="14" Margin="0,40,0,0" Foreground="White" Background="#5C8A3A">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <Border.Effect>
                                                    <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.2" BlurRadius="10"/>
                                                </Border.Effect>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#4B732F"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#3A5C24"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Klawiatura dotykowa -->
                    <Border Margin="0,30,0,0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Background="#FAFAFA" Padding="15">
                        <StackPanel>
                            <TextBlock Text="⌨️ Klawiatura dotykowa" FontSize="13" FontWeight="SemiBold"
                                       Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,0,0,12"/>

                            <!-- Rząd 1: 1 2 3 -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="1" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                                <Button Content="2" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                                <Button Content="3" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                            </StackPanel>

                            <!-- Rząd 2: 4 5 6 -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="4" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                                <Button Content="5" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                                <Button Content="6" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                            </StackPanel>

                            <!-- Rząd 3: 7 8 9 -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="7" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                                <Button Content="8" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                                <Button Content="9" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                            </StackPanel>

                            <!-- Rząd 4: Backspace 0 -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="⌫" Style="{StaticResource TouchKeyBackspaceStyle}" Click="TouchKey_Backspace" ToolTip="Usuń ostatni znak"/>
                                <Button Content="0" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                                <Button Content="⌫" Style="{StaticResource TouchKeyBackspaceStyle}" Click="TouchKey_Backspace" ToolTip="Usuń ostatni znak" Visibility="Hidden"/>
                            </StackPanel>

                            <!-- Rząd 5: WYCZYŚĆ OK -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                                <Button Content="WYCZYŚĆ" Style="{StaticResource TouchKeyClearStyle}" Click="TouchKey_Clear" ToolTip="Wyczyść całe pole"/>
                                <Button Content="OK" Style="{StaticResource TouchKeyEnterStyle}" Click="TouchKey_Enter" ToolTip="Zaloguj"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <TextBlock x:Name="FooterText" Text="© 2025 Piórkowscy - Sergiusz Piórkowski" HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="#CFD8DC" FontSize="12" Margin="20"/>
            </Grid>
        </Grid>
    </Border>
</Window>