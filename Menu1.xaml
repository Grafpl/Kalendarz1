<Window x:Class="Kalendarz1.Menu1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ZPSP - Logowanie"
        Height="850" Width="1300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="FloatingLabelPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="Padding" Value="8,0,8,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Grid>
                            <Border x:Name="border" Background="Transparent" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid>
                                    <TextBlock x:Name="Label" Text="{TemplateBinding Tag}" FontSize="16" Foreground="#7F8C8D" Margin="8,0" VerticalAlignment="Center" IsHitTestVisible="False">
                                        <TextBlock.RenderTransform>
                                            <TranslateTransform/>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                    <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#5C8A3A"/>
                            </Trigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsFocused, RelativeSource={RelativeSource Self}}" Value="False"/>
                                    <Condition Binding="{Binding Password.Length, RelativeSource={RelativeSource Self}}" Value="0"/>
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="Label" Property="RenderTransform" >
                                    <Setter.Value>
                                        <TranslateTransform Y="0"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Label" Property="FontSize" Value="16"/>
                            </MultiDataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsFocused, RelativeSource={RelativeSource Self}}" Value="True"/>
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="Label" Property="RenderTransform" >
                                    <Setter.Value>
                                        <TranslateTransform Y="-24"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Label" Property="FontSize" Value="12"/>
                            </MultiDataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding Password.Length, RelativeSource={RelativeSource Self}}" Value="0" />
                                </MultiDataTrigger.Conditions>
                                <MultiDataTrigger.Setters></MultiDataTrigger.Setters>
                                <MultiDataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Label" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" To="-24" Duration="0:0:0.01"/>
                                            <DoubleAnimation Storyboard.TargetName="Label" Storyboard.TargetProperty="FontSize" To="12" Duration="0:0:0.01"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiDataTrigger.ExitActions>
                            </MultiDataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style dla przycisków klawiatury dotykowej -->
        <Style x:Key="TouchKeyButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="55"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="btnBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btnBorder" Property="Background" Value="#E8F5E9"/>
                                <Setter TargetName="btnBorder" Property="BorderBrush" Value="#5C8A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="btnBorder" Property="Background" Value="#C8E6C9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TouchKeyBackspaceStyle" TargetType="Button">
            <Setter Property="Width" Value="55"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#FFEBEE"/>
            <Setter Property="Foreground" Value="#C62828"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bsBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bsBorder" Property="Background" Value="#FFCDD2"/>
                                <Setter TargetName="bsBorder" Property="BorderBrush" Value="#C62828"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bsBorder" Property="Background" Value="#EF9A9A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TouchKeyClearStyle" TargetType="Button">
            <Setter Property="Width" Value="118"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="Foreground" Value="#E65100"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="clrBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="clrBorder" Property="Background" Value="#FFE0B2"/>
                                <Setter TargetName="clrBorder" Property="BorderBrush" Value="#E65100"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="clrBorder" Property="Background" Value="#FFCC80"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TouchKeyEnterStyle" TargetType="Button">
            <Setter Property="Width" Value="118"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4B732F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="okBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="okBorder" Property="Background" Value="#4B732F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="okBorder" Property="Background" Value="#3A5C24"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla pulsującego logo -->
        <Storyboard x:Key="LogoPulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="1.0" To="1.03" Duration="0:0:2" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="1.0" To="1.03" Duration="0:0:2" AutoReverse="True"/>
        </Storyboard>

        <!-- Styl dla pływających cząsteczek -->
        <Storyboard x:Key="ParticleFloat1" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" From="600" To="-50" Duration="0:0:15"/>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0.6" Duration="0:0:2"/>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.6" To="0" BeginTime="0:0:13" Duration="0:0:2"/>
        </Storyboard>

        <Storyboard x:Key="ParticleFloat2" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" From="650" To="-50" Duration="0:0:18"/>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0.4" Duration="0:0:2"/>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.4" To="0" BeginTime="0:0:16" Duration="0:0:2"/>
        </Storyboard>

        <Storyboard x:Key="ParticleFloat3" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" From="700" To="-50" Duration="0:0:12"/>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0.5" Duration="0:0:1.5"/>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.5" To="0" BeginTime="0:0:10" Duration="0:0:2"/>
        </Storyboard>
    </Window.Resources>

    <Border CornerRadius="15" Background="#FFFFFF">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.2" BlurRadius="20"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="520"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEWY PANEL - Zielony z animacjami -->
            <Border Grid.Column="0" CornerRadius="15,0,0,15" ClipToBounds="True">
                <Grid>
                    <!-- Animowane tło gradientowe -->
                    <Border Name="AnimatedBackground">
                        <Border.Background>
                            <LinearGradientBrush x:Name="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
                                <GradientStop x:Name="GradientStop1" Color="#5C8A3A" Offset="0"/>
                                <GradientStop x:Name="GradientStop2" Color="#3D5C28" Offset="0.5"/>
                                <GradientStop x:Name="GradientStop3" Color="#4B732F" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <!-- Animacja kolorów gradientu -->
                                        <ColorAnimation Storyboard.TargetName="GradientStop1"
                                                      Storyboard.TargetProperty="Color"
                                                      From="#5C8A3A" To="#4B732F" Duration="0:0:8" AutoReverse="True"/>
                                        <ColorAnimation Storyboard.TargetName="GradientStop2"
                                                      Storyboard.TargetProperty="Color"
                                                      From="#3D5C28" To="#5C8A3A" Duration="0:0:6" AutoReverse="True"/>
                                        <ColorAnimation Storyboard.TargetName="GradientStop3"
                                                      Storyboard.TargetProperty="Color"
                                                      From="#4B732F" To="#2D4A1C" Duration="0:0:10" AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>

                    <!-- Canvas z pływającymi cząsteczkami -->
                    <Canvas x:Name="ParticlesCanvas" IsHitTestVisible="False">
                        <!-- Cząsteczki będą dodawane programowo -->
                        <Ellipse x:Name="Particle1" Width="8" Height="8" Fill="White" Opacity="0" Canvas.Left="50">
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard Storyboard="{StaticResource ParticleFloat1}"/>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        <Ellipse x:Name="Particle2" Width="6" Height="6" Fill="White" Opacity="0" Canvas.Left="120">
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" From="600" To="-50" Duration="0:0:16"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0.5" Duration="0:0:2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.5" To="0" BeginTime="0:0:14" Duration="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        <Ellipse x:Name="Particle3" Width="10" Height="10" Fill="White" Opacity="0" Canvas.Left="200">
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" From="650" To="-50" Duration="0:0:20"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0.4" Duration="0:0:2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.4" To="0" BeginTime="0:0:18" Duration="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        <Ellipse x:Name="Particle4" Width="5" Height="5" Fill="White" Opacity="0" Canvas.Left="280">
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" From="580" To="-50" Duration="0:0:14"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0.6" Duration="0:0:2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.6" To="0" BeginTime="0:0:12" Duration="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        <Ellipse x:Name="Particle5" Width="7" Height="7" Fill="White" Opacity="0" Canvas.Left="350">
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" BeginTime="0:0:7">
                                            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" From="620" To="-50" Duration="0:0:17"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0.5" Duration="0:0:2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.5" To="0" BeginTime="0:0:15" Duration="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        <Ellipse x:Name="Particle6" Width="4" Height="4" Fill="White" Opacity="0" Canvas.Left="420">
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" BeginTime="0:0:4">
                                            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" From="700" To="-50" Duration="0:0:22"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0.3" Duration="0:0:2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.3" To="0" BeginTime="0:0:20" Duration="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        <Ellipse x:Name="Particle7" Width="9" Height="9" Fill="White" Opacity="0" Canvas.Left="480">
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" BeginTime="0:0:1">
                                            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" From="550" To="-50" Duration="0:0:13"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0.55" Duration="0:0:2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.55" To="0" BeginTime="0:0:11" Duration="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        <!-- Dodatkowe mniejsze cząsteczki -->
                        <Ellipse Width="3" Height="3" Fill="White" Opacity="0" Canvas.Left="90">
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" BeginTime="0:0:6">
                                            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" From="680" To="-50" Duration="0:0:19"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0.4" Duration="0:0:2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.4" To="0" BeginTime="0:0:17" Duration="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        <Ellipse Width="6" Height="6" Fill="White" Opacity="0" Canvas.Left="320">
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" BeginTime="0:0:9">
                                            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" From="720" To="-50" Duration="0:0:21"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0.35" Duration="0:0:2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.35" To="0" BeginTime="0:0:19" Duration="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                    </Canvas>

                    <!-- Główna zawartość lewego panelu -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">
                        <!-- Logo firmy - duże z pulsacją i efektem poświaty -->
                        <Border x:Name="LeftLogoPanel" Margin="0,0,0,25" HorizontalAlignment="Center"
                                MouseRightButtonUp="LogoBorder_MouseRightButtonUp" Cursor="Arrow"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="LogoScaleTransform" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect x:Name="LogoGlowEffect" ShadowDepth="0" Color="#4CAF50"
                                                  BlurRadius="5" Opacity="0.8"/>
                            </Border.Effect>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <!-- Animacja skalowania (pulsacja) -->
                                            <DoubleAnimation Storyboard.TargetName="LogoScaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           From="1.0" To="1.02" Duration="0:0:3" AutoReverse="True"/>
                                            <DoubleAnimation Storyboard.TargetName="LogoScaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           From="1.0" To="1.02" Duration="0:0:3" AutoReverse="True"/>
                                            <!-- Animacja poświaty (glow) - oddychanie światłem -->
                                            <DoubleAnimation Storyboard.TargetName="LogoGlowEffect"
                                                           Storyboard.TargetProperty="BlurRadius"
                                                           From="5" To="15" Duration="0:0:2" AutoReverse="True"/>
                                            <DoubleAnimation Storyboard.TargetName="LogoGlowEffect"
                                                           Storyboard.TargetProperty="Opacity"
                                                           From="0.6" To="0.9" Duration="0:0:2" AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            <Image x:Name="LeftCompanyLogo" Height="120" RenderOptions.BitmapScalingMode="Fant"/>
                        </Border>

                        <!-- Tekst "Szanowni Pracownicy" z typing effect (kontrolowany z kodu) -->
                        <TextBlock x:Name="WelcomeText" TextWrapping="Wrap" TextAlignment="Center"
                                   Foreground="White" FontSize="18" Margin="0,15,0,10">
                            <Run FontWeight="SemiBold" x:Name="WelcomeTextRun">Szanowni Pracownicy,</Run>
                        </TextBlock>

                        <TextBlock TextWrapping="Wrap" Foreground="#E0F0D6" TextAlignment="Center" FontSize="14" LineHeight="22">
                            <Run>Ten system to nasze wspólne narzędzie do budowania przyszłości firmy. Powstał, by uprościć i usprawnić naszą codzienną pracę.</Run>
                            <LineBreak/>
                            <Run>Zrobię wszystko, co w mojej mocy, aby był dla Was realnym wsparciem.</Run>
                        </TextBlock>

                        <!-- Podpis autora wiadomości -->
                        <TextBlock Foreground="White" FontStyle="Italic"
                                   TextAlignment="Center" FontSize="14" Margin="0,20,0,0" Opacity="0.85">
                            <Run>— Sergiusz Piórkowski</Run>
                        </TextBlock>
                    </StackPanel>

                    <!-- Data, godzina i imieniny w lewym dolnym rogu -->
                    <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,50">
                        <TextBlock x:Name="CurrentTimeText" Text="12:00" FontSize="36" FontWeight="Light"
                                   Foreground="White" Opacity="0.9"/>
                        <TextBlock x:Name="CurrentDateText" Text="Piątek, 17 stycznia 2025" FontSize="14"
                                   Foreground="White" Opacity="0.7" Margin="0,-5,0,0"/>
                        <TextBlock x:Name="NameDaysText" Text="Imieniny: Antoni, Jan" FontSize="12"
                                   Foreground="White" Opacity="0.6" Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Cytat dnia na samym dole -->
                    <TextBlock x:Name="QuoteTextBlock" TextWrapping="Wrap" TextAlignment="Center"
                               VerticalAlignment="Bottom" HorizontalAlignment="Center"
                               Foreground="White" FontSize="11" FontStyle="Italic" Opacity="0.7"
                               Margin="20,0,20,15" MaxWidth="450"/>
                </Grid>
            </Border>

            <!-- PRAWY PANEL - Formularz logowania -->
            <Grid Grid.Column="1">
                <!-- Status serwera w prawym górnym rogu -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top"
                            Margin="0,25,60,0">
                    <Ellipse x:Name="ServerStatusDot" Width="10" Height="10" Fill="#4CAF50" Margin="0,0,8,0">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                       From="1" To="0.4" Duration="0:0:1" AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <TextBlock x:Name="ServerStatusText" Text="Serwer online" FontSize="11"
                               Foreground="#7F8C8D" VerticalAlignment="Center"/>
                </StackPanel>

                <Button x:Name="CloseButton" Content="X" Click="CloseButton_Click"
                        HorizontalAlignment="Right" VerticalAlignment="Top"
                        Margin="0,15,20,0" Width="35" Height="35"
                        Background="Transparent" Foreground="#A0A0A0" BorderThickness="0"
                        FontSize="16" Cursor="Hand" ToolTip="Zamknij aplikację"/>

                <StackPanel VerticalAlignment="Center" Margin="100,0">
                    <!-- Personalizowane powitanie -->
                    <TextBlock x:Name="PersonalGreeting" Text="" FontSize="16" Foreground="#5C8A3A"
                               FontWeight="SemiBold" Margin="0,0,0,5" Visibility="Collapsed"/>

                    <TextBlock Text="Witaj w Systemie" HorizontalAlignment="Left" FontSize="42"
                               FontWeight="Light" Foreground="#2C3E50" Margin="0,0,0,15"/>
                    <TextBlock Text="Zaloguj się, aby rozpocząć pracę." HorizontalAlignment="Left"
                               FontSize="20" Foreground="#7F8C8D" Margin="0,0,0,60"/>

                    <PasswordBox x:Name="PasswordBox" Tag="Identyfikator pracownika" Margin="0,10"
                                 Style="{StaticResource FloatingLabelPasswordBoxStyle}"
                                 KeyDown="PasswordBox_KeyDown" PasswordChanged="PasswordBox_PasswordChanged"/>

                    <Button x:Name="LoginButton" Content="ZALOGUJ SIĘ" Height="50" Click="LoginButton_Click"
                            FontWeight="Bold" FontFamily="Segoe UI" FontSize="14" Margin="0,40,0,0"
                            Foreground="White" Background="#5C8A3A">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <Border.Effect>
                                                    <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.2" BlurRadius="10"/>
                                                </Border.Effect>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#4B732F"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#3A5C24"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Klawiatura i ostatnie logowania -->
                    <StackPanel Orientation="Horizontal" Margin="0,30,0,0" HorizontalAlignment="Left">
                        <!-- Klawiatura dotykowa -->
                        <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Background="#FAFAFA" Padding="15">
                            <StackPanel>
                                <TextBlock Text="Klawiatura dotykowa" FontSize="13" FontWeight="SemiBold"
                                           Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,0,0,12"/>

                                <!-- Rząd 1: 1 2 3 -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="1" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                                    <Button Content="2" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                                    <Button Content="3" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                                </StackPanel>

                                <!-- Rząd 2: 4 5 6 -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="4" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                                    <Button Content="5" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                                    <Button Content="6" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                                </StackPanel>

                                <!-- Rząd 3: 7 8 9 -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="7" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                                    <Button Content="8" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                                    <Button Content="9" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                                </StackPanel>

                                <!-- Rząd 4: Backspace 0 -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="←" Style="{StaticResource TouchKeyBackspaceStyle}" Click="TouchKey_Backspace" ToolTip="Usuń ostatni znak"/>
                                    <Button Content="0" Style="{StaticResource TouchKeyButtonStyle}" Click="TouchKey_Click"/>
                                    <Button Content="←" Style="{StaticResource TouchKeyBackspaceStyle}" Click="TouchKey_Backspace" ToolTip="Usuń ostatni znak" Visibility="Hidden"/>
                                </StackPanel>

                                <!-- Rząd 5: WYCZYSC OK -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                                    <Button Content="WYCZYSC" Style="{StaticResource TouchKeyClearStyle}" Click="TouchKey_Clear" ToolTip="Wyczyść całe pole"/>
                                    <Button Content="OK" Style="{StaticResource TouchKeyEnterStyle}" Click="TouchKey_Enter" ToolTip="Zaloguj"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Ostatnie logowania -->
                        <Border x:Name="RecentLoginsPanel" Margin="20,0,0,0" BorderBrush="#E0E0E0" BorderThickness="1"
                                CornerRadius="10" Background="#FAFAFA" Padding="15" VerticalAlignment="Top" MaxHeight="500">
                            <StackPanel>
                                <TextBlock Text="Ostatnie logowania" FontSize="13" FontWeight="SemiBold"
                                           Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                <WrapPanel x:Name="RecentAvatarsPanel" Orientation="Vertical" HorizontalAlignment="Center" MaxHeight="400"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
                <TextBlock x:Name="FooterText" Text="© 2026 Piórkowscy - Sergiusz Piórkowski"
                           HorizontalAlignment="Center" VerticalAlignment="Bottom"
                           Foreground="#CFD8DC" FontSize="12" Margin="20"/>
            </Grid>
        </Grid>
    </Border>
</Window>
