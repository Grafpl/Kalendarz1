<Window x:Class="Kalendarz1.MatrycaAvilog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Matryca Avilog - Planowanie Transportu"
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        FontFamily="Segoe UI"
        Background="#ECEFF1">

    <Window.Resources>
        <!-- Styl dla przycisków akcji -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl dla DatePicker -->
        <Style x:Key="ModernDatePickerStyle" TargetType="DatePicker">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Styl dla nagłówków kolumn DataGrid -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2D3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#34495E"/>
        </Style>

        <!-- Styl dla DataGrid -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E6E6E6"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="True"/>
            <Setter Property="CanUserDeleteRows" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Styl dla komórek DataGrid -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#5C8A3A"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Panel -->
        <Border Grid.Row="0" Background="#5C8A3A" Padding="25,20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Color="Black" Opacity="0.2" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="MATRYCA AVILOG"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="System planowania dostaw brojlerów od hodowców"
                               FontSize="14"
                               Foreground="#E0F0D6"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Close button -->
                <Button x:Name="CloseButton"
                        Content="✕"
                        Click="CloseButton_Click"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="35"
                        Height="35"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="18"
                        Cursor="Hand"
                        ToolTip="Zamknij"
                        FontWeight="Bold"/>
            </Grid>
        </Border>

        <!-- Toolbar Panel -->
        <Border Grid.Row="1" Background="White" Padding="20,15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Date Selection Row -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                    <TextBlock Text="Wybierz datę:"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"
                               Foreground="#2C3E50"/>

                    <Button x:Name="btnPreviousDay"
                            Content="◀ Poprzedni dzień"
                            Click="BtnPreviousDay_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#607D8B"
                            MinWidth="140"/>

                    <DatePicker x:Name="datePickerMain"
                                Style="{StaticResource ModernDatePickerStyle}"
                                SelectedDateChanged="DatePicker_SelectedDateChanged"
                                Width="200"
                                Margin="10,0"/>

                    <Button x:Name="btnNextDay"
                            Content="Następny dzień ▶"
                            Click="BtnNextDay_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#607D8B"
                            MinWidth="140"/>

                    <!-- Statistics Panel -->
                    <Border Background="#E8F5E9"
                            CornerRadius="6"
                            Padding="15,8"
                            Margin="30,0,0,0"
                            BorderBrush="#5C8A3A"
                            BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Rekordów" FontSize="10" Foreground="#5C8A3A" FontWeight="SemiBold"/>
                                <TextBlock x:Name="lblRecordCount" Text="0" FontSize="16" FontWeight="Bold" Foreground="#2C3E50"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Waga (kg)" FontSize="10" Foreground="#5C8A3A" FontWeight="SemiBold"/>
                                <TextBlock x:Name="lblTotalWeight" Text="0" FontSize="16" FontWeight="Bold" Foreground="#2C3E50"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Sztuk" FontSize="10" Foreground="#5C8A3A" FontWeight="SemiBold"/>
                                <TextBlock x:Name="lblTotalPieces" Text="0" FontSize="16" FontWeight="Bold" Foreground="#2C3E50"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Action Buttons Row -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="btnRefresh"
                            Content="🔄 Odśwież"
                            Click="BtnRefresh_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#3498DB"
                            MinWidth="110"/>

                    <Button x:Name="btnMoveUp"
                            Content="⬆ W górę"
                            Click="BtnMoveUp_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#2E7D32"
                            MinWidth="110"/>

                    <Button x:Name="btnMoveDown"
                            Content="⬇ W dół"
                            Click="BtnMoveDown_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#2E7D32"
                            MinWidth="110"/>

                    <Button x:Name="btnAddRow"
                            Content="➕ Dodaj wiersz"
                            Click="BtnAddRow_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#00897B"
                            MinWidth="130"/>

                    <Button x:Name="btnDeleteRow"
                            Content="🗑 Usuń wiersz"
                            Click="BtnDeleteRow_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#D32F2F"
                            MinWidth="130"/>

                    <Button x:Name="btnSaveToDatabase"
                            Content="💾 ZAPISZ DO BAZY"
                            Click="BtnSaveToDatabase_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#5C8A3A"
                            FontSize="15"
                            FontWeight="Bold"
                            MinWidth="200"
                            Margin="30,0,0,0"
                            Padding="20,10">
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="3" Color="#000000" Opacity="0.25" BlurRadius="12"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="2" Background="White" Margin="15" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>

            <DataGrid x:Name="dataGridMatryca"
                      Style="{StaticResource ModernDataGridStyle}"
                      ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                      CellStyle="{StaticResource DataGridCellStyle}"
                      SelectionChanged="DataGrid_SelectionChanged"
                      Margin="10">

                <!-- Kolumny będą dodawane dynamicznie w code-behind -->
            </DataGrid>
        </Border>
    </Grid>
</Window>
