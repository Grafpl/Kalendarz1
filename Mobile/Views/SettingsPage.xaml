<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:KalendarzMobile.ViewModels"
             x:Class="KalendarzMobile.Views.SettingsPage"
             x:DataType="vm:SettingsViewModel"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource Background}">

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="0">

            <!-- NagÅ‚Ã³wek -->
            <Frame BackgroundColor="{StaticResource Primary}"
                   Padding="20"
                   CornerRadius="0"
                   HasShadow="False">
                <VerticalStackLayout Spacing="8">
                    <Label Text="âš™ï¸ Ustawienia"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White" />
                    <Label Text="Konfiguracja aplikacji"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.8" />
                </VerticalStackLayout>
            </Frame>

            <!-- PoÅ‚Ä…czenie z serwerem -->
            <Frame Style="{StaticResource OrderCard}"
                   Margin="8,16,8,0">
                <VerticalStackLayout Spacing="16">
                    <Label Text="PoÅ‚Ä…czenie z serwerem"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}" />

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Adres API"
                               FontSize="12"
                               TextColor="{StaticResource TextSecondary}" />
                        <Entry Text="{Binding ApiUrl}"
                               Placeholder="http://192.168.0.109:5000/api"
                               Keyboard="Url" />
                    </VerticalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <Button Text="Testuj poÅ‚Ä…czenie"
                                Command="{Binding TestConnectionCommand}"
                                Style="{StaticResource PrimaryButton}"
                                HorizontalOptions="Start" />
                        <Frame BackgroundColor="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                               Padding="10,6"
                               CornerRadius="12"
                               HasShadow="False"
                               VerticalOptions="Center">
                            <Label Text="{Binding IsConnected, Converter={StaticResource BoolToStatusConverter}}"
                                   FontSize="12"
                                   TextColor="White" />
                        </Frame>
                    </HorizontalStackLayout>

                    <Button Text="Zapisz ustawienia"
                            Command="{Binding SaveSettingsCommand}"
                            BackgroundColor="{StaticResource Success}"
                            TextColor="White"
                            CornerRadius="8" />
                </VerticalStackLayout>
            </Frame>

            <!-- UÅ¼ytkownik -->
            <Frame Style="{StaticResource OrderCard}"
                   Margin="8,8,8,0">
                <VerticalStackLayout Spacing="12">
                    <Label Text="UÅ¼ytkownik"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}" />

                    <HorizontalStackLayout Spacing="10">
                        <Label Text="ðŸ‘¤"
                               FontSize="20"
                               VerticalOptions="Center" />
                        <VerticalStackLayout>
                            <Label Text="{Binding UserName, TargetNullValue='Nie zalogowany'}"
                                   FontSize="16"
                                   TextColor="{StaticResource TextPrimary}" />
                            <Label Text="{Binding IsConnected, Converter={StaticResource BoolToLoginStatusConverter}}"
                                   FontSize="12"
                                   TextColor="{StaticResource TextSecondary}" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <Button Text="Wyloguj"
                            Command="{Binding LogoutCommand}"
                            BackgroundColor="{StaticResource Error}"
                            TextColor="White"
                            CornerRadius="8"
                            IsVisible="{Binding IsConnected}" />
                </VerticalStackLayout>
            </Frame>

            <!-- PamiÄ™Ä‡ podrÄ™czna -->
            <Frame Style="{StaticResource OrderCard}"
                   Margin="8,8,8,0">
                <VerticalStackLayout Spacing="12">
                    <Label Text="PamiÄ™Ä‡ podrÄ™czna"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}" />

                    <Button Text="WyczyÅ›Ä‡ pamiÄ™Ä‡ podrÄ™cznÄ…"
                            Command="{Binding ClearCacheCommand}"
                            BackgroundColor="{StaticResource Warning}"
                            TextColor="White"
                            CornerRadius="8" />
                </VerticalStackLayout>
            </Frame>

            <!-- O aplikacji -->
            <Frame Style="{StaticResource OrderCard}"
                   Margin="8,8,8,16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="O aplikacji"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}" />

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0"
                               Text="Wersja"
                               FontSize="14"
                               TextColor="{StaticResource TextSecondary}" />
                        <Label Grid.Column="1"
                               Text="{Binding AppVersion}"
                               FontSize="14"
                               TextColor="{StaticResource TextPrimary}" />
                    </Grid>

                    <Button Text="WiÄ™cej informacji"
                            Command="{Binding ShowAboutCommand}"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource Primary}"
                            BorderColor="{StaticResource Primary}"
                            BorderWidth="1"
                            CornerRadius="8" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
