<Window x:Class="Kalendarz1.EmailPrzypomnienieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wyślij przypomnienie email" 
        Height="650" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#F9FAFB"
        FontFamily="Segoe UI">

    <Window.Resources>
        <SolidColorBrush x:Key="ColorGreen" Color="#4B833C"/>
        <SolidColorBrush x:Key="ColorRed" Color="#CC2F37"/>

        <Style x:Key="ButtonGreen" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ColorGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Background="White" Padding="20" BorderBrush="{StaticResource ColorGreen}" BorderThickness="0,0,0,3">
            <StackPanel>
                <TextBlock Text="📧 Wyślij przypomnienie o płatności" FontSize="20" FontWeight="Bold" Foreground="{StaticResource ColorGreen}"/>
                <TextBlock x:Name="txtNazwaKontrahenta" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Formularz -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Email odbiorcy -->
                <TextBlock Text="Do:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmailOdbiorcy" Height="30" Padding="8" FontSize="12" Margin="0,0,0,15"/>

                <!-- Temat -->
                <TextBlock Text="Temat:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtTemat" Height="30" Padding="8" FontSize="12" Margin="0,0,0,15"/>

                <!-- Treść -->
                <TextBlock Text="Treść wiadomości:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtTresc" 
                         Height="280" 
                         Padding="10" 
                         FontSize="11"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,15"/>

                <!-- Załącznik -->
                <Border Background="#FFF3E0" Padding="12" CornerRadius="4" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="📎 Załącznik:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtZalacznik" Text="Brak załącznika" FontSize="11" Foreground="Gray"/>
                        <Button Content="📄 Wybierz PDF" 
                                Style="{StaticResource ButtonGreen}" 
                                Width="120" 
                                HorizontalAlignment="Left" 
                                Margin="0,8,0,0"
                                Click="BtnWybierzPDF_Click"/>
                    </StackPanel>
                </Border>

                <!-- Checkbox - zapisz treść -->
                <CheckBox x:Name="chkZapiszSzablon" 
                          Content="💾 Zapisz tę treść jako domyślny szablon" 
                          Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Przyciski -->
        <Border Grid.Row="2" Background="#F3F4F6" Padding="20" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="📧 Wyślij" Style="{StaticResource ButtonGreen}" Width="120" Margin="0,0,10,0" Click="BtnWyslij_Click"/>
                <Button Content="✗ Anuluj" Background="#95A5A6" Foreground="White" Width="110" Padding="15,8" FontWeight="Bold" Click="BtnAnuluj_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>