<Window x:Class="Kalendarz.WPF.WidokKlasWagowychDniaWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Rezerwacje Klas Wagowych Dnia" 
        Height="750" Width="1300"
        WindowStartupLocation="CenterOwner"
        Background="#F8FAF6">

    <Window.Resources>
        <!-- Kolory -->
        <SolidColorBrush x:Key="PrimaryGreen" Color="#5C8A3A"/>
        <SolidColorBrush x:Key="DarkGreen" Color="#3C5B28"/>
        <SolidColorBrush x:Key="LightGreen" Color="#E8F5E0"/>
        <SolidColorBrush x:Key="TextDark" Color="#2D3B23"/>
        <SolidColorBrush x:Key="TextLight" Color="#6B7B5F"/>
        <SolidColorBrush x:Key="BorderColor" Color="#D2DCC8"/>
        <SolidColorBrush x:Key="RowAlt" Color="#F8FCF5"/>
        <SolidColorBrush x:Key="Danger" Color="#DC2626"/>
        <SolidColorBrush x:Key="Warning" Color="#EA580C"/>
        
        <!-- Kolory klas wagowych -->
        <SolidColorBrush x:Key="Klasa5" Color="#DC2626"/>
        <SolidColorBrush x:Key="Klasa6" Color="#EA580C"/>
        <SolidColorBrush x:Key="Klasa7" Color="#CA8A04"/>
        <SolidColorBrush x:Key="Klasa8" Color="#65A30D"/>
        <SolidColorBrush x:Key="Klasa9" Color="#16A34A"/>
        <SolidColorBrush x:Key="Klasa10" Color="#0891B2"/>
        <SolidColorBrush x:Key="Klasa11" Color="#2563EB"/>
        <SolidColorBrush x:Key="Klasa12" Color="#7C3AED"/>

        <!-- Styl nagÅ‚Ã³wka kolumny -->
        <Style x:Key="HeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource DarkGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#4A6B38"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Styl komÃ³rki -->
        <Style x:Key="CellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource LightGreen}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryGreen}" Padding="25,18">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ“Š Rezerwacje Klas Wagowych" 
                               FontSize="22" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="txtDataProdukcji" 
                               Text="Data produkcji: ..." 
                               FontSize="14" Foreground="#DCF0D0" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="btnOdswiez" Content="ðŸ”„ OdÅ›wieÅ¼" 
                            Width="120" Height="40" Margin="0,0,10,0"
                            Background="#466E2C" Foreground="White"
                            FontWeight="Bold" Cursor="Hand"
                            BorderThickness="0" Click="BtnOdswiez_Click"/>
                    <Button x:Name="btnZamknij" Content="âœ• Zamknij" 
                            Width="100" Height="40"
                            Background="#3A5C24" Foreground="White"
                            FontWeight="Bold" Cursor="Hand"
                            BorderThickness="0" Click="BtnZamknij_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- PODSUMOWANIE GÃ“RNE -->
        <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="0,0,0,1" Padding="25,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Prognoza -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,40,0">
                    <TextBlock Text="ðŸ“ˆ PROGNOZA:" FontWeight="Bold" 
                               Foreground="{StaticResource TextLight}" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtPrognozaSuma" Text="0 poj." 
                               FontSize="16" FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryGreen}" 
                               Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- ZajÄ™te -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,40,0">
                    <TextBlock Text="ðŸ”’ ZAJÄ˜TE:" FontWeight="Bold" 
                               Foreground="{StaticResource TextLight}" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtZajeteSuma" Text="0 poj." 
                               FontSize="16" FontWeight="Bold" 
                               Foreground="{StaticResource Warning}" 
                               Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Wolne -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="âœ… WOLNE:" FontWeight="Bold" 
                               Foreground="{StaticResource TextLight}" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtWolneSuma" Text="0 poj." 
                               FontSize="16" FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryGreen}" 
                               Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Pasek klas - wizualizacja -->
                <Border Grid.Column="4" Width="300" Height="30" 
                        Background="#E8EDE5" CornerRadius="4">
                    <Grid x:Name="gridPasekKlas"/>
                </Border>
            </Grid>
        </Border>

        <!-- TABELA GÅÃ“WNA -->
        <DataGrid Grid.Row="2" x:Name="dataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="{StaticResource BorderColor}"
                  Background="White"
                  BorderThickness="0"
                  RowHeight="42"
                  AlternatingRowBackground="{StaticResource RowAlt}"
                  ColumnHeaderStyle="{StaticResource HeaderStyle}"
                  CellStyle="{StaticResource CellStyle}"
                  Margin="15,10,15,10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ODBIORCA" Binding="{Binding Odbiorca}" 
                                    Width="2*" MinWidth="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,0,0,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="HANDLOWIEC" Binding="{Binding Handlowiec}" 
                                    Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Kl.5" Binding="{Binding Kl5}" Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="{StaticResource Klasa5}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Kl.6" Binding="{Binding Kl6}" Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="{StaticResource Klasa6}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Kl.7" Binding="{Binding Kl7}" Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="{StaticResource Klasa7}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Kl.8" Binding="{Binding Kl8}" Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="{StaticResource Klasa8}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Kl.9" Binding="{Binding Kl9}" Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="{StaticResource Klasa9}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Kl.10" Binding="{Binding Kl10}" Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="{StaticResource Klasa10}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Kl.11" Binding="{Binding Kl11}" Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="{StaticResource Klasa11}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Kl.12" Binding="{Binding Kl12}" Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="{StaticResource Klasa12}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="SUMA" Binding="{Binding Suma}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="PALETY" Binding="{Binding Palety, StringFormat=N2}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="{StaticResource PrimaryGreen}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- FOOTER - PODSUMOWANIE -->
        <Border Grid.Row="3" Background="{StaticResource DarkGreen}" Padding="25,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="PODSUMOWANIE ZAJÄ˜TYCH:" FontWeight="Bold" 
                               Foreground="#B8D4A8" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    
                    <!-- Sumy per klasa -->
                    <ItemsControl x:Name="itemsSumyKlas">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Kolor}" CornerRadius="4" 
                                        Padding="8,4" Margin="3,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding NazwaKlasy}" 
                                                   Foreground="White" FontWeight="Bold" FontSize="11"/>
                                        <TextBlock Text=": " Foreground="White"/>
                                        <TextBlock Text="{Binding Ilosc}" 
                                                   Foreground="White" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <TextBlock Grid.Column="1" x:Name="txtSumaOgolna" 
                           Text="ÅÄ…cznie: 0 poj. = 0.00 palet"
                           FontSize="16" FontWeight="Bold" Foreground="White"
                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
