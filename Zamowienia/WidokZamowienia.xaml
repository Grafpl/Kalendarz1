<Window x:Class="Kalendarz1.WidokZamowienia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalendarz1"
        mc:Ignorable="d"
        Title="Zamówienie mięsa" Height="800" Width="1400" 
        WindowStartupLocation="CenterScreen" 
        FontFamily="Segoe UI"
        WindowState="Maximized"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#5C8A3A"/>
        <SolidColorBrush x:Key="PrimaryBrushHover" Color="#4B732F"/>
        <SolidColorBrush x:Key="PrimaryBrushDisabled" Color="#A8C995"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="MidTextBrush" Color="#7F8C8D"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="#95A5A6"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="RowBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="AlternatingRowBackgroundBrush" Color="#F9FAFB"/>

        <Style x:Key="CenterAlignCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="QuantityCellStyle" TargetType="DataGridCell" BasedOn="{StaticResource CenterAlignCellStyle}">
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.HasValue, RelativeSource={RelativeSource AncestorType=DataGridRow}}" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RightAlignTextBlockStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Padding" Value="0,0,10,0" />
        </Style>

        <Style x:Key="LeftAlignCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource MidTextBrush}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrushHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrushDisabled}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="SecondaryButton" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="{StaticResource MidTextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D1D5DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="SubHeader">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="6" SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="{Binding Color, Source={StaticResource PrimaryBrush}}" Opacity="0.3" BlurRadius="4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="RadioButton" x:Key="SegmentedButton">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="Transparent" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="1" Color="#101828" Opacity="0.05" BlurRadius="2" Direction="270"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsChecked" Value="False">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
                    <Setter Property="Effect" Value="{x:Null}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" Background="{StaticResource BackgroundBrush}">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.15" BlurRadius="20"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="DragWindow_MouseLeftButtonDown">
                <TextBlock Text="Nowe Zamówienie" 
                           Foreground="{StaticResource DarkTextBrush}" 
                           FontSize="16" FontWeight="SemiBold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button x:Name="CloseButton" Content="✕" Click="CloseButton_Click" 
                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0"
                        Width="30" Height="30" Background="Transparent" 
                        Foreground="#A0A0A0" BorderThickness="0" FontSize="16" 
                        Cursor="Hand" ToolTip="Zamknij"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="450"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="20,10,20,20">
                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Odbiorca" Style="{StaticResource SubHeader}"/>
                                    <TextBox x:Name="txtSzukajOdbiorcy" TextChanged="TxtSzukajOdbiorcy_TextChanged" KeyDown="TxtSzukajOdbiorcy_KeyDown" LostFocus="TxtSzukajOdbiorcy_LostFocus"/>
                                    <Popup x:Name="PopupWyniki" IsOpen="False" StaysOpen="False" PlacementTarget="{Binding ElementName=txtSzukajOdbiorcy}" Width="{Binding ActualWidth, ElementName=txtSzukajOdbiorcy}">
                                        <Border Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4" Padding="4" MaxHeight="200">
                                            <ListBox x:Name="listaWynikowOdbiorcy" MouseUp="ListaWynikowOdbiorcy_MouseUp" KeyDown="ListaWynikowOdbiorcy_KeyDown"/>
                                        </Border>
                                    </Popup>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                    <TextBlock Text="Handlowiec" Style="{StaticResource SubHeader}"/>
                                    <ComboBox x:Name="cbHandlowiecFilter" SelectionChanged="CbHandlowiecFilter_SelectionChanged"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2" VerticalAlignment="Bottom">
                                    <Border Background="#F3F4F6" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="6" Padding="2">
                                        <StackPanel Orientation="Horizontal">
                                            <RadioButton x:Name="rbSwiezy" Content="Świeże" IsChecked="True" Checked="RbTypProduktu_CheckedChanged" Style="{StaticResource SegmentedButton}"/>
                                            <RadioButton x:Name="rbMrozony" Content="Mrożone" Checked="RbTypProduktu_CheckedChanged" Style="{StaticResource SegmentedButton}"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20,0">
                            <StackPanel>
                                <Border Background="{StaticResource BackgroundBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                    <StackPanel>
                                        <TextBlock x:Name="lblOstatniOdbiorcy" Text="Wybierz handlowca" Style="{StaticResource SubHeader}"/>
                                        <ItemsControl x:Name="gridOstatniOdbiorcy">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <UniformGrid Columns="3"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding}" Margin="2" Padding="8,4" FontWeight="Normal" Background="White" Foreground="{StaticResource MidTextBrush}" Click="OdbiorcaButton_Click"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                                <Border Background="#F4FBF2" CornerRadius="8" Padding="15" Margin="0,0,0,15" BorderBrush="#EAF6E5" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="TRANSPORT" FontWeight="Bold" Foreground="#5C8A3A" Margin="0,0,0,10"/>
                                        <TextBlock Text="Data produkcji" Style="{StaticResource SubHeader}"/>
                                        <DatePicker x:Name="datePickerProdukcji" Margin="0,0,0,10"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                                <TextBlock Text="Data odbioru" Style="{StaticResource SubHeader}"/>
                                                <DatePicker x:Name="datePickerSprzedaz"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                                <TextBlock Text="Godzina przyjazdu" Style="{StaticResource SubHeader}"/>
                                                <TextBox x:Name="timePickerGodzinaPrzyjazdu"/>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Margin="0,15,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                                <TextBlock Text="{Binding ElementName=progressSolowka, Path=Value, StringFormat='Solówka ({0:F0}/18 palet)'}" Style="{StaticResource SubHeader}"/>
                                                <ProgressBar x:Name="progressSolowka" Height="8" Value="{Binding SumaPalet, Mode=OneWay}" Maximum="18" BorderThickness="0" Foreground="{StaticResource PrimaryBrush}"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                                <TextBlock Text="{Binding ElementName=progressTir, Path=Value, StringFormat='TIR ({0:F0}/33 palety)'}" Style="{StaticResource SubHeader}"/>
                                                <ProgressBar x:Name="progressTir" Height="8" Value="{Binding SumaPalet, Mode=OneWay}" Maximum="33" BorderThickness="0" Foreground="{StaticResource PrimaryBrush}"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>

                        <Border Grid.Row="2" Padding="20" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Anuluj" Style="{StaticResource SecondaryButton}" Width="120" Margin="0,0,10,0" Click="BtnAnuluj_Click"/>
                                <Button x:Name="btnZapisz" Content="Zapisz" Style="{StaticResource PrimaryButton}" Width="120" Click="BtnZapisz_Click"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <Grid Grid.Column="1" Margin="0,10,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="White" CornerRadius="8" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <DataGrid x:Name="dataGridViewZamowienie" 
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  CanUserDeleteRows="False" 
                                  GridLinesVisibility="Horizontal" 
                                  HorizontalGridLinesBrush="{StaticResource BorderBrush}" 
                                  BorderThickness="0" 
                                  HeadersVisibility="Column" 
                                  Background="Transparent" 
                                  CellEditEnding="DataGridViewZamowienie_CellEditEnding"
                                  AlternationCount="2"
                                  FontSize="16">

                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="{StaticResource RowBackgroundBrush}" />
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="MinHeight" Value="36"/>
                                    <Style.Triggers>
                                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                            <Setter Property="Background" Value="{StaticResource AlternatingRowBackgroundBrush}" />
                                        </Trigger>
                                        <DataTrigger Binding="{Binding HasValue}" Value="True">
                                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Towar" Width="Auto" IsReadOnly="True" Binding="{Binding Kod}" ElementStyle="{StaticResource RightAlignTextBlockStyle}"/>
                                <DataGridCheckBoxColumn Header="40 E2" Width="70" Binding="{Binding E2, UpdateSourceTrigger=PropertyChanged}"/>
                                <DataGridCheckBoxColumn Header="Folia" Width="70" Binding="{Binding Folia, UpdateSourceTrigger=PropertyChanged}"/>
                                <DataGridTextColumn Header="Palety" Width="0.5*" Binding="{Binding Palety, StringFormat=N1, UpdateSourceTrigger=PropertyChanged}" CellStyle="{StaticResource CenterAlignCellStyle}"/>
                                <DataGridTextColumn Header="Pojemniki" Width="0.5*" Binding="{Binding Pojemniki, StringFormat=N0, UpdateSourceTrigger=PropertyChanged}" CellStyle="{StaticResource CenterAlignCellStyle}"/>
                                <DataGridTextColumn Header="Ilość (kg)" Width="0.5*" Binding="{Binding Ilosc, StringFormat=N0, UpdateSourceTrigger=PropertyChanged}" CellStyle="{StaticResource QuantityCellStyle}"/>
                                <DataGridTextColumn Header="Towar" Width="*" IsReadOnly="True" Binding="{Binding Kod}" CellStyle="{StaticResource LeftAlignCellStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                    <Border Grid.Row="1" Background="{StaticResource DarkTextBrush}" Margin="0,10,0,0" CornerRadius="8" Padding="25,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="PALETY" VerticalAlignment="Center" Foreground="{StaticResource LightTextBrush}" FontSize="12" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding SumaPalet, StringFormat=N1}" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White" FontSize="22" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="POJEMNIKI" VerticalAlignment="Center" Foreground="{StaticResource LightTextBrush}" FontSize="12" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding SumaPojemnikow, StringFormat=N0}" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White" FontSize="22" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="KILOGRAMY" VerticalAlignment="Center" Foreground="{StaticResource LightTextBrush}" FontSize="12" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding SumaKg, StringFormat=N0}" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White" FontSize="22" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>