<Window x:Class="Kalendarz1.WykresAnalizaPlatnosciWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="📊 Analiza Płatności - Faktury vs Wpłaty" 
        Height="1000" Width="1900"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F0F2F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <SolidColorBrush x:Key="ColorGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="ColorRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="ColorBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="ColorOrange" Color="#F59E0B"/>
        <SolidColorBrush x:Key="ColorGray" Color="#6B7280"/>
        <SolidColorBrush x:Key="ColorBorder" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="ColorPurple" Color="#8B5CF6"/>

        <Style x:Key="ModernCard" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.08" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource ColorBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="7" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RadioButtonToggle" TargetType="{x:Type RadioButton}">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="{StaticResource ColorGray}"/>
            <Setter Property="Padding" Value="14,7"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="3,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="7" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{StaticResource ColorBlue}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E7EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StatCard" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="6" Opacity="0.06" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DatePickerStyle" TargetType="{x:Type DatePicker}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorBorder}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="4,0"/>
        </Style>

        <Style TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeight" Value="44"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
        </Style>

        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Height" Value="45"/>
        </Style>

        <Style TargetType="{x:Type DataGridRow}">
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F9FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type DataGridCell}">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek ze statystykami - KOMPAKTOWY -->
        <Border Grid.Row="0" Style="{StaticResource ModernCard}" Padding="20,15" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Tytuł -->
                <Grid Grid.Row="0">
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#EFF6FF" CornerRadius="40" Width="50" Height="50" Padding="10" Margin="0,0,15,0">
                            <TextBlock Text="📊" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Analiza Płatności" FontSize="20" FontWeight="Bold" Foreground="#1F2937"/>
                            <TextBlock x:Name="txtKontrahent" FontSize="12" Foreground="{StaticResource ColorGray}" Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Statystyki - KOMPAKTOWE -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <TextBlock Text="🔴 Faktury" FontSize="9" Foreground="{StaticResource ColorGray}" FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtSumaFaktur" FontSize="18" FontWeight="Bold" Foreground="{StaticResource ColorRed}" Margin="0,4,0,0"/>
                            <TextBlock x:Name="txtLiczbaFaktur" FontSize="8" Foreground="{StaticResource ColorGray}" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <TextBlock Text="🟢 Wpłaty" FontSize="9" Foreground="{StaticResource ColorGray}" FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtSumaWplat" FontSize="18" FontWeight="Bold" Foreground="{StaticResource ColorGreen}" Margin="0,4,0,0"/>
                            <TextBlock x:Name="txtLiczbaWplat" FontSize="8" Foreground="{StaticResource ColorGray}" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <TextBlock Text="⚠️ Należność" FontSize="9" Foreground="{StaticResource ColorGray}" FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtRoznica" FontSize="18" FontWeight="Bold" Foreground="{StaticResource ColorOrange}" Margin="0,4,0,0"/>
                            <TextBlock x:Name="txtProcentRoznicy" FontSize="8" Foreground="{StaticResource ColorGray}" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <TextBlock Text="📊 Spłacalność" FontSize="9" Foreground="{StaticResource ColorGray}" FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtWskaznik" FontSize="18" FontWeight="Bold" Margin="0,4,0,0"/>
                            <TextBlock x:Name="txtOcenaWskaznika" FontSize="8" FontWeight="SemiBold" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Panel filtrów - KOMPAKTOWY -->
        <Border Grid.Row="1" Style="{StaticResource ModernCard}" Margin="0,0,0,10" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📅" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Zakres:" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource ColorGray}" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Od:" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource ColorGray}" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <DatePicker x:Name="dpDataOd" Style="{StaticResource DatePickerStyle}" SelectedDateChanged="DatePicker_SelectedDateChanged" Width="120"/>

                    <TextBlock Text="Do:" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource ColorGray}" VerticalAlignment="Center" Margin="15,0,6,0"/>
                    <DatePicker x:Name="dpDataDo" Style="{StaticResource DatePickerStyle}" SelectedDateChanged="DatePicker_SelectedDateChanged" Width="120"/>

                    <Button Content="📊 Analizuj" Style="{StaticResource ButtonStyle}" Click="BtnAnalizuj_Click" Margin="15,0,0,0" Padding="16,8"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="⚡ 12 tyg" Style="{StaticResource ButtonStyle}" Click="BtnOstatnie12_Click" Background="{StaticResource ColorPurple}" Padding="12,8" FontSize="10"/>
                    <Button Content="📅 26 tyg" Style="{StaticResource ButtonStyle}" Click="BtnOstatnie26_Click" Background="{StaticResource ColorBlue}" Padding="12,8" FontSize="10"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Wykres - WIĘCEJ MIEJSCA -->
        <Border Grid.Row="2" Style="{StaticResource ModernCard}" Margin="0,0,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="📈 Wykres" FontSize="14" FontWeight="Bold" Foreground="#1F2937" VerticalAlignment="Center"/>

                    <!-- RADIO BUTTONS - Przełączanie widoku -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <RadioButton x:Name="rbWidokPorownanie" Content="📊 Faktury + Wpłaty" GroupName="WidokWykresu" 
                                   Style="{StaticResource RadioButtonToggle}" IsChecked="True" Checked="WidokWykresu_Changed"/>
                        <RadioButton x:Name="rbWidokNaleznosc" Content="⚠️ Należność (różnica)" GroupName="WidokWykresu" 
                                   Style="{StaticResource RadioButtonToggle}" Checked="WidokWykresu_Changed"/>
                        <RadioButton x:Name="rbWidokWszystko" Content="📈 Wszystko (3 linie)" GroupName="WidokWykresu" 
                                   Style="{StaticResource RadioButtonToggle}" Checked="WidokWykresu_Changed"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Border Background="#FFEBEE" CornerRadius="5" Padding="8,4" Margin="0,0,6,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔴" FontSize="11" Margin="0,0,4,0"/>
                                <TextBlock Text="Faktury" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource ColorRed}"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#E8F5E9" CornerRadius="5" Padding="8,4" Margin="0,0,6,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🟢" FontSize="11" Margin="0,0,4,0"/>
                                <TextBlock Text="Wpłaty" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource ColorGreen}"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FEF3C7" CornerRadius="5" Padding="8,4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠️" FontSize="11" Margin="0,0,4,0"/>
                                <TextBlock Text="Należność" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource ColorOrange}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <oxy:PlotView Grid.Row="1" x:Name="plotView" Background="White"/>

                <!-- Placeholder gdy brak danych -->
                <StackPanel Grid.Row="1" x:Name="panelBrakDanych" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                    <TextBlock Text="📊" FontSize="70" HorizontalAlignment="Center" Foreground="{StaticResource ColorGray}" Opacity="0.25"/>
                    <TextBlock Text="Brak danych do wyświetlenia" FontSize="18" FontWeight="Bold" Foreground="{StaticResource ColorGray}" HorizontalAlignment="Center" Margin="0,12,0,6"/>
                    <TextBlock Text="Wybierz zakres dat i kliknij 'Analizuj'" FontSize="12" Foreground="{StaticResource ColorGray}" HorizontalAlignment="Center" Opacity="0.6"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Nagłówek tabeli - KOMPAKTOWY -->
        <TextBlock Grid.Row="3" Text="📋 Szczegóły tygodniowe" FontSize="13" FontWeight="Bold" Foreground="#1F2937" Margin="5,0,0,6"/>

        <!-- Tabela danych - WIĘCEJ MIEJSCA -->
        <Border Grid.Row="4" Style="{StaticResource ModernCard}" Margin="0,0,0,8">
            <DataGrid x:Name="dgDane" Margin="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="📅 Tydzień" Width="160">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Okres"/>
                        </DataGridTextColumn.Binding>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#1F2937"/>
                                <Setter Property="FontSize" Value="11"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="🔴 Faktury" Width="*">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Faktury" StringFormat="N2"/>
                        </DataGridTextColumn.Binding>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#EF4444"/>
                                <Setter Property="FontSize" Value="11"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="🟢 Wpłaty" Width="*">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Wplaty" StringFormat="N2"/>
                        </DataGridTextColumn.Binding>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#10B981"/>
                                <Setter Property="FontSize" Value="11"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="⚠️ Należność" Width="*">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Roznica" StringFormat="N2"/>
                        </DataGridTextColumn.Binding>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#F59E0B"/>
                                <Setter Property="FontSize" Value="11"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="📊 Spłacalność" Width="100">
                        <DataGridTextColumn.Binding>
                            <Binding Path="WskaznikProc"/>
                        </DataGridTextColumn.Binding>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="11"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="🎯 Ocena" Width="140">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Status"/>
                        </DataGridTextColumn.Binding>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="10"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="💬 Uwagi" Width="180">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Uwagi"/>
                        </DataGridTextColumn.Binding>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="FontStyle" Value="Italic"/>
                                <Setter Property="Foreground" Value="#6B7280"/>
                                <Setter Property="FontSize" Value="10"/>
                                <Setter Property="TextWrapping" Value="Wrap"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Przyciski - KOMPAKTOWE -->
        <Border Grid.Row="5" Background="White" CornerRadius="10" Padding="15,10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.08" Color="#000000"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="🔄 Odśwież" Style="{StaticResource ButtonStyle}" Click="BtnOdswiez_Click" Background="{StaticResource ColorPurple}"/>
                <Button Content="💾 CSV" Style="{StaticResource ButtonStyle}" Click="BtnEksportuj_Click" Background="{StaticResource ColorGreen}"/>
                <Button Content="📊 PNG" Style="{StaticResource ButtonStyle}" Click="BtnEksportujWykres_Click" Background="{StaticResource ColorBlue}"/>
                <Button Content="✗ Zamknij" Style="{StaticResource ButtonStyle}" Click="BtnZamknij_Click" Background="{StaticResource ColorRed}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>