<Window x:Class="Kalendarz1.PrzypomnieniePlatnosci.EmailPrzypomnienieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wyślij email z przypomnieniem" 
        Height="600" Width="750"
        WindowStartupLocation="CenterOwner"
        Background="#F9FAFB"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="ButtonGreen" TargetType="Button">
            <Setter Property="Background" Value="#4B833C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6EAD5A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Background="#4B833C" Padding="20">
            <StackPanel>
                <TextBlock Text="📧 Wyślij przypomnienie e-mailem" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtKontrahent"
                          FontSize="12" 
                          Foreground="#E0E0E0"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Formularz -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Informacje o zadłużeniu -->
                <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="💰 Informacje o zadłużeniu" FontSize="14" FontWeight="Bold" Foreground="#4B833C" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Kwota:" FontSize="10" Foreground="#666"/>
                                <TextBlock x:Name="txtKwota" FontSize="16" FontWeight="Bold" Foreground="#CC2F37" Margin="0,3,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Liczba dokumentów:" FontSize="10" Foreground="#666"/>
                                <TextBlock x:Name="txtLiczbaDokumentow" FontSize="16" FontWeight="Bold" Foreground="#666" Margin="0,3,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Najpóźniejszy termin:" FontSize="10" Foreground="#666"/>
                                <TextBlock x:Name="txtNajpozniejszyTermin" FontSize="14" FontWeight="Bold" Foreground="#CC2F37" Margin="0,3,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Dane emaila -->
                <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="4" Padding="15">
                    <StackPanel>
                        <TextBlock Text="✉️ Dane wiadomości" FontSize="14" FontWeight="Bold" Foreground="#4B833C" Margin="0,0,0,10"/>

                        <TextBlock Text="Do:" FontSize="11" Foreground="#666" Margin="0,5,0,3"/>
                        <TextBox x:Name="txtDo" FontSize="12" Padding="8" />
                        <TextBlock Text="Możesz podać kilka adresów oddzielonych przecinkiem" FontSize="9" Foreground="#999" Margin="0,2,0,0" FontStyle="Italic"/>

                        <TextBlock Text="DW (kopia):" FontSize="11" Foreground="#666" Margin="0,10,0,3"/>
                        <TextBox x:Name="txtDW" FontSize="12" Padding="8" />

                        <TextBlock Text="Temat:" FontSize="11" Foreground="#666" Margin="0,10,0,3"/>
                        <TextBox x:Name="txtTemat" FontSize="12" Padding="8" />

                        <TextBlock Text="Wiadomość:" FontSize="11" Foreground="#666" Margin="0,10,0,3"/>
                        <TextBox x:Name="txtWiadomosc" 
                                FontSize="11" 
                                Padding="8" 
                                TextWrapping="Wrap" 
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                MinHeight="200"/>

                        <TextBlock Text="Załącznik:" FontSize="11" Foreground="#666" Margin="0,10,0,3"/>
                        <Border Background="#F0F0F0" Padding="8" CornerRadius="3">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📎" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock x:Name="txtZalacznik" FontSize="10" VerticalAlignment="Center" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Przyciski -->
        <Border Grid.Row="2" Background="#F3F4F6" Padding="15" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="📧 Wyślij" Style="{StaticResource ButtonGreen}" Width="120" Margin="0,0,10,0" Click="BtnWyslij_Click"/>
                <Button Content="✗ Anuluj" Style="{StaticResource ButtonGreen}" Background="#9CA3AF" Width="110" Click="BtnAnuluj_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>