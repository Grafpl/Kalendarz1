<Window x:Class="Kalendarz1.PrzypomnieniePlatnosci.WyborWersjiPrzypomnienieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wybór wersji przypomnienia" 
        Height="550" Width="750"
        WindowStartupLocation="CenterOwner"
        Background="#F9FAFB"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#4B833C" ShadowDepth="0" BlurRadius="15" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonGreen" TargetType="Button">
            <Setter Property="Background" Value="#4B833C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6EAD5A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Background="#4B833C" Padding="20">
            <StackPanel>
                <TextBlock Text="📋 Wybierz wersję dokumentu" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Kliknij na wybraną opcję" 
                          FontSize="12" 
                          Foreground="#E0E0E0"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Opcje -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <!-- Wersja łagodna -->
                <Border x:Name="borderLagodna" 
                        Style="{StaticResource CardStyle}"
                        BorderBrush="#2563EB"
                        MouseLeftButtonDown="BorderLagodna_Click">
                    <StackPanel>
                        <TextBlock Text="💌 Wersja łagodna" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="#2563EB"/>
                        <TextBlock Text="Pierwszy kontakt - przyjazny ton" 
                                  FontSize="11" 
                                  Foreground="#666" 
                                  Margin="0,5,0,10"/>
                        <TextBlock TextWrapping="Wrap" FontSize="10" Foreground="#555">
                            <Run Text="• Uprzejme przypomnienie o płatności"/><LineBreak/>
                            <Run Text="• Profesjonalny, ale przyjazny ton"/><LineBreak/>
                            <Run Text="• Zachęta do kontaktu w razie problemów"/><LineBreak/>
                            <Run Text="• Brak gróźb, nacisku na współpracę"/>
                        </TextBlock>

                        <Border Background="#EFF6FF" Padding="8" Margin="0,10,0,0" CornerRadius="3">
                            <StackPanel>
                                <TextBlock Text="⏰ Termin do zapłaty:" FontSize="10" FontWeight="Bold" Foreground="#2563EB"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBox x:Name="txtDniLagodna" 
                                            Text="14" 
                                            Width="50" 
                                            FontSize="12" 
                                            Padding="5"
                                            VerticalContentAlignment="Center"/>
                                    <TextBlock Text=" dni" FontSize="11" Foreground="#666" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="✅ Rekomendowane jako pierwszy krok" 
                                  FontSize="9" 
                                  FontStyle="Italic" 
                                  Foreground="#2563EB" 
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Wersja mocna -->
                <Border x:Name="borderMocna" 
                        Style="{StaticResource CardStyle}"
                        BorderBrush="#F59E0B"
                        MouseLeftButtonDown="BorderMocna_Click">
                    <StackPanel>
                        <TextBlock Text="⚠️ Wersja mocna" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="#F59E0B"/>
                        <TextBlock Text="Drugie przypomnienie - stanowczy ton" 
                                  FontSize="11" 
                                  Foreground="#666" 
                                  Margin="0,5,0,10"/>
                        <TextBlock TextWrapping="Wrap" FontSize="10" Foreground="#555">
                            <Run Text="• Wyraźne zaznaczenie przeterminowania"/><LineBreak/>
                            <Run Text="• Stanowcze wezwanie do zapłaty"/><LineBreak/>
                            <Run Text="• Wzmianka o możliwych konsekwencjach"/><LineBreak/>
                            <Run Text="• Określony termin do uregulowania"/>
                        </TextBlock>

                        <Border Background="#FFF3E0" Padding="8" Margin="0,10,0,0" CornerRadius="3">
                            <StackPanel>
                                <TextBlock Text="⏰ Termin do zapłaty:" FontSize="10" FontWeight="Bold" Foreground="#F59E0B"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBox x:Name="txtDniMocna" 
                                            Text="7" 
                                            Width="50" 
                                            FontSize="12" 
                                            Padding="5"
                                            VerticalContentAlignment="Center"/>
                                    <TextBlock Text=" dni" FontSize="11" Foreground="#666" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="⚡ Użyj po braku reakcji na wersję łagodną" 
                                  FontSize="9" 
                                  FontStyle="Italic" 
                                  Foreground="#F59E0B" 
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Wersja przedsądowa -->
                <Border x:Name="borderPrzedsadowa" 
                        Style="{StaticResource CardStyle}"
                        BorderBrush="#3B82F6"
                        MouseLeftButtonDown="BorderPrzedsadowa_Click">
                    <StackPanel>
                        <TextBlock Text="📋 Wezwanie do zapłaty" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="#3B82F6"/>
                        <TextBlock Text="Formalne wezwanie - profesjonalny ton" 
                                  FontSize="11" 
                                  Foreground="#666" 
                                  Margin="0,5,0,10"/>
                        <TextBlock TextWrapping="Wrap" FontSize="10" Foreground="#555">
                            <Run Text="• Formalny język prawniczy"/><LineBreak/>
                            <Run Text="• Jasne określenie konsekwencji prawnych"/><LineBreak/>
                            <Run Text="• Wzmianka o kosztach windykacji i sądowych"/><LineBreak/>
                            <Run Text="• Określony termin do zapłaty"/><LineBreak/>
                            <Run Text="• Możliwość wpisu do KRD/BIG"/>
                        </TextBlock>

                        <Border Background="#EFF6FF" Padding="8" Margin="0,10,0,0" CornerRadius="3">
                            <StackPanel>
                                <TextBlock Text="⏰ Termin do zapłaty:" FontSize="10" FontWeight="Bold" Foreground="#3B82F6"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBox x:Name="txtDniPrzedsadowa" 
                                            Text="7" 
                                            Width="50" 
                                            FontSize="12" 
                                            Padding="5"
                                            VerticalContentAlignment="Center"/>
                                    <TextBlock Text=" dni" FontSize="11" Foreground="#666" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                </StackPanel>
                                <TextBlock Text="💡 Sugerowane: 3-7 dni" 
                                          FontSize="9" 
                                          FontStyle="Italic" 
                                          Foreground="#999" 
                                          Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="⚡ Formalne wezwanie przed sądem" 
                                  FontSize="9" 
                                  FontStyle="Italic" 
                                  Foreground="#3B82F6" 
                                  Margin="0,10,0,0"
                                  FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Przyciski -->
        <Border Grid.Row="2" Background="#F3F4F6" Padding="15" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
            <Button Content="✗ Anuluj" 
                    Width="120" 
                    Style="{StaticResource ButtonGreen}"
                    Background="#9CA3AF"
                    HorizontalAlignment="Right"
                    Click="BtnAnuluj_Click"/>
        </Border>
    </Grid>
</Window>