<Window x:Class="Kalendarz1.PrzypomnieniePlatnosci.PlanSplatyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plan spłaty" 
        Height="650" Width="850"
        WindowStartupLocation="CenterOwner"
        Background="#F9FAFB"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="ButtonGreen" TargetType="Button">
            <Setter Property="Background" Value="#4B833C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6EAD5A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Background="#4B833C" Padding="20">
            <StackPanel>
                <TextBlock Text="📋 Generator planu spłaty / ugody" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtKontrahent"
                          FontSize="12" 
                          Foreground="#E0E0E0"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Formularz -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Kwota długu -->
                <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="💰 Kwota długu" FontSize="14" FontWeight="Bold" Foreground="#4B833C" Margin="0,0,0,10"/>
                        <TextBlock x:Name="txtKwotaDlugu" FontSize="24" FontWeight="Bold" Foreground="#CC2F37"/>
                    </StackPanel>
                </Border>

                <!-- Parametry rat -->
                <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="📊 Parametry spłaty" FontSize="14" FontWeight="Bold" Foreground="#4B833C" Margin="0,0,0,10"/>

                        <TextBlock Text="Liczba rat:" FontSize="11" Foreground="#666" Margin="0,5,0,3"/>
                        <TextBox x:Name="txtLiczbaRat" Text="6" FontSize="12" Padding="8" TextChanged="PrzeliczRaty"/>

                        <TextBlock Text="Data pierwszej raty:" FontSize="11" Foreground="#666" Margin="0,10,0,3"/>
                        <DatePicker x:Name="dpDataPierwszejRaty" FontSize="12" Padding="8" SelectedDateChanged="PrzeliczRaty"/>

                        <TextBlock Text="Częstotliwość rat:" FontSize="11" Foreground="#666" Margin="0,10,0,3"/>
                        <ComboBox x:Name="cbCzestotliwosc" FontSize="12" Padding="8" SelectedIndex="0" SelectionChanged="PrzeliczRaty">
                            <ComboBoxItem Content="Miesięczne"/>
                            <ComboBoxItem Content="Dwa razy w tygodniu"/>
                            <ComboBoxItem Content="Tygodniowe"/>
                            <ComboBoxItem Content="Dwutygodniowe"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Podgląd rat -->
                <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="4" Padding="15">
                    <StackPanel>
                        <TextBlock Text="📅 Podgląd rat" FontSize="14" FontWeight="Bold" Foreground="#4B833C" Margin="0,0,0,10"/>
                        <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="icRaty">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F9FAFB" Padding="10" Margin="0,0,0,5" CornerRadius="3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="120"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Numer}" FontWeight="Bold" FontSize="10"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Data}" FontSize="10" Foreground="#666"/>
                                                <TextBlock Grid.Column="2" Text="{Binding Kwota}" FontWeight="Bold" FontSize="10" HorizontalAlignment="Right" Foreground="#4B833C"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Przyciski -->
        <Border Grid.Row="2" Background="#F3F4F6" Padding="15" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="📄 Generuj PDF" Style="{StaticResource ButtonGreen}" Width="140" Margin="0,0,10,0" Click="BtnGenerujPDF_Click"/>
                <Button Content="✗ Anuluj" Style="{StaticResource ButtonGreen}" Background="#9CA3AF" Width="110" Click="BtnAnuluj_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>