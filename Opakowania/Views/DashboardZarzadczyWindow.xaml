<Window x:Class="Kalendarz1.Opakowania.Views.DashboardZarzadczyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard Zarządczy - Statystyki Opakowań"
        Width="1400" Height="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Karta statystyki -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Przycisk -->
        <Style x:Key="BtnStyle" TargetType="Button">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1B5E20"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Background="White" Padding="24,20" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Dashboard Zarządczy" FontSize="28" FontWeight="Bold" Foreground="#1B5E20"/>
                    <TextBlock Text="Przegląd statystyk opakowań zwrotnych" FontSize="14" Foreground="#666" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Odśwież" Command="{Binding OdswiezCommand}" Style="{StaticResource BtnStyle}" Margin="0,0,8,0"/>
                    <Button Content="Zamknij" Click="BtnZamknij_Click" Style="{StaticResource BtnStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Karty statystyk - górny rząd -->
        <Grid Grid.Row="1" Margin="16,16,16,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Kontrahentów z saldem -->
            <Border Grid.Column="0" Style="{StaticResource StatCard}">
                <StackPanel>
                    <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="32" Foreground="#1976D2"/>
                    <TextBlock Text="{Binding LiczbaKontrahentow}" FontSize="42" FontWeight="Bold" Foreground="#1976D2" Margin="0,8,0,0"/>
                    <TextBlock Text="Kontrahentów z saldem" FontSize="13" Foreground="#666"/>
                </StackPanel>
            </Border>

            <!-- Suma E2 -->
            <Border Grid.Column="1" Style="{StaticResource StatCard}">
                <StackPanel>
                    <TextBlock Text="E2" FontSize="24" FontWeight="Bold" Foreground="#3B82F6"/>
                    <TextBlock Text="{Binding SumaE2}" FontSize="42" FontWeight="Bold" Foreground="#3B82F6" Margin="0,8,0,0"/>
                    <TextBlock Text="Pojemników w obiegu" FontSize="13" Foreground="#666"/>
                </StackPanel>
            </Border>

            <!-- Suma H1 -->
            <Border Grid.Column="2" Style="{StaticResource StatCard}">
                <StackPanel>
                    <TextBlock Text="H1" FontSize="24" FontWeight="Bold" Foreground="#F97316"/>
                    <TextBlock Text="{Binding SumaH1}" FontSize="42" FontWeight="Bold" Foreground="#F97316" Margin="0,8,0,0"/>
                    <TextBlock Text="Palet w obiegu" FontSize="13" Foreground="#666"/>
                </StackPanel>
            </Border>

            <!-- Potwierdzone -->
            <Border Grid.Column="3" Style="{StaticResource StatCard}">
                <StackPanel>
                    <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="32" Foreground="#4CAF50"/>
                    <TextBlock FontSize="42" FontWeight="Bold" Foreground="#4CAF50" Margin="0,8,0,0">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0}%">
                                <Binding Path="ProcentPotwierdzone"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <TextBlock Text="Potwierdzone salda" FontSize="13" Foreground="#666"/>
                </StackPanel>
            </Border>

            <!-- Wartość kaucji -->
            <Border Grid.Column="4" Style="{StaticResource StatCard}">
                <StackPanel>
                    <TextBlock Text="&#xE8C7;" FontFamily="Segoe MDL2 Assets" FontSize="32" Foreground="#9C27B0"/>
                    <TextBlock Text="{Binding WartoscKaucji, StringFormat='{}{0:N0} zł'}" FontSize="36" FontWeight="Bold" Foreground="#9C27B0" Margin="0,8,0,0"/>
                    <TextBlock Text="Wartość opakowań" FontSize="13" Foreground="#666"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Główna zawartość - dwie kolumny -->
        <Grid Grid.Row="2" Margin="16,8,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lewa kolumna - TOP 10 Dłużników -->
            <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#E53935" Margin="0,0,8,0"/>
                        <TextBlock Text="TOP 10 - Największe salda" FontSize="18" FontWeight="Bold" Foreground="#333"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding Top10Dluznikow}" AutoGenerateColumns="False"
                              IsReadOnly="True" BorderThickness="0" GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#EEE" RowHeaderWidth="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Pozycja}" Width="30"/>
                            <DataGridTextColumn Header="Kontrahent" Binding="{Binding Kontrahent}" Width="120"/>
                            <DataGridTextColumn Header="Nazwa" Binding="{Binding Nazwa}" Width="*"/>
                            <DataGridTemplateColumn Header="E2" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding E2}" Foreground="#3B82F6" FontWeight="Bold" HorizontalAlignment="Right"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="H1" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding H1}" Foreground="#F97316" FontWeight="Bold" HorizontalAlignment="Right"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Handlowiec" Binding="{Binding Handlowiec}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Prawa kolumna - Alerty i statystyki -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Alerty -->
                <Border Grid.Row="0" Style="{StaticResource StatCard}" Margin="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#FB8C00" Margin="0,0,8,0"/>
                            <TextBlock Text="Alerty i ostrzeżenia" FontSize="18" FontWeight="Bold" Foreground="#333"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- Brak potwierdzenia >90 dni -->
                                <Border Background="#FFF3E0" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#E65100" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="1" Margin="12,0">
                                            <TextBlock Text="Brak potwierdzenia >90 dni" FontWeight="SemiBold" Foreground="#E65100"/>
                                            <TextBlock Text="Wymaga natychmiastowej reakcji" FontSize="12" Foreground="#F57C00"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="{Binding AlertyKrytyczne}" FontSize="24" FontWeight="Bold" Foreground="#E65100" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Brak potwierdzenia >30 dni -->
                                <Border Background="#FFF8E1" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#F9A825" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="1" Margin="12,0">
                                            <TextBlock Text="Brak potwierdzenia >30 dni" FontWeight="SemiBold" Foreground="#F57F17"/>
                                            <TextBlock Text="Wyślij przypomnienie" FontSize="12" Foreground="#FBC02D"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="{Binding AlertyOstrzezenia}" FontSize="24" FontWeight="Bold" Foreground="#F57F17" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Rozbieżności -->
                                <Border Background="#FCE4EC" CornerRadius="8" Padding="12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="&#xE783;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#C2185B" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="1" Margin="12,0">
                                            <TextBlock Text="Rozbieżności w saldach" FontWeight="SemiBold" Foreground="#C2185B"/>
                                            <TextBlock Text="Do wyjaśnienia" FontSize="12" Foreground="#E91E63"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="{Binding Rozbieznosci}" FontSize="24" FontWeight="Bold" Foreground="#C2185B" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Statystyki per handlowiec -->
                <Border Grid.Row="1" Style="{StaticResource StatCard}" Margin="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="&#xE716;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#1976D2" Margin="0,0,8,0"/>
                            <TextBlock Text="Statystyki per handlowiec" FontSize="18" FontWeight="Bold" Foreground="#333"/>
                        </StackPanel>

                        <DataGrid Grid.Row="1" ItemsSource="{Binding StatystykiHandlowcow}" AutoGenerateColumns="False"
                                  IsReadOnly="True" BorderThickness="0" GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#EEE" RowHeaderWidth="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Handlowiec" Binding="{Binding Handlowiec}" Width="*"/>
                                <DataGridTextColumn Header="Kontrah." Binding="{Binding LiczbaKontrahentow}" Width="70"/>
                                <DataGridTextColumn Header="E2" Binding="{Binding SumaE2}" Width="70"/>
                                <DataGridTextColumn Header="H1" Binding="{Binding SumaH1}" Width="70"/>
                                <DataGridTemplateColumn Header="Potw.%" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ProcentPotwierdzone, StringFormat='{}{0}%'}"
                                                       Foreground="{Binding KolorPotwierdzone}" FontWeight="Bold"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Stopka -->
        <Border Grid.Row="3" Background="White" Padding="24,12" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <TextBlock Text="{Binding StatusText}" Foreground="#666"/>
                <TextBlock Text="{Binding DataAktualizacji, StringFormat='Dane z: {0:dd.MM.yyyy HH:mm}'}"
                           HorizontalAlignment="Right" Foreground="#666"/>
            </Grid>
        </Border>

        <!-- Loading -->
        <Border Grid.RowSpan="4" Background="#80FFFFFF" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="#2E7D32"/>
                <TextBlock Text="Ładowanie statystyk..." Margin="0,12,0,0" Foreground="#333"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
