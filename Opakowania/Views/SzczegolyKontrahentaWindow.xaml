<Window x:Class="Kalendarz1.Opakowania.Views.SzczegolyKontrahentaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:Kalendarz1.Opakowania.Converters"
        Title="{Binding TytulOkna}"
        Height="800" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterOwner"
        Background="#F3F4F6">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:SaldoToColorConverter x:Key="SaldoToColor"/>
        <converters:SaldoCardBackgroundConverter x:Key="SaldoCardBackground"/>

        <!-- Styl przycisku -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D1D5DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GreenButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#22C55E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#16A34A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl kafelka salda -->
        <Style x:Key="SaldoCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="6"/>
        </Style>

        <!-- Styl DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E5E7EB"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="44"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F9FF"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#DBEAFE"/>
                </Trigger>
                <DataTrigger Binding="{Binding JestSaldem}" Value="True">
                    <Setter Property="Background" Value="#FEF3C7"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Padding" Value="10,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ======================= NAGŁÓWEK ======================= -->
        <Border Grid.Row="0" Background="White" Padding="24,20" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="← Wstecz" Click="BtnWstecz_Click" Style="{StaticResource SecondaryButtonStyle}"/>

                <StackPanel Grid.Column="1" Margin="24,0,0,0">
                    <TextBlock Text="{Binding NazwaKontrahenta}" FontSize="22" FontWeight="Bold" Foreground="#1F2937"/>
                    <TextBlock Foreground="#6B7280" FontSize="13" Margin="0,4,0,0">
                        <Run Text="{Binding Kontrahent.Handlowiec}"/>
                        <Run Text=" | "/>
                        <Run Text="{Binding Kontrahent.Telefon}"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Wyślij email" Click="BtnEmail_Click" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0"/>
                    <Button Content="Zadzwoń" Click="BtnZadzwon_Click" Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ======================= KAFELKI SALD ======================= -->
        <Border Grid.Row="1" Background="#F9FAFB" Padding="18,16">
            <StackPanel>
                <TextBlock Text="SALDA NA DZIEŃ" FontWeight="Bold" FontSize="11" Foreground="#6B7280" Margin="8,0,0,8"/>
                <UniformGrid Rows="1" Columns="5">

                    <!-- E2 -->
                    <Border Style="{StaticResource SaldoCardStyle}"
                            Background="{Binding Kontrahent.E2, Converter={StaticResource SaldoCardBackground}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="E2" FontWeight="Bold" FontSize="12" Foreground="#3B82F6"/>
                            <TextBlock Grid.Row="1" Text="{Binding Kontrahent.E2}" FontSize="28" FontWeight="Bold"
                                       Foreground="{Binding Kontrahent.E2, Converter={StaticResource SaldoToColor}}" Margin="0,6,0,0"/>
                            <TextBlock Grid.Row="2" FontSize="11" Foreground="#6B7280" Margin="0,2,0,0">
                                <Run Text="{Binding E2StatusText}"/>
                            </TextBlock>
                            <Button Grid.Row="3" Content="Potwierdź" Style="{StaticResource GreenButtonStyle}"
                                    Command="{Binding PotwierdzenieE2Command}" Margin="0,8,0,0"
                                    Visibility="{Binding CzyE2Niezerowe, Converter={StaticResource BoolToVisibility}}"/>
                        </Grid>
                    </Border>

                    <!-- H1 -->
                    <Border Style="{StaticResource SaldoCardStyle}"
                            Background="{Binding Kontrahent.H1, Converter={StaticResource SaldoCardBackground}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="H1" FontWeight="Bold" FontSize="12" Foreground="#F97316"/>
                            <TextBlock Grid.Row="1" Text="{Binding Kontrahent.H1}" FontSize="28" FontWeight="Bold"
                                       Foreground="{Binding Kontrahent.H1, Converter={StaticResource SaldoToColor}}" Margin="0,6,0,0"/>
                            <TextBlock Grid.Row="2" FontSize="11" Foreground="#6B7280" Margin="0,2,0,0">
                                <Run Text="{Binding H1StatusText}"/>
                            </TextBlock>
                            <Button Grid.Row="3" Content="Potwierdź" Style="{StaticResource GreenButtonStyle}"
                                    Command="{Binding PotwierdzenieH1Command}" Margin="0,8,0,0"
                                    Visibility="{Binding CzyH1Niezerowe, Converter={StaticResource BoolToVisibility}}"/>
                        </Grid>
                    </Border>

                    <!-- EURO -->
                    <Border Style="{StaticResource SaldoCardStyle}"
                            Background="{Binding Kontrahent.EURO, Converter={StaticResource SaldoCardBackground}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="EURO" FontWeight="Bold" FontSize="12" Foreground="#10B981"/>
                            <TextBlock Grid.Row="1" Text="{Binding Kontrahent.EURO}" FontSize="28" FontWeight="Bold"
                                       Foreground="{Binding Kontrahent.EURO, Converter={StaticResource SaldoToColor}}" Margin="0,6,0,0"/>
                            <TextBlock Grid.Row="2" FontSize="11" Foreground="#6B7280" Margin="0,2,0,0">
                                <Run Text="{Binding EUROStatusText}"/>
                            </TextBlock>
                            <Button Grid.Row="3" Content="Potwierdź" Style="{StaticResource GreenButtonStyle}"
                                    Command="{Binding PotwierdzenieEUROCommand}" Margin="0,8,0,0"
                                    Visibility="{Binding CzyEURONiezerowe, Converter={StaticResource BoolToVisibility}}"/>
                        </Grid>
                    </Border>

                    <!-- PCV -->
                    <Border Style="{StaticResource SaldoCardStyle}"
                            Background="{Binding Kontrahent.PCV, Converter={StaticResource SaldoCardBackground}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="PCV" FontWeight="Bold" FontSize="12" Foreground="#8B5CF6"/>
                            <TextBlock Grid.Row="1" Text="{Binding Kontrahent.PCV}" FontSize="28" FontWeight="Bold"
                                       Foreground="{Binding Kontrahent.PCV, Converter={StaticResource SaldoToColor}}" Margin="0,6,0,0"/>
                            <TextBlock Grid.Row="2" FontSize="11" Foreground="#6B7280" Margin="0,2,0,0">
                                <Run Text="{Binding PCVStatusText}"/>
                            </TextBlock>
                            <Button Grid.Row="3" Content="Potwierdź" Style="{StaticResource GreenButtonStyle}"
                                    Command="{Binding PotwierdzeniePCVCommand}" Margin="0,8,0,0"
                                    Visibility="{Binding CzyPCVNiezerowe, Converter={StaticResource BoolToVisibility}}"/>
                        </Grid>
                    </Border>

                    <!-- DREW -->
                    <Border Style="{StaticResource SaldoCardStyle}"
                            Background="{Binding Kontrahent.DREW, Converter={StaticResource SaldoCardBackground}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="DREW" FontWeight="Bold" FontSize="12" Foreground="#D97706"/>
                            <TextBlock Grid.Row="1" Text="{Binding Kontrahent.DREW}" FontSize="28" FontWeight="Bold"
                                       Foreground="{Binding Kontrahent.DREW, Converter={StaticResource SaldoToColor}}" Margin="0,6,0,0"/>
                            <TextBlock Grid.Row="2" FontSize="11" Foreground="#6B7280" Margin="0,2,0,0">
                                <Run Text="{Binding DREWStatusText}"/>
                            </TextBlock>
                            <Button Grid.Row="3" Content="Potwierdź" Style="{StaticResource GreenButtonStyle}"
                                    Command="{Binding PotwierdzenieDREWCommand}" Margin="0,8,0,0"
                                    Visibility="{Binding CzyDREWNiezerowe, Converter={StaticResource BoolToVisibility}}"/>
                        </Grid>
                    </Border>

                </UniformGrid>
            </StackPanel>
        </Border>

        <!-- ======================= SEKCJA DOKUMENTÓW ======================= -->
        <Border Grid.Row="2" Background="White" Padding="24,12" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="DOKUMENTY" FontWeight="Bold" FontSize="13" Foreground="#1F2937" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Od:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#6B7280"/>
                    <DatePicker SelectedDate="{Binding DataOd}" Width="120"/>
                    <TextBlock Text="Do:" VerticalAlignment="Center" Margin="16,0,8,0" Foreground="#6B7280"/>
                    <DatePicker SelectedDate="{Binding DataDo}" Width="120"/>
                    <Button Content="Pokaż" Command="{Binding OdswiezDokumentyCommand}"
                            Style="{StaticResource PrimaryButtonStyle}" Margin="12,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ======================= TABELA DOKUMENTÓW ======================= -->
        <DataGrid Grid.Row="3" ItemsSource="{Binding ListaDokumentow}" Margin="24,16"
                  VirtualizingStackPanel.IsVirtualizing="True"
                  VirtualizingStackPanel.VirtualizationMode="Recycling"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  ScrollViewer.IsDeferredScrollingEnabled="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="DATA" Binding="{Binding DataTekst}" Width="90">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="DZIEŃ" Binding="{Binding DzienTygodnia}" Width="50">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="#9CA3AF"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="NR DOKUMENTU" Binding="{Binding NrDokumentu}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="E2" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding E2Tekst}"
                                       Foreground="{Binding E2, Converter={StaticResource SaldoToColor}}"
                                       FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="H1" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding H1Tekst}"
                                       Foreground="{Binding H1, Converter={StaticResource SaldoToColor}}"
                                       FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="EURO" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding EUROTekst}"
                                       Foreground="{Binding EURO, Converter={StaticResource SaldoToColor}}"
                                       FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="PCV" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding PCVTekst}"
                                       Foreground="{Binding PCV, Converter={StaticResource SaldoToColor}}"
                                       FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="DREW" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DREWTekst}"
                                       Foreground="{Binding DREW, Converter={StaticResource SaldoToColor}}"
                                       FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="OPIS" Binding="{Binding Opis}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="#6B7280"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- ======================= HISTORIA POTWIERDZEŃ ======================= -->
        <Expander Grid.Row="4" Header="HISTORIA POTWIERDZEŃ" IsExpanded="False" Margin="24,0,24,16">
            <Border Background="White" CornerRadius="8" Padding="16">
                <DataGrid ItemsSource="{Binding ListaPotwierdzen}" MaxHeight="200"
                          VirtualizingStackPanel.IsVirtualizing="True"
                          VirtualizingStackPanel.VirtualizationMode="Recycling"
                          EnableRowVirtualization="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="DATA" Binding="{Binding DataPotwierdzeniaTekst}" Width="100"/>
                        <DataGridTextColumn Header="OPAKOWANIE" Binding="{Binding TypOpakowania}" Width="100"/>
                        <DataGridTextColumn Header="POTWIERDZONE" Binding="{Binding IloscPotwierdzona}" Width="100"/>
                        <DataGridTextColumn Header="SYSTEM" Binding="{Binding SaldoSystemowe}" Width="100"/>
                        <DataGridTextColumn Header="RÓŻNICA" Binding="{Binding Roznica}" Width="80"/>
                        <DataGridTextColumn Header="STATUS" Binding="{Binding Status}" Width="100"/>
                        <DataGridTextColumn Header="UWAGI" Binding="{Binding Uwagi}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Expander>

        <!-- ======================= STOPKA ======================= -->
        <Border Grid.Row="5" Background="White" Padding="24,12" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Eksport PDF" Command="{Binding EksportPdfCommand}"
                            Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0"/>
                    <Button Content="Eksport Excel" Command="{Binding EksportExcelCommand}"
                            Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0"/>
                    <Button Content="Drukuj" Command="{Binding DrukujCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}" Foreground="#6B7280" FontSize="12" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- ======================= LOADING OVERLAY ======================= -->
        <Border Grid.RowSpan="6" Background="#80FFFFFF"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="{Binding StatusMessage}" Margin="0,12,0,0"
                           HorizontalAlignment="Center" FontSize="14" Foreground="#6B7280"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
