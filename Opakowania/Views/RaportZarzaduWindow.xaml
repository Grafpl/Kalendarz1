<Window x:Class="Kalendarz1.Opakowania.Views.RaportZarzaduWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Raport dla Zarządu"
        Width="900" Height="750"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8F0">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <Style x:Key="BtnOrange" TargetType="Button">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Background" Value="#FB8C00"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EF6C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Background="White" Padding="24,20" BorderBrush="#FFE0B2" BorderThickness="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Raport dla Zarządu" FontSize="28" FontWeight="Bold" Foreground="#E65100"/>
                    <TextBlock Text="Podsumowanie stanu opakowań zwrotnych" FontSize="14" Foreground="#666" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Generuj PDF" Command="{Binding GenerujPDFCommand}" Style="{StaticResource BtnOrange}" Margin="0,0,8,0"/>
                    <Button Content="Zamknij" Click="BtnZamknij_Click" Style="{StaticResource BtnOrange}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Zawartość raportu -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="32">
            <StackPanel>
                <!-- Nagłówek raportu -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="PRONOVA SP. Z O.O." FontSize="24" FontWeight="Bold" Foreground="#E65100" HorizontalAlignment="Center"/>
                        <TextBlock Text="RAPORT OPAKOWAŃ ZWROTNYCH" FontSize="16" Foreground="#666" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                        <TextBlock Text="{Binding DataRaportu, StringFormat='Stan na dzień: {0:dd MMMM yyyy}'}" FontSize="14"
                                   HorizontalAlignment="Center" Margin="0,16,0,0" Foreground="#333"/>
                    </StackPanel>
                </Border>

                <!-- Podsumowanie ogólne -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="1. PODSUMOWANIE OGÓLNE" FontSize="16" FontWeight="Bold" Foreground="#E65100" Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Liczba kontrahentów z saldem:" Foreground="#666"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding LiczbaKontrahentow}" FontWeight="Bold" FontSize="16"/>

                            <TextBlock Grid.Row="1" Text="Suma opakowań E2 w obiegu:" Foreground="#666" Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SumaE2, StringFormat='{}{0:N0} szt.'}" FontWeight="Bold" FontSize="16" Foreground="#3B82F6" Margin="0,8,0,0"/>

                            <TextBlock Grid.Row="2" Text="Suma palet H1 w obiegu:" Foreground="#666" Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SumaH1, StringFormat='{}{0:N0} szt.'}" FontWeight="Bold" FontSize="16" Foreground="#F97316" Margin="0,8,0,0"/>

                            <TextBlock Grid.Row="3" Text="Szacunkowa wartość kaucji:" Foreground="#666" Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding WartoscKaucji, StringFormat='{}{0:N0} PLN'}" FontWeight="Bold" FontSize="18" Foreground="#4CAF50" Margin="0,8,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Status potwierdzeń -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="2. STATUS POTWIERDZEŃ SALD" FontSize="16" FontWeight="Bold" Foreground="#E65100" Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding ProcentPotwierdzone, StringFormat='{}{0}%'}" FontSize="36" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                                <TextBlock Text="Potwierdzone" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding BezPotwierdzenia30}" FontSize="36" FontWeight="Bold" Foreground="#FB8C00" HorizontalAlignment="Center"/>
                                <TextBlock Text="Bez potw. >30 dni" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding BezPotwierdzenia90}" FontSize="36" FontWeight="Bold" Foreground="#E53935" HorizontalAlignment="Center"/>
                                <TextBlock Text="Bez potw. >90 dni" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- TOP 5 dłużników -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="3. NAJWIĘKSI DŁUŻNICY (TOP 5)" FontSize="16" FontWeight="Bold" Foreground="#E65100" Margin="0,0,0,16"/>

                        <ItemsControl ItemsSource="{Binding Top5Dluznikow}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Pozycja, StringFormat='{}{0}.'}" FontWeight="Bold" Foreground="#E65100"/>
                                            <TextBlock Grid.Column="1" Text="{Binding NazwaKontrahenta}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding E2, StringFormat='E2: {0}'}" Foreground="#3B82F6" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="3" Text="{Binding H1, StringFormat='H1: {0}'}" Foreground="#F97316" FontWeight="SemiBold"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Rekomendacje -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="4. REKOMENDACJE" FontSize="16" FontWeight="Bold" Foreground="#E65100" Margin="0,0,0,16"/>

                        <ItemsControl ItemsSource="{Binding Rekomendacje}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                        <TextBlock Text="&#x2022;" Foreground="#E65100" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Podpis -->
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Sporządził:" Foreground="#666"/>
                            <TextBlock Text="{Binding Uzytkownik}" FontWeight="SemiBold" Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding DataRaportu, StringFormat='{}{0:dd.MM.yyyy}'}" Foreground="#666" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock Text="Wygenerowano automatycznie" FontStyle="Italic" Foreground="#999"/>
                            <TextBlock Text="System Zarządzania Opakowaniami" Foreground="#999"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Stopka -->
        <Border Grid.Row="2" Background="White" Padding="24,12" BorderBrush="#FFE0B2" BorderThickness="0,1,0,0">
            <TextBlock Text="{Binding StatusText}" Foreground="#666"/>
        </Border>

        <!-- Loading -->
        <Border Grid.RowSpan="3" Background="#80FFFFFF" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="#FB8C00"/>
                <TextBlock Text="Generowanie raportu..." Margin="0,12,0,0" Foreground="#333"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
