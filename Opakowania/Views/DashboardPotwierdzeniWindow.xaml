<Window x:Class="Kalendarz1.Opakowania.Views.DashboardPotwierdzeniWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard Potwierdzeń Sald"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#F8FFF8">

    <Window.Resources>
        <!-- Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Style przycisków - zielone -->
        <Style x:Key="BtnStyle" TargetType="Button">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1B5E20"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#A5D6A7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnSecondary" TargetType="Button" BasedOn="{StaticResource BtnStyle}">
            <Setter Property="Background" Value="#43A047"/>
        </Style>

        <Style x:Key="BtnWarning" TargetType="Button" BasedOn="{StaticResource BtnStyle}">
            <Setter Property="Background" Value="#FB8C00"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EF6C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#C8E6C9"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8F5E9"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="Padding" Value="8,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1B5E20"/>
            <Setter Property="BorderBrush" Value="#C8E6C9"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <!-- Styl karty statystyki -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Background="White" Padding="20,16" BorderBrush="#C8E6C9" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="&#xE9D5;" FontFamily="Segoe MDL2 Assets" FontSize="28" Foreground="#2E7D32"
                               VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="Dashboard Potwierdzeń Sald" FontSize="22" FontWeight="Bold" Foreground="#1B5E20"/>
                        <TextBlock Text="Monitoruj status potwierdzeń sald od kontrahentów" FontSize="12" Foreground="#4CAF50"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="&#xE72C; Wyślij przypomnienia" Style="{StaticResource BtnWarning}"
                            Command="{Binding WyslijPrzypomnienia}" Margin="0,0,8,0"/>
                    <Button Content="&#xE72C; Odśwież" Style="{StaticResource BtnStyle}"
                            Command="{Binding OdswiezCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statystyki -->
        <Border Grid.Row="1" Background="#F8FFF8" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Łącznie kontrahentów -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="28"
                                   Foreground="#2E7D32" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding LiczbaKontrahentow}" FontSize="32" FontWeight="Bold"
                                   Foreground="#1B5E20" HorizontalAlignment="Center"/>
                        <TextBlock Text="Kontrahentów" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Potwierdzone -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="28"
                                   Foreground="#4CAF50" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding LiczbaPotwierdzone}" FontSize="32" FontWeight="Bold"
                                   Foreground="#4CAF50" HorizontalAlignment="Center"/>
                        <TextBlock Text="Potwierdzone" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Oczekujące -->
                <Border Grid.Column="2" Style="{StaticResource StatCard}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="28"
                                   Foreground="#FB8C00" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding LiczbaOczekujace}" FontSize="32" FontWeight="Bold"
                                   Foreground="#FB8C00" HorizontalAlignment="Center"/>
                        <TextBlock Text="Oczekujące" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Niepotwierdzone -->
                <Border Grid.Column="3" Style="{StaticResource StatCard}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" FontSize="28"
                                   Foreground="#E53935" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding LiczbaNiepotwierdzone}" FontSize="32" FontWeight="Bold"
                                   Foreground="#E53935" HorizontalAlignment="Center"/>
                        <TextBlock Text="Brak potwierdzenia" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Rozbieżności -->
                <Border Grid.Column="4" Style="{StaticResource StatCard}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="&#xE783;" FontFamily="Segoe MDL2 Assets" FontSize="28"
                                   Foreground="#9C27B0" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding LiczbaRozbieznosci}" FontSize="32" FontWeight="Bold"
                                   Foreground="#9C27B0" HorizontalAlignment="Center"/>
                        <TextBlock Text="Rozbieżności" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Filtry -->
        <Border Grid.Row="2" Background="White" Padding="20,12" BorderBrush="#C8E6C9" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Szukaj -->
                <Border Background="#E8F5E9" CornerRadius="6" Padding="12,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" Foreground="#4CAF50"
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Text="{Binding FiltrTekst, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" BorderThickness="0" VerticalAlignment="Center"
                                 FontSize="14"/>
                    </Grid>
                </Border>

                <!-- Filtr statusu -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="16,0">
                    <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#4CAF50"/>
                    <ComboBox SelectedIndex="{Binding WybranyFiltrStatusu}" Width="180" VerticalAlignment="Center">
                        <ComboBoxItem Content="Wszystkie"/>
                        <ComboBoxItem Content="Potwierdzone"/>
                        <ComboBoxItem Content="Oczekujące"/>
                        <ComboBoxItem Content="Niepotwierdzone"/>
                        <ComboBoxItem Content="Rozbieżności"/>
                        <ComboBoxItem Content="Przeterminowane (>30 dni)"/>
                        <ComboBoxItem Content="Krytyczne (>90 dni)"/>
                    </ComboBox>
                </StackPanel>

                <!-- Typ opakowania -->
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <TextBlock Text="Typ:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#4CAF50"/>
                    <ComboBox SelectedIndex="{Binding WybranyTypOpakowania}" Width="120" VerticalAlignment="Center">
                        <ComboBoxItem Content="Wszystkie"/>
                        <ComboBoxItem Content="E2"/>
                        <ComboBoxItem Content="H1"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid z listą kontrahentów -->
        <DataGrid Grid.Row="3" ItemsSource="{Binding ListaKontrahentow}"
                  SelectedItem="{Binding WybranyKontrahent}"
                  Margin="20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Kontrahent" Binding="{Binding Kontrahent}" Width="120"/>
                <DataGridTextColumn Header="Nazwa" Binding="{Binding Nazwa}" Width="*"/>
                <DataGridTextColumn Header="Handlowiec" Binding="{Binding Handlowiec}" Width="100"/>

                <!-- Status E2 -->
                <DataGridTemplateColumn Header="E2" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding E2Tekst}" Foreground="{Binding E2Kolor}"
                                           FontWeight="Bold" Width="50"/>
                                <TextBlock Text="{Binding E2StatusIkona}" FontFamily="Segoe MDL2 Assets"
                                           Foreground="{Binding E2StatusKolor}" FontSize="14"
                                           ToolTip="{Binding E2StatusTooltip}" Margin="4,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Status H1 -->
                <DataGridTemplateColumn Header="H1" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding H1Tekst}" Foreground="{Binding H1Kolor}"
                                           FontWeight="Bold" Width="50"/>
                                <TextBlock Text="{Binding H1StatusIkona}" FontFamily="Segoe MDL2 Assets"
                                           Foreground="{Binding H1StatusKolor}" FontSize="14"
                                           ToolTip="{Binding H1StatusTooltip}" Margin="4,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Ostatnie potwierdzenie -->
                <DataGridTextColumn Header="Ostatnie potw." Binding="{Binding OstatniePotwierdzenieText}" Width="100"/>

                <!-- Dni od potwierdzenia -->
                <DataGridTemplateColumn Header="Dni" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DniOdPotwierdzenia}"
                                       Foreground="{Binding DniOdPotwierdzeninaKolor}"
                                       FontWeight="Bold" HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Email -->
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="180"/>

                <!-- Akcje -->
                <DataGridTemplateColumn Header="Akcje" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="&#xE715;" FontFamily="Segoe MDL2 Assets" ToolTip="Wyślij przypomnienie"
                                        Command="{Binding DataContext.WyslijPrzypomnienieCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Background="#FB8C00" Foreground="White" Padding="6,4" Margin="0,0,4,0"
                                        BorderThickness="0" Cursor="Hand"/>
                                <Button Content="&#xE73E;" FontFamily="Segoe MDL2 Assets" ToolTip="Dodaj potwierdzenie"
                                        Command="{Binding DataContext.DodajPotwierdzenieCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Background="#4CAF50" Foreground="White" Padding="6,4" Margin="0,0,4,0"
                                        BorderThickness="0" Cursor="Hand"/>
                                <Button Content="&#xE8A5;" FontFamily="Segoe MDL2 Assets" ToolTip="Szczegóły"
                                        Command="{Binding DataContext.SzczegolyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Background="#2196F3" Foreground="White" Padding="6,4"
                                        BorderThickness="0" Cursor="Hand"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Stopka -->
        <Border Grid.Row="4" Background="White" Padding="20,12" BorderBrush="#C8E6C9" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Wyświetlono: " Foreground="#4CAF50"/>
                    <TextBlock Text="{Binding LiczbaWyswietlonych}" FontWeight="Bold" Foreground="#1B5E20" Margin="0,0,20,0"/>

                    <TextBlock Text="Do wysłania przypomnień: " Foreground="#FB8C00"/>
                    <TextBlock Text="{Binding LiczbaDoWyslania}" FontWeight="Bold" Foreground="#FB8C00"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="{Binding StatusLadowania}" Foreground="#4CAF50"/>
            </Grid>
        </Border>

        <!-- Loading overlay -->
        <Border Grid.RowSpan="5" Background="#80FFFFFF" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="#2E7D32"/>
                <TextBlock Text="{Binding StatusLadowania}" Margin="0,8,0,0" HorizontalAlignment="Center" Foreground="#1B5E20"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
