<Window x:Class="Kalendarz1.Opakowania.Views.DiagnostykaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Diagnostyka Wydajności - Opakowania"
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NAGŁÓWEK -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="DIAGNOSTYKA WYDAJNOŚCI" FontSize="24" FontWeight="Bold" Foreground="#00D4AA"/>
            <TextBlock Text="Raport czasów operacji i statystyk cache" FontSize="13" Foreground="#888"/>
        </StackPanel>

        <!-- RAPORT -->
        <Border Grid.Row="1" Background="#252526" CornerRadius="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBox x:Name="txtRaport"
                         FontFamily="Consolas"
                         FontSize="12"
                         Foreground="#DCDCDC"
                         Background="Transparent"
                         BorderThickness="0"
                         IsReadOnly="True"
                         TextWrapping="NoWrap"
                         Padding="20"
                         AcceptsReturn="True"/>
            </ScrollViewer>
        </Border>

        <!-- PRZYCISKI -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Odśwież raport" Click="BtnOdswiez_Click"
                    Background="#0078D4" Foreground="White"
                    Padding="20,10" Margin="0,0,10,0" FontWeight="SemiBold"
                    BorderThickness="0" Cursor="Hand"/>

            <Button Content="Resetuj statystyki" Click="BtnReset_Click"
                    Background="#D83B01" Foreground="White"
                    Padding="20,10" Margin="0,0,10,0" FontWeight="SemiBold"
                    BorderThickness="0" Cursor="Hand"/>

            <Button Content="Kopiuj do schowka" Click="BtnKopiuj_Click"
                    Background="#107C10" Foreground="White"
                    Padding="20,10" Margin="0,0,10,0" FontWeight="SemiBold"
                    BorderThickness="0" Cursor="Hand"/>

            <Button Content="Test ładowania" Click="BtnTestLadowania_Click"
                    Background="#5C2D91" Foreground="White"
                    Padding="20,10" FontWeight="SemiBold"
                    BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
