                                   Foreground="{Binding SaldoDREW, Converter={StaticResource SaldoToColorConverter}}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ============================================== -->
        <!-- GÅÃ“WNA ZAWARTOÅšÄ† -->
        <!-- ============================================== -->
        <Grid Grid.Row="3" Margin="12,0,12,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- DataGrid dokumentÃ³w -->
            <Border Grid.Column="0" Style="{StaticResource CardPanel}" Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
