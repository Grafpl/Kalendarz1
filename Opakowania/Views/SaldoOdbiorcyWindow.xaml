                        <StackPanel>
                            <TextBlock Text="ðŸ‘¤ Dane kontaktowe" FontSize="14" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,0,0,12"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8" 
                                        Visibility="{Binding MaTelefon, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="ðŸ“ž" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding Telefon}" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
