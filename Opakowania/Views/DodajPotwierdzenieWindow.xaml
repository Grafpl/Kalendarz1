<Window x:Class="Kalendarz1.Opakowania.Views.DodajPotwierdzenieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="âœ… Dodaj Potwierdzenie Salda" 
        Width="550" Height="700"
        WindowStartupLocation="CenterOwner"
        Background="#ECF0F1"
        FontFamily="Segoe UI"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/OpakowaniaStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ============================================== -->
        <!-- NAGÅÃ“WEK -->
        <!-- ============================================== -->
        <Border Grid.Row="0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#27AE60" Offset="0"/>
                    <GradientStop Color="#2ECC71" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Height="50">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                    <TextBlock Text="âœ…" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="DODAJ POTWIERDZENIE SALDA" FontSize="14" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                <Button Content="âœ•" Style="{StaticResource CloseButtonStyle}" HorizontalAlignment="Right" 
                        Click="CloseButton_Click" FontSize="14"/>
            </Grid>
        </Border>

        <!-- ============================================== -->
        <!-- FORMULARZ -->
        <!-- ============================================== -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                
                <!-- Informacje o kontrahencie -->
                <Border Style="{StaticResource SuccessSectionStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ðŸ‘¤" FontSize="36" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding KontrahentNazwa}" FontSize="17" FontWeight="Bold" 
                                       Foreground="#2C3E50" TextWrapping="Wrap"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="Typ opakowania: " FontSize="12" Foreground="#7F8C8D"/>
                                <TextBlock Text="{Binding TypOpakowaniaText}" FontSize="12" FontWeight="SemiBold" Foreground="#27AE60"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Data potwierdzenia -->
                <Border Style="{StaticResource CardPanel}" Margin="0,0,0,12" Padding="14">
                    <StackPanel>
                        <TextBlock Text="ðŸ“… DATA POTWIERDZENIA" Style="{StaticResource FormLabelStyle}"/>
                        <DatePicker SelectedDate="{Binding DataPotwierdzenia}" Style="{StaticResource ModernDatePickerStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Saldo systemowe vs potwierdzone -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource CardPanel}" Padding="14">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š SALDO W SYSTEMIE" Style="{StaticResource FormLabelStyle}"/>
                            <Border Background="#F8F9FA" CornerRadius="8" Padding="12,10">
                                <TextBlock Text="{Binding SaldoSystemowe}" FontSize="24" FontWeight="Bold"
                                           Foreground="{Binding SaldoSystemowe, Converter={StaticResource SaldoToColorConverter}}"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource CardPanel}" Padding="14">
                        <StackPanel>
                            <TextBlock Text="âœï¸ ILOÅšÄ† POTWIERDZONA" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Text="{Binding IloscPotwierdzona, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource ModernTextBoxStyle}" 
                                     FontSize="24" FontWeight="Bold" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- RÃ³Å¼nica -->
                <Border CornerRadius="10" Padding="14" Margin="0,0,0,12">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#E8F5E9"/>
                            <Setter Property="BorderBrush" Value="#81C784"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding MaRozbieznosc}" Value="True">
                                    <Setter Property="Background" Value="#FFF3E0"/>
                                    <Setter Property="BorderBrush" Value="#FFB74D"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding RoznicaDisplay}" FontSize="32" FontWeight="Bold" VerticalAlignment="Center"
                                   Foreground="{Binding Roznica, Converter={StaticResource SaldoToColorConverter}}"
                                   Margin="0,0,15,0"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ“ˆ RÃ“Å»NICA" FontSize="11" FontWeight="Bold" 
                                       Foreground="#7F8C8D"/>
                            <TextBlock Text="{Binding RoznicaTekst}" FontSize="12" 
                                       Foreground="#95A5A6" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Numer dokumentu -->
                <Border Style="{StaticResource CardPanel}" Margin="0,0,0,12" Padding="14">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ NUMER DOKUMENTU (OPCJONALNIE)" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding NumerDokumentu}" Style="{StaticResource ModernTextBoxStyle}"
                                 ToolTip="Np. numer emaila lub pisma z potwierdzeniem"/>
                    </StackPanel>
                </Border>

                <!-- ZaÅ‚Ä…cznik -->
                <Border Style="{StaticResource CardPanel}" Margin="0,0,0,12" Padding="14">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Ž ZAÅÄ„CZNIK (OPCJONALNIE)" Style="{StaticResource FormLabelStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="{Binding SciezkaZalacznika}" Style="{StaticResource ModernTextBoxStyle}"
                                     IsReadOnly="True" ToolTip="ÅšcieÅ¼ka do skanu/zaÅ‚Ä…cznika"/>
                            <Button Grid.Column="1" Style="{StaticResource InfoButtonStyle}"
                                    Command="{Binding WybierzZalacznikCommand}" Margin="10,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="Wybierz"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Status -->
                <Border Style="{StaticResource CardPanel}" Margin="0,0,0,12" Padding="14">
                    <StackPanel>
                        <TextBlock Text="ðŸ”– STATUS POTWIERDZENIA" Style="{StaticResource FormLabelStyle}"/>
                        <ComboBox ItemsSource="{Binding DostepneStatusy}" SelectedItem="{Binding StatusPotwierdzenia}"
                                  Style="{StaticResource ModernComboBoxStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Uwagi -->
                <Border Style="{StaticResource CardPanel}" Padding="14">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¬ UWAGI (OPCJONALNIE)" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding Uwagi}" Style="{StaticResource ModernTextBoxStyle}"
                                 TextWrapping="Wrap" AcceptsReturn="True" Height="80" VerticalContentAlignment="Top"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- ============================================== -->
        <!-- STOPKA -->
        <!-- ============================================== -->
        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,1,0,0" Padding="20,15">
            <Grid>
                <Button Content="Anuluj" Style="{StaticResource SecondaryButtonStyle}"
                        HorizontalAlignment="Left" Click="BtnAnuluj_Click" Width="120"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Grid Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0,0,15,0">
                        <ProgressBar IsIndeterminate="True" Width="100" Height="4" VerticalAlignment="Center"/>
                    </Grid>
                    <Button Style="{StaticResource PrimaryButtonStyle}" Click="BtnZapisz_Click" Width="200">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âœ…" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Zapisz potwierdzenie"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
