                        <StackPanel>
                            <TextBlock Text="ðŸ“Š Podsumowanie Sald" FontSize="14" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,0,0,12"/>
                            
                            <!-- E2 -->
                            <Border Background="#EBF5FF" CornerRadius="8" Padding="12" Margin="0,0,0,8" BorderBrush="#3498DB" BorderThickness="0,0,0,3">
                                <Grid>
                                    <StackPanel>
                                        <TextBlock Text="ðŸ“¦ POJEMNIK E2" FontSize="10" FontWeight="SemiBold" Foreground="#7F8C8D"/>
                                        <TextBlock Text="{Binding SumaE2, Converter={StaticResource SaldoToTextConverter}}" 
                                                   FontSize="20" FontWeight="Bold"
                                                   Foreground="{Binding SumaE2, Converter={StaticResource SaldoToColorConverter}}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            
                            <!-- H1 -->
                            <Border Background="#FFF7ED" CornerRadius="8" Padding="12" Margin="0,0,0,8" BorderBrush="#E67E22" BorderThickness="0,0,0,3">
                                <StackPanel>
                                    <TextBlock Text="ðŸŽ¨ PALETA H1" FontSize="10" FontWeight="SemiBold" Foreground="#7F8C8D"/>
                                    <TextBlock Text="{Binding SumaH1, Converter={StaticResource SaldoToTextConverter}}" 
                                               FontSize="20" FontWeight="Bold"
                                               Foreground="{Binding SumaH1, Converter={StaticResource SaldoToColorConverter}}"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- EURO -->
                            <Border Background="#E8F5E9" CornerRadius="8" Padding="12" Margin="0,0,0,8" BorderBrush="#27AE60" BorderThickness="0,0,0,3">
                                <StackPanel>
                                    <TextBlock Text="ðŸŸ© PALETA EURO" FontSize="10" FontWeight="SemiBold" Foreground="#7F8C8D"/>
                                    <TextBlock Text="{Binding SumaEURO, Converter={StaticResource SaldoToTextConverter}}" 
