                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ============================================== -->
        <!-- GÅÃ“WNA ZAWARTOÅšÄ† -->
        <!-- ============================================== -->
        <Grid Grid.Row="3" Margin="12,0,12,12">
            <Grid.ColumnDefinitions>
