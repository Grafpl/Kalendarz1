                                <Border Width="20" Height="20" Background="#FFF3E0" CornerRadius="4" Margin="0,0,10,0"/>
                                <TextBlock Text="Saldo ostrzeÅ¼enie (â‰¥50)" FontSize="11" Foreground="#7F8C8D" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,8"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <Border Width="20" Height="20" Background="#E74C3C" CornerRadius="4" Margin="0,0,10,0"/>
                                <TextBlock Text="Kontrahent winny (wydane)" FontSize="11" Foreground="#7F8C8D" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal">
                                <Border Width="20" Height="20" Background="#27AE60" CornerRadius="4" Margin="0,0,10,0"/>
                                <TextBlock Text="My winni (zwrot)" FontSize="11" Foreground="#7F8C8D" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- ============================================== -->
