                                <DataGridTemplateColumn Header="E2" Width="70" SortMemberPath="E2">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding E2}" FontWeight="SemiBold" HorizontalAlignment="Right"
                                                       Foreground="{Binding E2, Converter={StaticResource SaldoToColorConverter}}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="H1" Width="70" SortMemberPath="H1">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding H1}" FontWeight="SemiBold" HorizontalAlignment="Right"
                                                       Foreground="{Binding H1, Converter={StaticResource SaldoToColorConverter}}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="EURO" Width="70" SortMemberPath="EURO">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding EURO}" FontWeight="SemiBold" HorizontalAlignment="Right"
                                                       Foreground="{Binding EURO, Converter={StaticResource SaldoToColorConverter}}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="PCV" Width="70" SortMemberPath="PCV">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding PCV}" FontWeight="SemiBold" HorizontalAlignment="Right"
                                                       Foreground="{Binding PCV, Converter={StaticResource SaldoToColorConverter}}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="DREW" Width="70" SortMemberPath="DREW">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding DREW}" FontWeight="SemiBold" HorizontalAlignment="Right"
                                                       Foreground="{Binding DREW, Converter={StaticResource SaldoToColorConverter}}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="RAZEM" Width="90" SortMemberPath="SaldoCalkowite">
