                                               Foreground="{Binding SumaEURO, Converter={StaticResource SaldoToColorConverter}}"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- PCV -->
                            <Border Background="#F3E8FF" CornerRadius="8" Padding="12" Margin="0,0,0,8" BorderBrush="#9B59B6" BorderThickness="0,0,0,3">
                                <StackPanel>
                                    <TextBlock Text="ðŸŸª PALETA PCV" FontSize="10" FontWeight="SemiBold" Foreground="#7F8C8D"/>
                                    <TextBlock Text="{Binding SumaPCV, Converter={StaticResource SaldoToTextConverter}}" 
                                               FontSize="20" FontWeight="Bold"
                                               Foreground="{Binding SumaPCV, Converter={StaticResource SaldoToColorConverter}}"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- DREW -->
                            <Border Background="#FEF3C7" CornerRadius="8" Padding="12" BorderBrush="#F39C12" BorderThickness="0,0,0,3">
                                <StackPanel>
                                    <TextBlock Text="ðŸŸ« PALETA DREW" FontSize="10" FontWeight="SemiBold" Foreground="#7F8C8D"/>
                                    <TextBlock Text="{Binding SumaDREW, Converter={StaticResource SaldoToTextConverter}}" 
                                               FontSize="20" FontWeight="Bold"
                                               Foreground="{Binding SumaDREW, Converter={StaticResource SaldoToColorConverter}}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Legenda -->
                    <Border Style="{StaticResource CardPanel}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“‹ Legenda kolorÃ³w" FontSize="13" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,0,0,10"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
