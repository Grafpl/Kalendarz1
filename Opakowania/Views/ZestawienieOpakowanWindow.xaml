<Window x:Class="Kalendarz1.Opakowania.Views.ZestawienieOpakowanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ðŸ“¦ ZarzÄ…dzanie Opakowaniami" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#ECF0F1"
        FontFamily="Segoe UI"
        WindowStyle="None"
        AllowsTransparency="False">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/OpakowaniaStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="F5" Command="{Binding OdswiezCommand}"/>
        <KeyBinding Key="E" Modifiers="Ctrl" Command="{Binding EksportExcelCommand}"/>
        <KeyBinding Key="P" Modifiers="Ctrl" Command="{Binding DrukujCommand}"/>
        <KeyBinding Key="Escape" Command="{Binding ZamknijCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ============================================== -->
        <!-- PASEK TYTUÅU -->
        <!-- ============================================== -->
        <Border Grid.Row="0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2D5016" Offset="0"/>
                    <GradientStop Color="#5C8A3A" Offset="0.5"/>
                    <GradientStop Color="#8B2635" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Height="46">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                    <TextBlock Text="ðŸ“¦" FontSize="22" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="ZARZÄ„DZANIE OPAKOWANIAMI" FontSize="16" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text=" â€¢ " Foreground="#80FFFFFF" VerticalAlignment="Center" Margin="10,0"/>
                    <TextBlock x:Name="txtTypOpakowania" Text="{Binding TytulTypuOpakowania}" 
                               FontSize="14" Foreground="#CCFFFFFF" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ—•" Style="{StaticResource WindowButtonStyle}" Click="MinimizeButton_Click" FontSize="14"/>
                    <Button Content="ðŸ—–" Style="{StaticResource WindowButtonStyle}" Click="MaximizeButton_Click" FontSize="14"/>
                    <Button Content="âœ•" Style="{StaticResource CloseButtonStyle}" Click="CloseButton_Click" FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ============================================== -->
        <!-- NAGÅÃ“WEK Z FILTRAMI -->
        <!-- ============================================== -->
        <Border Grid.Row="1" Style="{StaticResource CardPanel}" Margin="12,12,12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="ðŸ“… DATA OD" Style="{StaticResource LabelTextStyle}"/>
                        <DatePicker x:Name="dpDataOd" SelectedDate="{Binding DataOd, Mode=TwoWay}" 
                                    Style="{StaticResource ModernDatePickerStyle}" Width="140"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="ðŸ“… DATA DO" Style="{StaticResource LabelTextStyle}"/>
                        <DatePicker x:Name="dpDataDo" SelectedDate="{Binding DataDo, Mode=TwoWay}" 
                                    Style="{StaticResource ModernDatePickerStyle}" Width="140"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="ðŸ” SZUKAJ KONTRAHENTA" Style="{StaticResource LabelTextStyle}"/>
                        <TextBox x:Name="txtSzukaj" Text="{Binding FiltrTekstowy, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBoxStyle}" Width="220" Height="38"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Style="{StaticResource PrimaryButtonStyle}" Command="{Binding OdswiezCommand}" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”„" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="OdÅ›wieÅ¼"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource AccentButtonStyle}" Command="{Binding GenerujZestawieniePDFCommand}" Margin="0,0,8,0"
                            ToolTip="Generuj zestawienie PDF">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“„" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="PDF"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource InfoButtonStyle}" Command="{Binding EksportExcelCommand}" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“Š" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Excel"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource InfoButtonStyle}" Command="{Binding DrukujCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ–¨ï¸" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Drukuj"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ============================================== -->
        <!-- WYBÃ“R TYPU OPAKOWANIA -->
        <!-- ============================================== -->
        <Border Grid.Row="2" Style="{StaticResource CardPanel}" Margin="12,0,12,6" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Pojemnik E2 -->
                    <Button x:Name="btnE2" Style="{StaticResource PackageButtonStyle}" 
                            Command="{Binding WybierzTypOpakowaniCommand}" CommandParameter="E2"
                            ToolTip="Pojemnik Drobiowy E2">
                        <StackPanel>
                            <Border Width="48" Height="48" Background="#EBF5FF" CornerRadius="10" Margin="0,0,0,6">
                                <TextBlock Text="ðŸ“¦" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="E2" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" Foreground="#3498DB"/>
                            <TextBlock Text="Pojemnik" FontSize="10" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Paleta H1 -->
                    <Button x:Name="btnH1" Style="{StaticResource PackageButtonStyle}"
                            Command="{Binding WybierzTypOpakowaniCommand}" CommandParameter="H1"
                            ToolTip="Paleta H1">
                        <StackPanel>
                            <Border Width="48" Height="48" Background="#FFF7ED" CornerRadius="10" Margin="0,0,0,6">
                                <TextBlock Text="ðŸŽ¨" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="H1" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" Foreground="#E67E22"/>
                            <TextBlock Text="Paleta" FontSize="10" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Paleta EURO -->
                    <Button x:Name="btnEURO" Style="{StaticResource PackageButtonStyle}"
                            Command="{Binding WybierzTypOpakowaniCommand}" CommandParameter="EURO"
                            ToolTip="Paleta EURO">
                        <StackPanel>
                            <Border Width="48" Height="48" Background="#E8F5E9" CornerRadius="10" Margin="0,0,0,6">
                                <TextBlock Text="ðŸŸ©" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="EURO" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" Foreground="#27AE60"/>
                            <TextBlock Text="Paleta" FontSize="10" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Paleta PCV -->
                    <Button x:Name="btnPCV" Style="{StaticResource PackageButtonStyle}"
                            Command="{Binding WybierzTypOpakowaniCommand}" CommandParameter="PCV"
                            ToolTip="Paleta Plastikowa">
                        <StackPanel>
                            <Border Width="48" Height="48" Background="#F3E8FF" CornerRadius="10" Margin="0,0,0,6">
                                <TextBlock Text="ðŸŸª" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="PCV" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" Foreground="#9B59B6"/>
                            <TextBlock Text="Plastikowa" FontSize="10" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Paleta DREW -->
                    <Button x:Name="btnDREW" Style="{StaticResource PackageButtonStyle}"
                            Command="{Binding WybierzTypOpakowaniCommand}" CommandParameter="DREW"
                            ToolTip="Paleta Drewniana">
                        <StackPanel>
                            <Border Width="48" Height="48" Background="#FEF3C7" CornerRadius="10" Margin="0,0,0,6">
                                <TextBlock Text="ðŸŸ«" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="DREW" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" Foreground="#F39C12"/>
                            <TextBlock Text="Drewniana" FontSize="10" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Statystyki -->
                <Border Grid.Column="1" Background="#F8F9FA" CornerRadius="10" Padding="16,10">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="0,0,20,0">
                            <TextBlock Text="ðŸ“Š Kontrahenci" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="{Binding LiczbaKontrahentow}" FontSize="22" FontWeight="Bold" Foreground="{StaticResource PrimaryGreenBrush}"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="âš ï¸ Krytyczne" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="{Binding LiczbaKrytycznych}" FontSize="22" FontWeight="Bold" Foreground="{StaticResource AccentRedBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ============================================== -->
        <!-- TABELA ZESTAWIENIA -->
        <!-- ============================================== -->
        <Border Grid.Row="3" Style="{StaticResource CardPanel}" Margin="12,0,12,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- NagÅ‚Ã³wek tabeli -->
                <Border Grid.Row="0" Background="#E8F5E9" CornerRadius="8" Padding="12,8" Margin="0,0,0,12">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Zestawienie Sald" FontSize="15" FontWeight="Bold" 
                                       Foreground="#2E7D32" VerticalAlignment="Center"/>
                            <TextBlock Text=" â€¢ " Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center" Margin="8,0"/>
                            <TextBlock Text="{Binding TytulTypuOpakowania}" FontSize="13" 
                                       Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="PPM â†’ Opcje" FontSize="10" Foreground="{StaticResource TextMutedBrush}" 
                                   FontStyle="Italic" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- DataGrid -->
                <Border Grid.Row="1" BorderBrush="{StaticResource PrimaryGreenBrush}" BorderThickness="2" 
                        CornerRadius="10" ClipToBounds="True">
                    <DataGrid x:Name="dataGridZestawienie"
                              ItemsSource="{Binding ZestawienieFiltrowane}"
                              Style="{StaticResource ModernDataGridStyle}"
                              ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                              CellStyle="{StaticResource ModernDataGridCellStyle}"
                              RowStyle="{StaticResource ModernDataGridRowStyle}"
                              MouseDoubleClick="DataGridZestawienie_MouseDoubleClick">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="ðŸ“‹ SzczegÃ³Å‚y kontrahenta" Click="MenuSzczegoly_Click" FontWeight="SemiBold"/>
                                <MenuItem Header="âœ… Dodaj potwierdzenie" Click="MenuDodajPotwierdzenie_Click"/>
                                <Separator/>
                                <MenuItem Header="ðŸ“ž ZadzwoÅ„" Click="MenuZadzwon_Click"/>
                                <MenuItem Header="ðŸ“§ WyÅ›lij email" Click="MenuWyslijEmail_Click"/>
                                <Separator/>
                                <MenuItem Header="ðŸ“Š Eksport do Excel" Click="MenuEksportExcel_Click"/>
                                <MenuItem Header="ðŸ“„ Eksport do PDF" Click="MenuEksportPDF_Click"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Kontrahent" Binding="{Binding Kontrahent}" Width="*" MinWidth="200"/>
                            <DataGridTextColumn Header="Handlowiec" Binding="{Binding Handlowiec}" Width="120"/>
                            <DataGridTemplateColumn Header="Saldo" Width="120" SortMemberPath="IloscDrugiZakres">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding IloscDrugiZakres, Converter={StaticResource SaldoToTextConverter}}"
                                                   Foreground="{Binding IloscDrugiZakres, Converter={StaticResource SaldoToColorConverter}}"
                                                   FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Potwierdzone" Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="8" Padding="6,3" HorizontalAlignment="Center"
                                                Background="{Binding JestPotwierdzone, Converter={StaticResource PotwierdzenieToBackgroundConverter}}">
                                            <TextBlock Text="{Binding DataPotwierdzeniaTekst}" HorizontalAlignment="Center"
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Ostatni dok." Binding="{Binding TowarZDokumentu}" Width="100"/>
                            <DataGridTextColumn Header="Data ost." Binding="{Binding DataOstatniegoDokumentu, StringFormat=dd.MM.yyyy}" Width="90"/>
                            <DataGridTemplateColumn Header="Akcje" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource SmallButtonStyle}" Click="BtnSzczegoly_Click" 
                                                ToolTip="Zobacz szczegÃ³Å‚y" Padding="8,4">
                                            <TextBlock Text="ðŸ‘ï¸" FontSize="14"/>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>

        <!-- ============================================== -->
        <!-- STOPKA -->
        <!-- ============================================== -->
        <Border Grid.Row="4" Background="White" BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,1,0,0" Padding="15,12">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“Š " FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center">
                        <Run Text="WyÅ›wietlono: "/>
                        <Run Text="{Binding LiczbaKontrahentow, FallbackValue=0}" FontWeight="Bold" Foreground="{StaticResource PrimaryGreenBrush}"/>
                        <Run Text=" kontrahentÃ³w"/>
                    </TextBlock>
                    <Border Width="1" Height="16" Background="{StaticResource BorderBrush}" Margin="15,0"/>
                    <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center">
                        <Run Text="Saldo Å‚Ä…czne: "/>
                        <Run Text="{Binding SaldoLaczne, Converter={StaticResource SaldoToTextConverter}, FallbackValue=0}" 
                             FontWeight="Bold" Foreground="{Binding SaldoLaczne, Converter={StaticResource SaldoToColorConverter}}"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="ðŸ’¡ F5: OdÅ›wieÅ¼ | Ctrl+E: Excel | Ctrl+P: Drukuj | ESC: Zamknij" 
                               FontSize="10" Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <Button Content="Zamknij" Style="{StaticResource SecondaryButtonStyle}" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ============================================== -->
        <!-- LOADING OVERLAY -->
        <!-- ============================================== -->
        <Grid Grid.RowSpan="5" Background="#80FFFFFF" 
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="White" CornerRadius="12" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" Color="#000" Opacity="0.2" BlurRadius="20"/>
                </Border.Effect>
                <StackPanel>
                    <ProgressBar IsIndeterminate="True" Width="200" Height="6"/>
                    <TextBlock Text="â³ Åadowanie danych..." FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" 
                               HorizontalAlignment="Center" Margin="0,15,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
