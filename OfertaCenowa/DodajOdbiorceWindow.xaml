<Window x:Class="Kalendarz1.OfertaCenowa.DodajOdbiorceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj nowego kontrahenta"
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#4B833C"/>
        <SolidColorBrush x:Key="PrimaryGreenDark" Color="#3D6B31"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextDark" Color="#1F2937"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>
        <SolidColorBrush x:Key="WarningRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="WarningBg" Color="#FEF2F2"/>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryGreen}"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryGreenDark}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9FAFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naglowek -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryGreen}" Padding="20,15">
            <StackPanel>
                <TextBlock Text="Dodaj nowego kontrahenta" FontSize="18" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Wypelnij dane kontrahenta. Automatycznie sprawdzamy czy klient juz istnieje w bazie."
                           FontSize="12" Foreground="#C8E6C9" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Glowna tresc -->
        <Grid Grid.Row="1" Margin="20,15,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lewa kolumna - Formularz -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- DANE FIRMY -->
                    <TextBlock Text="DANE FIRMY" Style="{StaticResource SectionHeader}"/>
                    <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Nazwa firmy *" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="txtNazwa" Style="{StaticResource TextBoxStyle}" TextChanged="TxtNazwa_TextChanged"/>

                            <TextBlock Text="Branza (PKD)" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="cmbPKD" Style="{StaticResource ComboBoxStyle}" IsEditable="True"/>
                        </StackPanel>
                    </Border>

                    <!-- ADRES -->
                    <TextBlock Text="ADRES" Style="{StaticResource SectionHeader}"/>
                    <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Kod pocztowy" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtKod" Style="{StaticResource TextBoxStyle}" TextChanged="TxtKod_TextChanged"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Miasto" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtMiasto" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Ulica" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="txtUlica" Style="{StaticResource TextBoxStyle}"/>

                            <TextBlock Text="Wojewodztwo" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="cmbWojewodztwo" Style="{StaticResource ComboBoxStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- OSOBA KONTAKTOWA -->
                    <TextBlock Text="OSOBA KONTAKTOWA" Style="{StaticResource SectionHeader}"/>
                    <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Imie" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtImie" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Nazwisko" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtNazwisko" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Stanowisko" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="txtStanowisko" Style="{StaticResource TextBoxStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- KONTAKT -->
                    <TextBlock Text="KONTAKT" Style="{StaticResource SectionHeader}"/>
                    <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <!-- Email - wyróżniony -->
                            <Border Background="#EBF5FF" CornerRadius="6" Padding="12" Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="EMAIL (do wysylki ofert)" FontSize="11" FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentBlue}" Margin="0,0,0,6"/>
                                    <TextBox x:Name="txtEmail" FontSize="14" Padding="10,8"
                                             BorderBrush="{StaticResource AccentBlue}" BorderThickness="2" Background="White"/>
                                </StackPanel>
                            </Border>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Telefon" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtTelefon" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Telefon dodatkowy" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtTelefonDodatkowy" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Notatki" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="txtNotatki" Style="{StaticResource TextBoxStyle}"
                                     Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Prawa kolumna - Panel duplikatow -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="PODOBNI KLIENCI W BAZIE" FontSize="14" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryGreen}" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="1" x:Name="txtInfoDuplikaty" TextWrapping="Wrap" FontSize="12"
                               Foreground="{StaticResource TextGray}" Margin="0,0,0,15"
                               Text="Podczas wpisywania nazwy firmy automatycznie wyszukiwani sa podobni klienci w bazie CRM. Pozwala to uniknac dodawania duplikatow."/>

                    <!-- Ostrzezenie o duplikatach -->
                    <Border Grid.Row="2" x:Name="panelOstrzezenie" Background="{StaticResource WarningBg}"
                            CornerRadius="6" Padding="12" Visibility="Collapsed">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" x:Name="txtLiczbaZnalezionych" FontSize="13" FontWeight="Bold"
                                       Foreground="{StaticResource WarningRed}" Margin="0,0,0,10"/>

                            <ListBox Grid.Row="1" x:Name="listPodobni" BorderThickness="0" Background="Transparent"
                                     FontSize="12" MouseDoubleClick="ListPodobni_MouseDoubleClick">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="8,6" Margin="0,0,0,4" Background="#FEE2E2" CornerRadius="4">
                                            <TextBlock Text="{Binding}" TextWrapping="Wrap" Foreground="#991B1B"/>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>

                    <!-- Placeholder gdy brak wynikow -->
                    <StackPanel Grid.Row="2" x:Name="panelPlaceholder" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Zacznij wpisywac nazwe firmy" FontSize="14" Foreground="{StaticResource TextGray}"
                                   HorizontalAlignment="Center" TextAlignment="Center"/>
                        <TextBlock Text="aby sprawdzic czy klient juz istnieje w bazie" FontSize="12"
                                   Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"
                                   TextAlignment="Center" Margin="0,5,0,0"/>
                        <TextBlock Text="(minimum 3 znaki)" FontSize="11" Foreground="#9CA3AF"
                                   HorizontalAlignment="Center" TextAlignment="Center" Margin="0,15,0,0"/>
                    </StackPanel>

                </Grid>
            </Border>
        </Grid>

        <!-- Przyciski na dole -->
        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource BorderGray}" BorderThickness="0,1,0,0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <CheckBox Grid.Column="0" x:Name="chkTylkoMoje" Content="Po dodaniu pokaz tylko moich klientow"
                          IsChecked="True" VerticalAlignment="Center" FontSize="12"/>

                <TextBlock Grid.Column="1" x:Name="txtStatus" Text="" FontSize="11"
                           Foreground="{StaticResource TextGray}" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <Button Grid.Column="2" Content="Anuluj" Style="{StaticResource SecondaryButton}"
                        Click="BtnAnuluj_Click" Width="100"/>
                <Button Grid.Column="4" Content="Zapisz kontrahenta" Style="{StaticResource PrimaryButton}"
                        Click="BtnZapisz_Click" Width="160"/>
            </Grid>
        </Border>
    </Grid>
</Window>
