<Window x:Class="Kalendarz1.OfertaCenowa.WprowadzOdbiorceRecznieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wprowadź odbiorcę ręcznie" 
        Height="500" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F4F6F9">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreenBrush" Color="#4B833C"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#D1D5DB"/>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="✏️ Wprowadź dane odbiorcy" FontSize="20" FontWeight="Bold" Foreground="#2C3E50"/>
            <TextBlock Text="Uzupełnij pola poniżej" FontSize="12" Foreground="#7F8C8D" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Formularz -->
        <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="1" CornerRadius="10" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Nazwa firmy -->
                <StackPanel Grid.Row="0" Grid.ColumnSpan="3">
                    <TextBlock Text="Nazwa firmy *" FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtNazwa" FontSize="14" Padding="12,10"/>
                </StackPanel>

                <!-- NIP -->
                <StackPanel Grid.Row="2" Grid.Column="0">
                    <TextBlock Text="NIP" FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtNIP" FontSize="14" Padding="12,10"/>
                </StackPanel>

                <!-- Telefon -->
                <StackPanel Grid.Row="2" Grid.Column="2">
                    <TextBlock Text="Telefon" FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtTelefon" FontSize="14" Padding="12,10"/>
                </StackPanel>

                <!-- Adres (ulica) -->
                <StackPanel Grid.Row="4" Grid.ColumnSpan="3">
                    <TextBlock Text="Adres (ulica i numer)" FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtAdres" FontSize="14" Padding="12,10"/>
                </StackPanel>

                <!-- Kod pocztowy -->
                <StackPanel Grid.Row="6" Grid.Column="0">
                    <TextBlock Text="Kod pocztowy" FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtKodPocztowy" FontSize="14" Padding="12,10"/>
                </StackPanel>

                <!-- Miejscowość -->
                <StackPanel Grid.Row="6" Grid.Column="2">
                    <TextBlock Text="Miejscowość" FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtMiejscowosc" FontSize="14" Padding="12,10"/>
                </StackPanel>

                <!-- Osoba kontaktowa -->
                <StackPanel Grid.Row="8" Grid.Column="0">
                    <TextBlock Text="Osoba kontaktowa" FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtOsobaKontaktowa" FontSize="14" Padding="12,10"/>
                </StackPanel>

                <!-- Email -->
                <StackPanel Grid.Row="8" Grid.Column="2">
                    <TextBlock Text="Email" FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtEmail" FontSize="14" Padding="12,10"/>
                </StackPanel>

                <!-- Województwo -->
                <StackPanel Grid.Row="10" Grid.ColumnSpan="3">
                    <TextBlock Text="Województwo" FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cboWojewodztwo" FontSize="14" Padding="12,10" IsEditable="True">
                        <ComboBoxItem Content="dolnośląskie"/>
                        <ComboBoxItem Content="kujawsko-pomorskie"/>
                        <ComboBoxItem Content="lubelskie"/>
                        <ComboBoxItem Content="lubuskie"/>
                        <ComboBoxItem Content="łódzkie"/>
                        <ComboBoxItem Content="małopolskie"/>
                        <ComboBoxItem Content="mazowieckie"/>
                        <ComboBoxItem Content="opolskie"/>
                        <ComboBoxItem Content="podkarpackie"/>
                        <ComboBoxItem Content="podlaskie"/>
                        <ComboBoxItem Content="pomorskie"/>
                        <ComboBoxItem Content="śląskie"/>
                        <ComboBoxItem Content="świętokrzyskie"/>
                        <ComboBoxItem Content="warmińsko-mazurskie"/>
                        <ComboBoxItem Content="wielkopolskie"/>
                        <ComboBoxItem Content="zachodniopomorskie"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Przyciski -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Anuluj" Click="BtnAnuluj_Click" 
                    Padding="25,12" FontSize="14" Background="#F3F4F6" BorderThickness="1" 
                    BorderBrush="{StaticResource BorderBrush}" Cursor="Hand" Margin="0,0,10,0"/>
            <Button Content="✅ Dodaj odbiorcę" Click="BtnDodaj_Click"
                    Padding="25,12" FontSize="14" Background="{StaticResource PrimaryGreenBrush}" 
                    Foreground="White" BorderThickness="0" Cursor="Hand" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
