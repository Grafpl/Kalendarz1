<Window x:Class="Kalendarz1.OfertaCenowa.WprowadzOdbiorceRecznieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wprowadź odbiorcę" Height="450" Width="480"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="#F4F6F9">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreenBrush" Color="#4B833C"/>
        <SolidColorBrush x:Key="PrimaryButtonStyle" Color="#4B833C"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="White" BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="6" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/><RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/><RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/><RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/><RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/><RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Row="0" Grid.ColumnSpan="3">
                    <TextBlock Text="NAZWA FIRMY *" FontSize="9" FontWeight="Bold" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtNazwa" FontSize="11" Padding="8,6"/>
                </StackPanel>
                
                <StackPanel Grid.Row="2" Grid.Column="0">
                    <TextBlock Text="NIP" FontSize="9" FontWeight="Bold" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtNIP" FontSize="11" Padding="8,6"/>
                </StackPanel>
                
                <StackPanel Grid.Row="2" Grid.Column="2">
                    <TextBlock Text="TELEFON" FontSize="9" FontWeight="Bold" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtTelefon" FontSize="11" Padding="8,6"/>
                </StackPanel>
                
                <StackPanel Grid.Row="4" Grid.ColumnSpan="3">
                    <TextBlock Text="ADRES (ulica i numer)" FontSize="9" FontWeight="Bold" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtAdres" FontSize="11" Padding="8,6"/>
                </StackPanel>
                
                <StackPanel Grid.Row="6" Grid.Column="0">
                    <TextBlock Text="KOD POCZTOWY" FontSize="9" FontWeight="Bold" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtKodPocztowy" FontSize="11" Padding="8,6"/>
                </StackPanel>
                
                <StackPanel Grid.Row="6" Grid.Column="2">
                    <TextBlock Text="MIEJSCOWOŚĆ" FontSize="9" FontWeight="Bold" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtMiejscowosc" FontSize="11" Padding="8,6"/>
                </StackPanel>
                
                <StackPanel Grid.Row="8" Grid.Column="0">
                    <TextBlock Text="OSOBA KONTAKTOWA" FontSize="9" FontWeight="Bold" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtOsobaKontaktowa" FontSize="11" Padding="8,6"/>
                </StackPanel>
                
                <StackPanel Grid.Row="8" Grid.Column="2">
                    <TextBlock Text="EMAIL" FontSize="9" FontWeight="Bold" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtEmail" FontSize="11" Padding="8,6"/>
                </StackPanel>
                
                <StackPanel Grid.Row="10" Grid.ColumnSpan="3">
                    <TextBlock Text="WOJEWÓDZTWO" FontSize="9" FontWeight="Bold" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                    <ComboBox x:Name="cboWojewodztwo" FontSize="11" Padding="8,6" IsEditable="True">
                        <ComboBoxItem Content="dolnośląskie"/>
                        <ComboBoxItem Content="kujawsko-pomorskie"/>
                        <ComboBoxItem Content="lubelskie"/>
                        <ComboBoxItem Content="lubuskie"/>
                        <ComboBoxItem Content="łódzkie"/>
                        <ComboBoxItem Content="małopolskie"/>
                        <ComboBoxItem Content="mazowieckie"/>
                        <ComboBoxItem Content="opolskie"/>
                        <ComboBoxItem Content="podkarpackie"/>
                        <ComboBoxItem Content="podlaskie"/>
                        <ComboBoxItem Content="pomorskie"/>
                        <ComboBoxItem Content="śląskie"/>
                        <ComboBoxItem Content="świętokrzyskie"/>
                        <ComboBoxItem Content="warmińsko-mazurskie"/>
                        <ComboBoxItem Content="wielkopolskie"/>
                        <ComboBoxItem Content="zachodniopomorskie"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Anuluj" Click="BtnAnuluj_Click" Padding="15,8" Margin="0,0,8,0" FontSize="11" Background="#F3F4F6" BorderThickness="0" Cursor="Hand"/>
            <Button Content="✅ Dodaj" Click="BtnDodaj_Click" Padding="15,8" FontSize="11" Foreground="White" Background="{StaticResource PrimaryGreenBrush}" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
