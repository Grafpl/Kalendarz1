<Window x:Class="Kalendarz1.OfertaCenowa.MarzeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ“Š MarÅ¼e produktÃ³w" 
        Height="550" Width="950"
        WindowStartupLocation="CenterOwner"
        Background="#F4F6F9">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreenBrush" Color="#4B833C"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#D1D5DB"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="#7F8C8D"/>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGreenBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <Style x:Key="SmallButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryGreenBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C8E6C9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NagÅ‚Ã³wek -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="ðŸ“Š Kalkulacja marÅ¼" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="Ceny zakupu i Å›rednie sprzedaÅ¼y pobrane dla KAÅ»DEGO towaru osobno z ostatnich 30 dni" 
                       FontSize="12" Foreground="{StaticResource LightTextBrush}" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Podsumowanie -->
        <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="6" Padding="15" Margin="0,0,0,15">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Åšrednia marÅ¼a: " FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtSredniaMarza" Text="-" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtBezCeny" Text="" FontSize="11" Foreground="{StaticResource LightTextBrush}" VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border Background="#FEF3C7" CornerRadius="4" Padding="8,4" Margin="0,0,10,0">
                        <TextBlock Text="ðŸŸ¡ &lt;5% niska" FontSize="10" Foreground="#92400E"/>
                    </Border>
                    <Border Background="#D1FAE5" CornerRadius="4" Padding="8,4" Margin="0,0,10,0">
                        <TextBlock Text="ðŸŸ¢ 5-15% dobra" FontSize="10" Foreground="#065F46"/>
                    </Border>
                    <Border Background="#DCFCE7" CornerRadius="4" Padding="8,4">
                        <TextBlock Text="ðŸŸ¢ &gt;15% wysoka" FontSize="10" Foreground="#14532D"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tabela -->
        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- NagÅ‚Ã³wek tabeli -->
                <Grid Grid.Row="0" Background="{StaticResource PrimaryGreenBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Lp" Foreground="White" FontWeight="SemiBold" FontSize="11" Padding="8,12" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="Produkt" Foreground="White" FontWeight="SemiBold" FontSize="11" Padding="8,12"/>
                    <TextBlock Grid.Column="2" Text="IloÅ›Ä‡" Foreground="White" FontWeight="SemiBold" FontSize="11" Padding="8,12" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="3" Text="Cena zakupu" Foreground="White" FontWeight="SemiBold" FontSize="11" Padding="8,12" HorizontalAlignment="Center" ToolTip="Ostatnia cena zakupu dla tego towaru"/>
                    <TextBlock Grid.Column="4" Text="Åšr. sprzedaÅ¼y" Foreground="White" FontWeight="SemiBold" FontSize="11" Padding="8,12" HorizontalAlignment="Center" ToolTip="Åšrednia cena sprzedaÅ¼y tego towaru z 30 dni"/>
                    <TextBlock Grid.Column="5" Text="Cena sprzedaÅ¼y" Foreground="White" FontWeight="SemiBold" FontSize="11" Padding="8,12" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="6" Text="MarÅ¼a" Foreground="White" FontWeight="SemiBold" FontSize="11" Padding="8,12" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="7" Text="Akcje" Foreground="White" FontWeight="SemiBold" FontSize="11" Padding="8,12" HorizontalAlignment="Center"/>
                </Grid>

                <!-- Wiersze -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Wiersze}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#F3F4F6" BorderThickness="0,0,0,1" Padding="0,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Lp -->
                                        <TextBlock Grid.Column="0" Text="{Binding Id}" FontSize="11" Foreground="#9CA3AF" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                        <!-- Produkt -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="8,0">
                                            <TextBlock Text="{Binding Nazwa}" FontSize="12" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Kod}" FontSize="10" Foreground="{StaticResource LightTextBrush}"/>
                                        </StackPanel>

                                        <!-- IloÅ›Ä‡ -->
                                        <TextBlock Grid.Column="2" Text="{Binding IloscStr}" FontSize="11" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                        <!-- Cena zakupu -->
                                        <TextBlock Grid.Column="3" Text="{Binding CenaZakupuStr}" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#6B7280"/>

                                        <!-- Åšrednia sprzedaÅ¼y -->
                                        <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding SredniaSprzedazyStr}" FontSize="12" Foreground="#3B82F6" VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Cena sprzedaÅ¼y (edytowalna) -->
                                        <TextBox Grid.Column="5" 
                                                 Text="{Binding CenaSprzedazyStr, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 FontSize="13" 
                                                 FontWeight="SemiBold"
                                                 HorizontalContentAlignment="Center"
                                                 VerticalContentAlignment="Center"
                                                 Margin="8,2"
                                                 Padding="8,6"
                                                 PreviewTextInput="TxtCena_PreviewTextInput"
                                                 TextChanged="TxtCena_TextChanged"/>

                                        <!-- MarÅ¼a -->
                                        <Border Grid.Column="6" Background="{Binding MarzaKolor}" CornerRadius="4" Padding="8,4" Margin="4" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.2"/>
                                        <TextBlock Grid.Column="6" Text="{Binding MarzaStr}" FontSize="13" FontWeight="Bold" Foreground="{Binding MarzaKolor}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                        <!-- Akcje -->
                                        <StackPanel Grid.Column="7" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Button Content="ðŸ“Š" Style="{StaticResource SmallButtonStyle}" Click="BtnUzyjSredniej_Click" Tag="{Binding}" ToolTip="UÅ¼yj Å›redniej sprzedaÅ¼y" Margin="0,0,4,0"/>
                                            <Button Content="+10%" Style="{StaticResource SmallButtonStyle}" Click="BtnDodajMarze_Click" Tag="{Binding}" ToolTip="Dodaj 10% do ceny zakupu"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Przyciski -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="âŒ Anuluj" Style="{StaticResource SecondaryButtonStyle}" Click="BtnAnuluj_Click" Margin="0,0,10,0"/>
            <Button Content="âœ… Zastosuj ceny" Style="{StaticResource PrimaryButtonStyle}" Click="BtnZastosuj_Click"/>
        </StackPanel>
    </Grid>
</Window>
