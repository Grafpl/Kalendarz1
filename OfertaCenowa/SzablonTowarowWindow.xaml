<Window x:Class="Kalendarz1.OfertaCenowa.SzablonTowarowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ZarzÄ…dzanie szablonami towarÃ³w" 
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#F4F6F9">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreenBrush" Color="#4B833C"/>
        <SolidColorBrush x:Key="PrimaryGreenHoverBrush" Color="#3A6D2E"/>
        <SolidColorBrush x:Key="AccentRedBrush" Color="#CC2F37"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#D1D5DB"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="#7F8C8D"/>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGreenBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryGreenHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LISTA SZABLONÃ“W -->
        <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="ðŸ“ Zapisane szablony" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                <ListBox x:Name="lstSzablony" Grid.Row="1" BorderThickness="0" SelectionChanged="LstSzablony_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10,8" Margin="0,0,0,4" Background="#F9FAFB" CornerRadius="4">
                                <StackPanel>
                                    <TextBlock Text="{Binding Nazwa}" FontWeight="SemiBold" FontSize="13"/>
                                    <TextBlock Text="{Binding Opis}" FontSize="11" Foreground="{StaticResource LightTextBrush}" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock FontSize="10" Foreground="{StaticResource PrimaryGreenBrush}" Margin="0,3,0,0">
                                        <Run Text="ProduktÃ³w: "/><Run Text="{Binding LiczbaTowrow, Mode=OneWay}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="2" Margin="0,15,0,0">
                    <Button Content="âž• Nowy szablon" Style="{StaticResource PrimaryButtonStyle}" Click="BtnNowyMBtn_Click" Margin="0,0,0,8"/>
                    <Button x:Name="btnUsunSzablon" Content="ðŸ—‘ UsuÅ„ wybrany" Style="{StaticResource DangerButtonStyle}" Click="BtnUsunSzablon_Click" IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- EDYCJA SZABLONU -->
        <Border Grid.Column="2" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="âœï¸ Edycja szablonu" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                <!-- Nazwa i opis -->
                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Nazwa szablonu *" FontSize="12" Foreground="{StaticResource LightTextBrush}" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtNazwaSzablonu" FontSize="13" Padding="10,8"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Opis (opcjonalny)" FontSize="12" Foreground="{StaticResource LightTextBrush}" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtOpisSzablonu" FontSize="13" Padding="10,8"/>
                    </StackPanel>
                </Grid>

                <!-- Dodawanie produktu -->
                <Border Grid.Row="2" Background="#F0FDF4" BorderBrush="{StaticResource PrimaryGreenBrush}" BorderThickness="1" CornerRadius="6" Padding="15" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Produkt" FontSize="11" Foreground="{StaticResource LightTextBrush}" Margin="0,0,0,3"/>
                            <ComboBox x:Name="cboDodajProdukt" 
                                      ItemsSource="{Binding FiltrowaneTowary}" 
                                      DisplayMemberPath="NazwaZKodem"
                                      IsEditable="True"
                                      IsTextSearchEnabled="True"
                                      FontSize="12" 
                                      Padding="8,6"
                                      MaxDropDownHeight="250"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="0,0,10,0">
                            <TextBlock Text="IloÅ›Ä‡ (kg)" FontSize="11" Foreground="{StaticResource LightTextBrush}" Margin="0,0,0,3"/>
                            <TextBox x:Name="txtDodajIlosc" FontSize="12" Padding="8,6" HorizontalContentAlignment="Center" Text="0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="0,0,10,0">
                            <TextBlock Text="Cena (zÅ‚)" FontSize="11" Foreground="{StaticResource LightTextBrush}" Margin="0,0,0,3"/>
                            <TextBox x:Name="txtDodajCena" FontSize="12" Padding="8,6" HorizontalContentAlignment="Center" Text="0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="3" Margin="0,0,10,0">
                            <TextBlock Text="Opakowanie" FontSize="11" Foreground="{StaticResource LightTextBrush}" Margin="0,0,0,3"/>
                            <ComboBox x:Name="cboDodajOpakowanie" FontSize="12" Padding="8,6" SelectedIndex="0">
                                <ComboBoxItem Content="E2"/>
                                <ComboBoxItem Content="Karton"/>
                                <ComboBoxItem Content="Poliblok"/>
                            </ComboBox>
                        </StackPanel>
                        <Button Grid.Column="4" Content="âž• Dodaj" Style="{StaticResource PrimaryButtonStyle}" Click="BtnDodajDoSzablonu_Click" VerticalAlignment="Bottom" Padding="15,8"/>
                    </Grid>
                </Border>

                <!-- Lista produktÃ³w w szablonie -->
                <Border Grid.Row="3" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="6">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- NagÅ‚Ã³wek -->
                        <Grid Grid.Row="0" Background="#F3F4F6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Lp" FontWeight="SemiBold" FontSize="11" Padding="8,10" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Produkt" FontWeight="SemiBold" FontSize="11" Padding="8,10"/>
                            <TextBlock Grid.Column="2" Text="IloÅ›Ä‡" FontWeight="SemiBold" FontSize="11" Padding="8,10" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="Cena" FontWeight="SemiBold" FontSize="11" Padding="8,10" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="Opak." FontWeight="SemiBold" FontSize="11" Padding="8,10" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="5" Text="" Padding="8,10"/>
                        </Grid>

                        <!-- Lista -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="icProduktyWSzablonie">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#F3F4F6" BorderThickness="0,0,0,1" Padding="0,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="40"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Lp}" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#9CA3AF"/>
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Nazwa}" FontSize="12" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Kod}" FontSize="10" Foreground="{StaticResource LightTextBrush}"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="2" Text="{Binding IloscStr}" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="3" Text="{Binding CenaStr}" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="4" Text="{Binding Opakowanie}" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <Button Grid.Column="5" Content="ðŸ—‘" FontSize="12" Cursor="Hand" Click="BtnUsunZSzablonu_Click" Tag="{Binding}" Background="Transparent" BorderThickness="0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Placeholder gdy brak -->
                        <StackPanel x:Name="placeholderBrakProduktow" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“¦" FontSize="40" HorizontalAlignment="Center" Opacity="0.3"/>
                            <TextBlock Text="Brak produktÃ³w w szablonie" FontSize="13" Foreground="{StaticResource LightTextBrush}" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                            <TextBlock Text="Dodaj produkty powyÅ¼ej" FontSize="11" Foreground="{StaticResource LightTextBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Przyciski -->
                <Grid Grid.Row="4" Margin="0,15,0,0">
                    <Button Content="âŒ Anuluj" Style="{StaticResource SecondaryButtonStyle}" HorizontalAlignment="Left" Click="BtnAnuluj_Click"/>
                    <Button x:Name="btnZapiszSzablon" Content="ðŸ’¾ Zapisz szablon" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Right" Click="BtnZapiszSzablon_Click"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
