<Window x:Class="Kalendarz1.OfertaCenowa.SzablonTowarowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zarządzanie szablonami towarów" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="CanResize">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreenBrush" Color="#4B833C"/>
        <SolidColorBrush x:Key="PrimaryGreenHoverBrush" Color="#3A6D2E"/>
        <SolidColorBrush x:Key="AccentRedBrush" Color="#CC2F37"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="#7F8C8D"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#D1D5DB"/>

        <Style TargetType="Button" x:Key="PrimaryButtonStyle">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="25,0"/>
            <Setter Property="Background" Value="{StaticResource PrimaryGreenBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryGreenHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="DeleteButtonStyle">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#A82529"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="🗂️ Szablony zestawów towarów" FontSize="20" FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryGreenBrush}"/>
            <TextBlock Text="Twórz i zarządzaj szablonami zestawów produktów dla szybszego tworzenia ofert" 
                       FontSize="11" Foreground="{StaticResource LightTextBrush}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Główna zawartość -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lewa kolumna: Lista szablonów -->
            <Border Grid.Column="0" BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" CornerRadius="8" Padding="15" Background="#F9FAFB" Margin="0,0,15,0">
                <StackPanel>
                    <TextBlock Text="Zapisane szablony" FontSize="14" FontWeight="Bold" 
                               Foreground="{StaticResource DarkTextBrush}" Margin="0,0,0,10"/>
                    
                    <ListBox x:Name="lstSzablony" Height="400" BorderThickness="0" 
                             Background="White" SelectionChanged="LstSzablony_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Nazwa}" FontWeight="SemiBold" FontSize="12"/>
                                        <TextBlock Text="{Binding Opis}" FontSize="10" Foreground="{StaticResource LightTextBrush}" 
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock FontSize="9" Foreground="{StaticResource LightTextBrush}" Margin="0,2,0,0">
                                            <Run Text="Produktów:"/>
                                            <Run Text="{Binding Towary.Count, Mode=OneWay}" FontWeight="Bold"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <Button Grid.Column="1" Content="🗑️" Style="{StaticResource DeleteButtonStyle}" 
                                            Click="BtnUsunSzablon_Click" Tag="{Binding Id}" ToolTip="Usuń szablon"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Content="➕ Nowy szablon" Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="0,15,0,0" Click="BtnNowySzablon_Click"/>
                </StackPanel>
            </Border>

            <!-- Prawa kolumna: Edycja szablonu -->
            <Border Grid.Column="1" BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" CornerRadius="8" Padding="20" Background="White">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="panelEdycji" IsEnabled="False">
                        <TextBlock Text="Szczegóły szablonu" FontSize="16" FontWeight="Bold" 
                                   Foreground="{StaticResource DarkTextBrush}" Margin="0,0,0,15"/>

                        <!-- Nazwa szablonu -->
                        <TextBlock Text="Nazwa szablonu" FontSize="11" FontWeight="SemiBold" 
                                   Foreground="{StaticResource LightTextBrush}" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtNazwaSzablonu" Height="38" VerticalContentAlignment="Center" 
                                 Padding="10,0" Margin="0,0,0,15"/>

                        <!-- Opis -->
                        <TextBlock Text="Opis (opcjonalny)" FontSize="11" FontWeight="SemiBold" 
                                   Foreground="{StaticResource LightTextBrush}" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtOpisSzablonu" Height="60" TextWrapping="Wrap" 
                                 VerticalContentAlignment="Top" Padding="10" Margin="0,0,0,20"/>

                        <!-- Towary w szablonie -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Towary w szablonie" FontSize="14" FontWeight="Bold" 
                                       Foreground="{StaticResource DarkTextBrush}" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Content="➕ Dodaj towar" 
                                    Style="{StaticResource PrimaryButtonStyle}" Height="35" 
                                    Click="BtnDodajTowarDoSzablonu_Click"/>
                        </Grid>

                        <DataGrid x:Name="dgTowaryWSzablonie" AutoGenerateColumns="False" 
                                  Height="250" CanUserAddRows="False" HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Kod" Binding="{Binding Kod}" Width="100" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Nazwa" Binding="{Binding Nazwa}" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Domyślna ilość" Binding="{Binding DomyslnaIlosc}" Width="120"/>
                                <DataGridTextColumn Header="Domyślna cena" Binding="{Binding DomyslnaCena}" Width="120"/>
                                <DataGridTemplateColumn Header="" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="❌" FontSize="10" Background="Transparent" 
                                                    BorderThickness="0" Cursor="Hand" 
                                                    Click="BtnUsunTowarZSzablonu_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Stopka z przyciskami -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="btnZapisz" Content="💾 Zapisz szablon" Style="{StaticResource PrimaryButtonStyle}" 
                    Margin="0,0,8,0" Click="BtnZapiszSzablon_Click" IsEnabled="False" Height="38"/>
            <Button Content="✖️ Zamknij" Style="{StaticResource PrimaryButtonStyle}" 
                    Background="#6B7280" Click="BtnZamknij_Click" Height="38"/>
        </StackPanel>
    </Grid>
</Window>
