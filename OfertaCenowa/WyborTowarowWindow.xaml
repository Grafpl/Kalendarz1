<Window x:Class="Kalendarz1.OfertaCenowa.WyborTowarowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wybierz towary do szablonu" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="White">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreenBrush" Color="#4B833C"/>
        
        <Style TargetType="Button" x:Key="PrimaryButtonStyle">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="25,0"/>
            <Setter Property="Background" Value="{StaticResource PrimaryGreenBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Wybierz towary" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>

        <!-- Filtr -->
        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Text="Szukaj towaru:" FontSize="10" Margin="0,0,0,4"/>
            <TextBox x:Name="txtFiltr" Height="34" VerticalContentAlignment="Center" 
                     Padding="8,0" TextChanged="TxtFiltr_TextChanged"/>
        </StackPanel>

        <!-- Lista towarów z checkboxami -->
        <DataGrid Grid.Row="2" x:Name="dgTowary" AutoGenerateColumns="False" 
                  CanUserAddRows="False" IsReadOnly="False" SelectionMode="Extended" 
                  RowHeight="32" FontSize="11">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="✓" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Width="35"/>
                <DataGridTextColumn Header="Kod" Binding="{Binding Kod}" Width="110" IsReadOnly="True"/>
                <DataGridTextColumn Header="Nazwa" Binding="{Binding Nazwa}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Katalog" Binding="{Binding Katalog}" Width="70" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Przyciski -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Zaznacz wszystkie" Click="BtnZaznaczWszystkie_Click" 
                    Style="{StaticResource PrimaryButtonStyle}" Background="#6B7280" Margin="0,0,8,0" Height="36"/>
            <Button Content="✓ Dodaj wybrane" Click="BtnDodajWybrane_Click" 
                    Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,0" Height="36"/>
            <Button Content="Anuluj" Click="BtnAnuluj_Click" 
                    Style="{StaticResource PrimaryButtonStyle}" Background="#6B7280" Height="36"/>
        </StackPanel>
    </Grid>
</Window>
