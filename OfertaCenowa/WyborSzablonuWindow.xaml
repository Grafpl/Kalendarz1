<Window x:Class="Kalendarz1.OfertaCenowa.WyborSzablonuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wybierz szablon" 
        Height="600" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        Background="White"
        ResizeMode="CanResize">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreenBrush" Color="#4B833C"/>
        
        <Style TargetType="Button" x:Key="PrimaryButtonStyle">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="25,0"/>
            <Setter Property="Background" Value="{StaticResource PrimaryGreenBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="txtTytul" Text="Wybierz szablon" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <ListBox Grid.Row="1" x:Name="lstSzablony" FontSize="12" Margin="0,0,0,15"
                 SelectionMode="Single" MouseDoubleClick="LstSzablony_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="4">
                        <TextBlock Text="{Binding Nazwa}" FontWeight="Bold" FontSize="13"/>
                        <TextBlock Text="{Binding Opis}" FontSize="10" Foreground="#6B7280" 
                                   TextWrapping="Wrap" Margin="0,2,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="âœ“ Wybierz" Click="BtnWybierz_Click" 
                    Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,0" Height="36"/>
            <Button Content="Anuluj" Click="BtnAnuluj_Click" 
                    Style="{StaticResource PrimaryButtonStyle}" Background="#6B7280" Height="36"/>
        </StackPanel>
    </Grid>
</Window>
