<Window x:Class="Kalendarz1.OfertaCenowa.EdycjaKontaktuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edycja kontrahenta"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="BgPrimary" Color="#0F172A"/>
        <SolidColorBrush x:Key="BgSecondary" Color="#1E293B"/>
        <SolidColorBrush x:Key="BgTertiary" Color="#334155"/>
        <SolidColorBrush x:Key="AccentPrimary" Color="#6366F1"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#22C55E"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#94A3B8"/>
        <SolidColorBrush x:Key="BorderDefault" Color="#334155"/>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="#E2E8F0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#6366F1"/>
            <Setter Property="Margin" Value="0,16,0,12"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#22C55E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#16A34A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#334155"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#475569"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#6366F1" Padding="30,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Path Fill="White" Stretch="Uniform" Width="24" Height="24" Margin="0,0,12,0" VerticalAlignment="Center"
                              Data="M3,17.25V21h3.75L17.81,9.94l-3.75-3.75L3,17.25zM20.71,7.04c0.39-0.39,0.39-1.02,0-1.41l-2.34-2.34c-0.39-0.39-1.02-0.39-1.41,0l-1.83,1.83l3.75,3.75L20.71,7.04z"/>
                        <TextBlock Text="Edycja kontrahenta" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="txtKlientNazwa" Text="" FontSize="14" Foreground="#C7D2FE" Margin="36,8,0,0"/>
                </StackPanel>
                <Button Grid.Column="1" Content="✕" FontSize="20" FontWeight="Bold" Padding="12,6"
                        Background="Transparent" Foreground="White" BorderThickness="0" Cursor="Hand"
                        Click="BtnAnuluj_Click" VerticalAlignment="Top"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,20">
            <Grid MaxWidth="1400" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0">

                    <!-- DANE FIRMY -->
                    <TextBlock Text="DANE FIRMY" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Nazwa firmy *" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="txtNazwa" Style="{StaticResource TextBoxStyle}"/>

                            <TextBlock Text="Branża (PKD)" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="cmbPKD" Style="{StaticResource ComboBoxStyle}" IsEditable="True"/>
                        </StackPanel>
                    </Border>

                    <!-- ADRES -->
                    <TextBlock Text="ADRES" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Kod pocztowy" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtKod" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Miasto" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtMiasto" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Ulica" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="txtUlica" Style="{StaticResource TextBoxStyle}"/>

                            <TextBlock Text="Województwo" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="cmbWojewodztwo" Style="{StaticResource ComboBoxStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- STATUS CRM -->
                    <TextBlock Text="STATUS CRM" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Status kontaktu" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="cmbStatus" Style="{StaticResource ComboBoxStyle}">
                                <ComboBoxItem Content="Do zadzwonienia"/>
                                <ComboBoxItem Content="Próba kontaktu"/>
                                <ComboBoxItem Content="Nawiązano kontakt"/>
                                <ComboBoxItem Content="Zgoda na dalszy kontakt"/>
                                <ComboBoxItem Content="Do wysłania oferta"/>
                                <ComboBoxItem Content="Nie zainteresowany"/>
                            </ComboBox>

                            <TextBlock Text="Tagi (oddzielone przecinkami)" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="txtTagi" Style="{StaticResource TextBoxStyle}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="2">

                    <!-- OSOBA KONTAKTOWA -->
                    <TextBlock Text="OSOBA KONTAKTOWA" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Imię" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtImie" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Nazwisko" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtNazwisko" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Stanowisko" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="txtStanowisko" Style="{StaticResource TextBoxStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- KONTAKT -->
                    <TextBlock Text="KONTAKT" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <!-- Email - wyróżniony -->
                            <Border Background="#312E81" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="EMAIL (do wysyłki ofert)" FontSize="12" FontWeight="SemiBold"
                                               Foreground="#A5B4FC" Margin="0,0,0,8"/>
                                    <TextBox x:Name="txtEmail" FontSize="14" Padding="12,10"
                                             Background="#1E293B" Foreground="#E2E8F0" CaretBrush="#E2E8F0"
                                             BorderBrush="#6366F1" BorderThickness="2">
                                        <TextBox.Template>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6">
                                                    <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </TextBox.Template>
                                    </TextBox>
                                </StackPanel>
                            </Border>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Telefon" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtTelefon" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Telefon dodatkowy" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtTelefonDodatkowy" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- NOTATKI -->
                    <TextBlock Text="NOTATKI" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Dodaj notatkę (opcjonalnie)" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="txtNotatki" Style="{StaticResource TextBoxStyle}"
                                     Height="100" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#1E293B" BorderBrush="#334155" BorderThickness="0,1,0,0" Padding="30,16">
            <Grid MaxWidth="1400" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="txtStatus" Text="" FontSize="12"
                           Foreground="#94A3B8" VerticalAlignment="Center"/>

                <Button Grid.Column="1" Content="Anuluj" Style="{StaticResource SecondaryButton}"
                        Click="BtnAnuluj_Click" Width="120"/>
                <Button Grid.Column="3" Style="{StaticResource PrimaryButton}"
                        Click="BtnZapisz_Click" Width="180">
                    <StackPanel Orientation="Horizontal">
                        <Path Fill="White" Stretch="Uniform" Width="14" Height="14" Margin="0,0,8,0" VerticalAlignment="Center"
                              Data="M9,16.17L4.83,12l-1.42,1.41L9,19L21,7l-1.41-1.41L9,16.17z"/>
                        <TextBlock Text="Zapisz zmiany" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
