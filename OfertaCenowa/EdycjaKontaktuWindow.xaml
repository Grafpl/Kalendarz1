<Window x:Class="Kalendarz1.OfertaCenowa.EdycjaKontaktuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edycja kontrahenta"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="#E2E8F0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Toggle Button -->
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="32"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" Grid.ColumnSpan="2" Background="#1E293B" BorderBrush="#334155"
                        BorderThickness="1" CornerRadius="6"/>
                <Border Grid.Column="0" Background="Transparent" CornerRadius="6,0,0,6"/>
                <Path x:Name="Arrow" Grid.Column="1" Fill="#94A3B8" HorizontalAlignment="Center" VerticalAlignment="Center"
                      Data="M0,0 L6,6 L12,0 Z" Width="10" Height="6" Stretch="Uniform"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="Border" Property="BorderBrush" Value="#4F46E5"/>
                    <Setter TargetName="Arrow" Property="Fill" Value="#E2E8F0"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter TargetName="Border" Property="BorderBrush" Value="#6366F1"/>
                    <Setter TargetName="Border" Property="Background" Value="#252F3F"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- ComboBox TextBox for editable mode -->
        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="TextBox">
            <Border x:Name="PART_ContentHost" Focusable="False" Background="Transparent"/>
        </ControlTemplate>

        <!-- Main ComboBox Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Template="{StaticResource ComboBoxToggleButton}"
                                          Grid.Column="2" Focusable="False" ClickMode="Press"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="12,8,32,8" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <TextBox x:Name="PART_EditableTextBox" Style="{x:Null}"
                                     Template="{StaticResource ComboBoxTextBox}"
                                     HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                     Margin="12,8,32,8" Focusable="True" Background="Transparent"
                                     Foreground="#E2E8F0" CaretBrush="#E2E8F0"
                                     Visibility="Hidden" IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid x:Name="DropDown" SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="#1E293B" BorderBrush="#4F46E5"
                                            BorderThickness="1" CornerRadius="6" Margin="0,2,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="4" Opacity="0.4"/>
                                        </Border.Effect>
                                    </Border>
                                    <ScrollViewer Margin="6,8" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#64748B"/>
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="True">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
                            </Trigger>
                            <Trigger Property="IsEditable" Value="True">
                                <Setter Property="IsTabStop" Value="False"/>
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True"
                                Background="{TemplateBinding Background}" CornerRadius="4" Margin="2,1">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3730A3"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4F46E5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#312E81"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#6366F1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#22C55E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#16A34A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#334155"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#475569"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NipButton" TargetType="Button">
            <Setter Property="Background" Value="#6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1E293B" BorderBrush="#334155" BorderThickness="0,0,0,1" Padding="24,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <Path Fill="#6366F1" Stretch="Uniform" Width="22" Height="22" Margin="0,0,12,0" VerticalAlignment="Center"
                          Data="M3,17.25V21h3.75L17.81,9.94l-3.75-3.75L3,17.25zM20.71,7.04c0.39-0.39,0.39-1.02,0-1.41l-2.34-2.34c-0.39-0.39-1.02-0.39-1.41,0l-1.83,1.83l3.75,3.75L20.71,7.04z"/>
                    <TextBlock Text="Edycja kontrahenta" FontSize="18" FontWeight="Bold" Foreground="#E2E8F0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtKlientNazwa" Text="" FontSize="14" Foreground="#94A3B8" Margin="16,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <Button Grid.Column="1" Content="✕" FontSize="18" Padding="10,4"
                        Background="Transparent" Foreground="#94A3B8" BorderThickness="0" Cursor="Hand"
                        Click="BtnAnuluj_Click" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Main Content - 3 columns without scrolling -->
        <Grid Grid.Row="1" Margin="20,16,20,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column - DANE FIRMY + NIP -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="DANE FIRMY" Style="{StaticResource SectionHeader}"/>
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Nazwa firmy *" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtNazwa" Style="{StaticResource TextBoxStyle}"/>

                        <!-- NIP z przyciskiem pobierania -->
                        <TextBlock Text="NIP" Style="{StaticResource LabelStyle}"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtNIP" Grid.Column="0" Style="{StaticResource TextBoxStyle}" Margin="0"/>
                            <Button x:Name="btnPobierzNIP" Grid.Column="2" Style="{StaticResource NipButton}" Click="BtnPobierzNIP_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Fill="White" Stretch="Uniform" Width="12" Height="12" Margin="0,0,6,0"
                                          Data="M12,4V1L8,5l4,4V6c3.31,0,6,2.69,6,6c0,1.01-0.25,1.97-0.7,2.8l1.46,1.46C19.54,15.03,20,13.57,20,12C20,7.58,16.42,4,12,4z"/>
                                    <TextBlock Text="Pobierz dane"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="REGON" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="txtREGON" Style="{StaticResource TextBoxStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="KRS" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="txtKRS" Style="{StaticResource TextBoxStyle}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Branża (PKD)" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="cmbPKD" Style="{StaticResource ComboBoxStyle}" IsEditable="True"/>

                        <TextBlock Text="Strona WWW" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtWWW" Style="{StaticResource TextBoxStyle}"/>

                        <TextBlock Text="Forma prawna" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="cmbFormaPrawna" Style="{StaticResource ComboBoxStyle}" IsEditable="True">
                            <ComboBoxItem Content=""/>
                            <ComboBoxItem Content="Jednoosobowa działalność"/>
                            <ComboBoxItem Content="Spółka cywilna"/>
                            <ComboBoxItem Content="Sp. z o.o."/>
                            <ComboBoxItem Content="Spółka akcyjna"/>
                            <ComboBoxItem Content="Sp. komandytowa"/>
                            <ComboBoxItem Content="Sp. jawna"/>
                            <ComboBoxItem Content="Fundacja"/>
                            <ComboBoxItem Content="Stowarzyszenie"/>
                        </ComboBox>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Middle Column - ADRES + STATUS -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="ADRES" Style="{StaticResource SectionHeader}"/>
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Kod pocztowy" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="txtKod" Style="{StaticResource TextBoxStyle}" TextChanged="TxtKod_TextChanged"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Miasto" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="txtMiasto" Style="{StaticResource TextBoxStyle}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Ulica i nr" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtUlica" Style="{StaticResource TextBoxStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Województwo" Style="{StaticResource LabelStyle}"/>
                                <ComboBox x:Name="cmbWojewodztwo" Style="{StaticResource ComboBoxStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Powiat" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="txtPowiat" Style="{StaticResource TextBoxStyle}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Gmina" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtGmina" Style="{StaticResource TextBoxStyle}"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="STATUS CRM" Style="{StaticResource SectionHeader}" Margin="0,6,0,10"/>
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Status kontaktu" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="cmbStatus" Style="{StaticResource ComboBoxStyle}">
                            <ComboBoxItem Content="Do zadzwonienia"/>
                            <ComboBoxItem Content="Próba kontaktu"/>
                            <ComboBoxItem Content="Nawiązano kontakt"/>
                            <ComboBoxItem Content="Zgoda na dalszy kontakt"/>
                            <ComboBoxItem Content="Do wysłania oferta"/>
                            <ComboBoxItem Content="Nie zainteresowany"/>
                        </ComboBox>

                        <TextBlock Text="Tagi (oddzielone przecinkami)" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtTagi" Style="{StaticResource TextBoxStyle}"/>

                        <TextBlock Text="Źródło pozyskania" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="cmbZrodlo" Style="{StaticResource ComboBoxStyle}" IsEditable="True">
                            <ComboBoxItem Content=""/>
                            <ComboBoxItem Content="Import z bazy"/>
                            <ComboBoxItem Content="Strona WWW"/>
                            <ComboBoxItem Content="Polecenie"/>
                            <ComboBoxItem Content="Targi"/>
                            <ComboBoxItem Content="Cold calling"/>
                            <ComboBoxItem Content="Social media"/>
                        </ComboBox>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Right Column - KONTAKT + NOTATKI -->
            <StackPanel Grid.Column="4">
                <TextBlock Text="OSOBA KONTAKTOWA" Style="{StaticResource SectionHeader}"/>
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Imię" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="txtImie" Style="{StaticResource TextBoxStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Nazwisko" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="txtNazwisko" Style="{StaticResource TextBoxStyle}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Stanowisko" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtStanowisko" Style="{StaticResource TextBoxStyle}"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="DANE KONTAKTOWE" Style="{StaticResource SectionHeader}" Margin="0,6,0,10"/>
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <!-- Email wyróżniony -->
                        <Border Background="#312E81" CornerRadius="6" Padding="12" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="EMAIL (do wysyłki ofert)" FontSize="11" FontWeight="SemiBold"
                                           Foreground="#A5B4FC" Margin="0,0,0,6"/>
                                <TextBox x:Name="txtEmail" FontSize="13" Padding="10,8"
                                         Background="#1E293B" Foreground="#E2E8F0" CaretBrush="#E2E8F0"
                                         BorderBrush="#6366F1" BorderThickness="2">
                                    <TextBox.Template>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4">
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </TextBox.Template>
                                </TextBox>
                            </StackPanel>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Telefon główny" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="txtTelefon" Style="{StaticResource TextBoxStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Telefon dodatkowy" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="txtTelefonDodatkowy" Style="{StaticResource TextBoxStyle}"/>
                            </StackPanel>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Fax" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="txtFax" Style="{StaticResource TextBoxStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Email dodatkowy" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="txtEmailDodatkowy" Style="{StaticResource TextBoxStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <TextBlock Text="NOTATKI" Style="{StaticResource SectionHeader}" Margin="0,6,0,10"/>
                <Border Style="{StaticResource CardStyle}" Padding="12">
                    <TextBox x:Name="txtNotatki" Style="{StaticResource TextBoxStyle}" Margin="0"
                             Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                             ToolTip="Dodaj nową notatkę (opcjonalnie)"/>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#1E293B" BorderBrush="#334155" BorderThickness="0,1,0,0" Padding="24,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="txtStatus" Text="" FontSize="12"
                           Foreground="#94A3B8" VerticalAlignment="Center"/>

                <Button Grid.Column="1" Content="Anuluj" Style="{StaticResource SecondaryButton}"
                        Click="BtnAnuluj_Click" Width="100"/>
                <Button Grid.Column="3" Style="{StaticResource PrimaryButton}"
                        Click="BtnZapisz_Click" Width="160">
                    <StackPanel Orientation="Horizontal">
                        <Path Fill="White" Stretch="Uniform" Width="14" Height="14" Margin="0,0,8,0" VerticalAlignment="Center"
                              Data="M9,16.17L4.83,12l-1.42,1.41L9,19L21,7l-1.41-1.41L9,16.17z"/>
                        <TextBlock Text="Zapisz zmiany" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
