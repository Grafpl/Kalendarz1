<Window x:Class="Kalendarz1.OfertaCenowa.EdycjaKontaktuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="âœï¸ Edycja Danych Kontaktowych" 
        Height="520" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#4B833C"/>
        <SolidColorBrush x:Key="PrimaryGreenDark" Color="#3D6B31"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextDark" Color="#1F2937"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryGreenDark}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9FAFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NagÅ‚Ã³wek -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryGreen}" Padding="20,15">
            <StackPanel>
                <TextBlock Text="âœï¸ Edycja Danych Kontaktowych" FontSize="18" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="txtKlientNazwa" Text="" FontSize="13" Foreground="#C8E6C9" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Formularz -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="25,20">
                
                <!-- Osoba kontaktowa -->
                <TextBlock Text="ðŸ‘¤ Osoba kontaktowa" Style="{StaticResource LabelStyle}"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="ImiÄ™" FontSize="10" Foreground="{StaticResource TextGray}" Margin="0,0,0,3"/>
                        <TextBox x:Name="txtImie" Style="{StaticResource TextBoxStyle}" Margin="0"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Nazwisko" FontSize="10" Foreground="{StaticResource TextGray}" Margin="0,0,0,3"/>
                        <TextBox x:Name="txtNazwisko" Style="{StaticResource TextBoxStyle}" Margin="0"/>
                    </StackPanel>
                </Grid>

                <!-- Stanowisko -->
                <TextBlock Text="ðŸ’¼ Stanowisko" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtStanowisko" Style="{StaticResource TextBoxStyle}"/>

                <!-- Email - wyrÃ³Å¼niony -->
                <Border Background="#EBF5FF" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ðŸ“§ EMAIL (do wysyÅ‚ki ofert)" FontSize="12" FontWeight="SemiBold" 
                                   Foreground="{StaticResource AccentBlue}" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtEmail" FontSize="14" Padding="12,10" BorderBrush="{StaticResource AccentBlue}" 
                                 BorderThickness="2" Background="White"/>
                        <TextBlock Text="Ten email bÄ™dzie uÅ¼ywany do wysyÅ‚ania ofert handlowych" 
                                   FontSize="10" Foreground="{StaticResource TextGray}" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Telefon -->
                <TextBlock Text="ðŸ“ž Telefon kontaktowy" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtTelefon" Style="{StaticResource TextBoxStyle}"/>

                <!-- Telefon dodatkowy -->
                <TextBlock Text="ðŸ“± Telefon dodatkowy (opcjonalnie)" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtTelefonDodatkowy" Style="{StaticResource TextBoxStyle}"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Przyciski -->
        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource BorderGray}" BorderThickness="0,1,0,0" Padding="25,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="txtStatus" Text="" FontSize="11" 
                           Foreground="{StaticResource TextGray}" VerticalAlignment="Center"/>

                <Button Grid.Column="1" Content="Anuluj" Style="{StaticResource SecondaryButton}" 
                        Click="BtnAnuluj_Click" Width="100"/>
                <Button Grid.Column="3" Content="ðŸ’¾ Zapisz" Style="{StaticResource PrimaryButton}" 
                        Click="BtnZapisz_Click" Width="120"/>
            </Grid>
        </Border>
    </Grid>
</Window>
