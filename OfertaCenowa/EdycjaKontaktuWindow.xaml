<Window x:Class="Kalendarz1.OfertaCenowa.EdycjaKontaktuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edycja kontrahenta"
        Height="850" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#4B833C"/>
        <SolidColorBrush x:Key="PrimaryGreenDark" Color="#3D6B31"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextDark" Color="#1F2937"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryGreen}"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryGreenDark}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9FAFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naglowek -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryGreen}" Padding="20,15">
            <StackPanel>
                <TextBlock Text="Edycja kontrahenta" FontSize="18" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="txtKlientNazwa" Text="" FontSize="13" Foreground="#C8E6C9" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Glowna tresc -->
        <Grid Grid.Row="1" Margin="20,15,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lewa kolumna -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- DANE FIRMY -->
                    <TextBlock Text="DANE FIRMY" Style="{StaticResource SectionHeader}"/>
                    <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Nazwa firmy *" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="txtNazwa" Style="{StaticResource TextBoxStyle}"/>

                            <TextBlock Text="Branza (PKD)" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="cmbPKD" Style="{StaticResource ComboBoxStyle}" IsEditable="True"/>
                        </StackPanel>
                    </Border>

                    <!-- ADRES -->
                    <TextBlock Text="ADRES" Style="{StaticResource SectionHeader}"/>
                    <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Kod pocztowy" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtKod" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Miasto" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtMiasto" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Ulica" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="txtUlica" Style="{StaticResource TextBoxStyle}"/>

                            <TextBlock Text="Wojewodztwo" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="cmbWojewodztwo" Style="{StaticResource ComboBoxStyle}"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Prawa kolumna -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- OSOBA KONTAKTOWA -->
                    <TextBlock Text="OSOBA KONTAKTOWA" Style="{StaticResource SectionHeader}"/>
                    <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Imie" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtImie" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Nazwisko" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtNazwisko" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Stanowisko" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="txtStanowisko" Style="{StaticResource TextBoxStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- KONTAKT -->
                    <TextBlock Text="KONTAKT" Style="{StaticResource SectionHeader}"/>
                    <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <!-- Email - wyroziony -->
                            <Border Background="#EBF5FF" CornerRadius="6" Padding="12" Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="EMAIL (do wysylki ofert)" FontSize="11" FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentBlue}" Margin="0,0,0,6"/>
                                    <TextBox x:Name="txtEmail" FontSize="14" Padding="10,8"
                                             BorderBrush="{StaticResource AccentBlue}" BorderThickness="2" Background="White"/>
                                </StackPanel>
                            </Border>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Telefon" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtTelefon" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Telefon dodatkowy" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtTelefonDodatkowy" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- NOTATKI -->
                    <TextBlock Text="NOTATKI" Style="{StaticResource SectionHeader}"/>
                    <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Notatka (opcjonalnie)" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="txtNotatki" Style="{StaticResource TextBoxStyle}"
                                     Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Przyciski na dole -->
        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource BorderGray}" BorderThickness="0,1,0,0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="txtStatus" Text="" FontSize="11"
                           Foreground="{StaticResource TextGray}" VerticalAlignment="Center"/>

                <Button Grid.Column="1" Content="Anuluj" Style="{StaticResource SecondaryButton}"
                        Click="BtnAnuluj_Click" Width="100"/>
                <Button Grid.Column="3" Content="Zapisz zmiany" Style="{StaticResource PrimaryButton}"
                        Click="BtnZapisz_Click" Width="160"/>
            </Grid>
        </Border>
    </Grid>
</Window>
