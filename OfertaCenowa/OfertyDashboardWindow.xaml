<Window x:Class="Kalendarz1.OfertaCenowa.OfertyDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ“Š Dashboard Ofert Handlowych" 
        Height="900" Width="1400"
        MinHeight="700" MinWidth="1100"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F0F2F5">

    <Window.Resources>
        <!-- Kolory -->
        <SolidColorBrush x:Key="PrimaryGreen" Color="#4B833C"/>
        <SolidColorBrush x:Key="PrimaryGreenDark" Color="#2E5A28"/>
        <SolidColorBrush x:Key="PrimaryGreenLight" Color="#E8F5E9"/>
        <SolidColorBrush x:Key="AccentRed" Color="#CC2F37"/>
        <SolidColorBrush x:Key="AccentRedLight" Color="#FEF2F2"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#3498DB"/>
        <SolidColorBrush x:Key="AccentBlueLight" Color="#EBF5FB"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#9B59B6"/>
        <SolidColorBrush x:Key="AccentPurpleLight" Color="#F5EEF8"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#F39C12"/>
        <SolidColorBrush x:Key="AccentOrangeLight" Color="#FEF9E7"/>
        <SolidColorBrush x:Key="LightGray" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextDark" Color="#374151"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>

        <!-- Style karty -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style KPI karty -->
        <Style x:Key="KPICardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.08" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style przycisku -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style paska postÄ™pu -->
        <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                            <Border x:Name="PART_Track" CornerRadius="4"/>
                            <Border x:Name="PART_Indicator" CornerRadius="4" 
                                    Background="{TemplateBinding Foreground}"
                                    HorizontalAlignment="Left"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- NAGÅÃ“WEK -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryGreen}" Padding="25,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ“Š DASHBOARD OFERT HANDLOWYCH" 
                               FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="txtOkres" Text="Okres: Listopad 2025" 
                               FontSize="13" Foreground="#E8F5E9" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- WybÃ³r okresu -->
                    <ComboBox x:Name="cboOkres" Width="180" Padding="12,10" FontSize="13" 
                              Margin="0,0,15,0" SelectionChanged="CboOkres_SelectionChanged">
                        <ComboBoxItem Content="ðŸ“… Ten miesiÄ…c" Tag="miesiac" IsSelected="True"/>
                        <ComboBoxItem Content="ðŸ“… Ostatnie 7 dni" Tag="tydzien"/>
                        <ComboBoxItem Content="ðŸ“… Ostatnie 30 dni" Tag="30dni"/>
                        <ComboBoxItem Content="ðŸ“… Ten kwartaÅ‚" Tag="kwartal"/>
                        <ComboBoxItem Content="ðŸ“… Ten rok" Tag="rok"/>
                        <ComboBoxItem Content="ðŸ“… Wszystko" Tag="wszystko"/>
                    </ComboBox>

                    <Button x:Name="btnOdswiez" Content="ðŸ”„ OdÅ›wieÅ¼" 
                            Style="{StaticResource SecondaryButton}" 
                            Click="BtnOdswiez_Click" Margin="0,0,10,0"/>
                    <Button x:Name="btnZamknij" Content="âœ• Zamknij" 
                            Style="{StaticResource SecondaryButton}" 
                            Click="BtnZamknij_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- TREÅšÄ† -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="25,20">
            <StackPanel>
                
                <!-- WIERSZ 1: KPI Karty -->
                <Grid Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- KPI 1: Liczba ofert -->
                    <Border Grid.Column="0" Style="{StaticResource KPICardStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="LICZBA OFERT" FontSize="11" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextGray}" Margin="0,0,0,8"/>
                                <TextBlock x:Name="txtLiczbaOfert" Text="0" FontSize="32" FontWeight="Bold" 
                                           Foreground="{StaticResource TextDark}"/>
                                <TextBlock x:Name="txtLiczbaOfertZmiana" Text="+0 vs poprzedni" FontSize="11" 
                                           Foreground="{StaticResource PrimaryGreen}" Margin="0,5,0,0"/>
                            </StackPanel>
                            <Border Grid.Column="1" Background="{StaticResource AccentBlueLight}" 
                                    CornerRadius="10" Width="50" Height="50" VerticalAlignment="Top">
                                <TextBlock Text="ðŸ“‹" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- KPI 2: WartoÅ›Ä‡ ofert -->
                    <Border Grid.Column="2" Style="{StaticResource KPICardStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="WARTOÅšÄ† OFERT" FontSize="11" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextGray}" Margin="0,0,0,8"/>
                                <TextBlock x:Name="txtWartoscOfert" Text="0 zÅ‚" FontSize="28" FontWeight="Bold" 
                                           Foreground="{StaticResource TextDark}"/>
                                <TextBlock x:Name="txtWartoscOfertZmiana" Text="+0% vs poprzedni" FontSize="11" 
                                           Foreground="{StaticResource PrimaryGreen}" Margin="0,5,0,0"/>
                            </StackPanel>
                            <Border Grid.Column="1" Background="{StaticResource PrimaryGreenLight}" 
                                    CornerRadius="10" Width="50" Height="50" VerticalAlignment="Top">
                                <TextBlock Text="ðŸ’°" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- KPI 3: Åšrednia wartoÅ›Ä‡ -->
                    <Border Grid.Column="4" Style="{StaticResource KPICardStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="ÅšREDNIA WARTOÅšÄ†" FontSize="11" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextGray}" Margin="0,0,0,8"/>
                                <TextBlock x:Name="txtSredniaWartosc" Text="0 zÅ‚" FontSize="28" FontWeight="Bold" 
                                           Foreground="{StaticResource TextDark}"/>
                                <TextBlock Text="na ofertÄ™" FontSize="11" 
                                           Foreground="{StaticResource TextGray}" Margin="0,5,0,0"/>
                            </StackPanel>
                            <Border Grid.Column="1" Background="{StaticResource AccentPurpleLight}" 
                                    CornerRadius="10" Width="50" Height="50" VerticalAlignment="Top">
                                <TextBlock Text="ðŸ“ˆ" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- KPI 4: Konwersja -->
                    <Border Grid.Column="6" Style="{StaticResource KPICardStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="KONWERSJA" FontSize="11" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextGray}" Margin="0,0,0,8"/>
                                <TextBlock x:Name="txtKonwersja" Text="0%" FontSize="32" FontWeight="Bold" 
                                           Foreground="{StaticResource PrimaryGreen}"/>
                                <TextBlock Text="zaakceptowane / wysÅ‚ane" FontSize="11" 
                                           Foreground="{StaticResource TextGray}" Margin="0,5,0,0"/>
                            </StackPanel>
                            <Border Grid.Column="1" Background="{StaticResource AccentOrangeLight}" 
                                    CornerRadius="10" Width="50" Height="50" VerticalAlignment="Top">
                                <TextBlock Text="ðŸŽ¯" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- KPI 5: Zaakceptowane -->
                    <Border Grid.Column="8" Style="{StaticResource KPICardStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="ZAAKCEPTOWANE" FontSize="11" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextGray}" Margin="0,0,0,8"/>
                                <TextBlock x:Name="txtZaakceptowane" Text="0" FontSize="32" FontWeight="Bold" 
                                           Foreground="{StaticResource PrimaryGreen}"/>
                                <TextBlock x:Name="txtZaakceptowaneWartosc" Text="0 zÅ‚" FontSize="11" 
                                           Foreground="{StaticResource TextGray}" Margin="0,5,0,0"/>
                            </StackPanel>
                            <Border Grid.Column="1" Background="{StaticResource PrimaryGreenLight}" 
                                    CornerRadius="10" Width="50" Height="50" VerticalAlignment="Top">
                                <TextBlock Text="âœ…" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

                <!-- WIERSZ 2: Statusy i Top Handlowcy -->
                <Grid Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Statusy ofert -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š STATUSY OFERT" FontSize="14" FontWeight="Bold" 
                                       Foreground="{StaticResource TextDark}" Margin="0,0,0,20"/>

                            <!-- Nowe -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸ“ Nowe" FontSize="13" Width="120"/>
                                <ProgressBar Grid.Column="1" x:Name="pbNowe" Value="0" Maximum="100" 
                                             Foreground="{StaticResource AccentBlue}" 
                                             Style="{StaticResource ModernProgressBar}" Margin="10,0"/>
                                <TextBlock Grid.Column="2" x:Name="txtNowe" Text="0" FontSize="13" 
                                           FontWeight="SemiBold" Width="40" TextAlignment="Right"/>
                            </Grid>

                            <!-- WysÅ‚ane -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸ“§ WysÅ‚ane" FontSize="13" Width="120"/>
                                <ProgressBar Grid.Column="1" x:Name="pbWyslane" Value="0" Maximum="100" 
                                             Foreground="{StaticResource AccentPurple}" 
                                             Style="{StaticResource ModernProgressBar}" Margin="10,0"/>
                                <TextBlock Grid.Column="2" x:Name="txtWyslane" Text="0" FontSize="13" 
                                           FontWeight="SemiBold" Width="40" TextAlignment="Right"/>
                            </Grid>

                            <!-- Zaakceptowane -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="âœ… Zaakceptowane" FontSize="13" Width="120"/>
                                <ProgressBar Grid.Column="1" x:Name="pbZaakceptowane" Value="0" Maximum="100" 
                                             Foreground="{StaticResource PrimaryGreen}" 
                                             Style="{StaticResource ModernProgressBar}" Margin="10,0"/>
                                <TextBlock Grid.Column="2" x:Name="txtZaakceptowaneStatus" Text="0" FontSize="13" 
                                           FontWeight="SemiBold" Width="40" TextAlignment="Right"/>
                            </Grid>

                            <!-- Odrzucone -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="âŒ Odrzucone" FontSize="13" Width="120"/>
                                <ProgressBar Grid.Column="1" x:Name="pbOdrzucone" Value="0" Maximum="100" 
                                             Foreground="{StaticResource AccentRed}" 
                                             Style="{StaticResource ModernProgressBar}" Margin="10,0"/>
                                <TextBlock Grid.Column="2" x:Name="txtOdrzucone" Text="0" FontSize="13" 
                                           FontWeight="SemiBold" Width="40" TextAlignment="Right"/>
                            </Grid>

                            <!-- Anulowane -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸš« Anulowane" FontSize="13" Width="120"/>
                                <ProgressBar Grid.Column="1" x:Name="pbAnulowane" Value="0" Maximum="100" 
                                             Foreground="#7F8C8D" 
                                             Style="{StaticResource ModernProgressBar}" Margin="10,0"/>
                                <TextBlock Grid.Column="2" x:Name="txtAnulowane" Text="0" FontSize="13" 
                                           FontWeight="SemiBold" Width="40" TextAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Top Handlowcy -->
                    <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ† TOP HANDLOWCY" FontSize="14" FontWeight="Bold" 
                                       Foreground="{StaticResource TextDark}" Margin="0,0,0,20"/>

                            <DataGrid x:Name="dgTopHandlowcy" 
                                      AutoGenerateColumns="False" 
                                      IsReadOnly="True"
                                      CanUserSortColumns="False"
                                      GridLinesVisibility="None"
                                      BorderThickness="0"
                                      RowHeight="50"
                                      HeadersVisibility="Column"
                                      ColumnHeaderHeight="35"
                                      MaxHeight="300">

                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{StaticResource LightGray}"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="Padding" Value="10,8"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="White"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource LightGray}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="#" Binding="{Binding Pozycja}" Width="40">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="Foreground" Value="{StaticResource PrimaryGreen}"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Handlowiec" Binding="{Binding Nazwa}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Oferty" Binding="{Binding LiczbaOfert}" Width="60">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="WartoÅ›Ä‡" Binding="{Binding WartoscFormatowana}" Width="110">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Konwersja" Binding="{Binding KonwersjaFormatowana}" Width="80">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="Foreground" Value="{StaticResource PrimaryGreen}"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- WIERSZ 3: Top Klienci i Ostatnie oferty -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Top Klienci -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ‘¥ TOP KLIENCI" FontSize="14" FontWeight="Bold" 
                                       Foreground="{StaticResource TextDark}" Margin="0,0,0,20"/>

                            <ItemsControl x:Name="icTopKlienci">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{StaticResource BorderGray}" 
                                                BorderThickness="0,0,0,1" Padding="0,12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="30"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding Pozycja}" 
                                                           FontSize="16" FontWeight="Bold" 
                                                           Foreground="{StaticResource PrimaryGreen}"
                                                           VerticalAlignment="Center"/>

                                                <StackPanel Grid.Column="1" Margin="10,0">
                                                    <TextBlock Text="{Binding KlientNazwa}" FontSize="13" 
                                                               FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock FontSize="11" Foreground="{StaticResource TextGray}">
                                                        <Run Text="{Binding LiczbaOfert}"/> ofert â€¢ 
                                                        <Run Text="{Binding Zaakceptowane}"/> zaakceptowanych
                                                    </TextBlock>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding SumaWartosciFormatowana}" 
                                                               FontSize="14" FontWeight="Bold" 
                                                               HorizontalAlignment="Right"/>
                                                    <TextBlock Text="{Binding OstatniaOfertaFormatowana}" 
                                                               FontSize="10" Foreground="{StaticResource TextGray}"
                                                               HorizontalAlignment="Right"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Ostatnie oferty -->
                    <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <Grid Margin="0,0,0,20">
                                <TextBlock Text="ðŸ“„ OSTATNIE OFERTY" FontSize="14" FontWeight="Bold" 
                                           Foreground="{StaticResource TextDark}"/>
                                <Button Content="Zobacz wszystkie â†’" HorizontalAlignment="Right"
                                        Background="Transparent" BorderThickness="0" 
                                        Foreground="{StaticResource PrimaryGreen}" Cursor="Hand"
                                        FontSize="12" Click="BtnZobaczWszystkie_Click"/>
                            </Grid>

                            <ItemsControl x:Name="icOstatnieOferty">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{StaticResource BorderGray}" 
                                                BorderThickness="0,0,0,1" Padding="0,12" Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding StatusIkona}" 
                                                           FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>

                                                <StackPanel Grid.Column="1">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding NumerOferty}" FontSize="13" 
                                                                   FontWeight="SemiBold" Foreground="{StaticResource PrimaryGreen}"/>
                                                        <TextBlock Text=" â€¢ " Foreground="{StaticResource TextGray}"/>
                                                        <TextBlock Text="{Binding DataWystawieniaFormatowana}" 
                                                                   FontSize="12" Foreground="{StaticResource TextGray}"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding KlientNazwa}" FontSize="12" 
                                                               TextTrimming="CharacterEllipsis"
                                                               Foreground="{StaticResource TextDark}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding WartoscFormatowana}" 
                                                               FontSize="13" FontWeight="SemiBold" 
                                                               HorizontalAlignment="Right"/>
                                                    <TextBlock Text="{Binding Status}" FontSize="11" 
                                                               Foreground="{StaticResource TextGray}"
                                                               HorizontalAlignment="Right"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
