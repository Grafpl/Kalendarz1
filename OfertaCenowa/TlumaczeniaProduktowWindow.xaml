<Window x:Class="Kalendarz1.OfertaCenowa.TlumaczeniaProduktowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TÅ‚umaczenia produktÃ³w" Height="600" Width="700"
        WindowStartupLocation="CenterOwner" Background="#F4F6F9">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreenBrush" Color="#4B833C"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="White" BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="6" Padding="12" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="ðŸŒ ZarzÄ…dzaj tÅ‚umaczeniami" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="Dodaj angielskie nazwy produktÃ³w dla ofert miÄ™dzynarodowych" FontSize="10" Foreground="#7F8C8D" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        
        <Border Grid.Row="1" Background="White" BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="6">
            <DataGrid x:Name="dgTlumaczenia" AutoGenerateColumns="False" HeadersVisibility="Column" 
                      GridLinesVisibility="Horizontal" BorderThickness="0" AlternatingRowBackground="#F9FAFB" 
                      FontSize="10" RowHeight="36">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource PrimaryGreenBrush}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="10"/>
                        <Setter Property="Padding" Value="8,6"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Kod" Binding="{Binding Kod}" Width="80" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Margin" Value="5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Nazwa PL" Binding="{Binding NazwaPL}" Width="*" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="ðŸ‡¬ðŸ‡§ English Name" Binding="{Binding NazwaEN, UpdateSourceTrigger=PropertyChanged}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0"/>
                                <Setter Property="Foreground" Value="#2563EB"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="ðŸ“¥ Wczytaj z pliku" Click="BtnWczytaj_Click" Padding="12,8" Margin="0,0,8,0" FontSize="10" Background="#F3F4F6" BorderThickness="0" Cursor="Hand"/>
            <Button Content="ðŸ’¾ Zapisz" Click="BtnZapisz_Click" Padding="15,8" FontSize="11" Foreground="White" Background="{StaticResource PrimaryGreenBrush}" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
