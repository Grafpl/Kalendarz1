<Window x:Class="Kalendarz1.OfertaCenowa.OfertaSzczegolyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ“„ SzczegÃ³Å‚y Oferty" 
        Height="700" Width="900"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#4B833C"/>
        <SolidColorBrush x:Key="PrimaryGreenDark" Color="#2E5A28"/>
        <SolidColorBrush x:Key="AccentRed" Color="#CC2F37"/>
        <SolidColorBrush x:Key="LightGray" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextDark" Color="#374151"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NAGÅÃ“WEK -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryGreen}" Padding="25,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="txtStatusIkona" Text="ðŸ“" FontSize="28" 
                                   VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <StackPanel>
                            <TextBlock x:Name="txtNumerOferty" Text="OF/202511/001" 
                                       FontSize="24" FontWeight="Bold" Foreground="White"/>
                            <TextBlock x:Name="txtStatus" Text="Status: Nowa" 
                                       FontSize="13" Foreground="#E8F5E9" Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="txtDataWystawienia" Text="Data: 27.11.2025" 
                               FontSize="13" Foreground="White" HorizontalAlignment="Right"/>
                    <TextBlock x:Name="txtDataWaznosci" Text="WaÅ¼na do: 28.11.2025" 
                               FontSize="13" Foreground="#E8F5E9" HorizontalAlignment="Right" Margin="0,3,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- TREÅšÄ† -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="25,20">
            <StackPanel>
                <!-- Sekcja: Klient i Handlowiec -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Klient -->
                    <Border Grid.Column="0" Background="White" CornerRadius="8" 
                            BorderBrush="{StaticResource BorderGray}" BorderThickness="1" Padding="20">
                        <StackPanel>
                            <TextBlock Text="ðŸ‘¤ KLIENT" FontSize="12" FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryGreen}" Margin="0,0,0,15"/>

                            <TextBlock Text="Nazwa:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="txtKlientNazwa" Text="-" Style="{StaticResource ValueStyle}" 
                                       TextWrapping="Wrap" Margin="0,0,0,10"/>

                            <TextBlock Text="NIP:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="txtKlientNIP" Text="-" Style="{StaticResource ValueStyle}" 
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="Adres:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="txtKlientAdres" Text="-" Style="{StaticResource ValueStyle}" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Handlowiec -->
                    <Border Grid.Column="2" Background="White" CornerRadius="8" 
                            BorderBrush="{StaticResource BorderGray}" BorderThickness="1" Padding="20">
                        <StackPanel>
                            <TextBlock Text="ðŸ’¼ HANDLOWIEC" FontSize="12" FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryGreen}" Margin="0,0,0,15"/>

                            <TextBlock Text="ImiÄ™ i nazwisko:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="txtHandlowiecNazwa" Text="-" Style="{StaticResource ValueStyle}" 
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="WartoÅ›Ä‡ oferty:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="txtWartoscNetto" Text="0,00 zÅ‚" 
                                       FontSize="22" FontWeight="Bold" Foreground="{StaticResource PrimaryGreen}"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Sekcja: Produkty -->
                <Border Background="White" CornerRadius="8" 
                        BorderBrush="{StaticResource BorderGray}" BorderThickness="1" 
                        Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ“¦ PRODUKTY" FontSize="12" FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryGreen}" Margin="0,0,0,15"/>

                        <DataGrid x:Name="dgPozycje" 
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True"
                                  CanUserSortColumns="False"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#E5E7EB"
                                  BorderThickness="1"
                                  BorderBrush="{StaticResource BorderGray}"
                                  RowHeight="40"
                                  MaxHeight="300">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{StaticResource LightGray}"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Lp." Binding="{Binding Lp}" Width="50"/>
                                <DataGridTextColumn Header="Kod" Binding="{Binding TowarKod}" Width="100"/>
                                <DataGridTextColumn Header="Nazwa produktu" Binding="{Binding TowarNazwa}" Width="*"/>
                                <DataGridTextColumn Header="Opakowanie" Binding="{Binding Opakowanie}" Width="90"/>
                                <DataGridTextColumn Header="IloÅ›Ä‡" Binding="{Binding Ilosc, StringFormat=N0}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Cena" Binding="{Binding CenaJednostkowa, StringFormat=N2}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="WartoÅ›Ä‡" Binding="{Binding Wartosc, StringFormat=N2}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Sekcja: Notatki i Historia -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Notatki -->
                    <Border Grid.Column="0" Background="White" CornerRadius="8" 
                            BorderBrush="{StaticResource BorderGray}" BorderThickness="1" Padding="20">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ NOTATKI" FontSize="12" FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryGreen}" Margin="0,0,0,15"/>

                            <TextBlock x:Name="txtNotatki" Text="Brak notatek" 
                                       TextWrapping="Wrap" Foreground="{StaticResource TextGray}"/>
                        </StackPanel>
                    </Border>

                    <!-- Historia -->
                    <Border Grid.Column="2" Background="White" CornerRadius="8" 
                            BorderBrush="{StaticResource BorderGray}" BorderThickness="1" Padding="20">
                        <StackPanel>
                            <TextBlock Text="ðŸ“œ HISTORIA ZMIAN" FontSize="12" FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryGreen}" Margin="0,0,0,15"/>

                            <ItemsControl x:Name="icHistoria">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{StaticResource BorderGray}" 
                                                BorderThickness="0,0,0,1" Padding="0,8">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding DataZmiany, StringFormat=dd.MM.yyyy HH:mm}" 
                                                               FontSize="11" Foreground="{StaticResource TextGray}"/>
                                                    <TextBlock Text=" â€¢ " Foreground="{StaticResource TextGray}"/>
                                                    <TextBlock Text="{Binding UzytkownikNazwa}" 
                                                               FontSize="11" FontWeight="SemiBold"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Opis}" FontSize="12" Margin="0,3,0,0"/>
                                                <TextBlock Text="{Binding Komentarz}" FontSize="11" 
                                                           Foreground="{StaticResource TextGray}" 
                                                           Visibility="{Binding Komentarz, Converter={x:Null}}"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- DOLNY PASEK -->
        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource BorderGray}" 
                BorderThickness="0,1,0,0" Padding="25,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="btnOtworzPDF" Content="ðŸ“„ OtwÃ³rz PDF" 
                            Style="{StaticResource SecondaryButton}" 
                            Click="BtnOtworzPDF_Click" Margin="0,0,10,0"/>
                    <Button x:Name="btnOtworzFolder" Content="ðŸ“ OtwÃ³rz folder" 
                            Style="{StaticResource SecondaryButton}" 
                            Click="BtnOtworzFolder_Click"/>
                </StackPanel>

                <Button Grid.Column="1" Content="Zamknij" 
                        Style="{StaticResource SecondaryButton}" 
                        Click="BtnZamknij_Click" Padding="25,10"/>
            </Grid>
        </Border>
    </Grid>
</Window>
