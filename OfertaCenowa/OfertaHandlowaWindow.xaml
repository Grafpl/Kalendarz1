<Window x:Class="Kalendarz1.OfertaCenowa.OfertaHandlowaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Oferta Handlowa" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="White" 
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreenBrush" Color="#4B833C"/>
        <SolidColorBrush x:Key="PrimaryGreenHoverBrush" Color="#3A6D2E"/>
        <SolidColorBrush x:Key="PrimaryGreenLightBrush" Color="#E8F5E9"/>
        <SolidColorBrush x:Key="AccentRedBrush" Color="#CC2F37"/>
        <SolidColorBrush x:Key="BlueLightBrush" Color="#EBF5FF"/>
        <SolidColorBrush x:Key="BlueBorderBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="OrangeLightBrush" Color="#FFF7ED"/>
        <SolidColorBrush x:Key="OrangeBorderBrush" Color="#F97316"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="#7F8C8D"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#D1D5DB"/>

        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Name="border">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Name="border">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E81123"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGreenBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryGreenHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#D1D5DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
        </Style>

        <Style x:Key="SmallButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FEE2E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NAGÅÃ“WEK -->
        <Border Grid.Row="0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#4B833C" Offset="0"/>
                    <GradientStop Color="#5A9447" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Height="50">
                <StackPanel Orientation="Horizontal" Margin="20,0" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“‹ Oferta Handlowa" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <Border Background="#3A6D2E" CornerRadius="5" Padding="12,6" VerticalAlignment="Center">
                        <TextBlock FontSize="12" Foreground="White">
                            <Run Text="ðŸ‘¤ "/>
                            <Run x:Name="txtWystawiajacy" Text="..." FontWeight="SemiBold"/>
                        </TextBlock>
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="â€”" Click="MinimizeButton_Click" Style="{StaticResource WindowButtonStyle}"/>
                    <Button Content="â–¡" Click="MaximizeButton_Click" Style="{StaticResource WindowButtonStyle}"/>
                    <Button Content="âœ•" Click="CloseButton_Click" Style="{StaticResource CloseButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- PASEK KROKÃ“W -->
        <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid HorizontalAlignment="Center" Width="600">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" MouseLeftButtonDown="Krok_Click" Tag="1" Cursor="Hand">
                    <Border x:Name="borderKrok1" Width="44" Height="44" CornerRadius="22" Background="{StaticResource PrimaryGreenBrush}">
                        <TextBlock Text="ðŸ‘¤" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock x:Name="txtKrok1" Text="Odbiorcy" FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,5,0,0" Foreground="{StaticResource PrimaryGreenBrush}"/>
                </StackPanel>
                <Border x:Name="lineKrok1" Grid.Column="1" Height="3" Background="{StaticResource PrimaryGreenBrush}" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="2" HorizontalAlignment="Center" MouseLeftButtonDown="Krok_Click" Tag="2" Cursor="Hand">
                    <Border x:Name="borderKrok2" Width="44" Height="44" CornerRadius="22" Background="#E5E7EB">
                        <TextBlock Text="ðŸ“¦" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock x:Name="txtKrok2" Text="Produkty" FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,5,0,0" Foreground="{StaticResource LightTextBrush}"/>
                </StackPanel>
                <Border x:Name="lineKrok2" Grid.Column="3" Height="3" Background="#E5E7EB" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="4" HorizontalAlignment="Center" MouseLeftButtonDown="Krok_Click" Tag="3" Cursor="Hand">
                    <Border x:Name="borderKrok3" Width="44" Height="44" CornerRadius="22" Background="#E5E7EB">
                        <TextBlock Text="âš™ï¸" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock x:Name="txtKrok3" Text="Parametry" FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,5,0,0" Foreground="{StaticResource LightTextBrush}"/>
                </StackPanel>
                <Border x:Name="lineKrok3" Grid.Column="5" Height="3" Background="#E5E7EB" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="6" HorizontalAlignment="Center" MouseLeftButtonDown="Krok_Click" Tag="4" Cursor="Hand">
                    <Border x:Name="borderKrok4" Width="44" Height="44" CornerRadius="22" Background="#E5E7EB">
                        <TextBlock Text="ðŸ“„" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock x:Name="txtKrok4" Text="Generuj" FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,5,0,0" Foreground="{StaticResource LightTextBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- TREÅšÄ† -->
        <Grid Grid.Row="2" Background="#F4F6F9">
            
            <!-- KROK 1: ODBIORCY -->
            <Grid x:Name="panelKrok1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="ðŸ” WYSZUKAJ (auto od 3 znakÃ³w)" FontSize="11" FontWeight="Bold" Foreground="{StaticResource LightTextBrush}" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtSzukajOdbiorcy" FontSize="14" Padding="12,10" TextChanged="TxtSzukajOdbiorcy_TextChanged"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,8">
                            <RadioButton x:Name="rbZrodloWszystkie" Content="Wszystkie" IsChecked="True" FontSize="12" Margin="0,0,12,0" Checked="RbZrodlo_Changed"/>
                            <RadioButton x:Name="rbZrodloHandel" FontSize="12" Margin="0,0,12,0" Checked="RbZrodlo_Changed">
                                <Border Background="{StaticResource BlueLightBrush}" CornerRadius="3" Padding="6,2">
                                    <TextBlock Text="HANDEL" FontSize="10" FontWeight="Bold" Foreground="{StaticResource BlueBorderBrush}"/>
                                </Border>
                            </RadioButton>
                            <RadioButton x:Name="rbZrodloCRM" FontSize="12" Checked="RbZrodlo_Changed">
                                <Border Background="{StaticResource OrangeLightBrush}" CornerRadius="3" Padding="6,2">
                                    <TextBlock Text="CRM" FontSize="10" FontWeight="Bold" Foreground="{StaticResource OrangeBorderBrush}"/>
                                </Border>
                            </RadioButton>
                        </StackPanel>
                        <Border Grid.Row="2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="6">
                            <Grid>
                                <ListBox x:Name="lstWynikiWyszukiwania" BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled" MouseDoubleClick="LstWynikiWyszukiwania_MouseDoubleClick">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Margin" Value="0"/>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#F3F4F6" BorderThickness="0,0,0,1" Padding="12,10">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" Background="{Binding ZrodloBadgeBackground}" CornerRadius="4" Padding="8,4" Margin="0,0,12,0" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding ZrodloSkrot}" FontSize="10" FontWeight="Bold" Foreground="{Binding ZrodloBadgeForeground}"/>
                                                    </Border>
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Nazwa}" FontSize="14" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock FontSize="11" Foreground="{StaticResource LightTextBrush}">
                                                            <Run Text="{Binding NIP, Mode=OneWay}"/><Run Text=" â€¢ "/><Run Text="{Binding AdresPelny, Mode=OneWay}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    <Button Grid.Column="2" Content="âž•" Style="{StaticResource PrimaryButtonStyle}" Click="BtnDodajOdbiorce_Click" Tag="{Binding}" Padding="10,6" FontSize="14"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <StackPanel x:Name="placeholderBrakWynikow" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Visible">
                                    <TextBlock Text="ðŸ”" FontSize="40" HorizontalAlignment="Center" Opacity="0.3"/>
                                    <TextBlock Text="Wpisz min. 3 znaki" FontSize="14" Foreground="{StaticResource LightTextBrush}" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <Border Grid.Column="2" Background="{StaticResource PrimaryGreenLightBrush}" BorderBrush="{StaticResource PrimaryGreenBrush}" BorderThickness="1" CornerRadius="8" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âœ… WYBRANI (" FontSize="11" FontWeight="Bold" Foreground="{StaticResource PrimaryGreenBrush}"/>
                                <TextBlock x:Name="txtLiczbaOdbiorcow" Text="0" FontSize="11" FontWeight="Bold" Foreground="{StaticResource PrimaryGreenBrush}"/>
                                <TextBlock Text=")" FontSize="11" FontWeight="Bold" Foreground="{StaticResource PrimaryGreenBrush}"/>
                            </StackPanel>
                            <TextBlock x:Name="txtTrybOdbiorcow" Text="Brak" FontSize="11" Foreground="{StaticResource LightTextBrush}"/>
                        </StackPanel>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="panelWybraniOdbiorcy">
                                <StackPanel x:Name="placeholderBrakWybranych" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,30,0,0">
                                    <TextBlock Text="ðŸ‘¤" FontSize="40" HorizontalAlignment="Center" Opacity="0.3"/>
                                    <TextBlock Text="Brak" FontSize="12" Foreground="{StaticResource LightTextBrush}" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                        <Button Grid.Row="2" Content="âœï¸ RÄ™cznie" Style="{StaticResource SecondaryButtonStyle}" Click="BtnWprowadzRecznie_Click" Margin="0,10,0,0" Padding="12,8" FontSize="12"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- KROK 2: PRODUKTY - NOWA WERSJA Z DATAGRID -->
            <Grid x:Name="panelKrok2" Margin="20" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- NagÅ‚Ã³wek -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="Dodaj produkty" FontSize="20" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="ðŸ“Š MarÅ¼e" Style="{StaticResource SecondaryButtonStyle}" Click="BtnMarze_Click" Margin="0,0,8,0" FontSize="12" Padding="12,8"/>
                        <Button Content="ðŸŒ TÅ‚umaczenia" Style="{StaticResource SecondaryButtonStyle}" Click="BtnTlumaczenia_Click" Margin="0,0,8,0" FontSize="12" Padding="12,8"/>
                        <Button Content="ðŸ”½ Szablon" Style="{StaticResource PrimaryButtonStyle}" Click="BtnWczytajSzablonTowarow_Click" FontSize="12" Padding="12,8"/>
                    </StackPanel>
                </Grid>

                <!-- Typ produktu -->
                <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="6" Padding="15,10" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Typ:" FontSize="13" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <RadioButton x:Name="rbSwiezy" Content="ðŸ¥© ÅšwieÅ¼e" IsChecked="True" FontSize="14" Margin="0,0,20,0" Checked="RbTypProduktu_Checked"/>
                        <RadioButton x:Name="rbMrozony" Content="â„ï¸ MroÅ¼one" FontSize="14" Checked="RbTypProduktu_Checked"/>
                    </StackPanel>
                </Border>

                <!-- TABELA PRODUKTÃ“W - DataGrid -->
                <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" ClipToBounds="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- DataGrid z produktami -->
                        <DataGrid x:Name="dgTowary" 
                                  Grid.Row="0"
                                  ItemsSource="{Binding TowaryWOfercie}"
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserSortColumns="False"
                                  HeadersVisibility="Column" 
                                  GridLinesVisibility="Horizontal" 
                                  BorderThickness="0" 
                                  FontSize="13"
                                  RowHeight="48"
                                  AlternatingRowBackground="#FAFBFC"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  VerticalScrollBarVisibility="Auto">
                            
                            <!-- Style nagÅ‚Ã³wkÃ³w -->
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{StaticResource PrimaryGreenBrush}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Padding" Value="12,10"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                    <Setter Property="BorderBrush" Value="#3A6D2E"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            
                            <!-- Style wierszy -->
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F0FDF4"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#DCFCE7"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            
                            <!-- Style komÃ³rek -->
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Background="{TemplateBinding Background}" Padding="4,0">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.Columns>
                                
                                <!-- LP -->
                                <DataGridTextColumn Header="Lp" Width="50" Binding="{Binding Lp}" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="#9CA3AF"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- PRODUKT - ComboBox -->
                                <DataGridTemplateColumn Header="Produkt (wybierz z listy)" Width="*" MinWidth="350">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox ItemsSource="{Binding DataContext.FiltrowaneTowary, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      SelectedValue="{Binding TowarId, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                      SelectedValuePath="Id"
                                                      DisplayMemberPath="NazwaZKodem"
                                                      IsEditable="True"
                                                      IsTextSearchEnabled="True"
                                                      IsTextSearchCaseSensitive="False"
                                                      StaysOpenOnEdit="True"
                                                      Text="{Binding WyswietlanaNazwa, Mode=OneWay}"
                                                      FontSize="13"
                                                      Padding="10,8"
                                                      Margin="4"
                                                      MaxDropDownHeight="300"
                                                      SelectionChanged="CboTowar_SelectionChanged">
                                                <ComboBox.Style>
                                                    <Style TargetType="ComboBox">
                                                        <Setter Property="Background" Value="#F9FAFB"/>
                                                        <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryGreenBrush}"/>
                                                            </Trigger>
                                                            <Trigger Property="IsDropDownOpen" Value="True">
                                                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryGreenBrush}"/>
                                                            </Trigger>
                                                            <DataTrigger Binding="{Binding CzyWypelniony}" Value="True">
                                                                <Setter Property="Background" Value="White"/>
                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ComboBox.Style>
                                            </ComboBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- ILOÅšÄ† -->
                                <DataGridTemplateColumn Header="IloÅ›Ä‡ (kg)" Width="110">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding IloscTekst, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                     FontSize="13"
                                                     Padding="10,8"
                                                     Margin="4"
                                                     HorizontalContentAlignment="Center"
                                                     IsEnabled="{Binding CzyWypelniony}"
                                                     PreviewTextInput="TxtNumeric_PreviewTextInput">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox">
                                                        <Setter Property="Background" Value="#F9FAFB"/>
                                                        <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryGreenBrush}"/>
                                                            </Trigger>
                                                            <Trigger Property="IsFocused" Value="True">
                                                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryGreenBrush}"/>
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter Property="Background" Value="#F3F4F6"/>
                                                                <Setter Property="Foreground" Value="#9CA3AF"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- CENA -->
                                <DataGridTemplateColumn Header="Cena (zÅ‚/kg)" Width="110">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding CenaTekst, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                     FontSize="13"
                                                     Padding="10,8"
                                                     Margin="4"
                                                     HorizontalContentAlignment="Center"
                                                     IsEnabled="{Binding CzyWypelniony}"
                                                     PreviewTextInput="TxtNumeric_PreviewTextInput">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox">
                                                        <Setter Property="Background" Value="#F9FAFB"/>
                                                        <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
