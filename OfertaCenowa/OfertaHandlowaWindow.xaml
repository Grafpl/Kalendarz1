                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="â€”" Click="MinimizeButton_Click" Style="{StaticResource WindowButtonStyle}"/>
                        <Button Content="âœ•" Click="CloseButton_Click" Style="{StaticResource WindowButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ========== PASEK KROKÃ“W ========== -->
            <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="40,20">
                <Grid x:Name="gridKroki" HorizontalAlignment="Center" Width="700">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Krok 1 -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center" MouseLeftButtonDown="Krok_Click" Tag="1" Cursor="Hand">
                        <Border x:Name="borderKrok1" Width="50" Height="50" CornerRadius="25" Background="{StaticResource PrimaryGreenBrush}">
                            <TextBlock Text="ðŸ‘¤" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock x:Name="txtKrok1" Text="Odbiorcy" FontSize="12" FontWeight="SemiBold" 
                                   HorizontalAlignment="Center" Margin="0,8,0,0" Foreground="{StaticResource PrimaryGreenBrush}"/>
                    </StackPanel>
                    
                    <Border x:Name="lineKrok1" Grid.Column="1" Height="4" Background="{StaticResource PrimaryGreenBrush}" VerticalAlignment="Center" CornerRadius="2"/>

                    <!-- Krok 2 -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center" MouseLeftButtonDown="Krok_Click" Tag="2" Cursor="Hand">
                        <Border x:Name="borderKrok2" Width="50" Height="50" CornerRadius="25" Background="#E5E7EB">
                            <TextBlock Text="ðŸ“¦" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock x:Name="txtKrok2" Text="Produkty" FontSize="12" FontWeight="SemiBold" 
                                   HorizontalAlignment="Center" Margin="0,8,0,0" Foreground="{StaticResource LightTextBrush}"/>
                    </StackPanel>
                    
                    <Border x:Name="lineKrok2" Grid.Column="3" Height="4" Background="#E5E7EB" VerticalAlignment="Center" CornerRadius="2"/>

                    <!-- Krok 3 -->
                    <StackPanel Grid.Column="4" HorizontalAlignment="Center" MouseLeftButtonDown="Krok_Click" Tag="3" Cursor="Hand">
                        <Border x:Name="borderKrok3" Width="50" Height="50" CornerRadius="25" Background="#E5E7EB">
                            <TextBlock Text="âš™ï¸" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock x:Name="txtKrok3" Text="Parametry" FontSize="12" FontWeight="SemiBold" 
                                   HorizontalAlignment="Center" Margin="0,8,0,0" Foreground="{StaticResource LightTextBrush}"/>
                    </StackPanel>
                    
                    <Border x:Name="lineKrok3" Grid.Column="5" Height="4" Background="#E5E7EB" VerticalAlignment="Center" CornerRadius="2"/>

                    <!-- Krok 4 -->
                    <StackPanel Grid.Column="6" HorizontalAlignment="Center" MouseLeftButtonDown="Krok_Click" Tag="4" Cursor="Hand">
                        <Border x:Name="borderKrok4" Width="50" Height="50" CornerRadius="25" Background="#E5E7EB">
                            <TextBlock Text="ðŸ“„" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock x:Name="txtKrok4" Text="Generuj" FontSize="12" FontWeight="SemiBold" 
                                   HorizontalAlignment="Center" Margin="0,8,0,0" Foreground="{StaticResource LightTextBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ========== TREÅšÄ† GÅÃ“WNA ========== -->
            <Grid Grid.Row="2" Background="{StaticResource BackgroundBrush}">
                
                <!-- ==================== KROK 1: ODBIORCY ==================== -->
                <Grid x:Name="panelKrok1" Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- TytuÅ‚ -->
                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <TextBlock Text="Wybierz odbiorcÃ³w oferty" FontSize="28" FontWeight="Bold" 
                                   Foreground="{StaticResource DarkTextBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Wyszukaj i dodaj jednego lub wielu odbiorcÃ³w z dwÃ³ch baz danych" FontSize="14" 
                                   Foreground="{StaticResource LightTextBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- GÅ‚Ã³wna zawartoÅ›Ä‡ -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEWA STRONA: Wyszukiwanie i wyniki -->
                        <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource BorderBrush}" 
                                BorderThickness="2" CornerRadius="12" Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Wyszukiwarka -->
                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="ðŸ” WYSZUKAJ ODBIORCÄ˜" FontSize="12" FontWeight="Bold" 
                                               Foreground="{StaticResource LightTextBrush}" Margin="0,0,0,10"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBox x:Name="txtSzukajOdbiorcy" Grid.Column="0" FontSize="14" Padding="15,12"
                                                 TextChanged="TxtSzukajOdbiorcy_TextChanged"
                                                 KeyDown="TxtSzukajOdbiorcy_KeyDown">
                                            <TextBox.Style>
                                                <Style TargetType="TextBox">
                                                    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsFocused" Value="True">
                                                            <Setter Property="BorderBrush" Value="{StaticResource PrimaryGreenBrush}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>
                                        <TextBlock Grid.Column="0" Text="Wpisz nazwÄ™, NIP, miasto lub kod pocztowy..." 
                                                   IsHitTestVisible="False" FontSize="13" Foreground="#9CA3AF" 
                                                   VerticalAlignment="Center" Margin="18,0,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Hidden"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=txtSzukajOdbiorcy}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        
                                        <Button Grid.Column="2" Content="ðŸ” Szukaj" Style="{StaticResource PrimaryButtonStyle}"
                                                Click="BtnSzukaj_Click" Padding="20,12"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Å¹rÃ³dÅ‚o danych -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,15,0,10">
                                    <TextBlock Text="Å¹rÃ³dÅ‚o:" FontSize="12" Foreground="{StaticResource LightTextBrush}" 
                                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <RadioButton x:Name="rbZrodloWszystkie" Content="Wszystkie" IsChecked="True" 
                                                 FontSize="12" Margin="0,0,15,0" Checked="RbZrodlo_Changed"/>
                                    <RadioButton x:Name="rbZrodloHandel" FontSize="12" Margin="0,0,15,0" Checked="RbZrodlo_Changed">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="{StaticResource BlueLightBrush}" CornerRadius="3" Padding="5,2" Margin="0,0,5,0">
                                                <TextBlock Text="HANDEL" FontSize="9" FontWeight="Bold" Foreground="{StaticResource BlueBorderBrush}"/>
                                            </Border>
                                            <TextBlock Text="Kontrahenci" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </RadioButton>
                                    <RadioButton x:Name="rbZrodloCRM" FontSize="12" Checked="RbZrodlo_Changed">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="{StaticResource OrangeLightBrush}" CornerRadius="3" Padding="5,2" Margin="0,0,5,0">
                                                <TextBlock Text="CRM" FontSize="9" FontWeight="Bold" Foreground="{StaticResource OrangeBorderBrush}"/>
                                            </Border>
                                            <TextBlock Text="Odbiorcy CRM" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </RadioButton>
                                </StackPanel>

                                <!-- Lista wynikÃ³w -->
                                <Border Grid.Row="2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8">
                                    <Grid>
                                        <ListBox x:Name="lstWynikiWyszukiwania" BorderThickness="0" Background="Transparent"
                                                 SelectionMode="Extended"
                                                 MouseDoubleClick="LstWynikiWyszukiwania_MouseDoubleClick"
                                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Padding="12,10" Margin="2" BorderBrush="{StaticResource BorderBrush}" 
                                                            BorderThickness="1" CornerRadius="8" Background="White" Cursor="Hand">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <!-- Å¹rÃ³dÅ‚o (badge) -->
                                                            <Border Grid.Column="0" CornerRadius="4" Padding="6,3" Margin="0,0,10,0"
                                                                    VerticalAlignment="Top"
                                                                    Background="{Binding ZrodloBadgeBackground}">
                                                                <TextBlock Text="{Binding ZrodloSkrot}" FontSize="8" FontWeight="Bold"
                                                                           Foreground="{Binding ZrodloBadgeForeground}"/>
                                                            </Border>
                                                            
                                                            <!-- Dane firmy -->
                                                            <StackPanel Grid.Column="1">
                                                                <TextBlock Text="{Binding Nazwa}" FontSize="13" FontWeight="SemiBold" 
                                                                           TextTrimming="CharacterEllipsis"/>
                                                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                                    <TextBlock Text="{Binding NIP}" FontSize="11" Foreground="{StaticResource LightTextBrush}"/>
                                                                    <TextBlock Text=" â€¢ " FontSize="11" Foreground="{StaticResource LightTextBrush}"/>
                                                                    <TextBlock Text="{Binding AdresPelny}" FontSize="11" Foreground="{StaticResource LightTextBrush}"
                                                                               TextTrimming="CharacterEllipsis"/>
                                                                </StackPanel>
                                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                                    <TextBlock Text="{Binding Telefon}" FontSize="10" Foreground="{StaticResource PrimaryGreenBrush}"
                                                                               Visibility="{Binding TelefonVisibility}"/>
                                                                    <TextBlock Text=" â€¢ " FontSize="10" Foreground="{StaticResource LightTextBrush}"
                                                                               Visibility="{Binding KontaktVisibility}"/>
                                                                    <TextBlock Text="{Binding OsobaKontaktowa}" FontSize="10" Foreground="{StaticResource LightTextBrush}"
                                                                               Visibility="{Binding KontaktVisibility}"/>
                                                                </StackPanel>
                                                            </StackPanel>
                                                            
                                                            <!-- Przycisk dodaj -->
                                                            <Button Grid.Column="2" Content="âž•" Style="{StaticResource PrimaryButtonStyle}"
                                                                    Click="BtnDodajOdbiorce_Click" Tag="{Binding}"
                                                                    Padding="10,8" FontSize="14" VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                        
                                        <!-- Placeholder gdy brak wynikÃ³w -->
                                        <StackPanel x:Name="placeholderBrakWynikow" VerticalAlignment="Center" HorizontalAlignment="Center"
                                                    Visibility="Visible">
                                            <TextBlock Text="ðŸ”" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                                            <TextBlock Text="Wpisz frazÄ™ i naciÅ›nij Szukaj" FontSize="14" 
                                                       Foreground="{StaticResource LightTextBrush}" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                            <TextBlock Text="Wyszukiwanie odbywa siÄ™ w dwÃ³ch bazach danych" FontSize="11" 
                                                       Foreground="{StaticResource LightTextBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- PRAWA STRONA: Wybrani odbiorcy -->
                        <Border Grid.Column="2" Background="{StaticResource PrimaryGreenLightBrush}" 
                                BorderBrush="{StaticResource PrimaryGreenBrush}" BorderThickness="2" 
                                CornerRadius="12" Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- NagÅ‚Ã³wek -->
                                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="âœ… WYBRANI ODBIORCY (" FontSize="12" FontWeight="Bold" 
                                                   Foreground="{StaticResource PrimaryGreenBrush}"/>
                                        <TextBlock x:Name="txtLiczbaOdbiorcow" Text="0" FontSize="12" FontWeight="Bold" 
                                                   Foreground="{StaticResource PrimaryGreenBrush}"/>
                                        <TextBlock Text=")" FontSize="12" FontWeight="Bold" 
                                                   Foreground="{StaticResource PrimaryGreenBrush}"/>
                                    </StackPanel>
                                    <TextBlock x:Name="txtTrybOdbiorcow" Text="Tryb: pojedynczy odbiorca" FontSize="11" 
                                               Foreground="{StaticResource LightTextBrush}" Margin="0,3,0,0"/>
                                </StackPanel>

                                <!-- Lista wybranych -->
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="panelWybraniOdbiorcy">
                                        <!-- Placeholder gdy brak wybranych -->
                                        <StackPanel x:Name="placeholderBrakWybranych" VerticalAlignment="Center" 
                                                    HorizontalAlignment="Center" Margin="0,50,0,0">
                                            <TextBlock Text="ðŸ‘¤" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                                            <TextBlock Text="Brak wybranych odbiorcÃ³w" FontSize="14" 
                                                       Foreground="{StaticResource LightTextBrush}" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                            <TextBlock Text="Wyszukaj i dodaj odbiorcÄ™ z lewej strony" FontSize="11" 
                                                       Foreground="{StaticResource LightTextBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </ScrollViewer>

                                <!-- Przycisk wprowadÅº rÄ™cznie -->
                                <Button Grid.Row="2" Content="âœï¸ WprowadÅº dane rÄ™cznie" Style="{StaticResource SecondaryButtonStyle}"
                                        Click="BtnWprowadzRecznie_Click" Margin="0,15,0,0" Padding="15,12"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>

                <!-- ==================== KROK 2: PRODUKTY ==================== -->
                <Grid x:Name="panelKrok2" Margin="30" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- TytuÅ‚ -->
                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <TextBlock Text="Dodaj produkty do oferty" FontSize="28" FontWeight="Bold" 
                                   Foreground="{StaticResource DarkTextBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Wybierz produkt, a pola iloÅ›ci i ceny pojawiÄ… siÄ™ automatycznie" FontSize="14" 
                                   Foreground="{StaticResource LightTextBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Szablon -->
                    <Border Grid.Row="1" Background="{StaticResource PrimaryGreenLightBrush}" BorderBrush="{StaticResource PrimaryGreenBrush}" 
                            BorderThickness="2" CornerRadius="12" Padding="20,15" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="âš¡ Szybkie szablony" FontSize="16" FontWeight="Bold" 
                                           Foreground="{StaticResource PrimaryGreenBrush}" Margin="0,0,15,0"/>
                                <TextBlock Text="Wczytaj zapisany zestaw produktÃ³w" FontSize="12" 
                                           Foreground="{StaticResource PrimaryGreenBrush}" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="ðŸ”½ Wczytaj szablon" Style="{StaticResource PrimaryButtonStyle}" 
                                        Click="BtnWczytajSzablonTowarow_Click" Margin="0,0,10,0"/>
                                <Button Content="âš™ï¸" Style="{StaticResource PrimaryButtonStyle}" Width="45"
                                        Click="BtnZarzadzajSzablonamiTowarow_Click" Padding="10,12"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Typ produktu + dodaj produkt -->
                    <Grid Grid.Row="2" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
