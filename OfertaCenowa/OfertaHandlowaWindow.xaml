                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#4B833C" Offset="0"/>
                        <GradientStop Color="#5A9447" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="25,15">
                        <TextBlock Text="ðŸ“‹ Nowa Oferta Handlowa" FontSize="18" FontWeight="Bold" 
                                   Foreground="White" VerticalAlignment="Center" Margin="0,0,25,0"/>
                        
                        <!-- Kalkulator tuszki -->
