<Window x:Class="Kalendarz1.OfertaCenowa.MapowanieSwiezyMrozonyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mapowanie ÅšwieÅ¼y â†” MroÅ¼ony" 
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#F4F6F9">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreenBrush" Color="#4B833C"/>
        <SolidColorBrush x:Key="BlueBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#D1D5DB"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="#7F8C8D"/>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGreenBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NagÅ‚Ã³wek -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="ðŸ¥©â†”ï¸â„ï¸ Mapowanie produktÃ³w ÅšwieÅ¼y â†” MroÅ¼ony" FontSize="18" FontWeight="Bold"/>
            <TextBlock Text="Przypisz odpowiedniki mroÅ¼one do produktÃ³w Å›wieÅ¼ych. Pozwoli to na szybkÄ… zamianÄ™ w ofercie." 
                       FontSize="12" Foreground="{StaticResource LightTextBrush}" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Wyszukiwanie -->
        <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="6" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtSzukaj" Grid.Column="0" FontSize="13" Padding="10,8" TextChanged="TxtSzukaj_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Tag" Value="ðŸ” Szukaj produktu..."/>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Tylko bez mapowania:" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="12"/>
                    <CheckBox x:Name="chkTylkoBezMapowania" VerticalAlignment="Center" Checked="ChkTylkoBezMapowania_Changed" Unchecked="ChkTylkoBezMapowania_Changed"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Lista produktÃ³w -->
        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- NagÅ‚Ã³wek tabeli -->
                <Grid Grid.Row="0" Background="#F3F4F6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Lp" FontWeight="SemiBold" FontSize="11" Padding="10,12" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="ðŸ¥© Produkt ÅšWIEÅ»Y (katalog 67095)" FontWeight="SemiBold" FontSize="11" Padding="10,12"/>
                    <TextBlock Grid.Column="2" Text="âž¡ï¸" FontWeight="SemiBold" FontSize="11" Padding="10,12" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="3" Text="â„ï¸ Odpowiednik MROÅ»ONY (katalog 67153)" FontWeight="SemiBold" FontSize="11" Padding="10,12"/>
                    <TextBlock Grid.Column="4" Text="Status" FontWeight="SemiBold" FontSize="11" Padding="10,12" HorizontalAlignment="Center"/>
                </Grid>

                <!-- Lista -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="icMapowania">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#F3F4F6" BorderThickness="0,0,0,1" Padding="0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Lp -->
                                        <TextBlock Grid.Column="0" Text="{Binding Lp}" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#9CA3AF"/>

                                        <!-- Produkt Å›wieÅ¼y -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                                            <TextBlock Text="{Binding NazwaSwiezy}" FontSize="12" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding KodSwiezy}" FontSize="10" Foreground="{StaticResource LightTextBrush}"/>
                                        </StackPanel>

                                        <!-- StrzaÅ‚ka -->
                                        <TextBlock Grid.Column="2" Text="âž¡ï¸" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                        <!-- Odpowiednik mroÅ¼ony -->
                                        <ComboBox Grid.Column="3" 
                                                  ItemsSource="{Binding DataContext.TowaryMrozone, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  SelectedItem="{Binding WybranyMrozony, Mode=TwoWay}"
                                                  DisplayMemberPath="NazwaZKodem"
                                                  IsEditable="True"
                                                  IsTextSearchEnabled="True"
                                                  FontSize="12"
                                                  Margin="10,0"
                                                  Padding="8,6"
                                                  MaxDropDownHeight="200"
                                                  VerticalAlignment="Center"/>

                                        <!-- Status -->
                                        <Border Grid.Column="4" 
                                                Background="{Binding StatusBackground}" 
                                                CornerRadius="4" 
                                                Padding="8,4" 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding StatusText}" FontSize="10" FontWeight="Bold" Foreground="{Binding StatusForeground}"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Przyciski -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="txtStatystyki" Text="Zmapowano: 0 / 0" FontSize="12" VerticalAlignment="Center" Foreground="{StaticResource LightTextBrush}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="âŒ Anuluj" Style="{StaticResource SecondaryButtonStyle}" Click="BtnAnuluj_Click" Margin="0,0,10,0"/>
                <Button Content="ðŸ’¾ Zapisz mapowania" Style="{StaticResource PrimaryButtonStyle}" Click="BtnZapisz_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
