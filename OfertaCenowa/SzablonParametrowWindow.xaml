<Window x:Class="Kalendarz1.OfertaCenowa.SzablonParametrowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zarządzanie szablonami parametrów" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="CanResize">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreenBrush" Color="#4B833C"/>
        <SolidColorBrush x:Key="PrimaryGreenHoverBrush" Color="#3A6D2E"/>
        <SolidColorBrush x:Key="AccentRedBrush" Color="#CC2F37"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="#7F8C8D"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#D1D5DB"/>

        <Style TargetType="Button" x:Key="PrimaryButtonStyle">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="25,0"/>
            <Setter Property="Background" Value="{StaticResource PrimaryGreenBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryGreenHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="DeleteButtonStyle">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#A82529"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="⚙️ Szablony parametrów oferty" FontSize="20" FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryGreenBrush}"/>
            <TextBlock Text="Zapisz często używane ustawienia (termin płatności, język, transport, etc.)" 
                       FontSize="11" Foreground="{StaticResource LightTextBrush}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Główna zawartość -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lewa kolumna: Lista szablonów -->
            <Border Grid.Column="0" BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" CornerRadius="8" Padding="15" Background="#F9FAFB" Margin="0,0,15,0">
                <StackPanel>
                    <TextBlock Text="Zapisane szablony" FontSize="14" FontWeight="Bold" 
                               Foreground="{StaticResource DarkTextBrush}" Margin="0,0,0,10"/>
                    
                    <ListBox x:Name="lstSzablony" Height="450" BorderThickness="0" 
                             Background="White" SelectionChanged="LstSzablony_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Nazwa}" FontWeight="SemiBold" FontSize="12"/>
                                        <TextBlock FontSize="9" Foreground="{StaticResource LightTextBrush}" Margin="0,2,0,0">
                                            <Run Text="Termin:"/>
                                            <Run Text="{Binding TerminPlatnosci, Mode=OneWay}"/>
                                            <Run Text=" | "/>
                                            <Run Text="{Binding WalutaKonta, Mode=OneWay}"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <Button Grid.Column="1" Content="🗑️" Style="{StaticResource DeleteButtonStyle}" 
                                            Click="BtnUsunSzablon_Click" Tag="{Binding Id}" ToolTip="Usuń szablon"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Content="➕ Nowy szablon" Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="0,15,0,0" Click="BtnNowySzablon_Click"/>
                </StackPanel>
            </Border>

            <!-- Prawa kolumna: Edycja szablonu -->
            <Border Grid.Column="1" BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" CornerRadius="8" Padding="20" Background="White">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="panelEdycji" IsEnabled="False">
                        <TextBlock Text="Szczegóły szablonu" FontSize="16" FontWeight="Bold" 
                                   Foreground="{StaticResource DarkTextBrush}" Margin="0,0,0,15"/>

                        <!-- Nazwa szablonu -->
                        <TextBlock Text="Nazwa szablonu" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtNazwaSzablonu" Height="38" VerticalContentAlignment="Center" 
                                 Padding="10,0" Margin="0,0,0,15"/>

                        <!-- Parametry finansowe -->
                        <TextBlock Text="Parametry finansowe" FontSize="14" FontWeight="Bold" 
                                   Foreground="{StaticResource DarkTextBrush}" Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Termin płatności" Style="{StaticResource LabelStyle}"/>
                                <ComboBox x:Name="cboTerminPlatnosci" Height="38" SelectionChanged="CboTerminPlatnosci_SelectionChanged">
                                    <ComboBoxItem Content="3 dni" Tag="3"/>
                                    <ComboBoxItem Content="7 dni" Tag="7" IsSelected="True"/>
                                    <ComboBoxItem Content="14 dni" Tag="14"/>
                                    <ComboBoxItem Content="21 dni" Tag="21"/>
                                    <ComboBoxItem Content="Przedpłata" Tag="0"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Konto bankowe" Style="{StaticResource LabelStyle}"/>
                                <ComboBox x:Name="cboKontoBankowe" Height="38">
                                    <ComboBoxItem Content="PLN" Tag="PLN" IsSelected="True"/>
                                    <ComboBoxItem Content="EUR" Tag="EUR"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <!-- Transport -->
                        <TextBlock Text="Transport" Style="{StaticResource LabelStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <RadioButton x:Name="rbTransportWlasny" Content="Transport własny" 
                                         IsChecked="True" Margin="0,0,20,0"/>
                            <RadioButton x:Name="rbTransportKlienta" Content="Transport klienta"/>
                        </StackPanel>

                        <!-- Język i Logo -->
                        <TextBlock Text="Prezentacja oferty" FontSize="14" FontWeight="Bold" 
                                   Foreground="{StaticResource DarkTextBrush}" Margin="0,10,0,10"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Język PDF" Style="{StaticResource LabelStyle}"/>
                                <ComboBox x:Name="cboJezykPDF" Height="38">
                                    <ComboBoxItem Content="🇵🇱 Polski" Tag="Polski" IsSelected="True"/>
                                    <ComboBoxItem Content="🇬🇧 English" Tag="English"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Logo firmy" Style="{StaticResource LabelStyle}"/>
                                <ComboBox x:Name="cboTypLogo" Height="38">
                                    <ComboBoxItem Content="Logo okrągłe" Tag="Okragle" IsSelected="True"/>
                                    <ComboBoxItem Content="Logo długie" Tag="Dlugie"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <!-- Kontrola widoczności -->
                        <TextBlock Text="Widoczność elementów w PDF" FontSize="14" FontWeight="Bold" 
                                   Foreground="{StaticResource DarkTextBrush}" Margin="0,10,0,10"/>
                        
                        <CheckBox x:Name="chkPokazOpakowanie" Content="Pokaż opakowanie" Margin="0,5"/>
                        <CheckBox x:Name="chkPokazCene" Content="Pokaż cenę" IsChecked="True" Margin="0,5"/>
                        <CheckBox x:Name="chkPokazIlosc" Content="Pokaż ilość" Margin="0,5"/>
                        <CheckBox x:Name="chkPokazTermin" Content="Pokaż termin płatności" IsChecked="True" Margin="0,5"/>

                        <!-- Notatka o cenach -->
                        <CheckBox x:Name="chkDodajNotkeOCenach" Content="Dodaj automatyczną notatkę: &quot;Cena zależna od ilości kupionej&quot;" 
                                  Margin="0,15,0,5" FontWeight="SemiBold"/>

                        <!-- Notatka custom -->
                        <TextBlock Text="Dodatkowa notatka (opcjonalna)" Style="{StaticResource LabelStyle}" Margin="0,15,0,5"/>
                        <TextBox x:Name="txtNotatkaCustom" Height="80" TextWrapping="Wrap" 
                                 VerticalContentAlignment="Top" Padding="10" Margin="0,0,0,15"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Stopka z przyciskami -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="btnZapisz" Content="💾 Zapisz szablon" Style="{StaticResource PrimaryButtonStyle}" 
                    Margin="0,0,8,0" Click="BtnZapiszSzablon_Click" IsEnabled="False" Height="38"/>
            <Button Content="✖️ Zamknij" Style="{StaticResource PrimaryButtonStyle}" 
                    Background="#6B7280" Click="BtnZamknij_Click" Height="38"/>
        </StackPanel>
    </Grid>
</Window>
