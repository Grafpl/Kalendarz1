<Window x:Class="Kalendarz1.PanelPortiera"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Portiera" Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        WindowStyle="None" ResizeMode="NoResize" Background="#121212"
        FontFamily="Segoe UI" Loaded="Window_Loaded" PreviewKeyDown="Window_PreviewKeyDown">

    <Window.Resources>
        <SolidColorBrush x:Key="ThemeColor" Color="#FFA726"/>

        <!-- Styl klawisza klawiatury -->
        <Style x:Key="KbdKey" TargetType="Button">
            <Setter Property="Background" Value="#252530"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Height" Value="75"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10" BorderThickness="2" BorderBrush="#444">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#353545"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl duÅ¼ego numpada -->
        <Style x:Key="BigNumpadBtn" TargetType="Button">
            <Setter Property="Background" Value="#252530"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="brd" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="brd" Property="Background" Value="{DynamicResource ThemeColor}"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="brd" Property="Background" Value="#3A3A4A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl RadioButton trybu -->
        <Style x:Key="ModeRadioStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="#252530"/>
            <Setter Property="Foreground" Value="#AAA"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="modeBrd" Background="{TemplateBinding Background}" CornerRadius="8" BorderThickness="2" BorderBrush="#444" Padding="15,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="modeBrd" Property="Background" Value="{DynamicResource ThemeColor}"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl RadioButton towaru - NAPRAWIONY -->
        <Style x:Key="CommodityRadioStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="#252530"/>
            <Setter Property="Foreground" Value="#AAA"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="commBrd" Background="{TemplateBinding Background}" CornerRadius="8" BorderThickness="2" BorderBrush="#444">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="commBrd" Property="Background" Value="{DynamicResource ThemeColor}"/>
                                <Setter TargetName="commBrd" Property="BorderBrush" Value="{DynamicResource ThemeColor}"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="commBrd" Property="BorderBrush" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl przeÅ‚Ä…cznika wagi -->
        <Style x:Key="WeightToggleStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="wtBrd" Background="#222" CornerRadius="10">
                            <TextBlock x:Name="wtTxt" Text="{TemplateBinding Content}" FontSize="18" FontWeight="Bold" Foreground="#666" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="wtBrd" Property="Background" Value="White"/>
                                <Setter TargetName="wtTxt" Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl przycisku akcji -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#252530"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="actBrd" Background="{TemplateBinding Background}" CornerRadius="8" BorderThickness="2" BorderBrush="#444" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="actBrd" Property="Background" Value="#3A3A4A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl DataGrid -->
        <Style x:Key="MyDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#161621"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="RowBackground" Value="#161621"/>
            <Setter Property="AlternatingRowBackground" Value="#1E1E2E"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#333"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeight" Value="85"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <!-- Styl nagÅ‚Ã³wka kolumny -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#252530"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeColor}"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="50"/>
        </Style>

        <!-- Styl komÃ³rki -->
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3A3A50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl wiersza z wyraÅºnym zaznaczeniem -->
        <Style TargetType="DataGridRow">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2A3A"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3D3D5C"/>
                    <Setter Property="BorderBrush" Value="#FFA726"/>
                    <Setter Property="BorderThickness" Value="0,3,0,3"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(DataGridRow.Background).(SolidColorBrush.Color)"
                                                From="#5A5A80" To="#3D3D5C" Duration="0:0:0.4" 
                                                AutoReverse="True" RepeatBehavior="2x"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl pola tekstowego -->
        <Style x:Key="InputBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#252530"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" BorderThickness="2" BorderBrush="#555">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#121212">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="440"/>
        </Grid.ColumnDefinitions>

        <!-- Lewa strona -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- GÅ‚Ã³wny obszar -->
            <Grid Grid.Row="0" Margin="10">
                <!-- Widok kafelkÃ³w AVILOG -->
                <ScrollViewer x:Name="viewTiles" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="listDostawy">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" VerticalAlignment="Top"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="cardBorder" CornerRadius="12" Margin="5" Padding="10" BorderThickness="3" 
                                        Cursor="Hand" MouseLeftButtonUp="Dostawa_Click" MouseRightButtonUp="Dostawa_RightClick" 
                                        Tag="{Binding}" MinHeight="155"
                                        Background="{Binding CardBackground}" BorderBrush="{Binding CardBorderBrush}">
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="ðŸ“· PodglÄ…d zdjÄ™cia TARA" Click="MenuZdjecieTara_Click" Tag="{Binding}"/>
                                            <MenuItem Header="ðŸ“· PodglÄ…d zdjÄ™cia BRUTTO" Click="MenuZdjecieBrutto_Click" Tag="{Binding}"/>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.3" ShadowDepth="2"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- NagÅ‚Ã³wek karty -->
                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal">
                                                <Border Background="#333" CornerRadius="4" Padding="6,1" Margin="0,0,6,0">
                                                    <TextBlock Text="{Binding Lp}" Foreground="White" FontWeight="Bold" FontSize="13"/>
                                                </Border>
                                                <TextBlock Text="{Binding GodzinaPrzyjazdu}" FontSize="18" FontWeight="Bold" 
                                                           Foreground="{DynamicResource ThemeColor}" VerticalAlignment="Center"/>
                                                <TextBlock Text=" â€¢ " FontSize="14" Foreground="#666" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding KierowcaNazwa}" FontSize="14" FontWeight="Bold"
                                                           Foreground="#EEE" VerticalAlignment="Center"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding HodowcaNazwa}" HorizontalAlignment="Right" 
                                                       Foreground="#FF8A80" FontSize="14" FontWeight="Bold" 
                                                       TextTrimming="CharacterEllipsis" MaxWidth="150"/>
                                        </Grid>

                                        <!-- Åšrodek karty -->
                                        <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,4">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding CarID}" FontSize="28" FontWeight="Black" Foreground="White"/>
                                                <TextBlock Text=" " FontSize="28"/>
                                                <TextBlock Text="{Binding TrailerID}" FontSize="28" FontWeight="Black" Foreground="#FFA726"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Stopka karty -->
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                <TextBlock Text="BRUTTO" Foreground="#666" FontSize="9" VerticalAlignment="Bottom" Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding BruttoDisplay}" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock Text="TARA" Foreground="#666" FontSize="9" VerticalAlignment="Bottom" Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding TaraDisplay}" FontSize="16" FontWeight="Bold" Foreground="#888"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Widok tabeli ODPADY -->
                <DataGrid x:Name="gridTable" Visibility="Collapsed" Style="{StaticResource MyDataGridStyle}"
                          SelectionChanged="GridTable_SelectionChanged"
                          MouseLeftButtonUp="GridTable_MouseClick">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="ðŸ“· PodglÄ…d zdjÄ™cia TARA" Click="MenuZdjecieTaraGrid_Click"/>
                            <MenuItem Header="ðŸ“· PodglÄ…d zdjÄ™cia BRUTTO" Click="MenuZdjecieBruttoGrid_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="" Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Ellipse Width="22" Height="22" HorizontalAlignment="Center" Fill="{Binding StatusColor}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="GODZ." Binding="{Binding GodzinaPrzyjazdu}" Width="80"/>
                        <!-- ComboBox wyboru towaru zamiast ikony -->
                        <DataGridTemplateColumn Header="TOWAR" Width="145">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox SelectedValue="{Binding Towar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              SelectedValuePath="Tag"
                                              SelectionChanged="TowarComboBox_SelectionChanged"
                                              IsEnabled="{Binding CanEditTowar}"
                                              Height="50" VerticalContentAlignment="Center" Padding="10,0"
                                              BorderThickness="1" BorderBrush="#444" Cursor="Hand">
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="Background" Value="#1E1E2E"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="FontSize" Value="13"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Opacity" Value="0.5"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="BorderBrush" Value="#FFA726"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.Style>
                                        <ComboBoxItem Tag="KREW" Background="#1E1E2E" Foreground="White">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="â¤" FontSize="18" Margin="0,0,8,0" Foreground="#FF5555"/>
                                                <TextBlock Text="KREW" VerticalAlignment="Center" Foreground="#FF5555"/>
                                            </StackPanel>
                                        </ComboBoxItem>
                                        <ComboBoxItem Tag="LAPY" Background="#1E1E2E" Foreground="White">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ¾" FontSize="18" Margin="0,0,8,0"/>
                                                <TextBlock Text="ÅAPY" VerticalAlignment="Center" Foreground="#FFD54F"/>
                                            </StackPanel>
                                        </ComboBoxItem>
                                        <ComboBoxItem Tag="JELITA" Background="#1E1E2E" Foreground="White">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="âž°" FontSize="18" Margin="0,0,8,0" Foreground="#A1887F"/>
                                                <TextBlock Text="JELITA" VerticalAlignment="Center" Foreground="#A1887F"/>
                                            </StackPanel>
                                        </ComboBoxItem>
                                        <ComboBoxItem Tag="PIORA" Background="#1E1E2E" Foreground="White">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="~" FontSize="22" Margin="0,0,8,0" FontWeight="Bold" Foreground="#BDBDBD"/>
                                                <TextBlock Text="PIÃ“RA" VerticalAlignment="Center" Foreground="#BDBDBD"/>
                                            </StackPanel>
                                        </ComboBoxItem>
                                        <ComboBoxItem Tag="ODPADY" Background="#1E1E2E" Foreground="White">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="â™»" FontSize="18" Margin="0,0,8,0" Foreground="#AB47BC"/>
                                                <TextBlock Text="ODPADY" VerticalAlignment="Center" Foreground="#AB47BC"/>
                                            </StackPanel>
                                        </ComboBoxItem>
                                    </ComboBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="REJESTRACJA" Binding="{Binding NrRejestracyjny}" Width="150"/>
                        <DataGridTextColumn Header="ODBIORCA" Binding="{Binding HodowcaNazwa}" Width="*"/>
                        <DataGridTextColumn Header="TARA" Binding="{Binding TaraDisplay}" Width="120"/>
                        <DataGridTextColumn Header="BRUTTO" Binding="{Binding BruttoDisplay}" Width="120"/>
                        <DataGridTextColumn Header="NETTO" Binding="{Binding NettoDisplay}" Width="130"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Widok KAMERY (peÅ‚noekranowy) -->
                <Grid x:Name="viewCamera" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Obraz z kamery - peÅ‚na szerokoÅ›Ä‡ bez obramowaÅ„ -->
                    <Border Grid.Row="0" Background="Black">
                        <Grid x:Name="cameraViewContainer">
                            <Image x:Name="cameraViewImage" Stretch="Uniform"/>
                            <TextBlock x:Name="cameraViewStatus" Text="ÅÄ…czenie z kamerÄ…..."
                                       FontSize="28" Foreground="Gray"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Pasek info kamery -->
                    <Border Grid.Row="1" Background="#1E1E2E" Padding="15,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- PrzeÅ‚Ä…cznik jakoÅ›ci SD/HD -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="JAKOÅšÄ†:" Foreground="#888" FontWeight="Bold"
                                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <RadioButton x:Name="rbCameraSD" GroupName="CameraQuality" IsChecked="True"
                                             Click="CameraQuality_Click" Style="{StaticResource ModeRadioStyle}"
                                             Height="40" MinWidth="100">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="SD" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                                        <TextBlock Text=" 640x480" FontSize="10" Foreground="#888" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton x:Name="rbCameraHD" GroupName="CameraQuality"
                                             Click="CameraQuality_Click" Style="{StaticResource ModeRadioStyle}"
                                             Height="40" MinWidth="120" Margin="5,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="HD" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                                        <TextBlock Text=" 1920x1080" FontSize="10" Foreground="#888" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </RadioButton>
                            </StackPanel>

                            <!-- Info o statusie -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock x:Name="lblCameraFps" Text="-- FPS" FontSize="16" Foreground="#4CAF50"
                                           FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>
                                <TextBlock x:Name="lblCameraResolution" Text="---" FontSize="14" Foreground="#888"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Przycisk peÅ‚noekranowy overlay (opcjonalnie) -->
                            <Button Grid.Column="2" Click="BtnCameraOverlay_Click"
                                    Style="{StaticResource ActionButtonStyle}" Height="40" Width="120">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”" FontSize="16" Margin="0,0,5,0"/>
                                    <TextBlock Text="ZOOM" FontSize="12" FontWeight="Bold" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Przyciski dla ODPADY -->
                <StackPanel x:Name="panelButtonsLeft" VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                            Orientation="Horizontal" Visibility="Collapsed" Margin="0,0,20,20">
                    <Button x:Name="btnScanOdpady" Width="80" Height="80" Margin="0,0,10,0" 
                            Click="BtnScan_Click" Style="{StaticResource ActionButtonStyle}">
                        <TextBlock Text="&#x1F4F7;" FontSize="32"/>
                    </Button>
                    <Button x:Name="btnPrintOdpady" Width="80" Height="80" Margin="0,0,10,0" 
                            Click="BtnPrint_Click" Style="{StaticResource ActionButtonStyle}">
                        <TextBlock Text="&#x1F5B6;" FontSize="32"/>
                    </Button>
                    <Button x:Name="btnDelete" Width="80" Height="80" Margin="0,0,10,0" 
                            Click="BtnDelete_Click" IsEnabled="False">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#2A1515" CornerRadius="12" BorderBrush="#FF5252" BorderThickness="2">
                                    <TextBlock Text="&#x1F5D1;" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="btnNewEntry" Width="180" Height="80" Click="BtnNewEntry_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{DynamicResource ThemeColor}" CornerRadius="12">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="+" FontSize="36" Margin="0,0,8,0" Foreground="Black" FontWeight="Bold"/>
                                        <TextBlock Text="NOWE" FontSize="22" FontWeight="Black" Foreground="Black"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Dolny panel nawigacji -->
            <Border Grid.Row="1" Background="#181820" Padding="12,10" BorderThickness="0,2,0,0" BorderBrush="#333">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Przycisk zamknij -->
                    <Button Grid.Column="0" Click="BtnClose_Click" Cursor="Hand" Margin="0,0,10,0" Width="50" Height="50">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#2A1010" CornerRadius="8" BorderBrush="#800" BorderThickness="2">
                                    <TextBlock Text="X" FontSize="24" Foreground="#FF5555" FontWeight="Bold" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- DatePicker z ciemnym stylem -->
