<Window x:Class="Kalendarz1.PanelPortiera"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Portiera - Rejestracja Wag"
        Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#1A1A2E"
        FontFamily="Segoe UI"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Styl dla przyciskÃ³w dotykowych -->
        <Style x:Key="TouchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#16213E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderThickness="2"
                                BorderBrush="#0F3460">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0F3460"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1A1A40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl dla przyciskÃ³w numerycznych -->
        <Style x:Key="NumpadStyle" TargetType="Button" BasedOn="{StaticResource TouchButtonStyle}">
            <Setter Property="Background" Value="#0F3460"/>
            <Setter Property="FontSize" Value="42"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

        <!-- Styl dla przycisku sukcesu -->
        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource TouchButtonStyle}">
            <Setter Property="Background" Value="#00BFA6"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Styl dla wiersza listy -->
        <Style x:Key="DeliveryRowStyle" TargetType="Border">
            <Setter Property="Background" Value="#16213E"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="3,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
        </Style>

        <!-- Gruby pasek przewijania -->
        <Style x:Key="TouchScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter Grid.Column="0"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                       Grid.Column="1"
                                       Orientation="Vertical"
                                       Width="35"
                                       Margin="5,0,5,0"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}">
                                <ScrollBar.Style>
                                    <Style TargetType="ScrollBar">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ScrollBar">
                                                    <Grid Background="#0F3460">
                                                        <Track x:Name="PART_Track" IsDirectionReversed="True">
                                                            <Track.Thumb>
                                                                <Thumb>
                                                                    <Thumb.Style>
                                                                        <Style TargetType="Thumb">
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate TargetType="Thumb">
                                                                                        <Border Background="#42A5F5" CornerRadius="12" Margin="4"/>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Style>
                                                                    </Thumb.Style>
                                                                </Thumb>
                                                            </Track.Thumb>
                                                        </Track>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ScrollBar.Style>
                            </ScrollBar>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="520"/>
        </Grid.ColumnDefinitions>

        <!-- LEWA STRONA - LISTA DOSTAW (od gÃ³ry do doÅ‚u) -->
        <Grid Grid.Column="0" Background="#1A1A2E">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- NagÅ‚Ã³wek kolumn -->
            <Border Grid.Row="0" Background="#0F3460" Padding="12,8" Margin="3,3,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="45"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="95"/>
                        <ColumnDefinition Width="95"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="85"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="â†•" FontSize="14" FontWeight="Bold" Foreground="#94A3B8" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="LP" FontSize="12" FontWeight="Bold" Foreground="#94A3B8"/>
                    <TextBlock Grid.Column="2" Text="HODOWCA" FontSize="12" FontWeight="Bold" Foreground="#94A3B8"/>
                    <TextBlock Grid.Column="3" Text="KIEROWCA" FontSize="12" FontWeight="Bold" Foreground="#94A3B8"/>
                    <TextBlock Grid.Column="4" Text="CIÄ„GNIK" FontSize="12" FontWeight="Bold" Foreground="#FFA726"/>
                    <TextBlock Grid.Column="5" Text="NACZEPA" FontSize="12" FontWeight="Bold" Foreground="#FFA726"/>
                    <TextBlock Grid.Column="6" Text="GODZ." FontSize="12" FontWeight="Bold" Foreground="#94A3B8" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="7" Text="BRUTTO" FontSize="12" FontWeight="Bold" Foreground="#FFA726" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="8" Text="TARA" FontSize="12" FontWeight="Bold" Foreground="#42A5F5" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="9" Text="NETTO" FontSize="12" FontWeight="Bold" Foreground="#66BB6A" HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Lista dostaw -->
            <ScrollViewer Grid.Row="1" Style="{StaticResource TouchScrollViewerStyle}" Margin="3,0,0,3">
                <ItemsControl x:Name="listDostawy">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource DeliveryRowStyle}"
                                    MouseLeftButtonUp="Dostawa_Click"
                                    Tag="{Binding}"
                                    BorderBrush="{Binding StatusColor}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="45"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="95"/>
                                        <ColumnDefinition Width="95"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="75"/>
                                        <ColumnDefinition Width="75"/>
                                        <ColumnDefinition Width="85"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Przyciski kolejnoÅ›ci -->
                                    <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                                        <Button Content="â–²" Tag="{Binding}" Click="BtnMoveUp_Click"
                                                Width="28" Height="18" FontSize="9" Margin="0,0,0,2"
                                                Background="#0F3460" Foreground="#94A3B8" 
                                                BorderThickness="0" Cursor="Hand"/>
                                        <Button Content="â–¼" Tag="{Binding}" Click="BtnMoveDown_Click"
                                                Width="28" Height="18" FontSize="9"
                                                Background="#0F3460" Foreground="#94A3B8"
                                                BorderThickness="0" Cursor="Hand"/>
                                    </StackPanel>

                                    <!-- LP -->
                                    <Border Grid.Column="1" Background="#E94560" CornerRadius="5" 
                                            Width="30" Height="30" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Lp}" FontSize="14" FontWeight="Bold" 
                                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Hodowca -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding HodowcaNazwa}" 
                                                   FontSize="14" FontWeight="Bold" Foreground="White"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding SztukiPlanDisplay}" 
                                                   FontSize="10" Foreground="#64748B"/>
                                    </StackPanel>

                                    <!-- Kierowca -->
                                    <TextBlock Grid.Column="3" Text="{Binding KierowcaNazwa}" 
                                               FontSize="12" Foreground="#94A3B8"
                                               TextTrimming="CharacterEllipsis"
                                               VerticalAlignment="Center"/>

                                    <!-- CiÄ…gnik -->
                                    <TextBlock Grid.Column="4" Text="{Binding CarID}" 
                                               FontSize="12" Foreground="#FFA726"
                                               VerticalAlignment="Center"/>

                                    <!-- Naczepa -->
                                    <TextBlock Grid.Column="5" Text="{Binding TrailerID}" 
                                               FontSize="12" Foreground="#FFA726"
                                               VerticalAlignment="Center"/>

                                    <!-- Godzina -->
                                    <TextBlock Grid.Column="6" 
                                               Text="{Binding GodzinaZaladunku, StringFormat=HH:mm}" 
                                               FontSize="14" FontWeight="Bold" Foreground="#42A5F5" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <!-- Brutto -->
                                    <TextBlock Grid.Column="7" Text="{Binding BruttoDisplay}" 
                                               FontSize="14" FontWeight="Bold" Foreground="#FFA726" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <!-- Tara -->
                                    <TextBlock Grid.Column="8" Text="{Binding TaraDisplay}" 
                                               FontSize="14" FontWeight="Bold" Foreground="#42A5F5" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <!-- Netto + Status -->
                                    <StackPanel Grid.Column="9" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding NettoDisplay}" 
                                                   FontSize="14" FontWeight="Bold" Foreground="#66BB6A" 
                                                   HorizontalAlignment="Center"/>
                                        <Border Background="{Binding StatusColor}" CornerRadius="3" 
                                                Padding="5,1" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding StatusText}" FontSize="8" 
                                                       Foreground="White" FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- PRAWA STRONA - PANEL WAÅ»ENIA -->
        <Border Grid.Column="1" Background="#16213E" BorderBrush="#0F3460" BorderThickness="3,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- NagÅ‚Ã³wek z datÄ… -->
                <Border Grid.Row="0" Background="#0F3460" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" Content="â—€" Click="BtnPreviousDay_Click" 
                                Style="{StaticResource TouchButtonStyle}"
                                Width="50" Height="50" FontSize="22"/>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock x:Name="lblData" Text="16.12.2025" 
                                       FontSize="28" FontWeight="Bold" Foreground="White" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="lblDzienTygodnia" Text="Wtorek" 
                                       FontSize="14" Foreground="#FFA726" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button Content="ðŸ”„" Click="BtnRefresh_Click"
                                    Style="{StaticResource TouchButtonStyle}"
                                    Width="50" Height="50" FontSize="20" Margin="0,0,5,0"/>
                            <Button Content="â–¶" Click="BtnNextDay_Click" 
                                    Style="{StaticResource TouchButtonStyle}"
                                    Width="50" Height="50" FontSize="22"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Informacje o wybranej dostawie -->
                <Border Grid.Row="1" Background="#1A1A2E" Padding="12,10" Margin="8,8,8,5" CornerRadius="8">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="lblWybranyLp" Text="LP: -" FontSize="18" Foreground="#FFA726" FontWeight="Bold"/>
                            <TextBlock x:Name="lblStatus" Grid.Column="1" Text="" FontSize="11" Foreground="#64748B"/>
                        </Grid>
                        <TextBlock x:Name="lblWybranyHodowca" Text="Wybierz dostawÄ™ z listy" 
                                   FontSize="18" FontWeight="Bold" Foreground="White" 
                                   TextWrapping="Wrap" Margin="0,3,0,0"/>
                        <TextBlock x:Name="lblWybranyKierowca" Text="" 
                                   FontSize="13" Foreground="#94A3B8" Margin="0,2,0,0"/>
                        <TextBlock x:Name="lblWagaTimestamp" Text="" 
                                   FontSize="11" Foreground="#66BB6A" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Pola wagi -->
                <StackPanel Grid.Row="2" Margin="8,5,8,5">
                    <!-- BRUTTO z przyciskiem wagi -->
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Background="#1A1A2E" CornerRadius="8" Padding="12,10"
                                MouseLeftButtonUp="TxtBrutto_Click" Cursor="Hand"
                                x:Name="borderBrutto" BorderThickness="3">
                            <Border.BorderBrush>
                                <SolidColorBrush Color="#0F3460"/>
                            </Border.BorderBrush>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="BRUTTO:" FontSize="16" Foreground="#FFA726" 
                                           FontWeight="Bold" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" x:Name="txtBrutto" Text="0" FontSize="32" FontWeight="Bold" 
                                           Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text=" kg" FontSize="16" Foreground="#64748B" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <!-- Przycisk odczytu z wagi dla BRUTTO -->
                        <Button Grid.Column="1" x:Name="btnReadBrutto" Content="âš–ï¸" 
                                Click="BtnReadScale_Click" Tag="Brutto"
                                Style="{StaticResource TouchButtonStyle}"
                                Width="50" Height="50" FontSize="22"
                                Margin="6,0,0,0"
                                ToolTip="Odczytaj z wagi"/>
                    </Grid>

                    <!-- TARA z przyciskiem wagi -->
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Background="#1A1A2E" CornerRadius="8" Padding="12,10"
                                MouseLeftButtonUp="TxtTara_Click" Cursor="Hand"
                                x:Name="borderTara" BorderThickness="3">
                            <Border.BorderBrush>
                                <SolidColorBrush Color="#0F3460"/>
                            </Border.BorderBrush>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="TARA:" FontSize="16" Foreground="#42A5F5" 
                                           FontWeight="Bold" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" x:Name="txtTara" Text="0" FontSize="32" FontWeight="Bold" 
                                           Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text=" kg" FontSize="16" Foreground="#64748B" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <!-- Przycisk odczytu z wagi dla TARA -->
                        <Button Grid.Column="1" x:Name="btnReadTara" Content="âš–ï¸" 
                                Click="BtnReadScale_Click" Tag="Tara"
                                Style="{StaticResource TouchButtonStyle}"
                                Width="50" Height="50" FontSize="22"
                                Margin="6,0,0,0"
                                ToolTip="Odczytaj z wagi"/>
                    </Grid>

                    <!-- NETTO -->
                    <Border Background="#00BFA6" CornerRadius="8" Padding="12,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="NETTO:" FontSize="18" Foreground="White" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="txtNetto" Text="0 kg" 
                                       FontSize="36" FontWeight="Bold" Foreground="White" 
                                       HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Status wagi -->
                <Border Grid.Row="3" Background="#0F3460" Padding="8,5" Margin="8,0,8,5" CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="lblScaleStatus" Text="âš–ï¸ Waga: NiepodÅ‚Ä…czona" 
                                   FontSize="12" Foreground="#94A3B8" VerticalAlignment="Center"/>
                        <Button Grid.Column="2" x:Name="btnConnectScale" Content="PoÅ‚Ä…cz" 
                                Click="BtnConnectScale_Click"
                                Background="#16213E" Foreground="White" 
                                FontSize="11" Padding="10,3" Cursor="Hand"
                                BorderThickness="0"/>
                    </Grid>
                </Border>

                <!-- Klawiatura numeryczna -->
                <Grid Grid.Row="4" Margin="8,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" Content="7" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>
                    <Button Grid.Row="0" Grid.Column="1" Content="8" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>
                    <Button Grid.Row="0" Grid.Column="2" Content="9" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>

                    <Button Grid.Row="1" Grid.Column="0" Content="4" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>
                    <Button Grid.Row="1" Grid.Column="1" Content="5" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>
                    <Button Grid.Row="1" Grid.Column="2" Content="6" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>

                    <Button Grid.Row="2" Grid.Column="0" Content="1" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>
                    <Button Grid.Row="2" Grid.Column="1" Content="2" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>
                    <Button Grid.Row="2" Grid.Column="2" Content="3" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>

                    <Button Grid.Row="3" Grid.Column="0" Content="C" Click="BtnClear_Click" 
                            Style="{StaticResource NumpadStyle}" Background="#E94560"/>
                    <Button Grid.Row="3" Grid.Column="1" Content="0" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>
                    <Button Grid.Row="3" Grid.Column="2" Content="âŒ«" Click="BtnBackspace_Click" 
                            Style="{StaticResource NumpadStyle}" Background="#FFA726"/>
                </Grid>

                <!-- Przyciski akcji -->
                <Border Grid.Row="5" Padding="8,5,8,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Przycisk drukuj -->
                        <Button x:Name="btnDrukuj" Content="ðŸ–¨ï¸" 
                                Click="BtnDrukuj_Click"
                                Style="{StaticResource TouchButtonStyle}"
                                Width="60" Height="60"
                                FontSize="28"
                                ToolTip="Drukuj kwit wagowy"
                                IsEnabled="False"
                                Margin="0,0,8,0"/>
                        
                        <!-- Przycisk zapisz -->
                        <Button Grid.Column="1" x:Name="btnZapisz" Content="âœ“ ZAPISZ WAGÄ˜" 
                                Click="BtnZapisz_Click"
                                Style="{StaticResource SuccessButtonStyle}"
                                Height="60"
                                IsEnabled="False"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
