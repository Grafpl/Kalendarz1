<Window x:Class="Kalendarz1.PanelLekarza"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Lekarza - Ocena Dobrostanu" 
        Height="800" Width="1400"
        WindowState="Maximized"
        Background="#1C1C1C"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Style dla przyciskÃ³w dotykowych -->
        <Style x:Key="TouchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D3D3D"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#4CAF50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl przycisku sukces -->
        <Style x:Key="SuccessButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                Padding="20,15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#66BB6A"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#3D3D3D"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl wiersza dostawy -->
        <Style x:Key="DeliveryRowStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15,14"/>
            <Setter Property="Margin" Value="3,3"/>
            <Setter Property="BorderThickness" Value="0,0,4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="58"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D3D3D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl pola wpisywania wartoÅ›ci -->
        <Style x:Key="ValueInputStyle" TargetType="Border">
            <Setter Property="Background" Value="#1C1C1C"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Styl dla numpad -->
        <Style x:Key="NumpadStyle" TargetType="Button">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D3D3D"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#4CAF50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl ScrollViewer dotykowy -->
        <Style x:Key="TouchScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="PanningMode" Value="VerticalOnly"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter Grid.Column="0"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                       Grid.Column="1"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                       Width="30">
                                <ScrollBar.Template>
                                    <ControlTemplate TargetType="ScrollBar">
                                        <Grid Background="#2D2D2D">
                                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                                <Track.Thumb>
                                                    <Thumb>
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="Thumb">
                                                                <Border Background="#4CAF50" CornerRadius="10" Margin="4"/>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </ScrollBar.Template>
                            </ScrollBar>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="550"/>
        </Grid.ColumnDefinitions>

        <!-- LEWA STRONA - LISTA DOSTAW -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- NagÅ‚Ã³wek kolumn -->
            <Border Grid.Row="0" Background="#2D2D2D" Padding="12,10" Margin="3,3,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="45"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="65"/>
                        <ColumnDefinition Width="55"/>
                        <ColumnDefinition Width="55"/>
                        <ColumnDefinition Width="55"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="LP" FontSize="15" FontWeight="Bold" Foreground="#888888"/>
                    <TextBlock Grid.Column="1" Text="HODOWCA" FontSize="15" FontWeight="Bold" Foreground="#888888"/>
                    <TextBlock Grid.Column="2" Text="NR GOSP." FontSize="15" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="3" Text="ADRES" FontSize="15" FontWeight="Bold" Foreground="#888888" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="4" Text="CIÄ„GNIK" FontSize="15" FontWeight="Bold" Foreground="#888888" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="5" Text="NACZEPA" FontSize="15" FontWeight="Bold" Foreground="#888888" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="6" Text="PADÅE" FontSize="15" FontWeight="Bold" Foreground="#F44336" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="7" Text="CH" FontSize="15" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="8" Text="NW" FontSize="15" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="9" Text="ZM" FontSize="15" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="10" Text="STATUS" FontSize="15" FontWeight="Bold" Foreground="#888888" HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Lista dostaw -->
            <ScrollViewer Grid.Row="1" Style="{StaticResource TouchScrollViewerStyle}" Margin="3,0,0,3">
                <ItemsControl x:Name="listDostawy">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource DeliveryRowStyle}"
                                    MouseLeftButtonUp="Dostawa_Click"
                                    Tag="{Binding}"
                                    BorderBrush="{Binding StatusColor}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="45"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="65"/>
                                        <ColumnDefinition Width="55"/>
                                        <ColumnDefinition Width="55"/>
                                        <ColumnDefinition Width="55"/>
                                        <ColumnDefinition Width="70"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- LP -->
                                    <Border Grid.Column="0" Background="#4CAF50" CornerRadius="6" 
                                            Width="36" Height="36" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Lp}" FontSize="16" FontWeight="Bold" 
                                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Hodowca -->
                                    <TextBlock Grid.Column="1" Text="{Binding HodowcaNazwa}" 
                                               FontSize="18" FontWeight="Bold" Foreground="White"
                                               TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>

                                    <!-- Nr gospodarstwa -->
                                    <TextBlock Grid.Column="2" Text="{Binding AnimNo}" 
                                               FontSize="15" Foreground="#4CAF50" FontWeight="SemiBold"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <!-- Adres -->
                                    <TextBlock Grid.Column="3" Text="{Binding Adres}" 
                                               FontSize="14" Foreground="#BBBBBB" 
                                               HorizontalAlignment="Left" VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis" Margin="5,0,0,0"/>

                                    <!-- CiÄ…gnik -->
                                    <TextBlock Grid.Column="4" Text="{Binding CarID}" 
                                               FontSize="14" Foreground="#BBBBBB" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"/>

                                    <!-- Naczepa -->
                                    <TextBlock Grid.Column="5" Text="{Binding TrailerID}" 
                                               FontSize="14" Foreground="#BBBBBB" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"/>

                                    <!-- PadÅ‚e -->
                                    <TextBlock Grid.Column="6" Text="{Binding PadleDisplay}" 
                                               FontSize="20" FontWeight="Bold" Foreground="#F44336" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <!-- CH -->
                                    <TextBlock Grid.Column="7" Text="{Binding CHDisplay}" 
                                               FontSize="20" FontWeight="Bold" Foreground="#FF9800" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <!-- NW -->
                                    <TextBlock Grid.Column="8" Text="{Binding NWDisplay}" 
                                               FontSize="20" FontWeight="Bold" Foreground="#FF9800" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <!-- ZM -->
                                    <TextBlock Grid.Column="9" Text="{Binding ZMDisplay}" 
                                               FontSize="20" FontWeight="Bold" Foreground="#FF9800" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <!-- Status -->
                                    <Border Grid.Column="10" Background="{Binding StatusColor}" CornerRadius="5" 
                                            Padding="8,4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding StatusText}" FontSize="12" 
                                                   Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- PRAWA STRONA - PANEL OCENY -->
        <Border Grid.Column="1" Background="#2D2D2D" BorderBrush="#3D3D3D" BorderThickness="3,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- NagÅ‚Ã³wek z datÄ… -->
                <Border Grid.Row="0" Background="#1C1C1C" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" Content="â—€" Click="BtnPreviousDay_Click" 
                                Style="{StaticResource TouchButtonStyle}"
                                Width="50" Height="40" FontSize="20"/>
                        
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Name="lblData" Text="16 GRUDNIA 2024" 
                                       FontSize="18" FontWeight="Bold" Foreground="#4CAF50" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="lblDzien" Text="PONIEDZIAÅEK" 
                                       FontSize="12" Foreground="#888888" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <Button Grid.Column="2" Content="â–¶" Click="BtnNextDay_Click" 
                                Style="{StaticResource TouchButtonStyle}"
                                Width="50" Height="40" FontSize="20"/>

                        <Button Grid.Column="3" Content="ðŸ–¨ï¸" Click="BtnDrukuj_Click" 
                                Style="{StaticResource TouchButtonStyle}"
                                Width="50" Height="40" FontSize="20" Margin="10,0,0,0"
                                ToolTip="Drukuj raport dzienny"/>
                    </Grid>
                </Border>

                <!-- Informacje o wybranej dostawie -->
                <Border Grid.Row="1" Background="#1C1C1C" Padding="12,10" Margin="8,5,8,3" CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="lblWybranyLp" Text="LP: -" FontSize="20" Foreground="#4CAF50" FontWeight="Bold"/>
                                <TextBlock x:Name="lblStatus" Grid.Column="1" Text="" FontSize="13" Foreground="#888888"/>
                            </Grid>
                            
                            <!-- Dane hodowcy - kompaktowe -->
                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Hodowca -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Hodowca:" 
                                           FontSize="12" Foreground="#888888" VerticalAlignment="Center" Margin="0,0,0,4"/>
                                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtHodowcaNazwa" 
                                         FontSize="16" FontWeight="Bold" Foreground="White" Background="#2D2D2D" 
                                         BorderBrush="#4CAF50" BorderThickness="1" Padding="8,4" Margin="0,0,0,4"/>
                                
                                <!-- Nr gospodarstwa -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Nr gosp.:" 
                                           FontSize="12" Foreground="#888888" VerticalAlignment="Center" Margin="0,0,0,4"/>
                                <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtAnimNo" 
                                         FontSize="14" Foreground="White" Background="#2D2D2D" 
                                         BorderBrush="#3D3D3D" BorderThickness="1" Padding="8,4" Margin="0,0,0,4"/>
                                
                                <!-- Data Salmonella i Nr Åšw. Zdrowia w jednym wierszu -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Salm/Zdr:" 
                                           FontSize="12" Foreground="#888888" VerticalAlignment="Center" Margin="0,0,0,4"/>
                                <Grid Grid.Row="2" Grid.Column="1" Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" x:Name="txtDataSalmonella" 
                                             FontSize="13" Foreground="White" Background="#2D2D2D" 
                                             BorderBrush="#FF9800" BorderThickness="1" Padding="6,4"
                                             ToolTip="Data badania salmonelli (np. 12.12)"/>
                                    <TextBox Grid.Column="2" x:Name="txtNrSwZdrowia" 
                                             FontSize="13" Foreground="White" Background="#2D2D2D" 
                                             BorderBrush="#FF9800" BorderThickness="1" Padding="6,4"
                                             ToolTip="Nr Å›wiadectwa zdrowia"/>
                                </Grid>
                                
                                <!-- Adres -->
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Adres:" 
                                           FontSize="12" Foreground="#888888" VerticalAlignment="Center" Margin="0,0,0,4"/>
                                <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtAdres" 
                                         FontSize="14" Foreground="White" Background="#2D2D2D" 
                                         BorderBrush="#3D3D3D" BorderThickness="1" Padding="8,4" Margin="0,0,0,4"/>
                                
                                <!-- CiÄ…gnik i Naczepa w jednym wierszu -->
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Pojazd:" 
                                           FontSize="12" Foreground="#888888" VerticalAlignment="Center" Margin="0,0,0,4"/>
                                <Grid Grid.Row="4" Grid.Column="1" Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" x:Name="txtCiagnikEdit" 
                                             FontSize="13" Foreground="White" Background="#2D2D2D" 
                                             BorderBrush="#3D3D3D" BorderThickness="1" Padding="6,4"
                                             ToolTip="CiÄ…gnik"/>
                                    <TextBox Grid.Column="2" x:Name="txtNaczepaEdit" 
                                             FontSize="13" Foreground="White" Background="#2D2D2D" 
                                             BorderBrush="#3D3D3D" BorderThickness="1" Padding="6,4"
                                             ToolTip="Naczepa"/>
                                </Grid>
                                
                                <!-- Przycisk zapisu + info -->
                                <Grid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,4,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="btnZapiszDaneHodowcy" Content="ðŸ’¾ Zapisz hodowcÄ™" 
                                            Click="BtnZapiszDaneHodowcy_Click"
                                            Background="#2D2D2D" Foreground="White" 
                                            FontSize="12" Padding="10,5"
                                            BorderThickness="0" Cursor="Hand"/>
                                    <TextBlock Grid.Column="1" x:Name="lblSztukiNetto" Text="" 
                                               FontSize="12" Foreground="#66BB6A" VerticalAlignment="Center"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Grid>
                        </StackPanel>
                        
                        <!-- Przyciski zmiany kolejnoÅ›ci -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="8,0,0,0">
                            <Button Content="â–²" Click="BtnMoveUp_Click" 
                                    Style="{StaticResource TouchButtonStyle}"
                                    Width="45" Height="40" FontSize="20" Margin="0,0,0,4"
                                    ToolTip="PrzesuÅ„ w gÃ³rÄ™"/>
                            <Button Content="â–¼" Click="BtnMoveDown_Click" 
                                    Style="{StaticResource TouchButtonStyle}"
                                    Width="45" Height="40" FontSize="20"
                                    ToolTip="PrzesuÅ„ w dÃ³Å‚"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Pola oceny -->
                <Grid Grid.Row="2" Margin="8,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- PADÅE -->
                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource ValueInputStyle}"
                            x:Name="borderPadle" MouseLeftButtonUp="FieldClick" Tag="Padle" Margin="0,5,4,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="PADÅE:" FontSize="16" Foreground="#F44336" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="txtPadle" Text="0" FontSize="32" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- CH -->
                    <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource ValueInputStyle}"
                            x:Name="borderCH" MouseLeftButtonUp="FieldClick" Tag="CH" Margin="4,5,0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="CH:" FontSize="16" Foreground="#FF9800" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="txtCH" Text="0" FontSize="32" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- NW -->
                    <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource ValueInputStyle}"
                            x:Name="borderNW" MouseLeftButtonUp="FieldClick" Tag="NW" Margin="0,5,4,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="NW:" FontSize="16" Foreground="#FF9800" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="txtNW" Text="0" FontSize="32" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- ZM -->
                    <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource ValueInputStyle}"
                            x:Name="borderZM" MouseLeftButtonUp="FieldClick" Tag="ZM" Margin="4,5,0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ZM:" FontSize="16" Foreground="#FF9800" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="txtZM" Text="0" FontSize="32" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Suma konfiskat -->
                    <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Background="#1C1C1C" 
                            CornerRadius="8" Padding="15,10" Margin="0,10,0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="SUMA KONFISKAT (CH+NW+ZM):" FontSize="15" Foreground="#888888" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="txtSumaKonfiskat" Text="0 szt" FontSize="26" FontWeight="Bold" 
                                       Foreground="#FF9800" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Aktywne pole info -->
                    <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Background="#1C1C1C" 
                            CornerRadius="5" Padding="10,5" Margin="0,5,0,0">
                        <TextBlock x:Name="lblAktywnePole" Text="Wybierz pole do edycji" 
                                   FontSize="14" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>

                <!-- Numpad - wiÄ™kszy -->
                <Grid Grid.Row="3" Margin="8,5,8,8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="55"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
