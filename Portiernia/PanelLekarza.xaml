<Window x:Class="Kalendarz1.PanelLekarza"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Lekarza - Ocena Dobrostanu" 
        Height="800" Width="1400"
        WindowState="Maximized"
        Background="#1A1A2E"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Style dla przycisków dotykowych -->
        <Style x:Key="TouchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#16213E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1F4068"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E94560"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl przycisku sukces -->
        <Style x:Key="SuccessButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#00BFA6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                Padding="20,15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#00E5C4"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#4A5568"/>
                    <Setter Property="Foreground" Value="#718096"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl wiersza dostawy -->
        <Style x:Key="DeliveryRowStyle" TargetType="Border">
            <Setter Property="Background" Value="#16213E"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="3,2"/>
            <Setter Property="BorderThickness" Value="0,0,4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1F4068"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl pola wpisywania wartości -->
        <Style x:Key="ValueInputStyle" TargetType="Border">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="BorderBrush" Value="#0F3460"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Styl dla numpad -->
        <Style x:Key="NumpadStyle" TargetType="Button">
            <Setter Property="Background" Value="#16213E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1F4068"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E94560"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl ScrollViewer dotykowy -->
        <Style x:Key="TouchScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="PanningMode" Value="VerticalOnly"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter Grid.Column="0"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                       Grid.Column="1"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                       Width="30">
                                <ScrollBar.Template>
                                    <ControlTemplate TargetType="ScrollBar">
                                        <Grid Background="#0F3460">
                                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                                <Track.Thumb>
                                                    <Thumb>
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="Thumb">
                                                                <Border Background="#42A5F5" CornerRadius="10" Margin="4"/>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </ScrollBar.Template>
                            </ScrollBar>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="550"/>
        </Grid.ColumnDefinitions>

        <!-- LEWA STRONA - LISTA DOSTAW -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Nagłówek kolumn -->
            <Border Grid.Row="0" Background="#0F3460" Padding="12,8" Margin="3,3,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="LP" FontSize="12" FontWeight="Bold" Foreground="#94A3B8"/>
                    <TextBlock Grid.Column="1" Text="HODOWCA" FontSize="12" FontWeight="Bold" Foreground="#94A3B8"/>
                    <TextBlock Grid.Column="2" Text="NETTO" FontSize="12" FontWeight="Bold" Foreground="#66BB6A" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="3" Text="PADŁE" FontSize="12" FontWeight="Bold" Foreground="#E94560" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="4" Text="CH" FontSize="12" FontWeight="Bold" Foreground="#FFA726" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="5" Text="NW" FontSize="12" FontWeight="Bold" Foreground="#FFA726" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="6" Text="ZM" FontSize="12" FontWeight="Bold" Foreground="#FFA726" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="7" Text="STATUS" FontSize="12" FontWeight="Bold" Foreground="#94A3B8" HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Lista dostaw -->
            <ScrollViewer Grid.Row="1" Style="{StaticResource TouchScrollViewerStyle}" Margin="3,0,0,3">
                <ItemsControl x:Name="listDostawy">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource DeliveryRowStyle}"
                                    MouseLeftButtonUp="Dostawa_Click"
                                    Tag="{Binding}"
                                    BorderBrush="{Binding StatusColor}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- LP -->
                                    <Border Grid.Column="0" Background="#E94560" CornerRadius="5" 
                                            Width="35" Height="35" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Lp}" FontSize="14" FontWeight="Bold" 
                                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Hodowca -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding HodowcaNazwa}" 
                                                   FontSize="14" FontWeight="Bold" Foreground="White"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding SztukiInfo}" 
                                                   FontSize="10" Foreground="#64748B"/>
                                    </StackPanel>

                                    <!-- Netto -->
                                    <TextBlock Grid.Column="2" Text="{Binding NettoDisplay}" 
                                               FontSize="14" FontWeight="Bold" Foreground="#66BB6A" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <!-- Padłe -->
                                    <TextBlock Grid.Column="3" Text="{Binding PadleDisplay}" 
                                               FontSize="14" FontWeight="Bold" Foreground="#E94560" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <!-- CH -->
                                    <TextBlock Grid.Column="4" Text="{Binding CHDisplay}" 
                                               FontSize="14" FontWeight="Bold" Foreground="#FFA726" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <!-- NW -->
                                    <TextBlock Grid.Column="5" Text="{Binding NWDisplay}" 
                                               FontSize="14" FontWeight="Bold" Foreground="#FFA726" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <!-- ZM -->
                                    <TextBlock Grid.Column="6" Text="{Binding ZMDisplay}" 
                                               FontSize="14" FontWeight="Bold" Foreground="#FFA726" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <!-- Status -->
                                    <Border Grid.Column="7" Background="{Binding StatusColor}" CornerRadius="5" 
                                            Padding="8,4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding StatusText}" FontSize="10" 
                                                   Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- PRAWA STRONA - PANEL OCENY -->
        <Border Grid.Column="1" Background="#16213E" BorderBrush="#0F3460" BorderThickness="3,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Nagłówek z datą -->
                <Border Grid.Row="0" Background="#0F3460" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" Content="◀" Click="BtnPreviousDay_Click" 
                                Style="{StaticResource TouchButtonStyle}"
                                Width="50" Height="40" FontSize="20"/>
                        
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Name="lblData" Text="16 GRUDNIA 2024" 
                                       FontSize="18" FontWeight="Bold" Foreground="White" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="lblDzien" Text="PONIEDZIAŁEK" 
                                       FontSize="12" Foreground="#94A3B8" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <Button Grid.Column="2" Content="▶" Click="BtnNextDay_Click" 
                                Style="{StaticResource TouchButtonStyle}"
                                Width="50" Height="40" FontSize="20"/>
                    </Grid>
                </Border>

                <!-- Informacje o wybranej dostawie -->
                <Border Grid.Row="1" Background="#1A1A2E" Padding="15" Margin="8,8,8,5" CornerRadius="8">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="lblWybranyLp" Text="LP: -" FontSize="20" Foreground="#FFA726" FontWeight="Bold"/>
                            <TextBlock x:Name="lblStatus" Grid.Column="1" Text="" FontSize="12" Foreground="#64748B"/>
                        </Grid>
                        <TextBlock x:Name="lblWybranyHodowca" Text="Wybierz dostawę z listy" 
                                   FontSize="20" FontWeight="Bold" Foreground="White" 
                                   TextWrapping="Wrap" Margin="0,5,0,0"/>
                        <TextBlock x:Name="lblSztukiNetto" Text="" 
                                   FontSize="14" Foreground="#66BB6A" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Pola oceny -->
                <Grid Grid.Row="2" Margin="8,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- PADŁE -->
                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource ValueInputStyle}"
                            x:Name="borderPadle" MouseLeftButtonUp="FieldClick" Tag="Padle" Margin="0,5,4,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="PADŁE:" FontSize="14" Foreground="#E94560" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="txtPadle" Text="0" FontSize="28" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- CH -->
                    <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource ValueInputStyle}"
                            x:Name="borderCH" MouseLeftButtonUp="FieldClick" Tag="CH" Margin="4,5,0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="CH:" FontSize="14" Foreground="#FFA726" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="txtCH" Text="0" FontSize="28" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- NW -->
                    <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource ValueInputStyle}"
                            x:Name="borderNW" MouseLeftButtonUp="FieldClick" Tag="NW" Margin="0,5,4,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="NW:" FontSize="14" Foreground="#FFA726" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="txtNW" Text="0" FontSize="28" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- ZM -->
                    <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource ValueInputStyle}"
                            x:Name="borderZM" MouseLeftButtonUp="FieldClick" Tag="ZM" Margin="4,5,0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ZM:" FontSize="14" Foreground="#FFA726" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="txtZM" Text="0" FontSize="28" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Suma konfiskat -->
                    <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Background="#0F3460" 
                            CornerRadius="8" Padding="15,10" Margin="0,10,0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="SUMA KONFISKAT (CH+NW+ZM):" FontSize="14" Foreground="#94A3B8" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="txtSumaKonfiskat" Text="0 szt" FontSize="24" FontWeight="Bold" 
                                       Foreground="#FFA726" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Aktywne pole info -->
                    <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Background="#1A1A2E" 
                            CornerRadius="5" Padding="10,5" Margin="0,5,0,0">
                        <TextBlock x:Name="lblAktywnePole" Text="Wybierz pole do edycji" 
                                   FontSize="12" Foreground="#64748B" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>

                <!-- Numpad -->
                <Grid Grid.Row="3" Margin="8,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" Content="7" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>
                    <Button Grid.Row="0" Grid.Column="1" Content="8" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>
                    <Button Grid.Row="0" Grid.Column="2" Content="9" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>

                    <Button Grid.Row="1" Grid.Column="0" Content="4" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>
                    <Button Grid.Row="1" Grid.Column="1" Content="5" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>
                    <Button Grid.Row="1" Grid.Column="2" Content="6" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>

                    <Button Grid.Row="2" Grid.Column="0" Content="1" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>
                    <Button Grid.Row="2" Grid.Column="1" Content="2" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>
                    <Button Grid.Row="2" Grid.Column="2" Content="3" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>

                    <Button Grid.Row="3" Grid.Column="0" Content="C" Click="BtnClear_Click" 
                            Style="{StaticResource NumpadStyle}" Foreground="#E94560"/>
                    <Button Grid.Row="3" Grid.Column="1" Content="0" Click="NumpadClick" Style="{StaticResource NumpadStyle}"/>
                    <Button Grid.Row="3" Grid.Column="2" Content="⌫" Click="BtnBackspace_Click" 
                            Style="{StaticResource NumpadStyle}" Foreground="#FFA726"/>
                </Grid>

                <!-- Przycisk zapisz -->
                <Border Grid.Row="4" Padding="8,5,8,8">
                    <Button x:Name="btnZapisz" Content="✓ ZAPISZ OCENĘ" 
                            Click="BtnZapisz_Click"
                            Style="{StaticResource SuccessButtonStyle}"
                            Height="60"
                            IsEnabled="False"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
