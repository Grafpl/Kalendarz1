<Window x:Class="Kalendarz1.WPF.HistoriaZmianWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historia zmian zamÃ³wieÅ„"
        Width="1200" Height="700"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F6FA"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFBFC"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E8E8E8"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling"/>
        </Style>

        <Style x:Key="ModernDataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Height" Value="36"/>
        </Style>

        <Style x:Key="ProductListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E8E8E8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3498DB"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EBF5FB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NagÅ‚Ã³wek -->
        <Border Grid.Row="0" Padding="15,12">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#9B59B6" Offset="0"/>
                    <GradientStop Color="#8E44AD" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <StackPanel>
                    <TextBlock Text="HISTORIA ZMIAN ZAMÃ“WIEÅƒ" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="txtDateRange" Text="Wszystkie zmiany" FontSize="12" Foreground="#D7BDE2" Margin="0,3,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Border Background="#27AE60" CornerRadius="8" Padding="12,6" Margin="8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ÅÄ…cznie zmian: " FontSize="12" Foreground="White"/>
                            <TextBlock x:Name="txtTotalChanges" Text="0" FontSize="14" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#E74C3C" CornerRadius="8" Padding="12,6" Margin="8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Wybrany produkt: " FontSize="12" Foreground="White"/>
                            <TextBlock x:Name="txtSelectedProduct" Text="(wszystkie)" FontSize="12" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Panel filtrÃ³w -->
        <Border Grid.Row="1" Background="#ECEFF1" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Filtry podstawowe -->
                <WrapPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Kto edytowaÅ‚:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="11" FontWeight="SemiBold"/>
                        <ComboBox x:Name="cmbKtoEdytowal" Width="120" FontSize="11"
                                  SelectionChanged="Filter_SelectionChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Odbiorca:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="11" FontWeight="SemiBold"/>
                        <ComboBox x:Name="cmbOdbiorca" Width="150" FontSize="11"
                                  SelectionChanged="Filter_SelectionChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Typ zmiany:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="11" FontWeight="SemiBold"/>
                        <ComboBox x:Name="cmbTyp" Width="120" FontSize="11"
                                  SelectionChanged="Filter_SelectionChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Handlowiec:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="11" FontWeight="SemiBold"/>
                        <ComboBox x:Name="cmbHandlowiec" Width="120" FontSize="11"
                                  SelectionChanged="Filter_SelectionChanged"/>
                    </StackPanel>
                </WrapPanel>

                <!-- Przyciski -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="btnClearFilters" Content="âœ• WyczyÅ›Ä‡ filtry" Padding="12,6"
                            Background="#E74C3C" Foreground="White" BorderThickness="0"
                            Click="BtnClearFilters_Click" Cursor="Hand" Margin="0,0,10,0" FontSize="11"/>
                    <Button x:Name="btnRefresh" Content="ðŸ”„ OdÅ›wieÅ¼" Padding="12,6"
                            Background="#3498DB" Foreground="White" BorderThickness="0"
                            Click="BtnRefresh_Click" Cursor="Hand" FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- GÅ‚Ã³wna zawartoÅ›Ä‡ - dwie kolumny -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEWA KOLUMNA - Lista produktÃ³w -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- NagÅ‚Ã³wek -->
                    <Border Grid.Row="0" CornerRadius="8,8,0,0" Padding="12,10">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#2c3e50" Offset="0"/>
                                <GradientStop Color="#3498db" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <TextBlock Text="PRODUKTY" FontSize="13" Foreground="White" FontWeight="Bold"/>
                            <TextBlock x:Name="txtProductCount" Text="0" FontSize="12" Foreground="#B0C4DE" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>

                    <!-- Przycisk "Wszystkie produkty" -->
                    <Button Grid.Row="1" x:Name="btnAllProducts" Content="ðŸ“‹ Wszystkie produkty (pokaÅ¼ wszystkie zmiany)"
                            Padding="12,10" Background="#27AE60" Foreground="White" BorderThickness="0"
                            HorizontalContentAlignment="Left" FontSize="11" FontWeight="SemiBold"
                            Click="BtnAllProducts_Click" Cursor="Hand"/>

                    <!-- Lista produktÃ³w -->
                    <ListBox Grid.Row="2" x:Name="lbProdukty"
                             ItemContainerStyle="{StaticResource ProductListItemStyle}"
                             SelectionChanged="LbProdukty_SelectionChanged"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Nazwa}" FontWeight="SemiBold" FontSize="12"/>
                                        <TextBlock Text="{Binding ZmianyText}" FontSize="10" Foreground="#7f8c8d"/>
                                    </StackPanel>
                                    <Border Grid.Column="1" Background="{Binding KolorTla}" CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding LiczbaZmian}" FontSize="11" FontWeight="Bold" Foreground="{Binding KolorTekstu}"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- PRAWA KOLUMNA - Tabela zmian -->
            <Border Grid.Column="1" Background="White" CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- NagÅ‚Ã³wek tabeli -->
                    <Border Grid.Row="0" CornerRadius="8,8,0,0" Padding="12,10">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#9B59B6" Offset="0"/>
                                <GradientStop Color="#8E44AD" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <TextBlock x:Name="txtHistoriaTitle" Text="HISTORIA ZMIAN - WSZYSTKIE" FontSize="13" Foreground="White" FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="WyÅ›wietlono: " Foreground="#D7BDE2" FontSize="11" VerticalAlignment="Center"/>
                                <TextBlock x:Name="txtDisplayedCount" Text="0" FontSize="12" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <DataGrid Grid.Row="1" x:Name="dgHistoria"
                              Style="{StaticResource ModernDataGridStyle}"
                              ColumnHeaderStyle="{StaticResource ModernDataGridHeaderStyle}"
                              AutoGenerateColumns="False"
                              CanUserSortColumns="True"
                              Margin="5"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Stopka -->
        <Border Grid.Row="3" Background="#2C3E50" Padding="12,8">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Kliknij produkt po lewej, aby zobaczyÄ‡ zmiany ceny/iloÅ›ci dla tego produktu"
                               Foreground="#95A5A6" FontSize="11" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Eksport do Excel" Padding="12,6"
                            Background="#27AE60" Foreground="White" BorderThickness="0"
                            Click="BtnExport_Click" Cursor="Hand" Margin="0,0,10,0" FontSize="11"/>
                    <Button Content="Zamknij" Padding="12,6"
                            Background="#95A5A6" Foreground="White" BorderThickness="0"
                            Click="BtnClose_Click" Cursor="Hand" FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
