<Window x:Class="Kalendarz1.WPF.HistoriaZmianWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historia zmian zamÃ³wieÅ„"
        Width="1200" Height="700"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F6FA"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFBFC"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E8E8E8"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling"/>
        </Style>

        <Style x:Key="ModernDataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Height" Value="36"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NagÅ‚Ã³wek -->
        <Border Grid.Row="0" Padding="15,12">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#9B59B6" Offset="0"/>
                    <GradientStop Color="#8E44AD" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <StackPanel>
                    <TextBlock Text="HISTORIA ZMIAN ZAMÃ“WIEÅƒ" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="txtDateRange" Text="Wszystkie zmiany" FontSize="12" Foreground="#D7BDE2" Margin="0,3,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Border Background="#27AE60" CornerRadius="8" Padding="12,6" Margin="8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ÅÄ…cznie zmian: " FontSize="12" Foreground="White"/>
                            <TextBlock x:Name="txtTotalChanges" Text="0" FontSize="14" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Panel filtrÃ³w -->
        <Border Grid.Row="1" Background="#ECEFF1" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Filtry -->
                <WrapPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Towar:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="11" FontWeight="Bold" Foreground="#E74C3C"/>
                        <ComboBox x:Name="cmbTowar" Width="200" FontSize="11"
                                  SelectionChanged="Filter_SelectionChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Kto edytowaÅ‚:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="11" FontWeight="SemiBold"/>
                        <ComboBox x:Name="cmbKtoEdytowal" Width="120" FontSize="11"
                                  SelectionChanged="Filter_SelectionChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Odbiorca:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="11" FontWeight="SemiBold"/>
                        <ComboBox x:Name="cmbOdbiorca" Width="150" FontSize="11"
                                  SelectionChanged="Filter_SelectionChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Typ zmiany:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="11" FontWeight="SemiBold"/>
                        <ComboBox x:Name="cmbTyp" Width="120" FontSize="11"
                                  SelectionChanged="Filter_SelectionChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Handlowiec:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="11" FontWeight="SemiBold"/>
                        <ComboBox x:Name="cmbHandlowiec" Width="120" FontSize="11"
                                  SelectionChanged="Filter_SelectionChanged"/>
                    </StackPanel>
                </WrapPanel>

                <!-- Przyciski -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="btnClearFilters" Content="âœ• WyczyÅ›Ä‡ filtry" Padding="12,6"
                            Background="#E74C3C" Foreground="White" BorderThickness="0"
                            Click="BtnClearFilters_Click" Cursor="Hand" Margin="0,0,10,0" FontSize="11"/>
                    <Button x:Name="btnRefresh" Content="ðŸ”„ OdÅ›wieÅ¼" Padding="12,6"
                            Background="#3498DB" Foreground="White" BorderThickness="0"
                            Click="BtnRefresh_Click" Cursor="Hand" FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- GÅ‚Ã³wna zawartoÅ›Ä‡ - tabela zmian -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Margin="10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- NagÅ‚Ã³wek tabeli -->
                <Border Grid.Row="0" CornerRadius="8,8,0,0" Padding="12,10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#9B59B6" Offset="0"/>
                            <GradientStop Color="#8E44AD" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <TextBlock x:Name="txtHistoriaTitle" Text="HISTORIA ZMIAN" FontSize="13" Foreground="White" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="WyÅ›wietlono: " Foreground="#D7BDE2" FontSize="11" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtDisplayedCount" Text="0" FontSize="12" Foreground="White" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <DataGrid Grid.Row="1" x:Name="dgHistoria"
                          Style="{StaticResource ModernDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource ModernDataGridHeaderStyle}"
                          AutoGenerateColumns="False"
                          CanUserSortColumns="True"
                          MouseDoubleClick="DgHistoria_MouseDoubleClick"
                          Margin="5"/>
            </Grid>
        </Border>

        <!-- Stopka -->
        <Border Grid.Row="3" Background="#2C3E50" Padding="12,8">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Wybierz towar z listy aby zobaczyÄ‡ zmiany ceny/iloÅ›ci dla tego produktu  |  Kliknij dwukrotnie na wiersz aby edytowaÄ‡ zamÃ³wienie"
                               Foreground="#95A5A6" FontSize="11" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Eksport do Excel" Padding="12,6"
                            Background="#27AE60" Foreground="White" BorderThickness="0"
                            Click="BtnExport_Click" Cursor="Hand" Margin="0,0,10,0" FontSize="11"/>
                    <Button Content="Zamknij" Padding="12,6"
                            Background="#95A5A6" Foreground="White" BorderThickness="0"
                            Click="BtnClose_Click" Cursor="Hand" FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
