<Window x:Class="Kalendarz1.WPF.HistoriaZmianWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historia zmian zamówień"
        Width="1400" Height="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F0F2F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Styl przycisku -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl ComboBox -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDE1E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <!-- Styl DataGrid -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E9ECEF"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Styl nagłówka DataGrid -->
        <Style x:Key="ModernDataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
        </Style>

        <!-- Styl wiersza DataGrid -->
        <Style x:Key="ModernDataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8F4FD"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#D4E9F7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl komórki DataGrid -->
        <Style x:Key="ModernDataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl etykiety filtra -->
        <Style x:Key="FilterLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#5D6D7E"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Padding="20,16">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#8E44AD" Offset="0"/>
                    <GradientStop Color="#9B59B6" Offset="0.5"/>
                    <GradientStop Color="#A569BD" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <StackPanel>
                    <TextBlock Text="HISTORIA ZMIAN ZAMÓWIEŃ" FontSize="22" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="txtDateRange" Text="Przeglądaj wszystkie zmiany w zamówieniach"
                               FontSize="13" Foreground="#D7BDE2" Margin="0,4,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Border Background="#27AE60" CornerRadius="8" Padding="16,8" Margin="8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Łącznie zmian:" FontSize="12" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtTotalChanges" Text="0" FontSize="18" FontWeight="Bold"
                                       Foreground="White" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Panel filtrów -->
        <Border Grid.Row="1" Background="White" Padding="16,12" BorderBrush="#E5E8EB" BorderThickness="0,0,0,1">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Opacity="0.05" BlurRadius="4" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Filtry -->
                <WrapPanel Grid.Column="0" VerticalAlignment="Center">
                    <!-- Towar -->
                    <Border Background="#FEF3F3" CornerRadius="6" Padding="10,6" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Towar:" Style="{StaticResource FilterLabelStyle}" Foreground="#C0392B" FontWeight="Bold"/>
                            <ComboBox x:Name="cmbTowar" Width="220" Style="{StaticResource ModernComboBoxStyle}"
                                      SelectionChanged="Filter_SelectionChanged"/>
                        </StackPanel>
                    </Border>

                    <!-- Typ zmiany -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                        <TextBlock Text="Typ:" Style="{StaticResource FilterLabelStyle}"/>
                        <ComboBox x:Name="cmbTyp" Width="130" Style="{StaticResource ModernComboBoxStyle}"
                                  SelectionChanged="Filter_SelectionChanged"/>
                    </StackPanel>

                    <!-- Odbiorca -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                        <TextBlock Text="Odbiorca:" Style="{StaticResource FilterLabelStyle}"/>
                        <ComboBox x:Name="cmbOdbiorca" Width="180" Style="{StaticResource ModernComboBoxStyle}"
                                  SelectionChanged="Filter_SelectionChanged"/>
                    </StackPanel>

                    <!-- Handlowiec -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                        <TextBlock Text="Handlowiec:" Style="{StaticResource FilterLabelStyle}"/>
                        <ComboBox x:Name="cmbHandlowiec" Width="140" Style="{StaticResource ModernComboBoxStyle}"
                                  SelectionChanged="Filter_SelectionChanged"/>
                    </StackPanel>

                    <!-- Kto edytował -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                        <TextBlock Text="Edytował:" Style="{StaticResource FilterLabelStyle}"/>
                        <ComboBox x:Name="cmbKtoEdytowal" Width="140" Style="{StaticResource ModernComboBoxStyle}"
                                  SelectionChanged="Filter_SelectionChanged"/>
                    </StackPanel>
                </WrapPanel>

                <!-- Przyciski -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="btnClearFilters" Content="Wyczyść filtry"
                            Style="{StaticResource ModernButtonStyle}" Background="#E74C3C"
                            Click="BtnClearFilters_Click" Margin="0,0,8,0"/>
                    <Button x:Name="btnRefresh" Content="Odśwież"
                            Style="{StaticResource ModernButtonStyle}" Background="#3498DB"
                            Click="BtnRefresh_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Główna zawartość - tabela zmian -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Margin="16,12,16,8">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Opacity="0.08" BlurRadius="12"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Nagłówek tabeli -->
                <Border Grid.Row="0" CornerRadius="8,8,0,0" Padding="16,12">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#8E44AD" Offset="0"/>
                            <GradientStop Color="#9B59B6" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="txtHistoriaTitle" Text="HISTORIA ZMIAN" FontSize="14"
                                       Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Wyświetlono:" Foreground="#D7BDE2" FontSize="12" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtDisplayedCount" Text="0" FontSize="14" Foreground="White"
                                       FontWeight="Bold" Margin="6,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock Text="wierszy" Foreground="#D7BDE2" FontSize="12"
                                       VerticalAlignment="Center" Margin="4,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <DataGrid Grid.Row="1" x:Name="dgHistoria"
                          Style="{StaticResource ModernDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource ModernDataGridHeaderStyle}"
                          RowStyle="{StaticResource ModernDataGridRowStyle}"
                          CellStyle="{StaticResource ModernDataGridCellStyle}"
                          AutoGenerateColumns="False"
                          CanUserSortColumns="True"
                          MouseDoubleClick="DgHistoria_MouseDoubleClick"
                          Margin="0"/>
            </Grid>
        </Border>

        <!-- Stopka -->
        <Border Grid.Row="3" Background="#2C3E50" Padding="16,10">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Dwuklik na wiersz" Foreground="#F39C12" FontSize="12"
                               FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Text=" otwiera edycję zamówienia" Foreground="#95A5A6" FontSize="12"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="  |  " Foreground="#5D6D7E" FontSize="12" VerticalAlignment="Center"/>
                    <TextBlock Text="Wybierz towar" Foreground="#3498DB" FontSize="12"
                               FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Text=" aby filtrować po produkcie" Foreground="#95A5A6" FontSize="12"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Eksport do Excel" Style="{StaticResource ModernButtonStyle}"
                            Background="#27AE60" Click="BtnExport_Click" Margin="0,0,10,0"/>
                    <Button Content="Zamknij" Style="{StaticResource ModernButtonStyle}"
                            Background="#7F8C8D" Click="BtnClose_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
