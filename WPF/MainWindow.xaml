<Window x:Class="Kalendarz1.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalendarz1.WPF"
        mc:Ignorable="d"
        Title="Podsumowanie Tygodniowe Zamówień" 
        Height="768" Width="1280"
        WindowState="Maximized"
        Background="#F5F7FA"
        FontFamily="Segoe UI">

    <Window.Resources>

        <ResourceDictionary>
            <!-- Kolory -->
            <SolidColorBrush x:Key="PrimaryGreen" Color="#5C8A3A"/>
            <SolidColorBrush x:Key="PrimaryGreenHover" Color="#4B732F"/>
            <SolidColorBrush x:Key="PrimaryGreenPressed" Color="#3A5C24"/>
            <SolidColorBrush x:Key="TextDark" Color="#2C3E50"/>
            <SolidColorBrush x:Key="TextLight" Color="#7F8C8D"/>
            <SolidColorBrush x:Key="BackgroundLight" Color="#F5F7FA"/>
            <SolidColorBrush x:Key="LightGreen" Color="#E0F0D6"/>
            <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>

            <!-- Cienie -->
            <DropShadowEffect x:Key="DropShadowEffect" ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
            <DropShadowEffect x:Key="CardShadow" ShadowDepth="0" Color="#000000" Opacity="0.1" BlurRadius="10"/>

            <!-- Konwertery -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

            <!-- Style przycisków akcji -->
            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="MinWidth" Value="95"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Margin" Value="3,0"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                                </Border.Effect>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style przycisków nawigacyjnych -->
            <Style x:Key="NavigationButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource BackgroundLight}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource BorderColor}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style przycisków dni -->
            <Style x:Key="DayButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource BackgroundLight}"/>
                <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Width" Value="75"/>
                <Setter Property="Height" Value="45"/>
                <Setter Property="Margin" Value="2,0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource LightGreen}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style TextBox -->
            <Style x:Key="FilterTextBoxStyle" TargetType="TextBox">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <Grid>
                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                Margin="{TemplateBinding Padding}"
                                                VerticalAlignment="Center"/>
                                    <TextBlock x:Name="Watermark" 
                                             Text="{TemplateBinding Tag}"
                                             Foreground="#7F8C8D"
                                             Margin="{TemplateBinding Padding}"
                                             VerticalAlignment="Center"
                                             IsHitTestVisible="False"
                                             Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style ComboBox -->
            <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="White"/>
            </Style>

            <!-- Style DataGrid -->
            <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="GridLinesVisibility" Value="None"/>
                <Setter Property="HeadersVisibility" Value="Column"/>
                <Setter Property="RowHeight" Value="35"/>
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="CanUserAddRows" Value="False"/>
                <Setter Property="CanUserDeleteRows" Value="False"/>
                <Setter Property="SelectionMode" Value="Single"/>
                <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="ColumnHeaderStyle">
                    <Setter.Value>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#2C3E50"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="Height" Value="40"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </Setter.Value>
                </Setter>
                <Setter Property="CellStyle">
                    <Setter.Value>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}" 
                                              BorderThickness="{TemplateBinding BorderThickness}"
                                              BorderBrush="{TemplateBinding BorderBrush}"
                                              Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#3498DB"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Setter.Value>
                </Setter>
                <Setter Property="RowStyle">
                    <Setter.Value>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource LightGreen}"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#3498DB"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style paneli -->
            <Style x:Key="PanelBorderStyle" TargetType="Border">
                <Setter Property="Background" Value="White"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            </Style>

            <!-- Style nagłówków -->
            <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>

            <!-- Style TextBox notatek -->
            <Style x:Key="NotesTextBoxStyle" TargetType="TextBox">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="AcceptsReturn" Value="True"/>
                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                <Setter Property="IsReadOnly" Value="True"/>
            </Style>

            <!-- Style wyrównania tekstu dla DataGrid -->
            <Style x:Key="RightAlignedCellStyle" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="Padding" Value="0,0,8,0"/>
            </Style>

            <Style x:Key="CenterAlignedCellStyle" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>

            <Style x:Key="BoldCellStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Panel -->
        <Border Grid.Row="0" Background="White" 
                BorderBrush="#E0E0E0" BorderThickness="0,0,0,1"
                Effect="{StaticResource DropShadowEffect}">
            <Grid Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Week Navigation -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="btnPreviousWeek" Style="{StaticResource NavigationButtonStyle}"
                            Content="&#x25C0;" FontSize="16" Width="40" Height="40"
                            Click="BtnPreviousWeek_Click"/>

                    <TextBlock x:Name="lblWeekRange" 
                               VerticalAlignment="Center"
                               FontSize="11" FontWeight="SemiBold"
                               Margin="10,0" Width="90" TextAlignment="Center"/>

                    <Button x:Name="btnNextWeek" Style="{StaticResource NavigationButtonStyle}"
                            Content="&#x25B6;" FontSize="16" Width="40" Height="40"
                            Click="BtnNextWeek_Click"/>
                </StackPanel>

                <!-- Day Buttons -->
                <StackPanel x:Name="panelDays" Grid.Column="1" Orientation="Horizontal" 
                           Margin="20,0,0,0" VerticalAlignment="Center"/>

                <!-- Action Buttons - Only New and Print -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" 
                           HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button x:Name="btnNew" Style="{StaticResource ActionButtonStyle}" 
                            Background="#2ECC71" Content="➕ Nowe" Width="110" 
                            Click="BtnNew_Click"
                            ToolTip="Utwórz nowe zamówienie"
                            FontSize="14" Height="42"/>

                    <Button x:Name="btnPrint" Style="{StaticResource ActionButtonStyle}"
                            Background="#3498DB" Content="🖨️ Drukuj" Width="110"
                            Click="BtnPrint_Click" Margin="5,0"
                            ToolTip="Drukuj zestawienie zamówień"
                            FontSize="14" Height="42"/>

                    <Button x:Name="btnDelete" Style="{StaticResource ActionButtonStyle}"
                            Background="#2C3E50" Content="🗑️ Usuń" Width="95"
                            Click="BtnDelete_Click"
                            Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70*"/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Orders -->
            <Grid Grid.Column="0" Margin="10,10,5,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Filters -->
                <Border Grid.Row="0" Background="#ECEFF1" 
                        Padding="10,8" CornerRadius="5" Margin="0,0,0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtFilterRecipient" Grid.Column="0" 
                                 Style="{StaticResource FilterTextBoxStyle}"
                                 Tag="Filtruj odbiorcę..."
                                 Margin="0,0,5,0"
                                 TextChanged="TxtFilterRecipient_TextChanged"/>

                        <ComboBox x:Name="cbFilterSalesman" Grid.Column="1"
                                  Style="{StaticResource FilterComboBoxStyle}"
                                  Margin="0,0,5,0"
                                  SelectionChanged="CbFilter_SelectionChanged"/>

                        <ComboBox x:Name="cbFilterProduct" Grid.Column="2"
                                  DisplayMemberPath="Value"
                                  SelectedValuePath="Key"
                                  Style="{StaticResource FilterComboBoxStyle}"
                                  Margin="0,0,5,0"
                                  SelectionChanged="CbFilterProduct_SelectionChanged"/>

                        <CheckBox x:Name="chkShowReleasesWithoutOrders" Grid.Column="3"
                                  Content="Pokaż wydania bez zam."
                                  VerticalAlignment="Center"
                                  Margin="5,0"
                                  Checked="ChkShowReleases_Changed"
                                  Unchecked="ChkShowReleases_Changed"/>

                        <RadioButton x:Name="rbPickupDate" Grid.Column="4"
                                    Content="Data odbioru"
                                    GroupName="DateFilter"
                                    VerticalAlignment="Center"
                                    Margin="10,0,5,0"
                                    Checked="RbDateFilter_Checked"/>

                        <RadioButton x:Name="rbSlaughterDate" Grid.Column="5"
                                    Content="Data uboju"
                                    GroupName="DateFilter"
                                    VerticalAlignment="Center"
                                    Margin="5,0,0,0"
                                    Checked="RbDateFilter_Checked"/>
                    </Grid>
                </Border>

                <!-- Orders DataGrid -->
                <DataGrid x:Name="dgOrders" Grid.Row="1" 
                          Style="{StaticResource ModernDataGridStyle}"
                          SelectionChanged="DgOrders_SelectionChanged"
                          MouseDoubleClick="DgOrders_MouseDoubleClick"
                          MouseRightButtonUp="DgOrders_MouseRightButtonUp">

                    <DataGrid.ContextMenu>
                        <ContextMenu x:Name="contextMenuOrders">
                            <ContextMenu.Resources>
                                <Style TargetType="MenuItem">
                                    <Setter Property="Height" Value="36"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Padding" Value="5,4"/>
                                </Style>
                            </ContextMenu.Resources>

                            <!-- Główne akcje -->
                            <MenuItem x:Name="menuDuplikuj" Header="🔄 Duplikuj zamówienie" 
                                      Click="MenuDuplikuj_Click"
                                      FontWeight="Bold"
                                      ToolTip="Skopiuj zamówienie na inny dzień"/>

                            <MenuItem x:Name="menuCykliczne" Header="📅 Zamówienia cykliczne" 
                                      Click="MenuCykliczne_Click"
                                      ToolTip="Utwórz serię zamówień"/>

                            <MenuItem x:Name="menuModyfikuj" Header="✏️ Modyfikuj zamówienie" 
                                      Click="MenuModyfikuj_Click"
                                      ToolTip="Edytuj szczegóły zamówienia"/>

                            <MenuItem x:Name="menuNotatka" Header="📝 Dodaj/Edytuj notatkę" 
                                      Click="MenuNotatka_Click"
                                      ToolTip="Dodaj lub zmień notatkę"/>

                            <Separator/>

                            <!-- Informacje -->
                            <MenuItem x:Name="menuSzczegolyZamowienia" Header="📊 Szczegóły zamówienia" 
                                      Click="MenuSzczegolyZamowienia_Click"
                                      Background="#E8F5E9"
                                      ToolTip="Wyświetl pełne informacje"/>

                            <MenuItem x:Name="menuSzczegolyPlatnosci" Header="💳 Płatności kontrahenta" 
                                      Click="MenuSzczegolyPlatnosci_Click"
                                      Background="#E3F2FD"
                                      ToolTip="Sprawdź stan rozliczeń"/>

                            <MenuItem x:Name="menuHistoriaZamowien" Header="📋 Historia zamówień" 
                                      Click="MenuHistoriaZamowien_Click"
                                      Background="#FFF8E1"
                                      ToolTip="Zobacz poprzednie zamówienia"/>

                            <Separator/>

                            <!-- Odświeżanie -->
                            <MenuItem x:Name="menuOdswiez" Header="🔄 Odśwież dane" 
                                      Click="MenuOdswiez_Click"
                                      FontWeight="SemiBold"
                                      ToolTip="Zaktualizuj widok"/>

                            <Separator/>

                            <!-- Akcje niebezpieczne -->
                            <MenuItem x:Name="menuAnuluj" Header="❌ Anuluj zamówienie" 
                                      Click="MenuAnuluj_Click"
                                      Foreground="#E74C3C"
                                      FontWeight="Bold"
                                      ToolTip="Oznacz jako anulowane"/>

                            <MenuItem x:Name="menuPrzywroc" Header="✅ Przywróć zamówienie" 
                                      Click="MenuPrzywroc_Click"
                                      Foreground="#27AE60"
                                      FontWeight="Bold"
                                      Visibility="Collapsed"
                                      ToolTip="Cofnij anulowanie"/>

                            <MenuItem x:Name="menuUsun"
                                      Header="🗑️ USUŃ TRWALE zamówienie" 
                                      Click="MenuUsun_Click"
                                      Foreground="#8B0000"
                                      FontWeight="Bold"
                                      Background="#FFE6E6"
                                      Visibility="Collapsed"
                                      ToolTip="Nieodwracalne usunięcie"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
            </Grid>

            <!-- Right Panel - Details -->
            <Grid Grid.Column="1" Margin="5,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="55*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="25*"/>
                </Grid.RowDefinitions>

                <!-- Order Details -->
                <Border Grid.Row="0" Style="{StaticResource PanelBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="70"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                       Text="Szczegóły / Notatki zamówienia:"
                       Style="{StaticResource SectionHeaderStyle}"/>

                        <DataGrid x:Name="dgDetails" Grid.Row="1" 
                      Style="{StaticResource ModernDataGridStyle}"
                      AutoGenerateColumns="False"
                      Margin="0,5,0,0"/>

                        <TextBox x:Name="txtNotes" Grid.Row="2" 
                     Style="{StaticResource NotesTextBoxStyle}"
                     Margin="0,5,0,0"/>
                    </Grid>
                </Border>

                <!-- Section Header -->
                <TextBlock Grid.Row="1" 
               Text="Podsumowanie produktów dla wybranego dnia"
               Style="{StaticResource SectionHeaderStyle}"
               Margin="0,10,0,5"/>

                <!-- Product Aggregation -->
                <Border Grid.Row="2" Style="{StaticResource PanelBorderStyle}">
                    <DataGrid x:Name="dgAggregation"
                  Style="{StaticResource ModernDataGridStyle}"
                  AutoGenerateColumns="False"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>