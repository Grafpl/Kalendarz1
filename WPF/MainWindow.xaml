<Window x:Class="Kalendarz1.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalendarz1.WPF"
        mc:Ignorable="d"
        Title="Podsumowanie Tygodniowe Zamówień" 
        Height="768" Width="1280"
        WindowState="Maximized"
        Background="#F5F7FA"
        FontFamily="Segoe UI">

    <Window.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="PrimaryGreen" Color="#5C8A3A"/>
            <SolidColorBrush x:Key="PrimaryGreenHover" Color="#4B732F"/>
            <SolidColorBrush x:Key="PrimaryGreenPressed" Color="#3A5C24"/>
            <SolidColorBrush x:Key="TextDark" Color="#2C3E50"/>
            <SolidColorBrush x:Key="TextLight" Color="#7F8C8D"/>
            <SolidColorBrush x:Key="BackgroundLight" Color="#F5F7FA"/>
            <SolidColorBrush x:Key="LightGreen" Color="#E0F0D6"/>
            <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>

            <DropShadowEffect x:Key="DropShadowEffect" ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
            <DropShadowEffect x:Key="CardShadow" ShadowDepth="0" Color="#000000" Opacity="0.1" BlurRadius="10"/>

            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="MinWidth" Value="95"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Margin" Value="3,0"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

            <Style x:Key="NavigationButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="#2C3E50"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

            <Style x:Key="DayButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#F5F7FA"/>
                <Setter Property="Foreground" Value="#2C3E50"/>
                <Setter Property="FontSize" Value="9"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Width" Value="60"/>
                <Setter Property="Height" Value="38"/>
                <Setter Property="Margin" Value="1,0"/>
            </Style>

            <Style x:Key="FilterTextBoxStyle" TargetType="TextBox">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

            <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="White"/>
            </Style>

            <Style x:Key="ModernDataGridHeaderStyle" TargetType="DataGridColumnHeader">
                <Setter Property="Background" Value="#2C3E50"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
            </Style>

            <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="GridLinesVisibility" Value="None"/>
                <Setter Property="HeadersVisibility" Value="Column"/>
                <Setter Property="RowHeight" Value="35"/>
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="CanUserAddRows" Value="False"/>
                <Setter Property="CanUserDeleteRows" Value="False"/>
                <Setter Property="SelectionMode" Value="Single"/>
                <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="ColumnHeaderStyle" Value="{StaticResource ModernDataGridHeaderStyle}"/>
            </Style>

            <Style x:Key="PanelBorderStyle" TargetType="Border">
                <Setter Property="Background" Value="White"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            </Style>

            <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="#2C3E50"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>

            <Style x:Key="NotesTextBoxStyle" TargetType="TextBox">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="AcceptsReturn" Value="True"/>
                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                <Setter Property="IsReadOnly" Value="True"/>
            </Style>

            <Style x:Key="RightAlignedCellStyle" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="Padding" Value="0,0,8,0"/>
            </Style>

            <Style x:Key="CenterAlignedCellStyle" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>

            <Style x:Key="BoldCellStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" 
                BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
            </Border.Effect>
            <Grid Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="btnPreviousWeek" Style="{StaticResource NavigationButtonStyle}"
                            Content="&#x25C0;" FontSize="16" Width="40" Height="40"
                            Click="BtnPreviousWeek_Click"/>

                    <TextBlock x:Name="lblWeekRange" 
                               VerticalAlignment="Center"
                               FontSize="11" FontWeight="SemiBold"
                               Margin="10,0" Width="90" TextAlignment="center"/>

                    <Button x:Name="btnNextWeek" Style="{StaticResource NavigationButtonStyle}"
                            Content="&#x25B6;" FontSize="16" Width="40" Height="40"
                            Click="BtnNextWeek_Click"/>
                </StackPanel>

                <StackPanel x:Name="panelDays" Grid.Column="1" Orientation="Horizontal" 
                            Margin="20,0,0,0" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="3" Orientation="Horizontal" 
                            HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button x:Name="btnNew" Style="{StaticResource ActionButtonStyle}" 
                            Background="#2ECC71" Content="➕ Nowe" Width="110" 
                            Click="BtnNew_Click" FontSize="14" Height="42"/>

                    <Button x:Name="btnPrint" Style="{StaticResource ActionButtonStyle}"
                            Background="#3498DB" Content="🖨️ Drukuj" Width="110"
                            Click="BtnPrint_Click" Margin="5,0" FontSize="14" Height="42"/>

                    <Button x:Name="btnRefresh" Style="{StaticResource ActionButtonStyle}"
                            Background="#9B59B6" Content="🔄 Odśwież" Width="110"
                            Click="BtnRefresh_Click" Margin="5,0" FontSize="14" Height="42"/>

                    <Button x:Name="btnDelete" Style="{StaticResource ActionButtonStyle}"
                            Background="#2C3E50" Content="🗑️ Usuń" Width="95"
                            Click="BtnDelete_Click" Visibility="Collapsed"/>
                    <!-- W sekcji Action Buttons, przed btnDelete -->
                    <ComboBox x:Name="cbLayoutPreset" 
          Width="100" Height="40"
          Margin="5,0"
          SelectionChanged="CbLayoutPreset_SelectionChanged"
          VerticalContentAlignment="Center"
          FontSize="11">
                        <ComboBoxItem Content="Mały" Tag="Small"/>
                        <ComboBoxItem Content="Średni" Tag="Medium" IsSelected="True"/>
                        <ComboBoxItem Content="Duży" Tag="Large"/>
                        <ComboBoxItem Content="XL" Tag="ExtraLarge"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <Grid x:Name="mainContentGrid" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- PASEK FILTRÓW I PRODUKTÓW - na całą szerokość -->
            <Border Grid.Row="0" Background="#ECEFF1"
                    Padding="8,6" CornerRadius="5" Margin="10,10,10,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="85"/>
                        <ColumnDefinition Width="85"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="txtFilterRecipient" Grid.Column="0"
                             Style="{StaticResource FilterTextBoxStyle}"
                             Tag="Odbiorca..." Margin="0,0,5,0"
                             TextChanged="TxtFilterRecipient_TextChanged"/>

                    <ComboBox x:Name="cbFilterSalesman" Grid.Column="1"
                              Style="{StaticResource FilterComboBoxStyle}" Margin="0,0,5,0"
                              SelectionChanged="CbFilter_SelectionChanged"/>

                    <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center" Margin="5,0">
                        <RadioButton x:Name="rbSwieze" Content="Św" GroupName="ProductCatalog"
                                     VerticalAlignment="Center" Margin="0,0,0,2" IsChecked="True"
                                     Checked="RbProductCatalog_Checked"/>
                        <RadioButton x:Name="rbMrozone" Content="Mr" GroupName="ProductCatalog"
                                     VerticalAlignment="Center"
                                     Checked="RbProductCatalog_Checked"/>
                    </StackPanel>

                    <ScrollViewer Grid.Column="3" HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Disabled" Margin="5,0,0,0">
                        <WrapPanel x:Name="pnlProductButtons" Orientation="Horizontal"/>
                    </ScrollViewer>

                    <!-- Hidden elements for compatibility -->
                    <ComboBox x:Name="cbFilterProduct" Visibility="Collapsed"
                              DisplayMemberPath="Value" SelectedValuePath="Key"/>
                    <CheckBox x:Name="chkShowReleasesWithoutOrders" Visibility="Collapsed"
                              Checked="ChkShowReleases_Changed" Unchecked="ChkShowReleases_Changed"/>
                    <CheckBox x:Name="chkShowAnulowane" Visibility="Collapsed" IsChecked="False"
                              Checked="ChkShowAnulowane_Changed" Unchecked="ChkShowAnulowane_Changed"/>
                    <RadioButton x:Name="rbPickupDate" Visibility="Collapsed" GroupName="DateFilter"
                                 Checked="RbDateFilter_Checked"/>
                    <RadioButton x:Name="rbSlaughterDate" Visibility="Collapsed" GroupName="DateFilter"
                                 Checked="RbDateFilter_Checked" IsChecked="True"/>
                </Grid>
            </Border>

            <!-- ZAWARTOŚĆ - dwie kolumny -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="leftColumnDef" Width="60*"/>
                    <ColumnDefinition x:Name="rightColumnDef" Width="40*"/>
                </Grid.ColumnDefinitions>

                <!-- Lewa kolumna - zakładki -->
                <TabControl x:Name="tabOrders" Grid.Column="0" Background="Transparent" BorderThickness="0"
                            Margin="10,0,5,10" SelectionChanged="TabOrders_SelectionChanged">
                    <TabItem Header="Zamówienia" FontSize="12" FontWeight="SemiBold">
                        <DataGrid x:Name="dgOrders"
                                  Style="{StaticResource ModernDataGridStyle}"
                                  SelectionChanged="DgOrders_SelectionChanged"
                                  MouseDoubleClick="DgOrders_MouseDoubleClick"
                                  MouseRightButtonUp="DgOrders_MouseRightButtonUp">
                            <DataGrid.ContextMenu>
                                <ContextMenu x:Name="contextMenuOrders">
                                    <MenuItem x:Name="menuDuplikuj" Header="🔄 Duplikuj zamówienie" Click="MenuDuplikuj_Click"/>
                                    <MenuItem x:Name="menuCykliczne" Header="📅 Zamówienia cykliczne" Click="MenuCykliczne_Click"/>
                                    <MenuItem x:Name="menuModyfikuj" Header="✏️ Modyfikuj zamówienie" Click="MenuModyfikuj_Click"/>
                                    <MenuItem x:Name="menuNotatka" Header="📝 Dodaj/Edytuj notatkę" Click="MenuNotatka_Click"/>
                                    <Separator/>
                                    <MenuItem x:Name="menuSzczegolyZamowienia" Header="📊 Szczegóły zamówienia" Click="MenuSzczegolyZamowienia_Click"/>
                                    <MenuItem x:Name="menuSzczegolyPlatnosci" Header="💳 Płatności kontrahenta" Click="MenuSzczegolyPlatnosci_Click"/>
                                    <MenuItem x:Name="menuHistoriaZamowien" Header="📋 Historia zamówień" Click="MenuHistoriaZamowien_Click"/>
                                    <MenuItem x:Name="menuHistoriaZmian" Header="📜 Historia zmian zamówienia" Click="MenuHistoriaZmian_Click"/>
                                    <MenuItem x:Name="menuTransportInfo" Header="🚚 Informacje o transporcie" Click="MenuTransportInfo_Click"/>
                                    <Separator/>
                                    <MenuItem x:Name="menuShowAnulowane" Header="Pokaż anulowane" IsCheckable="True"
                                              Click="MenuShowAnulowane_Click"/>
                                    <MenuItem x:Name="menuShowWydaniaBezZam" Header="Pokaż wydania bez zam." IsCheckable="True"
                                              Click="MenuShowWydaniaBezZam_Click"/>
                                    <Separator/>
                                    <MenuItem x:Name="menuOdswiez" Header="🔄 Odśwież dane" Click="MenuOdswiez_Click"/>
                                    <Separator/>
                                    <MenuItem x:Name="menuAnuluj" Header="❌ Anuluj zamówienie" Click="MenuAnuluj_Click"/>
                                    <MenuItem x:Name="menuPrzywroc" Header="✅ Przywróć zamówienie" Click="MenuPrzywroc_Click" Visibility="Collapsed"/>
                                    <MenuItem x:Name="menuUsun" Header="🗑️ USUŃ TRWALE zamówienie" Click="MenuUsun_Click" Visibility="Collapsed"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Transport" FontSize="12" FontWeight="SemiBold">
                        <DataGrid x:Name="dgTransport"
                                  Style="{StaticResource ModernDataGridStyle}"
                                  AutoGenerateColumns="False"
                                  SelectionChanged="DgTransport_SelectionChanged"/>
                    </TabItem>
                    <TabItem Header="Historia zmian" FontSize="12" FontWeight="SemiBold">
                        <DataGrid x:Name="dgHistoriaZmian"
                                  Style="{StaticResource ModernDataGridStyle}"
                                  AutoGenerateColumns="False"
                                  CanUserSortColumns="True"/>
                    </TabItem>
                    <TabItem x:Name="tabDashboard" Header="📊 Dashboard" FontSize="12" FontWeight="SemiBold">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <Grid Margin="10" Background="#F0F2F5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- SEKCJA 1: KARTY KPI Z GRADIENTAMI -->
                                <UniformGrid Grid.Row="0" Rows="1" Columns="4" Margin="0,0,0,15">

                                    <!-- KPI 1: PLAN PRODUKCJI - Niebieski gradient -->
                                    <Border Margin="5" CornerRadius="12">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="10"/>
                                        </Border.Effect>
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#667eea" Offset="0"/>
                                                <GradientStop Color="#764ba2" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid Margin="20,15">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Text="📦 PLAN PRODUKCJI" FontSize="11" Foreground="#E8E8FF" FontWeight="SemiBold"/>
                                            <TextBlock x:Name="txtKpiPlan" Grid.Row="1" Text="0 kg" FontSize="28" Foreground="White" FontWeight="Bold" Margin="0,8,0,0"/>
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
                                                <Border Background="#FFFFFF30" CornerRadius="10" Padding="8,3">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Surowiec: " FontSize="10" Foreground="#E0E0FF"/>
                                                        <TextBlock x:Name="txtKpiSurowiec" Text="0 kg" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="Wydajność: " FontSize="10" Foreground="#D0D0FF"/>
                                                <TextBlock x:Name="txtKpiWydajnosc" Text="78%" FontSize="10" Foreground="#90EE90" FontWeight="Bold"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- KPI 2: FAKTYCZNA PRODUKCJA - Zielony gradient -->
                                    <Border Margin="5" CornerRadius="12">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="10"/>
                                        </Border.Effect>
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#11998e" Offset="0"/>
                                                <GradientStop Color="#38ef7d" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid Margin="20,15">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Text="🏭 PRODUKCJA" FontSize="11" Foreground="#E8FFE8" FontWeight="SemiBold"/>
                                            <TextBlock x:Name="txtKpiWydania" Grid.Row="1" Text="0 kg" FontSize="28" Foreground="White" FontWeight="Bold" Margin="0,8,0,0"/>
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
                                                <Border Background="#FFFFFF30" CornerRadius="10" Padding="8,3">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="vs Plan: " FontSize="10" Foreground="#E0FFE0"/>
                                                        <TextBlock x:Name="txtKpiWydaniaVsPlan" Text="0%" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="Wydanych: " FontSize="10" Foreground="#D0FFD0"/>
                                                <TextBlock x:Name="txtKpiWydaniaKlienci" Text="0" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- KPI 3: ZAMÓWIENIA - Pomarańczowy gradient -->
                                    <Border Margin="5" CornerRadius="12">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="10"/>
                                        </Border.Effect>
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#f2994a" Offset="0"/>
                                                <GradientStop Color="#f2c94c" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid Margin="20,15">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Text="📋 ZAMÓWIENIA" FontSize="11" Foreground="#FFF8E8" FontWeight="SemiBold"/>
                                            <TextBlock x:Name="txtKpiZamowienia" Grid.Row="1" Text="0 kg" FontSize="28" Foreground="White" FontWeight="Bold" Margin="0,8,0,0"/>
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
                                                <Border Background="#FFFFFF30" CornerRadius="10" Padding="8,3">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Klientów: " FontSize="10" Foreground="#FFF0D0"/>
                                                        <TextBlock x:Name="txtKpiZamowieniaKlienci" Text="0" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="Różnica: " FontSize="10" Foreground="#FFE8C0"/>
                                                <TextBlock x:Name="txtKpiRoznica" Text="0 kg" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- KPI 4: REALIZACJA - Czerwony/Różowy gradient -->
                                    <Border Margin="5" CornerRadius="12">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="10"/>
                                        </Border.Effect>
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#eb3349" Offset="0"/>
                                                <GradientStop Color="#f45c43" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid Margin="20,15">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Text="📈 REALIZACJA" FontSize="11" Foreground="#FFE8E8" FontWeight="SemiBold"/>
                                            <TextBlock x:Name="txtKpiRealizacja" Grid.Row="1" Text="0%" FontSize="28" Foreground="White" FontWeight="Bold" Margin="0,8,0,0"/>
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
                                                <Border Background="#FFFFFF30" CornerRadius="10" Padding="8,3">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Status: " FontSize="10" Foreground="#FFD0D0"/>
                                                        <TextBlock x:Name="txtKpiRealizacjaStatus" Text="Oczekuje" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="Bilans: " FontSize="10" Foreground="#FFD0D0"/>
                                                <TextBlock x:Name="txtKpiRealizacjaInfo" Text="0 kg" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </UniformGrid>

                                <!-- SEKCJA 2: BILANS I WYDAJNOŚĆ -->
                                <Grid Grid.Row="1" Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="300"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Lewa strona: Bilans produktów -->
                                    <Border Grid.Column="0" Margin="5,0,10,0" CornerRadius="12" Background="White">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="10"/>
                                        </Border.Effect>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- Nagłówek -->
                                            <Border Grid.Row="0" CornerRadius="12,12,0,0" Padding="20,12">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#2c3e50" Offset="0"/>
                                                        <GradientStop Color="#3498db" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <Grid>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="📊 BILANS PRODUKTÓW" FontSize="14" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <Border Background="#27AE60" CornerRadius="12" Padding="12,5" Margin="5,0">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="✓ " FontSize="12" Foreground="White" FontWeight="Bold"/>
                                                                <TextBlock x:Name="txtBilansOk" Text="0" FontSize="12" Foreground="White" FontWeight="Bold"/>
                                                            </StackPanel>
                                                        </Border>
                                                        <Border Background="#F39C12" CornerRadius="12" Padding="12,5" Margin="5,0">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="⚠ " FontSize="12" Foreground="White" FontWeight="Bold"/>
                                                                <TextBlock x:Name="txtBilansUwaga" Text="0" FontSize="12" Foreground="White" FontWeight="Bold"/>
                                                            </StackPanel>
                                                        </Border>
                                                        <Border Background="#E74C3C" CornerRadius="12" Padding="12,5" Margin="5,0">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="✗ " FontSize="12" Foreground="White" FontWeight="Bold"/>
                                                                <TextBlock x:Name="txtBilansBrak" Text="0" FontSize="12" Foreground="White" FontWeight="Bold"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>

                                            <!-- Tabela -->
                                            <DataGrid x:Name="dgDashboardProdukty" Grid.Row="1"
                                                      Style="{StaticResource ModernDataGridStyle}"
                                                      AutoGenerateColumns="False"
                                                      CanUserSortColumns="True"
                                                      MaxHeight="280"
                                                      Margin="5"/>
                                        </Grid>
                                    </Border>

                                    <!-- Prawa strona: Wydajność -->
                                    <Border Grid.Column="1" Margin="0,0,5,0" CornerRadius="12" Background="White">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="10"/>
                                        </Border.Effect>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- Nagłówek -->
                                            <Border Grid.Row="0" CornerRadius="12,12,0,0" Padding="15,12">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#8e44ad" Offset="0"/>
                                                        <GradientStop Color="#3498db" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <TextBlock Text="⚙️ WYDAJNOŚĆ" FontSize="14" Foreground="White" FontWeight="Bold"/>
                                            </Border>

                                            <!-- Zawartość -->
                                            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="15">
                                                <TextBlock x:Name="txtWydajnoscGlowna" Text="78%" FontSize="56" Foreground="#2c3e50" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Wydajność tuszki" FontSize="12" Foreground="#7f8c8d" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                                                <!-- Pasek postępu -->
                                                <Grid Margin="0,0,0,20">
                                                    <Border Background="#E0E0E0" CornerRadius="5" Height="10"/>
                                                    <Border x:Name="progressWydajnosc" Background="#27AE60" CornerRadius="5" Height="10" HorizontalAlignment="Left" Width="200"/>
                                                </Grid>

                                                <!-- Tuszka A i B -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Border Grid.Column="0" Background="#E8F8E8" CornerRadius="8" Padding="15,10" Margin="0,0,5,0">
                                                        <StackPanel HorizontalAlignment="Center">
                                                            <TextBlock Text="TUSZKA A" FontSize="10" Foreground="#27AE60" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                            <TextBlock x:Name="txtTuszkaA" Text="85%" FontSize="22" Foreground="#27AE60" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>

                                                    <Border Grid.Column="1" Background="#E8F0F8" CornerRadius="8" Padding="15,10" Margin="5,0,0,0">
                                                        <StackPanel HorizontalAlignment="Center">
                                                            <TextBlock Text="TUSZKA B" FontSize="10" Foreground="#3498DB" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                            <TextBlock x:Name="txtTuszkaB" Text="15%" FontSize="22" Foreground="#3498DB" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                </Grid>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>

                                <!-- SEKCJA 3: TOP PRODUKTY -->
                                <Border Grid.Row="2" Margin="5,0,5,15" CornerRadius="12" Background="White">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="10"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Nagłówek -->
                                        <Border Grid.Row="0" CornerRadius="12,12,0,0" Padding="20,12">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#1a2a6c" Offset="0"/>
                                                    <GradientStop Color="#b21f1f" Offset="0.5"/>
                                                    <GradientStop Color="#fdbb2d" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <TextBlock Text="🏆 TOP 5 PRODUKTÓW WG ZAMÓWIEŃ" FontSize="14" Foreground="White" FontWeight="Bold"/>
                                        </Border>

                                        <!-- Tabela -->
                                        <DataGrid x:Name="dgTopProdukty" Grid.Row="1"
                                                  Style="{StaticResource ModernDataGridStyle}"
                                                  AutoGenerateColumns="False"
                                                  HeadersVisibility="Column"
                                                  MaxHeight="180"
                                                  Margin="5"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>

                <!-- Prawa kolumna - szczegóły i podsumowanie -->
                <Grid x:Name="rightPanel" Grid.Column="1" Margin="5,0,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="40*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource PanelBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Szczegóły / Notatki:"
                                   Style="{StaticResource SectionHeaderStyle}"/>

                        <DataGrid x:Name="dgDetails" Grid.Row="1"
                                  Style="{StaticResource ModernDataGridStyle}"
                                  AutoGenerateColumns="False" Margin="0,5,0,0"/>

                        <TextBox x:Name="txtNotes" Grid.Row="2"
                                 Style="{StaticResource NotesTextBoxStyle}" Margin="0,5,0,0"/>
                    </Grid>
                </Border>

                <TextBlock Grid.Row="1" Text="Podsumowanie dnia"
                           Style="{StaticResource SectionHeaderStyle}" Margin="0,8,0,3"/>

                <Border Grid.Row="2" Style="{StaticResource PanelBorderStyle}">
                    <DataGrid x:Name="dgAggregation"
                              Style="{StaticResource ModernDataGridStyle}"
                              AutoGenerateColumns="False"/>
                </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>