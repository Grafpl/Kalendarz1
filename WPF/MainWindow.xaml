<Window x:Class="Kalendarz1.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalendarz1.WPF"
        mc:Ignorable="d"
        Title="Podsumowanie Tygodniowe Zamówień" 
        Height="768" Width="1280"
        WindowState="Maximized"
        Background="#F5F7FA"
        FontFamily="Segoe UI">

    <Window.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="PrimaryGreen" Color="#5C8A3A"/>
            <SolidColorBrush x:Key="PrimaryGreenHover" Color="#4B732F"/>
            <SolidColorBrush x:Key="PrimaryGreenPressed" Color="#3A5C24"/>
            <SolidColorBrush x:Key="TextDark" Color="#2C3E50"/>
            <SolidColorBrush x:Key="TextLight" Color="#7F8C8D"/>
            <SolidColorBrush x:Key="BackgroundLight" Color="#F5F7FA"/>
            <SolidColorBrush x:Key="LightGreen" Color="#E0F0D6"/>
            <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>

            <DropShadowEffect x:Key="DropShadowEffect" ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
            <DropShadowEffect x:Key="CardShadow" ShadowDepth="0" Color="#000000" Opacity="0.1" BlurRadius="10"/>

            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="MinWidth" Value="95"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Margin" Value="3,0"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

            <Style x:Key="NavigationButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="#2C3E50"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

            <Style x:Key="DayButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#F5F7FA"/>
                <Setter Property="Foreground" Value="#2C3E50"/>
                <Setter Property="FontSize" Value="9"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Width" Value="60"/>
                <Setter Property="Height" Value="38"/>
                <Setter Property="Margin" Value="1,0"/>
            </Style>

            <Style x:Key="FilterTextBoxStyle" TargetType="TextBox">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

            <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="White"/>
            </Style>

            <Style x:Key="ModernDataGridHeaderStyle" TargetType="DataGridColumnHeader">
                <Setter Property="Background" Value="#2C3E50"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
            </Style>

            <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="GridLinesVisibility" Value="None"/>
                <Setter Property="HeadersVisibility" Value="Column"/>
                <Setter Property="RowHeight" Value="35"/>
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="CanUserAddRows" Value="False"/>
                <Setter Property="CanUserDeleteRows" Value="False"/>
                <Setter Property="SelectionMode" Value="Single"/>
                <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="ColumnHeaderStyle" Value="{StaticResource ModernDataGridHeaderStyle}"/>
            </Style>

            <Style x:Key="PanelBorderStyle" TargetType="Border">
                <Setter Property="Background" Value="White"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            </Style>

            <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="#2C3E50"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>

            <Style x:Key="NotesTextBoxStyle" TargetType="TextBox">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="AcceptsReturn" Value="True"/>
                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                <Setter Property="IsReadOnly" Value="True"/>
            </Style>

            <Style x:Key="RightAlignedCellStyle" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="Padding" Value="0,0,8,0"/>
            </Style>

            <Style x:Key="CenterAlignedCellStyle" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>

            <Style x:Key="BoldCellStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" 
                BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
            </Border.Effect>
            <Grid Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="btnPreviousWeek" Style="{StaticResource NavigationButtonStyle}"
                            Content="&#x25C0;" FontSize="16" Width="40" Height="40"
                            Click="BtnPreviousWeek_Click"/>

                    <TextBlock x:Name="lblWeekRange" 
                               VerticalAlignment="Center"
                               FontSize="11" FontWeight="SemiBold"
                               Margin="10,0" Width="90" TextAlignment="center"/>

                    <Button x:Name="btnNextWeek" Style="{StaticResource NavigationButtonStyle}"
                            Content="&#x25B6;" FontSize="16" Width="40" Height="40"
                            Click="BtnNextWeek_Click"/>
                </StackPanel>

                <StackPanel x:Name="panelDays" Grid.Column="1" Orientation="Horizontal" 
                            Margin="20,0,0,0" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="3" Orientation="Horizontal" 
                            HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button x:Name="btnNew" Style="{StaticResource ActionButtonStyle}" 
                            Background="#2ECC71" Content="➕ Nowe" Width="110" 
                            Click="BtnNew_Click" FontSize="14" Height="42"/>

                    <Button x:Name="btnPrint" Style="{StaticResource ActionButtonStyle}"
                            Background="#3498DB" Content="🖨️ Drukuj" Width="110"
                            Click="BtnPrint_Click" Margin="5,0" FontSize="14" Height="42"/>

                    <Button x:Name="btnRefresh" Style="{StaticResource ActionButtonStyle}"
                            Background="#9B59B6" Content="🔄 Odśwież" Width="110"
                            Click="BtnRefresh_Click" Margin="5,0" FontSize="14" Height="42"/>

                    <Button x:Name="btnDelete" Style="{StaticResource ActionButtonStyle}"
                            Background="#2C3E50" Content="🗑️ Usuń" Width="95"
                            Click="BtnDelete_Click" Visibility="Collapsed"/>
                    <!-- W sekcji Action Buttons, przed btnDelete -->
                    <ComboBox x:Name="cbLayoutPreset" 
          Width="100" Height="40"
          Margin="5,0"
          SelectionChanged="CbLayoutPreset_SelectionChanged"
          VerticalContentAlignment="Center"
          FontSize="11">
                        <ComboBoxItem Content="Mały" Tag="Small"/>
                        <ComboBoxItem Content="Średni" Tag="Medium" IsSelected="True"/>
                        <ComboBoxItem Content="Duży" Tag="Large"/>
                        <ComboBoxItem Content="XL" Tag="ExtraLarge"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <Grid x:Name="mainContentGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="leftColumnDef" Width="60*"/>
                <ColumnDefinition x:Name="rightColumnDef" Width="40*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="10,10,5,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#ECEFF1"
                        Padding="8,6" CornerRadius="5" Margin="0,0,0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtFilterRecipient" Grid.Column="0"
                                 Style="{StaticResource FilterTextBoxStyle}"
                                 Tag="Odbiorca..." Margin="0,0,5,0"
                                 TextChanged="TxtFilterRecipient_TextChanged"/>

                        <ComboBox x:Name="cbFilterSalesman" Grid.Column="1"
                                  Style="{StaticResource FilterComboBoxStyle}" Margin="0,0,5,0"
                                  SelectionChanged="CbFilter_SelectionChanged"/>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0">
                            <RadioButton x:Name="rbSwieze" Content="Św" GroupName="ProductCatalog"
                                         VerticalAlignment="Center" Margin="0,0,8,0" IsChecked="True"
                                         Checked="RbProductCatalog_Checked"/>
                            <RadioButton x:Name="rbMrozone" Content="Mr" GroupName="ProductCatalog"
                                         VerticalAlignment="Center"
                                         Checked="RbProductCatalog_Checked"/>
                        </StackPanel>

                        <ScrollViewer Grid.Column="3" HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Disabled" Margin="5,0,0,0">
                            <WrapPanel x:Name="pnlProductButtons" Orientation="Horizontal"/>
                        </ScrollViewer>

                        <!-- Hidden elements for compatibility -->
                        <ComboBox x:Name="cbFilterProduct" Visibility="Collapsed"
                                  DisplayMemberPath="Value" SelectedValuePath="Key"/>
                        <CheckBox x:Name="chkShowReleasesWithoutOrders" Visibility="Collapsed"
                                  Checked="ChkShowReleases_Changed" Unchecked="ChkShowReleases_Changed"/>
                        <CheckBox x:Name="chkShowAnulowane" Visibility="Collapsed" IsChecked="False"
                                  Checked="ChkShowAnulowane_Changed" Unchecked="ChkShowAnulowane_Changed"/>
                        <RadioButton x:Name="rbPickupDate" Visibility="Collapsed" GroupName="DateFilter"
                                     Checked="RbDateFilter_Checked"/>
                        <RadioButton x:Name="rbSlaughterDate" Visibility="Collapsed" GroupName="DateFilter"
                                     Checked="RbDateFilter_Checked" IsChecked="True"/>
                    </Grid>
                </Border>

                <TabControl x:Name="tabOrders" Grid.Row="1" Background="Transparent" BorderThickness="0"
                            SelectionChanged="TabOrders_SelectionChanged">
                    <TabItem Header="Zamówienia" FontSize="12" FontWeight="SemiBold">
                        <DataGrid x:Name="dgOrders"
                                  Style="{StaticResource ModernDataGridStyle}"
                                  SelectionChanged="DgOrders_SelectionChanged"
                                  MouseDoubleClick="DgOrders_MouseDoubleClick"
                                  MouseRightButtonUp="DgOrders_MouseRightButtonUp">
                            <DataGrid.ContextMenu>
                                <ContextMenu x:Name="contextMenuOrders">
                                    <MenuItem x:Name="menuDuplikuj" Header="🔄 Duplikuj zamówienie" Click="MenuDuplikuj_Click"/>
                                    <MenuItem x:Name="menuCykliczne" Header="📅 Zamówienia cykliczne" Click="MenuCykliczne_Click"/>
                                    <MenuItem x:Name="menuModyfikuj" Header="✏️ Modyfikuj zamówienie" Click="MenuModyfikuj_Click"/>
                                    <MenuItem x:Name="menuNotatka" Header="📝 Dodaj/Edytuj notatkę" Click="MenuNotatka_Click"/>
                                    <Separator/>
                                    <MenuItem x:Name="menuSzczegolyZamowienia" Header="📊 Szczegóły zamówienia" Click="MenuSzczegolyZamowienia_Click"/>
                                    <MenuItem x:Name="menuSzczegolyPlatnosci" Header="💳 Płatności kontrahenta" Click="MenuSzczegolyPlatnosci_Click"/>
                                    <MenuItem x:Name="menuHistoriaZamowien" Header="📋 Historia zamówień" Click="MenuHistoriaZamowien_Click"/>
                                    <MenuItem x:Name="menuHistoriaZmian" Header="📜 Historia zmian zamówienia" Click="MenuHistoriaZmian_Click"/>
                                    <MenuItem x:Name="menuTransportInfo" Header="🚚 Informacje o transporcie" Click="MenuTransportInfo_Click"/>
                                    <Separator/>
                                    <MenuItem x:Name="menuShowAnulowane" Header="Pokaż anulowane" IsCheckable="True"
                                              Click="MenuShowAnulowane_Click"/>
                                    <MenuItem x:Name="menuShowWydaniaBezZam" Header="Pokaż wydania bez zam." IsCheckable="True"
                                              Click="MenuShowWydaniaBezZam_Click"/>
                                    <Separator/>
                                    <MenuItem x:Name="menuOdswiez" Header="🔄 Odśwież dane" Click="MenuOdswiez_Click"/>
                                    <Separator/>
                                    <MenuItem x:Name="menuAnuluj" Header="❌ Anuluj zamówienie" Click="MenuAnuluj_Click"/>
                                    <MenuItem x:Name="menuPrzywroc" Header="✅ Przywróć zamówienie" Click="MenuPrzywroc_Click" Visibility="Collapsed"/>
                                    <MenuItem x:Name="menuUsun" Header="🗑️ USUŃ TRWALE zamówienie" Click="MenuUsun_Click" Visibility="Collapsed"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Transport" FontSize="12" FontWeight="SemiBold">
                        <DataGrid x:Name="dgTransport"
                                  Style="{StaticResource ModernDataGridStyle}"
                                  AutoGenerateColumns="False"
                                  SelectionChanged="DgTransport_SelectionChanged"/>
                    </TabItem>
                    <TabItem Header="Historia zmian" FontSize="12" FontWeight="SemiBold">
                        <DataGrid x:Name="dgHistoriaZmian"
                                  Style="{StaticResource ModernDataGridStyle}"
                                  AutoGenerateColumns="False"
                                  CanUserSortColumns="True"/>
                    </TabItem>
                    <TabItem x:Name="tabDashboard" Header="📊 Dashboard" FontSize="12" FontWeight="SemiBold">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- SEKCJA: PRZEGLĄD PRODUKCJI -->
                                <Border Grid.Row="0" Background="#3D5A5A" CornerRadius="5,5,0,0" Padding="15,8">
                                    <TextBlock Text="PRZEGLĄD PRODUKCJI" FontSize="13" Foreground="White" FontWeight="SemiBold"/>
                                </Border>

                                <!-- Karty KPI - Rząd 1 -->
                                <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1,0,1,1" Padding="10">
                                    <UniformGrid Rows="1" Columns="4">
                                        <!-- KPI 1: PLAN PRODUKCJI -->
                                        <Border BorderBrush="#E8E8E8" BorderThickness="0,0,1,0" Margin="5" Padding="10">
                                            <StackPanel>
                                                <TextBlock Text="PLAN PRODUKCJI" FontSize="10" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="txtKpiPlan" Text="0 kg" FontSize="22" Foreground="#2C3E50" FontWeight="Bold" Margin="0,5,0,0"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                    <TextBlock Text="Surowiec: " FontSize="10" Foreground="#95A5A6"/>
                                                    <TextBlock x:Name="txtKpiSurowiec" Text="0 kg" FontSize="10" Foreground="#3498DB" FontWeight="SemiBold"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="Wydajność: " FontSize="10" Foreground="#95A5A6"/>
                                                    <TextBlock x:Name="txtKpiWydajnosc" Text="78%" FontSize="10" Foreground="#9B59B6" FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>

                                        <!-- KPI 2: FAKTYCZNA PRODUKCJA -->
                                        <Border BorderBrush="#E8E8E8" BorderThickness="0,0,1,0" Margin="5" Padding="10">
                                            <StackPanel>
                                                <TextBlock Text="FAKTYCZNA PRODUKCJA" FontSize="10" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="txtKpiWydania" Text="0 kg" FontSize="22" Foreground="#2C3E50" FontWeight="Bold" Margin="0,5,0,0"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                    <TextBlock Text="vs Plan: " FontSize="10" Foreground="#95A5A6"/>
                                                    <TextBlock x:Name="txtKpiWydaniaVsPlan" Text="0%" FontSize="10" Foreground="#27AE60" FontWeight="SemiBold"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="Wydanych: " FontSize="10" Foreground="#95A5A6"/>
                                                    <TextBlock x:Name="txtKpiWydaniaKlienci" Text="0" FontSize="10" Foreground="#3498DB" FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>

                                        <!-- KPI 3: ZAMÓWIENIA -->
                                        <Border BorderBrush="#E8E8E8" BorderThickness="0,0,1,0" Margin="5" Padding="10">
                                            <StackPanel>
                                                <TextBlock Text="ZAMÓWIENIA" FontSize="10" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="txtKpiZamowienia" Text="0 kg" FontSize="22" Foreground="#2C3E50" FontWeight="Bold" Margin="0,5,0,0"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                    <TextBlock Text="Klientów: " FontSize="10" Foreground="#95A5A6"/>
                                                    <TextBlock x:Name="txtKpiZamowieniaKlienci" Text="0" FontSize="10" Foreground="#3498DB" FontWeight="SemiBold"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="Różnica: " FontSize="10" Foreground="#95A5A6"/>
                                                    <TextBlock x:Name="txtKpiRoznica" Text="0 kg" FontSize="10" FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>

                                        <!-- KPI 4: REALIZACJA -->
                                        <Border Margin="5" Padding="10">
                                            <StackPanel>
                                                <TextBlock Text="REALIZACJA ZAMÓWIEŃ" FontSize="10" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="txtKpiRealizacja" Text="0%" FontSize="22" Foreground="#2C3E50" FontWeight="Bold" Margin="0,5,0,0"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                    <TextBlock Text="Status: " FontSize="10" Foreground="#95A5A6"/>
                                                    <TextBlock x:Name="txtKpiRealizacjaStatus" Text="Oczekuje" FontSize="10" Foreground="#F39C12" FontWeight="SemiBold"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="Bilans: " FontSize="10" Foreground="#95A5A6"/>
                                                    <TextBlock x:Name="txtKpiRealizacjaInfo" Text="0 kg" FontSize="10" FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </UniformGrid>
                                </Border>

                                <!-- SEKCJA: BILANS PRODUKTÓW -->
                                <Border Grid.Row="2" Background="#3D5A5A" CornerRadius="5,5,0,0" Padding="15,8" Margin="0,15,0,0">
                                    <Grid>
                                        <TextBlock Text="BILANS PRODUKTÓW" FontSize="13" Foreground="White" FontWeight="SemiBold"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Border Background="#27AE60" CornerRadius="3" Padding="8,3" Margin="5,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="✓ OK: " FontSize="10" Foreground="White"/>
                                                    <TextBlock x:Name="txtBilansOk" Text="0" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                                </StackPanel>
                                            </Border>
                                            <Border Background="#F39C12" CornerRadius="3" Padding="8,3" Margin="5,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="⚠ Uwaga: " FontSize="10" Foreground="White"/>
                                                    <TextBlock x:Name="txtBilansUwaga" Text="0" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                                </StackPanel>
                                            </Border>
                                            <Border Background="#E74C3C" CornerRadius="3" Padding="8,3" Margin="5,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="✗ Brak: " FontSize="10" Foreground="White"/>
                                                    <TextBlock x:Name="txtBilansBrak" Text="0" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Tabela produktów -->
                                <Border Grid.Row="3" Background="White" BorderBrush="#E0E0E0" BorderThickness="1,0,1,1" MinHeight="200">
                                    <DataGrid x:Name="dgDashboardProdukty"
                                              Style="{StaticResource ModernDataGridStyle}"
                                              AutoGenerateColumns="False"
                                              CanUserSortColumns="True"
                                              MaxHeight="350"/>
                                </Border>

                                <!-- SEKCJA: PODSUMOWANIE TYGODNIA -->
                                <Border Grid.Row="4" Margin="0,15,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Lewa karta: Wydajność -->
                                        <Border Grid.Column="0" Margin="0,0,5,0">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Border Grid.Row="0" Background="#3D5A5A" CornerRadius="5,5,0,0" Padding="15,8">
                                                    <TextBlock Text="WYDAJNOŚĆ PRODUKCJI" FontSize="13" Foreground="White" FontWeight="SemiBold"/>
                                                </Border>
                                                <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1,0,1,1" Padding="20">
                                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                        <TextBlock x:Name="txtWydajnoscGlowna" Text="0%" FontSize="48" Foreground="#2C3E50" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                        <TextBlock Text="Wydajność tuszki" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,5,0,15"/>
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                            <StackPanel Margin="15,0">
                                                                <TextBlock x:Name="txtTuszkaA" Text="85%" FontSize="18" Foreground="#27AE60" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                                <TextBlock Text="Tuszka A" FontSize="10" Foreground="#95A5A6" HorizontalAlignment="Center"/>
                                                            </StackPanel>
                                                            <StackPanel Margin="15,0">
                                                                <TextBlock x:Name="txtTuszkaB" Text="15%" FontSize="18" Foreground="#3498DB" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                                <TextBlock Text="Tuszka B" FontSize="10" Foreground="#95A5A6" HorizontalAlignment="Center"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                        </Border>

                                        <!-- Prawa karta: Top produkty -->
                                        <Border Grid.Column="1" Margin="5,0,0,0">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Border Grid.Row="0" Background="#3D5A5A" CornerRadius="5,5,0,0" Padding="15,8">
                                                    <TextBlock Text="TOP PRODUKTY WG ZAMÓWIEŃ" FontSize="13" Foreground="White" FontWeight="SemiBold"/>
                                                </Border>
                                                <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1,0,1,1" Padding="10">
                                                    <DataGrid x:Name="dgTopProdukty"
                                                              Style="{StaticResource ModernDataGridStyle}"
                                                              AutoGenerateColumns="False"
                                                              HeadersVisibility="Column"
                                                              MaxHeight="150"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Grid>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>

            <Grid x:Name="rightPanel" Grid.Column="1" Margin="5,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="45*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="55*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource PanelBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="70"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Szczegóły / Notatki zamówienia:"
                                   Style="{StaticResource SectionHeaderStyle}"/>

                        <DataGrid x:Name="dgDetails" Grid.Row="1" 
                                  Style="{StaticResource ModernDataGridStyle}"
                                  AutoGenerateColumns="False" Margin="0,5,0,0"/>

                        <TextBox x:Name="txtNotes" Grid.Row="2" 
                                 Style="{StaticResource NotesTextBoxStyle}" Margin="0,5,0,0"/>
                    </Grid>
                </Border>

                <TextBlock Grid.Row="1" Text="Podsumowanie produktów dla wybranego dnia"
                           Style="{StaticResource SectionHeaderStyle}" Margin="0,10,0,5"/>

                <Border Grid.Row="2" Style="{StaticResource PanelBorderStyle}">
                    <DataGrid x:Name="dgAggregation"
                              Style="{StaticResource ModernDataGridStyle}"
                              AutoGenerateColumns="False"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>