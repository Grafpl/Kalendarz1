<Window x:Class="Kalendarz1.WPF.HistoriaSnapshotowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historia zamówienia"
        Width="1200" Height="750"
        WindowStartupLocation="CenterScreen"
        Background="#1C1E26"
        FontFamily="Segoe UI">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="TimelineItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                Padding="10,8" Margin="0,0,0,1" CornerRadius="4">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3C468E"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#32344A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CustomDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#2D2F3E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowBackground" Value="#373946"/>
            <Setter Property="AlternatingRowBackground" Value="#32343F"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#464858"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" Margin="5,2"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Padding="16,12">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#3C468E" Offset="0"/>
                    <GradientStop Color="#4A56AD" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel>
                <TextBlock x:Name="txtTitle" Text="HISTORIA ZAMÓWIENIA" FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="txtSubtitle" Text="" FontSize="13" Foreground="#B0B8E8" Margin="0,3,0,0"/>
            </StackPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Margin="10,8,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: TIMELINE with avatars -->
            <Border Grid.Column="0" Background="#22242E" CornerRadius="6" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="#2A2C3A" CornerRadius="6,6,0,0" Padding="12,8">
                        <TextBlock Text="OS CZASU" FontSize="13" FontWeight="Bold" Foreground="#90CAF9"/>
                    </Border>
                    <ListBox x:Name="lstTimeline" Grid.Row="1"
                             Background="Transparent" BorderThickness="0"
                             ItemContainerStyle="{StaticResource TimelineItemStyle}"
                             SelectionChanged="lstTimeline_SelectionChanged"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             Margin="4">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Avatar circle with initials -->
                                    <Border Grid.Column="0" Width="36" Height="36" CornerRadius="18"
                                            Background="{Binding AvatarKolor}" Margin="0,0,10,0"
                                            VerticalAlignment="Top">
                                        <TextBlock Text="{Binding Inicjaly}" FontSize="13" FontWeight="Bold"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Foreground="White"/>
                                    </Border>

                                    <!-- Details -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                        <TextBlock Text="{Binding Kto}" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                            <Border Background="{Binding Kolor}" CornerRadius="3" Padding="5,1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Typ}" Foreground="{Binding KolorTekst}" FontSize="10" FontWeight="Bold"/>
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Opis}" Foreground="#AAAAAA" FontSize="11"
                                                   TextWrapping="Wrap" TextTrimming="CharacterEllipsis"
                                                   MaxHeight="34" Margin="0,3,0,0"/>
                                    </StackPanel>

                                    <!-- Date -->
                                    <TextBlock Grid.Column="2" Text="{Binding DataDisplay}" Foreground="#666"
                                               FontSize="11" VerticalAlignment="Top" Margin="6,0,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- RIGHT: DETAILS -->
            <Border Grid.Column="1" Background="#22242E" CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="#2A2C3A" CornerRadius="6,6,0,0" Padding="12,8">
                        <TextBlock x:Name="txtDetailsHeader" Text="Wybierz element z osi czasu" FontSize="13" FontWeight="Bold" Foreground="#90CAF9"/>
                    </Border>

                    <!-- Compare bar (shown only when viewing a snapshot) -->
                    <Border x:Name="pnlCompare" Grid.Row="1" Background="#2A2C3A" Padding="12,6" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Porownaj z:" Foreground="#90CAF9" FontSize="12" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <ComboBox x:Name="cmbCompareSnapshot" Width="280" FontSize="12"
                                      Background="#373946" Foreground="White" BorderBrush="#555"
                                      SelectionChanged="cmbCompareSnapshot_SelectionChanged"/>
                            <Button x:Name="btnClearCompare" Content="Anuluj" Margin="8,0,0,0"
                                    Foreground="#E74C3C" Background="Transparent" BorderThickness="0"
                                    FontSize="11" Cursor="Hand" Click="btnClearCompare_Click" Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>

                    <!-- Snapshot details (DataGrid) -->
                    <DataGrid x:Name="dgvSnapshotDetails" Grid.Row="2"
                              Style="{StaticResource CustomDataGridStyle}"
                              RowHeight="36" Margin="5" FontSize="13"
                              Visibility="Collapsed">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Produkt" Binding="{Binding Produkt}" Width="2*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Ilosc (kg)" Binding="{Binding Ilosc, StringFormat=N0}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#FFD700"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="0,0,10,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="Folia" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FoliaDisplay}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Halal" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding HalalDisplay}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="E2" Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding E2Display}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Strefa" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding StrefaDisplay}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Diff view (shown when comparing two snapshots) -->
                    <ScrollViewer x:Name="svDiffView" Grid.Row="2" Visibility="Collapsed"
                                  VerticalScrollBarVisibility="Auto" Margin="5">
                        <ItemsControl x:Name="icDiffItems">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,1" Padding="8,5" CornerRadius="3"
                                            Background="{Binding RowBackground}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="24"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>
                                            <!-- Row 1: main info -->
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding StatusIcon}" FontSize="15"
                                                       Foreground="{Binding StatusColor}" VerticalAlignment="Center"
                                                       HorizontalAlignment="Center" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Produkt}" Foreground="White"
                                                       FontWeight="SemiBold" FontSize="13" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding IloscADisplay}" FontSize="13"
                                                       Foreground="#999" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Row="0" Grid.Column="3" Text="→" Foreground="#555" FontSize="12"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Row="0" Grid.Column="4" Text="{Binding IloscBDisplay}" FontSize="13"
                                                       Foreground="{Binding StatusColor}" FontWeight="Bold"
                                                       HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Row="0" Grid.Column="5" Text="{Binding DeltaDisplay}" FontSize="11"
                                                       Foreground="{Binding DeltaColor}" FontWeight="SemiBold"
                                                       HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                            <!-- Row 2: flags + changes -->
                                            <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5"
                                                       Text="{Binding FlagChanges}" FontSize="11"
                                                       Foreground="#80CBC4" Margin="0,2,0,0"
                                                       Visibility="{Binding HasFlagChanges, Converter={StaticResource BoolToVis}}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Note details (Bylo/Jest) -->
                    <ScrollViewer x:Name="svNoteDetails" Grid.Row="2" Visibility="Collapsed"
                                  VerticalScrollBarVisibility="Auto" Margin="15">
                        <StackPanel>
                            <TextBlock Text="Bylo:" Foreground="#888" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <Border Background="#2A2C3A" CornerRadius="4" Padding="12,8" Margin="0,0,0,12">
                                <TextBlock x:Name="txtNoteBefore" Foreground="#999" FontSize="13"
                                           FontStyle="Italic" TextWrapping="Wrap" LineHeight="22"/>
                            </Border>
                            <TextBlock Text="Jest:" Foreground="#90CAF9" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <Border Background="#2A2C3A" CornerRadius="4" Padding="12,8">
                                <TextBlock x:Name="txtNoteAfter" Foreground="White" FontSize="13"
                                           FontWeight="SemiBold" TextWrapping="Wrap" LineHeight="22"/>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Change log details (TextBlock) -->
                    <ScrollViewer x:Name="svChangeDetails" Grid.Row="2" Visibility="Collapsed"
                                  VerticalScrollBarVisibility="Auto" Margin="15">
                        <TextBlock x:Name="txtChangeDetails" Foreground="#DDDDDD" FontSize="14"
                                   TextWrapping="Wrap" LineHeight="24"/>
                    </ScrollViewer>

                    <!-- Empty state -->
                    <TextBlock x:Name="txtEmptyState" Grid.Row="2"
                               Text="Kliknij element na osi czasu, aby zobaczyc szczegoly"
                               Foreground="#666" FontSize="14"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#282A32" Padding="12,8" Margin="0,8,0,0">
            <Grid>
                <Button x:Name="btnClose" Content="Zamknij" HorizontalAlignment="Left"
                        Background="#5A4A4A" Foreground="White" FontSize="13" FontWeight="Bold"
                        Padding="20,6" Cursor="Hand" Click="btnClose_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Opacity" Value="0.85"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="btnRefresh" Content="Odswiez" HorizontalAlignment="Right"
                        Background="#376EA0" Foreground="White" FontSize="13" FontWeight="Bold"
                        Padding="20,6" Cursor="Hand" Click="btnRefresh_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Opacity" Value="0.85"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
