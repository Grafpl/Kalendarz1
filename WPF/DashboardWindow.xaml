<Window x:Class="Kalendarz1.WPF.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard - Podsumowanie produktów"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F0F2F5"
        FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- NAGŁÓWEK -->
        <Border Grid.Row="0" CornerRadius="10" Margin="0,0,0,15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2c3e50" Offset="0"/>
                    <GradientStop Color="#27ae60" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="25,18">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="DASHBOARD PRODUKTÓW" FontSize="26" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="txtSelectedDate" Text="Data: -" FontSize="14" Foreground="#A3E4D7" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- KPI w nagłówku -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#27AE60" CornerRadius="8" Padding="18,10" Margin="8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="DO SPRZEDANIA:" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtDoSprzedania" Text="0 kg" FontSize="20" Foreground="White" FontWeight="Bold" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#3498DB" CornerRadius="8" Padding="18,10" Margin="8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ZAMÓWIONE:" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtZamowione" Text="0 kg" FontSize="20" Foreground="White" FontWeight="Bold" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- PASEK FILTRÓW -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20,12" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Opacity="0.08" BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,30,0">
                    <TextBlock Text="Data:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold" FontSize="13"/>
                    <DatePicker x:Name="dpData" Width="140" FontSize="13" SelectedDateChanged="DpData_SelectedDateChanged"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Bilans wg:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold" FontSize="13"/>
                    <RadioButton x:Name="rbBilansZamowienia" Content="Zamówienia" IsChecked="True"
                                 VerticalAlignment="Center" Margin="0,0,15,0" FontSize="13"
                                 Checked="RbBilans_Checked"/>
                    <RadioButton x:Name="rbBilansWydania" Content="Wydania"
                                 VerticalAlignment="Center" FontSize="13"
                                 Checked="RbBilans_Checked"/>
                </StackPanel>

                <Button Grid.Column="3" Content="Zamknij" Padding="20,10"
                        Background="#7F8C8D" Foreground="White" BorderThickness="0"
                        FontSize="13" FontWeight="SemiBold" Cursor="Hand"
                        Click="BtnClose_Click"/>
            </Grid>
        </Border>

        <!-- GŁÓWNA ZAWARTOŚĆ - 4 karty produktów -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- KURCZAK A -->
            <Border Grid.Row="0" Grid.Column="0" Background="White" CornerRadius="12" Margin="0,0,10,10">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="15"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" CornerRadius="12,12,0,0" Padding="20,15">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#27AE60" Offset="0"/>
                                <GradientStop Color="#2ECC71" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <TextBlock Text="KURCZAK A" FontSize="20" FontWeight="Bold" Foreground="White"/>
                            <TextBlock x:Name="txtKurczakABilans" Text="0 kg" FontSize="24" FontWeight="Bold"
                                       Foreground="White" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                    <Grid Grid.Row="1" Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!-- Wykres słupkowy -->
                        <Grid Grid.Row="0" x:Name="chartKurczakA" Margin="0,0,0,15"/>
                        <!-- Statystyki -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="PLAN" FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtKurczakAPlan" Text="0" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="FAKT" FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtKurczakAFakt" Text="0" FontSize="18" FontWeight="Bold" Foreground="#27AE60" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="STAN" FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtKurczakAStan" Text="0" FontSize="18" FontWeight="Bold" Foreground="#3498DB" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="ZAM." FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtKurczakAZam" Text="0" FontSize="18" FontWeight="Bold" Foreground="#E74C3C" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <!-- ĆWIARTKA -->
            <Border Grid.Row="0" Grid.Column="1" Background="White" CornerRadius="12" Margin="10,0,0,10">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="15"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" CornerRadius="12,12,0,0" Padding="20,15">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#3498DB" Offset="0"/>
                                <GradientStop Color="#5DADE2" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <TextBlock Text="ĆWIARTKA" FontSize="20" FontWeight="Bold" Foreground="White"/>
                            <TextBlock x:Name="txtCwiartkaBilans" Text="0 kg" FontSize="24" FontWeight="Bold"
                                       Foreground="White" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                    <Grid Grid.Row="1" Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" x:Name="chartCwiartka" Margin="0,0,0,15"/>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="PLAN" FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtCwiartkaPlan" Text="0" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="FAKT" FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtCwiartkaFakt" Text="0" FontSize="18" FontWeight="Bold" Foreground="#27AE60" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="STAN" FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtCwiartkaStan" Text="0" FontSize="18" FontWeight="Bold" Foreground="#3498DB" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="ZAM." FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtCwiartkaZam" Text="0" FontSize="18" FontWeight="Bold" Foreground="#E74C3C" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <!-- FILET -->
            <Border Grid.Row="1" Grid.Column="0" Background="White" CornerRadius="12" Margin="0,10,10,0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="15"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" CornerRadius="12,12,0,0" Padding="20,15">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#9B59B6" Offset="0"/>
                                <GradientStop Color="#AF7AC5" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <TextBlock Text="FILET" FontSize="20" FontWeight="Bold" Foreground="White"/>
                            <TextBlock x:Name="txtFiletBilans" Text="0 kg" FontSize="24" FontWeight="Bold"
                                       Foreground="White" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                    <Grid Grid.Row="1" Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" x:Name="chartFilet" Margin="0,0,0,15"/>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="PLAN" FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtFiletPlan" Text="0" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="FAKT" FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtFiletFakt" Text="0" FontSize="18" FontWeight="Bold" Foreground="#27AE60" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="STAN" FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtFiletStan" Text="0" FontSize="18" FontWeight="Bold" Foreground="#3498DB" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="ZAM." FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtFiletZam" Text="0" FontSize="18" FontWeight="Bold" Foreground="#E74C3C" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <!-- KORPUS -->
            <Border Grid.Row="1" Grid.Column="1" Background="White" CornerRadius="12" Margin="10,10,0,0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="15"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" CornerRadius="12,12,0,0" Padding="20,15">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#E67E22" Offset="0"/>
                                <GradientStop Color="#F39C12" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <TextBlock Text="KORPUS" FontSize="20" FontWeight="Bold" Foreground="White"/>
                            <TextBlock x:Name="txtKorpusBilans" Text="0 kg" FontSize="24" FontWeight="Bold"
                                       Foreground="White" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                    <Grid Grid.Row="1" Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" x:Name="chartKorpus" Margin="0,0,0,15"/>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="PLAN" FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtKorpusPlan" Text="0" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="FAKT" FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtKorpusFakt" Text="0" FontSize="18" FontWeight="Bold" Foreground="#27AE60" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="STAN" FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtKorpusStan" Text="0" FontSize="18" FontWeight="Bold" Foreground="#3498DB" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="ZAM." FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtKorpusZam" Text="0" FontSize="18" FontWeight="Bold" Foreground="#E74C3C" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
