<Window x:Class="Kalendarz1.WPF.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard - Podsumowanie zamówień"
        Width="1300" Height="750"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFBFC"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E8E8E8"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling"/>
            <Setter Property="EnableRowVirtualization" Value="True"/>
        </Style>

        <Style x:Key="RightAlignedCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Padding" Value="0,0,8,0"/>
        </Style>

        <Style x:Key="CenterAlignedCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Margin="0,0,0,15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2c3e50" Offset="0"/>
                    <GradientStop Color="#3498db" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border CornerRadius="8" Padding="20,15">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="Dashboard - Podsumowanie zamówień" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="txtSelectedDate" Text="Data: -" FontSize="12" Foreground="#B0C4DE" Margin="0,5,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Border Background="#27AE60" CornerRadius="12" Padding="12,5" Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Aktywne: " FontSize="12" Foreground="White"/>
                                <TextBlock x:Name="txtBilansOk" Text="0" FontSize="12" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#3498DB" CornerRadius="12" Padding="12,5" Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Produktów: " FontSize="12" Foreground="White"/>
                                <TextBlock x:Name="txtBilansUwaga" Text="0" FontSize="12" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#E74C3C" CornerRadius="12" Padding="12,5" Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Anulowane: " FontSize="12" Foreground="White"/>
                                <TextBlock x:Name="txtBilansBrak" Text="0" FontSize="12" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Panel wyboru daty -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Wybierz datę:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <DatePicker x:Name="dpData" Width="130" SelectedDateChanged="DpData_SelectedDateChanged"/>
                </StackPanel>

                <!-- Statystyki -->
                <Border Grid.Column="1" Margin="30,0,0,0" Background="#F8F9FA" CornerRadius="8" Padding="15,8">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="0,0,20,0">
                            <TextBlock Text="Zamówień" FontSize="10" Foreground="#7f8c8d" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="txtWydajnoscGlowna" Text="0" FontSize="24" Foreground="#2c3e50" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <Border Background="#E8F8E8" CornerRadius="5" Padding="10,5" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Produktów" FontSize="9" Foreground="#27AE60" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtTuszkaA" Text="0" FontSize="14" Foreground="#27AE60" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FCE8E8" CornerRadius="5" Padding="10,5">
                            <StackPanel>
                                <TextBlock Text="Anulowane" FontSize="9" Foreground="#E74C3C" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtTuszkaB" Text="0" FontSize="14" Foreground="#E74C3C" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Button x:Name="btnRefresh" Content="Odśwież" Padding="15,8"
                            Background="#3498DB" Foreground="White" BorderThickness="0"
                            Click="BtnRefresh_Click" Cursor="Hand" Margin="0,0,10,0"/>
                    <Button Content="Zamknij" Padding="15,8"
                            Background="#95A5A6" Foreground="White" BorderThickness="0"
                            Click="BtnClose_Click" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Zawartość - dwie kolumny -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="380"/>
            </Grid.ColumnDefinitions>

            <!-- Lewa kolumna - Lista produktów -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Nagłówek tabeli -->
                    <Border Grid.Row="0" CornerRadius="8,8,0,0" Padding="15,10">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#2c3e50" Offset="0"/>
                                <GradientStop Color="#3498db" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="PODSUMOWANIE PRODUKTÓW" FontSize="14" Foreground="White" FontWeight="Bold"/>
                    </Border>

                    <DataGrid Grid.Row="1" x:Name="dgDashboardProdukty"
                              Style="{StaticResource ModernDataGridStyle}"
                              AutoGenerateColumns="False"
                              CanUserSortColumns="True"
                              Margin="5"/>
                </Grid>
            </Border>

            <!-- Prawa kolumna - Top produkty (karty) -->
            <Border Grid.Column="1" Background="White" CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Nagłówek -->
                    <Border Grid.Row="0" CornerRadius="8,8,0,0" Padding="15,10">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#00b09b" Offset="0"/>
                                <GradientStop Color="#96c93d" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="TOP PRODUKTY" FontSize="14" Foreground="White" FontWeight="Bold"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="icDostepnoscProduktow" Margin="10">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="5" Padding="10" CornerRadius="8" Width="165"
                                            BorderThickness="2" BorderBrush="{Binding KolorRamki}">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding KolorTla}"/>
                                        </Border.Background>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Nazwa produktu -->
                                            <TextBlock Grid.Row="0" Text="{Binding Nazwa}"
                                                       FontWeight="Bold" FontSize="11"
                                                       Foreground="#2c3e50" TextWrapping="Wrap"
                                                       MaxHeight="34"/>

                                            <!-- Pasek postępu -->
                                            <Grid Grid.Row="1" Margin="0,8,0,6">
                                                <Border Background="#E0E0E0" CornerRadius="4" Height="12"/>
                                                <Border Background="{Binding KolorPaska}" CornerRadius="4" Height="12"
                                                        HorizontalAlignment="Left" Width="{Binding SzerokoscPaska}"/>
                                                <TextBlock Text="{Binding ProcentText}" FontSize="8" FontWeight="Bold"
                                                           Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Grid>

                                            <!-- Ilość -->
                                            <Border Grid.Row="2" Background="{Binding KolorRamki}" CornerRadius="4" Padding="6,3">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding BilansText}" FontSize="11" Foreground="White" FontWeight="Bold"/>
                                                    <TextBlock Text=" | " FontSize="11" Foreground="White"/>
                                                    <TextBlock Text="{Binding PlanFaktText}" FontSize="10" Foreground="White"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Stopka -->
        <Border Grid.Row="3" Margin="0,10,0,0" Background="White" CornerRadius="8" Padding="15,10">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Suma zamówień: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtSumaZamowien" Text="0 kg" FontSize="16" FontWeight="Bold" Foreground="#3498DB" VerticalAlignment="Center"/>
                    <TextBlock Text="  |  " FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <TextBlock x:Name="txtPlanProdukcji" Text="0 zamówień" FontSize="14" FontWeight="Bold" Foreground="#27AE60" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
