<Window x:Class="Kalendarz1.WPF.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard - Dostpno produkt贸w dla handlowc贸w"
        Width="1400" Height="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F0F2F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFBFC"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E8E8E8"/>
            <Setter Property="RowHeight" Value="38"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling"/>
            <Setter Property="EnableRowVirtualization" Value="True"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="ModernDataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="RightAlignedCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Padding" Value="0,0,10,0"/>
        </Style>

        <Style x:Key="CenterAlignedCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="BoldCellStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NAGWEK -->
        <Border Grid.Row="0" Padding="15,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2c3e50" Offset="0"/>
                    <GradientStop Color="#27ae60" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="DOSTPNO PRODUKTW DLA HANDLOWCW" FontSize="22" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="txtSelectedDate" Text="Wszystkie zam贸wienia" FontSize="13" Foreground="#B0C4DE" Margin="0,3,0,0"/>
                </StackPanel>

                <!-- KPI w nag贸wku -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#27AE60" CornerRadius="8" Padding="15,8" Margin="8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="DO SPRZEDANIA: " FontSize="14" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtBilansOk" Text="0 kg" FontSize="18" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#3498DB" CornerRadius="8" Padding="15,8" Margin="8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Zam贸wione: " FontSize="12" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtBilansUwaga" Text="0 kg" FontSize="14" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#E74C3C" CornerRadius="8" Padding="15,8" Margin="8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Brakuje: " FontSize="12" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtBilansBrak" Text="0 kg" FontSize="14" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- PASEK FILTRW -->
        <Border Grid.Row="1" Background="#ECEFF1" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Wyb贸r daty -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Data:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold"/>
                    <DatePicker x:Name="dpData" Width="130" SelectedDateChanged="DpData_SelectedDateChanged"/>
                </StackPanel>

                <!-- Bilans wg -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Bilans:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold"/>
                    <RadioButton x:Name="rbBilansZamowienia" Content="Zam贸wienia" IsChecked="True"
                                 VerticalAlignment="Center" Margin="0,0,10,0"
                                 Checked="RbBilans_Checked"/>
                    <RadioButton x:Name="rbBilansWydania" Content="Wydania"
                                 VerticalAlignment="Center"
                                 Checked="RbBilans_Checked"/>
                </StackPanel>

                <!-- Katalog -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Katalog:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold"/>
                    <RadioButton x:Name="rbSwieze" Content="wie偶e" IsChecked="True"
                                 VerticalAlignment="Center" Margin="0,0,10,0"
                                 Checked="RbKatalog_Checked"/>
                    <RadioButton x:Name="rbMrozone" Content="Mro偶one"
                                 VerticalAlignment="Center"
                                 Checked="RbKatalog_Checked"/>
                    <RadioButton x:Name="rbWszystkie" Content="Wszystkie"
                                 VerticalAlignment="Center" Margin="10,0,0,0"
                                 Checked="RbKatalog_Checked"/>
                </StackPanel>

                <!-- Przyciski -->
                <StackPanel Grid.Column="4" Orientation="Horizontal">
                    <Button x:Name="btnRefresh" Content=" Odwie偶" Padding="15,8"
                            Background="#3498DB" Foreground="White" BorderThickness="0"
                            FontWeight="Bold" FontSize="13"
                            Click="BtnRefresh_Click" Cursor="Hand" Margin="0,0,10,0"/>
                    <Button Content="Zamknij" Padding="15,8"
                            Background="#95A5A6" Foreground="White" BorderThickness="0"
                            Click="BtnClose_Click" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- GWNA ZAWARTO - dwie kolumny -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="420"/>
            </Grid.ColumnDefinitions>

            <!-- LEWA KOLUMNA - Tabela produkt贸w (jak Podsumowanie dnia) -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Nag贸wek -->
                    <Border Grid.Row="0" CornerRadius="8,8,0,0" Padding="15,12">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#2c3e50" Offset="0"/>
                                <GradientStop Color="#3498db" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <TextBlock Text="PODSUMOWANIE PRODUKTW - CO MO呕ESZ SPRZEDA" FontSize="15" Foreground="White" FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Legenda: " Foreground="#B0C4DE" FontSize="11" VerticalAlignment="Center"/>
                                <Border Background="#27AE60" CornerRadius="3" Padding="8,3" Margin="5,0">
                                    <TextBlock Text="Dostpne" Foreground="White" FontSize="10"/>
                                </Border>
                                <Border Background="#F39C12" CornerRadius="3" Padding="8,3" Margin="5,0">
                                    <TextBlock Text="Mao" Foreground="White" FontSize="10"/>
                                </Border>
                                <Border Background="#E74C3C" CornerRadius="3" Padding="8,3" Margin="5,0">
                                    <TextBlock Text="Brak" Foreground="White" FontSize="10"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <DataGrid Grid.Row="1" x:Name="dgDashboardProdukty"
                              Style="{StaticResource ModernDataGridStyle}"
                              ColumnHeaderStyle="{StaticResource ModernDataGridHeaderStyle}"
                              AutoGenerateColumns="False"
                              CanUserSortColumns="True"
                              Margin="5"/>
                </Grid>
            </Border>

            <!-- PRAWA KOLUMNA - Karty produkt贸w -->
            <Border Grid.Column="1" Background="White" CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Nag贸wek -->
                    <Border Grid.Row="0" CornerRadius="8,8,0,0" Padding="15,12">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#27ae60" Offset="0"/>
                                <GradientStop Color="#2ecc71" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="TOP PRODUKTY DO SPRZEDA呕Y" FontSize="14" Foreground="White" FontWeight="Bold"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="icDostepnoscProduktow" Margin="8">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="4" Padding="12" CornerRadius="8" Width="185"
                                            BorderThickness="3" BorderBrush="{Binding KolorRamki}">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding KolorTla}"/>
                                        </Border.Background>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Nazwa produktu -->
                                            <TextBlock Grid.Row="0" Text="{Binding Nazwa}"
                                                       FontWeight="Bold" FontSize="12"
                                                       Foreground="#2c3e50" TextWrapping="Wrap"
                                                       MaxHeight="40"/>

                                            <!-- Pasek postpu -->
                                            <Grid Grid.Row="1" Margin="0,10,0,8">
                                                <Border Background="#E0E0E0" CornerRadius="5" Height="16"/>
                                                <Border Background="{Binding KolorPaska}" CornerRadius="5" Height="16"
                                                        HorizontalAlignment="Left" Width="{Binding SzerokoscPaska}"/>
                                                <TextBlock Text="{Binding ProcentText}" FontSize="10" FontWeight="Bold"
                                                           Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Grid>

                                            <!-- DO SPRZEDANIA -->
                                            <Border Grid.Row="2" Background="{Binding KolorRamki}" CornerRadius="5" Padding="8,5" Margin="0,0,0,8">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="DO SPRZEDANIA: " FontSize="10" Foreground="White" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding BilansText}" FontSize="13" Foreground="White" FontWeight="Bold"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Szczeg贸y -->
                                            <Grid Grid.Row="3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Zam贸wione:" FontSize="9" Foreground="#7f8c8d"/>
                                                    <TextBlock Text="{Binding ZamowioneText}" FontSize="11" FontWeight="SemiBold" Foreground="#e74c3c"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="Stan mag.:" FontSize="9" Foreground="#7f8c8d"/>
                                                    <TextBlock Text="{Binding StanText}" FontSize="11" FontWeight="SemiBold" Foreground="#2c3e50"/>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- STOPKA -->
        <Border Grid.Row="3" Background="#2C3E50" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock x:Name="txtSumaZamowien" Text="Suma zam贸wie: 0 kg" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <Border Grid.Column="1" Background="#27AE60" CornerRadius="5" Padding="12,6" Margin="15,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Produkt贸w: " FontSize="12" Foreground="White"/>
                        <TextBlock x:Name="txtPlanProdukcji" Text="0" FontSize="13" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="#3498DB" CornerRadius="5" Padding="12,6" Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Zam贸wie: " FontSize="12" Foreground="White"/>
                        <TextBlock x:Name="txtWydajnoscGlowna" Text="0" FontSize="13" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <TextBlock Grid.Column="3" x:Name="txtStatusTime" Text="" Foreground="#95A5A6" FontSize="11" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
