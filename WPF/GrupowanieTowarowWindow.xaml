<Window x:Class="Kalendarz1.WPF.GrupowanieTowarowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grupowanie towarÃ³w - konfiguracja scalania"
        Width="1100" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SmallButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>

        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E9ECEF"/>
            <Setter Property="RowHeight" Value="32"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Extended"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <Style x:Key="GroupListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NagÅ‚Ã³wek -->
        <Border Grid.Row="0" Padding="14" CornerRadius="8" Margin="0,0,0,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#8E44AD" Offset="0"/>
                    <GradientStop Color="#9B59B6" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <StackPanel>
                    <TextBlock Text="GRUPOWANIE / SCALANIE TOWARÃ“W" FontSize="16" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="PoÅ‚Ä…cz produkty w grupy do wspÃ³lnego raportowania (np. Noga + SkrzydÅ‚o = Ä†wiartka)"
                               FontSize="11" Foreground="#D7BDE2" Margin="0,3,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Border Background="#27AE60" CornerRadius="6" Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ProduktÃ³w w grupach:" FontSize="11" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtGrupyCount" Text="0" FontSize="14" FontWeight="Bold"
                                       Foreground="White" Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Instrukcja -->
        <Border Grid.Row="1" Background="#E8F6F3" Padding="10" CornerRadius="5" Margin="0,0,0,10"
                BorderBrush="#1ABC9C" BorderThickness="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ’¡" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock TextWrapping="Wrap" VerticalAlignment="Center" FontSize="11">
                    <Run FontWeight="Bold">Jak uÅ¼ywaÄ‡:</Run>
                    <Run>1) UtwÃ³rz grupÄ™ po prawej stronie â†’ 2) Zaznacz produkty w tabeli (Ctrl+klik) â†’ 3) Kliknij "Przypisz do grupy" â†’ 4) Zapisz zmiany</Run>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- GÅ‚Ã³wna zawartoÅ›Ä‡ - dwie kolumny -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- Lewa strona - tabela produktÃ³w -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.08" BlurRadius="8"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- NagÅ‚Ã³wek tabeli -->
                    <Border Grid.Row="0" Background="#34495E" CornerRadius="8,8,0,0" Padding="12,8">
                        <Grid>
                            <TextBlock Text="LISTA PRODUKTÃ“W" FontSize="12" Foreground="White" FontWeight="Bold"/>
                            <TextBlock x:Name="txtSelectedCount" Text="Zaznaczono: 0" FontSize="11"
                                       Foreground="#BDC3C7" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>

                    <!-- Filtr -->
                    <Border Grid.Row="1" Background="#ECF0F1" Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Szukaj:" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="11"/>
                            <TextBox x:Name="txtSearch" Grid.Column="1" Height="26" FontSize="11"
                                     TextChanged="TxtSearch_TextChanged" VerticalContentAlignment="Center"/>
                            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0,0,0">
                                <CheckBox x:Name="chkShowOnlyGrouped" Content="Tylko zgrupowane"
                                          VerticalAlignment="Center" FontSize="11" Margin="0,0,10,0"
                                          Checked="ChkShowOnlyGrouped_Changed" Unchecked="ChkShowOnlyGrouped_Changed"/>
                                <CheckBox x:Name="chkShowOnlyUngrouped" Content="Tylko bez grupy"
                                          VerticalAlignment="Center" FontSize="11"
                                          Checked="ChkShowOnlyUngrouped_Changed" Unchecked="ChkShowOnlyUngrouped_Changed"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <DataGrid Grid.Row="2" x:Name="dgProdukty"
                              Style="{StaticResource ModernDataGridStyle}"
                              AutoGenerateColumns="False"
                              CanUserSortColumns="True"
                              SelectionChanged="DgProdukty_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding TowarId}" Width="55" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Nazwa produktu" Binding="{Binding NazwaProduktu}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Przypisana grupa" Binding="{Binding NazwaGrupy}" Width="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#8E44AD"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="KolejnoÅ›Ä‡" Binding="{Binding Kolejnosc}" Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Prawa strona - zarzÄ…dzanie grupami -->
            <Border Grid.Column="1" Background="White" CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.08" BlurRadius="8"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- NagÅ‚Ã³wek grup -->
                    <Border Grid.Row="0" Background="#8E44AD" CornerRadius="8,8,0,0" Padding="12,8">
                        <TextBlock Text="GRUPY SCALANIA" FontSize="12" Foreground="White" FontWeight="Bold"/>
                    </Border>

                    <!-- Lista grup -->
                    <ListBox Grid.Row="1" x:Name="lstGrupy" Style="{StaticResource GroupListBoxStyle}"
                             SelectionChanged="LstGrupy_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8,6" Margin="2" CornerRadius="4" Background="#F8F9FA">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Nazwa}" FontWeight="SemiBold" FontSize="12"/>
                                            <TextBlock Text="{Binding IloscProduktow, StringFormat='ProduktÃ³w: {0}'}"
                                                       FontSize="10" Foreground="#7F8C8D"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="1" Text="{Binding IloscProduktow}"
                                                   FontSize="14" FontWeight="Bold" Foreground="#8E44AD"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Przyciski zarzÄ…dzania grupami -->
                    <Border Grid.Row="2" Background="#ECF0F1" Padding="8">
                        <StackPanel>
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Content="+ Nowa grupa" Style="{StaticResource SmallButtonStyle}"
                                        Background="#27AE60" Click="BtnNowaGrupa_Click" Margin="0,0,3,0"/>
                                <Button Grid.Column="1" Content="âœï¸ ZmieÅ„ nazwÄ™" Style="{StaticResource SmallButtonStyle}"
                                        Background="#3498DB" Click="BtnZmienNazwe_Click" Margin="3,0,0,0"
                                        x:Name="btnZmienNazwe" IsEnabled="False"/>
                            </Grid>
                            <Button Content="ðŸ—‘ï¸ UsuÅ„ grupÄ™" Style="{StaticResource SmallButtonStyle}"
                                    Background="#E74C3C" Click="BtnUsunGrupe_Click"
                                    x:Name="btnUsunGrupe" IsEnabled="False"/>
                        </StackPanel>
                    </Border>

                    <!-- Przypisywanie produktÃ³w -->
                    <Border Grid.Row="3" Background="#D5F5E3" Padding="8" CornerRadius="0,0,8,8">
                        <StackPanel>
                            <TextBlock Text="PRZYPISZ ZAZNACZONE PRODUKTY:" FontSize="10" FontWeight="Bold"
                                       Foreground="#27AE60" Margin="0,0,0,6"/>
                            <Button x:Name="btnPrzypisz" Content="ðŸ“¥ Przypisz do wybranej grupy"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Background="#27AE60" Click="BtnPrzypisz_Click" IsEnabled="False"/>
                            <Button x:Name="btnOdpinij" Content="âŒ UsuÅ„ z grupy"
                                    Style="{StaticResource SmallButtonStyle}"
                                    Background="#E67E22" Click="BtnOdpinij_Click" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Stopka z przyciskami -->
        <Border Grid.Row="3" Margin="0,10,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="PodpowiedÅº: Ctrl+A zaznacza wszystkie, Ctrl+klik zaznacza wiele"
                               FontSize="10" Foreground="#7F8C8D" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ’¾ Zapisz zmiany" Style="{StaticResource ModernButtonStyle}"
                            Background="#27AE60" Click="BtnZapisz_Click" Margin="0,0,8,0" Padding="16,8"/>
                    <Button Content="Anuluj" Style="{StaticResource ModernButtonStyle}"
                            Background="#95A5A6" Click="BtnAnuluj_Click" Padding="16,8"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
