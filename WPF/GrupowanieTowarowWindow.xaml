<Window x:Class="Kalendarz1.WPF.GrupowanieTowarowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grupowanie towar贸w - konfiguracja scalania"
        Width="900" Height="650"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E9ECEF"/>
            <Setter Property="RowHeight" Value="36"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nag贸wek -->
        <Border Grid.Row="0" Padding="16" CornerRadius="8" Margin="0,0,0,12">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#8E44AD" Offset="0"/>
                    <GradientStop Color="#9B59B6" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel>
                <TextBlock Text="GRUPOWANIE TOWARW" FontSize="18" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Pocz towary w grupy - np. Noga + Skrzydo = wiartka. Zam贸wienia bd sumowane razem."
                           FontSize="12" Foreground="#D7BDE2" Margin="0,4,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Instrukcja -->
        <Border Grid.Row="1" Background="#FEF9E7" Padding="12" CornerRadius="6" Margin="0,0,0,12"
                BorderBrush="#F7DC6F" BorderThickness="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock TextWrapping="Wrap" VerticalAlignment="Center" FontSize="11">
                    <Run FontWeight="Bold">Jak to dziaa:</Run>
                    <Run>Ustaw nazw grupy dla produkt贸w, kt贸re chcesz scali. Np. dla "Noga", "Skrzydo", "Paka" ustaw grup "wiartka".</Run>
                    <LineBreak/>
                    <Run>W wykresach i podsumowaniach zam贸wienia na te produkty bd sumowane razem jako "wiartka".</Run>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Tabela produkt贸w -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Nag贸wek tabeli -->
                <Border Grid.Row="0" Background="#34495E" CornerRadius="8,8,0,0" Padding="12,10">
                    <Grid>
                        <TextBlock Text="LISTA PRODUKTW" FontSize="13" Foreground="White" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Produkt贸w w grupach:" Foreground="#BDC3C7" FontSize="11" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtGrupyCount" Text="0" FontSize="13" Foreground="#2ECC71"
                                       FontWeight="Bold" Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <DataGrid Grid.Row="1" x:Name="dgProdukty"
                          Style="{StaticResource ModernDataGridStyle}"
                          AutoGenerateColumns="False"
                          CanUserSortColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding TowarId}" Width="60" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Nazwa produktu" Binding="{Binding NazwaProduktu}" Width="200" IsReadOnly="True"/>
                        <DataGridComboBoxColumn Header="Grupa (scalanie)" x:Name="colGrupa" Width="180"
                                                SelectedItemBinding="{Binding NazwaGrupy, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Kolejno" Binding="{Binding Kolejnosc}" Width="80"/>
                        <DataGridCheckBoxColumn Header="Aktywne" Binding="{Binding Aktywne}" Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Przyciski -->
        <Border Grid.Row="3" Margin="0,12,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="+ Nowa grupa" Style="{StaticResource ModernButtonStyle}"
                            Background="#27AE60" Click="BtnNowaGrupa_Click" Margin="0,0,8,0"/>
                    <Button Content="Usu grup z zaznaczonych" Style="{StaticResource ModernButtonStyle}"
                            Background="#E67E22" Click="BtnUsunGrupe_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Zapisz zmiany" Style="{StaticResource ModernButtonStyle}"
                            Background="#27AE60" Click="BtnZapisz_Click" Margin="0,0,8,0"/>
                    <Button Content="Anuluj" Style="{StaticResource ModernButtonStyle}"
                            Background="#95A5A6" Click="BtnAnuluj_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
