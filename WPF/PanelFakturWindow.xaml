<Window x:Class="Kalendarz1.WPF.PanelFakturWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Panel Faktur - Symfonia Handel"
        Height="768" Width="1400"
        WindowState="Maximized"
        Background="#F5F7FA"
        FontFamily="Segoe UI">

    <Window.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="PrimaryBlue" Color="#1976D2"/>
            <SolidColorBrush x:Key="PrimaryBlueHover" Color="#1565C0"/>
            <SolidColorBrush x:Key="SuccessGreen" Color="#4CAF50"/>
            <SolidColorBrush x:Key="WarningOrange" Color="#FF9800"/>
            <SolidColorBrush x:Key="TextDark" Color="#2C3E50"/>
            <SolidColorBrush x:Key="TextLight" Color="#7F8C8D"/>
            <SolidColorBrush x:Key="BackgroundLight" Color="#F5F7FA"/>
            <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>

            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#1976D2"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="MinWidth" Value="120"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Margin" Value="5,0"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="5"
                                    Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#1565C0"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                <Setter Property="Background" Value="#4CAF50"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#388E3C"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="SelectionMode" Value="Single"/>
                <Setter Property="SelectionUnit" Value="FullRow"/>
                <Setter Property="GridLinesVisibility" Value="Horizontal"/>
                <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="RowHeight" Value="35"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>

            <Style x:Key="DayButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="70"/>
                <Setter Property="Height" Value="50"/>
                <Setter Property="Margin" Value="3,0"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

            <Style x:Key="RightAlignedCellStyle" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Right"/>
            </Style>

            <Style x:Key="BoldCellStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

            <Style x:Key="CenterAlignedCellStyle" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- NAGÅÃ“WEK -->
        <Border Grid.Row="0" Background="#1976D2" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Panel Faktur" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text=" - Symfonia Handel" FontSize="16" Foreground="#B3E5FC" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="btnRefresh" Content="OdÅ›wieÅ¼" Style="{StaticResource ActionButtonStyle}"
                            Background="#0288D1" Click="BtnRefresh_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- PASEK NAWIGACJI DNI -->
        <Border Grid.Row="1" Background="White" Padding="10,8" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Nawigacja tygodniowa -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="btnPrevWeek" Content="â—„" Width="35" Height="35" Margin="0,0,5,0"
                            Click="BtnPrevWeek_Click" ToolTip="Poprzedni tydzieÅ„"/>
                    <Button x:Name="btnNextWeek" Content="â–º" Width="35" Height="35" Margin="0,0,10,0"
                            Click="BtnNextWeek_Click" ToolTip="NastÄ™pny tydzieÅ„"/>
                </StackPanel>

                <!-- Przyciski dni -->
                <StackPanel x:Name="panelDays" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left"/>

                <!-- Filtry -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Szukaj:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtSearch" Width="150" Height="30" VerticalContentAlignment="Center"
                             TextChanged="TxtSearch_TextChanged"/>
                    <CheckBox x:Name="chkShowFakturowane" Content="PokaÅ¼ juÅ¼ zafakturowane"
                              VerticalAlignment="Center" Margin="15,0,0,0"
                              Checked="ChkShowFakturowane_Changed" Unchecked="ChkShowFakturowane_Changed"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ZAWARTOÅšÄ† - dwie kolumny -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="480"/>
            </Grid.ColumnDefinitions>

            <!-- Lewa kolumna - lista zamÃ³wieÅ„ do fakturowania -->
            <Border Grid.Column="0" Background="White" Margin="10" CornerRadius="8"
                    BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#F8F9FA" Padding="10" CornerRadius="8,8,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ZamÃ³wienia do zafakturowania" FontSize="16" FontWeight="SemiBold"
                                       Foreground="#2C3E50" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock x:Name="txtOrdersCount" Text="0 zamÃ³wieÅ„"
                                           VerticalAlignment="Center" Foreground="#7F8C8D" Margin="0,0,15,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Legenda statusÃ³w -->
                    <Border Grid.Row="1" Background="#FAFAFA" Padding="10,6" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Legenda:" FontWeight="SemiBold" Foreground="#2C3E50" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <Border Background="#FFF3E0" CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                                <TextBlock Text="Nowe" FontSize="11" Foreground="#E65100" ToolTip="ZamÃ³wienie nowe, oczekuje na realizacjÄ™"/>
                            </Border>
                            <Border Background="#E3F2FD" CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                                <TextBlock Text="W realizacji" FontSize="11" Foreground="#1565C0" ToolTip="ZamÃ³wienie jest w trakcie realizacji"/>
                            </Border>
                            <Border Background="#E8F5E9" CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                                <TextBlock Text="Zrealizowane" FontSize="11" Foreground="#2E7D32" ToolTip="ZamÃ³wienie zostaÅ‚o zrealizowane, gotowe do fakturowania"/>
                            </Border>
                            <Border Background="#C8E6C9" CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                                <TextBlock Text="Zafakturowane" FontSize="11" Foreground="#1B5E20" FontStyle="Italic" ToolTip="ZamÃ³wienie zostaÅ‚o juÅ¼ zafakturowane"/>
                            </Border>
                            <Border Background="#FFEBEE" CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                                <TextBlock Text="Anulowane" FontSize="11" Foreground="#C62828" ToolTip="ZamÃ³wienie zostaÅ‚o anulowane (ukryte)"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <DataGrid x:Name="dgOrders" Grid.Row="2" Style="{StaticResource ModernDataGridStyle}"
                              SelectionChanged="DgOrders_SelectionChanged"
                              MouseDoubleClick="DgOrders_MouseDoubleClick">
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Prawa kolumna - szczegÃ³Å‚y zamÃ³wienia i akcje -->
            <Grid Grid.Column="1" Margin="0,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- SzczegÃ³Å‚y zamÃ³wienia -->
                <Border Grid.Row="0" Background="White" CornerRadius="8"
                        BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#F8F9FA" Padding="10" CornerRadius="8,8,0,0">
                            <TextBlock Text="SzczegÃ³Å‚y zamÃ³wienia" FontSize="16" FontWeight="SemiBold"
                                       Foreground="#2C3E50"/>
                        </Border>

                        <!-- Info o odbiorcy -->
                        <Border Grid.Row="1" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="txtOdbiorca" Text="Wybierz zamÃ³wienie..."
                                               FontSize="14" FontWeight="Bold" Foreground="#2C3E50"/>
                                    <TextBlock x:Name="txtHandlowiec" Text="" FontSize="12" Foreground="#7F8C8D" Margin="0,3,0,0"/>
                                    <TextBlock x:Name="txtDataZamowienia" Text="" FontSize="12" Foreground="#7F8C8D"/>
                                </StackPanel>

                                <!-- Info o transporcie -->
                                <Border Grid.Column="1" Background="#E3F2FD" CornerRadius="5" Padding="10,5"
                                        x:Name="borderTransport" Visibility="Collapsed">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸš›" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBlock Text="Transport" FontSize="12" FontWeight="SemiBold" Foreground="#1565C0"/>
                                        </StackPanel>
                                        <TextBlock x:Name="txtGodzWyjazdu" Text="" FontSize="11" Foreground="#1976D2" Margin="0,3,0,0"/>
                                        <TextBlock x:Name="txtKierowca" Text="" FontSize="11" Foreground="#1976D2"/>
                                        <TextBlock x:Name="txtPojazd" Text="" FontSize="11" Foreground="#1976D2"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Lista produktÃ³w -->
                        <DataGrid x:Name="dgDetails" Grid.Row="2" Style="{StaticResource ModernDataGridStyle}"
                                  Margin="5">
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- Panel akcji -->
                <Border Grid.Row="1" Background="White" CornerRadius="8"
                        BorderBrush="#E0E0E0" BorderThickness="1" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Akcje fakturowania" FontSize="14" FontWeight="SemiBold"
                                   Foreground="#2C3E50" Margin="0,0,0,10"/>

                        <Button x:Name="btnCreateInvoice" Content="UtwÃ³rz fakturÄ™ w Symfonii"
                                Style="{StaticResource SuccessButtonStyle}"
                                Height="45" FontSize="14"
                                Click="BtnCreateInvoice_Click"
                                IsEnabled="False"/>

                        <TextBlock x:Name="txtInvoiceStatus" Text="Wybierz zamÃ³wienie aby utworzyÄ‡ fakturÄ™"
                                   FontSize="11" Foreground="#7F8C8D" TextAlignment="Center" Margin="0,10,0,0"
                                   TextWrapping="Wrap"/>

                        <Separator Margin="0,15"/>

                        <CheckBox x:Name="chkMarkAsFakturowane" Content="Oznacz jako zafakturowane po utworzeniu"
                                  IsChecked="True" Margin="0,5"/>

                        <Button x:Name="btnMarkFakturowane" Content="Oznacz jako zafakturowane"
                                Style="{StaticResource ActionButtonStyle}"
                                Height="35" Margin="0,10,0,0"
                                Click="BtnMarkFakturowane_Click"
                                IsEnabled="False"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
