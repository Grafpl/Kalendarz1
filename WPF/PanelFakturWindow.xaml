<Window x:Class="Kalendarz1.WPF.PanelFakturWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Panel Faktur - ZamÃ³wienia KlientÃ³w"
        MinHeight="600" MinWidth="1000"
        WindowState="Maximized"
        Background="#F5F7FA"
        FontFamily="Segoe UI"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="PrimaryBlue" Color="#1976D2"/>
            <SolidColorBrush x:Key="PrimaryBlueHover" Color="#1565C0"/>
            <SolidColorBrush x:Key="SuccessGreen" Color="#4CAF50"/>
            <SolidColorBrush x:Key="WarningOrange" Color="#FF9800"/>
            <SolidColorBrush x:Key="TextDark" Color="#2C3E50"/>
            <SolidColorBrush x:Key="TextLight" Color="#7F8C8D"/>
            <SolidColorBrush x:Key="BackgroundLight" Color="#F5F7FA"/>
            <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>

            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#1976D2"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="MinWidth" Value="100"/>
                <Setter Property="MinHeight" Value="36"/>
                <Setter Property="Margin" Value="5,0"/>
                <Setter Property="Padding" Value="12,6"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="5"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#1565C0"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                <Setter Property="Background" Value="#4CAF50"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#388E3C"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="SelectionMode" Value="Single"/>
                <Setter Property="SelectionUnit" Value="FullRow"/>
                <Setter Property="GridLinesVisibility" Value="Horizontal"/>
                <Setter Property="HorizontalGridLinesBrush" Value="#D0D0D0"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#D0D0D0"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="AlternatingRowBackground" Value="#F8FAFC"/>
                <Setter Property="RowBackground" Value="White"/>
                <Setter Property="HeadersVisibility" Value="Column"/>
                <Setter Property="CanUserResizeRows" Value="False"/>
                <Setter Property="CanUserResizeColumns" Value="True"/>
            </Style>

            <Style x:Key="ModernDataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
                <Setter Property="Background" Value="#1976D2"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="MinHeight" Value="42"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="BorderBrush" Value="#1565C0"/>
                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

            <Style x:Key="ModernDataGridCellStyle" TargetType="DataGridCell">
                <Setter Property="Padding" Value="8,6"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#BBDEFB"/>
                        <Setter Property="Foreground" Value="#1565C0"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="ModernDataGridRowStyle" TargetType="DataGridRow">
                <Setter Property="Margin" Value="0"/>
                <Setter Property="MinHeight" Value="40"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#E3F2FD"/>
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#BBDEFB"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="DayButtonStyle" TargetType="Button">
                <Setter Property="MinWidth" Value="60"/>
                <Setter Property="Height" Value="45"/>
                <Setter Property="Margin" Value="2,0"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

            <Style x:Key="RightAlignedCellStyle" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Right"/>
            </Style>

            <Style x:Key="BoldCellStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

            <Style x:Key="CenterAlignedCellStyle" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="600"/>
            <ColumnDefinition Width="380" MinWidth="350" MaxWidth="450"/>
        </Grid.ColumnDefinitions>

        <!-- LEWA STRONA - nagÅ‚Ã³wek i lista -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- KOMPAKTOWY PASEK NAWIGACJI -->
            <Border Grid.Row="0" Background="#1976D2" Padding="6,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Nawigacja tygodniowa -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="btnPrevWeek" Content="â—€" MinWidth="30" Height="30" Margin="0,0,2,0"
                                Click="BtnPrevWeek_Click" ToolTip="Poprzedni tydzieÅ„"
                                Background="#1565C0" Foreground="White" FontSize="12" FontWeight="Bold"
                                BorderThickness="0" Cursor="Hand"/>
                        <Button x:Name="btnNextWeek" Content="â–¶" MinWidth="30" Height="30" Margin="0,0,8,0"
                                Click="BtnNextWeek_Click" ToolTip="NastÄ™pny tydzieÅ„"
                                Background="#1565C0" Foreground="White" FontSize="12" FontWeight="Bold"
                                BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>

                    <!-- Przyciski dni -->
                    <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled"
                                  MaxWidth="500">
                        <StackPanel x:Name="panelDays" Orientation="Horizontal" HorizontalAlignment="Left"/>
                    </ScrollViewer>

                    <!-- ComboBox towaru -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                        <TextBlock Text="Towar:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="White" FontSize="12"/>
                        <ComboBox x:Name="cmbProduct" Width="140" Height="28" FontSize="12"
                                  SelectionChanged="CmbProduct_SelectionChanged"/>
                    </StackPanel>

                    <!-- Szukaj i filtry -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                        <TextBlock Text="Szukaj:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="White" FontSize="12"/>
                        <TextBox x:Name="txtSearch" Width="120" Height="28" VerticalContentAlignment="Center" FontSize="12"
                                 TextChanged="TxtSearch_TextChanged" Padding="6,0"/>
                        <CheckBox x:Name="chkShowFakturowane" Content="Zafakturowane"
                                  VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White" FontSize="11"
                                  Checked="ChkShowFakturowane_Changed" Unchecked="ChkShowFakturowane_Changed"/>
                    </StackPanel>

                    <!-- OdÅ›wieÅ¼ -->
                    <Button x:Name="btnRefresh" Grid.Column="4" Content="ðŸ”„"
                            Background="#0D47A1" Foreground="White" FontSize="14"
                            Width="36" Height="30" Margin="8,0,0,0" BorderThickness="0" Cursor="Hand"
                            Click="BtnRefresh_Click" ToolTip="OdÅ›wieÅ¼"/>
                </Grid>
            </Border>

            <!-- Lista zamÃ³wieÅ„ -->
            <Border Grid.Row="1" Background="White" Margin="8,8,4,8" CornerRadius="6"
                    BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#F8F9FA" Padding="8,6" CornerRadius="6,6,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ZamÃ³wienia do zafakturowania" FontSize="14" FontWeight="SemiBold"
                                       Foreground="#2C3E50" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtOrdersCount" Grid.Column="1" Text="0 zamÃ³wieÅ„"
                                       VerticalAlignment="Center" Foreground="#7F8C8D" FontSize="12"/>
                        </Grid>
                    </Border>

                    <!-- Kompaktowa legenda statusÃ³w -->
                    <Border Grid.Row="1" Background="#FAFAFA" Padding="4,2" BorderBrush="#E8E8E8" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Border Background="#FFF8E1" CornerRadius="3" Padding="4,1" Margin="0,0,2,0" ToolTip="Nowe zlecenie">
                                <TextBlock Text="Nowe" FontSize="9" Foreground="#F57C00" FontWeight="SemiBold"/>
                            </Border>
                            <Border Background="#E3F2FD" CornerRadius="3" Padding="4,1" Margin="0,0,2,0" ToolTip="W realizacji">
                                <TextBlock Text="Realiz." FontSize="9" Foreground="#1976D2" FontWeight="SemiBold"/>
                            </Border>
                            <Border Background="#E8F5E9" CornerRadius="3" Padding="4,1" Margin="0,0,2,0" ToolTip="Zrealizowane">
                                <TextBlock Text="Zreal." FontSize="9" Foreground="#388E3C" FontWeight="SemiBold"/>
                            </Border>
                            <Border Background="#E1F5FE" CornerRadius="3" Padding="4,1" Margin="0,0,2,0" ToolTip="Wydane z magazynu">
                                <TextBlock Text="Wydano" FontSize="9" Foreground="#0277BD" FontWeight="SemiBold"/>
                            </Border>
                            <Border Background="#C8E6C9" CornerRadius="3" Padding="4,1" Margin="0,0,2,0" ToolTip="Zafakturowane">
                                <TextBlock Text="Fakt." FontSize="9" Foreground="#2E7D32" FontWeight="SemiBold"/>
                            </Border>
                            <Border Background="#FFF3E0" CornerRadius="3" Padding="4,1" BorderBrush="#FFB74D" BorderThickness="1" ToolTip="Zmiana w zamÃ³wieniu">
                                <TextBlock Text="âš Zmiana" FontSize="9" Foreground="#E65100" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <DataGrid x:Name="dgOrders" Grid.Row="2" Style="{StaticResource ModernDataGridStyle}"
                              ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                              CellStyle="{StaticResource ModernDataGridCellStyle}"
                              ItemsSource="{Binding ZamowieniaList}"
                              SelectionChanged="DgOrders_SelectionChanged"
                              MouseDoubleClick="DgOrders_MouseDoubleClick">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow" BasedOn="{StaticResource ModernDataGridRowStyle}">
                                <Setter Property="Background" Value="{Binding RowBackground}"/>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <!-- Klient z wykrzyknikiem i kolorem gdy zmiana -->
                            <DataGridTemplateColumn Header="Odbiorca" Width="*" MinWidth="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Klient}" Foreground="{Binding KlientColor}" FontWeight="SemiBold"
                                                   VerticalAlignment="Center" Margin="5,3" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Handlowiec" Width="Auto" MinWidth="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Handlowiec}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="5,3"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="IloÅ›Ä‡ [kg]" Binding="{Binding TotalIlosc, StringFormat=N0}" Width="Auto" MinWidth="65">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Margin" Value="0,0,6,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="WartoÅ›Ä‡" Binding="{Binding Wartosc, StringFormat=N2}" Width="Auto" MinWidth="75">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="0,0,6,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- Cena - czy wszystkie towary majÄ… cenÄ™ -->
                            <DataGridTemplateColumn Header="Cen" Width="Auto" MinWidth="35">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding CenaDisplay}" Foreground="{Binding CenaColor}" FontWeight="Bold" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!-- Status z kolorem -->
                            <DataGridTemplateColumn Header="Status" Width="Auto" MinWidth="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding StatusDisplay}" Foreground="{Binding StatusColor}" FontWeight="Medium" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!-- Data ostatniej zmiany - format: sty 12 12:00 -->
                            <DataGridTemplateColumn Header="Ost. Zmiana" Width="Auto" MinWidth="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding OstatniaZmiana}" Foreground="{Binding ZmianaColor}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!-- Kto zmieniÅ‚ - imiÄ™ i nazwisko -->
                            <DataGridTemplateColumn Header="Kto zmieniÅ‚" Width="Auto" MinWidth="85">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding KtoZmienil}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="5,3"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!-- Kolumny transportowe -->
                            <DataGridTextColumn Header="Wyjazd" Binding="{Binding GodzWyjazdu}" Width="Auto" MinWidth="60">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="Kierowca" Width="Auto" MinWidth="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Kierowca}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="5,3"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- PRAWA STRONA - szczegÃ³Å‚y i akcje (peÅ‚na wysokoÅ›Ä‡) -->
        <Border Grid.Column="1" Background="White" Margin="4,8,8,8" CornerRadius="6"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#1976D2" Padding="10,8" CornerRadius="6,6,0,0">
                    <TextBlock Text="SzczegÃ³Å‚y zamÃ³wienia" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                </Border>

                <!-- Info o odbiorcy -->
                <Border Grid.Row="1" Padding="10,8" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="txtOdbiorca" Text="Wybierz zamÃ³wienie..."
                                       FontSize="13" FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock x:Name="txtHandlowiec" Text="" FontSize="11" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                            <TextBlock x:Name="txtDataZamowienia" Text="" FontSize="11" Foreground="#7F8C8D"/>
                        </StackPanel>

                        <!-- Info o transporcie -->
                        <Border Grid.Column="1" Background="#E3F2FD" CornerRadius="6" Padding="8,6"
                                x:Name="borderTransport" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="TRANSPORT" FontSize="9" FontWeight="Bold" Foreground="#1565C0" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                <TextBlock x:Name="txtGodzWyjazdu" Text="" FontSize="11" FontWeight="SemiBold" Foreground="#1565C0"/>
                                <TextBlock x:Name="txtKierowca" Text="" FontSize="10" Foreground="#2C3E50"/>
                                <TextBlock x:Name="txtPojazd" Text="" FontSize="10" Foreground="#7F8C8D"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Lista produktÃ³w -->
                <DataGrid x:Name="dgDetails" Grid.Row="2" Style="{StaticResource ModernDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                          CellStyle="{StaticResource ModernDataGridCellStyle}"
                          RowStyle="{StaticResource ModernDataGridRowStyle}"
                          Margin="5">
                </DataGrid>

                <!-- Panel akcji -->
                <Border Grid.Row="3" Background="#F8F9FA" Padding="10" CornerRadius="0,0,6,6" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
                    <StackPanel>
                        <!-- Panel powiadomienia o zmianie -->
                        <Border x:Name="borderZmiana" Background="#FFF3E0" CornerRadius="6" Padding="10" Margin="0,0,0,8"
                                BorderBrush="#FFB74D" BorderThickness="2" Visibility="Collapsed">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,6">
                                    <TextBlock Text="âš ï¸" FontSize="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="ZMIANA W ZAMÃ“WIENIU" FontSize="12" FontWeight="Bold" Foreground="#E65100" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock x:Name="txtZmianaInfo" Text="ZamÃ³wienie zostaÅ‚o zmodyfikowane."
                                           FontSize="10" Foreground="#5D4037" TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,4"/>

                                <!-- Lista co konkretnie siÄ™ zmieniÅ‚o -->
                                <Border Background="#FFFBF0" CornerRadius="4" Padding="6" Margin="0,0,0,8" MaxHeight="120">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsControl x:Name="icZmianyList">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="0,1">
                                                        <TextBlock Text="â€¢" FontWeight="Bold" Foreground="#E65100" Margin="0,0,4,0"/>
                                                        <TextBlock Text="{Binding}" FontSize="10" Foreground="#5D4037" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>

                                <Button x:Name="btnAcceptChange" Content="âœ“ PrzyjmujÄ™ zmianÄ™"
                                        Style="{StaticResource SuccessButtonStyle}"
                                        Height="36" FontSize="12"
                                        Click="BtnAcceptChange_Click"/>
                            </StackPanel>
                        </Border>

                        <TextBlock x:Name="txtInvoiceStatus" Text="Wybierz zamÃ³wienie z listy"
                                   FontSize="10" Foreground="#7F8C8D" TextAlignment="Center" Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>

                        <Button x:Name="btnMarkFakturowane" Content="Oznacz jako zafakturowane"
                                Style="{StaticResource ActionButtonStyle}"
                                Height="38" Margin="0,0,0,6" FontSize="12"
                                Click="BtnMarkFakturowane_Click"
                                IsEnabled="False"/>

                        <Button x:Name="btnCofnijFakturowanie" Content="Cofnij fakturowanie"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="#F57C00"
                                Height="38" FontSize="12"
                                Click="BtnCofnijFakturowanie_Click"
                                IsEnabled="False"
                                ToolTip="Cofnij status zafakturowane"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
