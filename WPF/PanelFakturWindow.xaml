<Window x:Class="Kalendarz1.WPF.PanelFakturWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Panel Faktur - ZamÃ³wienia KlientÃ³w"
        MinHeight="600" MinWidth="1000"
        WindowState="Maximized"
        Background="#F5F7FA"
        FontFamily="Segoe UI"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <ResourceDictionary>
            <!-- Konwerter widocznoÅ›ci -->
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>

            <!-- Efekt cienia -->
            <DropShadowEffect x:Key="CardShadow" BlurRadius="12" ShadowDepth="2" Opacity="0.15" Direction="270"/>
            <DropShadowEffect x:Key="SubtleShadow" BlurRadius="6" ShadowDepth="1" Opacity="0.1" Direction="270"/>

            <!-- Styl przyciskÃ³w akcji z ikonÄ… -->
            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#2563EB"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="20,10"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Effect" Value="{StaticResource SubtleShadow}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}"
                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#1D4ED8"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background" Value="#CBD5E1"/>
                                    <Setter Property="Foreground" Value="#94A3B8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                <Setter Property="Background" Value="#16A34A"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}"
                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#15803D"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                <Setter Property="Background" Value="#EA580C"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}"
                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#C2410C"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background" Value="#CBD5E1"/>
                                    <Setter Property="Foreground" Value="#94A3B8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Profesjonalny styl DataGrid -->
            <Style x:Key="ProDataGridStyle" TargetType="DataGrid">
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="SelectionMode" Value="Single"/>
                <Setter Property="SelectionUnit" Value="FullRow"/>
                <Setter Property="GridLinesVisibility" Value="Horizontal"/>
                <Setter Property="HorizontalGridLinesBrush" Value="#F1F5F9"/>
                <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="RowBackground" Value="White"/>
                <Setter Property="AlternatingRowBackground" Value="#FAFBFC"/>
                <Setter Property="HeadersVisibility" Value="Column"/>
                <Setter Property="CanUserResizeRows" Value="False"/>
                <Setter Property="CanUserResizeColumns" Value="True"/>
                <Setter Property="CanUserReorderColumns" Value="False"/>
            </Style>

            <!-- Styl nagÅ‚Ã³wkÃ³w kolumn - gradient -->
            <Style x:Key="ProColumnHeaderStyle" TargetType="DataGridColumnHeader">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#1E293B" Offset="0"/>
                            <GradientStop Color="#334155" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground" Value="#F8FAFC"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="MinHeight" Value="40"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                <Setter Property="BorderBrush" Value="#475569"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

            <!-- Styl komÃ³rek -->
            <Style x:Key="ProCellStyle" TargetType="DataGridCell">
                <Setter Property="Padding" Value="12,6"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                <ContentPresenter VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#DBEAFE"/>
                        <Setter Property="Foreground" Value="#1E40AF"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Styl wierszy -->
            <Style x:Key="ProRowStyle" TargetType="DataGridRow">
                <Setter Property="MinHeight" Value="44"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#EFF6FF"/>
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#DBEAFE"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Kompaktowy styl wierszy dla szczegÃ³Å‚Ã³w -->
            <Style x:Key="CompactRowStyle" TargetType="DataGridRow">
                <Setter Property="MinHeight" Value="36"/>
                <Setter Property="FontSize" Value="12"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#EFF6FF"/>
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#DBEAFE"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Styl przyciskÃ³w dni -->
            <Style x:Key="DayButtonStyle" TargetType="Button">
                <Setter Property="MinWidth" Value="54"/>
                <Setter Property="Height" Value="44"/>
                <Setter Property="Margin" Value="2,0"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="#334155"/>
                <Setter Property="BorderBrush" Value="#E2E8F0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#EFF6FF"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#3B82F6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="500"/>
            <ColumnDefinition Width="480" MinWidth="420" MaxWidth="560"/>
        </Grid.ColumnDefinitions>

        <!-- LEWA STRONA -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- PASEK NAWIGACJI - Gradient -->
            <Border Grid.Row="0" Padding="12,10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1E40AF" Offset="0"/>
                        <GradientStop Color="#3B82F6" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Nawigacja tygodniowa -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="btnPrevWeek" Content="â—€" Width="38" Height="38" Margin="0,0,4,0"
                                Click="BtnPrevWeek_Click" ToolTip="Poprzedni tydzieÅ„"
                                Background="#1E3A8A" Foreground="White" FontSize="14" FontWeight="Bold"
                                BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bd" Property="Background" Value="#1E40AF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="btnNextWeek" Content="â–¶" Width="38" Height="38" Margin="0,0,16,0"
                                Click="BtnNextWeek_Click" ToolTip="NastÄ™pny tydzieÅ„"
                                Background="#1E3A8A" Foreground="White" FontSize="14" FontWeight="Bold"
                                BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bd" Property="Background" Value="#1E40AF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <!-- Przyciski dni -->
                    <StackPanel x:Name="panelDays" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"/>

                    <!-- ComboBox towaru -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                        <TextBlock Text="Towar:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="White" FontSize="13" FontWeight="Medium"/>
                        <ComboBox x:Name="cmbProduct" Width="150" Height="34" FontSize="12"
                                  SelectionChanged="CmbProduct_SelectionChanged"/>
                    </StackPanel>

                    <!-- Filtr zafakturowane -->
                    <CheckBox x:Name="chkShowFakturowane" Grid.Column="3" Content="Zafakturowane"
                              VerticalAlignment="Center" Margin="20,0,0,0" Foreground="White" FontSize="12"
                              Checked="ChkShowFakturowane_Changed" Unchecked="ChkShowFakturowane_Changed"/>

                    <!-- OdÅ›wieÅ¼ -->
                    <Button x:Name="btnRefresh" Grid.Column="4" Content="âŸ³ OdÅ›wieÅ¼"
                            Background="#1E3A8A" Foreground="White" FontSize="12" FontWeight="SemiBold"
                            Width="100" Height="36" Margin="16,0,0,0" BorderThickness="0" Cursor="Hand"
                            Click="BtnRefresh_Click" ToolTip="OdÅ›wieÅ¼ dane">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bd" Property="Background" Value="#1E40AF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </Grid>
            </Border>

            <!-- TABELA ZAMÃ“WIEÅƒ -->
            <Border Grid.Row="1" Background="White" Margin="12,12,6,12" CornerRadius="12"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- NagÅ‚Ã³wek tabeli -->
                    <Border Grid.Row="0" Background="White" Padding="20,16" CornerRadius="12,12,0,0"
                            BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="ðŸ“‹" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="ZamÃ³wienia do zafakturowania" FontSize="17" FontWeight="SemiBold"
                                           Foreground="#1E293B" VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Legenda statusÃ³w -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,24,0">
                                <Border Background="#FEF3C7" CornerRadius="6" Padding="10,4" Margin="0,0,8,0">
                                    <TextBlock Text="Nowe" FontSize="10" Foreground="#92400E" FontWeight="SemiBold"/>
                                </Border>
                                <Border Background="#DCFCE7" CornerRadius="6" Padding="10,4" Margin="0,0,8,0">
                                    <TextBlock Text="Zreal." FontSize="10" Foreground="#166534" FontWeight="SemiBold"/>
                                </Border>
                                <Border Background="#DBEAFE" CornerRadius="6" Padding="10,4" Margin="0,0,8,0">
                                    <TextBlock Text="Wydano" FontSize="10" Foreground="#1E40AF" FontWeight="SemiBold"/>
                                </Border>
                                <Border Background="#FED7AA" CornerRadius="6" Padding="10,4" BorderBrush="#FB923C" BorderThickness="1">
                                    <TextBlock Text="âš  Zmiana" FontSize="10" Foreground="#C2410C" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>

                            <Border Grid.Column="2" Background="#F1F5F9" CornerRadius="8" Padding="12,6">
                                <TextBlock x:Name="txtOrdersCount" Text="0 zamÃ³wieÅ„"
                                           Foreground="#64748B" FontSize="13" FontWeight="SemiBold"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid x:Name="dgOrders" Grid.Row="1"
                              Style="{StaticResource ProDataGridStyle}"
                              ColumnHeaderStyle="{StaticResource ProColumnHeaderStyle}"
                              CellStyle="{StaticResource ProCellStyle}"
                              ItemsSource="{Binding ZamowieniaList}"
                              SelectionChanged="DgOrders_SelectionChanged"
                              MouseDoubleClick="DgOrders_MouseDoubleClick">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow" BasedOn="{StaticResource ProRowStyle}">
                                <Setter Property="Background" Value="{Binding RowBackground}"/>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <!-- Odbiorca -->
                            <DataGridTemplateColumn Header="ðŸ“¦ Odbiorca" Width="*" MinWidth="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Klient}" Foreground="{Binding KlientColor}"
                                                   FontWeight="SemiBold" FontSize="12"
                                                   VerticalAlignment="Center" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Handlowiec -->
                            <DataGridTemplateColumn Header="Handl." Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Handlowiec}" FontSize="11" Foreground="#64748B"
                                                   VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- IloÅ›Ä‡ -->
                            <DataGridTemplateColumn Header="IloÅ›Ä‡" Width="65">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TotalIlosc, StringFormat=N0}"
                                                   FontWeight="Bold" FontSize="12" Foreground="#1E293B"
                                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Cena -->
                            <DataGridTemplateColumn Header="Cen" Width="40">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding CenaDisplay}" Foreground="{Binding CenaColor}"
                                                   FontWeight="Bold" FontSize="14"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Status -->
                            <DataGridTemplateColumn Header="Status" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding StatusBackground}" CornerRadius="6" Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding StatusDisplay}" Foreground="{Binding StatusColor}"
                                                       FontWeight="SemiBold" FontSize="10"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Zmiana -->
                            <DataGridTemplateColumn Header="Zmiana" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding OstatniaZmiana}" Foreground="{Binding ZmianaColor}"
                                                   FontWeight="SemiBold" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Kto z avatarem -->
                            <DataGridTemplateColumn Header="ðŸ‘¤ Kto" Width="105">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Border Width="24" Height="24" CornerRadius="12" Margin="0,0,6,0"
                                                    BorderBrush="#E2E8F0" BorderThickness="1">
                                                <Border.Background>
                                                    <ImageBrush ImageSource="{Binding KtoZmienilAvatar}" Stretch="UniformToFill"/>
                                                </Border.Background>
                                            </Border>
                                            <TextBlock Text="{Binding KtoZmienil}" FontSize="10" Foreground="#64748B"
                                                       VerticalAlignment="Center" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" MaxWidth="65"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Wyjazd -->
                            <DataGridTemplateColumn Header="ðŸš› Wyjazd" Width="95">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#EFF6FF" CornerRadius="6" Padding="8,4" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding GodzWyjazdu}" FontSize="13" Foreground="#1E40AF" FontWeight="Bold"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Kierowca -->
                            <DataGridTemplateColumn Header="Kierowca" Width="130">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Kierowca}" FontSize="12" Foreground="#334155" FontWeight="Medium"
                                                   VerticalAlignment="Center" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- PRAWA STRONA - panel szczegÃ³Å‚Ã³w -->
        <Border Grid.Column="1" Background="White" Margin="6,12,12,12" CornerRadius="12"
                Effect="{StaticResource CardShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- NagÅ‚Ã³wek z info o odbiorcy -->
                <Border Grid.Row="0" CornerRadius="12,12,0,0" Padding="16,14">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#1E40AF" Offset="0"/>
                            <GradientStop Color="#3B82F6" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="txtOdbiorca" Text="Wybierz zamÃ³wienie..."
                                       FontSize="16" FontWeight="Bold" Foreground="White"/>
                            <TextBlock x:Name="txtHandlowiec" Text="" FontSize="12" Foreground="#BFDBFE" Margin="0,4,0,0"/>
                            <TextBlock x:Name="txtDataZamowienia" Text="" FontSize="11" Foreground="#93C5FD"/>
                        </StackPanel>

                        <!-- Info o transporcie -->
                        <Border Grid.Column="1" Background="#1E3A8A" CornerRadius="10" Padding="14,10"
                                x:Name="borderTransport" Visibility="Collapsed">
                            <StackPanel>
                                <Border Background="#3B82F6" CornerRadius="4" Padding="8,3" HorizontalAlignment="Center" Margin="0,0,0,6">
                                    <TextBlock Text="ðŸš› TRANSPORT" FontSize="9" FontWeight="Bold" Foreground="White"/>
                                </Border>
                                <TextBlock x:Name="txtGodzWyjazdu" Text="" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtKierowca" Text="" FontSize="11" Foreground="#BFDBFE" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                <TextBlock x:Name="txtPojazd" Text="" FontSize="10" Foreground="#93C5FD" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Lista produktÃ³w -->
                <DataGrid x:Name="dgDetails" Grid.Row="1"
                          Style="{StaticResource ProDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource ProColumnHeaderStyle}"
                          CellStyle="{StaticResource ProCellStyle}"
                          RowStyle="{StaticResource CompactRowStyle}"
                          Margin="8"/>

                <!-- Panel akcji -->
                <Border Grid.Row="2" Background="#F8FAFC" Padding="16,14" CornerRadius="0,0,12,12"
                        BorderBrush="#E2E8F0" BorderThickness="0,1,0,0">
                    <StackPanel>
                        <!-- Panel powiadomienia o zmianie -->
                        <Border x:Name="borderZmiana" Background="#FFF7ED" CornerRadius="10" Padding="14,12" Margin="0,0,0,12"
                                BorderBrush="#FDBA74" BorderThickness="2" Visibility="Collapsed">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                                    <TextBlock Text="âš ï¸" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="ZMIANA W ZAMÃ“WIENIU" FontSize="12" FontWeight="Bold" Foreground="#C2410C" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Lista zmian -->
                                <Border Background="White" CornerRadius="8" Padding="10" Margin="0,0,0,10" MaxHeight="90"
                                        BorderBrush="#FED7AA" BorderThickness="1">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsControl x:Name="icZmianyList">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
