<Window x:Class="Kalendarz1.WPF.PanelFakturWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Panel Faktur - Zamówienia Klientów"
        MinHeight="600" MinWidth="1000"
        WindowState="Maximized"
        Background="#ECEFF1"
        FontFamily="Segoe UI"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <ResourceDictionary>
            <!-- Kolory -->
            <SolidColorBrush x:Key="PrimaryBlue" Color="#1565C0"/>
            <SolidColorBrush x:Key="PrimaryBlueDark" Color="#0D47A1"/>
            <SolidColorBrush x:Key="SuccessGreen" Color="#2E7D32"/>
            <SolidColorBrush x:Key="WarningOrange" Color="#EF6C00"/>
            <SolidColorBrush x:Key="TextDark" Color="#263238"/>
            <SolidColorBrush x:Key="TextMedium" Color="#546E7A"/>
            <SolidColorBrush x:Key="TextLight" Color="#90A4AE"/>
            <SolidColorBrush x:Key="TableBorder" Color="#CFD8DC"/>
            <SolidColorBrush x:Key="TableHeaderBg" Color="#37474F"/>
            <SolidColorBrush x:Key="RowHover" Color="#E3F2FD"/>
            <SolidColorBrush x:Key="RowSelected" Color="#BBDEFB"/>
            <SolidColorBrush x:Key="RowAlt" Color="#FAFAFA"/>

            <!-- Styl przycisków akcji -->
            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#1565C0"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="MinWidth" Value="100"/>
                <Setter Property="MinHeight" Value="40"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#0D47A1"/>
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Background" Value="#B0BEC5"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                <Setter Property="Background" Value="#2E7D32"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#1B5E20"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Profesjonalny styl DataGrid -->
            <Style x:Key="ProDataGridStyle" TargetType="DataGrid">
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="SelectionMode" Value="Single"/>
                <Setter Property="SelectionUnit" Value="FullRow"/>
                <Setter Property="GridLinesVisibility" Value="All"/>
                <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
                <Setter Property="VerticalGridLinesBrush" Value="#EEEEEE"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#CFD8DC"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
                <Setter Property="RowBackground" Value="White"/>
                <Setter Property="HeadersVisibility" Value="Column"/>
                <Setter Property="CanUserResizeRows" Value="False"/>
                <Setter Property="CanUserResizeColumns" Value="True"/>
                <Setter Property="CanUserReorderColumns" Value="False"/>
            </Style>

            <!-- Styl nagłówków kolumn - ciemny, profesjonalny -->
            <Style x:Key="ProColumnHeaderStyle" TargetType="DataGridColumnHeader">
                <Setter Property="Background" Value="#37474F"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="MinHeight" Value="44"/>
                <Setter Property="Padding" Value="12,10"/>
                <Setter Property="BorderBrush" Value="#455A64"/>
                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#455A64"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Styl komórek -->
            <Style x:Key="ProCellStyle" TargetType="DataGridCell">
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                <Setter Property="BorderBrush" Value="#EEEEEE"/>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#BBDEFB"/>
                        <Setter Property="Foreground" Value="#0D47A1"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Styl wierszy -->
            <Style x:Key="ProRowStyle" TargetType="DataGridRow">
                <Setter Property="Margin" Value="0"/>
                <Setter Property="MinHeight" Value="48"/>
                <Setter Property="FontSize" Value="13"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#E3F2FD"/>
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#BBDEFB"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Kompaktowy styl wierszy dla szczegółów -->
            <Style x:Key="CompactRowStyle" TargetType="DataGridRow">
                <Setter Property="Margin" Value="0"/>
                <Setter Property="MinHeight" Value="32"/>
                <Setter Property="FontSize" Value="12"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#E3F2FD"/>
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#BBDEFB"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Styl przycisków dni -->
            <Style x:Key="DayButtonStyle" TargetType="Button">
                <Setter Property="MinWidth" Value="52"/>
                <Setter Property="Height" Value="42"/>
                <Setter Property="Margin" Value="2,0"/>
                <Setter Property="Padding" Value="6,4"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="#263238"/>
                <Setter Property="BorderBrush" Value="#B0BEC5"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#E3F2FD"/>
                        <Setter Property="BorderBrush" Value="#1565C0"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="500"/>
            <ColumnDefinition Width="520" MinWidth="450" MaxWidth="600"/>
        </Grid.ColumnDefinitions>

        <!-- LEWA STRONA -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- PASEK NAWIGACJI -->
            <Border Grid.Row="0" Background="#1565C0" Padding="10,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Nawigacja tygodniowa -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="btnPrevWeek" Content="◀" Width="36" Height="36" Margin="0,0,4,0"
                                Click="BtnPrevWeek_Click" ToolTip="Poprzedni tydzień"
                                Background="#0D47A1" Foreground="White" FontSize="14" FontWeight="Bold"
                                BorderThickness="0" Cursor="Hand"/>
                        <Button x:Name="btnNextWeek" Content="▶" Width="36" Height="36" Margin="0,0,12,0"
                                Click="BtnNextWeek_Click" ToolTip="Następny tydzień"
                                Background="#0D47A1" Foreground="White" FontSize="14" FontWeight="Bold"
                                BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>

                    <!-- Przyciski dni - BEZ SCROLLVIEWER -->
                    <StackPanel x:Name="panelDays" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"/>

                    <!-- ComboBox towaru -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                        <TextBlock Text="Towar:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="White" FontSize="13" FontWeight="Medium"/>
                        <ComboBox x:Name="cmbProduct" Width="160" Height="32" FontSize="13"
                                  SelectionChanged="CmbProduct_SelectionChanged"/>
                    </StackPanel>

                    <!-- Szukaj i filtry -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                        <TextBlock Text="Szukaj:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="White" FontSize="13" FontWeight="Medium"/>
                        <TextBox x:Name="txtSearch" Width="150" Height="32" VerticalContentAlignment="Center" FontSize="13"
                                 TextChanged="TxtSearch_TextChanged" Padding="10,0"/>
                        <CheckBox x:Name="chkShowFakturowane" Content="Zafakturowane"
                                  VerticalAlignment="Center" Margin="16,0,0,0" Foreground="White" FontSize="12" FontWeight="Medium"
                                  Checked="ChkShowFakturowane_Changed" Unchecked="ChkShowFakturowane_Changed"/>
                    </StackPanel>

                    <!-- Odśwież -->
                    <Button x:Name="btnRefresh" Grid.Column="4" Content="Odśwież"
                            Background="#0D47A1" Foreground="White" FontSize="12" FontWeight="SemiBold"
                            Width="90" Height="36" Margin="12,0,0,0" BorderThickness="0" Cursor="Hand"
                            Click="BtnRefresh_Click" ToolTip="Odśwież dane"/>
                </Grid>
            </Border>

            <!-- TABELA ZAMÓWIEŃ -->
            <Border Grid.Row="1" Background="White" Margin="10" CornerRadius="8"
                    BorderBrush="#CFD8DC" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Nagłówek tabeli -->
                    <Border Grid.Row="0" Background="#FAFAFA" Padding="16,12" CornerRadius="8,8,0,0"
                            BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Zamówienia do zafakturowania" FontSize="16" FontWeight="SemiBold"
                                       Foreground="#263238" VerticalAlignment="Center"/>

                            <!-- Legenda statusów w nagłówku -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                                <Border Background="#FFF8E1" CornerRadius="4" Padding="8,3" Margin="0,0,6,0" ToolTip="Nowe zlecenie">
                                    <TextBlock Text="Nowe" FontSize="10" Foreground="#F57C00" FontWeight="SemiBold"/>
                                </Border>
                                <Border Background="#E8F5E9" CornerRadius="4" Padding="8,3" Margin="0,0,6,0" ToolTip="Zrealizowane">
                                    <TextBlock Text="Zreal." FontSize="10" Foreground="#388E3C" FontWeight="SemiBold"/>
                                </Border>
                                <Border Background="#E1F5FE" CornerRadius="4" Padding="8,3" Margin="0,0,6,0" ToolTip="Wydane">
                                    <TextBlock Text="Wydano" FontSize="10" Foreground="#0277BD" FontWeight="SemiBold"/>
                                </Border>
                                <Border Background="#FFF3E0" CornerRadius="4" Padding="8,3" BorderBrush="#FFB74D" BorderThickness="1" ToolTip="Zmiana">
                                    <TextBlock Text="Zmiana" FontSize="10" Foreground="#E65100" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>

                            <TextBlock x:Name="txtOrdersCount" Grid.Column="2" Text="0 zamówień"
                                       VerticalAlignment="Center" Foreground="#78909C" FontSize="14" FontWeight="Medium"/>
                        </Grid>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid x:Name="dgOrders" Grid.Row="1"
                              Style="{StaticResource ProDataGridStyle}"
                              ColumnHeaderStyle="{StaticResource ProColumnHeaderStyle}"
                              CellStyle="{StaticResource ProCellStyle}"
                              ItemsSource="{Binding ZamowieniaList}"
                              SelectionChanged="DgOrders_SelectionChanged"
                              MouseDoubleClick="DgOrders_MouseDoubleClick">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow" BasedOn="{StaticResource ProRowStyle}">
                                <Setter Property="Background" Value="{Binding RowBackground}"/>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <!-- Odbiorca -->
                            <DataGridTemplateColumn Header="Odbiorca" Width="*" MinWidth="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Klient}" Foreground="{Binding KlientColor}"
                                                   FontWeight="SemiBold" FontSize="11"
                                                   VerticalAlignment="Center" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Handlowiec -->
                            <DataGridTemplateColumn Header="Handl." Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Handlowiec}" FontSize="11" Foreground="#546E7A"
                                                   VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Ilość -->
                            <DataGridTemplateColumn Header="Ilość" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TotalIlosc, StringFormat=N0}"
                                                   FontWeight="Bold" FontSize="12" Foreground="#263238"
                                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Cena -->
                            <DataGridTemplateColumn Header="Cena" Width="45">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding CenaDisplay}" Foreground="{Binding CenaColor}"
                                                   FontWeight="Bold" FontSize="14"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Status -->
                            <DataGridTemplateColumn Header="Status" Width="95">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding StatusBackground}" CornerRadius="4" Padding="6,3" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding StatusDisplay}" Foreground="{Binding StatusColor}"
                                                       FontWeight="SemiBold" FontSize="10"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Ost. Zmiana -->
                            <DataGridTemplateColumn Header="Zmiana" Width="85">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding OstatniaZmiana}" Foreground="{Binding ZmianaColor}"
                                                   FontWeight="SemiBold" FontSize="10"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Kto zmienił z avatarem -->
                            <DataGridTemplateColumn Header="Kto" Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Ellipse Width="22" Height="22" Margin="0,0,5,0">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding KtoZmienilAvatar}" Stretch="UniformToFill"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <TextBlock Text="{Binding KtoZmienil}" FontSize="10" Foreground="#546E7A"
                                                       VerticalAlignment="Center" TextWrapping="Wrap" MaxWidth="75"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Wyjazd -->
                            <DataGridTemplateColumn Header="Wyjazd" Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding GodzWyjazdu}" FontSize="14" Foreground="#1565C0" FontWeight="Bold"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Kierowca -->
                            <DataGridTemplateColumn Header="Kierowca" Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Kierowca}" FontSize="13" Foreground="#263238" FontWeight="Medium"
                                                   VerticalAlignment="Center" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- PRAWA STRONA - szeroki panel szczegółów -->
        <Border Grid.Column="1" Background="White" Margin="0,10,10,10" CornerRadius="8"
                BorderBrush="#CFD8DC" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Nagłówek z info o odbiorcy - połączone -->
                <Border Grid.Row="0" Background="#1565C0" Padding="14,10" CornerRadius="8,8,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="txtOdbiorca" Text="Wybierz zamówienie..."
                                       FontSize="15" FontWeight="Bold" Foreground="White"/>
                            <TextBlock x:Name="txtHandlowiec" Text="" FontSize="11" Foreground="#B3E5FC" Margin="0,2,0,0"/>
                            <TextBlock x:Name="txtDataZamowienia" Text="" FontSize="11" Foreground="#B3E5FC"/>
                        </StackPanel>

                        <!-- Info o transporcie -->
                        <Border Grid.Column="1" Background="#0D47A1" CornerRadius="6" Padding="10,6"
                                x:Name="borderTransport" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="TRANSPORT" FontSize="9" FontWeight="Bold" Foreground="#90CAF9" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                <TextBlock x:Name="txtGodzWyjazdu" Text="" FontSize="13" FontWeight="Bold" Foreground="White"/>
                                <TextBlock x:Name="txtKierowca" Text="" FontSize="11" Foreground="#E3F2FD"/>
                                <TextBlock x:Name="txtPojazd" Text="" FontSize="10" Foreground="#90CAF9"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Lista produktów -->
                <DataGrid x:Name="dgDetails" Grid.Row="1"
                          Style="{StaticResource ProDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource ProColumnHeaderStyle}"
                          CellStyle="{StaticResource ProCellStyle}"
                          RowStyle="{StaticResource CompactRowStyle}"
                          Margin="6">
                </DataGrid>

                <!-- Panel akcji -->
                <Border Grid.Row="2" Background="#FAFAFA" Padding="12,10" CornerRadius="0,0,8,8"
                        BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
                    <StackPanel>
                        <!-- Panel powiadomienia o zmianie - kompaktowy -->
                        <Border x:Name="borderZmiana" Background="#FFF3E0" CornerRadius="6" Padding="10,8" Margin="0,0,0,10"
                                BorderBrush="#FFB74D" BorderThickness="2" Visibility="Collapsed">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,6">
                                    <TextBlock Text="⚠" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0" Foreground="#E65100"/>
                                    <TextBlock Text="ZMIANA W ZAMÓWIENIU" FontSize="11" FontWeight="Bold" Foreground="#E65100" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Lista zmian - kompaktowa -->
                                <Border Background="#FFFBF0" CornerRadius="4" Padding="8" Margin="0,0,0,8" MaxHeight="100">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsControl x:Name="icZmianyList">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="0,1">
                                                        <TextBlock Text="•" FontWeight="Bold" Foreground="#E65100" Margin="0,0,4,0" FontSize="10"/>
                                                        <TextBlock Text="{Binding}" FontSize="10" Foreground="#5D4037" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>

                                <Button x:Name="btnAcceptChange" Content="✓ Przyjmuję zmianę"
                                        Style="{StaticResource SuccessButtonStyle}"
                                        Height="34" FontSize="12"
                                        Click="BtnAcceptChange_Click"/>
                            </StackPanel>
                        </Border>

                        <!-- Ukryty TextBlock dla zgodności -->
                        <TextBlock x:Name="txtInvoiceStatus" Visibility="Collapsed"/>
                        <TextBlock x:Name="txtZmianaInfo" Visibility="Collapsed"/>

                        <!-- Przyciski w jednej linii -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="btnMarkFakturowane" Grid.Column="0" Content="Zafakturowane"
                                    Style="{StaticResource ActionButtonStyle}"
                                    Height="40" Margin="0,0,4,0" FontSize="12"
                                    Click="BtnMarkFakturowane_Click"
                                    IsEnabled="False"/>

                            <Button x:Name="btnCofnijFakturowanie" Grid.Column="1" Content="Cofnij"
                                    Style="{StaticResource ActionButtonStyle}"
                                    Background="#EF6C00"
                                    Height="40" Margin="4,0,0,0" FontSize="12"
                                    Click="BtnCofnijFakturowanie_Click"
                                    IsEnabled="False"
                                    ToolTip="Cofnij status zafakturowane"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
