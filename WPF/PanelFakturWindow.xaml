<Window x:Class="Kalendarz1.WPF.PanelFakturWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Panel Faktur - ZamÃ³wienia KlientÃ³w"
        MinHeight="600" MinWidth="1000"
        WindowState="Maximized"
        Background="#F5F7FA"
        FontFamily="Segoe UI"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="PrimaryBlue" Color="#1976D2"/>
            <SolidColorBrush x:Key="PrimaryBlueHover" Color="#1565C0"/>
            <SolidColorBrush x:Key="SuccessGreen" Color="#4CAF50"/>
            <SolidColorBrush x:Key="WarningOrange" Color="#FF9800"/>
            <SolidColorBrush x:Key="TextDark" Color="#2C3E50"/>
            <SolidColorBrush x:Key="TextLight" Color="#7F8C8D"/>
            <SolidColorBrush x:Key="BackgroundLight" Color="#F5F7FA"/>
            <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>

            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#1976D2"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="MinWidth" Value="100"/>
                <Setter Property="MinHeight" Value="36"/>
                <Setter Property="Margin" Value="5,0"/>
                <Setter Property="Padding" Value="12,6"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="5"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#1565C0"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                <Setter Property="Background" Value="#4CAF50"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#388E3C"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="SelectionMode" Value="Single"/>
                <Setter Property="SelectionUnit" Value="FullRow"/>
                <Setter Property="GridLinesVisibility" Value="Horizontal"/>
                <Setter Property="HorizontalGridLinesBrush" Value="#D0D0D0"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#D0D0D0"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="AlternatingRowBackground" Value="#F8FAFC"/>
                <Setter Property="RowBackground" Value="White"/>
                <Setter Property="HeadersVisibility" Value="Column"/>
                <Setter Property="CanUserResizeRows" Value="False"/>
                <Setter Property="CanUserResizeColumns" Value="True"/>
            </Style>

            <Style x:Key="ModernDataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
                <Setter Property="Background" Value="#1976D2"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="MinHeight" Value="42"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="BorderBrush" Value="#1565C0"/>
                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

            <Style x:Key="ModernDataGridCellStyle" TargetType="DataGridCell">
                <Setter Property="Padding" Value="8,6"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#BBDEFB"/>
                        <Setter Property="Foreground" Value="#1565C0"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="ModernDataGridRowStyle" TargetType="DataGridRow">
                <Setter Property="Margin" Value="0"/>
                <Setter Property="MinHeight" Value="40"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#E3F2FD"/>
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#BBDEFB"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="DayButtonStyle" TargetType="Button">
                <Setter Property="MinWidth" Value="60"/>
                <Setter Property="Height" Value="45"/>
                <Setter Property="Margin" Value="2,0"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

            <Style x:Key="RightAlignedCellStyle" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Right"/>
            </Style>

            <Style x:Key="BoldCellStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

            <Style x:Key="CenterAlignedCellStyle" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- KOMPAKTOWY PASEK NAWIGACJI - wszystko w jednym wierszu -->
        <Border Grid.Row="0" Background="#1976D2" Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Nawigacja tygodniowa -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="btnPrevWeek" Content="â—€" MinWidth="36" Height="36" Margin="0,0,4,0"
                            Click="BtnPrevWeek_Click" ToolTip="Poprzedni tydzieÅ„"
                            Background="#1565C0" Foreground="White" FontSize="14" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand"/>
                    <Button x:Name="btnNextWeek" Content="â–¶" MinWidth="36" Height="36" Margin="0,0,12,0"
                            Click="BtnNextWeek_Click" ToolTip="NastÄ™pny tydzieÅ„"
                            Background="#1565C0" Foreground="White" FontSize="14" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand"/>
                </StackPanel>

                <!-- Przyciski dni -->
                <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled"
                              MaxWidth="600">
                    <StackPanel x:Name="panelDays" Orientation="Horizontal" HorizontalAlignment="Left"/>
                </ScrollViewer>

                <!-- Szukaj i filtry -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                    <TextBlock Text="Szukaj:" VerticalAlignment="Center" Margin="0,0,6,0" Foreground="White" FontSize="13"/>
                    <TextBox x:Name="txtSearch" Width="140" Height="32" VerticalContentAlignment="Center" FontSize="13"
                             TextChanged="TxtSearch_TextChanged" Padding="8,0"/>
                    <CheckBox x:Name="chkShowFakturowane" Content="Zafakturowane"
                              VerticalAlignment="Center" Margin="15,0,0,0" Foreground="White" FontSize="12"
                              Checked="ChkShowFakturowane_Changed" Unchecked="ChkShowFakturowane_Changed"/>
                </StackPanel>

                <!-- OdÅ›wieÅ¼ -->
                <Button x:Name="btnRefresh" Grid.Column="3" Content="ðŸ”„ OdÅ›wieÅ¼"
                        Background="#0D47A1" Foreground="White" FontSize="13" FontWeight="Bold"
                        MinWidth="100" Height="36" Margin="15,0,0,0" BorderThickness="0" Cursor="Hand"
                        Click="BtnRefresh_Click"/>
            </Grid>
        </Border>

        <!-- PASEK FILTROWANIA PO TOWARZE -->
        <Border Grid.Row="1" Background="#F8F9FA" Padding="6,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Towar:" VerticalAlignment="Center" Margin="0,0,10,0"
                           FontWeight="Medium" Foreground="#5D6D7E"/>
                <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled">
                    <WrapPanel x:Name="pnlProductButtons" Orientation="Horizontal"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- ZAWARTOÅšÄ† - dwie kolumny (responsywne) -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="500"/>
                <ColumnDefinition Width="*" MinWidth="350" MaxWidth="550"/>
            </Grid.ColumnDefinitions>

            <!-- Lewa kolumna - lista zamÃ³wieÅ„ do fakturowania -->
            <Border Grid.Column="0" Background="White" Margin="10" CornerRadius="8"
                    BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#F8F9FA" Padding="10" CornerRadius="8,8,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ZamÃ³wienia do zafakturowania" FontSize="16" FontWeight="SemiBold"
                                       Foreground="#2C3E50" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock x:Name="txtOrdersCount" Text="0 zamÃ³wieÅ„"
                                           VerticalAlignment="Center" Foreground="#7F8C8D" Margin="0,0,15,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Kompaktowa legenda statusÃ³w -->
                    <Border Grid.Row="1" Background="#FAFAFA" Padding="6,3" BorderBrush="#E8E8E8" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Border Background="#FFF8E1" CornerRadius="3" Padding="5,1" Margin="0,0,3,0" ToolTip="Nowe zlecenie">
                                <TextBlock Text="Nowe" FontSize="9" Foreground="#F57C00" FontWeight="SemiBold"/>
                            </Border>
                            <Border Background="#E3F2FD" CornerRadius="3" Padding="5,1" Margin="0,0,3,0" ToolTip="W realizacji">
                                <TextBlock Text="Realiz." FontSize="9" Foreground="#1976D2" FontWeight="SemiBold"/>
                            </Border>
                            <Border Background="#E8F5E9" CornerRadius="3" Padding="5,1" Margin="0,0,3,0" ToolTip="Zrealizowane">
                                <TextBlock Text="Zreal." FontSize="9" Foreground="#388E3C" FontWeight="SemiBold"/>
                            </Border>
                            <Border Background="#E1F5FE" CornerRadius="3" Padding="5,1" Margin="0,0,3,0" ToolTip="Wydane z magazynu">
                                <TextBlock Text="Wydano" FontSize="9" Foreground="#0277BD" FontWeight="SemiBold"/>
                            </Border>
                            <Border Background="#C8E6C9" CornerRadius="3" Padding="5,1" Margin="0,0,3,0" ToolTip="Zafakturowane">
                                <TextBlock Text="Fakt." FontSize="9" Foreground="#2E7D32" FontWeight="SemiBold"/>
                            </Border>
                            <Border Background="#FFF3E0" CornerRadius="3" Padding="5,1" BorderBrush="#FFB74D" BorderThickness="1" ToolTip="Zmiana w zamÃ³wieniu">
                                <TextBlock Text="âš Zmiana" FontSize="9" Foreground="#E65100" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <DataGrid x:Name="dgOrders" Grid.Row="2" Style="{StaticResource ModernDataGridStyle}"
                              ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                              CellStyle="{StaticResource ModernDataGridCellStyle}"
                              ItemsSource="{Binding ZamowieniaList}"
                              SelectionChanged="DgOrders_SelectionChanged"
                              MouseDoubleClick="DgOrders_MouseDoubleClick">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow" BasedOn="{StaticResource ModernDataGridRowStyle}">
                                <Setter Property="Background" Value="{Binding RowBackground}"/>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <!-- Klient z wykrzyknikiem i kolorem gdy zmiana -->
                            <DataGridTemplateColumn Header="Odbiorca" Width="*" MinWidth="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Klient}" Foreground="{Binding KlientColor}" FontWeight="SemiBold"
                                                   VerticalAlignment="Center" Margin="5,3" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Handlowiec" Width="Auto" MinWidth="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Handlowiec}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="5,3"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="IloÅ›Ä‡ [kg]" Binding="{Binding TotalIlosc, StringFormat=N0}" Width="Auto" MinWidth="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Margin" Value="0,0,8,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="WartoÅ›Ä‡" Binding="{Binding Wartosc, StringFormat=N2}" Width="Auto" MinWidth="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="0,0,8,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- Cena - czy wszystkie towary majÄ… cenÄ™ -->
                            <DataGridTemplateColumn Header="Cena" Width="Auto" MinWidth="45">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding CenaDisplay}" Foreground="{Binding CenaColor}" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!-- Status z kolorem -->
                            <DataGridTemplateColumn Header="Status" Width="Auto" MinWidth="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding StatusDisplay}" Foreground="{Binding StatusColor}" FontWeight="Medium" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!-- Data ostatniej zmiany - format: sty 12 12:00 -->
                            <DataGridTemplateColumn Header="Ost. Zmiana" Width="Auto" MinWidth="85">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding OstatniaZmiana}" Foreground="{Binding ZmianaColor}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!-- Kto zmieniÅ‚ - imiÄ™ i nazwisko -->
                            <DataGridTemplateColumn Header="Kto zmieniÅ‚" Width="Auto" MinWidth="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding KtoZmienil}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="5,3"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!-- Kolumny transportowe -->
                            <DataGridTextColumn Header="Wyjazd" Binding="{Binding GodzWyjazdu}" Width="Auto" MinWidth="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="Kierowca" Width="Auto" MinWidth="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Kierowca}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="5,3"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Prawa kolumna - szczegÃ³Å‚y zamÃ³wienia i akcje -->
            <Grid Grid.Column="1" Margin="0,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- SzczegÃ³Å‚y zamÃ³wienia -->
                <Border Grid.Row="0" Background="White" CornerRadius="8"
                        BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#F8F9FA" Padding="10" CornerRadius="8,8,0,0">
                            <TextBlock Text="SzczegÃ³Å‚y zamÃ³wienia" FontSize="16" FontWeight="SemiBold"
                                       Foreground="#2C3E50"/>
                        </Border>

                        <!-- Info o odbiorcy -->
                        <Border Grid.Row="1" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="txtOdbiorca" Text="Wybierz zamÃ³wienie..."
                                               FontSize="14" FontWeight="Bold" Foreground="#2C3E50"/>
                                    <TextBlock x:Name="txtHandlowiec" Text="" FontSize="12" Foreground="#7F8C8D" Margin="0,3,0,0"/>
                                    <TextBlock x:Name="txtDataZamowienia" Text="" FontSize="12" Foreground="#7F8C8D"/>
                                </StackPanel>

                                <!-- Info o transporcie -->
                                <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="12,8"
                                        x:Name="borderTransport" Visibility="Collapsed"
                                        BorderBrush="#90CAF9" BorderThickness="1.5">
                                    <StackPanel>
                                        <Border Background="#1976D2" CornerRadius="4" Padding="8,3" Margin="0,0,0,6" HorizontalAlignment="Center">
                                            <TextBlock Text="TRANSPORT" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                        </Border>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Wyjazd:" FontSize="10" Foreground="#7F8C8D" Margin="0,0,8,2"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtGodzWyjazdu" Text="" FontSize="11" FontWeight="SemiBold" Foreground="#1565C0"/>
                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Kierowca:" FontSize="10" Foreground="#7F8C8D" Margin="0,0,8,2"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtKierowca" Text="" FontSize="11" Foreground="#2C3E50"/>
                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Pojazd:" FontSize="10" Foreground="#7F8C8D" Margin="0,0,8,0"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtPojazd" Text="" FontSize="11" Foreground="#2C3E50"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Lista produktÃ³w -->
                        <DataGrid x:Name="dgDetails" Grid.Row="2" Style="{StaticResource ModernDataGridStyle}"
                                  ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                                  CellStyle="{StaticResource ModernDataGridCellStyle}"
                                  RowStyle="{StaticResource ModernDataGridRowStyle}"
                                  Margin="5">
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- Panel akcji -->
                <Border Grid.Row="1" Background="White" CornerRadius="8"
                        BorderBrush="#E0E0E0" BorderThickness="1" Padding="15">
                    <StackPanel>
                        <!-- Panel powiadomienia o zmianie -->
                        <Border x:Name="borderZmiana" Background="#FFF3E0" CornerRadius="8" Padding="12" Margin="0,0,0,10"
                                BorderBrush="#FFB74D" BorderThickness="2" Visibility="Collapsed">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                                    <TextBlock Text="âš ï¸" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="ZMIANA W ZAMÃ“WIENIU" FontSize="14" FontWeight="Bold" Foreground="#E65100" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock x:Name="txtZmianaInfo" Text="ZamÃ³wienie zostaÅ‚o zmodyfikowane od ostatniego zatwierdzenia."
                                           FontSize="11" Foreground="#5D4037" TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,6"/>

                                <!-- Lista co konkretnie siÄ™ zmieniÅ‚o -->
                                <Border Background="#FFFBF0" CornerRadius="4" Padding="8" Margin="0,0,0,10" MaxHeight="150">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsControl x:Name="icZmianyList">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                                        <TextBlock Text="â€¢" FontWeight="Bold" Foreground="#E65100" Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding}" FontSize="11" Foreground="#5D4037" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>

                                <Button x:Name="btnAcceptChange" Content="âœ“ PrzyjmujÄ™ zmianÄ™"
                                        Style="{StaticResource SuccessButtonStyle}"
                                        Height="40" FontSize="13"
                                        Click="BtnAcceptChange_Click"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Akcje" FontSize="14" FontWeight="SemiBold"
                                   Foreground="#2C3E50" Margin="0,0,0,10"/>

                        <TextBlock x:Name="txtInvoiceStatus" Text="Wybierz zamÃ³wienie z listy"
                                   FontSize="11" Foreground="#7F8C8D" TextAlignment="Center" Margin="0,0,0,10"
                                   TextWrapping="Wrap"/>

                        <Button x:Name="btnMarkFakturowane" Content="Oznacz jako zafakturowane"
                                Style="{StaticResource ActionButtonStyle}"
                                Height="40" Margin="0,5,0,0"
                                Click="BtnMarkFakturowane_Click"
                                IsEnabled="False"/>

                        <Button x:Name="btnCofnijFakturowanie" Content="Cofnij fakturowanie"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="#F57C00"
                                Height="40" Margin="0,8,0,0"
                                Click="BtnCofnijFakturowanie_Click"
                                IsEnabled="False"
                                ToolTip="Cofnij status zafakturowane (zamÃ³wienie wrÃ³ci do listy)"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
