<Window x:Class="Kalendarz1.WPF.CyclicOrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Utwórz zamówienia cykliczne"
        Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F7FA"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#E67E22"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.15" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#95A5A6"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="#FFF3E0" 
                BorderBrush="#FFB74D" 
                BorderThickness="2"
                CornerRadius="4"
                Padding="10"
                Margin="0,0,0,15">
            <TextBlock TextWrapping="Wrap"
                       FontSize="11"
                       Foreground="#E65100">
                <Run Text="⚠️ UWAGA: " FontWeight="Bold"/>
                <Run Text="Tworzysz cykliczne zamówienie dla zaznaczonego zamówienia. Pamiętaj o ostrożnym ustawianiu dat!"/>
            </TextBlock>
        </Border>

        <TextBlock Grid.Row="1" 
                   Text="Od dnia:"
                   FontSize="13"
                   Foreground="#2C3E50"
                   Margin="0,0,0,5"/>

        <DatePicker x:Name="dpStartDate" 
                    Grid.Row="2"
                    SelectedDateChanged="DateRange_Changed"
                    Margin="0,0,0,10"/>

        <TextBlock Grid.Row="3" 
                   Text="Do dnia:"
                   FontSize="13"
                   Foreground="#2C3E50"
                   Margin="0,0,0,5"/>

        <DatePicker x:Name="dpEndDate" 
                    Grid.Row="4"
                    SelectedDateChanged="DateRange_Changed"
                    Margin="0,0,0,15"/>

        <GroupBox Grid.Row="5" 
                  Header="Częstotliwość"
                  FontSize="13"
                  FontWeight="SemiBold"
                  Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <RadioButton x:Name="rbDaily" 
                             Grid.Row="0"
                             Content="Codziennie (poniedziałek - piątek)"
                             IsChecked="True"
                             Margin="0,5"
                             Checked="RbFrequency_Changed"/>

                <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,5">
                    <RadioButton x:Name="rbSelectedDays" 
                                 Content="Wybrane dni tygodnia:"
                                 Margin="0,0,0,5"
                                 Checked="RbFrequency_Changed"/>
                    <StackPanel x:Name="spDays" Orientation="Horizontal" Margin="20,0,0,0">
                        <CheckBox x:Name="chkMon" Content="Pn" Width="40" Margin="0,0,5,0" Checked="DayCheckBox_Changed" Unchecked="DayCheckBox_Changed"/>
                        <CheckBox x:Name="chkTue" Content="Wt" Width="40" Margin="0,0,5,0" Checked="DayCheckBox_Changed" Unchecked="DayCheckBox_Changed"/>
                        <CheckBox x:Name="chkWed" Content="Śr" Width="40" Margin="0,0,5,0" Checked="DayCheckBox_Changed" Unchecked="DayCheckBox_Changed"/>
                        <CheckBox x:Name="chkThu" Content="Cz" Width="40" Margin="0,0,5,0" Checked="DayCheckBox_Changed" Unchecked="DayCheckBox_Changed"/>
                        <CheckBox x:Name="chkFri" Content="Pt" Width="40" Margin="0,0,5,0" Checked="DayCheckBox_Changed" Unchecked="DayCheckBox_Changed"/>
                        <CheckBox x:Name="chkSat" Content="So" Width="40" Margin="0,0,5,0" Checked="DayCheckBox_Changed" Unchecked="DayCheckBox_Changed"/>
                        <CheckBox x:Name="chkSun" Content="Nd" Width="40" Checked="DayCheckBox_Changed" Unchecked="DayCheckBox_Changed"/>
                    </StackPanel>
                </StackPanel>

                <RadioButton x:Name="rbWeekly" 
                             Grid.Row="2"
                             Content="Co tydzień w ten sam dzień"
                             Margin="0,5"
                             Checked="RbFrequency_Changed"/>

                <Border Grid.Row="3" 
                        Background="#FFFEF5" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10"
                        Margin="0,10,0,0">
                    <TextBlock x:Name="lblPreview" 
                               TextWrapping="Wrap"
                               FontSize="11"
                               Foreground="#2C3E50"/>
                </Border>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button Content="Utwórz zamówienia" 
                    Style="{StaticResource PrimaryButton}"
                    Width="140" Height="35"
                    Click="BtnOk_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Anuluj" 
                    Style="{StaticResource SecondaryButton}"
                    Width="100" Height="35"
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>