<Window x:Class="Kalendarz1.WPF.TransportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transport - Przegląd wysyłek"
        Width="1300" Height="750"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFBFC"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E8E8E8"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling"/>
            <Setter Property="EnableRowVirtualization" Value="True"/>
        </Style>

        <Style x:Key="RightAlignedCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Padding" Value="0,0,8,0"/>
        </Style>

        <Style x:Key="CenterAlignedCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="BoldCellStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Margin="0,0,0,15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#1ABC9C" Offset="0"/>
                    <GradientStop Color="#16A085" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border CornerRadius="8" Padding="20,15">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="Transport - Przegląd wysyłek" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="txtSelectedDate" Text="Data: -" FontSize="12" Foreground="#A3E4D7" Margin="0,5,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Border Background="#27AE60" CornerRadius="12" Padding="12,5" Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Przypisanych: " FontSize="12" Foreground="White"/>
                                <TextBlock x:Name="txtPrzypisanych" Text="0" FontSize="12" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#E74C3C" CornerRadius="12" Padding="12,5" Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Bez transportu: " FontSize="12" Foreground="White"/>
                                <TextBlock x:Name="txtBezTransportu" Text="0" FontSize="12" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#3498DB" CornerRadius="12" Padding="12,5" Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Suma kg: " FontSize="12" Foreground="White"/>
                                <TextBlock x:Name="txtSumaKg" Text="0" FontSize="12" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Panel wyboru daty i filtrów -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Opacity="0.1" BlurRadius="5"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Data:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <DatePicker x:Name="dpData" Width="130" SelectedDateChanged="DpData_SelectedDateChanged"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0">
                    <TextBlock Text="Filtr odbiorcy:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtFilterOdbiorca" Width="150" Height="28" VerticalContentAlignment="Center"
                             TextChanged="TxtFilterOdbiorca_TextChanged"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="20,0,0,0">
                    <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="cmbFilterStatus" Width="120" Height="28"
                              SelectionChanged="CmbFilterStatus_SelectionChanged">
                        <ComboBoxItem Content="Wszystkie" IsSelected="True"/>
                        <ComboBoxItem Content="Przypisany"/>
                        <ComboBoxItem Content="Brak"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="4" Orientation="Horizontal">
                    <Button x:Name="btnRefresh" Content="Odśwież" Padding="15,8"
                            Background="#3498DB" Foreground="White" BorderThickness="0"
                            Click="BtnRefresh_Click" Cursor="Hand" Margin="0,0,10,0"/>
                    <Button Content="Zamknij" Padding="15,8"
                            Background="#95A5A6" Foreground="White" BorderThickness="0"
                            Click="BtnClose_Click" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tabela transportu -->
        <Border Grid.Row="2" Background="White" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Nagłówek tabeli -->
                <Border Grid.Row="0" CornerRadius="8,8,0,0" Padding="15,10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#2C3E50" Offset="0"/>
                            <GradientStop Color="#34495E" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock Text="LISTA TRANSPORTÓW" FontSize="14" Foreground="White" FontWeight="Bold"/>
                </Border>

                <DataGrid Grid.Row="1" x:Name="dgTransport"
                          Style="{StaticResource ModernDataGridStyle}"
                          AutoGenerateColumns="False"
                          CanUserSortColumns="True"
                          Margin="5"/>
            </Grid>
        </Border>

        <!-- Stopka -->
        <Border Grid.Row="3" Margin="0,10,0,0" Background="White" CornerRadius="8" Padding="15,10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Opacity="0.1" BlurRadius="5"/>
            </Border.Effect>
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Łącznie wierszy: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtLiczbaWierszy" Text="0" FontSize="14" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center"/>
                    <TextBlock Text="  |  Suma palet: " FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <TextBlock x:Name="txtSumaPalet" Text="0" FontSize="14" FontWeight="Bold" Foreground="#1ABC9C" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock x:Name="txtStatus" Text="Gotowy" HorizontalAlignment="Right" Foreground="#7F8C8D" FontSize="11" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
