<Window x:Class="Kalendarz1.WPF.TransportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transport - Przegląd wysyłek"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F0F2F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFBFC"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E8E8E8"/>
            <Setter Property="RowHeight" Value="36"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling"/>
            <Setter Property="VirtualizingPanel.ScrollUnit" Value="Pixel"/>
            <Setter Property="EnableRowVirtualization" Value="True"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Focusable" Value="True"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="Once"/>
        </Style>

        <Style x:Key="ModernDataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#34495E"/>
        </Style>

        <Style x:Key="RightAlignedCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Padding" Value="0,0,8,0"/>
        </Style>

        <Style x:Key="CenterAlignedCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="BoldCellStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Margin="0,0,0,12" CornerRadius="8">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#1ABC9C" Offset="0"/>
                    <GradientStop Color="#16A085" Offset="0.5"/>
                    <GradientStop Color="#1ABC9C" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border Padding="20,16">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="TRANSPORT - PRZEGLĄD WYSYŁEK" FontSize="22" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="txtSelectedDate" Text="Data: -" FontSize="13" Foreground="#A3E4D7" Margin="0,4,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Border Background="#27AE60" CornerRadius="8" Padding="14,8" Margin="6,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Przypisanych:" FontSize="12" Foreground="White" VerticalAlignment="Center"/>
                                <TextBlock x:Name="txtPrzypisanych" Text="0" FontSize="16" Foreground="White" FontWeight="Bold" Margin="6,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#E74C3C" CornerRadius="8" Padding="14,8" Margin="6,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Bez transportu:" FontSize="12" Foreground="White" VerticalAlignment="Center"/>
                                <TextBlock x:Name="txtBezTransportu" Text="0" FontSize="16" Foreground="White" FontWeight="Bold" Margin="6,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#3498DB" CornerRadius="8" Padding="14,8" Margin="6,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Suma kg:" FontSize="12" Foreground="White" VerticalAlignment="Center"/>
                                <TextBlock x:Name="txtSumaKg" Text="0" FontSize="16" Foreground="White" FontWeight="Bold" Margin="6,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Panel wyboru daty i filtrów -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="16,12" Margin="0,0,0,12">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Opacity="0.08" BlurRadius="6"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Data:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold" FontSize="12"/>
                    <DatePicker x:Name="dpData" Width="130" SelectedDateChanged="DpData_SelectedDateChanged" FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="24,0,0,0">
                    <TextBlock Text="Filtr odbiorcy:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="12"/>
                    <TextBox x:Name="txtFilterOdbiorca" Width="180" Height="30" VerticalContentAlignment="Center"
                             TextChanged="TxtFilterOdbiorca_TextChanged" FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="24,0,0,0">
                    <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="12"/>
                    <ComboBox x:Name="cmbFilterStatus" Width="130" Height="30" FontSize="12"
                              SelectionChanged="CmbFilterStatus_SelectionChanged">
                        <ComboBoxItem Content="Wszystkie" IsSelected="True"/>
                        <ComboBoxItem Content="Przypisany"/>
                        <ComboBoxItem Content="Brak"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="4" Orientation="Horizontal">
                    <Button Content="Zamknij" Style="{StaticResource ModernButtonStyle}"
                            Background="#7F8C8D" Click="BtnClose_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tabela transportu -->
        <Border Grid.Row="2" Background="White" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Opacity="0.08" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Nagłówek tabeli -->
                <Border Grid.Row="0" CornerRadius="8,8,0,0" Padding="16,12">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#2C3E50" Offset="0"/>
                            <GradientStop Color="#34495E" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock Text="LISTA TRANSPORTÓW" FontSize="14" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                </Border>

                <DataGrid Grid.Row="1" x:Name="dgTransport"
                          Style="{StaticResource ModernDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource ModernDataGridHeaderStyle}"
                          AutoGenerateColumns="False"
                          CanUserSortColumns="True"
                          SelectionUnit="FullRow"
                          SelectionMode="Single"
                          IsSynchronizedWithCurrentItem="True"
                          Focusable="True"
                          Margin="0"/>
            </Grid>
        </Border>

        <!-- Stopka -->
        <Border Grid.Row="3" Margin="0,12,0,0" Background="White" CornerRadius="8" Padding="16,10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Opacity="0.08" BlurRadius="5"/>
            </Border.Effect>
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Łącznie wierszy:" FontWeight="SemiBold" VerticalAlignment="Center" FontSize="12"/>
                    <TextBlock x:Name="txtLiczbaWierszy" Text="0" FontSize="14" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center" Margin="6,0,0,0"/>
                    <TextBlock Text="  |  Suma palet:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="12"/>
                    <TextBlock x:Name="txtSumaPalet" Text="0" FontSize="14" FontWeight="Bold" Foreground="#1ABC9C" VerticalAlignment="Center" Margin="6,0,0,0"/>
                </StackPanel>
                <TextBlock x:Name="txtStatus" Text="Gotowy" HorizontalAlignment="Right" Foreground="#7F8C8D" FontSize="11" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
