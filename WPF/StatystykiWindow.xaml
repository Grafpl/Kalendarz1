<Window x:Class="Kalendarz1.WPF.StatystykiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statystyki anulowanych zamowien"
        Width="1200" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFBFC"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E8E8E8"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>

        <Style x:Key="CenterAlignedCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="BoldCellStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naglowek -->
        <Border Grid.Row="0" Margin="0,0,0,15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#e74c3c" Offset="0"/>
                    <GradientStop Color="#c0392b" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border CornerRadius="8" Padding="20,15">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="Statystyki anulowanych zamowien" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="txtDateRange" Text="Zakres dat: -" FontSize="12" Foreground="#FADBD8" Margin="0,5,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="Lacznie anulowanych: " FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtTotalCancelled" Text="0" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Panel filtrow -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Opacity="0.1" BlurRadius="5"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Okres:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <ComboBox x:Name="cmbOkres" Width="120" Height="30"
                              SelectionChanged="CmbOkres_SelectionChanged">
                        <ComboBoxItem Content="Rok" Tag="Year"/>
                        <ComboBoxItem Content="Miesiac" Tag="Month" IsSelected="True"/>
                        <ComboBoxItem Content="Tydzien" Tag="Week"/>
                        <ComboBoxItem Content="Dzien" Tag="Day"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Od:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <DatePicker x:Name="dpOd" Width="130" Height="30"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Do:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <DatePicker x:Name="dpDo" Width="130" Height="30"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Handlowiec:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox x:Name="cmbHandlowiec" Width="120" Height="30"/>
                </StackPanel>

                <StackPanel Grid.Column="5" Orientation="Horizontal">
                    <Button x:Name="btnRefresh" Content="Odswiez" Padding="15,8"
                            Background="#3498DB" Foreground="White" BorderThickness="0"
                            Click="BtnRefresh_Click" Cursor="Hand" Margin="0,0,10,0"/>
                    <Button Content="Zamknij" Padding="15,8"
                            Background="#95A5A6" Foreground="White" BorderThickness="0"
                            Click="BtnClose_Click" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Dwie kolumny: odbiorcy i przyczyny -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="380"/>
            </Grid.ColumnDefinitions>

            <!-- Lewa kolumna - Tabela statystyk per odbiorca -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="10" Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Naglowek -->
                    <Border Grid.Row="0" CornerRadius="8,8,0,0" Padding="15,10" Margin="0,0,0,10">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#e74c3c" Offset="0"/>
                                <GradientStop Color="#c0392b" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="ANULOWANE WG ODBIORCY" FontSize="14" Foreground="White" FontWeight="Bold"/>
                    </Border>

                    <DataGrid Grid.Row="1" x:Name="dgStatystykiAnulowane"
                              Style="{StaticResource ModernDataGridStyle}"
                              AutoGenerateColumns="False"
                              CanUserSortColumns="True"/>
                </Grid>
            </Border>

            <!-- Prawa kolumna - Podzial wedlug przyczyn -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="10">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Naglowek przyczyn -->
                    <Border Grid.Row="0" CornerRadius="8,8,0,0" Padding="15,10" Margin="0,0,0,10">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#9B59B6" Offset="0"/>
                                <GradientStop Color="#8E44AD" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="PODZIAL WG PRZYCZYN" FontSize="14" Foreground="White" FontWeight="Bold"/>
                    </Border>

                    <DataGrid Grid.Row="1" x:Name="dgStatystykiPrzyczyny"
                              Style="{StaticResource ModernDataGridStyle}"
                              AutoGenerateColumns="False"
                              CanUserSortColumns="True"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Stopka -->
        <Border Grid.Row="3" Margin="0,10,0,0" Background="White" CornerRadius="8" Padding="15,10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Opacity="0.1" BlurRadius="5"/>
            </Border.Effect>
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Suma kg anulowanych: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtSumaKg" Text="0 kg" FontSize="16" FontWeight="Bold" Foreground="#E74C3C" VerticalAlignment="Center"/>
                    <TextBlock Text="  |  Srednia na odbiorce: " FontWeight="SemiBold" VerticalAlignment="Center" Margin="30,0,0,0"/>
                    <TextBlock x:Name="txtSrednia" Text="0" FontSize="16" FontWeight="Bold" Foreground="#9B59B6" VerticalAlignment="Center"/>
                </StackPanel>
                <Button Content="Eksport do Excel" HorizontalAlignment="Right" Padding="15,8"
                        Background="#27AE60" Foreground="White" BorderThickness="0"
                        Click="BtnExport_Click" Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</Window>
