<Window x:Class="Kalendarz1.WPF.PrzyczynaAnulowaniaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Przyczyna anulowania zamÃ³wienia"
        Width="500" Height="480"
        WindowStartupLocation="CenterOwner"
        Background="#F8F9FA"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="ColorDanger" Color="#E74C3C"/>
        <SolidColorBrush x:Key="ColorWarning" Color="#F39C12"/>
        <SolidColorBrush x:Key="ColorInfo" Color="#3498DB"/>
        <SolidColorBrush x:Key="ColorSuccess" Color="#27AE60"/>
        <SolidColorBrush x:Key="ColorPurple" Color="#9B59B6"/>
        <SolidColorBrush x:Key="ColorGray" Color="#7F8C8D"/>

        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#E74C3C" Offset="0"/>
            <GradientStop Color="#C0392B" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="ReasonButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#95A5A6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NagÅ‚Ã³wek -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" Padding="20,16">
            <StackPanel>
                <TextBlock Text="Anulowanie zamÃ³wienia" FontSize="18" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Wybierz przyczynÄ™ anulowania zamÃ³wienia"
                           FontSize="11" Foreground="#FADBD8" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Informacje o zamÃ³wieniu -->
        <Border Grid.Row="1" Background="#ECF0F1" Padding="15,12" Margin="15,15,15,0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Color="#000000" Opacity="0.1" BlurRadius="5"/>
            </Border.Effect>
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <TextBlock Text="Odbiorca: " FontWeight="SemiBold" Foreground="#2C3E50"/>
                    <TextBlock x:Name="txtOdbiorca" Text="" Foreground="#34495E"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="IloÅ›Ä‡: " FontWeight="SemiBold" Foreground="#2C3E50"/>
                    <TextBlock x:Name="txtIlosc" Text="" Foreground="#34495E"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Przyciski przyczyn -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="15,15,15,0">
            <StackPanel>
                <TextBlock Text="Wybierz przyczynÄ™:" FontWeight="SemiBold" FontSize="12"
                           Foreground="#7F8C8D" Margin="0,0,0,10"/>

                <Button x:Name="btnAnulowanieZamowienia"
                        Content="âŒ  Anulowanie zamÃ³wienia - klient zrezygnowaÅ‚"
                        Background="{StaticResource ColorDanger}"
                        Style="{StaticResource ReasonButton}"
                        Click="BtnReason_Click" Tag="Anulowanie zamÃ³wienia"/>

                <Button x:Name="btnPoprawaZamowienia"
                        Content="âœï¸  Poprawa zamÃ³wienia - korekta danych"
                        Background="{StaticResource ColorWarning}"
                        Style="{StaticResource ReasonButton}"
                        Click="BtnReason_Click" Tag="Poprawa zamÃ³wienia"/>

                <Button x:Name="btnOdmowaRealizacji"
                        Content="ðŸš«  Odmowa realizacji - nie moÅ¼emy zrealizowaÄ‡"
                        Background="{StaticResource ColorPurple}"
                        Style="{StaticResource ReasonButton}"
                        Click="BtnReason_Click" Tag="Odmowa realizacji"/>

                <Button x:Name="btnBrakDostepnosci"
                        Content="ðŸ“¦  Brak dostÄ™pnoÅ›ci towaru"
                        Background="{StaticResource ColorInfo}"
                        Style="{StaticResource ReasonButton}"
                        Click="BtnReason_Click" Tag="Brak dostÄ™pnoÅ›ci"/>

                <Button x:Name="btnZmianaTerminu"
                        Content="ðŸ“…  Zmiana terminu przez klienta"
                        Background="{StaticResource ColorSuccess}"
                        Style="{StaticResource ReasonButton}"
                        Click="BtnReason_Click" Tag="Zmiana terminu"/>

                <Button x:Name="btnDuplikat"
                        Content="ðŸ“‹  Duplikat zamÃ³wienia"
                        Background="#1ABC9C"
                        Style="{StaticResource ReasonButton}"
                        Click="BtnReason_Click" Tag="Duplikat zamÃ³wienia"/>

                <Button x:Name="btnBladSystemowy"
                        Content="âš™ï¸  BÅ‚Ä…d systemowy / testowe zamÃ³wienie"
                        Background="#34495E"
                        Style="{StaticResource ReasonButton}"
                        Click="BtnReason_Click" Tag="BÅ‚Ä…d systemowy"/>

                <!-- Inna przyczyna z polem tekstowym -->
                <Border Background="White" CornerRadius="8" Padding="12" Margin="0,8,0,0"
                        BorderBrush="#BDC3C7" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Inna przyczyna:" FontWeight="SemiBold" FontSize="12"
                                   Foreground="#7F8C8D" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtInnaPrzyczyna" Height="60" TextWrapping="Wrap"
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                 Padding="8" FontSize="12" BorderBrush="#BDC3C7"/>
                        <Button x:Name="btnInnaPrzyczyna" Content="ZatwierdÅº innÄ… przyczynÄ™"
                                Background="{StaticResource ColorGray}"
                                Style="{StaticResource ReasonButton}"
                                Margin="0,8,0,0" HorizontalContentAlignment="Center"
                                Click="BtnInnaPrzyczyna_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Przycisk Anuluj -->
        <Border Grid.Row="3" Background="White" Padding="15" BorderBrush="#ECF0F1" BorderThickness="0,1,0,0">
            <Button x:Name="btnAnuluj" Content="Anuluj (nie anuluj zamÃ³wienia)"
                    Style="{StaticResource CancelButton}"
                    HorizontalAlignment="Center"
                    Click="BtnAnuluj_Click"/>
        </Border>
    </Grid>
</Window>
