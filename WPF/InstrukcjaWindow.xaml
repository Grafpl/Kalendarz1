<Window x:Class="Kalendarz1.WPF.InstrukcjaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instrukcja obsługi" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F5F7FA"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>

        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="BodyTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Background="#5C8A3A" Padding="20,15">
            <StackPanel>
                <TextBlock Text="📖 Instrukcja obsługi systemu" 
                          FontSize="20" FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock Text="System Zarządzania Zamówieniami Mięsa" 
                          FontSize="12" 
                          Foreground="#E8F5E9" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Treść -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Podstawowa obsługa -->
                <TextBlock Text="🎯 Podstawowa obsługa" Style="{StaticResource SectionHeaderStyle}"/>

                <TextBlock Text="Nawigacja tygodniowa:" Style="{StaticResource SubHeaderStyle}"/>
                <TextBlock Style="{StaticResource BodyTextStyle}">
                    • Użyj przycisków ◀ ▶ aby przejść do poprzedniego/następnego tygodnia<LineBreak/>
                    • Kliknij na przycisk dnia aby wybrać konkretny dzień<LineBreak/>
                    • Niebieski kolor = wybrany dzień, Żółty = dzisiaj
                </TextBlock>

                <TextBlock Text="Filtrowanie zamówień:" Style="{StaticResource SubHeaderStyle}"/>
                <TextBlock Style="{StaticResource BodyTextStyle}">
                    • <Bold>Filtruj odbiorcę:</Bold> Wpisz część nazwy odbiorcy<LineBreak/>
                    • <Bold>Handlowiec:</Bold> Wybierz konkretnego handlowca z listy<LineBreak/>
                    • <Bold>Produkt:</Bold> Pokaż zamówienia tylko dla wybranego produktu<LineBreak/>
                    • <Bold>Pokaż wydania bez zam.:</Bold> Włącz/wyłącz wydania bez zamówienia<LineBreak/>
                    • <Bold>Data odbioru/uboju:</Bold> Wybierz sposób filtrowania dat
                </TextBlock>

                <!-- Zarządzanie zamówieniami -->
                <TextBlock Text="📝 Zarządzanie zamówieniami" Style="{StaticResource SectionHeaderStyle}"/>

                <TextBlock Style="{StaticResource BodyTextStyle}">
                    <Bold>+ Nowe</Bold> - Utwórz nowe zamówienie<LineBreak/>
                    <Bold>✏ Modyfikuj</Bold> - Edytuj wybrane zamówienie<LineBreak/>
                    <Bold>⧉ Duplikuj</Bold> - Skopiuj zamówienie na inne dni<LineBreak/>
                    <Bold>⟲ Cykliczne</Bold> - Utwórz zamówienia cykliczne (np. co tydzień)<LineBreak/>
                    <Bold>✎ Notatka</Bold> - Dodaj lub edytuj notatkę do zamówienia<LineBreak/>
                    <Bold>✕ Anuluj</Bold> - Anuluj wybrane zamówienie<LineBreak/>
                    <Bold>⟲ Odśwież</Bold> - Odśwież dane z bazy
                </TextBlock>

                <!-- Podsumowanie produktów -->
                <TextBlock Text="📊 Podsumowanie produktów" Style="{StaticResource SectionHeaderStyle}"/>

                <TextBlock Style="{StaticResource BodyTextStyle}">
                    Tabela pokazuje bilans dla każdego produktu:<LineBreak/>
                    • <Bold>Plan</Bold> - Planowany przychód (obliczony na podstawie konfiguracji)<LineBreak/>
                    • <Bold>Fakt</Bold> - Faktyczny przychód z produkcji<LineBreak/>
                    • <Bold>Zam</Bold> - Suma zamówień na dany dzień<LineBreak/>
                    • <Bold>Bilans</Bold> - Różnica (Fakt - Zamówienia)
                </TextBlock>

                <TextBlock Style="{StaticResource BodyTextStyle}" Foreground="#E67E22">
                    ⚠️ <Bold>Ważne:</Bold> Podsumowanie pokazuje tylko produkty skonfigurowane w "Konfiguracja → Konfiguracja Produktów"
                </TextBlock>

                <!-- Konfiguracja -->
                <TextBlock Text="⚙ Konfiguracja systemu" Style="{StaticResource SectionHeaderStyle}"/>

                <TextBlock Text="Konfiguracja Produktów:" Style="{StaticResource SubHeaderStyle}"/>
                <TextBlock Style="{StaticResource BodyTextStyle}">
                    1. Otwórz: Menu → Konfiguracja → Konfiguracja Produktów<LineBreak/>
                    2. Wyszukaj produkty w katalogu 67095<LineBreak/>
                    3. Dodaj produkt i ustaw jego procentowy udział<LineBreak/>
                    4. Suma procentów powinna wynosić 90-98% (najlepiej 93-95%)<LineBreak/>
                    5. Zapisz konfigurację
                </TextBlock>

                <TextBlock Text="Konfiguracja Wydajności:" Style="{StaticResource SubHeaderStyle}"/>
                <TextBlock Style="{StaticResource BodyTextStyle}">
                    1. Otwórz: Menu → Konfiguracja → Konfiguracja Wydajności<LineBreak/>
                    2. Wybierz datę od której ma obowiązywać nowa konfiguracja<LineBreak/>
                    3. Wprowadź współczynniki:<LineBreak/>
                       • Współczynnik tuszki (np. 78%)<LineBreak/>
                       • Procent tuszki A (np. 85%)<LineBreak/>
                       • Procent tuszki B (np. 15%)<LineBreak/>
                    4. Suma A+B powinna wynosić 100%<LineBreak/>
                    5. Zapisz konfigurację
                </TextBlock>

                <!-- Wskazówki -->
                <TextBlock Text="💡 Wskazówki" Style="{StaticResource SectionHeaderStyle}"/>

                <TextBlock Style="{StaticResource BodyTextStyle}">
                    • <Bold>Podwójne kliknięcie</Bold> na zamówienie otwiera szczegóły<LineBreak/>
                    • <Bold>Wiersz SUMA</Bold> (zielony) pokazuje sumę wszystkich zamówień<LineBreak/>
                    • <Bold>Sortowanie</Bold> kolumn nie zmienia pozycji wiersza sumy<LineBreak/>
                    • <Bold>Ikona 📝</Bold> przy odbiorcy oznacza że zamówienie ma notatkę<LineBreak/>
                    • <Bold>Czerwone tło</Bold> = zamówienie przekracza 34 palety<LineBreak/>
                    • <Bold>Kolorowe wiersze</Bold> = zamówienia pogrupowane według handlowca
                </TextBlock>

                <!-- Skróty klawiszowe -->
                <TextBlock Text="⌨️ Skróty klawiszowe" Style="{StaticResource SectionHeaderStyle}"/>

                <TextBlock Style="{StaticResource BodyTextStyle}">
                    • <Bold>F5</Bold> - Odśwież dane<LineBreak/>
                    • <Bold>Ctrl+N</Bold> - Nowe zamówienie<LineBreak/>
                    • <Bold>Ctrl+E</Bold> - Edytuj zamówienie<LineBreak/>
                    • <Bold>Ctrl+D</Bold> - Duplikuj zamówienie<LineBreak/>
                    • <Bold>Delete</Bold> - Anuluj zamówienie
                </TextBlock>

                <!-- Pomoc techniczna -->
                <Border Background="#E3F2FD" CornerRadius="8" Padding="15" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="📞 Pomoc techniczna" 
                                  FontSize="14" FontWeight="Bold" 
                                  Foreground="#1976D2" Margin="0,0,0,10"/>
                        <TextBlock Style="{StaticResource BodyTextStyle}" Foreground="#0D47A1">
                            W przypadku problemów skontaktuj się z administratorem systemu.<LineBreak/>
                            E-mail: support@pronova.pl<LineBreak/>
                            Tel: +48 123 456 789
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Stopka -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20,15">
            <Button Content="Zamknij" 
                    Width="100" Height="35"
                    HorizontalAlignment="Right"
                    Background="#5C8A3A" 
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnZamknij_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" 
                                            Background="{TemplateBinding Background}" 
                                            CornerRadius="6"
                                            Padding="15,8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#4B732F"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Border>
    </Grid>
</Window>