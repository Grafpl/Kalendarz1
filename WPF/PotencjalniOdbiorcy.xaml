<Window x:Class="Kalendarz1.WPF.PotencjalniOdbiorcy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Potencjalni Odbiorcy" 
        Height="850" Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        FontFamily="Segoe UI"
        WindowState="Maximized">

    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>

        <Style x:Key="InfoPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" Color="#000000" Opacity="0.1" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Style="{StaticResource InfoPanelStyle}" Background="#3498DB" Padding="10,5">
            <TextBlock x:Name="txtNaglowek"
                       FontSize="14" FontWeight="Bold"
                       Foreground="White" TextWrapping="Wrap"/>
        </Border>

        <!-- Panel informacyjny -->
        <Border Grid.Row="1" Style="{StaticResource InfoPanelStyle}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📊 Plan/Fakt:" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock x:Name="txtPlan" Foreground="#27ae60" Margin="0,0,20,0"/>
                <TextBlock Text="📦 Zamówienia:" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock x:Name="txtZamowienia" Foreground="#3498db" Margin="0,0,20,0"/>
                <TextBlock Text="⚠ Brakuje:" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock x:Name="txtBrakuje" FontWeight="Bold" Foreground="#e74c3c" Margin="0,0,20,0"/>
                <TextBlock Text="💰 Bilans:" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock x:Name="txtBilans" Margin="0,0,20,0"/>
                <TextBlock Text="👥 Odbiorców:" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock x:Name="txtLiczbaOdbiorców" Foreground="#9b59b6"/>
            </StackPanel>
        </Border>

        <!-- Panel filtrów -->
        <Border Grid.Row="2" Style="{StaticResource InfoPanelStyle}" Background="#ECF0F1" Padding="8,5">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="📦 Produkt:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,5,0"/>
                    <ComboBox x:Name="cbWyborProduktu" Width="250" Margin="0,0,10,0"
                      SelectionChanged="CbWyborProduktu_SelectionChanged"
                      DisplayMemberPath="Value" SelectedValuePath="Key"/>
                    <Button Content="🔄" Style="{StaticResource FilterButtonStyle}"
                            Click="BtnPrzeladujDane_Click" Background="#27ae60" Padding="8,4"/>

                    <TextBlock Text="🔍" VerticalAlignment="Center" Margin="15,0,5,0"/>
                    <TextBox x:Name="txtSzukaj" Width="150" TextChanged="TxtSzukaj_TextChanged" VerticalContentAlignment="Center"/>
                    <ComboBox x:Name="cbFiltrHandlowiec" Width="140" Margin="5,0" SelectionChanged="CbFiltrHandlowiec_SelectionChanged">
                        <ComboBoxItem Content="👥 Wszyscy" IsSelected="True"/>
                    </ComboBox>
                    <ComboBox x:Name="cbFiltrSwiezosc" Width="160" Margin="5,0" SelectionChanged="CbFiltrSwiezosc_SelectionChanged">
                        <ComboBoxItem Content="📅 Wszystkie daty" Tag="all"/>
                        <ComboBoxItem Content="📅 30 dni" Tag="30"/>
                        <ComboBoxItem Content="📅 90 dni" Tag="90"/>
                        <ComboBoxItem Content="📅 180 dni" Tag="180"/>
                        <ComboBoxItem Content="📅 Rok" Tag="365" IsSelected="True"/>
                    </ComboBox>
                    <TextBlock Text="Min.il:" VerticalAlignment="Center" Margin="10,0,3,0"/>
                    <TextBox x:Name="txtMinIlosc" Width="60" Text="0" TextChanged="TxtMinIlosc_TextChanged" VerticalContentAlignment="Center"/>
                    <TextBlock Text="Min.wart:" VerticalAlignment="Center" Margin="10,0,3,0"/>
                    <TextBox x:Name="txtMinWartosc" Width="60" Text="0" TextChanged="TxtMinWartosc_TextChanged" VerticalContentAlignment="Center"/>
                    <Button Content="↺" Style="{StaticResource FilterButtonStyle}" Click="BtnResetujFiltry_Click" Background="#95a5a6" Padding="8,4" Margin="5,0"/>
                </StackPanel>
                <TextBlock x:Name="txtStatystykiFiltrow" FontSize="10" Foreground="#7f8c8d"/>
            </StackPanel>
        </Border>

        <!-- DataGrid z odbiorcami -->
        <Border Grid.Row="3" Style="{StaticResource InfoPanelStyle}" Padding="5">
            <DataGrid x:Name="dgOdbiorcy"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Extended"
                      GridLinesVisibility="None"
                      HeadersVisibility="Column"
                      RowHeight="32"
                      FontSize="14"
                      AlternatingRowBackground="#F8F9FA"
                      Background="White"
                      BorderThickness="0"
                      CanUserSortColumns="True"
                      MouseDoubleClick="DgOdbiorcy_MouseDoubleClick">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2C3E50"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="Height" Value="36"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="🏢 Odbiorca" Binding="{Binding Odbiorca}" Width="2*"/>
                    <DataGridTextColumn Header="⭐ Score" Binding="{Binding Scoring}" Width="65">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="👤 Handlowiec" Binding="{Binding Handlowiec}" Width="*"/>
                    <DataGridTextColumn Header="💵 Ost. cena" Binding="{Binding OstCena, StringFormat=N2}" Width="90">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="⚖ Ost. ilość (kg)" Binding="{Binding OstIlosc, StringFormat=N0}" Width="110">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="📅 Ostatni zakup" Binding="{Binding OstData, StringFormat=yyyy-MM-dd}" Width="100"/>
                    <DataGridTextColumn Header="📊 Dni temu" Binding="{Binding DniTemu}" Width="75">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="🔢 Trans." Binding="{Binding LiczbaTransakcji}" Width="65">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="💰 Śr. cena" Binding="{Binding SredniaCena, StringFormat=N2}" Width="85">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="⚖ Śr. ilość" Binding="{Binding SredniaIlosc, StringFormat=N0}" Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="💎 Suma wart. (zł)" Binding="{Binding SumaWartosc, StringFormat=N0}" Width="115">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Padding" Value="0,0,8,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="📈 Regular." Binding="{Binding Regularnosc}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="📦 Prod." Binding="{Binding LiczbaProduktow}" Width="70">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Stopka z przyciskami -->
        <Border Grid.Row="4" Background="#ECF0F1" CornerRadius="3" Padding="8,5" Margin="0,5,0,0">
            <Grid>
                <TextBlock x:Name="txtZaznaczono" VerticalAlignment="Center" FontWeight="Bold" HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnKopiujListe" Content="📋 Kopiuj" Style="{StaticResource FilterButtonStyle}"
                            Background="#9b59b6" Click="BtnKopiujListe_Click" Padding="12,5"/>
                    <Button x:Name="btnEksportuj" Content="📊 CSV" Style="{StaticResource FilterButtonStyle}"
                            Background="#27ae60" Click="BtnEksportuj_Click" Padding="12,5"/>
                    <Button Content="✗ Zamknij" Style="{StaticResource FilterButtonStyle}"
                            Background="#95a5a6" Click="BtnZamknij_Click" Padding="12,5"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>