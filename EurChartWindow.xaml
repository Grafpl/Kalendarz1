<Window x:Class="Kalendarz1.EurChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Kurs EUR/PLN - ostatnie 2 miesiace"
        Height="500" Width="900"
        MinHeight="400" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="#1E2A38">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NAGLOWEK -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="KURS EUR/PLN"
                       FontSize="24" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Dane z Narodowego Banku Polskiego (NBP) - ostatnie 2 miesiace"
                       FontSize="12" Foreground="#95A5A6" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- KARTY STATYSTYK -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <!-- Aktualny kurs -->
            <Border Background="#2C3E50" CornerRadius="8" Padding="15" Margin="0,0,10,0" MinWidth="150">
                <StackPanel>
                    <TextBlock Text="AKTUALNY KURS" FontSize="10" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtAktualnyKurs" Text="--" FontSize="24" FontWeight="Bold" Foreground="#3498DB"/>
                    <TextBlock x:Name="txtAktualnaData" Text="--" FontSize="10" Foreground="#95A5A6"/>
                </StackPanel>
            </Border>

            <!-- Minimum -->
            <Border Background="#2C3E50" CornerRadius="8" Padding="15" Margin="0,0,10,0" MinWidth="150">
                <StackPanel>
                    <TextBlock Text="MINIMUM" FontSize="10" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtMinKurs" Text="--" FontSize="24" FontWeight="Bold" Foreground="#27AE60"/>
                    <TextBlock x:Name="txtMinData" Text="--" FontSize="10" Foreground="#95A5A6"/>
                </StackPanel>
            </Border>

            <!-- Maximum -->
            <Border Background="#2C3E50" CornerRadius="8" Padding="15" Margin="0,0,10,0" MinWidth="150">
                <StackPanel>
                    <TextBlock Text="MAXIMUM" FontSize="10" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtMaxKurs" Text="--" FontSize="24" FontWeight="Bold" Foreground="#E74C3C"/>
                    <TextBlock x:Name="txtMaxData" Text="--" FontSize="10" Foreground="#95A5A6"/>
                </StackPanel>
            </Border>

            <!-- Srednia -->
            <Border Background="#2C3E50" CornerRadius="8" Padding="15" MinWidth="150">
                <StackPanel>
                    <TextBlock Text="SREDNIA" FontSize="10" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtSredniaKurs" Text="--" FontSize="24" FontWeight="Bold" Foreground="#9B59B6"/>
                    <TextBlock Text="z okresu" FontSize="10" Foreground="#95A5A6"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- WYKRES -->
        <Border Grid.Row="2" Background="#2C3E50" CornerRadius="8" Padding="10">
            <lvc:CartesianChart x:Name="chartEur" DisableAnimations="False">
                <lvc:CartesianChart.Series>
                    <lvc:LineSeries x:Name="seriesEur"
                                    Title="EUR/PLN"
                                    Values="{Binding EurValues}"
                                    Stroke="#3498DB"
                                    StrokeThickness="2"
                                    Fill="Transparent"
                                    PointGeometrySize="6"
                                    PointForeground="#3498DB"/>
                </lvc:CartesianChart.Series>
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Data" Labels="{Binding DateLabels}"
                              LabelsRotation="45" FontSize="10" Foreground="#BDC3C7">
                        <lvc:Axis.Separator>
                            <lvc:Separator StrokeThickness="0.5" Stroke="#3D4F5F"/>
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Kurs PLN" LabelFormatter="{Binding YFormatter}"
                              FontSize="10" Foreground="#BDC3C7">
                        <lvc:Axis.Separator>
                            <lvc:Separator StrokeThickness="0.5" Stroke="#3D4F5F"/>
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </Border>

        <!-- STOPKA -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Zamknij" Background="#E74C3C" Foreground="White"
                    Padding="20,10" Cursor="Hand" BorderThickness="0" Click="BtnClose_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <!-- LOADING OVERLAY -->
        <Border x:Name="loadingOverlay" Grid.RowSpan="4" Background="#CC1E2A38" Visibility="Visible">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Ladowanie danych..." FontSize="16" Foreground="White" HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
