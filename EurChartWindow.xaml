<Window x:Class="Kalendarz1.EurChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Kurs EUR/PLN - ostatnie 2 miesiace"
        Height="900" Width="1600"
        MinHeight="700" MinWidth="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#1E2A38">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NAGLOWEK -->
        <Border Grid.Row="0" Background="#2C3E50" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="KURS EUR/PLN - WYKRES HISTORYCZNY"
                               FontSize="28" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Dane z Narodowego Banku Polskiego (NBP) - ostatnie 2 miesiace"
                               FontSize="14" Foreground="#95A5A6" Margin="0,8,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Content="Zamknij" Background="#E74C3C" Foreground="White"
                        Padding="25,12" Cursor="Hand" BorderThickness="0" Click="BtnClose_Click"
                        FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0392B"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- KARTY STATYSTYK -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Aktualny kurs -->
            <Border Grid.Column="0" Background="#2C3E50" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="AKTUALNY KURS" FontSize="12" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtAktualnyKurs" Text="--" FontSize="32" FontWeight="Bold" Foreground="#3498DB" Margin="0,5,0,0"/>
                    <TextBlock x:Name="txtAktualnaData" Text="--" FontSize="12" Foreground="#95A5A6" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Minimum -->
            <Border Grid.Column="1" Background="#2C3E50" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="MINIMUM" FontSize="12" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtMinKurs" Text="--" FontSize="32" FontWeight="Bold" Foreground="#27AE60" Margin="0,5,0,0"/>
                    <TextBlock x:Name="txtMinData" Text="--" FontSize="12" Foreground="#95A5A6" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Maximum -->
            <Border Grid.Column="2" Background="#2C3E50" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="MAXIMUM" FontSize="12" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtMaxKurs" Text="--" FontSize="32" FontWeight="Bold" Foreground="#E74C3C" Margin="0,5,0,0"/>
                    <TextBlock x:Name="txtMaxData" Text="--" FontSize="12" Foreground="#95A5A6" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Srednia -->
            <Border Grid.Column="3" Background="#2C3E50" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="SREDNIA" FontSize="12" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtSredniaKurs" Text="--" FontSize="32" FontWeight="Bold" Foreground="#9B59B6" Margin="0,5,0,0"/>
                    <TextBlock Text="z ostatnich 2 miesiecy" FontSize="12" Foreground="#95A5A6" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Zmiana -->
            <Border Grid.Column="4" Background="#2C3E50" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="ZMIANA W OKRESIE" FontSize="12" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtZmiana" Text="--" FontSize="32" FontWeight="Bold" Foreground="#F39C12" Margin="0,5,0,0"/>
                    <TextBlock x:Name="txtZmianaProc" Text="--" FontSize="12" Foreground="#95A5A6" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- WYKRES -->
        <Border Grid.Row="2" Background="#2C3E50" CornerRadius="8" Padding="15">
            <lvc:CartesianChart x:Name="chartEur" DisableAnimations="False"
                                LegendLocation="Top" Hoverable="True"
                                DataTooltip="{x:Null}">
                <lvc:CartesianChart.Series>
                    <lvc:LineSeries x:Name="seriesEur"
                                    Title="Kurs EUR/PLN"
                                    Values="{Binding EurValues}"
                                    Stroke="#3498DB"
                                    StrokeThickness="3"
                                    Fill="#333498DB"
                                    PointGeometrySize="10"
                                    PointForeground="#3498DB"
                                    LineSmoothness="0.3"
                                    DataLabels="True"
                                    LabelPoint="{Binding LabelFormatter}"
                                    Foreground="White"/>
                </lvc:CartesianChart.Series>
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Data" Labels="{Binding DateLabels}"
                              LabelsRotation="60" FontSize="11" Foreground="#BDC3C7"
                              ShowLabels="True">
                        <lvc:Axis.Separator>
                            <lvc:Separator StrokeThickness="0.5" Stroke="#3D4F5F" Step="1"/>
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Kurs PLN" LabelFormatter="{Binding YFormatter}"
                              FontSize="12" Foreground="#BDC3C7"
                              MinValue="{Binding YAxisMin}" MaxValue="{Binding YAxisMax}">
                        <lvc:Axis.Separator>
                            <lvc:Separator StrokeThickness="0.5" Stroke="#3D4F5F"/>
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </Border>

        <!-- STOPKA -->
        <Border Grid.Row="3" Background="#2C3E50" CornerRadius="8" Padding="15" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="txtStatus" Text="Dane pobrane z API NBP"
                               FontSize="12" Foreground="#95A5A6" VerticalAlignment="Center"/>
                    <TextBlock Text=" | " FontSize="12" Foreground="#3D4F5F" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtLiczbaDni" Text="Liczba dni: --"
                               FontSize="12" Foreground="#95A5A6" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="Kurs EUR/PLN v1.0"
                           FontSize="12" Foreground="#7F8C8D" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- LOADING OVERLAY -->
        <Border x:Name="loadingOverlay" Grid.RowSpan="4" Background="#EE1E2A38" Visibility="Visible" CornerRadius="8">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Ladowanie danych z NBP..." FontSize="20" Foreground="White" HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Width="300" Height="6" Margin="0,20,0,0"/>
                <TextBlock Text="Prosze czekac..." FontSize="12" Foreground="#95A5A6" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
