<Window x:Class="Kalendarz1.MagazynLiczenie.Formularze.LiczenieStanuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Kalendarz1.MagazynLiczenie.Formularze"
        Title="📦 Liczenie Stanu Magazynowego" 
        Height="900" Width="1400"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#ECF0F1">

    <Window.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="ProductButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <Grid Margin="15,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                          Text="{Binding KodProduktu}"
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Foreground="#2C3E50"/>

                                <TextBlock Grid.Row="1" 
                                          FontSize="22"
                                          FontWeight="Bold"
                                          Margin="0,5,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#95A5A6"/>
                                            <Setter Property="Text" Value="---"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding JestZmodyfikowany}" Value="True">
                                                    <Setter Property="Foreground" Value="#27AE60"/>
                                                    <Setter Property="Text" Value="{Binding StanMagazynowy, StringFormat='{}{0:N0} kg'}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                    <Setter Property="Background" Value="#EBF5FB"/>
                </Trigger>
                <DataTrigger Binding="{Binding JestZmodyfikowany}" Value="True">
                    <Setter Property="BorderBrush" Value="#27AE60"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="70"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="📦 LICZENIE STANU MAGAZYNOWEGO" 
                               Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock x:Name="txtDataLiczenia" 
                               FontSize="16" 
                               Foreground="#BDC3C7"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="txtLicznik" 
                               FontSize="20" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="360"/>
            </Grid.ColumnDefinitions>

            <!-- Products List -->
            <Border Grid.Column="0" Background="White" Margin="10" CornerRadius="10">
                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="itemsProducts" Margin="10">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="3"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource ProductButtonStyle}"
                                            Click="ProductButton_Click"
                                            DataContext="{Binding}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Keypad Panel -->
            <Border Grid.Column="1" Background="#34495E" Margin="10,10,10,10" CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Selected Product Info -->
                    <StackPanel Grid.Row="0" Margin="15">
                        <TextBlock Text="Wybrany produkt:" 
                       FontSize="16" 
                       Foreground="White"
                       Margin="0,0,0,10"/>
                        <TextBlock x:Name="txtSelectedProduct" 
                       Text="Wybierz produkt z listy"
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="#3498DB"
                       TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Tab Control for Keypad/Calendar -->
                    <TabControl Grid.Row="1" Grid.RowSpan="2" 
                    Background="Transparent" 
                    BorderThickness="0"
                    Margin="5">
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="#2C3E50"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="20,10"/>
                                <Setter Property="Margin" Value="2"/>
                            </Style>
                        </TabControl.Resources>

                        <TabItem Header="🔢 KLAWIATURA">
                            <local:NumericKeypadControl x:Name="keypad" 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </TabItem>

                        <TabItem Header="📅 KALENDARZ">
                            <local:SimpleDatePickerControl x:Name="datePicker"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer Actions -->
        <Border Grid.Row="2" Background="White" BorderBrush="#BDC3C7" BorderThickness="0,2,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0">
                    <Button Content="💾 ZAPISZ WSZYSTKO" 
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#27AE60"
                            Click="SaveButton_Click"/>

                    <Button Content="❌ ANULUJ" 
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#E74C3C"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>