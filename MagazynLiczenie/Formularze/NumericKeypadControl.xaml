<UserControl x:Class="Kalendarz1.MagazynLiczenie.Formularze.NumericKeypadControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="320" Height="450">
    <UserControl.Resources>
        <Style x:Key="KeypadButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="2"
                                BorderBrush="#34495E">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1A252F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SpecialKeyButtonStyle" TargetType="Button" BasedOn="{StaticResource KeypadButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>

        <Style x:Key="OkButtonStyle" TargetType="Button" BasedOn="{StaticResource KeypadButtonStyle}">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="FontSize" Value="28"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#34495E" Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Display -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Margin="5"
                BorderThickness="3" BorderBrush="#2C3E50">
            <TextBlock x:Name="txtDisplay" 
                       Text="0" 
                       FontSize="36" 
                       FontWeight="Bold"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="15,0"
                       Foreground="#2C3E50"/>
        </Border>

        <!-- Keypad -->
        <UniformGrid Grid.Row="1" Rows="4" Columns="3" Margin="5">
            <!-- Row 1 -->
            <Button Content="7" Style="{StaticResource KeypadButtonStyle}" Click="NumberButton_Click"/>
            <Button Content="8" Style="{StaticResource KeypadButtonStyle}" Click="NumberButton_Click"/>
            <Button Content="9" Style="{StaticResource KeypadButtonStyle}" Click="NumberButton_Click"/>

            <!-- Row 2 -->
            <Button Content="4" Style="{StaticResource KeypadButtonStyle}" Click="NumberButton_Click"/>
            <Button Content="5" Style="{StaticResource KeypadButtonStyle}" Click="NumberButton_Click"/>
            <Button Content="6" Style="{StaticResource KeypadButtonStyle}" Click="NumberButton_Click"/>

            <!-- Row 3 -->
            <Button Content="1" Style="{StaticResource KeypadButtonStyle}" Click="NumberButton_Click"/>
            <Button Content="2" Style="{StaticResource KeypadButtonStyle}" Click="NumberButton_Click"/>
            <Button Content="3" Style="{StaticResource KeypadButtonStyle}" Click="NumberButton_Click"/>

            <!-- Row 4 -->
            <Button Content="⌫" Style="{StaticResource SpecialKeyButtonStyle}" Click="BackspaceButton_Click"/>
            <Button Content="0" Style="{StaticResource KeypadButtonStyle}" Click="NumberButton_Click"/>
            <Button Content="✓" Style="{StaticResource OkButtonStyle}" Click="OkButton_Click"/>
        </UniformGrid>
    </Grid>
</UserControl>