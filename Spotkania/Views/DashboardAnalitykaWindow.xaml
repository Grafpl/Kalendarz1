<Window x:Class="Kalendarz1.Spotkania.Views.DashboardAnalitykaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard Analityczny - Fireflies" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnPrimary" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnSecondary" TargetType="Button" BasedOn="{StaticResource BtnPrimary}">
            <Setter Property="Background" Value="#607D8B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#546E7A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnSuccess" TargetType="Button" BasedOn="{StaticResource BtnPrimary}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#43A047"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Naglowek -->
        <Border Grid.Row="0" Background="#1976D2" Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Dashboard Analityczny" FontSize="22" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Statystyki i analiza spotkan z Fireflies.ai" FontSize="12" Foreground="#BBDEFB" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Zakres:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <DatePicker x:Name="DpOdDaty" Width="120" Margin="0,0,10,0"/>
                    <TextBlock Text="-" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <DatePicker x:Name="DpDoDaty" Width="120" Margin="0,0,15,0"/>
                    <Button x:Name="BtnOdswiez" Content="Odswiez" Style="{StaticResource BtnSuccess}" Click="BtnOdswiez_Click"/>
                    <Button x:Name="BtnGenerujRaport" Content="Generuj raport PDF" Style="{StaticResource BtnSecondary}"
                            Margin="10,0,0,0" Click="BtnGenerujRaport_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Zawartosc -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Karty statystyk -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Liczba spotkan -->
                    <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Liczba spotkan" FontSize="12" Foreground="#666"/>
                            <TextBlock x:Name="TxtLiczbaSpotkań" Text="0" FontSize="32" FontWeight="Bold" Foreground="#1976D2"/>
                            <TextBlock x:Name="TxtLiczbaSpotkańTrend" Text="" FontSize="11" Foreground="#4CAF50"/>
                        </StackPanel>
                    </Border>

                    <!-- Laczny czas -->
                    <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Laczny czas" FontSize="12" Foreground="#666"/>
                            <TextBlock x:Name="TxtLacznyCzas" Text="0h" FontSize="32" FontWeight="Bold" Foreground="#4CAF50"/>
                            <TextBlock x:Name="TxtLacznyCzasTrend" Text="" FontSize="11" Foreground="#666"/>
                        </StackPanel>
                    </Border>

                    <!-- Sredni czas -->
                    <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Sredni czas" FontSize="12" Foreground="#666"/>
                            <TextBlock x:Name="TxtSredniCzas" Text="0m" FontSize="32" FontWeight="Bold" Foreground="#FF9800"/>
                            <TextBlock Text="na spotkanie" FontSize="11" Foreground="#666"/>
                        </StackPanel>
                    </Border>

                    <!-- Uczestnicy -->
                    <Border Grid.Column="3" Style="{StaticResource StatCard}" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Unikalnych uczestnikow" FontSize="12" Foreground="#666"/>
                            <TextBlock x:Name="TxtUczestnicy" Text="0" FontSize="32" FontWeight="Bold" Foreground="#9C27B0"/>
                            <TextBlock Text="osob" FontSize="11" Foreground="#666"/>
                        </StackPanel>
                    </Border>

                    <!-- Sentyment -->
                    <Border Grid.Column="4" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <TextBlock Text="Sredni sentyment" FontSize="12" Foreground="#666"/>
                            <TextBlock x:Name="TxtSentyment" Text="-" FontSize="32" FontWeight="Bold" Foreground="#4CAF50"/>
                            <TextBlock x:Name="TxtSentymentOpis" Text="" FontSize="11" Foreground="#666"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Wykres aktywnosci i Top mowcy -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Wykres aktywnosci (prosty tekstowy/bar) -->
                    <Border Grid.Column="0" Style="{StaticResource CardBorder}" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Aktywnosc w czasie" FontSize="15" FontWeight="SemiBold" Foreground="#1976D2" Margin="0,0,0,15"/>
                            <ItemsControl x:Name="WykresAktywnosci">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,3">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Okres}" FontSize="11" VerticalAlignment="Center"/>
                                            <Border Grid.Column="1" Height="20" CornerRadius="3" Margin="5,0">
                                                <Border Background="#1976D2" CornerRadius="3" HorizontalAlignment="Left"
                                                        Width="{Binding SzerokoscPaska}"/>
                                            </Border>
                                            <TextBlock Grid.Column="2" Text="{Binding Wartosc}" FontSize="11"
                                                       VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Top mowcy -->
                    <Border Grid.Column="1" Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <TextBlock Text="Top mowcy (czas)" FontSize="15" FontWeight="SemiBold" Foreground="#1976D2" Margin="0,0,0,15"/>
                            <ItemsControl x:Name="ListaTopMowcow">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="25"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Pozycja}" FontSize="14" FontWeight="Bold"
                                                       Foreground="{Binding KolorPozycji}" VerticalAlignment="Center"/>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Nazwa}" FontSize="13" FontWeight="SemiBold"/>
                                                <ProgressBar Value="{Binding Procent}" Maximum="100" Height="6"
                                                             Foreground="{Binding KolorPaska}" Background="#E0E0E0"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="2" Margin="10,0,0,0" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding CzasDisplay}" FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding ProcentDisplay}" FontSize="10" Foreground="#666" HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Sentyment i Ton -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Analiza sentymentu -->
                    <Border Grid.Column="0" Style="{StaticResource CardBorder}" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Analiza sentymentu spotkan" FontSize="15" FontWeight="SemiBold" Foreground="#1976D2" Margin="0,0,0,15"/>

                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                    <Border Width="60" Height="60" CornerRadius="30" Background="#E8F5E9">
                                        <TextBlock x:Name="TxtPozytywne" Text="0" FontSize="20" FontWeight="Bold"
                                                   Foreground="#4CAF50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Pozytywne" FontSize="11" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                    <Border Width="60" Height="60" CornerRadius="30" Background="#FFF3E0">
                                        <TextBlock x:Name="TxtNeutralne" Text="0" FontSize="20" FontWeight="Bold"
                                                   Foreground="#FF9800" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Neutralne" FontSize="11" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <Border Width="60" Height="60" CornerRadius="30" Background="#FFEBEE">
                                        <TextBlock x:Name="TxtNegatywne" Text="0" FontSize="20" FontWeight="Bold"
                                                   Foreground="#F44336" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Negatywne" FontSize="11" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <!-- Lista spotkan z sentymentem -->
                            <TextBlock Text="Ostatnie spotkania:" FontSize="12" Foreground="#666" Margin="0,10,0,5"/>
                            <ItemsControl x:Name="ListaSentymentSpotkania" MaxHeight="150">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Tytul}" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                                <Border Grid.Column="1" Background="{Binding SentymentKolor}" CornerRadius="10" Padding="8,2">
                                                    <TextBlock Text="{Binding SentymentDisplay}" FontSize="10" Foreground="White"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Analiza tonu -->
                    <Border Grid.Column="1" Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <TextBlock Text="Analiza tonu spotkan" FontSize="15" FontWeight="SemiBold" Foreground="#1976D2" Margin="0,0,0,15"/>

                            <ItemsControl x:Name="ListaTonow">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="40"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Nazwa}" FontSize="12" VerticalAlignment="Center"/>
                                            <ProgressBar Grid.Column="1" Value="{Binding Procent}" Maximum="100" Height="12"
                                                         Foreground="{Binding Kolor}" Background="#E0E0E0" Margin="10,0"/>
                                            <TextBlock Grid.Column="2" Text="{Binding ProcentDisplay}" FontSize="11"
                                                       FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Border Background="#F5F5F5" CornerRadius="6" Padding="12" Margin="0,15,0,0">
                                <StackPanel>
                                    <TextBlock Text="Dominujacy ton:" FontSize="12" Foreground="#666"/>
                                    <TextBlock x:Name="TxtDominujacyTon" Text="-" FontSize="18" FontWeight="Bold" Foreground="#1976D2"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Szczegolowa lista spotkan -->
                <Border Style="{StaticResource CardBorder}">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <TextBlock Text="Szczegoly spotkan" FontSize="15" FontWeight="SemiBold" Foreground="#1976D2"/>
                            <Button x:Name="BtnEksportCSV" Content="Eksport CSV" Style="{StaticResource BtnSecondary}"
                                    HorizontalAlignment="Right" Click="BtnEksportCSV_Click"/>
                        </Grid>

                        <DataGrid x:Name="GridSpotkania" AutoGenerateColumns="False" IsReadOnly="True"
                                  MaxHeight="300" GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                  BorderThickness="1" BorderBrush="#E0E0E0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Data" Binding="{Binding DataDisplay}" Width="100"/>
                                <DataGridTextColumn Header="Tytul" Binding="{Binding Tytul}" Width="*"/>
                                <DataGridTextColumn Header="Czas" Binding="{Binding CzasDisplay}" Width="70"/>
                                <DataGridTextColumn Header="Uczestnicy" Binding="{Binding LiczbaUczestnikow}" Width="80"/>
                                <DataGridTextColumn Header="Sentyment" Binding="{Binding SentymentDisplay}" Width="80"/>
                                <DataGridTextColumn Header="Ton" Binding="{Binding TonDisplay}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Loading overlay -->
        <Border x:Name="LoadingOverlay" Grid.RowSpan="2" Background="#80000000" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
                <TextBlock x:Name="TxtLoading" Text="Ladowanie danych..." Foreground="White" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
