<Window x:Class="Kalendarz1.Spotkania.Views.FirefliesKonfiguracjaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Konfiguracja Fireflies.ai" Height="550" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NagÅ‚Ã³wek -->
        <Border Grid.Row="0" Background="#FF5722" Padding="25,20">
            <StackPanel>
                <TextBlock Text="ðŸŽ™ï¸ Fireflies.ai" FontSize="22" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Automatyczne notatki ze spotkaÅ„" FontSize="14" Foreground="#FFFFFF99" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- ZawartoÅ›Ä‡ -->
        <ScrollViewer Grid.Row="1" Padding="25">
            <StackPanel>

                <!-- Status -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Ellipse x:Name="StatusDot" Grid.Column="0" Width="14" Height="14"
                                 Fill="#9E9E9E" VerticalAlignment="Center" Margin="0,0,15,0"/>

                        <StackPanel Grid.Column="1">
                            <TextBlock x:Name="TxtStatus" Text="Brak konfiguracji" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock x:Name="TxtOstatniaSynch" Text="" FontSize="12" Foreground="#666" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Klucz API -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Klucz API" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock Text="Znajdziesz go w Fireflies.ai â†’ Settings â†’ Developer Settings â†’ API"
                                   FontSize="12" Foreground="#666" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <PasswordBox x:Name="TxtApiKey" Grid.Column="0" FontSize="14" Padding="10"/>
                            <Button x:Name="BtnTestuj" Grid.Column="1" Content="Testuj poÅ‚Ä…czenie"
                                    Padding="15,10" Margin="10,0,0,0" Click="BtnTestuj_Click"/>
                            <Button x:Name="BtnDiagnostyka" Grid.Column="2" Content="ðŸ” Diagnostyka"
                                    Padding="15,10" Margin="10,0,0,0" Background="#333" Foreground="White"
                                    BorderThickness="0" Click="BtnDiagnostyka_Click"/>
                        </Grid>
                        <TextBlock x:Name="TxtTestWynik" Text="" FontSize="12" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Ustawienia synchronizacji -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Ustawienia synchronizacji" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,15"/>

                        <CheckBox x:Name="ChkAutoSync" Content="Automatyczna synchronizacja"
                                  IsChecked="True" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="20,0,0,15">
                            <TextBlock Text="InterwaÅ‚:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="CmbInterwal" Width="120" SelectedIndex="1">
                                <ComboBoxItem Content="5 minut"/>
                                <ComboBoxItem Content="15 minut"/>
                                <ComboBoxItem Content="30 minut"/>
                                <ComboBoxItem Content="1 godzina"/>
                            </ComboBox>
                        </StackPanel>

                        <CheckBox x:Name="ChkAutoImport" Content="Automatycznie importuj notatki do moduÅ‚u Notatki"
                                  IsChecked="True" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="Importuj spotkania od:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker x:Name="DpImportOd" Width="150"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                            <TextBlock Text="Minimalny czas spotkania:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="CmbMinCzas" Width="120" SelectedIndex="1">
                                <ComboBoxItem Content="30 sekund"/>
                                <ComboBoxItem Content="1 minuta"/>
                                <ComboBoxItem Content="5 minut"/>
                                <ComboBoxItem Content="10 minut"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Informacje o koncie -->
                <Border x:Name="PanelKonto" Background="White" CornerRadius="8" Padding="20" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Informacje o koncie" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock x:Name="TxtKontoInfo" Text="" FontSize="13"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Przyciski -->
        <Border Grid.Row="2" Background="White" Padding="20,15" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0">
            <Grid>
                <CheckBox x:Name="ChkAktywna" Content="Integracja aktywna" IsChecked="True"
                          HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Anuluj" Padding="20,10" Margin="0,0,10,0" Click="BtnAnuluj_Click"/>
                    <Button Content="ðŸ’¾ Zapisz" Padding="20,10" Background="#FF5722" Foreground="White"
                            BorderThickness="0" Click="BtnZapisz_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
