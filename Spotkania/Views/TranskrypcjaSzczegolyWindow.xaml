<Window x:Class="Kalendarz1.Spotkania.Views.TranskrypcjaSzczegolyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edytor transkrypcji" Height="950" Width="1500"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnPrimary" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnSuccess" TargetType="Button" BasedOn="{StaticResource BtnPrimary}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#43A047"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnWarning" TargetType="Button" BasedOn="{StaticResource BtnPrimary}">
            <Setter Property="Background" Value="#FF9800"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F57C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnDanger" TargetType="Button" BasedOn="{StaticResource BtnPrimary}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnSecondary" TargetType="Button" BasedOn="{StaticResource BtnPrimary}">
            <Setter Property="Background" Value="#607D8B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#546E7A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnSmall" TargetType="Button" BasedOn="{StaticResource BtnPrimary}">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naglowek -->
        <Border Grid.Row="0" Background="#1976D2" Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Edytor transkrypcji" FontSize="22" FontWeight="Bold" Foreground="White"
                                   ToolTip="Skroty: Ctrl+S=Zapisz, Ctrl+F=Szukaj, Ctrl+R=Odswiez, Ctrl+G=Idz do czasu, Ctrl++/-=Czcionka, Esc=Wyczysc"/>
                        <Border x:Name="BadgeSync" Background="#4CAF50" CornerRadius="4" Padding="8,4" Margin="15,0,0,0" VerticalAlignment="Center">
                            <TextBlock x:Name="TxtSyncStatus" Text="Zsynchronizowane" FontSize="11" Foreground="White"/>
                        </Border>
                        <Border Background="#64B5F6" CornerRadius="4" Padding="8,4" Margin="10,0,0,0" VerticalAlignment="Center"
                                ToolTip="Skroty klawiaturowe: Ctrl+S=Zapisz, Ctrl+F=Szukaj, Ctrl+R=Odswiez, Ctrl+G=Idz do czasu, Ctrl++/-=Zmien czcionke, Esc=Wyczysc szukanie, Home/End=Poczatek/Koniec">
                            <TextBlock Text="?" FontSize="11" Foreground="White" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                    <TextBlock x:Name="TxtFirefliesId" Text="Fireflies ID: ---" FontSize="12" Foreground="#B3E5FC" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="BtnTrybCiemny" Content="ðŸŒ™" Style="{StaticResource BtnSecondary}"
                            Width="40" Margin="0,0,10,0" Click="BtnTrybCiemny_Click" ToolTip="Przelacz tryb ciemny/jasny"/>
                    <Button x:Name="BtnWidokKolumnowy" Content="â–¥" Style="{StaticResource BtnSecondary}"
                            Width="40" Margin="0,0,10,0" Click="BtnWidokKolumnowy_Click" ToolTip="Widok kolumnowy mowcow"/>
                    <Button x:Name="BtnOtworzFireflies" Content="Otworz w Fireflies" Style="{StaticResource BtnSecondary}"
                            Margin="0,0,10,0" Click="BtnOtworzFireflies_Click"/>
                    <Button x:Name="BtnOdswiez" Content="Odswiez z API" Style="{StaticResource BtnWarning}"
                            Click="BtnOdswiez_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Glowna zawartosc -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel lewy -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,0,15,0">

                    <!-- Informacje podstawowe -->
                    <Border Style="{StaticResource CardBorder}" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Informacje podstawowe" Style="{StaticResource SectionHeader}"/>

                            <TextBlock Text="Tytul spotkania:" FontWeight="Medium" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtTytul" Grid.Column="0" FontSize="14" Padding="10,8"/>
                                <Button x:Name="BtnSyncTytul" Grid.Column="1" Content="Sync" ToolTip="Synchronizuj tytul z Fireflies"
                                        Padding="10,8" Margin="8,0,0,0" Click="BtnSyncTytul_Click"/>
                            </Grid>

                            <Grid Margin="0,15,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Data:" FontWeight="Medium" Foreground="#666"/>
                                    <TextBlock x:Name="TxtData" Text="---" FontSize="14" Margin="0,4,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Czas trwania:" FontWeight="Medium" Foreground="#666"/>
                                    <TextBlock x:Name="TxtCzasTrwania" Text="---" FontSize="14" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>

                            <StackPanel Margin="0,10,0,0">
                                <TextBlock Text="Organizator:" FontWeight="Medium" Foreground="#666"/>
                                <TextBlock x:Name="TxtOrganizator" Text="---" FontSize="13" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Mapowanie mowcow - UPROSZCZONE -->
                    <Border Style="{StaticResource CardBorder}" Margin="0,0,0,15">
                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="Przypisz mowcow" Style="{StaticResource SectionHeader}" Margin="0"/>
                                    <TextBlock x:Name="TxtLiczbaMowcow" Text="(0)" FontSize="13" Foreground="#666"
                                               VerticalAlignment="Center" Margin="10,0,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button x:Name="BtnSzybkieMapowanie" Content="âš¡" Style="{StaticResource BtnSmall}"
                                            Background="#9C27B0" Width="35" Margin="0,0,5,0"
                                            Click="BtnSzybkieMapowanie_Click" ToolTip="Tryb szybkiego mapowania (wizard)"/>
                                    <Button x:Name="BtnMergeMowcow" Content="ðŸ”—" Style="{StaticResource BtnSmall}"
                                            Background="#795548" Width="35" Margin="0,0,5,0"
                                            Click="BtnMergeMowcow_Click" ToolTip="Polacz mowcow jako ta sama osoba"/>
                                    <Button x:Name="BtnZastosujSugestie" Content="ðŸ’¡ Sugestie" Style="{StaticResource BtnSmall}"
                                            Background="#FFC107" Margin="0,0,5,0" Visibility="Collapsed"
                                            Click="BtnZastosujSugestie_Click" ToolTip="Zastosuj wszystkie sugestie z bazy wiedzy"/>
                                    <Button Content="ðŸ” Dopasuj" Style="{StaticResource BtnSmall}"
                                            Background="#FF9800" Margin="0,0,5,0"
                                            Click="BtnAutoDopasuj_Click" ToolTip="Sprobuj automatycznie dopasowac mowcow po nazwie"/>
                                    <Button Content="ðŸ“š Baza" Style="{StaticResource BtnSmall}"
                                            Background="#607D8B" Margin="0,0,5,0"
                                            Click="BtnPokazBazeGlosow_Click" ToolTip="Pokaz baze nauczonej wiedzy o glosach"/>
                                    <Button Content="ðŸ—‘ï¸" Style="{StaticResource BtnSmall}"
                                            Background="#9E9E9E" Width="35" Click="BtnWyczyscMapowania_Click"
                                            ToolTip="Usun wszystkie przypisania"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock x:Name="TxtInfoMapowania" Text="System uczy sie Twoich przypisaÅ„ i automatycznie sugeruje je w przyszlosci"
                                       FontSize="11" Foreground="#888" FontStyle="Italic" Margin="0,0,0,8"/>

                            <ItemsControl x:Name="ListaMowcow">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{Binding RamkaBrush}" BorderThickness="2" CornerRadius="6"
                                                Padding="10" Margin="0,0,0,6" Background="{Binding TloKolor}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Przycisk odtwarzania -->
                                                <Button Grid.Column="0" Content="â–¶ï¸" Width="36" Height="36"
                                                        Background="{Binding KolorMowcy}" Foreground="White"
                                                        FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"
                                                        Click="BtnOdsluchajMowce_Click" Tag="{Binding}"
                                                        ToolTip="OdsÅ‚uchaj prÃ³bkÄ™ gÅ‚osu tego mÃ³wcy w Fireflies">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="18" Cursor="Hand">
                                                                <ContentPresenter HorizontalAlignment="Center"
                                                                                  VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>

                                                <!-- Kolor i nazwa mowcy -->
                                                <Border Grid.Column="1" Background="{Binding KolorMowcy}" CornerRadius="4"
                                                        Padding="10,6" Margin="0,0,10,0" VerticalAlignment="Center">
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding DisplayFireflies}" FontWeight="Bold"
                                                                   Foreground="White" FontSize="13"/>
                                                        <TextBlock Text="{Binding StatystykiDisplay}" FontSize="10"
                                                                   Foreground="#FFFFFFCC"/>
                                                    </StackPanel>
                                                </Border>

                                                <!-- ComboBox z pracownikami -->
                                                <Grid Grid.Column="2" VerticalAlignment="Center">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="=" FontSize="18" Foreground="#999"
                                                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                    <ComboBox Grid.Column="1"
                                                              ItemsSource="{Binding DostepniPracownicy}"
                                                              SelectedValue="{Binding PrzypisanyUserID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                              SelectedValuePath="UserID"
                                                              FontSize="14" Padding="10,8"
                                                              SelectionChanged="CmbMowca_SelectionChanged"
                                                              Tag="{Binding}">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Border Width="28" Height="28" CornerRadius="14"
                                                                            Background="{Binding KolorTla}" Margin="0,0,8,0"
                                                                            Visibility="{Binding InicjalyWidocznosc}">
                                                                        <TextBlock Text="{Binding Inicjaly}" FontSize="11"
                                                                                   Foreground="White" FontWeight="Bold"
                                                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                    <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                        <ComboBox.Style>
                                                            <Style TargetType="ComboBox">
                                                                <Setter Property="Background" Value="White"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding JestPrzypisany}" Value="True">
                                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </ComboBox.Style>
                                                    </ComboBox>
                                                </Grid>

                                                <!-- Badge auto-mapowania lub sugestii -->
                                                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="8,0,0,0" VerticalAlignment="Center">
                                                    <!-- Badge auto-mapowania -->
                                                    <Border Background="{Binding AutoMapowanieBadgeTlo}" CornerRadius="10"
                                                            Padding="8,4" Visibility="{Binding AutoMapowanieBadgeWidocznosc}"
                                                            ToolTip="Automatycznie dopasowane na podstawie poprzednich mapowaÅ„">
                                                        <TextBlock Text="{Binding AutoMapowanieBadge}" FontSize="11"
                                                                   Foreground="White" FontWeight="SemiBold"/>
                                                    </Border>
                                                    <!-- Badge sugestii -->
                                                    <Border Background="#FFC107" CornerRadius="10"
                                                            Padding="8,4" Visibility="{Binding SugestiaBadgeWidocznosc}"
                                                            ToolTip="Mamy sugestiÄ™ dopasowania - sprawdÅº listÄ™!">
                                                        <TextBlock Text="ðŸ’¡" FontSize="11"/>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Status mapowania -->
                            <Border x:Name="StatusMapowania" Background="#E3F2FD" CornerRadius="4" Padding="10" Margin="0,8,0,0">
                                <TextBlock x:Name="TxtStatusMapowania" Text="Wybierz pracownikow z list rozwijanych"
                                           FontSize="12" Foreground="#1976D2" TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Podsumowanie AI -->
                    <Border Style="{StaticResource CardBorder}" Margin="0,0,0,15">
                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Podsumowanie AI" Style="{StaticResource SectionHeader}" Margin="0"/>
                                <Button x:Name="BtnPodsumowanieNaMowce" Grid.Column="1" Content="ðŸ‘¤ Wg osob"
                                        Style="{StaticResource BtnSmall}" Background="#00BCD4"
                                        Click="BtnPodsumowanieNaMowce_Click"
                                        ToolTip="Pokaz co powiedzial kazdy uczestnik"/>
                            </Grid>
                            <TextBox x:Name="TxtPodsumowanie" AcceptsReturn="True" TextWrapping="Wrap"
                                     MinHeight="80" MaxHeight="150" FontSize="13" Padding="10"/>
                        </StackPanel>
                    </Border>

                    <!-- Slowa kluczowe -->
                    <Border Style="{StaticResource CardBorder}" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Slowa kluczowe" Style="{StaticResource SectionHeader}"/>
                            <TextBox x:Name="TxtSlowaKluczowe" TextWrapping="Wrap" FontSize="13" Padding="10"/>
                        </StackPanel>
                    </Border>

                    <!-- Powiazania -->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <TextBlock Text="Powiazania" Style="{StaticResource SectionHeader}"/>

                            <TextBlock Text="Powiaz ze spotkaniem:" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="CmbSpotkanie" Grid.Column="0" FontSize="13" Padding="8,6"
                                          DisplayMemberPath="TytulDisplay" SelectedValuePath="SpotkaniID"/>
                                <Button Content="Powiaz" Grid.Column="1" Padding="10,6" Margin="8,0,0,0"
                                        Click="BtnPowiazSpotkanie_Click"/>
                            </Grid>

                            <TextBlock Text="Powiaz z notatka:" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="CmbNotatka" Grid.Column="0" FontSize="13" Padding="8,6"
                                          DisplayMemberPath="TematDisplay" SelectedValuePath="NotatkaID"/>
                                <Button Content="Powiaz" Grid.Column="1" Padding="10,6" Margin="8,0,0,0"
                                        Click="BtnPowiazNotatke_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Panel prawy - Transkrypcja -->
            <Border Grid.Column="1" Style="{StaticResource CardBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Naglowek transkrypcji -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="Transkrypcja" Style="{StaticResource SectionHeader}" Margin="0"/>
                            <TextBlock x:Name="TxtLiczbaZdan" Text="(0 wypowiedzi)" FontSize="13" Foreground="#666"
                                       VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="-" Style="{StaticResource BtnSmall}" Width="30" Margin="0,0,2,0"
                                    Click="BtnZmniejszCzcionke_Click" ToolTip="Zmniejsz czcionke (Ctrl+-)"/>
                            <Button Content="+" Style="{StaticResource BtnSmall}" Width="30" Margin="0,0,8,0"
                                    Click="BtnZwiekszCzcionke_Click" ToolTip="Zwieksz czcionke (Ctrl++)"/>
                            <Button Content="Idz do" Style="{StaticResource BtnSmall}" Margin="0,0,5,0"
                                    Click="BtnIdzDoMowcy_Click" ToolTip="Idz do mowcy / Ctrl+G idz do czasu"/>
                            <Button Content="Kopiuj" Style="{StaticResource BtnSmall}" Margin="0,0,5,0"
                                    Click="BtnKopiujTranskrypcje_Click" ToolTip="Kopiuj do schowka"/>
                            <Button Content="Eksport" Style="{StaticResource BtnSmall}" Margin="0,0,5,0"
                                    Click="BtnEksportuj_Click" ToolTip="Eksportuj do schowka (TXT/CSV/HTML)"/>
                            <Button Content="Zapisz" Style="{StaticResource BtnSmall}" Margin="0,0,5,0"
                                    Background="#4CAF50" Click="BtnZapiszDoPliku_Click" ToolTip="Zapisz do pliku (TXT/CSV/HTML)"/>
                            <Button Content="Filtruj" Style="{StaticResource BtnSmall}"
                                    Click="BtnFiltruj_Click" ToolTip="Filtruj po mowcy"/>
                        </StackPanel>
                    </Grid>

                    <!-- Opcje wyswietlania i wyszukiwanie -->
                    <Grid Grid.Row="1" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <CheckBox x:Name="ChkUzyjNazwSystemowych" Content="Nazwy systemowe"
                                      IsChecked="True" VerticalAlignment="Center"
                                      Checked="ChkUzyjNazwSystemowych_Changed" Unchecked="ChkUzyjNazwSystemowych_Changed"/>
                            <CheckBox x:Name="ChkPokazCzasy" Content="Czasy" IsChecked="True"
                                      Margin="10,0,0,0" VerticalAlignment="Center"
                                      Checked="ChkPokazCzasy_Changed" Unchecked="ChkPokazCzasy_Changed"/>
                            <Border Background="#E0E0E0" Width="1" Height="20" Margin="15,0"/>
                            <!-- Filtry emocji -->
                            <TextBlock Text="Filtr:" VerticalAlignment="Center" Foreground="#666" Margin="0,0,8,0"/>
                            <Button x:Name="BtnFiltrPytania" Content="â“ Pytania" Style="{StaticResource BtnSmall}"
                                    Background="#9E9E9E" Margin="0,0,5,0" Click="BtnFiltrPytania_Click"
                                    ToolTip="Pokaz tylko pytania"/>
                            <Button x:Name="BtnFiltrWazne" Content="âš ï¸ Wazne" Style="{StaticResource BtnSmall}"
                                    Background="#9E9E9E" Margin="0,0,5,0" Click="BtnFiltrWazne_Click"
                                    ToolTip="Pokaz wazne fragmenty (liczby, daty, nazwy)"/>
                            <Button x:Name="BtnFiltrAkcje" Content="âœ… Akcje" Style="{StaticResource BtnSmall}"
                                    Background="#9E9E9E" Click="BtnFiltrAkcje_Click"
                                    ToolTip="Pokaz zadania do wykonania"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox x:Name="TxtSzukaj" Width="180" Padding="8,6"
                                     Tag="Szukaj w transkrypcji..." FontSize="12"
                                     TextChanged="TxtSzukaj_TextChanged"/>
                            <Button Content="X" Padding="8,6" Margin="5,0,0,0"
                                    Click="BtnWyczyscSzukaj_Click" ToolTip="Wyczysc wyszukiwanie i filtry"/>
                        </StackPanel>
                    </Grid>

                    <!-- Lista zdan -->
                    <ListBox x:Name="ListaZdan" Grid.Row="2"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             Background="Transparent" BorderThickness="0"
                             HorizontalContentAlignment="Stretch"
                             SelectionMode="Single">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding TloKolor}" CornerRadius="6" Padding="12" Margin="0,0,0,6"
                                        Visibility="{Binding Widocznosc}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" MinWidth="150" Margin="0,0,12,0">
                                            <TextBlock Text="{Binding CzasDisplay}" FontSize="11" Foreground="#888"
                                                       Visibility="{Binding CzasWidocznosc}"/>
                                            <TextBlock Text="{Binding MowcaWyswietlany}" FontWeight="SemiBold"
                                                       Foreground="{Binding MowcaKolor}" FontSize="13"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" Text="{Binding Tekst}" TextWrapping="Wrap"
                                                   FontSize="13" Foreground="#333"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

        </Grid>

        <!-- Dolny panel -->
        <Border Grid.Row="2" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="BtnUsun" Content="Usun transkrypcje" Style="{StaticResource BtnDanger}"
                            Click="BtnUsun_Click"/>
                </StackPanel>

                <TextBlock x:Name="TxtStatusZapisu" Grid.Column="1" Text="" FontSize="12"
                           Foreground="#666" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="BtnZapiszWszystko" Content="Zapisz wszystko + Sync"
                            Style="{StaticResource BtnSuccess}" Margin="0,0,10,0"
                            Click="BtnZapiszWszystko_Click"/>
                    <Button x:Name="BtnZapiszLokalnie" Content="Zapisz lokalnie"
                            Style="{StaticResource BtnPrimary}" Margin="0,0,10,0"
                            Click="BtnZapiszLokalnie_Click"/>
                    <Button x:Name="BtnAnuluj" Content="Zamknij" Style="{StaticResource BtnSecondary}"
                            Click="BtnAnuluj_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
