<Window x:Class="Kalendarz1.Spotkania.Views.TranskrypcjaSzczegolyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edytor transkrypcji" Height="900" Width="1400"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnPrimary" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnSuccess" TargetType="Button" BasedOn="{StaticResource BtnPrimary}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#43A047"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnWarning" TargetType="Button" BasedOn="{StaticResource BtnPrimary}">
            <Setter Property="Background" Value="#FF9800"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F57C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnDanger" TargetType="Button" BasedOn="{StaticResource BtnPrimary}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnSecondary" TargetType="Button" BasedOn="{StaticResource BtnPrimary}">
            <Setter Property="Background" Value="#607D8B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#546E7A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naglowek z tytulem i sync status -->
        <Border Grid.Row="0" Background="#1976D2" Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Edytor transkrypcji" FontSize="22" FontWeight="Bold" Foreground="White"/>
                        <Border x:Name="BadgeSync" Background="#4CAF50" CornerRadius="4" Padding="8,4" Margin="15,0,0,0" VerticalAlignment="Center">
                            <TextBlock x:Name="TxtSyncStatus" Text="Zsynchronizowane" FontSize="11" Foreground="White"/>
                        </Border>
                    </StackPanel>
                    <TextBlock x:Name="TxtFirefliesId" Text="Fireflies ID: ---" FontSize="12" Foreground="#B3E5FC" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="BtnOtworzFireflies" Content="Otworz w Fireflies" Style="{StaticResource BtnSecondary}"
                            Margin="0,0,10,0" Click="BtnOtworzFireflies_Click"/>
                    <Button x:Name="BtnOdswiez" Content="Odswiez z API" Style="{StaticResource BtnWarning}"
                            Click="BtnOdswiez_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Glowna zawartosc -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel lewy - Informacje i mapowanie mowcow -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,0,15,0">

                    <!-- Informacje podstawowe -->
                    <Border Style="{StaticResource CardBorder}" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Informacje podstawowe" Style="{StaticResource SectionHeader}"/>

                            <TextBlock Text="Tytul spotkania:" FontWeight="Medium" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtTytul" Grid.Column="0" FontSize="14" Padding="10,8"/>
                                <Button x:Name="BtnSyncTytul" Grid.Column="1" Content="Sync" ToolTip="Synchronizuj tytul z Fireflies"
                                        Padding="10,8" Margin="8,0,0,0" Click="BtnSyncTytul_Click"/>
                            </Grid>

                            <Grid Margin="0,15,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Data:" FontWeight="Medium" Foreground="#666"/>
                                    <TextBlock x:Name="TxtData" Text="---" FontSize="14" Margin="0,4,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Czas trwania:" FontWeight="Medium" Foreground="#666"/>
                                    <TextBlock x:Name="TxtCzasTrwania" Text="---" FontSize="14" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>

                            <StackPanel Margin="0,10,0,0">
                                <TextBlock Text="Organizator:" FontWeight="Medium" Foreground="#666"/>
                                <TextBlock x:Name="TxtOrganizator" Text="---" FontSize="13" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Mapowanie mowcow - KLUCZOWA FUNKCJA -->
                    <Border Style="{StaticResource CardBorder}" Margin="0,0,0,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="Mapowanie mowcow" Style="{StaticResource SectionHeader}" Margin="0"/>
                                <TextBlock x:Name="TxtLiczbaMowcow" Text="(0)" FontSize="13" Foreground="#666"
                                           VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </StackPanel>

                            <TextBlock Text="Przypisz mowcow z transkrypcji do pracownikow systemu:"
                                       FontSize="12" Foreground="#666" TextWrapping="Wrap" Margin="0,0,0,12"/>

                            <ItemsControl x:Name="ListaMowcow">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6"
                                                Padding="12" Margin="0,0,0,8" Background="{Binding TloKolor}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Nazwa z Fireflies -->
                                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                                    <Border Background="{Binding KolorMowcy}" CornerRadius="4" Padding="8,4">
                                                        <TextBlock Text="{Binding DisplayFireflies}" FontWeight="SemiBold"
                                                                   Foreground="White" FontSize="13"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding LiczbaWypowiedzi, StringFormat=' ({0} wypowiedzi)'}"
                                                               FontSize="12" Foreground="#666" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                                </StackPanel>

                                                <!-- Przypisany pracownik -->
                                                <StackPanel Grid.Row="1">
                                                    <TextBlock Text="Przypisz do pracownika:" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                                                    <ComboBox ItemsSource="{Binding DostepniPracownicy}"
                                                              SelectedValue="{Binding PrzypisanyUserID, Mode=TwoWay}"
                                                              SelectedValuePath="UserID"
                                                              DisplayMemberPath="DisplayName"
                                                              FontSize="13" Padding="8,6"/>
                                                </StackPanel>

                                                <!-- Przykladowa wypowiedz -->
                                                <StackPanel Grid.Row="2" Margin="0,8,0,0">
                                                    <TextBlock Text="Przyklad:" FontSize="11" Foreground="#888"/>
                                                    <TextBlock Text="{Binding PrzykladowaWypowiedz}" FontSize="11" Foreground="#666"
                                                               TextWrapping="Wrap" TextTrimming="CharacterEllipsis" MaxHeight="40"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Button x:Name="BtnZapiszMapowanie" Content="Zapisz mapowanie mowcow"
                                    Style="{StaticResource BtnSuccess}" Margin="0,10,0,0"
                                    Click="BtnZapiszMapowanie_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Podsumowanie AI -->
                    <Border Style="{StaticResource CardBorder}" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Podsumowanie AI" Style="{StaticResource SectionHeader}"/>
                            <TextBox x:Name="TxtPodsumowanie" AcceptsReturn="True" TextWrapping="Wrap"
                                     MinHeight="100" MaxHeight="200" FontSize="13" Padding="10"/>
                        </StackPanel>
                    </Border>

                    <!-- Slowa kluczowe -->
                    <Border Style="{StaticResource CardBorder}" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Slowa kluczowe" Style="{StaticResource SectionHeader}"/>
                            <TextBox x:Name="TxtSlowaKluczowe" TextWrapping="Wrap" FontSize="13" Padding="10"
                                     ToolTip="Oddziel slowa przecinkami"/>
                            <TextBlock Text="Oddziel slowa przecinkami" FontSize="11" Foreground="#888" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Powiazania -->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <TextBlock Text="Powiazania" Style="{StaticResource SectionHeader}"/>

                            <TextBlock Text="Powiaz ze spotkaniem:" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="CmbSpotkanie" Grid.Column="0" FontSize="13" Padding="8,6"
                                          DisplayMemberPath="TytulDisplay" SelectedValuePath="SpotkaniID"/>
                                <Button Content="Powiaz" Grid.Column="1" Padding="10,6" Margin="8,0,0,0"
                                        ToolTip="Powiaz" Click="BtnPowiazSpotkanie_Click"/>
                            </Grid>

                            <TextBlock Text="Powiaz z notatka:" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="CmbNotatka" Grid.Column="0" FontSize="13" Padding="8,6"
                                          DisplayMemberPath="TematDisplay" SelectedValuePath="NotatkaID"/>
                                <Button Content="Powiaz" Grid.Column="1" Padding="10,6" Margin="8,0,0,0"
                                        ToolTip="Powiaz" Click="BtnPowiazNotatke_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Panel prawy - Transkrypcja -->
            <Border Grid.Column="1" Style="{StaticResource CardBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="Transkrypcja" Style="{StaticResource SectionHeader}" Margin="0"/>
                        <TextBlock x:Name="TxtLiczbaZdan" Text="(0 wypowiedzi)" FontSize="13" Foreground="#666"
                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <CheckBox x:Name="ChkPokazNazwySystemowe" Content="Pokaz nazwy z systemu"
                                  Margin="20,0,0,0" VerticalAlignment="Center"
                                  Checked="ChkPokazNazwySystemowe_Changed" Unchecked="ChkPokazNazwySystemowe_Changed"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ListaZdan">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding TloKolor}" CornerRadius="6" Padding="12" Margin="0,0,0,6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" MinWidth="140" Margin="0,0,12,0">
                                                <TextBlock Text="{Binding CzasDisplay}" FontSize="11" Foreground="#888"/>
                                                <TextBlock Text="{Binding MowcaDisplay}" FontWeight="SemiBold"
                                                           Foreground="{Binding MowcaKolor}" FontSize="13"/>
                                                <TextBlock Text="{Binding MowcaSystemowy}" FontSize="11" Foreground="#4CAF50"
                                                           Visibility="{Binding MowcaSystemowyVisibility}"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1" Text="{Binding Tekst}" TextWrapping="Wrap"
                                                       FontSize="13" Foreground="#333"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

        </Grid>

        <!-- Dolny panel z przyciskami -->
        <Border Grid.Row="2" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="BtnUsun" Content="Usun transkrypcje" Style="{StaticResource BtnDanger}"
                            Click="BtnUsun_Click"/>
                </StackPanel>

                <TextBlock x:Name="TxtStatusZapisu" Grid.Column="1" Text="" FontSize="12"
                           Foreground="#666" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="BtnZapiszWszystko" Content="Zapisz wszystko + Sync do Fireflies"
                            Style="{StaticResource BtnSuccess}" Margin="0,0,10,0"
                            Click="BtnZapiszWszystko_Click"/>
                    <Button x:Name="BtnZapiszLokalnie" Content="Zapisz lokalnie"
                            Style="{StaticResource BtnPrimary}" Margin="0,0,10,0"
                            Click="BtnZapiszLokalnie_Click"/>
                    <Button x:Name="BtnAnuluj" Content="Anuluj" Style="{StaticResource BtnSecondary}"
                            Click="BtnAnuluj_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
