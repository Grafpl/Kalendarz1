<Window x:Class="Kalendarz1.Spotkania.Views.TranskrypcjaSzczegolyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SzczegÃ³Å‚y transkrypcji" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NagÅ‚Ã³wek -->
        <Border Grid.Row="0" Background="#1976D2" Padding="25,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="SzczegÃ³Å‚y transkrypcji" FontSize="22" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="TxtFirefliesId" FontSize="12" Foreground="#FFFFFF99" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnOtworzFireflies" Content="ðŸ”— OtwÃ³rz w Fireflies"
                            Padding="15,8" Background="#1565C0" Foreground="White"
                            BorderThickness="0" Margin="0,0,10,0" Click="BtnOtworzFireflies_Click" Cursor="Hand"/>
                    <Button x:Name="BtnOdswiez" Content="ðŸ”„ OdÅ›wieÅ¼ z API"
                            Padding="15,8" Background="#0D47A1" Foreground="White"
                            BorderThickness="0" Click="BtnOdswiez_Click" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ZawartoÅ›Ä‡ -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel lewy - informacje i uczestnicy -->
            <ScrollViewer Grid.Column="0" Margin="0,0,15,0">
                <StackPanel>

                    <!-- Podstawowe informacje -->
                    <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Informacje o spotkaniu" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,15"/>

                            <TextBlock Text="TytuÅ‚:" FontSize="12" Foreground="#666"/>
                            <TextBox x:Name="TxtTytul" FontSize="14" Padding="8" Margin="0,5,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Data:" FontSize="12" Foreground="#666"/>
                                    <TextBlock x:Name="TxtData" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Czas trwania:" FontSize="12" Foreground="#666"/>
                                    <TextBlock x:Name="TxtCzasTrwania" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Organizator:" FontSize="12" Foreground="#666" Margin="0,15,0,0"/>
                            <TextBlock x:Name="TxtOrganizator" FontSize="14" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Uczestnicy i mapowanie na UserID -->
                    <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Uczestnicy spotkania" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBlock Text="Przypisz osoby do UserID z systemu" FontSize="11" Foreground="#888" Margin="0,0,0,15"/>

                            <ItemsControl x:Name="ListaUczestnikow">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F5F5F5" CornerRadius="4" Padding="10" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ‘¤" FontSize="14" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding NazwaWFireflies}" FontWeight="SemiBold" FontSize="13"/>
                                                </StackPanel>

                                                <Grid Grid.Row="1" Margin="0,8,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <ComboBox Grid.Column="0" ItemsSource="{Binding DostepniPracownicy}"
                                                              SelectedValue="{Binding PrzypisanyUserID}"
                                                              DisplayMemberPath="DisplayName" SelectedValuePath="UserID"
                                                              IsEditable="True" FontSize="12"/>
                                                    <Button Grid.Column="1" Content="âœ“" Padding="8,4" Margin="5,0,0,0"
                                                            Background="#4CAF50" Foreground="White" BorderThickness="0"
                                                            Click="BtnZapiszUczestnika_Click" Tag="{Binding}"
                                                            ToolTip="Zapisz przypisanie"/>
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Button x:Name="BtnDodajUczestnika" Content="+ Dodaj uczestnika"
                                    Padding="10,8" Margin="0,10,0,0" HorizontalAlignment="Left"
                                    Background="#E3F2FD" Foreground="#1976D2" BorderThickness="0"
                                    Click="BtnDodajUczestnika_Click" Cursor="Hand"/>
                        </StackPanel>
                    </Border>

                    <!-- PowiÄ…zania -->
                    <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="PowiÄ…zania" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,15"/>

                            <TextBlock Text="PowiÄ…zane spotkanie:" FontSize="12" Foreground="#666"/>
                            <Grid Margin="0,5,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="CmbSpotkanie" Grid.Column="0" FontSize="12"
                                          DisplayMemberPath="TytulDisplay"/>
                                <Button Grid.Column="1" Content="ðŸ”—" Padding="8,4" Margin="5,0,0,0"
                                        Click="BtnPowiazSpotkanie_Click" ToolTip="PowiÄ…Å¼ ze spotkaniem"/>
                            </Grid>

                            <TextBlock Text="PowiÄ…zana notatka:" FontSize="12" Foreground="#666"/>
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="CmbNotatka" Grid.Column="0" FontSize="12"
                                          DisplayMemberPath="TematDisplay"/>
                                <Button Grid.Column="1" Content="ðŸ”—" Padding="8,4" Margin="5,0,0,0"
                                        Click="BtnPowiazNotatke_Click" ToolTip="PowiÄ…Å¼ z notatkÄ…"/>
                            </Grid>

                            <Button x:Name="BtnUtworzNotatke" Content="ðŸ“ UtwÃ³rz nowÄ… notatkÄ™ z transkrypcji"
                                    Padding="10,8" Margin="0,15,0,0" HorizontalAlignment="Stretch"
                                    Background="#4CAF50" Foreground="White" BorderThickness="0"
                                    Click="BtnUtworzNotatke_Click" Cursor="Hand"/>
                        </StackPanel>
                    </Border>

                    <!-- Podsumowanie AI -->
                    <Border Background="White" CornerRadius="8" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Podsumowanie AI" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBox x:Name="TxtPodsumowanie" TextWrapping="Wrap" AcceptsReturn="True"
                                     MinHeight="80" FontSize="12" Padding="8"
                                     Background="#FAFAFA" BorderBrush="#E0E0E0"/>

                            <TextBlock Text="SÅ‚owa kluczowe:" FontSize="12" Foreground="#666" Margin="0,15,0,5"/>
                            <TextBox x:Name="TxtSlowaKluczowe" FontSize="12" Padding="8"
                                     Background="#FAFAFA" BorderBrush="#E0E0E0"
                                     ToolTip="SÅ‚owa kluczowe oddzielone przecinkami"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Panel prawy - transkrypcja -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Transkrypcja" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock x:Name="TxtLiczbaZdan" FontSize="12" Foreground="#888"
                                   VerticalAlignment="Center" Margin="15,0,0,0"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ListaZdan">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10,8" Margin="0,0,0,5" CornerRadius="4"
                                            Background="{Binding TloKolor}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding CzasDisplay}"
                                                       FontSize="11" Foreground="#888" FontFamily="Consolas"/>

                                            <TextBlock Grid.Column="1" Text="{Binding MowcaDisplay}"
                                                       FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{Binding MowcaKolor}"/>

                                            <TextBlock Grid.Column="2" Text="{Binding Tekst}"
                                                       FontSize="13" TextWrapping="Wrap"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Przyciski dolne -->
        <Border Grid.Row="2" Background="White" Padding="20,15" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="BtnUsun" Content="ðŸ—‘ï¸ UsuÅ„ transkrypcjÄ™" Padding="15,10"
                            Background="#F44336" Foreground="White" BorderThickness="0"
                            Click="BtnUsun_Click" Cursor="Hand"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Anuluj" Padding="20,10" Margin="0,0,10,0" Click="BtnAnuluj_Click"/>
                    <Button x:Name="BtnZapisz" Content="ðŸ’¾ Zapisz zmiany" Padding="20,10"
                            Background="#1976D2" Foreground="White" BorderThickness="0"
                            Click="BtnZapisz_Click" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
