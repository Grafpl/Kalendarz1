<Window x:Class="Kalendarz1.Spotkania.Views.PodgladTranskrypcji"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transkrypcja spotkania" Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NagÅ‚Ã³wek -->
        <Border Grid.Row="0" Background="#FF5722" Padding="25,20">
            <StackPanel>
                <TextBlock x:Name="TxtTytul" Text="Transkrypcja spotkania" FontSize="20" FontWeight="Bold" Foreground="White"/>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock x:Name="TxtData" Text="" FontSize="14" Foreground="#FFFFFF99"/>
                    <TextBlock Text=" â€¢ " Foreground="#FFFFFF66"/>
                    <TextBlock x:Name="TxtCzas" Text="" FontSize="14" Foreground="#FFFFFF99"/>
                    <TextBlock Text=" â€¢ " Foreground="#FFFFFF66"/>
                    <TextBlock x:Name="TxtUczestnicy" Text="" FontSize="14" Foreground="#FFFFFF99"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- ZawartoÅ›Ä‡ -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Lewa kolumna - transkrypcja -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="ðŸ“ Transkrypcja" FontSize="16" FontWeight="SemiBold"
                               Foreground="#FF5722" Margin="0,0,0,15"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <TextBox x:Name="TxtTranskrypcja" IsReadOnly="True" TextWrapping="Wrap"
                                 BorderThickness="0" FontSize="13" FontFamily="Segoe UI"
                                 Background="Transparent"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Prawa kolumna - analiza -->
            <ScrollViewer Grid.Column="1">
                <StackPanel>

                    <!-- Podsumowanie -->
                    <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="ðŸ“‹ Podsumowanie" FontSize="14" FontWeight="SemiBold"
                                       Foreground="#FF5722" Margin="0,0,0,10"/>
                            <TextBlock x:Name="TxtPodsumowanie" Text="Brak podsumowania" FontSize="13"
                                       TextWrapping="Wrap" Foreground="#333"/>
                        </StackPanel>
                    </Border>

                    <!-- Akcje do wykonania -->
                    <Border x:Name="PanelAkcje" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="âœ… Akcje do wykonania" FontSize="14" FontWeight="SemiBold"
                                       Foreground="#4CAF50" Margin="0,0,0,10"/>
                            <ItemsControl x:Name="ListaAkcji">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#E8F5E9" CornerRadius="4" Padding="10" Margin="0,0,0,5">
                                            <TextBlock Text="{Binding}" FontSize="12" TextWrapping="Wrap"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- SÅ‚owa kluczowe -->
                    <Border x:Name="PanelSlowa" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="ðŸ·ï¸ SÅ‚owa kluczowe" FontSize="14" FontWeight="SemiBold"
                                       Foreground="#2196F3" Margin="0,0,0,10"/>
                            <ItemsControl x:Name="ListaSlowKluczowych">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#E3F2FD" CornerRadius="12" Padding="10,5" Margin="0,0,5,5">
                                            <TextBlock Text="{Binding}" FontSize="11"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- NastÄ™pne kroki -->
                    <Border x:Name="PanelKroki" Background="White" CornerRadius="8" Padding="15">
                        <StackPanel>
                            <TextBlock Text="âž¡ï¸ NastÄ™pne kroki" FontSize="14" FontWeight="SemiBold"
                                       Foreground="#FF9800" Margin="0,0,0,10"/>
                            <ItemsControl x:Name="ListaKrokow">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FFF3E0" CornerRadius="4" Padding="10" Margin="0,0,0,5">
                                            <TextBlock Text="{Binding}" FontSize="12" TextWrapping="Wrap"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Przyciski -->
        <Border Grid.Row="2" Background="White" Padding="20,15" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="BtnOtworzFireflies" Content="ðŸ”— OtwÃ³rz w Fireflies.ai"
                            Padding="15,10" Click="BtnOtworzFireflies_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ“‹ UtwÃ³rz notatkÄ™" Padding="15,10" Margin="0,0,10,0"
                            Background="#4CAF50" Foreground="White" BorderThickness="0"
                            Click="BtnUtworzNotatke_Click"/>
                    <Button Content="Zamknij" Padding="15,10" Click="BtnZamknij_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
