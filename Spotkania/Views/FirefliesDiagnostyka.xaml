<Window x:Class="Kalendarz1.Spotkania.Views.FirefliesDiagnostyka"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fireflies API - Diagnostyka" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen" Background="#1E1E1E">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="üîç Diagnostyka API Fireflies" FontSize="20" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Testuj zapytania GraphQL i zobacz surowƒÖ odpowied≈∫ API" Foreground="#888" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Query Selection -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="Zapytanie:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="cmbQuery" Width="300" SelectedIndex="0">
                    <ComboBoxItem Content="user - Informacje o koncie"/>
                    <ComboBoxItem Content="transcripts - Lista transkrypcji (podstawowe pola)"/>
                    <ComboBoxItem Content="transcripts - Lista transkrypcji (wszystkie pola)"/>
                    <ComboBoxItem Content="transcript - Szczeg√≥≈Çy transkrypcji (podaj ID)"/>
                    <ComboBoxItem Content="W≈Çasne zapytanie GraphQL"/>
                </ComboBox>
                <TextBox x:Name="txtTranscriptId" Width="200" Margin="10,0,0,0"
                         Text="Podaj ID transkrypcji..." Foreground="#888"
                         GotFocus="TxtTranscriptId_GotFocus" Visibility="Collapsed"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="btnExecute" Content="‚ñ∂ Wykonaj zapytanie" Padding="15,8"
                        Background="#0078D4" Foreground="White" BorderThickness="0"
                        Click="BtnExecute_Click" Cursor="Hand"/>
                <Button x:Name="btnCopyResponse" Content="üìã Kopiuj" Padding="10,8" Margin="10,0,0,0"
                        Background="#444" Foreground="White" BorderThickness="0"
                        Click="BtnCopyResponse_Click" Cursor="Hand"/>
            </StackPanel>
        </Grid>

        <!-- Custom Query Input (shown when "W≈Çasne zapytanie" selected) -->
        <TextBox x:Name="txtCustomQuery" Grid.Row="1" Margin="0,50,0,0" Height="100"
                 Background="#2D2D2D" Foreground="#D4D4D4" BorderThickness="1" BorderBrush="#444"
                 FontFamily="Consolas" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                 Visibility="Collapsed"
                 Text="query { user { email name } }"/>

        <!-- Response Area -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Status Bar -->
            <Border Grid.Row="0" Background="#2D2D2D" Padding="10,8" Margin="0,0,0,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="txtStatus" Grid.Column="0" Foreground="#888" Text="Gotowy do testowania"/>
                    <TextBlock x:Name="txtResponseTime" Grid.Column="1" Foreground="#888" Margin="20,0"/>
                    <TextBlock x:Name="txtResponseSize" Grid.Column="2" Foreground="#888"/>
                </Grid>
            </Border>

            <!-- JSON Response -->
            <Border Grid.Row="1" Background="#1E1E1E" BorderThickness="1" BorderBrush="#444">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="txtResponse" Background="Transparent" Foreground="#D4D4D4"
                             FontFamily="Consolas" FontSize="12" IsReadOnly="True"
                             BorderThickness="0" TextWrapping="Wrap" AcceptsReturn="True"
                             Text="Kliknij 'Wykonaj zapytanie' aby zobaczyƒá odpowied≈∫ API..."/>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Footer with info -->
        <Border Grid.Row="3" Background="#2D2D2D" Padding="10" Margin="0,10,0,0">
            <StackPanel>
                <TextBlock Foreground="#888" TextWrapping="Wrap">
                    <Run FontWeight="Bold" Foreground="#FFA500">Wskaz√≥wka:</Run>
                    <Run> Surowy JSON pokazuje dok≈ÇadnƒÖ strukturƒô danych z API. Por√≥wnaj typy p√≥l z modelami C# w FirefliesModels.cs</Run>
                </TextBlock>
                <TextBlock x:Name="txtApiEndpoint" Foreground="#666" Margin="0,5,0,0" FontSize="11"
                           Text="Endpoint: https://api.fireflies.ai/graphql"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
