<Window x:Class="Kalendarz1.Spotkania.Views.GlobalneSzukanieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szukaj w transkrypcjach" Height="700" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnPrimary" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnSecondary" TargetType="Button" BasedOn="{StaticResource BtnPrimary}">
            <Setter Property="Background" Value="#607D8B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#546E7A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naglowek -->
        <Border Grid.Row="0" Background="#1976D2" Padding="20,16">
            <StackPanel>
                <TextBlock Text="Szukaj we wszystkich transkrypcjach" FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="TxtStatystyki" Text="Przeszukuje wszystkie zapisane transkrypcje z Fireflies"
                           FontSize="12" Foreground="#B3E5FC" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Pole wyszukiwania -->
        <Border Grid.Row="1" Style="{StaticResource CardBorder}" Margin="20,15,20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="TxtSzukaj" Grid.Column="0" FontSize="16" Padding="12,10"
                         VerticalContentAlignment="Center"
                         KeyDown="TxtSzukaj_KeyDown">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#2196F3"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <Button x:Name="BtnSzukaj" Grid.Column="1" Content="Szukaj"
                        Style="{StaticResource BtnPrimary}" Margin="10,0,0,0"
                        Click="BtnSzukaj_Click"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="15,0,0,0" VerticalAlignment="Center">
                    <CheckBox x:Name="ChkCaseSensitive" Content="Rozrozniaj wielkosc liter"
                              VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <CheckBox x:Name="ChkTylkoMowca" Content="Tylko mowca"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Wyniki -->
        <Border Grid.Row="2" Style="{StaticResource CardBorder}" Margin="20,15,20,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Naglowek wynikow -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock x:Name="TxtWynikiNaglowek" Text="Wyniki wyszukiwania"
                               FontSize="15" FontWeight="SemiBold" Foreground="#1976D2"/>
                    <TextBlock x:Name="TxtLiczbaWynikow" Text="" FontSize="13" Foreground="#666"
                               VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Lista wynikow -->
                <ListBox x:Name="ListaWynikow" Grid.Row="1" BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         MouseDoubleClick="ListaWynikow_DoubleClick">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{Binding TloKolor}" CornerRadius="6" Padding="12" Margin="0,0,0,8"
                                    BorderBrush="#E0E0E0" BorderThickness="1" Cursor="Hand">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Naglowek: Tytul spotkania i data -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                                        <TextBlock Text="{Binding TytulSpotkania}" FontWeight="Bold" FontSize="14"
                                                   Foreground="#1976D2"/>
                                        <TextBlock Text=" â€¢ " Foreground="#999"/>
                                        <TextBlock Text="{Binding DataSpotkania}" FontSize="12" Foreground="#666"/>
                                    </StackPanel>

                                    <!-- Mowca i czas -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6,0,0">
                                        <Border Background="{Binding MowcaKolor}" CornerRadius="4" Padding="8,3">
                                            <TextBlock Text="{Binding NazwaMowcy}" FontSize="11" Foreground="White" FontWeight="SemiBold"/>
                                        </Border>
                                        <TextBlock Text="{Binding CzasDisplay}" FontSize="11" Foreground="#888"
                                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <!-- Tekst z podswietleniem -->
                                    <TextBlock Grid.Row="2" Margin="0,8,0,0" TextWrapping="Wrap" FontSize="13">
                                        <TextBlock.Inlines>
                                            <Run Text="{Binding TekstPrzed}" Foreground="#333"/>
                                            <Run Text="{Binding TekstZnaleziony}" Background="#FFEB3B" FontWeight="Bold"/>
                                            <Run Text="{Binding TekstPo}" Foreground="#333"/>
                                        </TextBlock.Inlines>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Komunikat o braku wynikow -->
                <StackPanel x:Name="PanelBrakWynikow" Grid.Row="1" VerticalAlignment="Center"
                            HorizontalAlignment="Center" Visibility="Collapsed">
                    <TextBlock Text="Nie znaleziono wynikow" FontSize="18" Foreground="#999"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Sprobuj innych slow kluczowych" FontSize="13" Foreground="#BBB"
                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Loading -->
                <StackPanel x:Name="PanelLadowanie" Grid.Row="1" VerticalAlignment="Center"
                            HorizontalAlignment="Center" Visibility="Collapsed">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="6"/>
                    <TextBlock Text="Przeszukiwanie transkrypcji..." FontSize="13" Foreground="#666"
                               HorizontalAlignment="Center" Margin="0,12,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Stopka -->
        <Border Grid.Row="3" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="TxtPodpowiedz" Grid.Column="0"
                           Text="Wpisz fraze i nacisnij Enter lub kliknij Szukaj. Dwuklik otwiera transkrypcje."
                           FontSize="11" Foreground="#888" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="BtnOtworzWybrana" Content="Otworz wybrana transkrypcje"
                            Style="{StaticResource BtnPrimary}" Margin="0,0,10,0"
                            Click="BtnOtworzWybrana_Click" IsEnabled="False"/>
                    <Button Content="Zamknij" Style="{StaticResource BtnSecondary}" Click="BtnZamknij_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
