<Window x:Class="Kalendarz1.Avilog.Views.RozliczeniaAvilogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Rozliczenia Avilog - Dzienne zestawienie uboju"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#FFFFFF">

    <Window.Resources>
        <!-- === PROSTA PALETA - CZARNO-BIAŁA === -->
        <SolidColorBrush x:Key="TextBlackBrush" Color="#000000"/>
        <SolidColorBrush x:Key="TextGrayBrush" Color="#666666"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="LightGrayBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="HeaderBrush" Color="#E0E0E0"/>

        <!-- === STYLE PRZYCISKÓW === -->
        <Style x:Key="SimpleButton" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C0C0C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                                <Setter Property="Foreground" Value="#999999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- === STYLE TEXTBOX === -->
        <Style x:Key="SimpleTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- === STYLE DATAGRID === -->
        <Style x:Key="SimpleDataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SimpleDataGridRow" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E8E8E8"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
                <DataTrigger Binding="{Binding JestSuma}" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SimpleDataGridCell" TargetType="DataGridCell">
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- === STYL TABITEM === -->
        <Style x:Key="SimpleTabItem" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="#CCCCCC" BorderThickness="1,1,1,0"
                                Padding="{TemplateBinding Padding}" Margin="0,0,2,0">
                            <ContentPresenter x:Name="contentPresenter" ContentSource="Header"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="White"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1,1,1,0"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E8E8E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ═══════════════════════════════════════════════════════════════════ -->
        <!-- NAGŁÓWEK - PROSTY -->
        <!-- ═══════════════════════════════════════════════════════════════════ -->
        <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Tytuł -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="DZIENNE ZESTAWIENIE UBOJU - AVILOG"
                               FontSize="16" FontWeight="Bold" Foreground="Black"/>
                    <TextBlock x:Name="txtOkres" Text="Okres: --"
                               FontSize="11" Foreground="#666666" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Status -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="txtStatus" Text="" Foreground="#666666" FontSize="11"
                               VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <ProgressBar x:Name="progressBar" Width="100" Height="3" IsIndeterminate="True"
                                 Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════════ -->
        <!-- TOOLBAR / FILTRY -->
        <!-- ═══════════════════════════════════════════════════════════════════ -->
        <Border Grid.Row="1" Background="White" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Wybór okresu -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,12,0">
                    <TextBlock Text="OD:" VerticalAlignment="Center" FontWeight="Normal"
                               Foreground="Black" FontSize="11" Margin="0,0,6,0"/>
                    <DatePicker x:Name="datePickerOd" Width="110" FontSize="11"/>
                    <TextBlock Text="DO:" VerticalAlignment="Center" Margin="12,0,6,0"
                               Foreground="Black" FontSize="11" FontWeight="Normal"/>
                    <DatePicker x:Name="datePickerDo" Width="110" FontSize="11"/>
                </StackPanel>

                <!-- Przyciski -->
                <Button Grid.Column="1" Content="Załaduj" Style="{StaticResource SimpleButton}"
                        Click="BtnLoad_Click" Margin="0,0,6,0" ToolTip="Załaduj dane (F5)"/>
                <Button Grid.Column="2" Content="Ten tydzień" Style="{StaticResource SimpleButton}"
                        Click="BtnThisWeek_Click" Margin="0,0,6,0"/>
                <Button Grid.Column="3" Content="◀" Style="{StaticResource SimpleButton}"
                        Click="BtnPrevWeek_Click" Margin="0,0,6,0" Width="32" ToolTip="Poprzedni tydzień"/>
                <Button Grid.Column="4" Content="▶" Style="{StaticResource SimpleButton}"
                        Click="BtnNextWeek_Click" Width="32" ToolTip="Następny tydzień"/>

                <!-- Panel stawki -->
                <Border Grid.Column="6" Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="3" Padding="8,4">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="STAWKA:" VerticalAlignment="Center" FontWeight="SemiBold"
                                   Foreground="Black" FontSize="10" Margin="0,0,8,0"/>
                        <TextBox x:Name="txtStawka" Width="60" Style="{StaticResource SimpleTextBox}"
                                 TextAlignment="Right" FontWeight="Bold" FontSize="12" Text="0.119"/>
                        <TextBlock Text="zł/kg" VerticalAlignment="Center" Foreground="#666666"
                                   Margin="4,0,12,0" FontSize="11"/>
                        <Button Content="Zapisz" Style="{StaticResource SimpleButton}"
                                Click="BtnSaveStawka_Click" Padding="10,4" FontSize="11"/>
                        <Button Content="..." Style="{StaticResource SimpleButton}"
                                Click="BtnZarzadzajStawkami_Click" ToolTip="Zarządzaj stawkami" Margin="6,0,0,0"
                                FontWeight="Bold" FontSize="12" Padding="6,4"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════════ -->
        <!-- GŁÓWNA ZAWARTOŚĆ - TABCONTROL Z DNIAMI -->
        <!-- ═══════════════════════════════════════════════════════════════════ -->
        <Border Grid.Row="2" Background="White" Margin="12" BorderBrush="#CCCCCC" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Zakładki z dniami + Podsumowanie -->
                <Grid Grid.Row="0" Background="#F5F5F5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TabControl x:Name="tabControlDni" Grid.Column="0" Background="Transparent"
                                BorderThickness="0" Padding="0" Margin="4,4,4,0"
                                SelectionChanged="TabControlDni_SelectionChanged">
                        <!-- Zakładki będą generowane dynamicznie -->
                    </TabControl>

                    <!-- Przyciski akcji -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,4,8,4" VerticalAlignment="Center">
                        <Button Content="Excel" Style="{StaticResource SimpleButton}"
                                Click="BtnExportExcel_Click" Margin="0,0,4,0" Padding="10,4" FontSize="11"/>
                        <Button Content="Drukuj" Style="{StaticResource SimpleButton}"
                                Click="BtnPrint_Click" Margin="0,0,4,0" Padding="10,4" FontSize="11"/>
                        <Button Content="Kopiuj" Style="{StaticResource SimpleButton}"
                                Click="BtnCopy_Click" Padding="10,4" FontSize="11"/>
                    </StackPanel>
                </Grid>

                <!-- Zawartość zakładek -->
                <Grid Grid.Row="1" Background="White">
                    <!-- Panel dla kursów dnia (widoczny gdy wybrana zakładka dnia) -->
                    <Grid x:Name="gridKursyDnia" Visibility="Visible">
                        <DataGrid x:Name="dataGridKursy"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  GridLinesVisibility="All"
                                  HorizontalGridLinesBrush="#E0E0E0"
                                  VerticalGridLinesBrush="#E0E0E0"
                                  ColumnHeaderStyle="{StaticResource SimpleDataGridColumnHeader}"
                                  RowStyle="{StaticResource SimpleDataGridRow}"
                                  CellStyle="{StaticResource SimpleDataGridCell}"
                                  BorderThickness="0"
                                  CanUserSortColumns="True"
                                  EnableRowVirtualization="True"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                  MouseDoubleClick="DataGridKursy_MouseDoubleClick">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="LP" Binding="{Binding LP}" Width="40">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Hodowca" Binding="{Binding HodowcaNazwa}" Width="150">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Sztuki" Binding="{Binding SztukiRazem, StringFormat=N0}" Width="70">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="BRUTTO" Binding="{Binding BruttoUbojni, StringFormat=N0}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="TARA" Binding="{Binding TaraUbojni, StringFormat=N0}" Width="70">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="NETTO" Binding="{Binding NettoUbojni, StringFormat=N0}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Upadki szt" Binding="{Binding SztukiPadle}" Width="70">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Upadki kg" Binding="{Binding UpadkiKg, StringFormat=N0}" Width="75">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Różnica kg" Binding="{Binding RoznicaKg, StringFormat=N0}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="KM" Binding="{Binding DystansKM, StringFormat=N0}" Width="55">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Czas" Binding="{Binding CzasUslugiFormatowany}" Width="90">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Kierowca" Binding="{Binding KierowcaNazwa}" Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Auto" Binding="{Binding CarID}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <!-- Panel Podsumowania (widoczny gdy wybrana zakładka Podsumowanie) -->
                    <ScrollViewer x:Name="scrollPodsumowanie" Visibility="Collapsed"
                                  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Tytuł -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,16">
                                <TextBlock Text="PODSUMOWANIE TYGODNIA" FontSize="16" FontWeight="Bold" Foreground="Black"/>
                                <TextBlock x:Name="txtPodsumowanieOkres" Text="Okres: --" FontSize="11"
                                           Foreground="#666666" Margin="0,4,0,0"/>
                            </StackPanel>

                            <!-- Tabela podsumowań dziennych -->
                            <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1">
                                <DataGrid x:Name="dataGridPodsumowanie"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          HeadersVisibility="Column"
                                          GridLinesVisibility="All"
                                          HorizontalGridLinesBrush="#E0E0E0"
                                          VerticalGridLinesBrush="#E0E0E0"
                                          BorderThickness="0"
                                          CanUserSortColumns="False"
                                          RowStyle="{StaticResource SimpleDataGridRow}"
                                          CellStyle="{StaticResource SimpleDataGridCell}">
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#E0E0E0"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontSize" Value="11"/>
                                            <Setter Property="Padding" Value="8,6"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                            <Setter Property="BorderBrush" Value="#CCCCCC"/>
                                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="LP" Binding="{Binding LP}" Width="40">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="DATA" Binding="{Binding DataFormatowana}" Width="85">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="DZIEŃ" Binding="{Binding DzienTygodniaSkrocony}" Width="50">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="KURSY" Binding="{Binding LiczbaKursow}" Width="55">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="SZTUKI" Binding="{Binding SumaSztuk, StringFormat=N0}" Width="75">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="BRUTTO" Binding="{Binding SumaBrutto, StringFormat=N0}" Width="80">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="TARA" Binding="{Binding SumaTara, StringFormat=N0}" Width="70">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="NETTO" Binding="{Binding SumaNetto, StringFormat=N0}" Width="80">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="UPADKI SZT" Binding="{Binding SumaUpadkowSzt}" Width="85">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="UPADKI KG" Binding="{Binding SumaUpadkowKg, StringFormat=N0}" Width="85">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="RÓŻNICA KG" Binding="{Binding SumaRoznicaKg, StringFormat=N0}" Width="90">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="KM" Binding="{Binding SumaKM, StringFormat=N0}" Width="60">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="KOSZT DNIA" Binding="{Binding KosztDnia, StringFormat=N2}" Width="90">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
