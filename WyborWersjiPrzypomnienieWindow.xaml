<Window x:Class="Kalendarz1.WyborWersjiPrzypomnienieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wybierz wersję przypomnienia" 
        Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F9FAFB"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#4B833C"/>
                    <Setter Property="Background" Value="#F0F9FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Background="White" Padding="20" BorderBrush="#4B833C" BorderThickness="0,0,0,2">
            <StackPanel>
                <TextBlock Text="📋 Wybierz ton przypomnienia" FontSize="20" FontWeight="Bold" Foreground="#4B833C"/>
                <TextBlock Text="Wybierz odpowiedni styl dla dokumentu i emaila" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Opcje -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Wersja łagodna -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" MouseLeftButtonDown="BtnLagodna_Click">
                <StackPanel>
                    <TextBlock Text="😊 Wersja Łagodna" FontSize="18" FontWeight="Bold" Foreground="#2563EB" HorizontalAlignment="Center"/>
                    <TextBlock Text="________________________" FontSize="10" Foreground="#E5E7EB" HorizontalAlignment="Center" Margin="0,5"/>

                    <StackPanel Margin="0,15,0,0">
                        <TextBlock Text="✓ Uprzejmy ton" FontSize="11" Margin="0,3"/>
                        <TextBlock Text="✓ Spokojne kolory" FontSize="11" Margin="0,3"/>
                        <TextBlock Text="✓ Przyjazne sformułowania" FontSize="11" Margin="0,3"/>
                        <TextBlock Text="✓ Delikatne informacje" FontSize="11" Margin="0,3"/>
                        <TextBlock Text="✓ Zielono-niebieska kolorystyka" FontSize="11" Margin="0,3"/>
                    </StackPanel>

                    <Border Background="#EFF6FF" Padding="10" CornerRadius="4" Margin="0,15,0,0">
                        <TextBlock Text="💡 Polecana dla stałych, dobrych klientów" 
                                   FontSize="9" 
                                   TextWrapping="Wrap" 
                                   Foreground="#1E40AF"
                                   FontStyle="Italic"/>
                    </Border>

                    <Button Content="Wybierz łagodną" 
                            Background="#2563EB" 
                            Foreground="White" 
                            Padding="12,8" 
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="0,15,0,0"
                            Cursor="Hand"
                            Click="BtnLagodna_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="4" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Wersja mocna -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}" MouseLeftButtonDown="BtnMocna_Click">
                <StackPanel>
                    <TextBlock Text="⚠️ Wersja Stanowcza" FontSize="18" FontWeight="Bold" Foreground="#DC2626" HorizontalAlignment="Center"/>
                    <TextBlock Text="________________________" FontSize="10" Foreground="#E5E7EB" HorizontalAlignment="Center" Margin="0,5"/>

                    <StackPanel Margin="0,15,0,0">
                        <TextBlock Text="✓ Zdecydowany ton" FontSize="11" Margin="0,3"/>
                        <TextBlock Text="✓ Wyraziste akcenty" FontSize="11" Margin="0,3"/>
                        <TextBlock Text="✓ Pilne informacje" FontSize="11" Margin="0,3"/>
                        <TextBlock Text="✓ Wyraźne ostrzeżenia" FontSize="11" Margin="0,3"/>
                        <TextBlock Text="✓ Czerwone akcenty" FontSize="11" Margin="0,3"/>
                    </StackPanel>

                    <Border Background="#FEE2E2" Padding="10" CornerRadius="4" Margin="0,15,0,0">
                        <TextBlock Text="💡 Polecana dla zaległych płatności i problemowych kontrahentów" 
                                   FontSize="9" 
                                   TextWrapping="Wrap" 
                                   Foreground="#991B1B"
                                   FontStyle="Italic"/>
                    </Border>

                    <Button Content="Wybierz stanowczą" 
                            Background="#DC2626" 
                            Foreground="White" 
                            Padding="12,8" 
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="0,15,0,0"
                            Cursor="Hand"
                            Click="BtnMocna_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="4" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Anuluj -->
        <Border Grid.Row="2" Background="White" Padding="15" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
            <Button Content="✗ Anuluj" 
                    Background="#95A5A6" 
                    Foreground="White" 
                    Width="110" 
                    Padding="12,8" 
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    Click="BtnAnuluj_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Border>
    </Grid>
</Window>