<Window x:Class="Kalendarz1.AddQuoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj nowy cytat" Height="300" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="SingleBorderWindow"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Dodaj nowy cytat motywacyjny" FontSize="18" FontWeight="SemiBold"
                   Foreground="#2C3E50" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Treść cytatu:" FontSize="13" Foreground="#7F8C8D" Margin="0,0,0,5"/>
            <TextBox x:Name="QuoteTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                     FontSize="14" Padding="10" VerticalScrollBarVisibility="Auto"
                     BorderBrush="#BDC3C7" BorderThickness="1"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,15,0,0">
            <TextBlock Text="Autor:" FontSize="13" Foreground="#7F8C8D" Margin="0,0,0,5"/>
            <TextBox x:Name="AuthorTextBox" Height="35" FontSize="14" Padding="10,5"
                     BorderBrush="#BDC3C7" BorderThickness="1"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Anuluj" Width="100" Height="35" Margin="0,0,10,0"
                    Click="CancelButton_Click" Background="#E0E0E0" Foreground="#2C3E50"
                    BorderThickness="0" FontSize="13" Cursor="Hand"/>
            <Button Content="Dodaj cytat" Width="120" Height="35"
                    Click="AddButton_Click" Background="#5C8A3A" Foreground="White"
                    BorderThickness="0" FontSize="13" FontWeight="SemiBold" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
