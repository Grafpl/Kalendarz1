<Window x:Class="Kalendarz1.NotatkiZeSpotkan.NotatkirGlownyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notatki ze Spotkań"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.2" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4B732F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A5C24"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#7F8C8D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6C7A7B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="0" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" Background="#5C8A3A" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                        <TextBlock Text="📝" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="Notatki ze Spotkań" FontSize="20" FontWeight="Bold" 
                                   Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                        <Button Content="−" Width="35" Height="35" FontSize="18" Click="MinimizeButton_Click"
                                Background="Transparent" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                        <Button Content="✕" Width="35" Height="35" FontSize="14" Click="CloseButton_Click"
                                Background="Transparent" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- FILTRY - KOMPAKTOWE -->
            <Border Grid.Row="1" Background="#ECF0F1" Padding="15,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Typ:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold" FontSize="12"/>
                    <ComboBox x:Name="cmbFiltrTyp" Grid.Column="1" Height="32" VerticalContentAlignment="Center" FontSize="12"
                              SelectionChanged="Filtr_Changed">
                        <ComboBoxItem Content="Wszystkie" IsSelected="True"/>
                        <ComboBoxItem Content="Zespół"/>
                        <ComboBoxItem Content="Odbiorca"/>
                        <ComboBoxItem Content="Hodowca"/>
                    </ComboBox>

                    <TextBlock Grid.Column="2" Text="Od:" VerticalAlignment="Center" Margin="12,0,8,0" FontWeight="SemiBold" FontSize="12"/>
                    <DatePicker x:Name="dpFiltrOd" Grid.Column="3" Height="32" SelectedDateChanged="Filtr_Changed" FontSize="12"/>

                    <TextBlock Grid.Column="4" Text="Do:" VerticalAlignment="Center" Margin="12,0,8,0" FontWeight="SemiBold" FontSize="12"/>
                    <DatePicker x:Name="dpFiltrDo" Grid.Column="5" Height="32" SelectedDateChanged="Filtr_Changed" FontSize="12"/>

                    <Button Grid.Column="7" Content="➕ Nowa notatka" Style="{StaticResource ModernButton}"
                            Click="BtnNowa_Click" Margin="10,0,0,0" Padding="15,8"/>
                </Grid>
            </Border>

            <!-- LISTA NOTATEK -->
            <DataGrid x:Name="dgNotatki" Grid.Row="2" Margin="15"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      RowHeight="35"
                      FontSize="12"
                      MouseDoubleClick="DgNotatki_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Typ" Binding="{Binding TypSpotkania}" Width="90"/>
                    <DataGridTextColumn Header="Data" Binding="{Binding DataSpotkania, StringFormat=dd.MM.yyyy}" Width="100"/>
                    <DataGridTextColumn Header="Temat" Binding="{Binding Temat}" Width="*" MinWidth="250"/>
                    <DataGridTextColumn Header="Kontrahent" Binding="{Binding KontrahentNazwa}" Width="180"/>
                    <DataGridTextColumn Header="Twórca" Binding="{Binding TworcaNazwa}" Width="140"/>
                    <DataGridTextColumn Header="Utworzono" Binding="{Binding DataUtworzenia, StringFormat=dd.MM.yyyy HH:mm}" Width="130"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- FOOTER - KOMPAKTOWY -->
            <Border Grid.Row="3" Background="#ECF0F1" Padding="15,10" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0">
                <Grid>
                    <TextBlock x:Name="txtStatus" Text="Gotowe" VerticalAlignment="Center" Foreground="#7F8C8D" FontSize="12"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="👁️ Podgląd" Style="{StaticResource ModernButton}" Margin="0,0,8,0"
                                Click="BtnPodglad_Click" Padding="12,8"/>
                        <Button Content="✏️ Edytuj" Style="{StaticResource ModernButton}" Margin="0,0,8,0"
                                Click="BtnEdytuj_Click" Padding="12,8"/>
                        <Button Content="🗑️ Usuń" Style="{StaticResource DangerButton}"
                                Click="BtnUsun_Click" Padding="12,8"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>