<Window x:Class="Kalendarz1.NotatkiZeSpotkan.PodgladNotatki"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Podgląd notatki"
        Height="700" Width="1000"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="Segoe UI">

    <Border CornerRadius="12" Background="White">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.3" BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" Background="#5C8A3A" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0">
                        <TextBlock x:Name="txtIcon" Text="📝" FontSize="28" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <StackPanel>
                            <TextBlock x:Name="txtTemat" Text="Temat spotkania" FontSize="20" FontWeight="Bold" 
                                       Foreground="White" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" MaxWidth="700"/>
                            <TextBlock x:Name="txtPodtytul" Text="Szczegóły" FontSize="12" Foreground="#E0F0D6" Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Content="✕" Width="40" Height="40" FontSize="16" Click="CloseButton_Click"
                            HorizontalAlignment="Right" Margin="0,0,15,0"
                            Background="Transparent" Foreground="White" BorderThickness="0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#4B732F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- ZAWARTOŚĆ -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,25">
                <StackPanel>
                    <!-- KARTA INFORMACYJNA -->
                    <Border Background="#ECF0F1" CornerRadius="8" Padding="25,20" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Wiersz 1 -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                                <TextBlock Text="📅 Data spotkania" FontSize="11" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtDataSpotkania" Text="-" FontSize="16" FontWeight="Bold" 
                                           Foreground="#2C3E50" Margin="0,6,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,0,0,15">
                                <TextBlock Text="🏷️ Typ spotkania" FontSize="11" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtTypSpotkania" Text="-" FontSize="16" FontWeight="Bold" 
                                           Foreground="#5C8A3A" Margin="0,6,0,0"/>
                            </StackPanel>

                            <!-- Wiersz 2 -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,15">
                                <TextBlock Text="👤 Twórca notatki" FontSize="11" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtTworca" Text="-" FontSize="14" Margin="0,6,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,0,15">
                                <TextBlock Text="🕐 Data utworzenia" FontSize="11" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtDataUtworzenia" Text="-" FontSize="14" Margin="0,6,0,0"/>
                            </StackPanel>

                            <!-- Wiersz 3 - Kontrahent (pełna szerokość) -->
                            <StackPanel x:Name="panelKontrahent" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,0" Visibility="Collapsed">
                                <TextBlock x:Name="lblKontrahent" Text="🏢 Kontrahent" FontSize="11" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtKontrahent" Text="-" FontSize="15" FontWeight="Bold" 
                                           Foreground="#2C3E50" Margin="0,6,0,15" TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- Wiersz 4 - Osoba kontaktowa -->
                            <StackPanel x:Name="panelOsobaKontaktowa" Grid.Row="3" Grid.ColumnSpan="2" Margin="0,0,0,0" Visibility="Collapsed">
                                <TextBlock Text="📞 Osoba kontaktowa" FontSize="11" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtOsobaKontaktowa" Text="-" FontSize="14" Margin="0,6,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- UCZESTNICY (dla spotkań zespołowych) -->
                    <Border x:Name="panelUczestnicy" Background="#E8F5E9" CornerRadius="8" Padding="20,16" Margin="0,0,0,20" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="👥 Uczestnicy spotkania" FontSize="15" FontWeight="Bold" 
                                       Foreground="#27AE60" Margin="0,0,0,12"/>
                            <TextBlock x:Name="txtUczestnicy" Text="-" FontSize="13" TextWrapping="Wrap" 
                                       LineHeight="24" Foreground="#2C3E50"/>
                        </StackPanel>
                    </Border>

                    <!-- TREŚĆ NOTATKI -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="💬 Treść notatki" FontSize="16" FontWeight="Bold" 
                                   Foreground="#2C3E50" Margin="0,0,0,12"/>
                        <Border Background="White" BorderBrush="#BDC3C7" BorderThickness="1" 
                                CornerRadius="8" Padding="20,16">
                            <TextBlock x:Name="txtTresc" Text="-" FontSize="13" TextWrapping="Wrap" 
                                       LineHeight="24" Foreground="#34495E"/>
                        </Border>
                    </StackPanel>

                    <!-- DODATKOWE INFORMACJE -->
                    <Border x:Name="panelDodatkoweInfo" Background="#FFF3E0" CornerRadius="8" 
                            Padding="20,16" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="📎 Dodatkowe informacje" FontSize="14" FontWeight="Bold" 
                                       Foreground="#E67E22" Margin="0,0,0,10"/>
                            <TextBlock x:Name="txtDodatkoweInfo" Text="-" FontSize="12" TextWrapping="Wrap" 
                                       LineHeight="22" Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- FOOTER -->
            <Border Grid.Row="2" Background="#ECF0F1" Padding="25,15" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0">
                <Grid>
                    <TextBlock x:Name="txtInfoEdycja" FontSize="12" Foreground="#27AE60" 
                               FontWeight="SemiBold" Visibility="Collapsed" VerticalAlignment="Center">
                        <Run Text="✓"/>
                        <Run Text=" Możesz edytować tę notatkę"/>
                    </TextBlock>

                    <Button Content="✖ Zamknij" HorizontalAlignment="Right" Padding="25,12"
                            Background="#7F8C8D" Foreground="White" FontWeight="Bold" FontSize="13"
                            BorderThickness="0" Cursor="Hand" Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                                    CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <Border.Effect>
                                                    <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.2" BlurRadius="8"/>
                                                </Border.Effect>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#6C7A7B"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#5D6A6B"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>