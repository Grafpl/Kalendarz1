<Window x:Class="Kalendarz1.AnkietyHodowcow.HistoriaHodowcyWindowPremium"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="📊 Historia i Analityka Hodowcy - System Zarządzania" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        MinHeight="800" MinWidth="1400">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F2027" Offset="0"/>
            <GradientStop Color="#203A43" Offset="0.5"/>
            <GradientStop Color="#2C5364" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FFFFFF" Offset="0"/>
                        <GradientStop Color="#F8F9FA" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding">
                <Setter.Value>
                    <Thickness>20</Thickness>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.3" BlurRadius="20" ShadowDepth="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Premium Button Style -->
        <Style x:Key="PremiumButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#667EEA" Offset="0"/>
                        <GradientStop Color="#764BA2" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground">
                <Setter.Value>
                    <SolidColorBrush Color="White"/>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding">
                <Setter.Value>
                    <Thickness>25,12,25,12</Thickness>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness">
                <Setter.Value>
                    <Thickness>0</Thickness>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#667EEA" Opacity="0.5" BlurRadius="15" ShadowDepth="5"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#764BA2" Offset="0"/>
                                <GradientStop Color="#667EEA" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#F0F4F8" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding">
                <Setter.Value>
                    <Thickness>18,15,18,15</Thickness>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.15" BlurRadius="12" ShadowDepth="4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding">
                <Setter.Value>
                    <Thickness>10,8,10,8</Thickness>
                </Setter.Value>
            </Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="White"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#CBD5E0"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness">
                <Setter.Value>
                    <Thickness>2</Thickness>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding">
                <Setter.Value>
                    <Thickness>40,12,12,12</Thickness>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness">
                <Setter.Value>
                    <Thickness>2</Thickness>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#667EEA"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="White"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="White"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness">
                <Setter.Value>
                    <Thickness>0</Thickness>
                </Setter.Value>
            </Setter>
            <Setter Property="RowBackground">
                <Setter.Value>
                    <SolidColorBrush Color="White"/>
                </Setter.Value>
            </Setter>
            <Setter Property="AlternatingRowBackground">
                <Setter.Value>
                    <SolidColorBrush Color="#F7FAFC"/>
                </Setter.Value>
            </Setter>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#E2E8F0"/>
                </Setter.Value>
            </Setter>
            <Setter Property="AutoGenerateColumns" Value="True"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="ColumnHeaderHeight" Value="50"/>
            <Setter Property="RowHeight" Value="45"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#667EEA" Offset="0"/>
                        <GradientStop Color="#764BA2" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground">
                <Setter.Value>
                    <SolidColorBrush Color="White"/>
                </Setter.Value>
            </Setter>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding">
                <Setter.Value>
                    <Thickness>15,12,15,12</Thickness>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="#EBF4FF"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#667EEA" Offset="0"/>
                                <GradientStop Color="#764BA2" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground">
                        <Setter.Value>
                            <SolidColorBrush Color="White"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Margin>
            <Thickness>30</Thickness>
        </Grid.Margin>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource ModernCard}">
            <Border.Margin>
                <Thickness>0,0,0,20</Thickness>
            </Border.Margin>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <Border Grid.Column="0" 
                        Width="80" 
                        Height="80" 
                        CornerRadius="40"
                        Background="White"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#667EEA" Opacity="0.4" BlurRadius="15" ShadowDepth="0"/>
                    </Border.Effect>
                    <Image x:Name="LogoImage" 
                           Stretch="Uniform" 
                           Margin="10"/>
                </Border>

                <!-- Title -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="📊 SYSTEM ZARZĄDZANIA HODOWCAMI" 
                               FontSize="28"
                               FontWeight="Bold">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#667EEA" Offset="0"/>
                                <GradientStop Color="#764BA2" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <TextBlock x:Name="DostawcaTextBlock" 
                               FontSize="16"
                               Foreground="#718096"
                               FontWeight="SemiBold"
                               Margin="0,8,0,0"/>
                    <TextBlock x:Name="LastUpdateTextBlock"
                               FontSize="12"
                               Foreground="#A0AEC0"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <Button Content="📊 TOP 20 Raport" 
                            Style="{StaticResource PremiumButton}"
                            Click="GenerateReportButton_Click"
                            Width="180"
                            Margin="0,0,15,0"/>
                    <Button Content="📄 Generuj PDF" 
                            Style="{StaticResource PremiumButton}"
                            Click="GeneratePDFButton_Click"
                            Width="180"
                            Margin="0,0,15,0"/>
                    <Button x:Name="RefreshButton" 
                            Content="🔄" 
                            Style="{StaticResource PremiumButton}"
                            Click="RefreshButton_Click"
                            Width="50"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="1" Style="{StaticResource ModernCard}">
            <Border.Margin>
                <Thickness>0,0,0,20</Thickness>
            </Border.Margin>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="🔍 Filtry Wyszukiwania" 
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#2D3748"
                           Margin="0,0,0,15"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <Grid Grid.Column="0" Margin="0,0,15,0">
                        <Border CornerRadius="8" Background="White">
                            <Border.Effect>
                                <DropShadowEffect Color="#667EEA" Opacity="0.2" BlurRadius="10" ShadowDepth="3"/>
                            </Border.Effect>
                            <Grid>
                                <TextBlock Text="🔍" 
                                           FontSize="20" 
                                           VerticalAlignment="Center" 
                                           Margin="12,0,0,0"
                                           Foreground="#667EEA"
                                           IsHitTestVisible="False"/>
                                <TextBox x:Name="SearchTextBox"
                                         Style="{StaticResource SearchBox}"
                                         TextChanged="SearchTextBox_TextChanged"/>
                                <TextBlock Text="Wyszukaj hodowcę, notatkę..."
                                           FontSize="13"
                                           Foreground="#A0AEC0"
                                           VerticalAlignment="Center"
                                           Margin="40,0,0,0"
                                           IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Status Filter -->
                    <StackPanel Grid.Column="1" Margin="0,0,15,0">
                        <TextBlock Text="Status:" 
                                   FontSize="12" 
                                   Foreground="#4A5568" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="StatusComboBox" 
                                  Style="{StaticResource ModernComboBox}"
                                  SelectionChanged="FilterChanged">
                            <ComboBoxItem Content="Wszystkie statusy" IsSelected="True"/>
                            <ComboBoxItem Content="Ocena ≥ 4.5"/>
                            <ComboBoxItem Content="Ocena 4.0 - 4.5"/>
                            <ComboBoxItem Content="Ocena &lt; 4.0"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Period Filter -->
                    <StackPanel Grid.Column="2" Margin="0,0,15,0">
                        <TextBlock Text="Rodzaj:" 
                                   FontSize="12" 
                                   Foreground="#4A5568" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="PeriodComboBox" 
                                  Style="{StaticResource ModernComboBox}"
                                  SelectionChanged="FilterChanged">
                            <ComboBoxItem Content="Wszystkie dostawy" IsSelected="True"/>
                            <ComboBoxItem Content="Ostatni miesiąc"/>
                            <ComboBoxItem Content="Ostatnie 3 miesiące"/>
                            <ComboBoxItem Content="Ostatnie 6 miesięcy"/>
                            <ComboBoxItem Content="Ostatni rok"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Category Filter -->
                    <StackPanel Grid.Column="3">
                        <TextBlock Text="Sortowanie:" 
                                   FontSize="12" 
                                   Foreground="#4A5568" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="SortComboBox" 
                                  Style="{StaticResource ModernComboBox}"
                                  SelectionChanged="FilterChanged">
                            <ComboBoxItem Content="Najnowsze" IsSelected="True"/>
                            <ComboBoxItem Content="Najstarsze"/>
                            <ComboBoxItem Content="Najwyższa ocena"/>
                            <ComboBoxItem Content="Najniższa ocena"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Analytics Cards -->
        <Grid Grid.Row="2">
            <Grid.Margin>
                <Thickness>0,0,0,20</Thickness>
            </Grid.Margin>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Card 1 -->
            <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="📊" 
                               FontSize="28" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Liczba Ocen" 
                               FontSize="11" 
                               Foreground="#718096" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="StatsLiczbaOcen" 
                               FontSize="26" 
                               FontWeight="Bold" 
                               Foreground="#667EEA"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 2 -->
            <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="💰" 
                               FontSize="28" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Śr. Cena" 
                               FontSize="11" 
                               Foreground="#718096" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="StatsSredniaCena" 
                               FontSize="26" 
                               FontWeight="Bold" 
                               Foreground="#48BB78"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 3 -->
            <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="🚚" 
                               FontSize="28" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Śr. Transport" 
                               FontSize="11" 
                               Foreground="#718096" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="StatsSredniaTransport" 
                               FontSize="26" 
                               FontWeight="Bold" 
                               Foreground="#ED8936"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 4 -->
            <Border Grid.Column="3" Style="{StaticResource StatCard}" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="💬" 
                               FontSize="28" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Śr. Komunikacja" 
                               FontSize="11" 
                               Foreground="#718096" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="StatsSredniaKomunikacja" 
                               FontSize="26" 
                               FontWeight="Bold" 
                               Foreground="#9F7AEA"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 5 -->
            <Border Grid.Column="4" Style="{StaticResource StatCard}" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="🔄" 
                               FontSize="28" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Śr. Elastyczność" 
                               FontSize="11" 
                               Foreground="#718096" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="StatsSredniaElastycznosc" 
                               FontSize="26" 
                               FontWeight="Bold" 
                               Foreground="#F56565"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 6 -->
            <Border Grid.Column="5" Style="{StaticResource StatCard}" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="🐔" 
                               FontSize="28" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Śr. Stan Ptaków" 
                               FontSize="11" 
                               Foreground="#718096" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="StatsSredniaStanPtakow" 
                               FontSize="26" 
                               FontWeight="Bold" 
                               Foreground="#38B2AC"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 7 - Overall -->
            <Border Grid.Column="6" Style="{StaticResource StatCard}">
                <StackPanel>
                    <TextBlock Text="⭐" 
                               FontSize="28" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Śr. Ogólna" 
                               FontSize="11" 
                               Foreground="#718096" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="StatsSredniaOgolna" 
                               FontSize="26" 
                               FontWeight="Bold" 
                               Foreground="#DD6B20"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Results Info -->
        <Border Grid.Row="3" 
                Background="#EDF2F7" 
                CornerRadius="8" 
                Padding="15,10">
            <Border.Margin>
                <Thickness>0,0,0,15</Thickness>
            </Border.Margin>
            <Grid>
                <TextBlock x:Name="ResultsInfoTextBlock"
                           FontSize="13"
                           Foreground="#2D3748"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="StatusTextBlock"
                           FontSize="13"
                           Foreground="#48BB78"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="4" 
                Style="{StaticResource ModernCard}">
            <DataGrid x:Name="HistoriaDataGrid" 
                      Margin="0"
                      AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"/>
        </Border>
    </Grid>
</Window>
