<Window x:Class="Kalendarz1.ShipmentDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szczegóły wydania" 
        Height="600" Width="900"
        Background="#1E1E24"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   x:Name="lblTitle"
                   Foreground="Gold" 
                   FontSize="16" 
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <DataGrid Grid.Row="1" 
                  x:Name="dgvData"
                  Background="#2A2C36"
                  Foreground="White"
                  BorderThickness="0"
                  GridLinesVisibility="None"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Dokument" 
                                    Binding="{Binding Dokument}" 
                                    Width="Auto"/>
                <DataGridTextColumn Header="TowarID" 
                                    Binding="{Binding TowarID}" 
                                    Width="Auto"/>
                <DataGridTextColumn Header="Kod" 
                                    Binding="{Binding Kod}" 
                                    Width="*"/>
                <DataGridTextColumn Header="Ilość (kg)" 
                                    Binding="{Binding Ilosc, StringFormat=N0}" 
                                    Width="Auto"/>
            </DataGrid.Columns>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#464858"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#373946"/>
                    <Style.Triggers>
                        <Trigger Property="AlternationIndex" Value="1">
                            <Setter Property="Background" Value="#32343F"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
    </Grid>
</Window>