<Window x:Class="Kalendarz1.KonfiguracjaProduktow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Konfiguracja Produktów - Udział z Tuszki B" 
        Height="700" Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="White"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4B732F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="ListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,0,0,1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8F5E9"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Background="#5C8A3A" Padding="15,12">
            <StackPanel>
                <TextBlock Text="KONFIGURACJA PRODUKTÓW - UDZIAŁ Z TUSZKI B" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Wybierz produkty z katalogu 67095 i ustaw ich procentowy udział z tuszki B (15% całości)" 
                           Foreground="White"
                           Opacity="0.9"
                           FontSize="11"
                           Margin="0,3,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Informacja o sumie procentów -->
        <Border Grid.Row="1" 
                x:Name="borderSumaInfo"
                Background="#FFF3CD" 
                Padding="15" 
                Margin="10,10,10,0"
                BorderBrush="#FFC107" 
                BorderThickness="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="⚠" 
                           FontSize="28" 
                           Foreground="#FF9800" 
                           Margin="0,0,12,0"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1">
                    <TextBlock FontWeight="Bold" 
                               FontSize="14"
                               Foreground="#2C3E50">
                        <Run Text="Suma procentów:"/>
                        <Run x:Name="txtSumaProcentow" 
                             Text="0%" 
                             FontSize="16"
                             FontWeight="Bold" 
                             Foreground="#5C8A3A"/>
                    </TextBlock>
                    <TextBlock FontSize="11"
                               Foreground="#7F8C8D"
                               TextWrapping="Wrap"
                               Margin="0,3,0,0">
                        <Run Text="✓ Zalecane: suma powinna wynosić około"/>
                        <Run Text="94%" FontWeight="Bold"/>
                        <Run Text="(uwzględniając straty w produkcji)"/>
                        <LineBreak/>
                        <Run Text="✓ Dopuszczalny zakres: 90-98%"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Lista produktów -->
        <Border Grid.Row="2" 
                Background="White" 
                Padding="15"
                Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Dostępne produkty -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="📦 Dostępne produkty z katalogu" 
                               FontWeight="Bold" 
                               FontSize="13" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,10"/>

                    <TextBox x:Name="txtSzukaj" 
                             Style="{StaticResource SearchBoxStyle}"
                             Margin="0,0,0,10"
                             TextChanged="TxtSzukaj_TextChanged">
                        <TextBox.Resources>
                            <Style TargetType="TextBox" BasedOn="{StaticResource SearchBoxStyle}">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="🔍 Szukaj produktu (nazwa lub kod)..." 
                                                                   Foreground="#BDC3C7" 
                                                                   FontSize="12"
                                                                   Margin="10,0"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <Border BorderBrush="#BDC3C7" 
                            BorderThickness="1" 
                            Background="White">
                        <ListBox x:Name="listDostepne" 
                                 Height="400"
                                 SelectionMode="Single"
                                 BorderThickness="0"
                                 ItemContainerStyle="{StaticResource ListBoxItemStyle}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Kod}" 
                                                   FontFamily="Consolas"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="#5C8A3A"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Nazwa}" 
                                                   FontSize="12"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <Button Content="➜ Dodaj wybrany produkt" 
                            Style="{StaticResource ButtonStyle}"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Stretch"
                            Click="BtnDodaj_Click"/>
                </StackPanel>

                <!-- Separator -->
                <Border Grid.Column="1" 
                        Width="2" 
                        Background="#DEE2E6" 
                        Margin="10,0"/>

                <!-- Skonfigurowane produkty -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="✓ Produkty w konfiguracji" 
                               FontWeight="Bold" 
                               FontSize="13" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,10"/>

                    <Border BorderBrush="#BDC3C7" 
                            BorderThickness="1" 
                            Background="#FAFAFA">
                        <ScrollViewer Height="490" 
                                      VerticalScrollBarVisibility="Auto"
                                      Padding="5">
                            <ItemsControl x:Name="listSkonfigurowane">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                                BorderBrush="#DEE2E6" 
                                                BorderThickness="1"
                                                Padding="12"
                                                Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Nazwa produktu -->
                                                <StackPanel Grid.Row="0" Grid.Column="0">
                                                    <TextBlock Text="{Binding Nazwa}" 
                                                               FontWeight="SemiBold"
                                                               FontSize="13"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Kod}" 
                                                               FontSize="10"
                                                               Foreground="#7F8C8D"
                                                               FontFamily="Consolas"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>

                                                <!-- Przycisk usuń -->
                                                <Button Grid.Row="0" 
                                                        Grid.Column="1"
                                                        Content="✕" 
                                                        Width="30" 
                                                        Height="30"
                                                        Background="#E74C3C"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        FontWeight="Bold"
                                                        FontSize="14"
                                                        Cursor="Hand"
                                                        Click="BtnUsun_Click"
                                                        Tag="{Binding}"
                                                        ToolTip="Usuń produkt"/>

                                                <!-- Slider procentu -->
                                                <StackPanel Grid.Row="1" 
                                                            Grid.Column="0" 
                                                            Grid.ColumnSpan="2"
                                                            Margin="0,12,0,0">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" 
                                                                   Text="Udział:" 
                                                                   FontWeight="SemiBold"
                                                                   FontSize="11"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,10,0"/>

                                                        <Slider Grid.Column="1"
                                                                Minimum="0" 
                                                                Maximum="100"
                                                                Value="{Binding Procent}"
                                                                TickFrequency="0.5"
                                                                IsSnapToTickEnabled="True"
                                                                ValueChanged="Slider_ValueChanged"
                                                                Height="25"
                                                                VerticalAlignment="Center"/>

                                                        <Border Grid.Column="2"
                                                                Background="#5C8A3A"
                                                                CornerRadius="3"
                                                                Padding="10,5"
                                                                Margin="10,0,0,0">
                                                            <TextBlock TextAlignment="Center"
                                                                       FontWeight="Bold"
                                                                       FontSize="13"
                                                                       Foreground="White">
                                                                <Run Text="{Binding Procent, StringFormat=F1}"/>
                                                                <Run Text="%"/>
                                                            </TextBlock>
                                                        </Border>
                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Przyciski akcji -->
        <Border Grid.Row="3" Background="#34495E" Padding="15,10">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="💡" 
                               Foreground="White" 
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBlock Foreground="White" 
                               FontSize="11"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap">
                        <Run Text="Suma procentów powinna wynosić ~94% uwzględniając straty produkcyjne."/>
                        <Run Text="Produkty pochodzą z katalogu 67095." FontStyle="Italic"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Content="🔄 Przywróć domyślne" 
                            Style="{StaticResource ButtonStyle}"
                            Background="#95A5A6"
                            Width="150"
                            Click="BtnPrzywrocDomyslne_Click"
                            ToolTip="Przywraca domyślną konfigurację"/>
                    <Button Content="💾 Zapisz" 
                            Style="{StaticResource ButtonStyle}"
                            Width="100"
                            Click="BtnZapisz_Click"/>
                    <Button Content="✕ Anuluj" 
                            Style="{StaticResource ButtonStyle}"
                            Background="#7F8C8D"
                            Width="100"
                            Click="BtnAnuluj_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>