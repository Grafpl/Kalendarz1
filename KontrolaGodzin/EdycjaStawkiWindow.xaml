<Window x:Class="Kalendarz1.KontrolaGodzin.EdycjaStawkiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edycja stawki" 
        Height="400" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FA"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="ðŸ’° Edycja stawki" FontSize="16" FontWeight="Bold" Foreground="#1A202C" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Text="Nazwa (agencja/dziaÅ‚):" VerticalAlignment="Center" Foreground="#4A5568"/>
        <TextBox x:Name="txtNazwa" Grid.Row="1" Grid.Column="1" Padding="8,6" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" Text="Stawka podstawowa:" VerticalAlignment="Center" Foreground="#4A5568"/>
        <TextBox x:Name="txtStawka" Grid.Row="2" Grid.Column="1" Padding="8,6" Margin="0,0,0,10" Text="28.10"/>

        <TextBlock Grid.Row="3" Text="MnoÅ¼nik nadgodzin:" VerticalAlignment="Center" Foreground="#4A5568"/>
        <TextBox x:Name="txtNadgodziny" Grid.Row="3" Grid.Column="1" Padding="8,6" Margin="0,0,0,10" Text="1.50"/>

        <TextBlock Grid.Row="4" Text="MnoÅ¼nik nocne:" VerticalAlignment="Center" Foreground="#4A5568"/>
        <TextBox x:Name="txtNocne" Grid.Row="4" Grid.Column="1" Padding="8,6" Margin="0,0,0,10" Text="1.20"/>

        <TextBlock Grid.Row="5" Text="MnoÅ¼nik Å›wiÄ…teczne:" VerticalAlignment="Center" Foreground="#4A5568"/>
        <TextBox x:Name="txtSwiateczne" Grid.Row="5" Grid.Column="1" Padding="8,6" Margin="0,0,0,10" Text="2.00"/>

        <TextBlock Grid.Row="6" Text="ObowiÄ…zuje od:" VerticalAlignment="Center" Foreground="#4A5568"/>
        <DatePicker x:Name="dpOdDaty" Grid.Row="6" Grid.Column="1" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="7" Text="ObowiÄ…zuje do:" VerticalAlignment="Center" Foreground="#4A5568"/>
        <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal">
            <DatePicker x:Name="dpDoDaty" Width="150"/>
            <TextBlock Text="(puste = bezterminowo)" FontSize="10" Foreground="#A0AEC0" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Anuluj" Padding="20,8" Margin="0,0,10,0" Click="BtnAnuluj_Click"/>
            <Button Content="ðŸ’¾ Zapisz" Padding="20,8" Background="#38A169" Foreground="White" Click="BtnZapisz_Click"/>
        </StackPanel>
    </Grid>
</Window>
