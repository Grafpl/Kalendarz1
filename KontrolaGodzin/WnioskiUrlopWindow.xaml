<Window x:Class="Kalendarz1.KontrolaGodzin.WnioskiUrlopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wnioski Urlopowe"
        Height="850" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F0F4F8"
        FontFamily="Segoe UI"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="PrimaryBtn" TargetType="Button">
            <Setter Property="Background" Value="#3182CE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2B6CB0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SuccessBtn" TargetType="Button">
            <Setter Property="Background" Value="#38A169"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2F855A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DangerBtn" TargetType="Button">
            <Setter Property="Background" Value="#E53E3E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C53030"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="WarningBtn" TargetType="Button">
            <Setter Property="Background" Value="#DD6B20"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C05621"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CalendarDayBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="#E2E8F0" BorderThickness="0.5"
                                Padding="{TemplateBinding Padding}" MinHeight="80">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EDF2F7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="750"/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>

        <!-- ==================== LEWA STRONA: KALENDARZ + LISTA ==================== -->
        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- NagÅ‚Ã³wek z nawigacjÄ… kalendarza -->
            <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,10"
                    BorderBrush="#E2E8F0" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Nawigacja miesiÄ…ca -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="â—€" Click="BtnPoprzedniMiesiac_Click" Style="{StaticResource PrimaryBtn}"
                                Padding="10,6" FontSize="14"/>
                        <TextBlock x:Name="txtMiesiacRok" Text="Luty 2026" FontSize="22" FontWeight="Bold"
                                   Foreground="#1A202C" VerticalAlignment="Center" Margin="15,0"/>
                        <Button Content="â–¶" Click="BtnNastepnyMiesiac_Click" Style="{StaticResource PrimaryBtn}"
                                Padding="10,6" FontSize="14"/>
                        <Button Content="DziÅ›" Click="BtnDzisiaj_Click" Style="{StaticResource PrimaryBtn}"
                                Padding="12,6" Margin="15,0,0,0" FontSize="12"/>
                    </StackPanel>

                    <!-- Legenda -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border Background="#38A169" CornerRadius="3" Width="12" Height="12" Margin="0,0,4,0"/>
                        <TextBlock Text="Wypoczynkowy" FontSize="10" Foreground="#718096" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <Border Background="#DD6B20" CornerRadius="3" Width="12" Height="12" Margin="0,0,4,0"/>
                        <TextBlock Text="Na Å¼Ä…danie" FontSize="10" Foreground="#718096" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <Border Background="#E53E3E" CornerRadius="3" Width="12" Height="12" Margin="0,0,4,0"/>
                        <TextBlock Text="L4" FontSize="10" Foreground="#718096" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <Border Background="#805AD5" CornerRadius="3" Width="12" Height="12" Margin="0,0,4,0"/>
                        <TextBlock Text="OkolicznoÅ›ciowy" FontSize="10" Foreground="#718096" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <Border Background="#D69E2E" CornerRadius="3" Width="12" Height="12" Margin="0,0,4,0"/>
                        <TextBlock Text="Opieka" FontSize="10" Foreground="#718096" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <Border Background="#718096" CornerRadius="3" Width="12" Height="12" Margin="0,0,4,0"/>
                        <TextBlock Text="BezpÅ‚atny" FontSize="10" Foreground="#718096" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Filtr pracownika -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Pracownik:" FontSize="12" Foreground="#4A5568" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox x:Name="cmbFiltrPracownik" Width="200" SelectionChanged="CmbFiltrPracownik_Changed"
                                  IsEditable="True" IsTextSearchEnabled="True"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Kalendarz -->
            <Border Grid.Row="1" Background="White" CornerRadius="8" BorderBrush="#E2E8F0" BorderThickness="1"
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- NagÅ‚Ã³wki dni tygodnia -->
                    <UniformGrid Grid.Row="0" Columns="7" Margin="0">
                        <TextBlock Text="PoniedziaÅ‚ek" FontWeight="Bold" FontSize="11" Foreground="#4A5568"
                                   HorizontalAlignment="Center" Padding="0,8"/>
                        <TextBlock Text="Wtorek" FontWeight="Bold" FontSize="11" Foreground="#4A5568"
                                   HorizontalAlignment="Center" Padding="0,8"/>
                        <TextBlock Text="Åšroda" FontWeight="Bold" FontSize="11" Foreground="#4A5568"
                                   HorizontalAlignment="Center" Padding="0,8"/>
                        <TextBlock Text="Czwartek" FontWeight="Bold" FontSize="11" Foreground="#4A5568"
                                   HorizontalAlignment="Center" Padding="0,8"/>
                        <TextBlock Text="PiÄ…tek" FontWeight="Bold" FontSize="11" Foreground="#4A5568"
                                   HorizontalAlignment="Center" Padding="0,8"/>
                        <TextBlock Text="Sobota" FontWeight="Bold" FontSize="11" Foreground="#C53030"
                                   HorizontalAlignment="Center" Padding="0,8"/>
                        <TextBlock Text="Niedziela" FontWeight="Bold" FontSize="11" Foreground="#C53030"
                                   HorizontalAlignment="Center" Padding="0,8"/>
                    </UniformGrid>

                    <!-- Siatka kalendarza - generowana dynamicznie -->
                    <UniformGrid x:Name="calendarGrid" Grid.Row="1" Columns="7" Margin="0"/>
                </Grid>
            </Border>

            <!-- Dolny panel: podsumowanie bilansu -->
            <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="15" BorderBrush="#E2E8F0" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock x:Name="txtBilansInfo" Text="Bilans urlopowy" FontSize="16" FontWeight="Bold"
                                   Foreground="#1A202C" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtBilansRok" Text=" â€” 2026" FontSize="14" Foreground="#718096"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Border Background="#F0FFF4" CornerRadius="8" Padding="16,8" Margin="0,0,8,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="PRZYSÅUGUJE" FontSize="8" Foreground="#276749" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtBilansPrzyslugujeVal" Text="26 dni" FontSize="20" FontWeight="Bold" Foreground="#276749" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#EBF8FF" CornerRadius="8" Padding="16,8" Margin="0,0,8,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="WYKORZYSTANE" FontSize="8" Foreground="#2B6CB0" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtBilansWykorzystane" Text="0 dni" FontSize="20" FontWeight="Bold" Foreground="#2B6CB0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FFFAF0" CornerRadius="8" Padding="16,8" Margin="0,0,8,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="ZAPLANOWANE" FontSize="8" Foreground="#C05621" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtBilansZaplanowane" Text="0 dni" FontSize="20" FontWeight="Bold" Foreground="#C05621" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FAF5FF" CornerRadius="8" Padding="16,8" Margin="0,0,8,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="POZOSTAÅO" FontSize="8" Foreground="#6B46C1" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtBilansPozostalo" Text="26 dni" FontSize="20" FontWeight="Bold" Foreground="#6B46C1" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FFF5F5" CornerRadius="8" Padding="16,8">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="NA Å»Ä„DANIE" FontSize="8" Foreground="#C53030" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtBilansNaZadanie" Text="0 / 4" FontSize="20" FontWeight="Bold" Foreground="#C53030" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- ==================== PRAWA STRONA: FORMULARZ + WNIOSKI ==================== -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Formularz nowego wniosku -->
            <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,10"
                    BorderBrush="#E2E8F0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Nowy wniosek urlopowy" FontSize="18" FontWeight="Bold" Foreground="#1A202C" Margin="0,0,0,15"/>

                    <!-- Pracownik -->
                    <TextBlock Text="Pracownik:" FontSize="12" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,0,0,4"/>
                    <ComboBox x:Name="cmbWnioskPracownik" Margin="0,0,0,10" IsEditable="True" IsTextSearchEnabled="True"/>

                    <!-- Typ nieobecnoÅ›ci -->
                    <TextBlock Text="Typ nieobecnoÅ›ci:" FontSize="12" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,0,0,4"/>
                    <ComboBox x:Name="cmbWnioskTyp" Margin="0,0,0,10" SelectionChanged="CmbWnioskTyp_Changed"/>

                    <!-- Daty -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Data od:" FontSize="12" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,0,0,4"/>
                            <DatePicker x:Name="dpWnioskOd" SelectedDateChanged="DpWnioskDaty_Changed"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Data do:" FontSize="12" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,0,0,4"/>
                            <DatePicker x:Name="dpWnioskDo" SelectedDateChanged="DpWnioskDaty_Changed"/>
                        </StackPanel>
                    </Grid>

                    <!-- Podsumowanie dni -->
                    <Border x:Name="borderDniInfo" Background="#EBF8FF" CornerRadius="6" Padding="12,8" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock x:Name="txtWnioskDni" Text="Dni roboczych: 0" FontSize="13" FontWeight="SemiBold" Foreground="#2B6CB0"/>
                            <TextBlock x:Name="txtWnioskKolizja" Text="" FontSize="11" Foreground="#C53030"
                                       TextWrapping="Wrap" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- ZastÄ™pca -->
                    <TextBlock Text="ZastÄ™puje (opcjonalnie):" FontSize="12" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,0,0,4"/>
                    <ComboBox x:Name="cmbWnioskZastepca" Margin="0,0,0,10" IsEditable="True" IsTextSearchEnabled="True"/>

                    <!-- Uwagi -->
                    <TextBlock Text="Uwagi:" FontSize="12" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,0,0,4"/>
                    <TextBox x:Name="txtWnioskUwagi" Height="50" TextWrapping="Wrap" AcceptsReturn="True"
                             Margin="0,0,0,12" Padding="6,4"/>

                    <!-- Przycisk -->
                    <Button Content="ðŸ“‹ ZÅ‚Ã³Å¼ wniosek" Style="{StaticResource SuccessBtn}" Click="BtnZlozWniosek_Click"
                            HorizontalAlignment="Stretch" FontSize="14" Padding="16,10"/>
                </StackPanel>
            </Border>

            <!-- Lista wnioskÃ³w -->
            <Border Grid.Row="1" Background="White" CornerRadius="8" BorderBrush="#E2E8F0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- NagÅ‚Ã³wek listy -->
                    <Border Grid.Row="0" Padding="15,12" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
                        <Grid>
                            <TextBlock Text="Wnioski urlopowe" FontSize="15" FontWeight="Bold" Foreground="#1A202C" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <ComboBox x:Name="cmbFiltrStatus" Width="110" Margin="0,0,8,0" SelectionChanged="CmbFiltrStatus_Changed">
                                    <ComboBoxItem Content="Wszystkie" IsSelected="True"/>
                                    <ComboBoxItem Content="OczekujÄ…ce"/>
                                    <ComboBoxItem Content="Zatwierdzone"/>
                                    <ComboBoxItem Content="Odrzucone"/>
                                </ComboBox>
                                <Button Content="âœ…" ToolTip="ZatwierdÅº zaznaczony" Style="{StaticResource SuccessBtn}"
                                        Padding="8,5" Click="BtnZatwierdzWniosek_Click" Margin="0,0,4,0"/>
                                <Button Content="âŒ" ToolTip="OdrzuÄ‡ zaznaczony" Style="{StaticResource DangerBtn}"
                                        Padding="8,5" Click="BtnOdrzucWniosek_Click" Margin="0,0,4,0"/>
                                <Button Content="ðŸ—‘ï¸" ToolTip="UsuÅ„ zaznaczony" Style="{StaticResource WarningBtn}"
                                        Padding="8,5" Click="BtnUsunWniosek_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Lista -->
                    <ListBox x:Name="listWnioski" Grid.Row="1" BorderThickness="0" Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             SelectionChanged="ListWnioski_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12,10" Margin="4,2" CornerRadius="6" BorderBrush="#E2E8F0" BorderThickness="1"
                                        Background="{Binding TloKolor}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <TextBlock Text="{Binding PracownikNazwa}" FontSize="13" FontWeight="SemiBold" Foreground="#1A202C"/>
                                            <Border HorizontalAlignment="Right" CornerRadius="4" Padding="8,3"
                                                    Background="{Binding StatusKolor}">
                                                <TextBlock Text="{Binding Status}" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                            </Border>
                                        </Grid>

                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,0">
                                            <Border CornerRadius="3" Padding="6,2" Margin="0,0,8,0"
                                                    Background="{Binding TypKolor}">
                                                <TextBlock Text="{Binding TypNazwa}" FontSize="10" FontWeight="SemiBold" Foreground="White"/>
                                            </Border>
                                            <TextBlock Text="{Binding OkresDisplay}" FontSize="11" Foreground="#4A5568" VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <TextBlock Grid.Row="2" Text="{Binding Uwagi}" FontSize="10" Foreground="#718096"
                                                   Margin="0,3,0,0" TextTrimming="CharacterEllipsis"
                                                   Visibility="{Binding UwagiVisibility}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
