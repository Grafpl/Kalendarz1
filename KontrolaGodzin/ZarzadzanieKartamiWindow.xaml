<Window x:Class="Kalendarz1.KontrolaGodzin.ZarzadzanieKartamiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ’³ ZarzÄ…dzanie Kartami RCP" 
        Height="800" Width="1300"
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FA"
        FontFamily="Segoe UI"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#E8EDF3"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CBD5E0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F7FAFC"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E2E8F0"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="RowHeight" Value="30"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#EDF2F7"/>
            <Setter Property="Foreground" Value="#1A202C"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="0,0,1,2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NagÅ‚Ã³wek -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Border Background="#805AD5" CornerRadius="8" Padding="10" Margin="0,0,12,0">
                        <TextBlock Text="ðŸ’³" FontSize="20" Foreground="White"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="ZARZÄ„DZANIE KARTAMI RCP" FontSize="18" FontWeight="Bold" Foreground="#1A202C"/>
                        <TextBlock Text="PrzeglÄ…d, historia, przypisania kart dostÄ™powych" FontSize="11" Foreground="#718096"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="âž• Przypisz / Odbierz kartÄ™" Padding="15,8" Margin="0,0,10,0" 
                            Background="#38A169" Foreground="White" FontWeight="SemiBold"
                            Click="BtnPrzypisKarte_Click"/>
                    <Button Content="âŸ³ OdÅ›wieÅ¼" Style="{StaticResource ModernButton}" Click="BtnOdswiez_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statystyki -->
        <Border Grid.Row="1" Background="#FAFBFC" Padding="15">
            <UniformGrid Columns="5">
                <Border Background="White" CornerRadius="8" Padding="15" Margin="5" BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="WSZYSTKIE KARTY" FontSize="9" Foreground="#718096" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtWszystkieKarty" Text="0" FontSize="28" FontWeight="Bold" Foreground="#2D3748" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="8" Padding="15" Margin="5" BorderBrush="#C6F6D5" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="AKTYWNE" FontSize="9" Foreground="#276749" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtAktywne" Text="0" FontSize="28" FontWeight="Bold" Foreground="#38A169" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="8" Padding="15" Margin="5" BorderBrush="#FED7D7" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="NIEAKTYWNE" FontSize="9" Foreground="#C53030" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtNieaktywne" Text="0" FontSize="28" FontWeight="Bold" Foreground="#E53E3E" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="8" Padding="15" Margin="5" BorderBrush="#BEE3F8" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="PRZYPISANE" FontSize="9" Foreground="#2B6CB0" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtPrzypisane" Text="0" FontSize="28" FontWeight="Bold" Foreground="#3182CE" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="8" Padding="15" Margin="5" BorderBrush="#FEEBC8" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="WOLNE" FontSize="9" Foreground="#C05621" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtWolne" Text="0" FontSize="28" FontWeight="Bold" Foreground="#DD6B20" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </Border>

        <!-- Filtry -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1" Padding="15,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Filtr:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#4A5568" FontWeight="SemiBold"/>
                <RadioButton x:Name="rbWszystkie" Content="Wszystkie" IsChecked="True" GroupName="Filtr" Margin="0,0,15,0" 
                             Checked="Filtr_Changed" VerticalAlignment="Center"/>
                <RadioButton x:Name="rbAktywne" Content="Aktywne" GroupName="Filtr" Margin="0,0,15,0" 
                             Checked="Filtr_Changed" VerticalAlignment="Center"/>
                <RadioButton x:Name="rbPrzypisane" Content="Przypisane" GroupName="Filtr" Margin="0,0,15,0" 
                             Checked="Filtr_Changed" VerticalAlignment="Center"/>
                <RadioButton x:Name="rbWolne" Content="Wolne" GroupName="Filtr" Margin="0,0,15,0" 
                             Checked="Filtr_Changed" VerticalAlignment="Center"/>
                
                <Border Background="#E2E8F0" Width="1" Margin="10,0"/>
                
                <TextBlock Text="ðŸ”" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <TextBox x:Name="txtSzukaj" Width="200" Padding="8,5" TextChanged="TxtSzukaj_TextChanged"/>
                
                <Border Background="#E2E8F0" Width="1" Margin="15,0"/>
                
                <TextBlock Text="Widok:" VerticalAlignment="Center" Margin="10,0,10,0" Foreground="#4A5568" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbWidok" Width="180" SelectedIndex="0" SelectionChanged="CmbWidok_SelectionChanged">
                    <ComboBoxItem Content="ðŸ“‹ Karty i przypisania"/>
                    <ComboBoxItem Content="ðŸ‘¥ Pracownicy z kartami"/>
                    <ComboBoxItem Content="ðŸ“œ Historia przypisaÅ„"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- Tabela -->
        <Border Grid.Row="3" Background="White" Margin="15" CornerRadius="8" BorderBrush="#E2E8F0" BorderThickness="1">
            <Grid>
                <!-- Widok 1: Karty z przypisaniami -->
                <DataGrid x:Name="gridKarty" AutoGenerateColumns="False" IsReadOnly="True" 
                          MouseDoubleClick="GridKarty_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding KartaId}" Width="50"/>
                        <DataGridTextColumn Header="NUMER KARTY" Binding="{Binding NumerKarty}" Width="120"/>
                        <DataGridTextColumn Header="STAN" Binding="{Binding StanOpis}" Width="100"/>
                        <DataGridTextColumn Header="PRACOWNIK" Binding="{Binding Pracownik}" Width="200"/>
                        <DataGridTextColumn Header="PRZYPISANA OD" Binding="{Binding PrzypisanaOd, StringFormat=dd.MM.yyyy HH:mm}" Width="130"/>
                        <DataGridTextColumn Header="PRZYPISANA DO" Binding="{Binding PrzypisanaDo, StringFormat=dd.MM.yyyy HH:mm}" Width="130"/>
                        <DataGridTextColumn Header="STATUS" Binding="{Binding Status}" Width="120"/>
                        <DataGridTextColumn Header="UWAGI" Binding="{Binding Uwagi}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Widok 2: Pracownicy z kartami -->
                <DataGrid x:Name="gridPracownicy" AutoGenerateColumns="False" IsReadOnly="True" Visibility="Collapsed"
                          MouseDoubleClick="GridPracownicy_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding PracownikId}" Width="60"/>
                        <DataGridTextColumn Header="PRACOWNIK" Binding="{Binding Pracownik}" Width="200"/>
                        <DataGridTextColumn Header="NUMER KARTY" Binding="{Binding NumerKarty}" Width="120"/>
                        <DataGridTextColumn Header="PRZYPISANA OD" Binding="{Binding PrzypisanaOd, StringFormat=dd.MM.yyyy}" Width="110"/>
                        <DataGridTextColumn Header="STATUS KARTY" Binding="{Binding StatusKarty}" Width="120"/>
                        <DataGridTextColumn Header="OSTATNIA REJESTRACJA" Binding="{Binding OstatniaRejestracja, StringFormat=dd.MM.yyyy HH:mm}" Width="150"/>
                        <DataGridTextColumn Header="DZIAÅ" Binding="{Binding Dzial}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Widok 3: Historia -->
                <DataGrid x:Name="gridHistoria" AutoGenerateColumns="False" IsReadOnly="True" Visibility="Collapsed">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="NUMER KARTY" Binding="{Binding NumerKarty}" Width="120"/>
                        <DataGridTextColumn Header="PRACOWNIK" Binding="{Binding Pracownik}" Width="200"/>
                        <DataGridTextColumn Header="OD" Binding="{Binding DataOd, StringFormat=dd.MM.yyyy HH:mm}" Width="130"/>
                        <DataGridTextColumn Header="DO" Binding="{Binding DataDo, StringFormat=dd.MM.yyyy HH:mm}" Width="130"/>
                        <DataGridTextColumn Header="CZAS UÅ»YTKOWANIA" Binding="{Binding CzasUzytkowania}" Width="130"/>
                        <DataGridTextColumn Header="STATUS" Binding="{Binding Status}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Stopka -->
        <Border Grid.Row="4" Background="White" BorderBrush="#E2E8F0" BorderThickness="0,1,0,0" Padding="15,10">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="txtInfo" Text="ZaÅ‚adowano 0 rekordÃ³w" FontSize="11" Foreground="#718096" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ“¥ Export CSV" Style="{StaticResource ModernButton}" Margin="0,0,10,0" Click="BtnExport_Click"/>
                    <Button Content="Zamknij" Style="{StaticResource ModernButton}" Click="BtnZamknij_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
