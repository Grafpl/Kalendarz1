<Window x:Class="Kalendarz1.KontrolaGodzin.KartaRCPWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ–¨ï¸ Drukuj KartÄ™ RCP" 
        Height="700" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FA"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- WybÃ³r pracownika i daty -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1" Padding="20,15">
            <StackPanel>
                <TextBlock Text="ðŸ–¨ï¸ Drukuj KartÄ™ RCP" FontSize="16" FontWeight="Bold" Foreground="#1A202C" Margin="0,0,0,15"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Pracownik:" VerticalAlignment="Center" Foreground="#4A5568"/>
                    <ComboBox x:Name="cmbPracownik" Grid.Column="1" Margin="0,0,0,10" SelectionChanged="CmbPracownik_SelectionChanged"/>

                    <TextBlock Grid.Row="1" Text="Data:" VerticalAlignment="Center" Foreground="#4A5568"/>
                    <DatePicker x:Name="dpData" Grid.Row="1" Grid.Column="1" SelectedDateChanged="DpData_SelectedDateChanged"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- PodglÄ…d karty -->
        <Border Grid.Row="1" Margin="20" Background="White" BorderBrush="#2D3748" BorderThickness="2" Padding="0">
            <Grid x:Name="kartaRCP">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- NagÅ‚Ã³wek firmy -->
                <Border Grid.Row="0" Background="#1A202C" Padding="15">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="UBOJNIA DROBIU PIÃ“RKOWSCY" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="Brzeziny k/Åodzi" FontSize="10" Foreground="#A0AEC0" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>

                <!-- TytuÅ‚ -->
                <Border Grid.Row="1" Background="#EDF2F7" Padding="10">
                    <TextBlock Text="KARTA REJESTRACJI CZASU PRACY" FontSize="12" FontWeight="Bold" Foreground="#2D3748" HorizontalAlignment="Center"/>
                </Border>

                <!-- Dane pracownika -->
                <Border Grid.Row="2" Padding="15" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,8">
                            <TextBlock Text="PRACOWNIK:" FontSize="9" Foreground="#718096"/>
                            <TextBlock x:Name="txtKartaPracownik" Text="-" FontSize="14" FontWeight="Bold" Foreground="#1A202C"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,8">
                            <TextBlock Text="DATA:" FontSize="9" Foreground="#718096"/>
                            <TextBlock x:Name="txtKartaData" Text="-" FontSize="14" FontWeight="Bold" Foreground="#1A202C"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,8">
                            <TextBlock Text="DZIAÅ:" FontSize="9" Foreground="#718096"/>
                            <TextBlock x:Name="txtKartaDzial" Text="-" FontSize="12" Foreground="#2D3748"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,8">
                            <TextBlock Text="NR KARTY:" FontSize="9" Foreground="#718096"/>
                            <TextBlock x:Name="txtKartaNumer" Text="-" FontSize="12" Foreground="#2D3748"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- SzczegÃ³Å‚y czasu -->
                <Grid Grid.Row="3" Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- WejÅ›cie -->
                    <Border Grid.Row="0" Grid.Column="0" Background="#F0FFF4" CornerRadius="8" Padding="15" Margin="0,0,5,10">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="WEJÅšCIE" FontSize="10" Foreground="#276749" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="txtKartaWejscie" Text="--:--" FontSize="32" FontWeight="Bold" Foreground="#276749" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- WyjÅ›cie -->
                    <Border Grid.Row="0" Grid.Column="1" Background="#FFF5F5" CornerRadius="8" Padding="15" Margin="5,0,0,10">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="WYJÅšCIE" FontSize="10" Foreground="#C53030" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="txtKartaWyjscie" Text="--:--" FontSize="32" FontWeight="Bold" Foreground="#C53030" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Czas pracy -->
                    <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#EBF8FF" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="CZAS PRACY" FontSize="9" Foreground="#2B6CB0" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtKartaCzas" Text="0:00" FontSize="24" FontWeight="Bold" Foreground="#2C5282" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="PRZERWY" FontSize="9" Foreground="#2B6CB0" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtKartaPrzerwy" Text="0:00" FontSize="24" FontWeight="Bold" Foreground="#2C5282" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="EFEKTYWNY" FontSize="9" Foreground="#2B6CB0" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtKartaEfektywny" Text="0:00" FontSize="24" FontWeight="Bold" Foreground="#2C5282" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Lista rejestracji -->
                    <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Text="REJESTRACJE:" FontSize="9" Foreground="#718096" FontWeight="Bold" Margin="0,5,0,5"/>
                    <Border Grid.Row="3" Grid.ColumnSpan="2" Background="#F7FAFC" CornerRadius="4" Padding="10">
                        <ItemsControl x:Name="listRejestracje">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Godzina}" FontSize="11" FontWeight="SemiBold" Foreground="#2D3748"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Typ}" FontSize="11" Foreground="{Binding TypKolor}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Punkt}" FontSize="10" Foreground="#718096" TextTrimming="CharacterEllipsis"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </Grid>

                <!-- Stopka -->
                <Border Grid.Row="4" Background="#F7FAFC" Padding="10" BorderBrush="#E2E8F0" BorderThickness="0,1,0,0">
                    <Grid>
                        <TextBlock Text="Wygenerowano automatycznie z systemu UNICARD" FontSize="8" Foreground="#A0AEC0"/>
                        <TextBlock x:Name="txtKartaTimestamp" Text="" FontSize="8" Foreground="#A0AEC0" HorizontalAlignment="Right"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Przyciski -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E2E8F0" BorderThickness="0,1,0,0" Padding="20,12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Anuluj" Padding="20,8" Margin="0,0,10,0" Click="BtnAnuluj_Click"/>
                <Button Content="ðŸ–¨ï¸ Drukuj" Padding="20,8" Background="#3182CE" Foreground="White" Click="BtnDrukuj_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
