                <Border Background="White" CornerRadius="8" Margin="0,10,0,0" BorderBrush="#E2E8F0" BorderThickness="1">
                    <DataGrid x:Name="gridGodzinyPracy" Margin="1" AutoGenerateColumns="False" IsReadOnly="True"
