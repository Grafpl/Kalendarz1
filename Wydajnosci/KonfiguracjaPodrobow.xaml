<Window x:Class="Kalendarz1.KonfiguracjaPodrobow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Konfiguracja Podrobów i Ubytków - Udział z Żywca" 
        Height="750" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#8B4513"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6B3410"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="ListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,0,0,1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFEEDD"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#D2B48C"/>
                    <Setter Property="Foreground" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="32"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <Style x:Key="ColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#8B4513"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="180"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Background="#8B4513" Padding="15,12">
            <StackPanel>
                <TextBlock Text="🐔 KONFIGURACJA PODROBÓW I UBYTKÓW - UDZIAŁ Z ŻYWCA" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Określ procentowy udział podrobów i ubytków powstających z żywego kurczaka przed powstaniem tuszki" 
                           Foreground="White"
                           Opacity="0.9"
                           FontSize="11"
                           Margin="0,3,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Data od -->
        <Border Grid.Row="1" 
                Background="#ECF0F1" 
                Padding="15" 
                Margin="10,10,10,0">
            <StackPanel>
                <TextBlock Text="Ustaw datę od której ma obowiązywać konfiguracja podrobów" 
                           FontWeight="SemiBold" 
                           FontSize="12"
                           Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="Data od:" 
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Margin="0,0,10,0"/>
                    <DatePicker Grid.Column="1" 
                                x:Name="dpDataOd"
                                VerticalAlignment="Center"
                                FontSize="12"/>
                    <TextBlock Grid.Column="2"
                               Text="System automatycznie użyje najnowszej aktywnej konfiguracji dla danej daty"
                               FontSize="10"
                               FontStyle="Italic"
                               Foreground="#7F8C8D"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Informacja o sumie procentów -->
        <Border Grid.Row="2" 
                x:Name="borderSumaInfo"
                Background="#FFF3CD" 
                Padding="15" 
                Margin="10,10,10,0"
                BorderBrush="#FFC107" 
                BorderThickness="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="🥩" 
                           FontSize="28" 
                           Foreground="#8B4513" 
                           Margin="0,0,12,0"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1">
                    <TextBlock FontWeight="Bold" 
                               FontSize="14"
                               Foreground="#2C3E50">
                        <Run Text="Suma ubytków z żywca:"/>
                        <Run x:Name="txtSumaProcentow" 
                             Text="0%" 
                             FontSize="16"
                             FontWeight="Bold" 
                             Foreground="#8B4513"/>
                    </TextBlock>
                    <TextBlock FontSize="11"
                               Foreground="#7F8C8D"
                               TextWrapping="Wrap"
                               Margin="0,3,0,0">
                        <Run Text="✓ Typowe ubytki: podroby (5-8%), pióra (5-7%), krew (3-4%), jelita (4-6%)"/>
                        <LineBreak/>
                        <Run Text="✓ Zalecana suma ubytków: 16-25% (pozostaje 75-84% na tuszkę)"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="20,0,0,0">
                    <TextBlock FontWeight="Bold" 
                               FontSize="12"
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center">
                        <Run Text="Pozostaje na tuszkę:"/>
                    </TextBlock>
                    <TextBlock x:Name="txtPozostaleNaTuszke" 
                               Text="100%" 
                               FontSize="20"
                               FontWeight="Bold" 
                               Foreground="#5C8A3A"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Lista produktów -->
        <Border Grid.Row="3" 
                Background="White" 
                Padding="15"
                Margin="10,10,10,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Dostępne produkty -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="🗂️ Wszystkie dostępne towary (wybierz dowolne jako podroby/ubytki)" 
                               FontWeight="Bold" 
                               FontSize="12" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,10"/>

                    <TextBox x:Name="txtSzukaj" 
                             Style="{StaticResource SearchBoxStyle}"
                             Margin="0,0,0,10"
                             TextChanged="TxtSzukaj_TextChanged">
                        <TextBox.Resources>
                            <Style TargetType="TextBox" BasedOn="{StaticResource SearchBoxStyle}">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="🔍 Szukaj towaru (nazwa, kod lub katalog)..." 
                                                                   Foreground="#BDC3C7" 
                                                                   FontSize="12"
                                                                   Margin="10,0"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <TextBlock Text="Wskazówka: Towary oznaczone są katalogiem [xxx] na początku nazwy" 
                               FontSize="10"
                               FontStyle="Italic"
                               Foreground="#7F8C8D"
                               Margin="0,0,0,5"/>

                    <Border BorderBrush="#BDC3C7" 
                            BorderThickness="1" 
                            Background="White">
                        <ListBox x:Name="listDostepne" 
                                 Height="230"
                                 SelectionMode="Single"
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ItemContainerStyle="{StaticResource ListBoxItemStyle}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="3">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Nazwa z katalogiem -->
                                        <TextBlock Grid.Row="0"
                                                   Text="{Binding Nazwa}" 
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   TextWrapping="Wrap"/>

                                        <!-- Kod -->
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding Kod}" 
                                                   FontFamily="Consolas"
                                                   FontSize="9"
                                                   Foreground="#8B4513"
                                                   Margin="0,2,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <Button Content="➜ Dodaj wybrany produkt" 
                            Style="{StaticResource ButtonStyle}"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Stretch"
                            Click="BtnDodaj_Click"/>
                </StackPanel>

                <!-- Separator -->
                <Border Grid.Column="1" 
                        Width="2" 
                        Background="#DEE2E6" 
                        Margin="10,0"/>

                <!-- Skonfigurowane produkty dla bieżącej sesji -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="✓ Podroby w tworzonej konfiguracji" 
                               FontWeight="Bold" 
                               FontSize="12" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,10"/>

                    <Border BorderBrush="#BDC3C7" 
                            BorderThickness="1" 
                            Background="#FAFAFA">
                        <ScrollViewer Height="360" 
                                      VerticalScrollBarVisibility="Auto"
                                      Padding="5">
                            <ItemsControl x:Name="listSkonfigurowane">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                                BorderBrush="#DEE2E6" 
                                                BorderThickness="1"
                                                Padding="10"
                                                Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Nazwa produktu -->
                                                <StackPanel Grid.Row="0" Grid.Column="0">
                                                    <TextBlock Text="{Binding Nazwa}" 
                                                               FontWeight="SemiBold"
                                                               FontSize="12"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Kod}" 
                                                               FontSize="9"
                                                               Foreground="#7F8C8D"
                                                               FontFamily="Consolas"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>

                                                <!-- Przycisk usuń -->
                                                <Button Grid.Row="0" 
                                                        Grid.Column="1"
                                                        Content="✕" 
                                                        Width="28" 
                                                        Height="28"
                                                        Background="#E74C3C"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        FontWeight="Bold"
                                                        FontSize="12"
                                                        Cursor="Hand"
                                                        Click="BtnUsun_Click"
                                                        Tag="{Binding}"
                                                        ToolTip="Usuń produkt"/>

                                                <!-- Slider procentu -->
                                                <StackPanel Grid.Row="1" 
                                                            Grid.Column="0" 
                                                            Grid.ColumnSpan="2"
                                                            Margin="0,10,0,0">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" 
                                                                   Text="% z żywca:" 
                                                                   FontWeight="SemiBold"
                                                                   FontSize="10"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,8,0"/>

                                                        <Slider Grid.Column="1"
                                                                Minimum="0" 
                                                                Maximum="15"
                                                                Value="{Binding Procent}"
                                                                TickFrequency="0.1"
                                                                IsSnapToTickEnabled="True"
                                                                ValueChanged="Slider_ValueChanged"
                                                                Height="22"
                                                                VerticalAlignment="Center"/>

                                                        <Border Grid.Column="2"
                                                                Background="#8B4513"
                                                                CornerRadius="3"
                                                                Padding="8,4"
                                                                Margin="8,0,0,0">
                                                            <TextBlock TextAlignment="Center"
                                                                       FontWeight="Bold"
                                                                       FontSize="11"
                                                                       Foreground="White">
                                                                <Run Text="{Binding Procent, StringFormat=F1}"/>
                                                                <Run Text="%"/>
                                                            </TextBlock>
                                                        </Border>
                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Historia zapisanych konfiguracji -->
        <Border Grid.Row="4" 
                BorderBrush="#BDC3C7" 
                BorderThickness="1"
                Margin="10,10,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        Background="#ECF0F1" 
                        Padding="10,8"
                        BorderBrush="#BDC3C7"
                        BorderThickness="0,0,0,1">
                    <TextBlock Text="📋 Historia zapisanych konfiguracji podrobów (najnowsze na górze)" 
                               FontWeight="SemiBold" 
                               FontSize="11"/>
                </Border>

                <DataGrid Grid.Row="1"
                          x:Name="dgKonfiguracje" 
                          Style="{StaticResource DataGridStyle}"
                          ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Data od" 
                                          Binding="{Binding DataOd, StringFormat=yyyy-MM-dd}" 
                                          Width="100"/>

                        <DataGridTextColumn Header="Liczba produktów" 
                                          Binding="{Binding LiczbaProduktow}" 
                                          Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Suma ubytków %" 
                                          Binding="{Binding SumaProcentow, StringFormat=F1}" 
                                          Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#8B4513"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Status" 
                                          Binding="{Binding StatusTekst}" 
                                          Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Produkty w konfiguracji" 
                                          Binding="{Binding Produkty}" 
                                          Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="FontSize" Value="10"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Zmodyfikowano" 
                                          Binding="{Binding DataModyfikacji, StringFormat=yyyy-MM-dd HH:mm}" 
                                          Width="130"/>

                        <DataGridTemplateColumn Header="Akcje" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="✕" 
                                            Width="28" 
                                            Height="24"
                                            Background="#E74C3C"
                                            Foreground="White"
                                            BorderThickness="0"
                                            FontWeight="Bold"
                                            Cursor="Hand"
                                            Click="BtnUsunKonfiguracje_Click"
                                            Tag="{Binding}"
                                            ToolTip="Dezaktywuj"
                                            Margin="2"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Przyciski akcji -->
        <Border Grid.Row="5" Background="#34495E" Padding="15,10">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="💡" 
                               Foreground="White" 
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBlock Foreground="White" 
                               FontSize="10"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap">
                        <Run Text="Podroby i ubytki stanowią typowo 16-25% żywego kurczaka."/>
                        <Run Text="Reszta (75-84%) to tuszka, którą potem dzielisz na A i B." FontStyle="Italic"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Content="🔄 Przywróć domyślne" 
                            Style="{StaticResource ButtonStyle}"
                            Background="#95A5A6"
                            Width="150"
                            Click="BtnPrzywrocDomyslne_Click"
                            ToolTip="Przywraca domyślną konfigurację podrobów"/>
                    <Button Content="💾 Zapisz" 
                            Style="{StaticResource ButtonStyle}"
                            Width="100"
                            Click="BtnZapisz_Click"/>
                    <Button Content="✕ Anuluj" 
                            Style="{StaticResource ButtonStyle}"
                            Background="#7F8C8D"
                            Width="100"
                            Click="BtnAnuluj_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>