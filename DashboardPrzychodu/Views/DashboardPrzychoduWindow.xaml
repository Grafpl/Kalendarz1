<Window x:Class="Kalendarz1.DashboardPrzychodu.Views.DashboardPrzychoduWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:Kalendarz1.DashboardPrzychodu.Converters"
        Title="Dashboard Przychodu Zywca - LIVE"
        Height="900" Width="1400"
        MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#1A1A2E">

    <Window.Resources>
        <!-- KOLORY - Ciemny motyw ZPSP -->
        <Color x:Key="BackgroundDark">#1A1A2E</Color>
        <Color x:Key="BackgroundMedium">#16213E</Color>
        <Color x:Key="BackgroundLight">#0F3460</Color>
        <Color x:Key="CardBackground">#1E2A47</Color>

        <Color x:Key="AccentOrange">#E94560</Color>
        <Color x:Key="AccentBlue">#00D9FF</Color>
        <Color x:Key="AccentGreen">#4ECCA3</Color>

        <Color x:Key="StatusOK">#4ECCA3</Color>
        <Color x:Key="StatusWarning">#FFB347</Color>
        <Color x:Key="StatusError">#E94560</Color>
        <Color x:Key="StatusPending">#94A3B8</Color>

        <Color x:Key="TextPrimary">#FFFFFF</Color>
        <Color x:Key="TextSecondary">#94A3B8</Color>
        <Color x:Key="BorderColor">#2D3A5C</Color>

        <!-- BRUSHE -->
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
        <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{StaticResource BackgroundMedium}"/>
        <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
        <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}"/>
        <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreen}"/>
        <SolidColorBrush x:Key="AccentOrangeBrush" Color="{StaticResource AccentOrange}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="StatusOKBrush" Color="{StaticResource StatusOK}"/>
        <SolidColorBrush x:Key="StatusWarningBrush" Color="{StaticResource StatusWarning}"/>
        <SolidColorBrush x:Key="StatusErrorBrush" Color="{StaticResource StatusError}"/>

        <!-- KONWERTERY -->
        <conv:StatusToBackgroundConverter x:Key="StatusToBackgroundConverter"/>
        <conv:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <conv:OdchylenieToColorConverter x:Key="OdchylenieToColorConverter"/>
        <conv:OdchylenieToIconConverter x:Key="OdchylenieToIconConverter"/>
        <conv:StatusToIconConverter x:Key="StatusToIconConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:DecimalToFormattedConverter x:Key="DecimalToFormattedConverter"/>
        <conv:PercentToWidthConverter x:Key="PercentToWidthConverter"/>
        <conv:PercentToColorConverter x:Key="PercentToColorConverter"/>
        <conv:NullToDashConverter x:Key="NullToDashConverter"/>

        <!-- STYL KARTY -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.3" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- STYL KAFELKA Z LICZBĄ -->
        <Style x:Key="NumberTileStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="MinWidth" Value="180"/>
        </Style>

        <!-- DUŻA LICZBA -->
        <Style x:Key="BigNumberStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- MAŁA ETYKIETA -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <!-- NAGŁÓWEK SEKCJI -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource AccentBlueBrush}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- STYL PRZYCISKU -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1A4A8C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0D3A6C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PRZYCISK AKCENT -->
        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource AccentBlueBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00B8D9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0097A7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- STYL WYSZUKIWARKI -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- STYL DATEPICKER -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- STYL DATAGRID -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="#0A0F1A"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="RowHeight" Value="45"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <!-- STYL NAGŁÓWKA KOLUMNY -->
        <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- STYL KOMÓRKI -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2A4A7A"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- STYL WIERSZA -->
        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A2A4A"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2A4A7A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NAGŁÓWEK -->
        <Border Grid.Row="0" Padding="25,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#0F3460" Offset="0"/>
                    <GradientStop Color="#16213E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Tytuł -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="PRZYCHOD ZYWCA" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    <Border Background="{StaticResource AccentGreenBrush}" CornerRadius="4" Padding="8,4" Margin="15,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="LIVE" FontSize="11" FontWeight="Bold" Foreground="#1A1A2E"/>
                    </Border>
                </StackPanel>

                <!-- Kontrolki -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- DatePicker -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Data:" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <DatePicker x:Name="dpData"
                                    SelectedDate="{x:Static sys:DateTime.Today}"
                                    Style="{StaticResource ModernDatePicker}"
                                    Width="130"
                                    xmlns:sys="clr-namespace:System;assembly=mscorlib"/>
                    </StackPanel>

                    <!-- Wyszukiwarka -->
                    <TextBox x:Name="txtSearch"
                             Width="200"
                             Margin="0,0,15,0">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource SearchBoxStyle}">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush AlignmentX="Left" Stretch="None">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="Szukaj hodowcy..." Foreground="#5A6A7A" Margin="12,0,0,0"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Przycisk odśwież -->
                    <Button x:Name="btnRefresh" Style="{StaticResource AccentButton}" Margin="0,0,15,0" Click="BtnRefresh_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Odswiez" FontSize="13"/>
                        </StackPanel>
                    </Button>

                    <!-- Timer info -->
                    <Border Background="{StaticResource BackgroundMediumBrush}" CornerRadius="6" Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="txtAutoRefresh" Text="Auto: 30s" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- GŁÓWNA ZAWARTOŚĆ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- PODSUMOWANIE DNIA -->
                <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Nagłówek sekcji -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="PODSUMOWANIE DNIA" Style="{StaticResource SectionHeaderStyle}"/>
                            <TextBlock x:Name="txtDataDisplay" Text="" Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="14" VerticalAlignment="Center" Margin="15,0,0,0"/>
                        </StackPanel>

                        <!-- Kafelki statystyk -->
                        <UniformGrid Grid.Row="1" Columns="5" Margin="0,0,0,25">
                            <!-- PLANOWANE -->
                            <Border Style="{StaticResource NumberTileStyle}" Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="PLANOWANE" Style="{StaticResource LabelStyle}" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="txtKgPlan" Text="0" Style="{StaticResource BigNumberStyle}"/>
                                    <TextBlock Text="kg" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock x:Name="txtSztPlan" Text="0 szt" Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="13" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- ZWAŻONE -->
                            <Border Style="{StaticResource NumberTileStyle}" Margin="5,0">
                                <Border.Background>
                                    <SolidColorBrush Color="#0A4A3A"/>
                                </Border.Background>
                                <StackPanel>
                                    <TextBlock Text="ZWAZZONE" Style="{StaticResource LabelStyle}" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="txtKgZwazone" Text="0" Style="{StaticResource BigNumberStyle}"
                                               Foreground="{StaticResource AccentGreenBrush}"/>
                                    <TextBlock Text="kg" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock x:Name="txtSztZwazone" Text="0 szt" Foreground="{StaticResource AccentGreenBrush}"
                                               FontSize="13" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- POZOSTAŁO -->
                            <Border Style="{StaticResource NumberTileStyle}" Margin="5,0">
                                <StackPanel>
                                    <TextBlock Text="POZOSTALO" Style="{StaticResource LabelStyle}" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="txtKgPozostalo" Text="0" Style="{StaticResource BigNumberStyle}"
                                               Foreground="{StaticResource StatusWarningBrush}"/>
                                    <TextBlock Text="kg" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock x:Name="txtSztPozostalo" Text="0 szt" Foreground="{StaticResource StatusWarningBrush}"
                                               FontSize="13" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- ODCHYLENIE -->
                            <Border Style="{StaticResource NumberTileStyle}" Margin="5,0">
                                <StackPanel>
                                    <TextBlock Text="ODCHYLENIE" Style="{StaticResource LabelStyle}" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="txtOdchylenie" Text="-" Style="{StaticResource BigNumberStyle}" FontSize="24"/>
                                    <TextBlock x:Name="txtOdchylenieProc" Text="" Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- REALIZACJA -->
                            <Border Style="{StaticResource NumberTileStyle}" Margin="10,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="REALIZACJA" Style="{StaticResource LabelStyle}" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="txtRealizacja" Text="0%" Style="{StaticResource BigNumberStyle}" FontSize="28"/>
                                    <Grid Margin="0,10,0,0" Height="8">
                                        <Border Background="#2A3A5A" CornerRadius="4"/>
                                        <Border x:Name="progressBar" Background="{StaticResource AccentGreenBrush}"
                                                CornerRadius="4" HorizontalAlignment="Left" Width="0"/>
                                    </Grid>
                                    <TextBlock x:Name="txtDostawyStatus" Text="0/0 dostaw" Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="11" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>

                        <!-- Prognoza produkcji -->
                        <Border Grid.Row="2" Background="{StaticResource BackgroundMediumBrush}" CornerRadius="8" Padding="20,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="PROGNOZA TUSZEK (z juz zwazonych):"
                                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"
                                           VerticalAlignment="Center" Margin="0,0,30,0"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <!-- Tuszki ogółem -->
                                    <Border Background="{StaticResource BackgroundLightBrush}" CornerRadius="6" Padding="15,8" Margin="0,0,15,0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Tuszki:" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock x:Name="txtPrognozaTuszek" Text="0 kg" FontWeight="SemiBold" Foreground="White" FontSize="14"/>
                                            <TextBlock Text=" (78%)" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Klasa A -->
                                    <Border Background="#0A4A3A" CornerRadius="6" Padding="15,8" Margin="0,0,15,0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Klasa A:" Foreground="{StaticResource AccentGreenBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock x:Name="txtPrognozaA" Text="0 kg" FontWeight="SemiBold" Foreground="{StaticResource AccentGreenBrush}" FontSize="14"/>
                                            <TextBlock Text=" (80%)" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Klasa B -->
                                    <Border Background="#4A3A0A" CornerRadius="6" Padding="15,8">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Klasa B:" Foreground="{StaticResource StatusWarningBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock x:Name="txtPrognozaB" Text="0 kg" FontWeight="SemiBold" Foreground="{StaticResource StatusWarningBrush}" FontSize="14"/>
                                            <TextBlock Text=" (20% - krojenie)" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- TABELA DOSTAW -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="10,0,10,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Nagłówek tabeli -->
                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="SZCZEGOLY DOSTAW" Style="{StaticResource SectionHeaderStyle}"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock x:Name="txtLiczbaWynikow" Text="Wyniki: 0"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" FontSize="13"/>
                            </StackPanel>
                        </Grid>

                        <!-- DataGrid -->
                        <DataGrid x:Name="dgDostawy"
                                  Grid.Row="1"
                                  Style="{StaticResource ModernDataGrid}"
                                  ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                                  CellStyle="{StaticResource DataGridCellStyle}"
                                  RowStyle="{StaticResource DataGridRowStyle}"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                  EnableRowVirtualization="True"
                                  MinHeight="300">
                            <DataGrid.Columns>
                                <!-- Nr kursu -->
                                <DataGridTextColumn Header="LP" Binding="{Binding NrKursu}" Width="50">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Hodowca -->
                                <DataGridTextColumn Header="HODOWCA" Binding="{Binding Hodowca}" Width="*" MinWidth="180">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Plan kg -->
                                <DataGridTextColumn Header="PLAN [kg]" Binding="{Binding KgPlan, StringFormat=N0}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Rzeczywiste kg -->
                                <DataGridTemplateColumn Header="RZECZ. [kg]" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding KgRzeczywiste, StringFormat=N0}"
                                                       VerticalAlignment="Center" HorizontalAlignment="Right"
                                                       Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Odchylenie -->
                                <DataGridTemplateColumn Header="ODCHYLENIE" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding OdchylenieDisplay}"
                                                           Foreground="{Binding Poziom, Converter={StaticResource OdchylenieToColorConverter}}"
                                                           Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Poziom, Converter={StaticResource OdchylenieToIconConverter}}" FontSize="12"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Średnia waga -->
                                <DataGridTemplateColumn Header="SR. WAGA" Width="90">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <TextBlock.Text>
                                                    <Binding Path="SredniaWagaRzeczywistaCalc" Converter="{StaticResource NullToDashConverter}"/>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Status -->
                                <DataGridTemplateColumn Header="STATUS" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Left"
                                                    Background="{Binding Status, Converter={StaticResource StatusToBackgroundConverter}}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding StatusIcon}" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding StatusText}"
                                                               Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                                               FontWeight="SemiBold" FontSize="12"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Przyjazd -->
                                <DataGridTextColumn Header="PRZYJAZD" Binding="{Binding PrzyjazdDisplay}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Kto ważył -->
                                <DataGridTextColumn Header="WAZYL" Binding="{Binding KtoWazyl}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Legenda -->
                        <Border Grid.Row="2" Background="{StaticResource BackgroundMediumBrush}" CornerRadius="6" Padding="15,10" Margin="0,15,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Legenda:" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,20,0" VerticalAlignment="Center"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,25,0">
                                    <TextBlock Text="OK (+-2%)" Foreground="{StaticResource StatusOKBrush}" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,25,0">
                                    <TextBlock Text="Uwaga (+-5%)" Foreground="{StaticResource StatusWarningBrush}" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Problem (>5%)" Foreground="{StaticResource StatusErrorBrush}" FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- STOPKA -->
        <Border Grid.Row="2" Background="{StaticResource BackgroundMediumBrush}" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Przyciski akcji -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="btnExportExcel" Style="{StaticResource ModernButton}" Margin="0,0,10,0" Click="BtnExportExcel_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Eksport Excel" FontSize="13"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnPrint" Style="{StaticResource ModernButton}" Margin="0,0,10,0" Click="BtnPrint_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Drukuj raport" FontSize="13"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnDiagnose" Style="{StaticResource ModernButton}" Click="BtnDiagnose_Click"
                            Background="#8B0000" ToolTip="Uruchom diagnostykę SQL - pokazuje szczegóły błędów">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="DIAGNOSTYKA" FontSize="13" Foreground="#FF6B6B"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Info o ostatniej aktualizacji -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Ostatnia aktualizacja: " Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                    <TextBlock x:Name="txtLastUpdate" Text="-" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                    <TextBlock Text="  |  Auto-odswiezanie: CO 30 SEKUND" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="15,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- OVERLAY ŁADOWANIA -->
        <Border x:Name="loadingOverlay" Grid.RowSpan="3" Background="#CC1A1A2E" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="{StaticResource AccentBlueBrush}"/>
                <TextBlock x:Name="txtLoadingMessage" Text="Ladowanie danych..." Foreground="White" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,15,0,0"/>
            </StackPanel>
        </Border>

        <!-- OVERLAY BŁĘDU -->
        <Border x:Name="errorOverlay" Grid.RowSpan="3" Background="#CC1A1A2E" Visibility="Collapsed">
            <Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="12" Padding="40,30"
                    HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="500">
                <StackPanel>
                    <TextBlock Text="Blad polaczenia" FontSize="20" FontWeight="Bold" Foreground="{StaticResource StatusErrorBrush}"
                               HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <TextBlock x:Name="txtErrorMessage" Text="" Foreground="{StaticResource TextSecondaryBrush}"
                               TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,20"/>
                    <Button Content="Sprobuj ponownie" Style="{StaticResource AccentButton}"
                            HorizontalAlignment="Center" Click="BtnRetry_Click"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
