<Window x:Class="Kalendarz1.ProdukcjaPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Panel Produkcja" 
        WindowState="Maximized" 
        WindowStyle="None"
        Background="#1C1E26">

    <Window.Resources>
        <Style x:Key="TopButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="70"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#787878"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#969696"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CustomDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#2D2F3E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowBackground" Value="#373946"/>
            <Setter Property="AlternatingRowBackground" Value="#32343F"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="RowHeight" Value="35"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#464858"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" 
                                              Margin="5,2"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom style for ComboBox dropdown items -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#3A3C48"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#555A8C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#282A32" CornerRadius="5">
            <Grid>
                <StackPanel Margin="16,10,0,0">
                    <TextBlock x:Name="lblData" 
                               FontSize="30" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock x:Name="lblUser" 
                               FontSize="11" 
                               FontStyle="Italic" 
                               Foreground="LightGray" 
                               Margin="0,10,0,0"/>
                    <TextBlock x:Name="lblStats" 
                               FontSize="12" 
                               FontWeight="Bold" 
                               Foreground="Khaki" 
                               Margin="300,-20,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
                            Margin="320,50,0,0" 
                            VerticalAlignment="Top">
                    <TextBlock Text="Towar:" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <ComboBox x:Name="cbFiltrProdukt" 
                              Width="300" 
                              Height="40"
                              FontSize="16"
                              Background="#2D2F3E"
                              BorderBrush="#787878"
                              Foreground="White"/>
                    <CheckBox x:Name="cbPokazWydaniaSymfonia"
                              Content="Pokaż wydania Symfonia"
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="20,0,0,0"
                              Click="cbPokazWydaniaSymfonia_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,28,15,0">
                    <Button x:Name="btnPrev" 
                            Content="◀" 
                            Style="{StaticResource TopButtonStyle}"
                            Background="#3C468E" 
                            Margin="0,0,15,0"
                            Click="btnPrev_Click"/>
                    <Button x:Name="btnNext" 
                            Content="▶" 
                            Style="{StaticResource TopButtonStyle}"
                            Background="#3C468E" 
                            Margin="0,0,15,0"
                            Click="btnNext_Click"/>
                    <Button x:Name="btnToday" 
                            Content="Dziś" 
                            Style="{StaticResource TopButtonStyle}"
                            Background="#3C468E" 
                            Margin="0,0,15,0"
                            Click="btnToday_Click"/>
                    <Button x:Name="btnRefresh" 
                            Content="Odśwież" 
                            Style="{StaticResource TopButtonStyle}"
                            Background="#376EA0" 
                            Margin="0,0,15,0"
                            Click="btnRefresh_Click"/>
                    <Button x:Name="btnLive" 
                            Content="Live" 
                            Style="{StaticResource TopButtonStyle}"
                            Background="#555A8C" 
                            Margin="0,0,15,0"
                            Click="btnLive_Click"/>
                    <Button x:Name="btnUndo" 
                            Content="Cofnij" 
                            Style="{StaticResource TopButtonStyle}"
                            Background="#8C643C" 
                            Margin="0,0,15,0"
                            Click="btnUndo_Click"/>
                    <Button x:Name="btnSaveNotes" 
                            Content="Zapisz not."
                            Style="{StaticResource TopButtonStyle}"
                            Background="#5F5F5F" 
                            Margin="0,0,15,0"
                            Click="btnSaveNotes_Click"/>
                    <Button x:Name="btnZrealizowano" 
                            Content="ZREAL."
                            Style="{StaticResource TopButtonStyle}"
                            Width="120"
                            FontSize="15"
                            Background="#19874B" 
                            Margin="0,0,15,0"
                            Click="btnZrealizowano_Click"/>
                    <Button x:Name="btnClose" 
                            Content="X" 
                            Style="{StaticResource TopButtonStyle}"
                            Background="#AA2832" 
                            Click="btnClose_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="55*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60*"/>
                    <RowDefinition Height="40*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#22242E" CornerRadius="5" Margin="0,0,0,5">
                    <DataGrid x:Name="dgvIn0ESumy" 
                              Style="{StaticResource CustomDataGridStyle}"
                              IsReadOnly="True"
                              RowHeight="35"
                              Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Towar" Binding="{Binding Towar}" Width="*"/>
                            <DataGridTextColumn Header="Kg" Binding="{Binding Kg, StringFormat=N0}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <Border Grid.Row="1" Background="#2D2F3A" CornerRadius="5">
                    <Grid>
                        <TextBlock Text="Tuszek poj/palety" 
                                   Foreground="LightSkyBlue" 
                                   FontWeight="Bold" 
                                   FontSize="9.5"
                                   Margin="5,5,0,0" 
                                   VerticalAlignment="Top"/>
                        <DataGrid x:Name="dgvPojTuszki" 
                                  Style="{StaticResource CustomDataGridStyle}"
                                  IsReadOnly="True"
                                  RowHeight="28"
                                  Margin="5,25,5,5">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Typ" Binding="{Binding Typ}" Width="*"/>
                                <DataGridTextColumn Header="Palety" Binding="{Binding Palety}" Width="Auto"/>
                                <DataGridTextColumn Header="Udział" Binding="{Binding Udział}" Width="Auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Column="1" Background="#22242E" CornerRadius="5" Margin="5,0">
                <DataGrid x:Name="dgvZamowienia" 
                          Style="{StaticResource CustomDataGridStyle}"
                          SelectionChanged="dgvZamowienia_SelectionChanged"
                          MouseDoubleClick="dgvZamowienia_MouseDoubleClick"
                          IsReadOnly="True"
                          RowHeight="45"
                          Margin="5">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="45"/>
                            <Setter Property="Background" Value="{Binding RowColor}"/>
                            <Setter Property="Foreground" Value="{Binding TextColor}"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nazwa Klienta" 
                                            Binding="{Binding Klient}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="Ilość (kg)" 
                                            Binding="{Binding TotalIlosc, StringFormat=N0}" 
                                            Width="Auto"/>
                        <DataGridTextColumn Header="Wyjazd o" 
                                            Binding="{Binding CzasWyjazdDisplay}" 
                                            Width="Auto">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="Orange"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Handlowiec" 
                                            Binding="{Binding Handlowiec}" 
                                            Width="Auto"/>
                        <DataGridTextColumn Header="Status" 
                                            Binding="{Binding Status}" 
                                            Width="Auto"/>
                        <DataGridTextColumn Header="Data utworzenia" 
                                            Binding="{Binding DataUtworzenia, StringFormat=yyyy-MM-dd HH:mm}" 
                                            Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Grid Grid.Column="2" Margin="5,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#262832" CornerRadius="5" Margin="0,0,0,5">
                    <DataGrid x:Name="dgvPozycje" 
                              Style="{StaticResource CustomDataGridStyle}"
                              IsReadOnly="True"
                              RowHeight="32"
                              Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Produkt" Binding="{Binding Produkt}" Width="2*"/>
                            <DataGridTextColumn Header="Zamówiono" Binding="{Binding [Zamówiono (kg)], StringFormat=N0}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="0,0,5,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Wydano" Binding="{Binding [Wydano (kg)], StringFormat=N0}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="0,0,5,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Różnica" Binding="{Binding [Różnica (kg)], StringFormat=N0}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="0,0,5,0"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <TextBlock Grid.Row="1" 
                           Text="Notatka zamówienia" 
                           Background="#323440"
                           Foreground="Yellow" 
                           FontWeight="Bold" 
                           FontSize="12"
                           Padding="5"/>
                <Border Grid.Row="2" Background="#343642" CornerRadius="5" Margin="0,5">
                    <TextBox x:Name="txtUwagi" 
                             Background="Transparent"
                             Foreground="White"
                             BorderThickness="0"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             FontSize="14"
                             Margin="5"/>
                </Border>

                <TextBlock Grid.Row="3" 
                           Text="Notatka produkcji" 
                           Background="#323440"
                           Foreground="LightBlue" 
                           FontWeight="Bold" 
                           FontSize="12"
                           Padding="5"/>
                <Border Grid.Row="4" Background="#343642" CornerRadius="5" Margin="0,5,0,0">
                    <TextBox x:Name="txtNotatkiTransportu" 
                             Background="Transparent"
                             Foreground="White"
                             BorderThickness="0"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             FontSize="14"
                             Margin="5"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>

