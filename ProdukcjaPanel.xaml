<Window x:Class="Kalendarz1.ProdukcjaPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Panel Produkcja" 
        WindowState="Maximized" 
        WindowStyle="None"
        Background="#1C1E26"
        FontFamily="Segoe UI">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <!-- Style for the circular progress bar -->
        <Style x:Key="CircularProgressBar" TargetType="ProgressBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Ellipse Stroke="#444" StrokeThickness="10" />
                            <Path x:Name="path" Stroke="{TemplateBinding Foreground}" StrokeThickness="10" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathGeometry.Figures>
                                            <PathFigure StartPoint="50,0">
                                                <ArcSegment x:Name="arc" Size="50,50" SweepDirection="Clockwise" IsLargeArc="False"/>
                                            </PathFigure>
                                        </PathGeometry.Figures>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for the top buttons - made larger for touch screens -->
        <Style x:Key="TopButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="70"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#787878"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#969696"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- General Style for DataGrids -->
        <Style x:Key="CustomDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#2D2F3E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowBackground" Value="#373946"/>
            <Setter Property="AlternatingRowBackground" Value="#32343F"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#464858"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" 
                                              Margin="5,2"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom style for ComboBox dropdown items -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#3A3C48"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#555A8C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for TabControl Tabs - made larger for touch -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#282A32"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="35,20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="#787878"
                                BorderThickness="1,1,1,0"
                                CornerRadius="8,8,0,0"
                                Margin="0,0,-1,0">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3C468E"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4A56AD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top Control Panel -->
            <RowDefinition Height="*"/>
            <!-- Tabbed Content -->
        </Grid.RowDefinitions>

        <!-- TOP CONTROL PANEL - kompaktowy design -->
        <Border Grid.Row="0" Background="#282A32" CornerRadius="6" Padding="10,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Górny rząd: Data, Progress, Legenda+Suma, Przyciski -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Data + Nawigacja + Checkbox -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">
                        <TextBlock x:Name="lblData" FontSize="22" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,0">
                            <Button x:Name="btnPrev" Content="◀" Width="55" Height="40" FontSize="20" Background="#3C468E" Foreground="White" BorderThickness="0" Margin="0,0,5,0" Click="btnPrev_Click" Cursor="Hand"/>
                            <Button x:Name="btnToday" Content="Dziś" Width="70" Height="40" FontSize="15" FontWeight="Bold" Background="#3C468E" Foreground="White" BorderThickness="0" Margin="0,0,5,0" Click="btnToday_Click" Cursor="Hand"/>
                            <Button x:Name="btnNext" Content="▶" Width="55" Height="40" FontSize="20" Background="#3C468E" Foreground="White" BorderThickness="0" Click="btnNext_Click" Cursor="Hand"/>
                        </StackPanel>
                        <CheckBox x:Name="cbPokazWydaniaSymfonia" Content="Pokaż Symfonia" Foreground="White" FontSize="11" HorizontalAlignment="Center" Margin="0,6,0,0" Click="cbPokazWydaniaSymfonia_Click"/>
                    </StackPanel>

                    <!-- Progress - zrealizowano / wydano -->
                    <Border Grid.Column="1" Background="#1E1E1E" CornerRadius="5" Padding="12,8" Margin="0,0,20,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,20,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="lblZrealizowanoCount" Text="0" Foreground="#4CAF50" FontSize="20" FontWeight="Bold"/>
                                    <TextBlock Text=" zreal." Foreground="White" FontSize="12" VerticalAlignment="Bottom" Margin="3,0,0,2"/>
                                </StackPanel>
                                <TextBlock x:Name="lblZrealizowanoPercent" Text="0%" Foreground="Gray" FontSize="11"/>
                            </StackPanel>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="lblWydanoCount" Text="0" Foreground="#2196F3" FontSize="20" FontWeight="Bold"/>
                                    <TextBlock Text=" wyd." Foreground="White" FontSize="12" VerticalAlignment="Bottom" Margin="3,0,0,2"/>
                                </StackPanel>
                                <TextBlock x:Name="lblWydanoPercent" Text="0%" Foreground="Gray" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Legenda + przyciski kart -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <Border Background="#2A2A2A" CornerRadius="4" Padding="8,3" Margin="0,0,0,4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠️ Strefa" Foreground="#FF6B6B" FontSize="10" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="🔪 Halal" Foreground="#4DB6AC" FontSize="10" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="🎞️ Folia" Foreground="#64B5F6" FontSize="10" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="📦 40/paleta" Foreground="#999999" FontSize="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btnTabZamowienia" Content="📋 Zamówienia" Height="28" Padding="10,0" FontSize="11" FontWeight="Bold" Background="#3C468E" Foreground="White" BorderThickness="0" Margin="0,0,3,0" Click="btnTab_Click" Tag="0" Cursor="Hand"/>
                            <Button x:Name="btnTabPlanDnia" Content="📋 Plan dnia" Height="28" Padding="10,0" FontSize="11" FontWeight="Bold" Background="#282A32" Foreground="White" BorderThickness="0" Margin="0,0,3,0" Click="btnTab_Click" Tag="1" Cursor="Hand"/>
                            <Button x:Name="btnTabStatystyki" Content="📊 Statystyki" Height="28" Padding="10,0" FontSize="11" FontWeight="Bold" Background="#282A32" Foreground="White" BorderThickness="0" Margin="0,0,3,0" Click="btnTab_Click" Tag="2" Cursor="Hand"/>
                            <Button x:Name="btnTabHistoria" Content="📋 Historia" Height="28" Padding="10,0" FontSize="11" FontWeight="Bold" Background="#282A32" Foreground="White" BorderThickness="0" Click="btnTab_Click" Tag="3" Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Σ kg + Filtr towarów + Przyciski akcji -->
                    <DockPanel Grid.Column="3" VerticalAlignment="Center" Margin="10,0,0,0">
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                            <StackPanel Orientation="Vertical" Margin="5,0,5,0">
                                <Button x:Name="btnRefresh" Content="🔄 Odśwież" Height="35" Padding="15,0" FontSize="13" FontWeight="Bold" Background="#376EA0" Foreground="White" BorderThickness="0" Click="btnRefresh_Click" Cursor="Hand"/>
                                <Button x:Name="btnZrealizowano" Content="✓ ZREALIZOWANO" Height="35" Padding="15,0" FontSize="13" FontWeight="Bold" Background="#19874B" Foreground="White" BorderThickness="0" Margin="0,3,0,0" Click="btnZrealizowano_Click" Cursor="Hand"/>
                            </StackPanel>
                            <Button x:Name="btnClose" Content="✕" Width="50" Height="45" FontSize="22" FontWeight="Bold" Background="#AA2832" Foreground="White" BorderThickness="0" Click="btnClose_Click" Cursor="Hand"/>
                        </StackPanel>
                        <Border DockPanel.Dock="Left" Background="#1A3A5A" CornerRadius="4" Padding="10,5" Margin="0,0,5,0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Σ " Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                                <TextBlock x:Name="lblFilteredSum" Text="0" Foreground="#FFD700" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                                <TextBlock Text=" kg" Foreground="White" FontSize="12" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#1A3A5A" CornerRadius="4" Padding="4,2" Margin="5,0" VerticalAlignment="Center">
                            <WrapPanel x:Name="pnlProductButtons" Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- Przyciski towarów zostaną dodane dynamicznie -->
                            </WrapPanel>
                        </Border>
                    </DockPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- TABBED CONTENT AREA - ukryte nagłówki kart (sterowane przyciskami z góry) -->
        <TabControl x:Name="tabMain" Grid.Row="1" Margin="0,2,0,0" Background="#1C1E26" BorderThickness="0">
            <TabControl.ItemContainerStyle>
                <Style TargetType="TabItem">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Style>
            </TabControl.ItemContainerStyle>
            <!-- TAB 1: ZAMÓWIENIA -->
            <TabItem Header="📋 Zamówienia">
                <Grid Background="#1C1E26">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#22242E" CornerRadius="5" Margin="0,0,5,0">
                        <DataGrid x:Name="dgvZamowienia1" ItemsSource="{Binding ZamowieniaList1}" Style="{StaticResource CustomDataGridStyle}" SelectionChanged="dgvZamowienia1_SelectionChanged" MouseDoubleClick="dgvZamowienia_MouseDoubleClick" IsReadOnly="True" RowHeight="45" Margin="5" FontSize="16">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="Background" Value="{Binding RowColor}"/>
                                    <Setter Property="Foreground" Value="{Binding TextColor}"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Klient" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="⚠️" Foreground="#FF6B6B" FontSize="13" Margin="0,0,2,0" VerticalAlignment="Center" Visibility="{Binding HasStrefa, Converter={StaticResource BoolToVis}}"/>
                                                <TextBlock Text="🔪" Foreground="#4DB6AC" FontSize="13" Margin="0,0,2,0" VerticalAlignment="Center" Visibility="{Binding HasHalal, Converter={StaticResource BoolToVis}}"/>
                                                <TextBlock Text="🎞️" Foreground="#64B5F6" FontSize="13" Margin="0,0,2,0" VerticalAlignment="Center" Visibility="{Binding HasFolia, Converter={StaticResource BoolToVis}}"/>
                                                <TextBlock Text="📦" Foreground="#999999" FontSize="13" Margin="0,0,2,0" VerticalAlignment="Center" Visibility="{Binding HasE2, Converter={StaticResource BoolToVis}}"/>
                                                <TextBlock Text="{Binding Klient}" Foreground="{Binding KlientColor}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Kg" Binding="{Binding TotalIlosc, StringFormat=N0}" Width="60"/>
                                <DataGridTextColumn Header="Zreal." Binding="{Binding ZrealizowanoDisplay}" Width="50">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Orange"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Wyjazd" Binding="{Binding CzasWyjazdDisplay}" Width="150">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Orange"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="160">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{Binding StatusColor}"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontSize" Value="12"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <Border Grid.Column="1" Background="#22242E" CornerRadius="5" Margin="5,0,5,0">
                        <DataGrid x:Name="dgvZamowienia2" ItemsSource="{Binding ZamowieniaList2}" Style="{StaticResource CustomDataGridStyle}" SelectionChanged="dgvZamowienia2_SelectionChanged" MouseDoubleClick="dgvZamowienia_MouseDoubleClick" IsReadOnly="True" RowHeight="45" Margin="5" FontSize="16">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="Background" Value="{Binding RowColor}"/>
                                    <Setter Property="Foreground" Value="{Binding TextColor}"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Klient" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="⚠️" Foreground="#FF6B6B" FontSize="13" Margin="0,0,2,0" VerticalAlignment="Center" Visibility="{Binding HasStrefa, Converter={StaticResource BoolToVis}}"/>
                                                <TextBlock Text="🔪" Foreground="#4DB6AC" FontSize="13" Margin="0,0,2,0" VerticalAlignment="Center" Visibility="{Binding HasHalal, Converter={StaticResource BoolToVis}}"/>
                                                <TextBlock Text="🎞️" Foreground="#64B5F6" FontSize="13" Margin="0,0,2,0" VerticalAlignment="Center" Visibility="{Binding HasFolia, Converter={StaticResource BoolToVis}}"/>
                                                <TextBlock Text="📦" Foreground="#999999" FontSize="13" Margin="0,0,2,0" VerticalAlignment="Center" Visibility="{Binding HasE2, Converter={StaticResource BoolToVis}}"/>
                                                <TextBlock Text="{Binding Klient}" Foreground="{Binding KlientColor}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Kg" Binding="{Binding TotalIlosc, StringFormat=N0}" Width="60"/>
                                <DataGridTextColumn Header="Zreal." Binding="{Binding ZrealizowanoDisplay}" Width="50">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Orange"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Wyjazd" Binding="{Binding CzasWyjazdDisplay}" Width="150">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Orange"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="160">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{Binding StatusColor}"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontSize" Value="12"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <Grid Grid.Column="2" Margin="5,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="55*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="25*"/>
                        </Grid.RowDefinitions>
                        <!-- Legenda ikon -->
                        <Border Grid.Row="0" Background="#2A2A2A" CornerRadius="4" Padding="8,5" Margin="0,0,0,5">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="⚠️ Strefa" Foreground="#FF6B6B" FontSize="11" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="🔪 Halal" Foreground="#4DB6AC" FontSize="11" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="🎞️ Folia" Foreground="#64B5F6" FontSize="11" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="📦 40/paleta" Foreground="#999999" FontSize="11" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <!-- Przycisk przyjęcia zmiany - widoczny tylko gdy jest zmiana -->
                        <Button x:Name="btnAcceptChange" Grid.Row="1" Content="✅ Przyjmuję zmianę - zaktualizuj snapshot"
                                Click="btnAcceptChange_Click" Height="35" Margin="0,0,0,5"
                                Background="#B45309" Foreground="White" FontSize="12" FontWeight="Bold"
                                Cursor="Hand" Visibility="Collapsed">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderBrush="Orange" BorderThickness="2">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D97706"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Border Grid.Row="2" Background="#262832" CornerRadius="5" Margin="0,0,0,5">
                            <DataGrid x:Name="dgvPozycje" Style="{StaticResource CustomDataGridStyle}" IsReadOnly="True" RowHeight="60" Margin="5" FontSize="16">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Produkt" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <DockPanel VerticalAlignment="Center">
                                                    <Image Source="{Binding ProduktImg}" Width="48" Height="48" Margin="5,0,0,0" DockPanel.Dock="Right" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                        <TextBlock Text="⚠️" Foreground="#FF6B6B" FontSize="16" Margin="0,0,3,0" VerticalAlignment="Center" Visibility="{Binding Strefa, Converter={StaticResource BoolToVis}}"/>
                                                        <TextBlock Text="🔪" Foreground="#4DB6AC" FontSize="16" Margin="0,0,3,0" VerticalAlignment="Center" Visibility="{Binding Halal, Converter={StaticResource BoolToVis}}"/>
                                                        <TextBlock Text="🎞️" Foreground="#64B5F6" FontSize="16" Margin="0,0,3,0" VerticalAlignment="Center" Visibility="{Binding Folia, Converter={StaticResource BoolToVis}}"/>
                                                        <TextBlock Text="📦" Foreground="#999999" FontSize="16" Margin="0,0,5,0" VerticalAlignment="Center" Visibility="{Binding E2, Converter={StaticResource BoolToVis}}"/>
                                                        <TextBlock Text="{Binding Produkt}" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="16"/>
                                                    </StackPanel>
                                                </DockPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Zam." Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0" FontSize="16" FontWeight="Bold">
                                                    <TextBlock.Text>
                                                        <Binding Path="[Zamówiono (kg)]" StringFormat="{}{0:#,##0} kg" ConverterCulture="pl-PL"/>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                        <TextBlock Grid.Row="3" Text="Notatka zamówienia" Background="#323440" Foreground="Yellow" FontWeight="Bold" FontSize="12" Padding="5,3"/>
                        <Border Grid.Row="4" Background="#343642" CornerRadius="5" Margin="0,3">
                            <TextBox x:Name="txtUwagi" Background="Transparent" Foreground="White" BorderThickness="0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontSize="16" Margin="5"/>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- TAB 2: PLAN DNIA -->
            <TabItem Header="📋 Plan dnia">
                <Grid Background="#1C1E26">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Karty podsumowania na górze -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,15">
                        <Border Background="#1E3A2A" CornerRadius="8" Padding="20,15" Margin="0,0,15,0" MinWidth="160">
                            <StackPanel>
                                <TextBlock Text="PLAN PRZYCHODU" Foreground="#81C784" FontSize="11" FontWeight="Bold"/>
                                <TextBlock x:Name="lblPlanDniaPlan" Text="0" Foreground="White" FontSize="28" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock Text="kg z harmonogramu" Foreground="#81C784" FontSize="10"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#1A237E" CornerRadius="8" Padding="20,15" Margin="0,0,15,0" MinWidth="160">
                            <StackPanel>
                                <TextBlock Text="FAKTYCZNY PRZYCHÓD" Foreground="#90CAF9" FontSize="11" FontWeight="Bold"/>
                                <TextBlock x:Name="lblPlanDniaFakt" Text="0" Foreground="White" FontSize="28" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock Text="kg z produkcji" Foreground="#90CAF9" FontSize="10"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#E65100" CornerRadius="8" Padding="20,15" Margin="0,0,15,0" MinWidth="160">
                            <StackPanel>
                                <TextBlock Text="SUMA ZAMÓWIEŃ" Foreground="#FFCC80" FontSize="11" FontWeight="Bold"/>
                                <TextBlock x:Name="lblPlanDniaZam" Text="0" Foreground="White" FontSize="28" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock Text="kg do realizacji" Foreground="#FFCC80" FontSize="10"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#4A148C" CornerRadius="8" Padding="20,15" Margin="0,0,15,0" MinWidth="160">
                            <StackPanel>
                                <TextBlock Text="SUMA WYDAŃ" Foreground="#CE93D8" FontSize="11" FontWeight="Bold"/>
                                <TextBlock x:Name="lblPlanDniaWyd" Text="0" Foreground="White" FontSize="28" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock Text="kg wydano" Foreground="#CE93D8" FontSize="10"/>
                            </StackPanel>
                        </Border>
                        <Border x:Name="borderBilans" Background="#2E7D32" CornerRadius="8" Padding="20,15" MinWidth="160">
                            <StackPanel>
                                <TextBlock Text="BILANS" Foreground="#A5D6A7" FontSize="11" FontWeight="Bold"/>
                                <TextBlock x:Name="lblPlanDniaBilans" Text="0" Foreground="White" FontSize="28" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock x:Name="lblPlanDniaBilansInfo" Text="nadwyżka/niedobór" Foreground="#A5D6A7" FontSize="10"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Tabela podsumowania produktów -->
                    <Border Grid.Row="1" Background="#22242E" CornerRadius="5" Margin="0,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Background="#1565C0" CornerRadius="5,5,0,0" Padding="12,8">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📊 Podsumowanie produktów - Plan vs Realizacja" Foreground="White" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text=" (Plan = prognoza z harmonogramu, Fakt = dokumenty produkcji)" Foreground="#90CAF9" FontSize="12" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Border>
                            <DataGrid Grid.Row="1" x:Name="dgvPlanDnia" Style="{StaticResource CustomDataGridStyle}" IsReadOnly="True" RowHeight="42" Margin="5" FontSize="14"
                                      ColumnWidth="*" HorizontalScrollBarVisibility="Disabled">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Produkt" Binding="{Binding Produkt}" Width="2*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Plan (kg)" Binding="{Binding Plan, StringFormat=N0}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#81C784"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Margin" Value="0,0,10,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Fakt (kg)" Binding="{Binding Fakt, StringFormat=N0}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#64B5F6"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Margin" Value="0,0,10,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Zamówienia" Binding="{Binding Zamowienia, StringFormat=N0}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#FFCC80"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Margin" Value="0,0,10,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Wydania" Binding="{Binding Wydania, StringFormat=N0}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#CE93D8"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Margin" Value="0,0,10,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Bilans" Binding="{Binding Bilans, StringFormat=N0}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Margin" Value="0,0,10,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="%" Binding="{Binding Procent}" Width="0.7*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#B0BEC5"/>
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- TAB 3: STATYSTYKI -->
            <TabItem Header="📊 Statystyki">
                <Grid Background="#1C1E26">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Karty podsumowania na górze -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,15">
                        <Border Background="#1565C0" CornerRadius="8" Padding="20,15" Margin="0,0,15,0" MinWidth="180">
                            <StackPanel>
                                <TextBlock Text="ZAMÓWIENIA" Foreground="#90CAF9" FontSize="11" FontWeight="Bold"/>
                                <TextBlock x:Name="lblStatZamowienia" Text="0" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock Text="łącznie na dziś" Foreground="#90CAF9" FontSize="11"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#2E7D32" CornerRadius="8" Padding="20,15" Margin="0,0,15,0" MinWidth="180">
                            <StackPanel>
                                <TextBlock Text="ZREALIZOWANE" Foreground="#A5D6A7" FontSize="11" FontWeight="Bold"/>
                                <TextBlock x:Name="lblStatZrealizowane" Text="0" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock x:Name="lblStatZrealProc" Text="0%" Foreground="#A5D6A7" FontSize="11"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#0277BD" CornerRadius="8" Padding="20,15" Margin="0,0,15,0" MinWidth="180">
                            <StackPanel>
                                <TextBlock Text="WYDANE" Foreground="#81D4FA" FontSize="11" FontWeight="Bold"/>
                                <TextBlock x:Name="lblStatWydane" Text="0" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock x:Name="lblStatWydaneProc" Text="0%" Foreground="#81D4FA" FontSize="11"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#6A1B9A" CornerRadius="8" Padding="20,15" Margin="0,0,15,0" MinWidth="180">
                            <StackPanel>
                                <TextBlock Text="SUMA KILOGRAMÓW" Foreground="#CE93D8" FontSize="11" FontWeight="Bold"/>
                                <TextBlock x:Name="lblStatSumaKg" Text="0" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock Text="kg łącznie" Foreground="#CE93D8" FontSize="11"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#E65100" CornerRadius="8" Padding="20,15" MinWidth="180">
                            <StackPanel>
                                <TextBlock Text="ŚREDNIA / ZAMÓWIENIE" Foreground="#FFCC80" FontSize="11" FontWeight="Bold"/>
                                <TextBlock x:Name="lblStatSrednia" Text="0" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock Text="kg średnio" Foreground="#FFCC80" FontSize="11"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Tabele analityczne -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#22242E" CornerRadius="5" Margin="0,0,8,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Background="#1565C0" CornerRadius="5,5,0,0" Padding="12,8">
                                    <TextBlock Text="📦 Przychody wg produktów" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                </Border>
                                <DataGrid Grid.Row="1" x:Name="dgvIn0ESumy" Style="{StaticResource CustomDataGridStyle}" IsReadOnly="True" RowHeight="38" Margin="5" FontSize="13">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Towar" Binding="{Binding Towar}" Width="*"/>
                                        <DataGridTextColumn Header="Kg" Binding="{Binding Kg, StringFormat=N0}" Width="Auto">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>

                        <Border Grid.Column="1" Background="#22242E" CornerRadius="5" Margin="4,0,4,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Background="#6A1B9A" CornerRadius="5,5,0,0" Padding="12,8">
                                    <TextBlock Text="🐔 Tuszki - pojemniki/palety" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                </Border>
                                <DataGrid Grid.Row="1" x:Name="dgvPojTuszki" Style="{StaticResource CustomDataGridStyle}" IsReadOnly="True" RowHeight="38" Margin="5" FontSize="13">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Typ" Binding="{Binding Typ}" Width="*"/>
                                        <DataGridTextColumn Header="Palety" Binding="{Binding Palety}" Width="Auto">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="%" Binding="{Binding Udział}" Width="60">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#CE93D8"/>
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>

                        <Border Grid.Column="2" Background="#22242E" CornerRadius="5" Margin="8,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Background="#E65100" CornerRadius="5,5,0,0" Padding="12,8">
                                    <TextBlock Text="👤 Wyniki handlowców" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                </Border>
                                <DataGrid Grid.Row="1" x:Name="dgvHandlowcyStats" Style="{StaticResource CustomDataGridStyle}" IsReadOnly="True" RowHeight="38" Margin="5" FontSize="13">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Handlowiec" Binding="{Binding Handlowiec}" Width="*"/>
                                        <DataGridTextColumn Header="Zam." Binding="{Binding IloscZamowien}" Width="50">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Kg" Binding="{Binding SumaKg, StringFormat=N0}" Width="80">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="Foreground" Value="#FFCC80"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- TAB 4: HISTORIA REALIZACJI -->
            <TabItem Header="📋 Historia realizacji">
                <Grid Background="#1C1E26">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Nagłówek z filtrem dat -->
                    <Border Grid.Row="0" Background="#262832" Padding="10" Margin="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Zakres dat:" Foreground="White" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker x:Name="dpHistoriaRealizacjiOd" Width="130" Background="#3A3C48" Foreground="White"/>
                            <TextBlock Text=" — " Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                            <DatePicker x:Name="dpHistoriaRealizacjiDo" Width="130" Background="#3A3C48" Foreground="White"/>
                            <Button x:Name="btnLoadHistoriaRealizacji" Content="🔍 Pokaż"
                                    Style="{StaticResource TopButtonStyle}"
                                    Background="#4A7A5A"
                                    Margin="15,0,0,0"
                                    Click="btnLoadHistoriaRealizacji_Click"/>
                            <Button x:Name="btnHistoriaRealizacjiToday" Content="📅 Dziś"
                                    Style="{StaticResource TopButtonStyle}"
                                    Background="#3A5A7A"
                                    Margin="10,0,0,0"
                                    Click="btnHistoriaRealizacjiToday_Click"/>
                            <Button x:Name="btnHistoriaRealizacjiWeek" Content="📆 Tydzień"
                                    Style="{StaticResource TopButtonStyle}"
                                    Background="#3A5A7A"
                                    Margin="10,0,0,0"
                                    Click="btnHistoriaRealizacjiWeek_Click"/>
                            <Button x:Name="btnHistoriaRealizacjiMonth" Content="📆 Miesiąc"
                                    Style="{StaticResource TopButtonStyle}"
                                    Background="#3A5A7A"
                                    Margin="10,0,0,0"
                                    Click="btnHistoriaRealizacjiMonth_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Filtry dodatkowe -->
                    <Border Grid.Row="1" Background="#2A2C38" Padding="10" Margin="5,0,5,5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Kto realizował:" Foreground="White" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <ComboBox x:Name="cmbHistoriaRealizacjiUzytkownik" Width="180" Height="35" FontSize="14"
                                      SelectionChanged="cmbHistoriaRealizacjiFilter_SelectionChanged"/>

                            <TextBlock Text="Klient:" Foreground="White" FontSize="14" VerticalAlignment="Center" Margin="25,0,8,0"/>
                            <ComboBox x:Name="cmbHistoriaRealizacjiKlient" Width="200" Height="35" FontSize="14"
                                      SelectionChanged="cmbHistoriaRealizacjiFilter_SelectionChanged"/>

                            <TextBlock Text="Status:" Foreground="White" FontSize="14" VerticalAlignment="Center" Margin="25,0,8,0"/>
                            <ComboBox x:Name="cmbHistoriaRealizacjiStatus" Width="160" Height="35" FontSize="14"
                                      SelectionChanged="cmbHistoriaRealizacjiFilter_SelectionChanged">
                                <ComboBoxItem Content="Wszystkie" IsSelected="True"/>
                                <ComboBoxItem Content="✅ Zrealizowane"/>
                                <ComboBoxItem Content="⏳ Częściowo"/>
                                <ComboBoxItem Content="📝 Zmodyfikowane"/>
                            </ComboBox>

                            <Button x:Name="btnHistoriaRealizacjiClearFilters" Content="✖ Wyczyść filtry"
                                    Style="{StaticResource TopButtonStyle}"
                                    Background="#5A4A4A"
                                    Margin="25,0,0,0"
                                    Click="btnHistoriaRealizacjiClearFilters_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Tabela historii realizacji -->
                    <Border Grid.Row="2" Background="#262832" CornerRadius="5" Margin="5">
                        <DataGrid x:Name="dgvHistoriaRealizacji"
                                  Style="{StaticResource CustomDataGridStyle}"
                                  IsReadOnly="True"
                                  RowHeight="45"
                                  Margin="5"
                                  AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Data realizacji" Binding="{Binding DataRealizacji, StringFormat=yyyy-MM-dd HH:mm}" Width="140">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#90CAF9"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Klient" Binding="{Binding Klient}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Ilość (kg)" Binding="{Binding IloscKg, StringFormat=N0}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Margin" Value="0,0,10,0"/>
                                            <Setter Property="Foreground" Value="#FFD700"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Kto realizował" Binding="{Binding KtoRealizowal}" Width="150">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#81C784"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Kto akceptował" Binding="{Binding KtoAkceptowal}" Width="150">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#64B5F6"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Status" Binding="{Binding StatusRealizacji}" Width="130">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Uwagi" Binding="{Binding Uwagi}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#B0BEC5"/>
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Podsumowanie -->
                    <Border Grid.Row="3" Background="#1E3A2A" Padding="15" Margin="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Łącznie realizacji: " Foreground="White" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock x:Name="lblHistoriaRealizacjiCount" Text="0" Foreground="#FFD700" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Text="  |  Suma kg: " Foreground="White" FontSize="16" VerticalAlignment="Center" Margin="20,0,0,0"/>
                            <TextBlock x:Name="lblHistoriaRealizacjiSumaKg" Text="0" Foreground="#4CAF50" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Text="  |  Pełne: " Foreground="White" FontSize="16" VerticalAlignment="Center" Margin="20,0,0,0"/>
                            <TextBlock x:Name="lblHistoriaRealizacjiPelne" Text="0" Foreground="#81C784" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Text="  |  Częściowe: " Foreground="White" FontSize="16" VerticalAlignment="Center" Margin="20,0,0,0"/>
                            <TextBlock x:Name="lblHistoriaRealizacjiCzesciowe" Text="0" Foreground="#FFCC80" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

