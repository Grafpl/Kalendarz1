<Window x:Class="Kalendarz1.ProdukcjaPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Panel Produkcja" 
        WindowState="Maximized" 
        WindowStyle="None"
        Background="#1C1E26"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Style for the circular progress bar -->
        <Style x:Key="CircularProgressBar" TargetType="ProgressBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Ellipse Stroke="#444" StrokeThickness="10" />
                            <Path x:Name="path" Stroke="{TemplateBinding Foreground}" StrokeThickness="10" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathGeometry.Figures>
                                            <PathFigure StartPoint="50,0">
                                                <ArcSegment x:Name="arc" Size="50,50" SweepDirection="Clockwise" IsLargeArc="False"/>
                                            </PathFigure>
                                        </PathGeometry.Figures>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for the top buttons - made larger for touch screens -->
        <Style x:Key="TopButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="70"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#787878"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#969696"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- General Style for DataGrids -->
        <Style x:Key="CustomDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#2D2F3E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowBackground" Value="#373946"/>
            <Setter Property="AlternatingRowBackground" Value="#32343F"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#464858"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" 
                                              Margin="5,2"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom style for ComboBox dropdown items -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#3A3C48"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#555A8C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for TabControl Tabs - made larger for touch -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#282A32"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="35,20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="#787878"
                                BorderThickness="1,1,1,0"
                                CornerRadius="8,8,0,0"
                                Margin="0,0,-1,0">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3C468E"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4A56AD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top Control Panel -->
            <RowDefinition Height="*"/>
            <!-- Tabbed Content -->
        </Grid.RowDefinitions>

        <!-- TOP CONTROL PANEL - kompaktowy design -->
        <Border Grid.Row="0" Background="#282A32" CornerRadius="6" Padding="10,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Górny rząd: Data, Progress, Filtr, Legenda -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Data + Nawigacja + Checkbox -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">
                        <TextBlock x:Name="lblData" FontSize="22" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,0">
                            <Button x:Name="btnPrev" Content="◀" Width="55" Height="40" FontSize="20" Background="#3C468E" Foreground="White" BorderThickness="0" Margin="0,0,5,0" Click="btnPrev_Click" Cursor="Hand"/>
                            <Button x:Name="btnToday" Content="Dziś" Width="70" Height="40" FontSize="15" FontWeight="Bold" Background="#3C468E" Foreground="White" BorderThickness="0" Margin="0,0,5,0" Click="btnToday_Click" Cursor="Hand"/>
                            <Button x:Name="btnNext" Content="▶" Width="55" Height="40" FontSize="20" Background="#3C468E" Foreground="White" BorderThickness="0" Click="btnNext_Click" Cursor="Hand"/>
                        </StackPanel>
                        <CheckBox x:Name="cbPokazWydaniaSymfonia" Content="Pokaż Symfonia" Foreground="White" FontSize="11" HorizontalAlignment="Center" Margin="0,6,0,0" Click="cbPokazWydaniaSymfonia_Click"/>
                    </StackPanel>

                    <!-- Progress - zrealizowano / wydano -->
                    <Border Grid.Column="1" Background="#1E1E1E" CornerRadius="5" Padding="12,8" Margin="0,0,20,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,20,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="lblZrealizowanoCount" Text="0" Foreground="#4CAF50" FontSize="20" FontWeight="Bold"/>
                                    <TextBlock Text=" zreal." Foreground="White" FontSize="12" VerticalAlignment="Bottom" Margin="3,0,0,2"/>
                                </StackPanel>
                                <TextBlock x:Name="lblZrealizowanoPercent" Text="0%" Foreground="Gray" FontSize="11"/>
                            </StackPanel>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="lblWydanoCount" Text="0" Foreground="#2196F3" FontSize="20" FontWeight="Bold"/>
                                    <TextBlock Text=" wyd." Foreground="White" FontSize="12" VerticalAlignment="Bottom" Margin="3,0,0,2"/>
                                </StackPanel>
                                <TextBlock x:Name="lblWydanoPercent" Text="0%" Foreground="Gray" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Filtr towaru - przyciski -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Towar:" Foreground="White" FontSize="12" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <WrapPanel x:Name="pnlProductButtons" Orientation="Horizontal">
                            <!-- Przyciski towarów zostaną dodane dynamicznie -->
                        </WrapPanel>
                    </StackPanel>

                    <!-- Legenda ikon -->
                    <Border Grid.Column="3" Background="#2A2A2A" CornerRadius="4" Padding="10,5" Margin="15,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠️" FontSize="13" Foreground="Orange" VerticalAlignment="Center"/>
                            <TextBlock Text="zmienione" Foreground="Orange" FontSize="11" VerticalAlignment="Center" Margin="3,0,10,0"/>
                            <TextBlock Text="📝" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock Text="notatka" Foreground="White" FontSize="11" VerticalAlignment="Center" Margin="3,0,10,0"/>
                            <TextBlock Text="🎞️" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock Text="folia" Foreground="White" FontSize="11" VerticalAlignment="Center" Margin="3,0,10,0"/>
                            <TextBlock Text="🔪" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock Text="halal" Foreground="White" FontSize="11" VerticalAlignment="Center" Margin="3,0,10,0"/>
                            <TextBlock Text="📦" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock Text="symfonia" Foreground="White" FontSize="11" VerticalAlignment="Center" Margin="3,0,10,0"/>
                            <TextBlock Text="🚚" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock Text="własny" Foreground="White" FontSize="11" VerticalAlignment="Center" Margin="3,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Przyciski akcji - większe szerokości -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="15,0,0,0">
                        <Button x:Name="btnRefresh" Content="🔄 Odśwież" Height="45" Padding="25,0" FontSize="15" FontWeight="Bold" Background="#376EA0" Foreground="White" BorderThickness="0" Margin="0,0,10,0" Click="btnRefresh_Click" Cursor="Hand"/>
                        <Button x:Name="btnZrealizowano" Content="✓ ZREALIZOWANO" Height="45" Padding="35,0" FontSize="15" FontWeight="Bold" Background="#19874B" Foreground="White" BorderThickness="0" Margin="0,0,10,0" Click="btnZrealizowano_Click" Cursor="Hand"/>
                        <Button x:Name="btnClose" Content="✕" Width="50" Height="45" FontSize="22" FontWeight="Bold" Background="#AA2832" Foreground="White" BorderThickness="0" Click="btnClose_Click" Cursor="Hand"/>
                    </StackPanel>
                </Grid>

                <!-- Usunięty dolny rząd - przyciski przeniesione do górnego -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0" Visibility="Collapsed">
                </StackPanel>
            </Grid>
        </Border>

        <!-- TABBED CONTENT AREA - Tabs in dark theme -->
        <TabControl Grid.Row="1" Margin="0,5,0,0" Background="#1C1E26" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="30,12"/>
                    <Setter Property="Background" Value="#282A32"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="#444" BorderThickness="1,1,1,0" CornerRadius="8,8,0,0" Margin="0,0,2,0" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#3C468E"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#4A4E6A"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <!-- TAB 1: ZAMÓWIENIA -->
            <TabItem Header="📋 Zamówienia">
                <Grid Background="#1C1E26">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="37*"/>
                        <ColumnDefinition Width="37*"/>
                        <ColumnDefinition Width="26*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#22242E" CornerRadius="5" Margin="0,0,5,0">
                        <DataGrid x:Name="dgvZamowienia1" ItemsSource="{Binding ZamowieniaList1}" Style="{StaticResource CustomDataGridStyle}" SelectionChanged="dgvZamowienia1_SelectionChanged" MouseDoubleClick="dgvZamowienia_MouseDoubleClick" IsReadOnly="True" RowHeight="55" Margin="5" FontSize="16">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="Background" Value="{Binding RowColor}"/>
                                    <Setter Property="Foreground" Value="{Binding TextColor}"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Klient" Width="180">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Klient}" Foreground="{Binding KlientColor}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Kg" Binding="{Binding TotalIlosc, StringFormat=N0}" Width="60"/>
                                <DataGridTextColumn Header="Wyjazd" Binding="{Binding CzasWyjazdDisplay}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Orange"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="85">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{Binding StatusColor}"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Kierowca" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding KierowcaDisplay}" Foreground="LightSkyBlue" FontSize="12" TextWrapping="Wrap" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <Border Grid.Column="1" Background="#22242E" CornerRadius="5" Margin="5,0,5,0">
                        <DataGrid x:Name="dgvZamowienia2" ItemsSource="{Binding ZamowieniaList2}" Style="{StaticResource CustomDataGridStyle}" SelectionChanged="dgvZamowienia2_SelectionChanged" MouseDoubleClick="dgvZamowienia_MouseDoubleClick" IsReadOnly="True" RowHeight="55" Margin="5" FontSize="16">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="Background" Value="{Binding RowColor}"/>
                                    <Setter Property="Foreground" Value="{Binding TextColor}"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Klient" Width="180">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Klient}" Foreground="{Binding KlientColor}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Kg" Binding="{Binding TotalIlosc, StringFormat=N0}" Width="60"/>
                                <DataGridTextColumn Header="Wyjazd" Binding="{Binding CzasWyjazdDisplay}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Orange"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="85">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{Binding StatusColor}"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Kierowca" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding KierowcaDisplay}" Foreground="LightSkyBlue" FontSize="12" TextWrapping="Wrap" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <Grid Grid.Column="2" Margin="5,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="55*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20*"/>
                        </Grid.RowDefinitions>
                        <!-- Info o handlowcu -->
                        <Border Grid.Row="0" Background="#363842" CornerRadius="4" Padding="8,6" Margin="0,0,0,5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👤 Handlowiec:" Foreground="Gray" FontSize="12" VerticalAlignment="Center"/>
                                <TextBlock x:Name="lblHandlowiec" Text="-" Foreground="White" FontSize="13" FontWeight="SemiBold" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <!-- Przycisk przyjęcia zmiany - widoczny tylko gdy jest zmiana -->
                        <Button x:Name="btnAcceptChange" Grid.Row="1" Content="✅ Przyjmuję zmianę - zaktualizuj snapshot"
                                Click="btnAcceptChange_Click" Height="35" Margin="0,0,0,5"
                                Background="#B45309" Foreground="White" FontSize="12" FontWeight="Bold"
                                Cursor="Hand" Visibility="Collapsed">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderBrush="Orange" BorderThickness="2">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D97706"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Border Grid.Row="2" Background="#262832" CornerRadius="5" Margin="0,0,0,5">
                            <DataGrid x:Name="dgvPozycje" Style="{StaticResource CustomDataGridStyle}" IsReadOnly="True" RowHeight="28" Margin="5" FontSize="11">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Produkt" Binding="{Binding Produkt}" Width="2*"/>
                                    <DataGridTextColumn Header="Zamówiono" Binding="{Binding [Zamówiono (kg)], StringFormat=N0}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Margin" Value="0,0,5,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Wydano" Binding="{Binding [Wydano (kg)], StringFormat=N0}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Margin" Value="0,0,5,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Różnica" Binding="{Binding [Różnica (kg)], StringFormat=N0}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Margin" Value="0,0,5,0"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Zmiana" Binding="{Binding Zmiana}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="Foreground" Value="Orange"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                        <TextBlock Grid.Row="3" Text="Notatka zamówienia" Background="#323440" Foreground="Yellow" FontWeight="Bold" FontSize="12" Padding="5,3"/>
                        <Border Grid.Row="4" Background="#343642" CornerRadius="5" Margin="0,3">
                            <TextBox x:Name="txtUwagi" Background="Transparent" Foreground="White" BorderThickness="0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontSize="16" Margin="5"/>
                        </Border>
                        <TextBlock Grid.Row="5" Text="Notatka produkcji" Background="#323440" Foreground="LightBlue" FontWeight="Bold" FontSize="12" Padding="5,3"/>
                        <Border Grid.Row="6" Background="#343642" CornerRadius="5" Margin="0,3,0,0">
                            <TextBox x:Name="txtNotatkiTransportu" Background="Transparent" Foreground="White" BorderThickness="0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontSize="16" Margin="5"/>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- TAB 2: STATYSTYKI -->
            <TabItem Header="📊 Statystyki">
                <Grid Background="#1C1E26">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Karty podsumowania na górze -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,15">
                        <Border Background="#1565C0" CornerRadius="8" Padding="20,15" Margin="0,0,15,0" MinWidth="180">
                            <StackPanel>
                                <TextBlock Text="ZAMÓWIENIA" Foreground="#90CAF9" FontSize="11" FontWeight="Bold"/>
                                <TextBlock x:Name="lblStatZamowienia" Text="0" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock Text="łącznie na dziś" Foreground="#90CAF9" FontSize="11"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#2E7D32" CornerRadius="8" Padding="20,15" Margin="0,0,15,0" MinWidth="180">
                            <StackPanel>
                                <TextBlock Text="ZREALIZOWANE" Foreground="#A5D6A7" FontSize="11" FontWeight="Bold"/>
                                <TextBlock x:Name="lblStatZrealizowane" Text="0" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock x:Name="lblStatZrealProc" Text="0%" Foreground="#A5D6A7" FontSize="11"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#0277BD" CornerRadius="8" Padding="20,15" Margin="0,0,15,0" MinWidth="180">
                            <StackPanel>
                                <TextBlock Text="WYDANE" Foreground="#81D4FA" FontSize="11" FontWeight="Bold"/>
                                <TextBlock x:Name="lblStatWydane" Text="0" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock x:Name="lblStatWydaneProc" Text="0%" Foreground="#81D4FA" FontSize="11"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#6A1B9A" CornerRadius="8" Padding="20,15" Margin="0,0,15,0" MinWidth="180">
                            <StackPanel>
                                <TextBlock Text="SUMA KILOGRAMÓW" Foreground="#CE93D8" FontSize="11" FontWeight="Bold"/>
                                <TextBlock x:Name="lblStatSumaKg" Text="0" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock Text="kg łącznie" Foreground="#CE93D8" FontSize="11"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#E65100" CornerRadius="8" Padding="20,15" MinWidth="180">
                            <StackPanel>
                                <TextBlock Text="ŚREDNIA / ZAMÓWIENIE" Foreground="#FFCC80" FontSize="11" FontWeight="Bold"/>
                                <TextBlock x:Name="lblStatSrednia" Text="0" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock Text="kg średnio" Foreground="#FFCC80" FontSize="11"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Tabele analityczne -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#22242E" CornerRadius="5" Margin="0,0,8,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Background="#1565C0" CornerRadius="5,5,0,0" Padding="12,8">
                                    <TextBlock Text="📦 Przychody wg produktów" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                </Border>
                                <DataGrid Grid.Row="1" x:Name="dgvIn0ESumy" Style="{StaticResource CustomDataGridStyle}" IsReadOnly="True" RowHeight="38" Margin="5" FontSize="13">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Towar" Binding="{Binding Towar}" Width="*"/>
                                        <DataGridTextColumn Header="Kg" Binding="{Binding Kg, StringFormat=N0}" Width="Auto">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>

                        <Border Grid.Column="1" Background="#22242E" CornerRadius="5" Margin="4,0,4,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Background="#6A1B9A" CornerRadius="5,5,0,0" Padding="12,8">
                                    <TextBlock Text="🐔 Tuszki - pojemniki/palety" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                </Border>
                                <DataGrid Grid.Row="1" x:Name="dgvPojTuszki" Style="{StaticResource CustomDataGridStyle}" IsReadOnly="True" RowHeight="38" Margin="5" FontSize="13">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Typ" Binding="{Binding Typ}" Width="*"/>
                                        <DataGridTextColumn Header="Palety" Binding="{Binding Palety}" Width="Auto">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="%" Binding="{Binding Udział}" Width="60">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#CE93D8"/>
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>

                        <Border Grid.Column="2" Background="#22242E" CornerRadius="5" Margin="8,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Background="#E65100" CornerRadius="5,5,0,0" Padding="12,8">
                                    <TextBlock Text="👤 Wyniki handlowców" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                </Border>
                                <DataGrid Grid.Row="1" x:Name="dgvHandlowcyStats" Style="{StaticResource CustomDataGridStyle}" IsReadOnly="True" RowHeight="38" Margin="5" FontSize="13">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Handlowiec" Binding="{Binding Handlowiec}" Width="*"/>
                                        <DataGridTextColumn Header="Zam." Binding="{Binding IloscZamowien}" Width="50">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Kg" Binding="{Binding SumaKg, StringFormat=N0}" Width="80">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="Foreground" Value="#FFCC80"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

