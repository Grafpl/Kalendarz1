<Window x:Class="Kalendarz1.ProdukcjaPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Panel Produkcja" 
        WindowState="Maximized" 
        WindowStyle="None"
        Background="#1C1E26"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Style for the circular progress bar -->
        <Style x:Key="CircularProgressBar" TargetType="ProgressBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Ellipse Stroke="#444" StrokeThickness="10" />
                            <Path x:Name="path" Stroke="{TemplateBinding Foreground}" StrokeThickness="10" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathGeometry.Figures>
                                            <PathFigure StartPoint="50,0">
                                                <ArcSegment x:Name="arc" Size="50,50" SweepDirection="Clockwise" IsLargeArc="False"/>
                                            </PathFigure>
                                        </PathGeometry.Figures>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for the top buttons - made larger for touch screens -->
        <Style x:Key="TopButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="70"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#787878"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#969696"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- General Style for DataGrids -->
        <Style x:Key="CustomDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#2D2F3E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowBackground" Value="#373946"/>
            <Setter Property="AlternatingRowBackground" Value="#32343F"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#464858"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" 
                                              Margin="5,2"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom style for ComboBox dropdown items -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#3A3C48"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#555A8C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for TabControl Tabs - made larger for touch -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#282A32"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="35,20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="#787878"
                                BorderThickness="1,1,1,0"
                                CornerRadius="8,8,0,0"
                                Margin="0,0,-1,0">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3C468E"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4A56AD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top Control Panel -->
            <RowDefinition Height="*"/>
            <!-- Tabbed Content -->
        </Grid.RowDefinitions>

        <!-- TOP CONTROL PANEL - kompaktowy design -->
        <Border Grid.Row="0" Background="#282A32" CornerRadius="6" Padding="10,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Górny rząd: Data, Progress, Filtr, Nawigacja -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Data -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                        <TextBlock x:Name="lblData" FontSize="22" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        <CheckBox x:Name="cbPokazWydaniaSymfonia" Content="Symfonia" Foreground="Gray" Margin="15,0,0,0" VerticalAlignment="Center" Click="cbPokazWydaniaSymfonia_Click"/>
                    </StackPanel>

                    <!-- Progress - prosty pasek -->
                    <Border Grid.Column="1" Background="#1E1E1E" CornerRadius="6" Padding="12,8" Margin="0,0,20,0" VerticalAlignment="Center">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="{Binding RealizationProgressText}" Foreground="#4CAF50" FontSize="18" FontWeight="Bold"/>
                                <TextBlock Text=" zrealizowano" Foreground="Gray" FontSize="12" VerticalAlignment="Bottom" Margin="0,0,0,2"/>
                            </StackPanel>
                            <ProgressBar x:Name="progressRing" Value="{Binding RealizationProgress}" Height="8" Width="150" Foreground="#4CAF50" Background="#333" BorderThickness="0"/>
                        </StackPanel>
                    </Border>

                    <!-- Filtr towaru -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Towar:" Foreground="Gray" FontSize="12" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox x:Name="cbFiltrProdukt" Width="200" Height="35" FontSize="13" Background="#1A1A1A" BorderBrush="#333" Foreground="White"/>
                    </StackPanel>

                    <!-- Legenda ikon -->
                    <Border Grid.Column="3" Background="#3A3C48" CornerRadius="4" Padding="8,4" Margin="15,0" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📝" FontSize="11" VerticalAlignment="Center" ToolTip="Notatka"/>
                            <TextBlock Text="notatka" Foreground="Gray" FontSize="10" VerticalAlignment="Center" Margin="2,0,10,0"/>
                            <TextBlock Text="🎞️" FontSize="11" VerticalAlignment="Center" ToolTip="Folia"/>
                            <TextBlock Text="folia" Foreground="Gray" FontSize="10" VerticalAlignment="Center" Margin="2,0,10,0"/>
                            <TextBlock Text="📦" FontSize="11" VerticalAlignment="Center" ToolTip="Symfonia"/>
                            <TextBlock Text="symfonia" Foreground="Gray" FontSize="10" VerticalAlignment="Center" Margin="2,0,10,0"/>
                            <TextBlock Text="🟠" FontSize="11" VerticalAlignment="Center" ToolTip="Kurs"/>
                            <TextBlock Text="kurs" Foreground="Gray" FontSize="10" VerticalAlignment="Center" Margin="2,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Nawigacja daty -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="btnPrev" Content="◀" Width="50" Height="45" FontSize="18" Background="#3C468E" Foreground="White" BorderThickness="0" Margin="0,0,5,0" Click="btnPrev_Click" Cursor="Hand"/>
                        <Button x:Name="btnToday" Content="Dziś" Width="70" Height="45" FontSize="14" Background="#3C468E" Foreground="White" BorderThickness="0" Margin="0,0,5,0" Click="btnToday_Click" Cursor="Hand"/>
                        <Button x:Name="btnNext" Content="▶" Width="50" Height="45" FontSize="18" Background="#3C468E" Foreground="White" BorderThickness="0" Click="btnNext_Click" Cursor="Hand"/>
                    </StackPanel>
                </Grid>

                <!-- Dolny rząd: Przyciski akcji -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button x:Name="btnRefresh" Content="🔄 Odśwież" Height="45" Padding="18,0" FontSize="14" Background="#376EA0" Foreground="White" BorderThickness="0" Margin="0,0,10,0" Click="btnRefresh_Click" Cursor="Hand"/>
                    <Button x:Name="btnLive" Content="📡 Live" Height="45" Padding="18,0" FontSize="14" Background="#555A8C" Foreground="White" BorderThickness="0" Margin="0,0,10,0" Click="btnLive_Click" Cursor="Hand"/>
                    <Button x:Name="btnSaveNotes" Content="💾 Zapisz" Height="45" Padding="18,0" FontSize="14" Background="#5F5F5F" Foreground="White" BorderThickness="0" Margin="0,0,10,0" Click="btnSaveNotes_Click" Cursor="Hand"/>
                    <Button x:Name="btnUndo" Content="↩ Cofnij" Height="45" Padding="18,0" FontSize="14" Background="#8C643C" Foreground="White" BorderThickness="0" Margin="0,0,10,0" Click="btnUndo_Click" Cursor="Hand"/>
                    <Button x:Name="btnZrealizowano" Content="✓ ZREALIZOWANO" Height="45" Padding="25,0" FontSize="14" FontWeight="Bold" Background="#19874B" Foreground="White" BorderThickness="0" Margin="0,0,10,0" Click="btnZrealizowano_Click" Cursor="Hand"/>
                    <Button x:Name="btnClose" Content="✕" Width="45" Height="45" FontSize="16" Background="#AA2832" Foreground="White" BorderThickness="0" Click="btnClose_Click" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- TABBED CONTENT AREA -->
        <TabControl Grid.Row="1" Margin="0,10,0,0" Background="Transparent" BorderThickness="0">
            <!-- TAB 1: ZAMÓWIENIA -->
            <TabItem Header="Zamówienia">
                <Grid Background="#1C1E26">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="37*"/>
                        <ColumnDefinition Width="37*"/>
                        <ColumnDefinition Width="26*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#22242E" CornerRadius="5" Margin="0,0,5,0">
                        <DataGrid x:Name="dgvZamowienia1" ItemsSource="{Binding ZamowieniaList1}" Style="{StaticResource CustomDataGridStyle}" SelectionChanged="dgvZamowienia1_SelectionChanged" MouseDoubleClick="dgvZamowienia_MouseDoubleClick" IsReadOnly="True" RowHeight="38" Margin="5" FontSize="14">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="Background" Value="{Binding RowColor}"/>
                                    <Setter Property="Foreground" Value="{Binding TextColor}"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Klient" Binding="{Binding Klient}" Width="*"/>
                                <DataGridTextColumn Header="Kg" Binding="{Binding TotalIlosc, StringFormat=N0}" Width="Auto"/>
                                <DataGridTextColumn Header="Wyjazd" Binding="{Binding CzasWyjazdDisplay}" Width="Auto">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Orange"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{Binding StatusColor}"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <Border Grid.Column="1" Background="#22242E" CornerRadius="5" Margin="5,0,5,0">
                        <DataGrid x:Name="dgvZamowienia2" ItemsSource="{Binding ZamowieniaList2}" Style="{StaticResource CustomDataGridStyle}" SelectionChanged="dgvZamowienia2_SelectionChanged" MouseDoubleClick="dgvZamowienia_MouseDoubleClick" IsReadOnly="True" RowHeight="38" Margin="5" FontSize="14">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="Background" Value="{Binding RowColor}"/>
                                    <Setter Property="Foreground" Value="{Binding TextColor}"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Klient" Binding="{Binding Klient}" Width="*"/>
                                <DataGridTextColumn Header="Kg" Binding="{Binding TotalIlosc, StringFormat=N0}" Width="Auto"/>
                                <DataGridTextColumn Header="Wyjazd" Binding="{Binding CzasWyjazdDisplay}" Width="Auto">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Orange"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{Binding StatusColor}"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <Grid Grid.Column="2" Margin="5,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="55*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20*"/>
                        </Grid.RowDefinitions>
                        <!-- Info o handlowcu -->
                        <Border Grid.Row="0" Background="#363842" CornerRadius="4" Padding="8,6" Margin="0,0,0,5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👤 Handlowiec:" Foreground="Gray" FontSize="12" VerticalAlignment="Center"/>
                                <TextBlock x:Name="lblHandlowiec" Text="-" Foreground="White" FontSize="13" FontWeight="SemiBold" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Row="1" Background="#262832" CornerRadius="5" Margin="0,0,0,5">
                            <DataGrid x:Name="dgvPozycje" Style="{StaticResource CustomDataGridStyle}" IsReadOnly="True" RowHeight="28" Margin="5" FontSize="11">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Produkt" Binding="{Binding Produkt}" Width="2*"/>
                                    <DataGridTextColumn Header="Zamówiono" Binding="{Binding [Zamówiono (kg)], StringFormat=N0}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Margin" Value="0,0,5,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Wydano" Binding="{Binding [Wydano (kg)], StringFormat=N0}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Margin" Value="0,0,5,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Różnica" Binding="{Binding [Różnica (kg)], StringFormat=N0}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Margin" Value="0,0,5,0"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                        <TextBlock Grid.Row="2" Text="Notatka zamówienia" Background="#323440" Foreground="Yellow" FontWeight="Bold" FontSize="12" Padding="5,3"/>
                        <Border Grid.Row="3" Background="#343642" CornerRadius="5" Margin="0,3">
                            <TextBox x:Name="txtUwagi" Background="Transparent" Foreground="White" BorderThickness="0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontSize="16" Margin="5"/>
                        </Border>
                        <TextBlock Grid.Row="4" Text="Notatka produkcji" Background="#323440" Foreground="LightBlue" FontWeight="Bold" FontSize="12" Padding="5,3"/>
                        <Border Grid.Row="5" Background="#343642" CornerRadius="5" Margin="0,3,0,0">
                            <TextBox x:Name="txtNotatkiTransportu" Background="Transparent" Foreground="White" BorderThickness="0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontSize="16" Margin="5"/>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- TAB 2: STATYSTYKI -->
            <TabItem Header="Statystyki">
                <Grid Background="#1C1E26">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#22242E" CornerRadius="5" Margin="0,0,5,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Podsumowanie przychodów (In0E)" Foreground="LightSkyBlue" FontWeight="Bold" FontSize="16" Margin="10"/>
                            <DataGrid Grid.Row="1" x:Name="dgvIn0ESumy" Style="{StaticResource CustomDataGridStyle}" IsReadOnly="True" RowHeight="35" Margin="5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Towar" Binding="{Binding Towar}" Width="*"/>
                                    <DataGridTextColumn Header="Kg" Binding="{Binding Kg, StringFormat=N0}" Width="Auto"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" Background="#2D2F3A" CornerRadius="5" Margin="5,0,5,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Tuszek pojemniki/palety" Foreground="LightSkyBlue" FontWeight="Bold" FontSize="16" Margin="10"/>
                            <DataGrid Grid.Row="1" x:Name="dgvPojTuszki" Style="{StaticResource CustomDataGridStyle}" IsReadOnly="True" RowHeight="28" Margin="5,5,5,5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Typ" Binding="{Binding Typ}" Width="*"/>
                                    <DataGridTextColumn Header="Palety" Binding="{Binding Palety}" Width="Auto"/>
                                    <DataGridTextColumn Header="Udział" Binding="{Binding Udział}" Width="Auto"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <Border Grid.Column="2" Background="#22242E" CornerRadius="5" Margin="5,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Wyniki Handlowców" Foreground="LightSkyBlue" FontWeight="Bold" FontSize="16" Margin="10"/>
                            <DataGrid Grid.Row="1" x:Name="dgvHandlowcyStats" Style="{StaticResource CustomDataGridStyle}" IsReadOnly="True" RowHeight="35" Margin="5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Handlowiec" Binding="{Binding Handlowiec}" Width="*"/>
                                    <DataGridTextColumn Header="Zamówienia" Binding="{Binding IloscZamowien}" Width="Auto"/>
                                    <DataGridTextColumn Header="Suma (kg)" Binding="{Binding SumaKg, StringFormat=N0}" Width="Auto"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

