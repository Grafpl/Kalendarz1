<Window x:Class="Kalendarz1.TygodniowyPlan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Kalendarz1"
        Title="Tygodniowy Plan Produkcji" 
        Height="850" Width="1700"
        WindowStartupLocation="CenterScreen"
        Background="White"
        FontFamily="Segoe UI"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Konwerter dla wartości większych niż 0 -->
        <local:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter"/>

        <!-- Styl dla wiersza DataGrid -->
        <Style x:Key="PulsingRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla przycisków -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4B732F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla DataGrid -->
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="36"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#E0E0E0"/>
        </Style>

        <!-- Styl dla nagłówków kolumn -->
        <Style x:Key="ColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#5C8A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#4B732F"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>

        <!-- Styl dla komórek -->
        <Style x:Key="CellCenterStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="CellRightStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="CellLeftStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- ==================== KOLORY STATUSÓW ==================== -->
        <SolidColorBrush x:Key="StatusPotwierdzonyBrush" Color="#C8E6C9"/>
        <SolidColorBrush x:Key="StatusCzesciowyBrush" Color="#FFF9C4"/>
        <SolidColorBrush x:Key="StatusZaplanowanyBrush" Color="#BBDEFB"/>
        <SolidColorBrush x:Key="StatusBrakBrush" Color="#F5F5F5"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Górna belka z tytułem i datą -->
        <Border Grid.Row="0" 
                Background="#5C8A3A" 
                Padding="15,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="TYGODNIOWY PLAN PRODUKCJI" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtDataZakres" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="20,0,0,0"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtNumerTygodnia"
                               FontSize="13"
                               Foreground="White"
                               Opacity="0.8"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal">
                    <Button Content="⚙ Konfiguruj Wydajność" 
                            Style="{StaticResource ButtonStyle}"
                            Background="#3498DB"
                            Click="BtnKonfiguracjaWydajnosci_Click"/>
                    <Button Content="🥩 Konfiguruj Podroby" 
                            Style="{StaticResource ButtonStyle}"
                            Background="#8B4513"
                            Click="BtnKonfiguracjaPodrobow_Click"/>
                    <Button Content="🛠 Konfiguruj Produkty" 
                            Style="{StaticResource ButtonStyle}"
                            Background="#3498DB"
                            Click="BtnKonfiguracjaProduktow_Click"/>
                    <Button Content="🔄 Odśwież" 
                            Style="{StaticResource ButtonStyle}"
                            Background="#27AE60"
                            Click="BtnOdswiez_Click"/>

                </StackPanel>
            </Grid>
        </Border>

        <!-- Nawigacja i statystyki podstawowe -->
        <Grid Grid.Row="1" Background="#ECF0F1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Nawigacja tygodni -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="◄◄ -4 tyg" 
                        Click="BtnCzteryTygodnieWstecz_Click"
                        Style="{StaticResource ButtonStyle}"
                        Width="90"/>
                <Button Content="◄ Poprzedni" 
                        Click="BtnPoprzedniTydzien_Click"
                        Style="{StaticResource ButtonStyle}"
                        Width="100"/>
                <Button Content="● DZISIAJ" 
                        Click="BtnBiezacyTydzien_Click"
                        Style="{StaticResource ButtonStyle}"
                        Width="100"
                        Background="#E67E22"/>
                <Button Content="Następny ►" 
                        Click="BtnNastepnyTydzien_Click"
                        Style="{StaticResource ButtonStyle}"
                        Width="100"/>
                <Button Content="+4 tyg ►►" 
                        Click="BtnCzteryTygodnieNaprzod_Click"
                        Style="{StaticResource ButtonStyle}"
                        Width="90"/>
            </StackPanel>

            <!-- Karty statystyk -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <!-- Karta 1: Żywiec -->
                <Border Background="White" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="12,8"
                        Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="SUROWIEC ŻYWIEC" 
                                   FontSize="9" 
                                   FontWeight="Bold"
                                   Foreground="#7F8C8D"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtStatSurowiec" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50"
                                   HorizontalAlignment="Center"
                                   Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Karta 2: Tuszka A -->
                <Border Background="White" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="12,8"
                        Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="TUSZKA A" 
                                   FontSize="9" 
                                   FontWeight="Bold"
                                   Foreground="#7F8C8D"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtStatTuszkaA" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#5C8A3A"
                                   HorizontalAlignment="Center"
                                   Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Karta 3: Filet -->
                <Border Background="White" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="12,8"
                        Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="FILET" 
                                   FontSize="9" 
                                   FontWeight="Bold"
                                   Foreground="#7F8C8D"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtStatFilet" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#E67E22"
                                   HorizontalAlignment="Center"
                                   Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Karta 4: Potwierdzenia -->
                <Border Background="White" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="12,8"
                        Margin="5,0">
                    <StackPanel Width="130">
                        <TextBlock Text="POTWIERDZENIE" 
                                   FontSize="9" 
                                   FontWeight="Bold"
                                   Foreground="#7F8C8D"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtStatPotwierdzenie" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#3498DB"
                                   HorizontalAlignment="Center"
                                   Margin="0,3,0,0"/>
                        <ProgressBar x:Name="progressPotwierdzenie" 
                                     Height="6" 
                                     Margin="0,4,0,0"
                                     Foreground="#3498DB"
                                     Background="#ECF0F1"
                                     BorderThickness="0"/>
                    </StackPanel>
                </Border>

                <!-- Karta 5: Ubiórki -->
                <Border Background="White" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="12,8"
                        Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="UBIÓRKI" 
                                   FontSize="9" 
                                   FontWeight="Bold"
                                   Foreground="#7F8C8D"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtStatUbiorki" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#2196F3"
                                   HorizontalAlignment="Center"
                                   Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Statystyki pojemników -->
        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#BDC3C7"
                BorderThickness="0,1,0,1"
                Padding="10,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="POJEMNIKI (15kg/poj | 36 poj/paleta)"
                           FontSize="11"
                           FontWeight="Bold"
                           Foreground="#2C3E50"/>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- MALY KURCZAK (POJ 12-9) -->
                    <Border Grid.Column="0"
                            Background="#E3F2FD"
                            BorderBrush="#2196F3"
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="8,5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="4"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="4"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="MALY KURCZAK (POJ 12-9)"
                                       FontSize="11" FontWeight="Bold" Foreground="#1976D2"
                                       HorizontalAlignment="Center"/>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="2" HorizontalAlignment="Center">
                                    <Border Background="#1976D2" CornerRadius="3" Padding="5,2">
                                        <TextBlock Text="POJ 12" FontSize="10" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock x:Name="txtPoj12Sztuk" FontSize="13" FontWeight="Bold" Foreground="#1976D2" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                    <TextBlock x:Name="txtPoj12Procent" FontSize="10" Foreground="#1976D2" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtPoj12Palety" FontSize="9" Foreground="#7F8C8D" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="2" HorizontalAlignment="Center">
                                    <Border Background="#1976D2" CornerRadius="3" Padding="5,2">
                                        <TextBlock Text="POJ 11" FontSize="10" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock x:Name="txtPoj11Sztuk" FontSize="13" FontWeight="Bold" Foreground="#1976D2" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                    <TextBlock x:Name="txtPoj11Procent" FontSize="10" Foreground="#1976D2" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtPoj11Palety" FontSize="9" Foreground="#7F8C8D" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Margin="2" HorizontalAlignment="Center">
                                    <Border Background="#1976D2" CornerRadius="3" Padding="5,2">
                                        <TextBlock Text="POJ 10" FontSize="10" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock x:Name="txtPoj10Sztuk" FontSize="13" FontWeight="Bold" Foreground="#1976D2" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                    <TextBlock x:Name="txtPoj10Procent" FontSize="10" Foreground="#1976D2" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtPoj10Palety" FontSize="9" Foreground="#7F8C8D" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3" Margin="2" HorizontalAlignment="Center">
                                    <Border Background="#1976D2" CornerRadius="3" Padding="5,2">
                                        <TextBlock Text="POJ 9" FontSize="10" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock x:Name="txtPoj9Sztuk" FontSize="13" FontWeight="Bold" Foreground="#1976D2" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                    <TextBlock x:Name="txtPoj9Procent" FontSize="10" Foreground="#1976D2" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtPoj9Palety" FontSize="9" Foreground="#7F8C8D" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>
                            </Grid>

                            <Border Grid.Row="4" Background="#0D47A1" CornerRadius="3" Padding="8,3">
                                <Grid>
                                    <TextBlock Text="SUMA MALY:" FontSize="10" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left"/>
                                    <TextBlock x:Name="txtMalyKurczakSuma" FontSize="11" FontWeight="Bold" Foreground="White" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- DUZY KURCZAK (POJ 8-5) -->
                    <Border Grid.Column="2"
                            Background="#FFF3E0"
                            BorderBrush="#FF9800"
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="8,5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="4"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="4"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="DUZY KURCZAK (POJ 8-5)"
                                       FontSize="11" FontWeight="Bold" Foreground="#F57C00"
                                       HorizontalAlignment="Center"/>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="2" HorizontalAlignment="Center">
                                    <Border Background="#F57C00" CornerRadius="3" Padding="5,2">
                                        <TextBlock Text="POJ 8" FontSize="10" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock x:Name="txtPoj8Sztuk" FontSize="13" FontWeight="Bold" Foreground="#F57C00" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                    <TextBlock x:Name="txtPoj8Procent" FontSize="10" Foreground="#F57C00" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtPoj8Palety" FontSize="9" Foreground="#7F8C8D" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="2" HorizontalAlignment="Center">
                                    <Border Background="#F57C00" CornerRadius="3" Padding="5,2">
                                        <TextBlock Text="POJ 7" FontSize="10" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock x:Name="txtPoj7Sztuk" FontSize="13" FontWeight="Bold" Foreground="#F57C00" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                    <TextBlock x:Name="txtPoj7Procent" FontSize="10" Foreground="#F57C00" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtPoj7Palety" FontSize="9" Foreground="#7F8C8D" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Margin="2" HorizontalAlignment="Center">
                                    <Border Background="#F57C00" CornerRadius="3" Padding="5,2">
                                        <TextBlock Text="POJ 6" FontSize="10" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock x:Name="txtPoj6Sztuk" FontSize="13" FontWeight="Bold" Foreground="#F57C00" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                    <TextBlock x:Name="txtPoj6Procent" FontSize="10" Foreground="#F57C00" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtPoj6Palety" FontSize="9" Foreground="#7F8C8D" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3" Margin="2" HorizontalAlignment="Center">
                                    <Border Background="#F57C00" CornerRadius="3" Padding="5,2">
                                        <TextBlock Text="POJ 5" FontSize="10" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock x:Name="txtPoj5Sztuk" FontSize="13" FontWeight="Bold" Foreground="#F57C00" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                    <TextBlock x:Name="txtPoj5Procent" FontSize="10" Foreground="#F57C00" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtPoj5Palety" FontSize="9" Foreground="#7F8C8D" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>
                            </Grid>

                            <Border Grid.Row="4" Background="#E65100" CornerRadius="3" Padding="8,3">
                                <Grid>
                                    <TextBlock Text="SUMA DUZY:" FontSize="10" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left"/>
                                    <TextBlock x:Name="txtDuzyKurczakSuma" FontSize="11" FontWeight="Bold" Foreground="White" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Tabela tygodniowa -->
        <Grid Grid.Row="3" Margin="5,3,5,3">
            <Border BorderBrush="#5C8A3A"
                    BorderThickness="3"
                    CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3" BlurRadius="10" Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Naglowek tabeli z zakresem dat -->
                    <Border Grid.Row="0" Background="#5C8A3A" Padding="15,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="PLAN TYGODNIOWY DOSTAW"
                                           FontSize="16" FontWeight="Bold" Foreground="White"/>
                                <TextBlock x:Name="txtDocelowyTydzienZakres"
                                           FontSize="13" Foreground="White" Opacity="0.9"
                                           Margin="20,0,0,0" VerticalAlignment="Center"/>
                                <Border Background="#FFA726" CornerRadius="12" Padding="10,4" Margin="15,0,0,0">
                                    <TextBlock x:Name="txtLiczbaDostaw" FontSize="11" FontWeight="Bold" Foreground="White"/>
                                </Border>
                            </StackPanel>
                            <TextBlock Grid.Column="1" x:Name="txtInfoZakres"
                                       FontSize="11" Foreground="White" Opacity="0.8"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <DataGrid Grid.Row="1" x:Name="dgPlan"
                              Style="{StaticResource DataGridStyle}"
                              ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}"
                              RowStyle="{StaticResource PulsingRowStyle}"
                              LoadingRow="DgPlan_LoadingRow"
                              MouseDoubleClick="DgPlan_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Data"
                                              Binding="{Binding Data}"
                                              Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CellCenterStyle}">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Dzien"
                                              Binding="{Binding DzienTygodnia}"
                                              Width="90">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CellCenterStyle}">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Auta" Width="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center">
                                            <TextBlock Text="{Binding LiczbaAut}"
                                                      FontWeight="Bold"
                                                      FontSize="12"
                                                      Foreground="#E67E22"
                                                      VerticalAlignment="Center"/>
                                            <TextBlock VerticalAlignment="Center"
                                                      Margin="2,0,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding LiczbaUbiorek, Converter={StaticResource GreaterThanZeroConverter}}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                                <Run Text="(" FontSize="8" Foreground="#2196F3"/>
                                                <Run Text="{Binding LiczbaUbiorek}" FontSize="8" FontWeight="SemiBold" Foreground="#2196F3"/>
                                                <Run Text=")" FontSize="8" Foreground="#2196F3"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Zywiec"
                                              Binding="{Binding ZywiecKg, StringFormat=N0}"
                                              Width="90">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CellRightStyle}">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Szt"
                                              Binding="{Binding Sztuki, StringFormat=N0}"
                                              Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CellRightStyle}">
                                        <Setter Property="FontSize" Value="10"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Tusz A"
                                              Binding="{Binding TuszkaA, StringFormat=N0}"
                                              Width="90">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CellRightStyle}">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="#5C8A3A"/>
                                        <Setter Property="FontSize" Value="11"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Filet"
                                              Binding="{Binding Filet, StringFormat=N0}"
                                              Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CellRightStyle}">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="#E67E22"/>
                                        <Setter Property="FontSize" Value="11"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Status" Width="*" MinWidth="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Margin="2" CornerRadius="4" Padding="6,3">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#F5F5F5"/>
                                                    <Style.Triggers>
                                                        <!-- W pełni potwierdzony -->
                                                        <DataTrigger Binding="{Binding CzyPotwierdzone}" Value="True">
                                                            <Setter Property="Background" Value="#C8E6C9"/>
                                                        </DataTrigger>
                                                        <!-- Częściowo potwierdzony (więcej niż 0% ale mniej niż 100%) -->
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding CzyPotwierdzone}" Value="False"/>
                                                                <Condition Binding="{Binding ProcentPotwierdzenia, Converter={StaticResource GreaterThanZeroConverter}}" Value="True"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Background" Value="#FFF9C4"/>
                                                        </MultiDataTrigger>
                                                        <!-- Zaplanowany (ma żywiec ale 0%) -->
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding ProcentPotwierdzenia}" Value="0"/>
                                                                <Condition Binding="{Binding ZywiecKg, Converter={StaticResource GreaterThanZeroConverter}}" Value="True"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Background" Value="#BBDEFB"/>
                                                        </MultiDataTrigger>
                                                        <!-- Suma -->
                                                        <DataTrigger Binding="{Binding JestSuma}" Value="True">
                                                            <Setter Property="Background" Value="#FFA726"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                          Text="{Binding StatusTekst}"
                                                          FontWeight="SemiBold"
                                                          FontSize="10"
                                                          VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#424242"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding CzyPotwierdzone}" Value="True">
                                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding JestSuma}" Value="True">
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>

                                                <Border Grid.Column="1"
                                                       CornerRadius="10"
                                                       Padding="8,2"
                                                       Margin="5,0,0,0">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ProcentPotwierdzenia}" Value="100">
                                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ProcentPotwierdzenia}" Value="0">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding JestSuma}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock FontWeight="Bold"
                                                              FontSize="10"
                                                              VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ProcentPotwierdzenia}" Value="100">
                                                                        <Setter Property="Foreground" Value="White"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                        <Run Text="{Binding ProcentPotwierdzenia, StringFormat=F0}"/>
                                                        <Run Text="%"/>
                                                    </TextBlock>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- Stopka z podsumowaniem -->
        <Border Grid.Row="4" Background="#34495E" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- SUMA AUT -->
                <Border Grid.Column="0" Background="#E67E22" CornerRadius="8" Padding="12,6" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="🚗 SUMA AUT:"
                                   Foreground="White"
                                   FontSize="10"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtSumaAut"
                                   Foreground="White"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- SUMA SZTUK -->
                <Border Grid.Column="1" Background="#9C27B0" CornerRadius="8" Padding="12,6" Margin="0,0,15,0">
                    <StackPanel>
                        <TextBlock Text="🐔 SUMA SZTUK:"
                                   Foreground="White"
                                   FontSize="10"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtSumaSztuki"
                                   Foreground="White"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Suma żywca:"
                               Foreground="White"
                               FontSize="10"
                               Opacity="0.8"/>
                    <TextBlock x:Name="txtSumaSurowiec"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="3">
                    <TextBlock Text="Tuszka A:"
                               Foreground="White"
                               FontSize="10"
                               Opacity="0.8"/>
                    <TextBlock x:Name="txtSumaTuszkaA"
                               Foreground="#5C8A3A"
                               FontSize="18"
                               FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="4">
                    <TextBlock Text="Filet:"
                               Foreground="White"
                               FontSize="10"
                               Opacity="0.8"/>
                    <TextBlock x:Name="txtSumaFilet"
                               Foreground="#E67E22"
                               FontSize="18"
                               FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="5">
                    <TextBlock Text="Ćwiartka:"
                               Foreground="White"
                               FontSize="10"
                               Opacity="0.8"/>
                    <TextBlock x:Name="txtSumaCwiartka"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="6">
                    <TextBlock Text="Ubiórki:"
                               Foreground="White"
                               FontSize="10"
                               Opacity="0.8"/>
                    <TextBlock x:Name="txtSumaUbiorki"
                               Foreground="#2196F3"
                               FontSize="18"
                               FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="7"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Button Content="📋 Kopiuj tekst"
                            Style="{StaticResource ButtonStyle}"
                            Background="#3498DB"
                            Click="BtnKopiuj_Click"
                            Width="120"/>
                    <Button Content="📊 Eksport Excel"
                            Style="{StaticResource ButtonStyle}"
                            Background="#27AE60"
                            Click="BtnEksportExcel_Click"
                            Width="120"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>