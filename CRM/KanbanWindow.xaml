<Window x:Class="Kalendarz1.CRM.KanbanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lejek SprzedaÅ¼owy (Kanban)" Height="600" Width="1000" WindowState="Maximized"
        Background="#0F172A">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Do Zadzwonienia -->
        <Border Grid.Column="0" Background="#1E293B" Margin="5" CornerRadius="10" Padding="10" BorderBrush="#374151" BorderThickness="2">
            <StackPanel>
                <Border Background="#374151" CornerRadius="6" Padding="10,6" Margin="0,0,0,10">
                    <TextBlock Text="ðŸ“ž DO ZADZWONIENIA" FontWeight="Bold" Foreground="#94A3B8" HorizontalAlignment="Center"/>
                </Border>
                <ListBox x:Name="listDoZadzwonienia" Background="Transparent" BorderThickness="0" DisplayMemberPath="Nazwa" FontSize="14" FontWeight="SemiBold" Foreground="#E2E8F0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="#334155"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}" Margin="{TemplateBinding Margin}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="#475569"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="#6366F1"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- W Trakcie -->
        <Border Grid.Column="1" Background="#1E293B" Margin="5" CornerRadius="10" Padding="10" BorderBrush="#78350F" BorderThickness="2">
            <StackPanel>
                <Border Background="#78350F" CornerRadius="6" Padding="10,6" Margin="0,0,0,10">
                    <TextBlock Text="â³ W TRAKCIE" FontWeight="Bold" Foreground="#FCD34D" HorizontalAlignment="Center"/>
                </Border>
                <ListBox x:Name="listWTrakcie" Background="Transparent" BorderThickness="0" DisplayMemberPath="Nazwa" FontSize="14" FontWeight="SemiBold" Foreground="#E2E8F0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="#334155"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}" Margin="{TemplateBinding Margin}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="#475569"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="#F59E0B"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Oferty -->
        <Border Grid.Column="2" Background="#1E293B" Margin="5" CornerRadius="10" Padding="10" BorderBrush="#1E3A8A" BorderThickness="2">
            <StackPanel>
                <Border Background="#1E3A8A" CornerRadius="6" Padding="10,6" Margin="0,0,0,10">
                    <TextBlock Text="ðŸ“„ OFERTY" FontWeight="Bold" Foreground="#60A5FA" HorizontalAlignment="Center"/>
                </Border>
                <ListBox x:Name="listOferty" Background="Transparent" BorderThickness="0" DisplayMemberPath="Nazwa" FontSize="14" FontWeight="SemiBold" Foreground="#E2E8F0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="#334155"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}" Margin="{TemplateBinding Margin}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="#475569"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="#3B82F6"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Sukces -->
        <Border Grid.Column="3" Background="#1E293B" Margin="5" CornerRadius="10" Padding="10" BorderBrush="#14532D" BorderThickness="2">
            <StackPanel>
                <Border Background="#14532D" CornerRadius="6" Padding="10,6" Margin="0,0,0,10">
                    <TextBlock Text="âœ… ZGODA / SUKCES" FontWeight="Bold" Foreground="#4ADE80" HorizontalAlignment="Center"/>
                </Border>
                <ListBox x:Name="listSukces" Background="Transparent" BorderThickness="0" DisplayMemberPath="Nazwa" FontSize="14" FontWeight="SemiBold" Foreground="#E2E8F0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="#334155"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}" Margin="{TemplateBinding Margin}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="#475569"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="#22C55E"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </StackPanel>
        </Border>
    </Grid>
</Window>
