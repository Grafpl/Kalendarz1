<Window x:Class="Kalendarz1.CRM.KanbanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lejek Sprzedażowy (Kanban)" Height="600" Width="1000" WindowState="Maximized"
        Background="#F3F4F6">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#E0F2FE" Margin="5" CornerRadius="10" Padding="10">
            <StackPanel>
                <TextBlock Text="📞 DO ZADZWONIENIA" FontWeight="Bold" Foreground="#0369A1" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                <ListBox x:Name="listDoZadzwonienia" Background="Transparent" BorderThickness="0" DisplayMemberPath="Nazwa" FontSize="14" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="#FEF3C7" Margin="5" CornerRadius="10" Padding="10">
            <StackPanel>
                <TextBlock Text="⏳ W TRAKCIE" FontWeight="Bold" Foreground="#B45309" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                <ListBox x:Name="listWTrakcie" Background="Transparent" BorderThickness="0" DisplayMemberPath="Nazwa" FontSize="14" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="2" Background="#DBEAFE" Margin="5" CornerRadius="10" Padding="10">
            <StackPanel>
                <TextBlock Text="📄 OFERTY" FontWeight="Bold" Foreground="#1E40AF" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                <ListBox x:Name="listOferty" Background="Transparent" BorderThickness="0" DisplayMemberPath="Nazwa" FontSize="14" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="3" Background="#D1FAE5" Margin="5" CornerRadius="10" Padding="10">
            <StackPanel>
                <TextBlock Text="✅ ZGODA / SUKCES" FontWeight="Bold" Foreground="#15803D" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                <ListBox x:Name="listSukces" Background="Transparent" BorderThickness="0" DisplayMemberPath="Nazwa" FontSize="14" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>