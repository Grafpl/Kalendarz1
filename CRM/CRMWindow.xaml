                                <Border x:Name="chipZalegle" Background="#7F1D1D" CornerRadius="10" Padding="6,3" Margin="0,0,8,0" Cursor="Hand" MouseLeftButtonDown="ChipZalegle_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="âš ï¸" FontSize="9" VerticalAlignment="Center"/>
