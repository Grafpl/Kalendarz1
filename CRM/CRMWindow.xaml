<Window x:Class="Kalendarz1.CRM.CRMWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CRM - Relacje z Klientami"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAF8"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- === KOLORY ZIELONO-CZERWONE === -->
        <SolidColorBrush x:Key="ColorPrimary" Color="#16A34A"/>
        <SolidColorBrush x:Key="ColorPrimaryDark" Color="#15803D"/>
        <SolidColorBrush x:Key="ColorPrimaryLight" Color="#DCFCE7"/>
        <SolidColorBrush x:Key="ColorSuccess" Color="#16A34A"/>
        <SolidColorBrush x:Key="ColorSuccessLight" Color="#DCFCE7"/>
        <SolidColorBrush x:Key="ColorWarning" Color="#EA580C"/>
        <SolidColorBrush x:Key="ColorWarningLight" Color="#FED7AA"/>
        <SolidColorBrush x:Key="ColorDanger" Color="#DC2626"/>
        <SolidColorBrush x:Key="ColorDangerLight" Color="#FEE2E2"/>
        <SolidColorBrush x:Key="ColorInfo" Color="#0891B2"/>
        <SolidColorBrush x:Key="ColorInfoLight" Color="#CFFAFE"/>
        <SolidColorBrush x:Key="ColorText" Color="#111827"/>
        <SolidColorBrush x:Key="ColorTextLight" Color="#4B5563"/>
        <SolidColorBrush x:Key="ColorTextMuted" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="ColorBorder" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="ColorBackground" Color="#F8FAF8"/>

        <!-- === GRADIENT ZIELONY DLA NAGÅÃ“WKA === -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#166534" Offset="0"/>
            <GradientStop Color="#22C55E" Offset="1"/>
        </LinearGradientBrush>

        <!-- === STYL KARTY === -->
        <Style x:Key="CardPanel" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" Color="#000000" Opacity="0.08" BlurRadius="24"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- === PRZYCISKI === -->
        <Style x:Key="ButtonPrimary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ColorPrimary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#16A34A" Opacity="0.25" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ColorPrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonDanger" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
            <Setter Property="Background" Value="{StaticResource ColorDanger}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#DC2626" Opacity="0.25" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#B91C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonWarning" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
            <Setter Property="Background" Value="{StaticResource ColorWarning}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#EA580C" Opacity="0.25" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C2410C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonSecondary" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
            <Setter Property="Background" Value="#64748B"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#64748B" Opacity="0.2" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#475569"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonSmall" TargetType="Button">
            <Setter Property="Background" Value="#F1F5F9"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#DCFCE7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonIcon" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#DCFCE7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- === TEXTBOX === -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorBorder}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ColorPrimary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- === COMBOBOX === -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="MinHeight" Value="36"/>
        </Style>

        <!-- === DATAGRID === -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFBFA"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="RowHeight" Value="48"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8FAF8"/>
            <Setter Property="Foreground" Value="{StaticResource ColorTextLight}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" BorderThickness="0" Padding="12,6">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#DCFCE7"/>
                    <Setter Property="Foreground" Value="{StaticResource ColorText}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- === TAB CONTROL === -->
        <Style x:Key="ModernTabControl" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style x:Key="ModernTabItem" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource ColorTextMuted}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderThickness="0,0,0,3" BorderBrush="Transparent" Padding="{TemplateBinding Padding}" Cursor="Hand">
                            <ContentPresenter ContentSource="Header" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ColorPrimary}"/>
                                <Setter Property="Foreground" Value="{StaticResource ColorPrimary}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F0FDF4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- === CONTEXT MENU === -->
        <Style TargetType="ContextMenu">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="HasDropShadow" Value="True"/>
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#DCFCE7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- === NAGÅÃ“WEK === -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" Padding="20,14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- GÃ³rny wiersz: Logo + Przyciski -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo firmy -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/logo-2-green.png" Height="40" Margin="0,0,14,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="CRM - Relacje z Klientami" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="ZarzÄ…dzanie potencjalnymi klientami" FontSize="10" Foreground="#BBF7D0" Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Przyciski akcji -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="btnDodaj" Style="{StaticResource ButtonPrimary}" Margin="0,0,8,0" Click="BtnDodaj_Click" Padding="14,8" Background="#166534">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="+" FontSize="14" FontWeight="Bold" Margin="0,0,4,0"/>
                                <TextBlock Text="Nowy" VerticalAlignment="Center" FontSize="11"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnMapa" Style="{StaticResource ButtonSecondary}" Margin="0,0,8,0" Click="BtnMapa_Click" Padding="12,8">
                            <TextBlock Text="ðŸ—ºï¸" FontSize="12"/>
                        </Button>
                        <Button x:Name="btnZadania" Style="{StaticResource ButtonWarning}" Margin="0,0,8,0" Click="BtnZadania_Click" Padding="12,8">
                            <TextBlock Text="ðŸ“‹" FontSize="12"/>
                        </Button>
                        <Button x:Name="btnUstawienia" Click="BtnUstawienia_Click" Cursor="Hand" Padding="10,8" Background="#ffffff30">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <TextBlock Text="âš™ï¸" FontSize="12"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#ffffff50"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="btnOdswiez" Click="BtnOdswiez_Click" Cursor="Hand" Padding="10,8" Background="White" Margin="8,0,0,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <TextBlock Text="ðŸ”„" FontSize="12"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#DCFCE7"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Dolny wiersz: KPI + Wyszukiwanie + Filtry -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Karty KPI -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <!-- DziÅ› do zadzwonienia -->
                        <Border Background="#ffffff25" CornerRadius="8" Padding="12,6" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“ž" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="DZIÅš" FontSize="8" Foreground="#BBF7D0"/>
                                    <TextBlock x:Name="txtKpiDzisiaj" Text="0" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- ZalegÅ‚e - CZERWONE -->
                        <Border Background="#DC262640" CornerRadius="8" Padding="12,6" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âš ï¸" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="ZALEGÅE" FontSize="8" Foreground="#FCA5A5"/>
                                    <TextBlock x:Name="txtKpiZalegle" Text="0" FontSize="16" FontWeight="Bold" Foreground="#FEE2E2"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- PrÃ³by kontaktu -->
                        <Border Background="#ffffff25" CornerRadius="8" Padding="12,6" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ””" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="PRÃ“BY" FontSize="8" Foreground="#BBF7D0"/>
                                    <TextBlock x:Name="txtKpiProby" Text="0" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- NawiÄ…zane -->
                        <Border Background="#ffffff25" CornerRadius="8" Padding="12,6" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âœ…" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="KONTAKT" FontSize="8" Foreground="#BBF7D0"/>
                                    <TextBlock x:Name="txtKpiNawiazane" Text="0" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Zgoda -->
                        <Border Background="#ffffff25" CornerRadius="8" Padding="12,6" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ¤" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="ZGODA" FontSize="8" Foreground="#BBF7D0"/>
                                    <TextBlock x:Name="txtKpiZgoda" Text="0" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Do oferty -->
                        <Border Background="#ffffff25" CornerRadius="8" Padding="12,6" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“„" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="OFERTY" FontSize="8" Foreground="#BBF7D0"/>
                                    <TextBlock x:Name="txtKpiOferty" Text="0" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Priorytetowe branÅ¼e -->
                        <Border Background="#DC262640" CornerRadius="8" Padding="12,6" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ­" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="MIÄ˜SO" FontSize="8" Foreground="#FCA5A5"/>
                                    <TextBlock x:Name="txtKpiPriorytet" Text="0" FontSize="16" FontWeight="Bold" Foreground="#FEE2E2"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Razem -->
                        <Border Background="#ffffff25" CornerRadius="8" Padding="12,6">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ‘¥" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="RAZEM" FontSize="8" Foreground="#BBF7D0"/>
                                    <TextBlock x:Name="txtKpiRazem" Text="0" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Wyszukiwanie -->
                    <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="4" Margin="16,0" MaxWidth="350" HorizontalAlignment="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ”" FontSize="12" VerticalAlignment="Center" Margin="8,0,6,0" Foreground="{StaticResource ColorTextMuted}"/>
                            <TextBox x:Name="txtSzukaj" Grid.Column="1" BorderThickness="0" Padding="4,8"
                                     FontSize="12" Background="Transparent" VerticalAlignment="Center"
                                     TextChanged="TxtSzukaj_TextChanged" Width="280"/>
                        </Grid>
                    </Border>

                    <!-- Filtry -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <ComboBox x:Name="cmbStatus" Style="{StaticResource ModernComboBox}" Width="130" Margin="0,0,6,0"
                                  SelectionChanged="CmbStatus_SelectionChanged">
                            <ComboBoxItem Content="Wszystkie" IsSelected="True"/>
                            <ComboBoxItem Content="Do zadzwonienia"/>
                            <ComboBoxItem Content="PrÃ³ba kontaktu"/>
                            <ComboBoxItem Content="NawiÄ…zano kontakt"/>
                            <ComboBoxItem Content="Zgoda na dalszy kontakt"/>
                            <ComboBoxItem Content="Do wysÅ‚ania oferta"/>
                            <ComboBoxItem Content="Nie zainteresowany"/>
                        </ComboBox>
                        <ComboBox x:Name="cmbWojewodztwo" Style="{StaticResource ModernComboBox}" Width="110" Margin="0,0,6,0"
                                  SelectionChanged="CmbWojewodztwo_SelectionChanged"/>
                        <ComboBox x:Name="cmbBranza" Style="{StaticResource ModernComboBox}" Width="150"
                                  SelectionChanged="CmbBranza_SelectionChanged"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- === GÅÃ“WNA ZAWARTOÅšÄ† === -->
        <Grid Grid.Row="1" Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="500"/>
                <ColumnDefinition Width="380"/>
            </Grid.ColumnDefinitions>

            <!-- Lista kontaktÃ³w -->
            <Border Grid.Column="0" Style="{StaticResource CardPanel}" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- NagÅ‚Ã³wek z sortowaniem -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Lista kontaktÃ³w" FontSize="14" FontWeight="Bold" Foreground="{StaticResource ColorText}"/>
                            <Border Background="#DCFCE7" CornerRadius="6" Padding="8,3" Margin="8,0,0,0">
                                <TextBlock x:Name="txtLiczbaWynikow" Text="0" FontSize="10" Foreground="{StaticResource ColorPrimary}" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal">
