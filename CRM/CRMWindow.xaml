<Window x:Class="Kalendarz1.CRM.CRMWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CRM - Relacje z Klientami"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- === KOLORY === -->
        <SolidColorBrush x:Key="ColorPrimary" Color="#2563EB"/>
        <SolidColorBrush x:Key="ColorPrimaryDark" Color="#1D4ED8"/>
        <SolidColorBrush x:Key="ColorPrimaryLight" Color="#DBEAFE"/>
        <SolidColorBrush x:Key="ColorSuccess" Color="#10B981"/>
        <SolidColorBrush x:Key="ColorSuccessLight" Color="#D1FAE5"/>
        <SolidColorBrush x:Key="ColorWarning" Color="#F59E0B"/>
        <SolidColorBrush x:Key="ColorWarningLight" Color="#FEF3C7"/>
        <SolidColorBrush x:Key="ColorDanger" Color="#EF4444"/>
        <SolidColorBrush x:Key="ColorDangerLight" Color="#FEE2E2"/>
        <SolidColorBrush x:Key="ColorInfo" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="ColorInfoLight" Color="#EDE9FE"/>
        <SolidColorBrush x:Key="ColorText" Color="#1F2937"/>
        <SolidColorBrush x:Key="ColorTextLight" Color="#6B7280"/>
        <SolidColorBrush x:Key="ColorTextMuted" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="ColorBorder" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="ColorBackground" Color="#F9FAFB"/>

        <!-- === STYL KARTY === -->
        <Style x:Key="CardPanel" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" Color="#000000" Opacity="0.08" BlurRadius="16"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- === PRZYCISKI === -->
        <Style x:Key="ButtonPrimary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ColorPrimary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.12" BlurRadius="6"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ColorPrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonSuccess" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
            <Setter Property="Background" Value="{StaticResource ColorSuccess}"/>
        </Style>

        <Style x:Key="ButtonWarning" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
            <Setter Property="Background" Value="{StaticResource ColorWarning}"/>
        </Style>

        <Style x:Key="ButtonDanger" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
            <Setter Property="Background" Value="{StaticResource ColorDanger}"/>
        </Style>

        <Style x:Key="ButtonSecondary" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
            <Setter Property="Background" Value="#6B7280"/>
        </Style>

        <Style x:Key="ButtonIcon" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- === TEXTBOX === -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ColorPrimary}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- === COMBOBOX === -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="MinHeight" Value="36"/>
        </Style>

        <!-- === DATAGRID === -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F3F4F6"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFBFC"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="RowHeight" Value="52"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="{StaticResource ColorText}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorBorder}"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" BorderThickness="0" Padding="12,8">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource ColorPrimaryLight}"/>
                    <Setter Property="Foreground" Value="{StaticResource ColorText}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- === KPI CARD === -->
        <Style x:Key="KpiCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" Color="#000000" Opacity="0.06" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- === STATUS BADGE === -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <!-- === CONTEXT MENU === -->
        <Style TargetType="ContextMenu">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="HasDropShadow" Value="True"/>
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="{StaticResource ColorPrimaryLight}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- === NAGÅÃ“WEK === -->
        <Border Grid.Row="0" Background="White" Padding="20,16" BorderBrush="{StaticResource ColorBorder}" BorderThickness="0,0,0,1">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.04" BlurRadius="8" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo i tytuÅ‚ -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource ColorPrimaryLight}" CornerRadius="10" Padding="10" Margin="0,0,14,0">
                        <TextBlock Text="CRM" FontSize="16" FontWeight="Bold" Foreground="{StaticResource ColorPrimary}"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Relacje z Klientami" FontSize="18" FontWeight="Bold" Foreground="{StaticResource ColorText}"/>
                        <TextBlock Text="ZarzÄ…dzanie potencjalnymi klientami i kontaktami" FontSize="11" Foreground="{StaticResource ColorTextLight}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Przyciski akcji -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="btnDodaj" Content="+ Nowy kontakt" Style="{StaticResource ButtonSuccess}" Margin="0,0,10,0" Click="BtnDodaj_Click"/>
                    <Button x:Name="btnMapa" Content="Mapa" Style="{StaticResource ButtonSecondary}" Margin="0,0,10,0" Click="BtnMapa_Click"/>
                    <Button x:Name="btnZadania" Content="Zadania" Style="{StaticResource ButtonWarning}" Margin="0,0,10,0" Click="BtnZadania_Click"/>
                    <Button x:Name="btnOdswiez" Content="OdÅ›wieÅ¼" Style="{StaticResource ButtonPrimary}" Click="BtnOdswiez_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- === PANEL KPI I FILTRÃ“W === -->
        <Border Grid.Row="1" Background="#F8FAFC" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- KPI -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- DziÅ› do zadzwonienia -->
                    <Border Style="{StaticResource KpiCard}" Margin="0,0,12,0" BorderBrush="{StaticResource ColorPrimary}" BorderThickness="0,0,0,3">
                        <StackPanel>
                            <TextBlock Text="DziÅ› do zadzwonienia" FontSize="10" Foreground="{StaticResource ColorTextLight}" FontWeight="Medium"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock x:Name="txtKpiDzisiaj" Text="0" FontSize="24" FontWeight="Bold" Foreground="{StaticResource ColorPrimary}"/>
                                <TextBlock Text=" kontaktÃ³w" FontSize="11" Foreground="{StaticResource ColorTextMuted}" VerticalAlignment="Bottom" Margin="0,0,0,4"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- PrÃ³by kontaktu -->
                    <Border Style="{StaticResource KpiCard}" Margin="0,0,12,0" BorderBrush="{StaticResource ColorWarning}" BorderThickness="0,0,0,3">
                        <StackPanel>
                            <TextBlock Text="PrÃ³by kontaktu" FontSize="10" Foreground="{StaticResource ColorTextLight}" FontWeight="Medium"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock x:Name="txtKpiProby" Text="0" FontSize="24" FontWeight="Bold" Foreground="{StaticResource ColorWarning}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- NawiÄ…zane kontakty -->
                    <Border Style="{StaticResource KpiCard}" Margin="0,0,12,0" BorderBrush="{StaticResource ColorSuccess}" BorderThickness="0,0,0,3">
                        <StackPanel>
                            <TextBlock Text="NawiÄ…zane kontakty" FontSize="10" Foreground="{StaticResource ColorTextLight}" FontWeight="Medium"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock x:Name="txtKpiNawiazane" Text="0" FontSize="24" FontWeight="Bold" Foreground="{StaticResource ColorSuccess}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Do wysÅ‚ania oferty -->
                    <Border Style="{StaticResource KpiCard}" Margin="0,0,12,0" BorderBrush="{StaticResource ColorInfo}" BorderThickness="0,0,0,3">
                        <StackPanel>
                            <TextBlock Text="Do wysÅ‚ania oferty" FontSize="10" Foreground="{StaticResource ColorTextLight}" FontWeight="Medium"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock x:Name="txtKpiOferty" Text="0" FontSize="24" FontWeight="Bold" Foreground="{StaticResource ColorInfo}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Suma wszystkich -->
                    <Border Style="{StaticResource KpiCard}" BorderBrush="{StaticResource ColorTextLight}" BorderThickness="0,0,0,3">
                        <StackPanel>
                            <TextBlock Text="Razem w bazie" FontSize="10" Foreground="{StaticResource ColorTextLight}" FontWeight="Medium"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock x:Name="txtKpiRazem" Text="0" FontSize="24" FontWeight="Bold" Foreground="{StaticResource ColorText}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Filtry -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Szukaj -->
                    <Border Background="White" CornerRadius="8" Padding="4" Margin="0,0,10,0" BorderBrush="{StaticResource ColorBorder}" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ”" FontSize="14" VerticalAlignment="Center" Margin="8,0,6,0" Foreground="{StaticResource ColorTextMuted}"/>
                            <TextBox x:Name="txtSzukaj" Grid.Column="1" Width="200" BorderThickness="0" Padding="4,8"
                                     FontSize="12" Background="Transparent" VerticalAlignment="Center"
                                     TextChanged="TxtSzukaj_TextChanged"/>
                        </Grid>
                    </Border>

                    <!-- Status -->
                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="Status" FontSize="10" Foreground="{StaticResource ColorTextLight}" Margin="0,0,0,4"/>
                        <ComboBox x:Name="cmbStatus" Style="{StaticResource ModernComboBox}" Width="160"
                                  SelectionChanged="CmbStatus_SelectionChanged">
                            <ComboBoxItem Content="Wszystkie statusy" IsSelected="True"/>
                            <ComboBoxItem Content="Do zadzwonienia"/>
                            <ComboBoxItem Content="PrÃ³ba kontaktu"/>
                            <ComboBoxItem Content="NawiÄ…zano kontakt"/>
                            <ComboBoxItem Content="Zgoda na dalszy kontakt"/>
                            <ComboBoxItem Content="Do wysÅ‚ania oferta"/>
                            <ComboBoxItem Content="Nie zainteresowany"/>
                            <ComboBoxItem Content="PoprosiÅ‚ o usuniÄ™cie"/>
                            <ComboBoxItem Content="BÅ‚Ä™dny rekord"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- WojewÃ³dztwo -->
                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="WojewÃ³dztwo" FontSize="10" Foreground="{StaticResource ColorTextLight}" Margin="0,0,0,4"/>
                        <ComboBox x:Name="cmbWojewodztwo" Style="{StaticResource ModernComboBox}" Width="140"
                                  SelectionChanged="CmbWojewodztwo_SelectionChanged"/>
                    </StackPanel>

                    <!-- BranÅ¼a -->
                    <StackPanel>
                        <TextBlock Text="BranÅ¼a (PKD)" FontSize="10" Foreground="{StaticResource ColorTextLight}" Margin="0,0,0,4"/>
                        <ComboBox x:Name="cmbBranza" Style="{StaticResource ModernComboBox}" Width="200"
                                  SelectionChanged="CmbBranza_SelectionChanged"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- === GÅÃ“WNA ZAWARTOÅšÄ† === -->
        <Grid Grid.Row="2" Margin="14,8,14,14">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="600"/>
                <ColumnDefinition Width="380"/>
            </Grid.ColumnDefinitions>

            <!-- Lista kontaktÃ³w -->
            <Border Grid.Column="0" Style="{StaticResource CardPanel}" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- NagÅ‚Ã³wek listy -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <TextBlock Text="Lista kontaktÃ³w" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource ColorText}" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock x:Name="txtLiczbaWynikow" Text="0 wynikÃ³w" FontSize="11" Foreground="{StaticResource ColorTextMuted}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <Button x:Name="btnAdmin" Content="âš™ Admin" Style="{StaticResource ButtonIcon}" FontSize="11" Foreground="{StaticResource ColorTextLight}"
                                    Click="BtnAdmin_Click" Visibility="Collapsed"/>
                        </StackPanel>
                    </Grid>

                    <!-- DataGrid -->
                    <Border Grid.Row="1" BorderBrush="{StaticResource ColorBorder}" BorderThickness="1" CornerRadius="10" ClipToBounds="True">
                        <DataGrid x:Name="dgKontakty"
                                  Style="{StaticResource ModernDataGrid}"
                                  ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                  CellStyle="{StaticResource DataGridCellStyle}"
                                  SelectionChanged="DgKontakty_SelectionChanged"
                                  MouseDoubleClick="DgKontakty_MouseDoubleClick">
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="ðŸ“ž ZadzwoÅ„ (click-to-call)" Click="MenuZadzwon_Click" FontWeight="SemiBold"/>
                                    <MenuItem Header="âœï¸ Edytuj dane kontaktowe" Click="MenuEdytuj_Click"/>
                                    <MenuItem Header="ðŸ’µ UtwÃ³rz ofertÄ™ cenowÄ…" Click="MenuOferta_Click"/>
                                    <Separator/>
                                    <MenuItem Header="ðŸ” Szukaj w Google" Click="MenuGoogle_Click"/>
                                    <MenuItem Header="ðŸ—ºï¸ PokaÅ¼ trasÄ™ na mapie" Click="MenuTrasa_Click"/>
                                    <Separator/>
                                    <MenuItem Header="ZmieÅ„ status">
                                        <MenuItem Header="Do zadzwonienia" Click="MenuStatus_Click" Tag="Do zadzwonienia"/>
                                        <MenuItem Header="PrÃ³ba kontaktu" Click="MenuStatus_Click" Tag="PrÃ³ba kontaktu"/>
                                        <MenuItem Header="NawiÄ…zano kontakt" Click="MenuStatus_Click" Tag="NawiÄ…zano kontakt"/>
                                        <MenuItem Header="Zgoda na dalszy kontakt" Click="MenuStatus_Click" Tag="Zgoda na dalszy kontakt"/>
                                        <MenuItem Header="Do wysÅ‚ania oferta" Click="MenuStatus_Click" Tag="Do wysÅ‚ania oferta"/>
                                        <Separator/>
                                        <MenuItem Header="Nie zainteresowany" Click="MenuStatus_Click" Tag="Nie zainteresowany"/>
                                        <MenuItem Header="PoprosiÅ‚ o usuniÄ™cie" Click="MenuStatus_Click" Tag="PoprosiÅ‚ o usuniÄ™cie"/>
                                        <MenuItem Header="BÅ‚Ä™dny rekord" Click="MenuStatus_Click" Tag="BÅ‚Ä™dny rekord (do raportu)"/>
                                    </MenuItem>
                                    <Separator/>
                                    <MenuItem Header="ðŸ“‹ Kopiuj telefon" Click="MenuKopiujTelefon_Click"/>
                                    <MenuItem Header="ðŸ“‹ Kopiuj email" Click="MenuKopiujEmail_Click"/>
                                    <MenuItem Header="ðŸ“‹ Kopiuj adres" Click="MenuKopiujAdres_Click"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Status" Width="130">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border x:Name="statusBorder" CornerRadius="6" Padding="8,4" HorizontalAlignment="Left">
                                                <TextBlock x:Name="statusText" Text="{Binding Status}" FontSize="10" FontWeight="SemiBold"/>
                                            </Border>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Do zadzwonienia">
                                                    <Setter TargetName="statusBorder" Property="Background" Value="#E5E7EB"/>
                                                    <Setter TargetName="statusText" Property="Foreground" Value="#374151"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="PrÃ³ba kontaktu">
                                                    <Setter TargetName="statusBorder" Property="Background" Value="#FEF3C7"/>
                                                    <Setter TargetName="statusText" Property="Foreground" Value="#92400E"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="NawiÄ…zano kontakt">
                                                    <Setter TargetName="statusBorder" Property="Background" Value="#DBEAFE"/>
                                                    <Setter TargetName="statusText" Property="Foreground" Value="#1E40AF"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Zgoda na dalszy kontakt">
                                                    <Setter TargetName="statusBorder" Property="Background" Value="#D1FAE5"/>
                                                    <Setter TargetName="statusText" Property="Foreground" Value="#065F46"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Do wysÅ‚ania oferta">
                                                    <Setter TargetName="statusBorder" Property="Background" Value="#EDE9FE"/>
                                                    <Setter TargetName="statusText" Property="Foreground" Value="#5B21B6"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Nie zainteresowany">
                                                    <Setter TargetName="statusBorder" Property="Background" Value="#FEE2E2"/>
                                                    <Setter TargetName="statusText" Property="Foreground" Value="#991B1B"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="PoprosiÅ‚ o usuniÄ™cie">
                                                    <Setter TargetName="statusBorder" Property="Background" Value="#FEE2E2"/>
                                                    <Setter TargetName="statusText" Property="Foreground" Value="#991B1B"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Nazwa firmy" Binding="{Binding NAZWA}" Width="*" MinWidth="200">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="#1F2937"/>
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Telefon" Binding="{Binding TELEFON_K}" Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="#2563EB"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Miasto" Binding="{Binding MIASTO}" Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="WojewÃ³dztwo" Binding="{Binding Wojewodztwo}" Width="110">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#6B7280"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="BranÅ¼a" Binding="{Binding PKD_Opis}" Width="180">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#6B7280"/>
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Ostatnia zmiana" Binding="{Binding OstatniaZmiana, StringFormat=dd.MM.yy HH:mm}" Width="110">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#9CA3AF"/>
                                            <Setter Property="FontSize" Value="11"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
