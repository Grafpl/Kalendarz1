                                <TextBlock Text="BranÅ¼a:" FontSize="9" Foreground="#94A3B8" VerticalAlignment="Center" Margin="0,0,3,0"/>
                                <ComboBox x:Name="cmbBranza" Style="{StaticResource DarkComboBox}" Width="110" Margin="0,0,6,0" SelectionChanged="CmbBranza_SelectionChanged" ItemContainerStyle="{StaticResource DarkComboBoxItem}"/>
                                <TextBlock Text="Handlowiec:" FontSize="9" Foreground="#94A3B8" VerticalAlignment="Center" Margin="0,0,3,0"/>
