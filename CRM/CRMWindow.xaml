<Window x:Class="Kalendarz1.CRM.CRMWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CRM Manager Pro"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        x:Name="mainWindow"
        Background="#FAFAFA"
        FontFamily="Segoe UI">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- MOTYW BIAÅO-CZERWONO-ZIELONY -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#16A34A"/>
        <SolidColorBrush x:Key="PrimaryLight" Color="#DCFCE7"/>
        <SolidColorBrush x:Key="AccentRed" Color="#DC2626"/>
        <SolidColorBrush x:Key="AccentRedLight" Color="#FEE2E2"/>
        <SolidColorBrush x:Key="DangerColor" Color="#DC2626"/>
        <SolidColorBrush x:Key="TextDark" Color="#111827"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E5E7EB"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.04" BlurRadius="10" ShadowDepth="2" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="KpiCard" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="MinWidth" Value="150"/>
        </Style>

        <Style x:Key="BtnIcon" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnPrimary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                            To="#FEF2F2" Duration="0:0:1.5"/>
        </Storyboard>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" CornerRadius="12" Margin="0,0,0,16" Padding="12" Background="White">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="12" ShadowDepth="2" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                    <Border Width="44" Height="44" CornerRadius="8" Margin="5,0,15,0" Background="#16A34A">
                        <TextBlock Text="CRM" FontWeight="Black" FontSize="12" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="CRM" FontWeight="Black" FontSize="20" Foreground="#16A34A"/>
                        <TextBlock Text="Manager Pro" FontSize="10" Foreground="{StaticResource TextGray}"/>
                    </StackPanel>
                </StackPanel>

                <Border Grid.Column="1" Margin="20,0" Padding="20,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="1,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="AKTYWNY:" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextGray}" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="txtHeaderKlient" Text="Wybierz z listy..." FontWeight="Bold" FontSize="15" Foreground="{StaticResource TextDark}" TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                <TextBlock x:Name="txtHeaderMiasto" Text="" FontSize="12" Foreground="{StaticResource TextGray}" Margin="0,0,15,0"/>
                                <TextBlock x:Name="txtHeaderTelefon" Text="" FontSize="13" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Planowany kontakt -->
                        <Border x:Name="panelNastepnyKontakt" Grid.Column="1" Background="#F3F4F6" CornerRadius="6" Padding="10,6" Margin="15,0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“…" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <StackPanel>
                                    <TextBlock Text="KONTAKT" FontSize="8" FontWeight="Bold" Foreground="{StaticResource TextGray}"/>
                                    <TextBlock x:Name="txtKlientNastepnyKontakt" Text="Brak" FontWeight="Bold" FontSize="11" Foreground="{StaticResource TextDark}"/>
                                </StackPanel>
                                <Button Content="ðŸ“…" Style="{StaticResource BtnIcon}" ToolTip="ZmieÅ„ datÄ™ kontaktu" Click="MenuUstawDate_Click" Padding="4" Margin="6,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button x:Name="btnHeaderCall" Content="ðŸ“ž" Style="{StaticResource BtnIcon}" ToolTip="ZadzwoÅ„" Click="BtnKlientZadzwon_Click"/>
                            <Button x:Name="btnHeaderEdit" Content="âœï¸" Style="{StaticResource BtnIcon}" ToolTip="Edytuj" Click="BtnKlientEdytuj_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">

                    <StackPanel VerticalAlignment="Center" Margin="0,0,20,0" Width="120">
                        <Grid Margin="0,0,0,4">
                            <TextBlock Text="CEL DNIA (15)" FontSize="9" FontWeight="Bold" Foreground="{StaticResource TextGray}"/>
                            <TextBlock x:Name="txtTargetInfo" Text="0/15" FontSize="10" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" HorizontalAlignment="Right"/>
                        </Grid>
                        <ProgressBar x:Name="pbTarget" Height="6" BorderThickness="0" Background="#F3F4F6" Foreground="{StaticResource PrimaryColor}" Maximum="15" Value="0">
                            <ProgressBar.Clip>
                                <RectangleGeometry Rect="0,0,120,6" RadiusX="3" RadiusY="3"/>
                            </ProgressBar.Clip>
                        </ProgressBar>
                    </StackPanel>

                    <Button Content="ðŸ“Š Kanban" Style="{StaticResource BtnIcon}" Click="BtnKanban_Click"/>
                    <Button Content="ðŸ“ˆ Dashboard" Style="{StaticResource BtnIcon}" Click="BtnDashboard_Click" Foreground="#DC2626" FontWeight="Bold"/>
                    <Button x:Name="btnManager" Content="ðŸ‘” Szef" Style="{StaticResource BtnIcon}" Click="BtnManager_Click" Foreground="{StaticResource DangerColor}" FontWeight="Bold"/>
                    <Button Content="ðŸ—ºï¸ Mapa" Style="{StaticResource BtnIcon}" Click="BtnMapa_Click"/>
                    <Button x:Name="btnAdmin" Content="âš™ï¸" Style="{StaticResource BtnIcon}" Click="BtnAdmin_Click" Visibility="Collapsed"/>

                    <Button Content="+ Nowy" Click="BtnDodaj_Click" Margin="10,0,0,0" Padding="15,8" BorderThickness="0" Cursor="Hand" Foreground="White" FontWeight="Bold">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bd" CornerRadius="6" Background="#16A34A">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- LEWA STRONA: Filtry i ComboBox -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Border x:Name="chipVIP" Background="#FEF3C7" CornerRadius="12" Padding="8,4" Margin="0,0,6,0" Cursor="Hand" MouseLeftButtonDown="Chip_Click" Tag="VIP">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â­" FontSize="10" VerticalAlignment="Center"/>
                        <TextBlock Text="VIP" FontSize="9" FontWeight="Bold" Foreground="#92400E" Margin="3,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border x:Name="chipPilne" Background="#FEE2E2" CornerRadius="12" Padding="8,4" Margin="0,0,6,0" Cursor="Hand" MouseLeftButtonDown="Chip_Click" Tag="Pilne">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”¥" FontSize="10" VerticalAlignment="Center"/>
                        <TextBlock Text="Pilne" FontSize="9" FontWeight="Bold" Foreground="#991B1B" Margin="3,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border x:Name="chipPremium" Background="#E0E7FF" CornerRadius="12" Padding="8,4" Margin="0,0,6,0" Cursor="Hand" MouseLeftButtonDown="Chip_Click" Tag="Premium">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’Ž" FontSize="10" VerticalAlignment="Center"/>
                        <TextBlock Text="Premi" FontSize="9" FontWeight="Bold" Foreground="#3730A3" Margin="3,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border x:Name="chipZalegle" Background="#FEE2E2" CornerRadius="12" Padding="8,4" Margin="0,0,12,0" Cursor="Hand" MouseLeftButtonDown="ChipZalegle_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš ï¸" FontSize="10" VerticalAlignment="Center"/>
                        <TextBlock Text="Zaleg" FontSize="9" FontWeight="Bold" Foreground="#991B1B" Margin="3,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <TextBlock Text="Status:" FontSize="10" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <ComboBox x:Name="cmbStatus" Width="120" Margin="0,0,8,0" Padding="4" FontSize="11" SelectionChanged="CmbStatus_SelectionChanged"/>
                <TextBlock Text="Woj:" FontSize="10" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <ComboBox x:Name="cmbWojewodztwo" Width="100" Margin="0,0,8,0" Padding="4" FontSize="11" SelectionChanged="CmbWojewodztwo_SelectionChanged"/>
                <TextBlock Text="BranÅ¼a:" FontSize="10" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <ComboBox x:Name="cmbBranza" Width="130" Margin="0,0,8,0" Padding="4" FontSize="11" SelectionChanged="CmbBranza_SelectionChanged"/>
                <CheckBox x:Name="chkTylkoMoje" Content="Tylko moi" FontSize="10" Foreground="#6366F1" FontWeight="SemiBold" VerticalContentAlignment="Center" Margin="4,0,0,0" Checked="ChkTylkoMoje_Changed" Unchecked="ChkTylkoMoje_Changed"/>
            </StackPanel>

            <!-- PRAWA STRONA: KPI -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Border Style="{StaticResource KpiCard}">
                    <StackPanel>
                        <TextBlock Text="DO ZADZWONIENIA" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextGray}"/>
                        <Grid Margin="0,5,0,0">
                            <TextBlock Text="ðŸ“ž" FontSize="18" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtKpiDzisiaj" Text="0" FontSize="22" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource KpiCard}">
                    <StackPanel>
                        <TextBlock Text="ZALEGÅE" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextGray}"/>
                        <Grid Margin="0,5,0,0">
                            <TextBlock Text="âš ï¸" FontSize="18" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtKpiZalegle" Text="0" FontSize="22" FontWeight="Bold" Foreground="{StaticResource DangerColor}" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource KpiCard}">
                    <StackPanel>
                        <TextBlock Text="OTWARTE OFERTY" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextGray}"/>
                        <Grid Margin="0,5,0,0">
                            <TextBlock Text="ðŸ“„" FontSize="18" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtKpiOferty" Text="0" FontSize="22" FontWeight="Bold" Foreground="#2563EB" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="460"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="8" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Margin="0,0,16,0" ClipToBounds="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Margin="16,12" Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Baza OdbiorcÃ³w" FontWeight="Bold" FontSize="16" Foreground="{StaticResource TextDark}" VerticalAlignment="Center"/>
                        <Border Grid.Column="1" Background="#F3F4F6" CornerRadius="8" VerticalAlignment="Center" Height="36" Margin="20,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="36"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="ðŸ”" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource TextGray}" FontSize="14"/>
                                <TextBox x:Name="txtSzukaj" Grid.Column="1" Background="Transparent" BorderThickness="0"
                                         VerticalContentAlignment="Center" FontSize="13" Padding="0,0,10,0"
                                         TextChanged="TxtSzukaj_TextChanged" Tag="Szukaj firmy..."/>
                            </Grid>
                        </Border>
                        <TextBlock x:Name="txtLiczbaWynikow" Grid.Column="2" Text="0 klientÃ³w" HorizontalAlignment="Right" FontSize="12" Foreground="{StaticResource TextGray}" VerticalAlignment="Center"/>
                    </Grid>

                    <DataGrid x:Name="dgKontakty" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                              HeadersVisibility="Column" GridLinesVisibility="None"
                              BorderThickness="0" Background="White" RowHeaderWidth="0"
                              SelectionMode="Single" SelectionUnit="FullRow"
                              SelectionChanged="DgKontakty_SelectionChanged"
                              MouseDoubleClick="DgKontakty_MouseDoubleClick">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F9FAFB"/>
                                <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
                                <Setter Property="Padding" Value="12,14"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                                <Setter Property="VerticalAlignment" Value="Stretch"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}" BorderThickness="0" Padding="8,4">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Height" Value="60"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0FDF4"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding CzyZaniedbany}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard Storyboard="{StaticResource PulseAnimation}"/>
                                        </DataTrigger.EnterActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Status" Width="155">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="4" Padding="6,4" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#F1F5F9"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Do zadzwonienia">
                                                            <Setter Property="Background" Value="#F1F5F9"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="PrÃ³ba kontaktu">
                                                            <Setter Property="Background" Value="#FFEDD5"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="NawiÄ…zano kontakt">
                                                            <Setter Property="Background" Value="#DCFCE7"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Zgoda na dalszy kontakt">
                                                            <Setter Property="Background" Value="#CCFBF1"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Do wysÅ‚ania oferta">
                                                            <Setter Property="Background" Value="#DBEAFE"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Nie zainteresowany">
                                                            <Setter Property="Background" Value="#FEE2E2"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock VerticalAlignment="Center" FontSize="14" Margin="0,0,6,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="ðŸ“‹"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Do zadzwonienia">
                                                                    <Setter Property="Text" Value="ðŸ“ž"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="PrÃ³ba kontaktu">
                                                                    <Setter Property="Text" Value="â³"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="NawiÄ…zano kontakt">
                                                                    <Setter Property="Text" Value="âœ…"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Zgoda na dalszy kontakt">
                                                                    <Setter Property="Text" Value="ðŸ¤"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Do wysÅ‚ania oferta">
                                                                    <Setter Property="Text" Value="ðŸ“„"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Nie zainteresowany">
                                                                    <Setter Property="Text" Value="âŒ"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding Status}" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#64748B"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Do zadzwonienia">
                                                                    <Setter Property="Foreground" Value="#64748B"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="PrÃ³ba kontaktu">
                                                                    <Setter Property="Foreground" Value="#9A3412"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="NawiÄ…zano kontakt">
                                                                    <Setter Property="Foreground" Value="#166534"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Zgoda na dalszy kontakt">
                                                                    <Setter Property="Foreground" Value="#0D9488"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Do wysÅ‚ania oferta">
                                                                    <Setter Property="Foreground" Value="#1E40AF"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Nie zainteresowany">
                                                                    <Setter Property="Foreground" Value="#991B1B"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Firma" Binding="{Binding NAZWA}" Width="*" FontWeight="SemiBold" Foreground="{StaticResource TextDark}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="FontSize" Value="14"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Handlowiec" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding OstatniHandlowiec}" FontSize="10" Foreground="#6366F1" FontWeight="SemiBold"
                                                   TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   ToolTip="{Binding OstatniHandlowiec}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Tagi" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#FEF3C7" CornerRadius="4" Padding="6,2" HorizontalAlignment="Center" Visibility="{Binding MaTagi, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock Text="{Binding Tagi}" FontSize="10" Foreground="#92400E" FontWeight="Bold" TextAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Miasto" Binding="{Binding MIASTO}" Width="100" Foreground="{StaticResource TextDark}">
                                <DataGridTextColumn.ElementStyle>
