                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“…" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <StackPanel>
                                    <TextBlock Text="KONTAKT" FontSize="8" FontWeight="Bold" Foreground="#64748B"/>
                                    <TextBlock x:Name="txtKlientNastepnyKontakt" Text="Brak" FontWeight="Bold" FontSize="11" Foreground="#E2E8F0"/>
                                </StackPanel>
                                <Button Content="ðŸ“…" Style="{StaticResource BtnIcon}" ToolTip="ZmieÅ„ datÄ™ kontaktu" Click="MenuUstawDate_Click" Padding="4" Margin="6,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button x:Name="btnHeaderCall" Content="ðŸ“ž" Style="{StaticResource BtnIcon}" ToolTip="ZadzwoÅ„" Click="BtnKlientZadzwon_Click"/>
                            <Button x:Name="btnHeaderEdit" Content="âœï¸" Style="{StaticResource BtnIcon}" ToolTip="Edytuj" Click="BtnKlientEdytuj_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">

                    <!-- Avatar i nazwa zalogowanego uÅ¼ytkownika z celami -->
                    <Border Background="#334155" CornerRadius="8" Padding="12,8" Margin="0,0,15,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="userAvatarBorder" Width="56" Height="56" CornerRadius="28" ClipToBounds="True" Margin="0,0,12,0" Background="#312E81"
                                    BorderBrush="#6366F1" BorderThickness="2">
                                <Image x:Name="imgUserAvatar" Stretch="UniformToFill"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center" Margin="0,0,20,0">
                                <TextBlock x:Name="txtUserName" Text="UÅ¼ytkownik" FontSize="16" FontWeight="Bold" Foreground="#E2E8F0"/>
                            </StackPanel>
                            <!-- Cel dzienny z pozycjÄ… -->
                            <Border x:Name="borderCelDzienny" Background="#14532D" CornerRadius="6" Padding="12,6" Margin="0,0,8,0">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock x:Name="txtPozycjaDzienna" Text="" FontSize="14" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtCelDziennyLabel" Text="CEL DNIA" FontSize="9" FontWeight="Bold" Foreground="#22C55E" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock x:Name="txtCelDziennyWykonane" Text="0" FontSize="22" FontWeight="Black" Foreground="#22C55E"/>
                                        <TextBlock Text="/" FontSize="18" FontWeight="Bold" Foreground="#64748B" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtCelDziennyCel" Text="15" FontSize="18" FontWeight="Bold" Foreground="#64748B" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <!-- Cel tygodniowy z pozycjÄ… -->
                            <Border x:Name="borderCelTygodniowy" Background="#1E3A8A" CornerRadius="6" Padding="12,6">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock x:Name="txtPozycjaTygodniowa" Text="" FontSize="14" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtCelTygodniowyLabel" Text="CEL TYGODNIA" FontSize="9" FontWeight="Bold" Foreground="#60A5FA" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock x:Name="txtCelTygodniowyWykonane" Text="0" FontSize="22" FontWeight="Black" Foreground="#60A5FA"/>
                                        <TextBlock Text="/" FontSize="18" FontWeight="Bold" Foreground="#64748B" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtCelTygodniowyCel" Text="120" FontSize="18" FontWeight="Bold" Foreground="#64748B" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <StackPanel VerticalAlignment="Center" Margin="0,0,15,0" Width="120" Visibility="Collapsed">
                        <Grid Margin="0,0,0,4">
                            <TextBlock x:Name="txtTargetLabel" Text="CEL DNIA (15)" FontSize="9" FontWeight="Bold" Foreground="#64748B"/>
                            <TextBlock x:Name="txtTargetInfo" Text="0/15" FontSize="10" FontWeight="Bold" Foreground="#6366F1" HorizontalAlignment="Right"/>
                        </Grid>
                        <ProgressBar x:Name="pbTarget" Height="6" BorderThickness="0" Background="#334155" Foreground="#6366F1" Maximum="15" Value="0">
                            <ProgressBar.Clip>
                                <RectangleGeometry Rect="0,0,120,6" RadiusX="3" RadiusY="3"/>
                            </ProgressBar.Clip>
                        </ProgressBar>
                    </StackPanel>

                    <Button x:Name="btnReminder" Content="ðŸ”” Przypomnienia" Style="{StaticResource BtnIcon}" Click="BtnReminder_Click" ToolTip="OtwÃ³rz okno przypomnieÅ„" Foreground="#22C55E" FontWeight="SemiBold"/>
                    <Button Content="ðŸ“Š Kanban" Style="{StaticResource BtnIcon}" Click="BtnKanban_Click"/>
                    <Button Content="ðŸ“ˆ Dashboard" Style="{StaticResource BtnIcon}" Click="BtnDashboard_Click" Foreground="#EF4444" FontWeight="Bold"/>
                    <Button x:Name="btnManager" Content="ðŸ‘” Szef" Style="{StaticResource BtnIcon}" Click="BtnManager_Click" Foreground="#EF4444" FontWeight="Bold"/>
                    <Button Content="ðŸ—ºï¸ Mapa" Style="{StaticResource BtnIcon}" Click="BtnMapa_Click"/>
                    <Button Content="ðŸ“¥ Import" Style="{StaticResource BtnIcon}" Click="BtnImportFirm_Click"/>
                    <Button x:Name="btnAdmin" Content="âš™ï¸ Admin" Style="{StaticResource BtnIcon}" Click="BtnAdmin_Click"/>
                    <Button x:Name="btnImportLogo" Style="{StaticResource BtnIcon}" Click="BtnImportLogo_Click" ToolTip="Importuj logo z dysku sieciowego">
                        <StackPanel Orientation="Horizontal">
                            <Path Fill="#A78BFA" Stretch="Uniform" Width="14" Height="14" Margin="0,0,4,0" VerticalAlignment="Center"
                                  Data="M21,19V5c0-1.1-0.9-2-2-2H5c-1.1,0-2,0.9-2,2v14c0,1.1,0.9,2,2,2h14C20.1,21,21,20.1,21,19z M8.5,13.5l2.5,3.01L14.5,12l4.5,6H5L8.5,13.5z"/>
                            <TextBlock Text="Logo" FontSize="11" Foreground="#A78BFA"/>
