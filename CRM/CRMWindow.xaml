                                                            <Image Stretch="UniformToFill" Source="{Binding Operator, Converter={StaticResource HandlowiecAvatarConverter}}"/>
                                                        </Border>

                                                        <!-- Nazwa -->
                                                        <TextBlock Grid.Column="2" Text="{Binding Operator}" FontWeight="SemiBold" FontSize="11" Foreground="#E2E8F0"
                                                                   VerticalAlignment="Center" Margin="6,0,0,0" TextTrimming="CharacterEllipsis"/>

                                                        <!-- Procent -->
                                                        <TextBlock Grid.Column="3" Text="{Binding ProcentTekst}" FontSize="14" FontWeight="Bold" Foreground="#22C55E" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- RANKING TYGODNIOWY -->
                                <StackPanel Grid.Column="1" Margin="6,0,0,0">
                                    <TextBlock Text="RANKING TYGODNIOWY" FontSize="12" FontWeight="Bold" Foreground="#60A5FA" Margin="0,0,0,8"/>
                                    <ItemsControl x:Name="listaRankingTygodniowy" BorderThickness="0" Background="Transparent">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#0F172A" CornerRadius="6" Padding="8,6" Margin="0,0,0,4" BorderBrush="#334155" BorderThickness="1">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="24"/>
                                                            <ColumnDefinition Width="32"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Pozycja z medalem - kolorowa -->
                                                        <TextBlock Text="{Binding Medal, Converter={StaticResource MedalTextConverter}}"
                                                                   Foreground="{Binding Medal, Converter={StaticResource MedalColorConverter}}"
                                                                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontWeight="Bold"/>

                                                        <!-- Avatar -->
                                                        <Border Grid.Column="1" Width="26" Height="26" CornerRadius="13" ClipToBounds="True"
                                                                VerticalAlignment="Center" Margin="4,0,0,0" Background="#312E81">
                                                            <Image Stretch="UniformToFill" Source="{Binding Operator, Converter={StaticResource HandlowiecAvatarConverter}}"/>
                                                        </Border>

                                                        <!-- Nazwa -->
                                                        <TextBlock Grid.Column="2" Text="{Binding Operator}" FontWeight="SemiBold" FontSize="11" Foreground="#E2E8F0"
                                                                   VerticalAlignment="Center" Margin="6,0,0,0" TextTrimming="CharacterEllipsis"/>

                                                        <!-- Procent -->
                                                        <TextBlock Grid.Column="3" Text="{Binding ProcentTekst}" FontSize="14" FontWeight="Bold" Foreground="#60A5FA" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- Ukryte elementy dla kompatybilnoÅ›ci -->
                                <RadioButton x:Name="rbDzienny" Visibility="Collapsed" IsChecked="True" GroupName="OkresRankingu" Checked="RbOkresRankingu_Checked"/>
                                <RadioButton x:Name="rbTygodniowy" Visibility="Collapsed" GroupName="OkresRankingu" Checked="RbOkresRankingu_Checked"/>
                                <ListBox x:Name="listaRanking" Visibility="Collapsed" MouseDoubleClick="ListaRanking_MouseDoubleClick"/>
                            </Grid>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <Border x:Name="toastPopup" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,40"
                Background="#1E293B" CornerRadius="25" Padding="25,12" Opacity="0" IsHitTestVisible="False" BorderBrush="#334155" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="10"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="âœ… " Foreground="#22C55E" FontSize="14"/>
                <TextBlock x:Name="toastText" Text="Wykonano" Foreground="#E2E8F0" FontWeight="SemiBold" FontSize="14"/>
            </StackPanel>
        </Border>


        <Border x:Name="loadingOverlay" Grid.RowSpan="2" Background="#E60F172A" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="150" Height="4" Foreground="#6366F1" Background="#334155" BorderThickness="0"/>
                <TextBlock Text="Wczytywanie bazy..." Foreground="#94A3B8" Margin="0,15,0,0" HorizontalAlignment="Center" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
