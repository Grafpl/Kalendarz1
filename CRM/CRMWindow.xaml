                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Email" FontSize="10" Foreground="{StaticResource ColorTextMuted}"/>
                                <TextBlock x:Name="txtKlientEmail" Text="-" FontSize="12" Foreground="{StaticResource ColorPrimary}" TextTrimming="CharacterEllipsis" Cursor="Hand"/>
                            </StackPanel>
                        </Grid>

                        <!-- Adres -->
                        <StackPanel Grid.Row="2" Margin="0,0,0,12">
                            <TextBlock Text="Adres" FontSize="10" Foreground="{StaticResource ColorTextMuted}"/>
                            <TextBlock x:Name="txtKlientAdres" Text="-" FontSize="12" Foreground="{StaticResource ColorText}" TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Przyciski akcji -->
                        <StackPanel Grid.Row="3" Orientation="Horizontal">
                            <Button x:Name="btnKlientZadzwon" Content="ðŸ“ž ZadzwoÅ„" Style="{StaticResource ButtonPrimary}"
                                    Padding="12,8" FontSize="11" Margin="0,0,8,0" Click="BtnKlientZadzwon_Click"/>
                            <Button x:Name="btnKlientOferta" Content="ðŸ’µ Oferta" Style="{StaticResource ButtonSuccess}"
                                    Padding="12,8" FontSize="11" Margin="0,0,8,0" Click="BtnKlientOferta_Click"/>
                            <Button x:Name="btnKlientEdytuj" Content="âœï¸ Edytuj" Style="{StaticResource ButtonSecondary}"
                                    Padding="12,8" FontSize="11" Click="BtnKlientEdytuj_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Notatki i Historia -->
                <Border Grid.Row="1" Style="{StaticResource CardPanel}" Margin="0,0,0,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- NagÅ‚Ã³wek notatek -->
                        <TextBlock Grid.Row="0" Text="Notatki" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource ColorText}" Margin="0,0,0,10"/>

                        <!-- Lista notatek -->
                        <Border Grid.Row="1" Background="#F9FAFB" CornerRadius="8" Padding="8" Margin="0,0,0,10">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                                <ItemsControl x:Name="listaNotatek">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="White" CornerRadius="6" Padding="10" Margin="0,0,0,6" BorderBrush="#E5E7EB" BorderThickness="1">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Tresc}" FontSize="12" Foreground="{StaticResource ColorText}" TextWrapping="Wrap"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                        <TextBlock Text="{Binding DataUtworzenia, StringFormat=dd.MM.yy HH:mm}" FontSize="10" Foreground="{StaticResource ColorTextMuted}"/>
                                                        <TextBlock Text=" â€¢ " FontSize="10" Foreground="{StaticResource ColorTextMuted}"/>
                                                        <TextBlock Text="{Binding Operator}" FontSize="10" Foreground="{StaticResource ColorTextMuted}"/>
