                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding Status}" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#94A3B8"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Do zadzwonienia">
                                                                    <Setter Property="Foreground" Value="#94A3B8"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="PrÃ³ba kontaktu">
                                                                    <Setter Property="Foreground" Value="#FCD34D"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="NawiÄ…zano kontakt">
                                                                    <Setter Property="Foreground" Value="#4ADE80"/>
