<Window x:Class="Kalendarz1.CRM.CRMWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CRM - Relacje z Klientami"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFC"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- === KOLORY === -->
        <SolidColorBrush x:Key="ColorPrimary" Color="#2563EB"/>
        <SolidColorBrush x:Key="ColorPrimaryDark" Color="#1D4ED8"/>
        <SolidColorBrush x:Key="ColorPrimaryLight" Color="#DBEAFE"/>
        <SolidColorBrush x:Key="ColorSuccess" Color="#059669"/>
        <SolidColorBrush x:Key="ColorSuccessLight" Color="#D1FAE5"/>
        <SolidColorBrush x:Key="ColorWarning" Color="#D97706"/>
        <SolidColorBrush x:Key="ColorWarningLight" Color="#FEF3C7"/>
        <SolidColorBrush x:Key="ColorDanger" Color="#DC2626"/>
        <SolidColorBrush x:Key="ColorDangerLight" Color="#FEE2E2"/>
        <SolidColorBrush x:Key="ColorInfo" Color="#7C3AED"/>
        <SolidColorBrush x:Key="ColorInfoLight" Color="#EDE9FE"/>
        <SolidColorBrush x:Key="ColorText" Color="#111827"/>
        <SolidColorBrush x:Key="ColorTextLight" Color="#4B5563"/>
        <SolidColorBrush x:Key="ColorTextMuted" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="ColorBorder" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="ColorBackground" Color="#F8FAFC"/>

        <!-- === GRADIENT DLA NAGÅÃ“WKA === -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#1E40AF" Offset="0"/>
            <GradientStop Color="#3B82F6" Offset="1"/>
        </LinearGradientBrush>

        <!-- === STYL KARTY === -->
        <Style x:Key="CardPanel" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" Color="#000000" Opacity="0.08" BlurRadius="24"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- === PRZYCISKI === -->
        <Style x:Key="ButtonPrimary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ColorPrimary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#2563EB" Opacity="0.25" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ColorPrimaryDark}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="4" Color="#2563EB" Opacity="0.35" BlurRadius="12"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonSuccess" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
            <Setter Property="Background" Value="{StaticResource ColorSuccess}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#059669" Opacity="0.25" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#047857"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonWarning" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
            <Setter Property="Background" Value="{StaticResource ColorWarning}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#D97706" Opacity="0.25" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#B45309"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonSecondary" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
            <Setter Property="Background" Value="#64748B"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#64748B" Opacity="0.2" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#475569"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonIcon" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F1F5F9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- === TEXTBOX === -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorBorder}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ColorPrimary}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="#2563EB" Opacity="0.15" BlurRadius="8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- === COMBOBOX === -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorBorder}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="MinHeight" Value="42"/>
        </Style>

        <!-- === DATAGRID === -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFBFC"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="RowHeight" Value="56"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="{StaticResource ColorTextLight}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="Height" Value="48"/>
        </Style>

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" BorderThickness="0" Padding="16,10">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EEF2FF"/>
                    <Setter Property="Foreground" Value="{StaticResource ColorText}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- === CONTEXT MENU === -->
        <Style TargetType="ContextMenu">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="HasDropShadow" Value="True"/>
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#EEF2FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- === NAGÅÃ“WEK === -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" Padding="28,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo i tytuÅ‚ -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="White" CornerRadius="12" Padding="14" Margin="0,0,18,0" Opacity="0.95">
                        <TextBlock Text="CRM" FontSize="18" FontWeight="Bold" Foreground="#1E40AF"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Relacje z Klientami" FontSize="22" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="ZarzÄ…dzanie potencjalnymi klientami i kontaktami" FontSize="12" Foreground="#BFDBFE" Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Przyciski akcji -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="btnDodaj" Style="{StaticResource ButtonSuccess}" Margin="0,0,12,0" Click="BtnDodaj_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="+" FontSize="16" FontWeight="Bold" Margin="0,0,8,0"/>
                            <TextBlock Text="Nowy kontakt" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnMapa" Style="{StaticResource ButtonSecondary}" Margin="0,0,12,0" Click="BtnMapa_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ—ºï¸" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Mapa" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnZadania" Style="{StaticResource ButtonWarning}" Margin="0,0,12,0" Click="BtnZadania_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Zadania" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnOdswiez" Click="BtnOdswiez_Click" Cursor="Hand" Padding="14,12" Background="White" Foreground="#1E40AF" FontWeight="SemiBold">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ”„" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Text="OdÅ›wieÅ¼" VerticalAlignment="Center" Foreground="{TemplateBinding Foreground}" FontWeight="{TemplateBinding FontWeight}"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#F0F9FF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- === PANEL KPI I FILTRÃ“W === -->
        <Border Grid.Row="1" Background="White" Padding="24,20" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- KPI -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <!-- DziÅ› do zadzwonienia -->
                    <Border Background="White" CornerRadius="14" Padding="20,16" Margin="0,0,16,0"
                            BorderBrush="#DBEAFE" BorderThickness="2">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" Color="#2563EB" Opacity="0.08" BlurRadius="16"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="#DBEAFE" CornerRadius="10" Width="48" Height="48" Margin="0,0,16,0">
                                <TextBlock Text="ðŸ“ž" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="DZIÅš DO ZADZWONIENIA" FontSize="10" Foreground="{StaticResource ColorTextMuted}" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtKpiDzisiaj" Text="0" FontSize="28" FontWeight="Bold" Foreground="{StaticResource ColorPrimary}" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- PrÃ³by kontaktu -->
                    <Border Background="White" CornerRadius="14" Padding="20,16" Margin="0,0,16,0"
                            BorderBrush="#FEF3C7" BorderThickness="2">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" Color="#D97706" Opacity="0.08" BlurRadius="16"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="#FEF3C7" CornerRadius="10" Width="48" Height="48" Margin="0,0,16,0">
                                <TextBlock Text="ðŸ””" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="PRÃ“BY KONTAKTU" FontSize="10" Foreground="{StaticResource ColorTextMuted}" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtKpiProby" Text="0" FontSize="28" FontWeight="Bold" Foreground="{StaticResource ColorWarning}" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- NawiÄ…zane kontakty -->
                    <Border Background="White" CornerRadius="14" Padding="20,16" Margin="0,0,16,0"
                            BorderBrush="#D1FAE5" BorderThickness="2">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" Color="#059669" Opacity="0.08" BlurRadius="16"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="#D1FAE5" CornerRadius="10" Width="48" Height="48" Margin="0,0,16,0">
                                <TextBlock Text="âœ…" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="NAWIÄ„ZANE" FontSize="10" Foreground="{StaticResource ColorTextMuted}" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtKpiNawiazane" Text="0" FontSize="28" FontWeight="Bold" Foreground="{StaticResource ColorSuccess}" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Do wysÅ‚ania oferty -->
                    <Border Background="White" CornerRadius="14" Padding="20,16" Margin="0,0,16,0"
                            BorderBrush="#EDE9FE" BorderThickness="2">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" Color="#7C3AED" Opacity="0.08" BlurRadius="16"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="#EDE9FE" CornerRadius="10" Width="48" Height="48" Margin="0,0,16,0">
                                <TextBlock Text="ðŸ“„" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="DO OFERTY" FontSize="10" Foreground="{StaticResource ColorTextMuted}" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtKpiOferty" Text="0" FontSize="28" FontWeight="Bold" Foreground="{StaticResource ColorInfo}" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Razem -->
                    <Border Background="#F8FAFC" CornerRadius="14" Padding="20,16"
                            BorderBrush="#E2E8F0" BorderThickness="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="#E2E8F0" CornerRadius="10" Width="48" Height="48" Margin="0,0,16,0">
                                <TextBlock Text="ðŸ‘¥" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="RAZEM W BAZIE" FontSize="10" Foreground="{StaticResource ColorTextMuted}" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtKpiRazem" Text="0" FontSize="28" FontWeight="Bold" Foreground="{StaticResource ColorText}" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Filtry -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Szukaj -->
                    <Border Grid.Column="0" Background="#F8FAFC" CornerRadius="12" Padding="6" BorderBrush="#E2E8F0" BorderThickness="1.5" MaxWidth="400" HorizontalAlignment="Left">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ”" FontSize="16" VerticalAlignment="Center" Margin="12,0,10,0" Foreground="{StaticResource ColorTextMuted}"/>
                            <TextBox x:Name="txtSzukaj" Grid.Column="1" Width="320" BorderThickness="0" Padding="8,12"
                                     FontSize="14" Background="Transparent" VerticalAlignment="Center"
                                     TextChanged="TxtSzukaj_TextChanged">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Foreground" Value="{StaticResource ColorText}"/>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Border>

                    <!-- Filtry -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <StackPanel Margin="0,0,16,0">
                            <TextBlock Text="Status" FontSize="11" Foreground="{StaticResource ColorTextMuted}" FontWeight="SemiBold" Margin="0,0,0,6"/>
                            <ComboBox x:Name="cmbStatus" Style="{StaticResource ModernComboBox}" Width="180"
                                      SelectionChanged="CmbStatus_SelectionChanged">
                                <ComboBoxItem Content="Wszystkie statusy" IsSelected="True"/>
                                <ComboBoxItem Content="Do zadzwonienia"/>
                                <ComboBoxItem Content="PrÃ³ba kontaktu"/>
                                <ComboBoxItem Content="NawiÄ…zano kontakt"/>
                                <ComboBoxItem Content="Zgoda na dalszy kontakt"/>
                                <ComboBoxItem Content="Do wysÅ‚ania oferta"/>
                                <ComboBoxItem Content="Nie zainteresowany"/>
                                <ComboBoxItem Content="PoprosiÅ‚ o usuniÄ™cie"/>
                                <ComboBoxItem Content="BÅ‚Ä™dny rekord"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="0,0,16,0">
                            <TextBlock Text="WojewÃ³dztwo" FontSize="11" Foreground="{StaticResource ColorTextMuted}" FontWeight="SemiBold" Margin="0,0,0,6"/>
                            <ComboBox x:Name="cmbWojewodztwo" Style="{StaticResource ModernComboBox}" Width="160"
                                      SelectionChanged="CmbWojewodztwo_SelectionChanged"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="BranÅ¼a (PKD)" FontSize="11" Foreground="{StaticResource ColorTextMuted}" FontWeight="SemiBold" Margin="0,0,0,6"/>
                            <ComboBox x:Name="cmbBranza" Style="{StaticResource ModernComboBox}" Width="220"
                                      SelectionChanged="CmbBranza_SelectionChanged"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- === GÅÃ“WNA ZAWARTOÅšÄ† === -->
        <Grid Grid.Row="2" Margin="16,16,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="600"/>
                <ColumnDefinition Width="420"/>
            </Grid.ColumnDefinitions>

            <!-- Lista kontaktÃ³w -->
            <Border Grid.Column="0" Style="{StaticResource CardPanel}" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- NagÅ‚Ã³wek listy -->
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Lista kontaktÃ³w" FontSize="16" FontWeight="Bold" Foreground="{StaticResource ColorText}"/>
                            <Border Background="#EEF2FF" CornerRadius="6" Padding="10,4" Margin="12,0,0,0">
                                <TextBlock x:Name="txtLiczbaWynikow" Text="0 wynikÃ³w" FontSize="12" Foreground="{StaticResource ColorPrimary}" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                        <Button x:Name="btnAdmin" Style="{StaticResource ButtonIcon}" HorizontalAlignment="Right"
                                Click="BtnAdmin_Click" Visibility="Collapsed">
                            <TextBlock Text="âš™ï¸ Admin" FontSize="12" Foreground="{StaticResource ColorTextLight}"/>
                        </Button>
                    </Grid>

                    <!-- DataGrid -->
                    <Border Grid.Row="1" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="12" ClipToBounds="True" Background="White">
                        <DataGrid x:Name="dgKontakty"
                                  Style="{StaticResource ModernDataGrid}"
