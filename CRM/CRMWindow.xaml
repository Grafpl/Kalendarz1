                                    </StackPanel>
                                </Border>
                                <Border x:Name="chipPremium" Background="#312E81" CornerRadius="10" Padding="6,3" Margin="0,0,4,0" Cursor="Hand" MouseLeftButtonDown="Chip_Click" Tag="Premium">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ’Ž" FontSize="9" VerticalAlignment="Center"/>
