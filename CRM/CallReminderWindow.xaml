<Window x:Class="Kalendarz1.CRM.CallReminderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Czas na telefony!"
        Width="780" Height="920"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Colors -->
        <Color x:Key="BgPrimary">#0F172A</Color>
        <Color x:Key="BgSecondary">#1E293B</Color>
        <Color x:Key="BgTertiary">#334155</Color>
        <Color x:Key="AccentGreen">#4CAF50</Color>
        <Color x:Key="AccentGreenHover">#66BB6A</Color>
        <Color x:Key="AccentOrange">#F59E0B</Color>
        <Color x:Key="AccentRed">#EF4444</Color>
        <Color x:Key="AccentBlue">#3B82F6</Color>
        <Color x:Key="AccentPurple">#8B5CF6</Color>
        <Color x:Key="AccentCyan">#06B6D4</Color>
        <Color x:Key="TextPrimary">#E2E8F0</Color>
        <Color x:Key="TextSecondary">#94A3B8</Color>
        <Color x:Key="BorderColor">#334155</Color>

        <SolidColorBrush x:Key="BgPrimaryBrush" Color="{StaticResource BgPrimary}"/>
        <SolidColorBrush x:Key="BgSecondaryBrush" Color="{StaticResource BgSecondary}"/>
        <SolidColorBrush x:Key="BgTertiaryBrush" Color="{StaticResource BgTertiary}"/>
        <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreen}"/>
        <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}"/>
        <SolidColorBrush x:Key="AccentPurpleBrush" Color="{StaticResource AccentPurple}"/>
        <SolidColorBrush x:Key="AccentCyanBrush" Color="{StaticResource AccentCyan}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentGreenBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#4CAF50" Opacity="0.3" BlurRadius="8"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#66BB6A"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="3" Color="#4CAF50" Opacity="0.5" BlurRadius="12"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="#475569"/>
                                <Setter Property="Foreground" Value="#64748B"/>
                                <Setter TargetName="bd" Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small Button Style -->
        <Style x:Key="SmallButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BgTertiaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,7"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}"
                                BorderThickness="1" BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#475569"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#64748B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}"
                                CornerRadius="8" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#334155"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Skip Button Style -->
        <Style x:Key="SkipButton" TargetType="Button" BasedOn="{StaticResource SmallButton}">
            <Setter Property="Background" Value="#7F1D1D"/>
            <Setter Property="Foreground" Value="#FCA5A5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#991B1B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BgTertiaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BgTertiaryBrush}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16,12"/>
        </Style>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.3"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Border Background="{StaticResource BgPrimaryBrush}" CornerRadius="16" BorderThickness="1" BorderBrush="{StaticResource BorderBrush}">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.6" BlurRadius="30"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" CornerRadius="16,16,0,0" Padding="24,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#166534" Offset="0"/>
                        <GradientStop Color="#14532D" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“ž" FontSize="28" VerticalAlignment="Center"/>
                            <TextBlock Text="Czas na telefony!" FontSize="26" FontWeight="Bold" Foreground="White" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock x:Name="txtSubtitle" Text="ZadzwoÅ„ do 5 losowych kontaktÃ³w" FontSize="14" Foreground="#86EFAC" Margin="0,8,0,0"/>
                        <TextBlock x:Name="txtMotivation" Text="ðŸ’ª KaÅ¼dy telefon to szansa na sukces!" FontSize="12" Foreground="#BBF7D0" Margin="0,4,0,0" FontStyle="Italic"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <TextBlock x:Name="txtTime" Text="10:00" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Right"/>
                        <TextBlock x:Name="txtDate" Text="PoniedziaÅ‚ek, 27 stycznia" FontSize="11" Foreground="#86EFAC" HorizontalAlignment="Right" Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Stats Bar -->
            <Border Grid.Row="1" Background="{StaticResource BgSecondaryBrush}" Padding="20,14">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Stat 1 - Contacts Today -->
                    <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,6,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“Š" FontSize="18" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="txtStatContactsToday" Text="0" FontSize="20" FontWeight="Bold" Foreground="#4ADE80" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                            <TextBlock Text="dzisiaj" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Stat 2 - Calls Made -->
                    <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="6,0,6,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“ž" FontSize="18" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="txtStatCallsMade" Text="0" FontSize="20" FontWeight="Bold" Foreground="#60A5FA" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                            <TextBlock Text="zadzwoniono" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Stat 3 - Notes Added -->
                    <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="6,0,6,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“" FontSize="18" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="txtStatNotesAdded" Text="0" FontSize="20" FontWeight="Bold" Foreground="#C084FC" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                            <TextBlock Text="notatek" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Stat 4 - Success Rate -->
                    <Border Grid.Column="3" Style="{StaticResource StatCard}" Margin="6,0,0,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸŽ¯" FontSize="18" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="txtStatSuccessRate" Text="0%" FontSize="20" FontWeight="Bold" Foreground="#FBBF24" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                            <TextBlock Text="skutecznoÅ›Ä‡" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Progress Bar -->
            <Border Grid.Row="2" Background="{StaticResource BgSecondaryBrush}" Padding="20,12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <ProgressBar x:Name="progressBar" Height="10" Background="#475569" Foreground="#4CAF50" Value="0" Maximum="100">
                            <ProgressBar.Template>
                                <ControlTemplate TargetType="ProgressBar">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                        <Border x:Name="PART_Track" CornerRadius="5">
                                            <Border x:Name="PART_Indicator" Background="{TemplateBinding Foreground}"
                                                    HorizontalAlignment="Left" CornerRadius="5">
                                                <Border.Effect>
                                                    <DropShadowEffect ShadowDepth="0" Color="#4CAF50" Opacity="0.5" BlurRadius="8"/>
                                                </Border.Effect>
                                            </Border>
                                        </Border>
                                    </Border>
                                </ControlTemplate>
                            </ProgressBar.Template>
                        </ProgressBar>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock x:Name="txtProgressLabel" Text="PostÄ™p:" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                            <TextBlock x:Name="txtProgressPercent" Text=" 0%" Foreground="#4ADE80" FontSize="11" FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                        <Border Background="#1E3A29" CornerRadius="6" Padding="10,6">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âœ…" FontSize="12"/>
                                <TextBlock x:Name="txtProgress" Text="0 / 5 obsÅ‚uÅ¼onych" Foreground="#4ADE80" FontSize="12" FontWeight="SemiBold" Margin="6,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Contacts List -->
            <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" Padding="16,12">
                <ItemsControl x:Name="contactsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource BgSecondaryBrush}" CornerRadius="12" Margin="0,6" Padding="0"
                                    BorderThickness="1" BorderBrush="{StaticResource BorderBrush}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                <Setter Property="Opacity" Value="0.5"/>
                                                <Setter Property="BorderBrush" Value="#166534"/>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#475569"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="6"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Left accent bar -->
                                    <Border Grid.Column="0" Background="{Binding StatusBackground}" CornerRadius="12,0,0,12"/>

                                    <Grid Grid.Column="1" Margin="18,16,18,16">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header Row -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>
                                                <TextBlock Text="{Binding Nazwa}" FontSize="17" FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimaryBrush}" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding Branza}" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"
                                                           TextTrimming="CharacterEllipsis" Margin="0,2,0,0"
                                                           Visibility="{Binding HasBranza, Converter={StaticResource BoolToVisibility}}"/>
                                            </StackPanel>

                                            <Border Grid.Column="1" Background="{Binding StatusBackground}" CornerRadius="6" Padding="10,5">
                                                <TextBlock Text="{Binding StatusShort}" FontSize="11" FontWeight="SemiBold"
                                                           Foreground="{Binding StatusColor}"/>
                                            </Border>
                                        </Grid>

                                        <!-- Info Row -->
                                        <Border Grid.Row="1" Background="{StaticResource BgTertiaryBrush}" CornerRadius="8" Padding="12,10" Margin="0,12,0,0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Location -->
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ“" FontSize="14"/>
                                                    <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" Margin="6,0,0,0" VerticalAlignment="Center">
                                                        <Run Text="{Binding Miasto}"/><Run Text=", "/><Run Text="{Binding Wojewodztwo}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <!-- Phone -->
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ“ž" FontSize="14"/>
                                                    <TextBlock Text="{Binding Telefon}" Foreground="#4ADE80" FontSize="14" FontWeight="Bold" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <!-- Last Note Preview -->
                                        <Border Grid.Row="2" Background="#1E293B" CornerRadius="8" Padding="12,10" Margin="0,8,0,0"
                                                Visibility="{Binding HasLastNote, Converter={StaticResource BoolToVisibility}}">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ’¬" FontSize="11"/>
                                                    <TextBlock Text="Ostatnia notatka:" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" Margin="4,0,0,0"/>
                                                    <TextBlock Text="{Binding LastNoteDate}" Foreground="#64748B" FontSize="10" Margin="8,0,0,0"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding LastNotePreview}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"
                                                           TextTrimming="CharacterEllipsis" Margin="0,4,0,0" MaxWidth="600"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Action Buttons -->
                                        <Grid Grid.Row="3" Margin="0,14,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Main Call Button -->
                                            <Button Content="ðŸ“ž  ZadzwoÅ„ teraz" Style="{StaticResource ActionButton}"
                                                    Tag="{Binding}" Click="BtnCall_Click" FontSize="14" Padding="18,10"/>

                                            <!-- Secondary Actions -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <Button Content="ðŸ“ Notatka" Style="{StaticResource SmallButton}"
                                                        Tag="{Binding}" Click="BtnNote_Click" Margin="0,0,8,0"/>
                                                <Button Content="ðŸ”„ Status" Style="{StaticResource SmallButton}"
                                                        Tag="{Binding}" Click="BtnStatus_Click" Margin="0,0,8,0"/>
                                                <Button Content="ðŸ” Google" Style="{StaticResource SmallButton}"
                                                        Tag="{Binding}" Click="BtnGoogle_Click"/>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Completed Indicator -->
                                        <Border Grid.Row="0" Grid.RowSpan="4" HorizontalAlignment="Right" VerticalAlignment="Center"
                                                Margin="0,0,60,0" Background="#166534" CornerRadius="50" Width="50" Height="50"
                                                Visibility="{Binding IsCompleted, Converter={StaticResource BoolToVisibility}}">
                                            <TextBlock Text="âœ“" FontSize="28" Foreground="#4ADE80"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Tips Panel -->
            <Border Grid.Row="4" Background="#1E3A5F" Padding="20,14" Margin="16,0,16,12" CornerRadius="10"
                    x:Name="tipsPanel">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="ðŸ’¡" FontSize="20" VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Porada dnia" FontSize="11" Foreground="#60A5FA" FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtTip" Text="UÅ›miechnij siÄ™ przed poÅ‚Ä…czeniem - rozmÃ³wca to wyczuje!"
                                   FontSize="12" Foreground="{StaticResource TextPrimaryBrush}" TextWrapping="Wrap"/>
                    </StackPanel>

                    <Button Grid.Column="2" Content="âž¡" Style="{StaticResource IconButton}" Click="BtnNextTip_Click"
                            ToolTip="NastÄ™pna porada"/>
                </Grid>
            </Border>

            <!-- Skip Reason -->
            <Border Grid.Row="4" Background="{StaticResource BgSecondaryBrush}" Padding="20,14" Margin="16,0,16,12" CornerRadius="10"
                    Visibility="Collapsed" x:Name="skipReasonPanel">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš ï¸" FontSize="14"/>
                        <TextBlock Text="PowÃ³d pominiÄ™cia:" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" FontWeight="SemiBold" Margin="8,0,0,0"/>
                    </StackPanel>
                    <TextBox x:Name="txtSkipReason" Style="{StaticResource DarkTextBox}" Margin="0,10,0,0"
                             TextWrapping="Wrap" AcceptsReturn="False" MaxLength="200"/>
                </StackPanel>
            </Border>

            <!-- Footer Buttons -->
            <Border Grid.Row="5" Background="{StaticResource BgSecondaryBrush}" CornerRadius="0,0,16,16" Padding="20,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnSkip" Content="â­  PomiÅ„ wszystkie" Style="{StaticResource SkipButton}" Click="BtnSkip_Click"
                            Padding="16,10"/>

                    <Button x:Name="btnRefresh" Grid.Column="1" Content="ðŸ”„  Nowe kontakty" Style="{StaticResource SmallButton}"
                            Click="BtnRefresh_Click" Margin="10,0,0,0" Padding="16,10"/>

                    <Button x:Name="btnClose" Grid.Column="3" Content="âœ“  Zamknij" Style="{StaticResource ActionButton}"
                            Click="BtnClose_Click" IsEnabled="False" MinWidth="140" FontSize="14"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
