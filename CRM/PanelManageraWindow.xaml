<Window x:Class="Kalendarz1.CRM.PanelManageraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Szefa - Raporty CRM" Height="600" Width="1000" WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📅 Raport od:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker x:Name="dpOd" Width="120" SelectedDateChanged="Dp_SelectedDateChanged"/>
                <TextBlock Text="do:" VerticalAlignment="Center" Margin="15,0,10,0"/>
                <DatePicker x:Name="dpDo" Width="120" SelectedDateChanged="Dp_SelectedDateChanged"/>
                <Button Content="Generuj Raport" Background="#16A34A" Foreground="White" Padding="15,5" Margin="20,0,0,0" BorderThickness="0" Click="BtnGeneruj_Click"/>
            </StackPanel>
        </Border>

        <DataGrid x:Name="dgRaport" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="True" Background="White" RowHeaderWidth="0">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="Background" Value="#E5E7EB"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>
    </Grid>
</Window>