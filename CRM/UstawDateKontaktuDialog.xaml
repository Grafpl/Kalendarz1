<Window x:Class="Kalendarz1.CRM.UstawDateKontaktuDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ustaw datę kontaktu"
        Width="380" Height="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F0F2F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="QuickButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#DBEAFE"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#2563EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Kiedy zadzwonić?" FontSize="18" FontWeight="Bold" Foreground="#1F2937"/>
            <TextBlock x:Name="txtNazwaKlienta" Text="" FontSize="12" Foreground="#6B7280" TextWrapping="Wrap" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Szybkie opcje -->
        <TextBlock Grid.Row="1" Text="Szybki wybór:" FontSize="11" Foreground="#6B7280" FontWeight="Medium" Margin="0,0,0,8"/>

        <WrapPanel Grid.Row="2" Margin="0,0,0,16">
            <Button Content="Dziś" Style="{StaticResource QuickButton}" Click="BtnDzis_Click"/>
            <Button Content="Jutro" Style="{StaticResource QuickButton}" Click="BtnJutro_Click"/>
            <Button Content="Za 2 dni" Style="{StaticResource QuickButton}" Click="BtnZa2Dni_Click"/>
            <Button Content="Za tydzień" Style="{StaticResource QuickButton}" Click="BtnZaTydzien_Click"/>
            <Button Content="Za 2 tygodnie" Style="{StaticResource QuickButton}" Click="BtnZa2Tygodnie_Click"/>
            <Button Content="Za miesiąc" Style="{StaticResource QuickButton}" Click="BtnZaMiesiac_Click"/>
            <Button Content="Za 3 miesiące" Style="{StaticResource QuickButton}" Click="BtnZa3Miesiace_Click"/>
        </WrapPanel>

        <!-- Kalendarz -->
        <TextBlock Grid.Row="3" Text="Lub wybierz datę:" FontSize="11" Foreground="#6B7280" FontWeight="Medium" Margin="0,0,0,8"/>

        <Border Grid.Row="4" Background="White" CornerRadius="10" Padding="8" BorderBrush="#E5E7EB" BorderThickness="1">
            <Calendar x:Name="calendar" HorizontalAlignment="Center" SelectedDatesChanged="Calendar_SelectedDatesChanged"
                      DisplayDateStart="{x:Static sys:DateTime.Today}" xmlns:sys="clr-namespace:System;assembly=mscorlib"/>
        </Border>

        <!-- Podsumowanie i przyciski -->
        <Grid Grid.Row="5" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="Wybrana data:" FontSize="10" Foreground="#6B7280"/>
                <TextBlock x:Name="txtWybranaData" Text="-" FontSize="14" FontWeight="Bold" Foreground="#2563EB"/>
            </StackPanel>

            <Button Grid.Column="1" Content="Anuluj" Style="{StaticResource ActionButton}"
                    Background="#E5E7EB" Foreground="#374151" Margin="0,0,8,0"
                    Click="BtnAnuluj_Click"/>
            <Button Grid.Column="2" Content="Zapisz" Style="{StaticResource ActionButton}"
                    Background="#2563EB" Foreground="White"
                    Click="BtnZapisz_Click"/>
        </Grid>
    </Grid>
</Window>
