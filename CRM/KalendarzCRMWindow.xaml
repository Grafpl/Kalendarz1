<Window x:Class="Kalendarz1.CRM.KalendarzCRMWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kalendarz kontaktÃ³w CRM"
        Width="1200" Height="750"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA"
        FontFamily="Segoe UI">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#16A34A"/>
        <SolidColorBrush x:Key="PrimaryLight" Color="#DCFCE7"/>
        <SolidColorBrush x:Key="DangerColor" Color="#DC2626"/>
        <SolidColorBrush x:Key="DangerLight" Color="#FEE2E2"/>
        <SolidColorBrush x:Key="WarningColor" Color="#F59E0B"/>
        <SolidColorBrush x:Key="WarningLight" Color="#FEF3C7"/>
        <SolidColorBrush x:Key="InfoColor" Color="#3B82F6"/>
        <SolidColorBrush x:Key="InfoLight" Color="#DBEAFE"/>
        <SolidColorBrush x:Key="TextDark" Color="#111827"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E5E7EB"/>

        <Style x:Key="DayButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="bd" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnPrimary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnIcon" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <!-- Lewa strona - Kalendarz -->
        <Border Grid.Column="0" Background="White" CornerRadius="12" Margin="0,0,15,0" Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.05" BlurRadius="15" ShadowDepth="3" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- NagÅ‚Ã³wek kalendarza -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Border Width="44" Height="44" CornerRadius="8" Background="#16A34A" Margin="0,0,12,0">
                            <TextBlock Text="CRM" FontWeight="Black" FontSize="11" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Kalendarz kontaktÃ³w" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                            <TextBlock Text="Planuj kontakty i otrzymuj przypomnienia" FontSize="12" Foreground="{StaticResource TextGray}"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <CheckBox x:Name="chkPrzypomnienia" Content="Przypomnienia" IsChecked="True" VerticalContentAlignment="Center" Margin="0,0,15,0" Checked="ChkPrzypomnienia_Changed" Unchecked="ChkPrzypomnienia_Changed"/>
                        <Button Content="Dzisiaj" Style="{StaticResource BtnPrimary}" Click="BtnDzisiaj_Click" Padding="12,6"/>
                    </StackPanel>
                </Grid>

                <!-- Nawigacja miesiÄ™cy -->
                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Button Content="â—€" Style="{StaticResource BtnIcon}" HorizontalAlignment="Left" Click="BtnPoprzedni_Click" FontSize="18"/>
                    <TextBlock x:Name="txtMiesiac" Text="StyczeÅ„ 2024" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextDark}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Button Content="â–¶" Style="{StaticResource BtnIcon}" HorizontalAlignment="Right" Click="BtnNastepny_Click" FontSize="18"/>
                </Grid>

                <!-- Dni tygodnia -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <UniformGrid Grid.Row="0" Columns="7" Margin="0,0,0,10">
                        <TextBlock Text="Pon" FontWeight="Bold" FontSize="12" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Wt" FontWeight="Bold" FontSize="12" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Åšr" FontWeight="Bold" FontSize="12" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Czw" FontWeight="Bold" FontSize="12" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Pt" FontWeight="Bold" FontSize="12" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Sob" FontWeight="Bold" FontSize="12" Foreground="#9CA3AF" HorizontalAlignment="Center"/>
                        <TextBlock Text="Ndz" FontWeight="Bold" FontSize="12" Foreground="#9CA3AF" HorizontalAlignment="Center"/>
                    </UniformGrid>

                    <!-- Siatka dni -->
                    <UniformGrid x:Name="calendarGrid" Grid.Row="1" Columns="7" Rows="6"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Prawa strona - Lista kontaktÃ³w na wybrany dzieÅ„ -->
        <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.05" BlurRadius="15" ShadowDepth="3" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- NagÅ‚Ã³wek -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock x:Name="txtWybranyDzien" Text="Dzisiaj" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                    <TextBlock x:Name="txtDataWybrana" Text="25 stycznia 2024" FontSize="12" Foreground="{StaticResource TextGray}"/>
                </StackPanel>

                <!-- Statystyki dnia -->
                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="{StaticResource InfoLight}" CornerRadius="8" Padding="10,8" Margin="0,0,5,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="txtStatZaplanowane" Text="0" FontSize="20" FontWeight="Bold" Foreground="{StaticResource InfoColor}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Zaplanowane" FontSize="9" Foreground="{StaticResource InfoColor}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="{StaticResource DangerLight}" CornerRadius="8" Padding="10,8" Margin="5,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="txtStatZalegle" Text="0" FontSize="20" FontWeight="Bold" Foreground="{StaticResource DangerColor}" HorizontalAlignment="Center"/>
                            <TextBlock Text="ZalegÅ‚e" FontSize="9" Foreground="{StaticResource DangerColor}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="{StaticResource PrimaryLight}" CornerRadius="8" Padding="10,8" Margin="5,0,0,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="txtStatWykonane" Text="0" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Wykonane" FontSize="9" Foreground="{StaticResource PrimaryColor}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Lista kontaktÃ³w -->
                <Border Grid.Row="2" Background="#F9FAFB" CornerRadius="8" Padding="5">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="listaKontaktow">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" CornerRadius="8" Padding="12" Margin="0,0,0,8"
                                            BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Cursor="Hand"
                                            MouseLeftButtonDown="KontaktItem_Click">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Nazwa}" FontWeight="SemiBold" FontSize="13" Foreground="{StaticResource TextDark}" TextTrimming="CharacterEllipsis"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <TextBlock Text="{Binding Miasto}" FontSize="11" Foreground="{StaticResource TextGray}"/>
                                                    <TextBlock Text=" â€¢ " FontSize="11" Foreground="{StaticResource TextGray}"/>
                                                    <TextBlock Text="{Binding Telefon}" FontSize="11" Foreground="{StaticResource PrimaryColor}" FontWeight="SemiBold"/>
                                                </StackPanel>
                                                <Border Background="{Binding StatusBg}" CornerRadius="4" Padding="6,2" Margin="0,6,0,0" HorizontalAlignment="Left">
                                                    <TextBlock Text="{Binding Status}" FontSize="10" Foreground="{Binding StatusFg}" FontWeight="SemiBold"/>
                                                </Border>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                <Button Content="ðŸ“ž" Style="{StaticResource BtnIcon}" Tag="{Binding}" Click="BtnZadzwon_Click" ToolTip="ZadzwoÅ„" Padding="6"/>
                                                <Button Content="âœï¸" Style="{StaticResource BtnIcon}" Tag="{Binding}" Click="BtnEdytuj_Click" ToolTip="Edytuj" Padding="6"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Legenda -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                        <Border Width="12" Height="12" CornerRadius="2" Background="#DBEAFE" Margin="0,0,5,0"/>
                        <TextBlock Text="Zaplanowane" FontSize="10" Foreground="{StaticResource TextGray}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                        <Border Width="12" Height="12" CornerRadius="2" Background="#FEE2E2" Margin="0,0,5,0"/>
                        <TextBlock Text="ZalegÅ‚e" FontSize="10" Foreground="{StaticResource TextGray}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Border Width="12" Height="12" CornerRadius="2" Background="#DCFCE7" Margin="0,0,5,0"/>
                        <TextBlock Text="Dzisiaj" FontSize="10" Foreground="{StaticResource TextGray}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toast dla przypomnieÅ„ -->
        <Border x:Name="reminderToast" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Right"
                Margin="0,0,0,0" Background="#1F2937" CornerRadius="12" Padding="20,15" Opacity="0" IsHitTestVisible="False">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="15"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="ðŸ””" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Przypomnienie o kontakcie" FontWeight="Bold" Foreground="White" FontSize="13"/>
                    <TextBlock x:Name="txtReminderContent" Text="" Foreground="#9CA3AF" FontSize="12" TextWrapping="Wrap" MaxWidth="300"/>
                </StackPanel>
                <Button Grid.Column="2" Content="âœ•" Style="{StaticResource BtnIcon}" Foreground="White" Click="BtnCloseReminder_Click" Margin="10,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
