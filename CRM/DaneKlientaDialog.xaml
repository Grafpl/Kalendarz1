<Window x:Class="Kalendarz1.CRM.DaneKlientaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dane klienta"
        Width="550" Height="700"
        WindowStartupLocation="CenterOwner"
        Background="#0F172A"
        FontFamily="Segoe UI">

    <Window.Resources>
        <SolidColorBrush x:Key="BgSecondary" Color="#1E293B"/>
        <SolidColorBrush x:Key="BgTertiary" Color="#334155"/>
        <SolidColorBrush x:Key="AccentPrimary" Color="#6366F1"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#94A3B8"/>
        <SolidColorBrush x:Key="BorderColor" Color="#475569"/>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="{StaticResource BgSecondary}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource BgSecondary}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="DarkCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="checkBorder" Width="16" Height="16" Background="{StaticResource BgTertiary}"
                                    BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="3" VerticalAlignment="Center">
                                <Path x:Name="checkMark" Data="M2,5 L5,8 L10,2" Stroke="White" StrokeThickness="2" Visibility="Collapsed" Margin="1"/>
                            </Border>
                            <ContentPresenter Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkBorder" Property="Background" Value="{StaticResource AccentPrimary}"/>
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="{StaticResource AccentPrimary}"/>
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="radioBorder" Width="16" Height="16" Background="{StaticResource BgTertiary}"
                                    BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="8" VerticalAlignment="Center">
                                <Ellipse x:Name="radioMark" Width="8" Height="8" Fill="White" Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="radioBorder" Property="Background" Value="{StaticResource AccentPrimary}"/>
                                <Setter TargetName="radioBorder" Property="BorderBrush" Value="{StaticResource AccentPrimary}"/>
                                <Setter TargetName="radioMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="Margin" Value="0,10,0,8"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="25">

            <!-- Naglowek -->
            <Border Background="#14532D" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="SWIETNIE! Klient zainteresowany" FontSize="16"
                               FontWeight="Bold" Foreground="#4ADE80"/>
                    <TextBlock x:Name="txtNazwaFirmy" Text="Nazwa firmy" FontSize="13"
                               Foreground="#86EFAC" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Osoba kontaktowa -->
            <TextBlock Text="OSOBA KONTAKTOWA" Style="{StaticResource SectionHeader}"/>
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Imie i nazwisko" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtOsoba" Style="{StaticResource TextBoxStyle}"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Stanowisko" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="cmbStanowisko" Style="{StaticResource DarkComboBox}">
                        <ComboBoxItem Content="Wlasciciel"/>
                        <ComboBoxItem Content="Dyrektor"/>
                        <ComboBoxItem Content="Kierownik zakupow"/>
                        <ComboBoxItem Content="Specjalista ds. zakupow"/>
                        <ComboBoxItem Content="Manager"/>
                        <ComboBoxItem Content="Inne"/>
                    </ComboBox>
                </StackPanel>
            </Grid>

            <!-- Telefon bezposredni -->
            <TextBlock Text="Telefon bezposredni (jesli inny)" Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="txtTelefonBezposredni" Style="{StaticResource TextBoxStyle}"/>

            <!-- Interesujace produkty -->
            <TextBlock Text="INTERESUJACE PRODUKTY" Style="{StaticResource SectionHeader}"/>
            <WrapPanel Margin="0,0,0,10">
                <CheckBox x:Name="chkTuszki" Content="Tuszki cale" Style="{StaticResource DarkCheckBox}"/>
                <CheckBox x:Name="chkFilet" Content="Filet" Style="{StaticResource DarkCheckBox}"/>
                <CheckBox x:Name="chkCwiartki" Content="Cwiartki" Style="{StaticResource DarkCheckBox}"/>
                <CheckBox x:Name="chkSkrzydla" Content="Skrzydla" Style="{StaticResource DarkCheckBox}"/>
                <CheckBox x:Name="chkUdka" Content="Udka" Style="{StaticResource DarkCheckBox}"/>
                <CheckBox x:Name="chkPodroby" Content="Podroby" Style="{StaticResource DarkCheckBox}"/>
            </WrapPanel>

            <!-- Wolumen i czestotliwosc -->
            <TextBlock Text="ZAPOTRZEBOWANIE" Style="{StaticResource SectionHeader}"/>
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Szacowany wolumen (kg/tydzien)" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtWolumen" Style="{StaticResource TextBoxStyle}"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Czestotliwosc dostaw" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="cmbCzestotliwosc" Style="{StaticResource DarkComboBox}">
                        <ComboBoxItem Content="1x / tydzien"/>
                        <ComboBoxItem Content="2x / tydzien"/>
                        <ComboBoxItem Content="3x / tydzien"/>
                        <ComboBoxItem Content="Codziennie"/>
                        <ComboBoxItem Content="Na telefon"/>
                    </ComboBox>
                </StackPanel>
            </Grid>

            <!-- Aktualny dostawca -->
            <TextBlock Text="KONKURENCJA" Style="{StaticResource SectionHeader}"/>
            <TextBlock Text="Aktualny dostawca" Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="txtAktualnyDostawca" Style="{StaticResource TextBoxStyle}"/>

            <TextBlock Text="Dlaczego szukaja nowego dostawcy?" Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="txtPowodZmiany" Style="{StaticResource TextBoxStyle}"
                     Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

            <!-- Nastepny krok -->
            <TextBlock Text="NASTEPNY KROK" Style="{StaticResource SectionHeader}"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <RadioButton x:Name="rbWyslacOferte" Content="Wyslac oferte" Style="{StaticResource DarkRadioButton}" IsChecked="True"/>
                <RadioButton x:Name="rbUmowicSpotkanie" Content="Umowic spotkanie" Style="{StaticResource DarkRadioButton}"/>
                <RadioButton x:Name="rbWyslacProbki" Content="Wyslac probki" Style="{StaticResource DarkRadioButton}"/>
            </StackPanel>

            <!-- Przyciski -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Anuluj" Click="BtnAnuluj_Click"
                        Background="#334155" Foreground="#94A3B8" Style="{StaticResource ActionButton}"/>
                <Button Grid.Column="2" Content="Zapisz dane" Click="BtnZapisz_Click"
                        Background="#6366F1" Style="{StaticResource ActionButton}"/>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Window>
