<Window x:Class="Kalendarz1.CRM.HistoriaHandlowcaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historia Handlowca" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="#F3F4F6">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#16A34A"/>
        <SolidColorBrush x:Key="PrimaryLight" Color="#DCFCE7"/>
        <SolidColorBrush x:Key="TextDark" Color="#111827"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E5E7EB"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.08" BlurRadius="20" ShadowDepth="4" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MiniStat" TargetType="Border">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="3,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="220"/>
        </Grid.RowDefinitions>

        <!-- HEADER z danymi i mini-statystykami -->
        <Border Style="{StaticResource CardStyle}" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar -->
                <Border Background="{StaticResource PrimaryLight}" Width="60" Height="60" CornerRadius="30" Margin="0,0,15,0">
                    <TextBlock x:Name="txtInitials" Text="??" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="txtNazwaHandlowca" Text="Nazwa Handlowca" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                        <Border Background="{StaticResource PrimaryLight}" CornerRadius="4" Padding="8,3" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ† " FontSize="11"/>
                                <TextBlock x:Name="txtPozycja" Text="#1" FontSize="11" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#F3F4F6" CornerRadius="4" Padding="8,3" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“… " FontSize="11"/>
                                <TextBlock x:Name="txtOkres" Text="Ostatnie 30 dni" FontSize="11" Foreground="{StaticResource TextDark}"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FEF3C7" CornerRadius="4" Padding="8,3">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“Š Åšr: " FontSize="11"/>
                                <TextBlock x:Name="txtSrednia" Text="0" FontSize="11" FontWeight="Bold" Foreground="#B45309"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Mini statystyki w Å›rodku -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Style="{StaticResource MiniStat}" Background="#FFFBEB">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â³" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock x:Name="txtStatProby" Text="0" FontSize="16" FontWeight="Bold" Foreground="#B45309" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource MiniStat}" Background="#F0FDF4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âœ…" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock x:Name="txtStatNawiazano" Text="0" FontSize="16" FontWeight="Bold" Foreground="#166534" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource MiniStat}" Background="#F0FDFA">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ¤" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock x:Name="txtStatZgoda" Text="0" FontSize="16" FontWeight="Bold" Foreground="#0D9488" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource MiniStat}" Background="#EFF6FF">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“„" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock x:Name="txtStatOferty" Text="0" FontSize="16" FontWeight="Bold" Foreground="#1E40AF" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource MiniStat}" Background="#FEF2F2">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âŒ" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock x:Name="txtStatNieZaint" Text="0" FontSize="16" FontWeight="Bold" Foreground="#991B1B" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- SkutecznoÅ›Ä‡ -->
                <StackPanel Grid.Column="3" HorizontalAlignment="Center" Margin="20,0">
                    <TextBlock Text="SKUTECZNOÅšÄ†" FontSize="9" FontWeight="Bold" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtSkutecznosc" Text="0%" FontSize="28" FontWeight="Bold" Foreground="#0891B2" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Suma -->
                <StackPanel Grid.Column="4" HorizontalAlignment="Right">
                    <TextBlock x:Name="txtSuma" Text="0" FontSize="36" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" HorizontalAlignment="Center"/>
                    <TextBlock Text="AKCJI" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- PEÅNA HISTORIA AKCJI - szeroka -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="ðŸ“‹ PEÅNA HISTORIA AKCJI" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                    <TextBlock x:Name="txtLiczbaAkcji" Text=" (0 rekordÃ³w)" FontSize="14" Foreground="{StaticResource TextGray}"/>
                </StackPanel>

                <DataGrid x:Name="dgHistoria" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                          HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#F3F4F6" VerticalGridLinesBrush="Transparent"
                          BorderThickness="0" Background="White" RowHeaderWidth="0"
                          CanUserSortColumns="True">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F9FAFB"/>
                            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="42"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F9FAFB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Data" Binding="{Binding DataZmiany, StringFormat='dd.MM.yyyy HH:mm'}" Width="130">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="Status" Width="170">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="8,3" HorizontalAlignment="Left" VerticalAlignment="Center" Background="{Binding StatusKolor}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding StatusIkona}" FontSize="11" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding WartoscNowa}" FontSize="11" FontWeight="SemiBold" Foreground="{Binding StatusTekstKolor}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Klient" Binding="{Binding NazwaKlienta}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Miasto" Binding="{Binding Miasto}" Width="130">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- DOLNY PANEL - Wykres miesiÄ™czny + RozkÅ‚ad statusÃ³w -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- WYKRES MIESIÄ˜CZNY -->
            <Border Style="{StaticResource CardStyle}" Padding="20" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="ðŸ“ˆ AKTYWNOÅšÄ† MIESIÄ˜CZNA" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextDark}" Margin="0,0,0,10"/>

                    <Border Grid.Row="1" Background="#F9FAFB" CornerRadius="8" Padding="15,10">
                        <ItemsControl x:Name="wykresAktywnosci" VerticalAlignment="Bottom">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="4,0" ToolTip="{Binding Tooltip}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Border Background="{Binding Kolor}" CornerRadius="4,4,0,0"
                                                Height="{Binding Wysokosc}" VerticalAlignment="Bottom" MinHeight="5"/>
                                        <TextBlock Grid.Row="1" Text="{Binding Etykieta}" FontSize="10" FontWeight="SemiBold"
                                                   HorizontalAlignment="Center" Foreground="{StaticResource TextGray}" Margin="0,5,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </Grid>
            </Border>

            <!-- ROZKÅAD STATUSÃ“W -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Padding="20" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="ðŸ“Š ROZKÅAD STATUSÃ“W" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextDark}" Margin="0,0,0,10"/>

                    <ItemsControl x:Name="listaStatusow" Grid.Row="1" VerticalAlignment="Center">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Ikona}" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>

                                    <Border Grid.Column="1" Height="18" Background="#E5E7EB" CornerRadius="9">
                                        <Border Background="{Binding Kolor}" CornerRadius="9" HorizontalAlignment="Left" Width="{Binding SzerokoscPaska}"/>
                                    </Border>

                                    <TextBlock Grid.Column="2" Text="{Binding Wartosc}" FontSize="14" FontWeight="Bold"
                                               Foreground="{Binding KolorTekst}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
