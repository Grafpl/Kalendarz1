<Window x:Class="Kalendarz1.CRM.HistoriaHandlowcaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historia Handlowca" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen" Background="#F9FAFB">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#16A34A"/>
        <SolidColorBrush x:Key="PrimaryLight" Color="#DCFCE7"/>
        <SolidColorBrush x:Key="TextDark" Color="#111827"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E5E7EB"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.08" BlurRadius="20" ShadowDepth="4" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Style="{StaticResource CardStyle}" Padding="25" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar -->
                <Border Background="{StaticResource PrimaryLight}" Width="70" Height="70" CornerRadius="35" Margin="0,0,20,0">
                    <TextBlock x:Name="txtInitials" Text="??" FontSize="28" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="txtNazwaHandlowca" Text="Nazwa Handlowca" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Pozycja w rankingu: " FontSize="14" Foreground="{StaticResource TextGray}"/>
                        <TextBlock x:Name="txtPozycja" Text="#1" FontSize="14" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"/>
                        <TextBlock Text="  â€¢  " FontSize="14" Foreground="{StaticResource TextGray}"/>
                        <TextBlock x:Name="txtOkres" Text="Ostatnie 30 dni" FontSize="14" Foreground="{StaticResource TextGray}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Suma -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                    <TextBlock x:Name="txtSuma" Text="0" FontSize="42" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" HorizontalAlignment="Center"/>
                    <TextBlock Text="WSZYSTKICH AKCJI" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- STATYSTYKI -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Do zadzwonienia -->
            <Border Grid.Column="0" Style="{StaticResource StatCard}" Background="#F8FAFC" Margin="0,0,8,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ“ž" FontSize="24" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtStatDoZadzw" Text="0" FontSize="28" FontWeight="Bold" Foreground="#64748B" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Text="Do zadzwonienia" FontSize="9" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- PrÃ³ba kontaktu -->
            <Border Grid.Column="1" Style="{StaticResource StatCard}" Background="#FFFBEB" Margin="4,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="â³" FontSize="24" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtStatProby" Text="0" FontSize="28" FontWeight="Bold" Foreground="#B45309" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Text="PrÃ³ba kontaktu" FontSize="9" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- NawiÄ…zano kontakt -->
            <Border Grid.Column="2" Style="{StaticResource StatCard}" Background="#F0FDF4" Margin="4,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="âœ…" FontSize="24" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtStatNawiazano" Text="0" FontSize="28" FontWeight="Bold" Foreground="#166534" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Text="NawiÄ…zano kontakt" FontSize="9" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Zgoda -->
            <Border Grid.Column="3" Style="{StaticResource StatCard}" Background="#F0FDFA" Margin="4,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ¤" FontSize="24" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtStatZgoda" Text="0" FontSize="28" FontWeight="Bold" Foreground="#0D9488" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Text="Zgoda na kontakt" FontSize="9" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Oferty -->
            <Border Grid.Column="4" Style="{StaticResource StatCard}" Background="#EFF6FF" Margin="4,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ“„" FontSize="24" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtStatOferty" Text="0" FontSize="28" FontWeight="Bold" Foreground="#1E40AF" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Text="WysÅ‚ane oferty" FontSize="9" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Nie zainteresowany -->
            <Border Grid.Column="5" Style="{StaticResource StatCard}" Background="#FEF2F2" Margin="8,0,0,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="âŒ" FontSize="24" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtStatNieZaint" Text="0" FontSize="28" FontWeight="Bold" Foreground="#991B1B" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Text="Nie zainteresowani" FontSize="9" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- HISTORIA AKCJI -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="ðŸ“‹ HISTORIA AKCJI" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                    <TextBlock x:Name="txtLiczbaAkcji" Text=" (0 rekordÃ³w)" FontSize="14" Foreground="{StaticResource TextGray}"/>
                </StackPanel>

                <DataGrid x:Name="dgHistoria" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                          HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#F3F4F6" VerticalGridLinesBrush="Transparent"
                          BorderThickness="0" Background="White" RowHeaderWidth="0"
                          CanUserSortColumns="True">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F9FAFB"/>
                            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="45"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F9FAFB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Data" Binding="{Binding DataZmiany, StringFormat='dd.MM.yyyy HH:mm'}" Width="130">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="Status" Width="170">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Left" VerticalAlignment="Center" Background="{Binding StatusKolor}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding StatusIkona}" FontSize="11" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding WartoscNowa}" FontSize="10" FontWeight="SemiBold" Foreground="{Binding StatusTekstKolor}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Klient" Binding="{Binding NazwaKlienta}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Miasto" Binding="{Binding Miasto}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>
