<Window x:Class="Kalendarz1.CRM.HistoriaHandlowcaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historia Handlowca" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="#F3F4F6">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#16A34A"/>
        <SolidColorBrush x:Key="PrimaryLight" Color="#DCFCE7"/>
        <SolidColorBrush x:Key="TextDark" Color="#111827"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E5E7EB"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.08" BlurRadius="20" ShadowDepth="4" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER - peÅ‚na szerokoÅ›Ä‡ -->
        <Border Grid.ColumnSpan="2" Style="{StaticResource CardStyle}" Padding="25" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar -->
                <Border Background="{StaticResource PrimaryLight}" Width="80" Height="80" CornerRadius="40" Margin="0,0,25,0">
                    <TextBlock x:Name="txtInitials" Text="??" FontSize="32" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="txtNazwaHandlowca" Text="Nazwa Handlowca" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Border Background="{StaticResource PrimaryLight}" CornerRadius="4" Padding="10,4" Margin="0,0,15,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ† Pozycja: " FontSize="13" Foreground="{StaticResource TextGray}"/>
                                <TextBlock x:Name="txtPozycja" Text="#1" FontSize="13" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#F3F4F6" CornerRadius="4" Padding="10,4" Margin="0,0,15,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“… Okres: " FontSize="13" Foreground="{StaticResource TextGray}"/>
                                <TextBlock x:Name="txtOkres" Text="Ostatnie 30 dni" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FEF3C7" CornerRadius="4" Padding="10,4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“Š Åšr. dziennie: " FontSize="13" Foreground="{StaticResource TextGray}"/>
                                <TextBlock x:Name="txtSrednia" Text="0" FontSize="13" FontWeight="Bold" Foreground="#B45309"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- SkutecznoÅ›Ä‡ -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center" Margin="30,0">
                    <TextBlock Text="SKUTECZNOÅšÄ†" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtSkutecznosc" Text="0%" FontSize="36" FontWeight="Bold" Foreground="#0891B2" HorizontalAlignment="Center"/>
                    <TextBlock Text="(Zgody + Oferty) / Wszystkie" FontSize="9" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Suma -->
                <StackPanel Grid.Column="3" HorizontalAlignment="Right">
                    <TextBlock x:Name="txtSuma" Text="0" FontSize="48" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" HorizontalAlignment="Center"/>
                    <TextBlock Text="WSZYSTKICH AKCJI" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- STATYSTYKI - 5 kart (bez Do zadzwonienia) -->
        <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- PrÃ³ba kontaktu -->
            <Border Grid.Column="0" Style="{StaticResource StatCard}" Background="#FFFBEB" Margin="0,0,10,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="â³" FontSize="28" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtStatProby" Text="0" FontSize="32" FontWeight="Bold" Foreground="#B45309" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBlock Text="PrÃ³ba kontaktu" FontSize="11" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- NawiÄ…zano kontakt -->
            <Border Grid.Column="1" Style="{StaticResource StatCard}" Background="#F0FDF4" Margin="5,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="âœ…" FontSize="28" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtStatNawiazano" Text="0" FontSize="32" FontWeight="Bold" Foreground="#166534" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBlock Text="NawiÄ…zano kontakt" FontSize="11" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Zgoda -->
            <Border Grid.Column="2" Style="{StaticResource StatCard}" Background="#F0FDFA" Margin="5,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ¤" FontSize="28" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtStatZgoda" Text="0" FontSize="32" FontWeight="Bold" Foreground="#0D9488" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBlock Text="Zgoda na kontakt" FontSize="11" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Oferty -->
            <Border Grid.Column="3" Style="{StaticResource StatCard}" Background="#EFF6FF" Margin="5,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ“„" FontSize="28" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtStatOferty" Text="0" FontSize="32" FontWeight="Bold" Foreground="#1E40AF" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBlock Text="WysÅ‚ane oferty" FontSize="11" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Nie zainteresowany -->
            <Border Grid.Column="4" Style="{StaticResource StatCard}" Background="#FEF2F2" Margin="10,0,0,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="âŒ" FontSize="28" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtStatNieZaint" Text="0" FontSize="32" FontWeight="Bold" Foreground="#991B1B" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBlock Text="Nie zainteresowani" FontSize="11" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- HISTORIA AKCJI - lewa strona -->
        <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource CardStyle}" Padding="20" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="ðŸ“‹ PEÅNA HISTORIA AKCJI" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                    <TextBlock x:Name="txtLiczbaAkcji" Text=" (0 rekordÃ³w)" FontSize="14" Foreground="{StaticResource TextGray}"/>
                </StackPanel>

                <DataGrid x:Name="dgHistoria" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                          HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#F3F4F6" VerticalGridLinesBrush="Transparent"
                          BorderThickness="0" Background="White" RowHeaderWidth="0"
                          CanUserSortColumns="True">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F9FAFB"/>
                            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="50"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F9FAFB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Data" Binding="{Binding DataZmiany, StringFormat='dd.MM.yyyy HH:mm'}" Width="130">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="Status" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Left" VerticalAlignment="Center" Background="{Binding StatusKolor}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding StatusIkona}" FontSize="12" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                            <TextBlock Text="{Binding WartoscNowa}" FontSize="11" FontWeight="SemiBold" Foreground="{Binding StatusTekstKolor}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Klient" Binding="{Binding NazwaKlienta}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Miasto" Binding="{Binding Miasto}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- PANEL PRAWY - Wykres i dodatkowe info -->
        <Grid Grid.Row="2" Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- WYKRES AKTYWNOÅšCI -->
            <Border Style="{StaticResource CardStyle}" Padding="20" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="ðŸ“ˆ AKTYWNOÅšÄ† W CZASIE" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextDark}" Margin="0,0,0,15"/>

                    <Border Grid.Row="1" Background="#F9FAFB" CornerRadius="8" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Wykres sÅ‚upkowy -->
                            <ItemsControl x:Name="wykresAktywnosci" VerticalAlignment="Bottom">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="2,0" ToolTip="{Binding Tooltip}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Border Background="{Binding Kolor}" CornerRadius="4,4,0,0"
                                                    Height="{Binding Wysokosc}" VerticalAlignment="Bottom" MinHeight="5"/>
                                            <TextBlock Grid.Row="1" Text="{Binding Etykieta}" FontSize="8"
                                                       HorizontalAlignment="Center" Foreground="{StaticResource TextGray}" Margin="0,4,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- PODSUMOWANIE PO STATUSACH -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="20">
                <StackPanel>
                    <TextBlock Text="ðŸ“Š ROZKÅAD STATUSÃ“W" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextDark}" Margin="0,0,0,15"/>

                    <ItemsControl x:Name="listaStatusow">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Ikona}" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Nazwa}" FontSize="12" VerticalAlignment="Center" Foreground="{StaticResource TextDark}"/>

                                    <!-- Progress bar -->
                                    <Border Grid.Column="2" Width="100" Height="8" Background="#E5E7EB" CornerRadius="4" Margin="10,0">
                                        <Border Background="{Binding Kolor}" CornerRadius="4" HorizontalAlignment="Left" Width="{Binding SzerokoscPaska}"/>
                                    </Border>

                                    <TextBlock Grid.Column="3" Text="{Binding Wartosc}" FontSize="12" FontWeight="Bold"
                                               Foreground="{Binding KolorTekst}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
