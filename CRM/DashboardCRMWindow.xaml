<Window x:Class="Kalendarz1.CRM.DashboardCRMWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard Motywacyjny - Aktywnosc Zespolu"
        Width="1400" Height="900"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A"
        FontFamily="Segoe UI">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#10B981"/>
        <SolidColorBrush x:Key="TextLight" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="TextGray" Color="#94A3B8"/>
        <SolidColorBrush x:Key="BorderColor" Color="#334155"/>
        <SolidColorBrush x:Key="CardBackground" Color="#1E293B"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Style dla DataGrid -->
        <Style x:Key="DarkDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Foreground" Value="#F1F5F9"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="#1E293B"/>
            <Setter Property="AlternatingRowBackground" Value="#273548"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#334155"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="DarkColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#0F172A"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
        </Style>

        <Style x:Key="DarkDataGridCell" TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#F1F5F9"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#334155"/>
                    <Setter Property="Foreground" Value="#10B981"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DarkDataGridRow" TargetType="DataGridRow">
            <Setter Property="Background" Value="#1E293B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2D3A4F"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#334155"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" CornerRadius="12" Padding="24,16" Margin="0,0,0,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#065F46" Offset="0"/>
                    <GradientStop Color="#047857" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="DASHBOARD AKTYWNOSCI" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="txtPodtytul" Text=" - Statystyki zespolu" FontSize="16" Foreground="#A7F3D0" VerticalAlignment="Bottom" Margin="8,0,0,2"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <!-- Filtry -->
                    <TextBlock Text="Rok:" FontSize="13" Foreground="#A7F3D0" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Border Background="#1E293B" CornerRadius="6" Padding="2">
                        <ComboBox x:Name="cmbRok" Width="80" Padding="8,6" FontSize="12" BorderThickness="0" SelectionChanged="CmbZakres_SelectionChanged"/>
                    </Border>

                    <TextBlock Text="od:" FontSize="13" Foreground="#A7F3D0" VerticalAlignment="Center" Margin="16,0,8,0"/>
                    <Border Background="#1E293B" CornerRadius="6" Padding="2">
                        <ComboBox x:Name="cmbMiesiacOd" Width="100" Padding="8,6" FontSize="12" BorderThickness="0" SelectionChanged="CmbZakres_SelectionChanged">
                            <ComboBoxItem Content="Styczen" Tag="1"/>
                            <ComboBoxItem Content="Luty" Tag="2"/>
                            <ComboBoxItem Content="Marzec" Tag="3"/>
                            <ComboBoxItem Content="Kwiecien" Tag="4"/>
                            <ComboBoxItem Content="Maj" Tag="5"/>
                            <ComboBoxItem Content="Czerwiec" Tag="6"/>
                            <ComboBoxItem Content="Lipiec" Tag="7"/>
                            <ComboBoxItem Content="Sierpien" Tag="8"/>
                            <ComboBoxItem Content="Wrzesien" Tag="9"/>
                            <ComboBoxItem Content="Pazdziernik" Tag="10"/>
                            <ComboBoxItem Content="Listopad" Tag="11"/>
                            <ComboBoxItem Content="Grudzien" Tag="12"/>
                        </ComboBox>
                    </Border>

                    <TextBlock Text="do:" FontSize="13" Foreground="#A7F3D0" VerticalAlignment="Center" Margin="8,0,8,0"/>
                    <Border Background="#1E293B" CornerRadius="6" Padding="2">
                        <ComboBox x:Name="cmbMiesiacDo" Width="100" Padding="8,6" FontSize="12" BorderThickness="0" SelectionChanged="CmbZakres_SelectionChanged">
                            <ComboBoxItem Content="Styczen" Tag="1"/>
                            <ComboBoxItem Content="Luty" Tag="2"/>
                            <ComboBoxItem Content="Marzec" Tag="3"/>
                            <ComboBoxItem Content="Kwiecien" Tag="4"/>
                            <ComboBoxItem Content="Maj" Tag="5"/>
                            <ComboBoxItem Content="Czerwiec" Tag="6"/>
                            <ComboBoxItem Content="Lipiec" Tag="7"/>
                            <ComboBoxItem Content="Sierpien" Tag="8"/>
                            <ComboBoxItem Content="Wrzesien" Tag="9"/>
                            <ComboBoxItem Content="Pazdziernik" Tag="10"/>
                            <ComboBoxItem Content="Listopad" Tag="11"/>
                            <ComboBoxItem Content="Grudzien" Tag="12"/>
                        </ComboBox>
                    </Border>

                    <Button Content="Odswiez" Padding="16,8" Margin="20,0,0,0" Background="#10B981"
                            Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="BtnOdswiez_Click" FontSize="13">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- WYKRES SLUPKOWY -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="AKTYWNOSC HANDLOWCOW" FontSize="16" FontWeight="Bold"
                           Foreground="{StaticResource TextLight}" Margin="0,0,0,16"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="wykresSlupkowy">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Nazwa handlowca -->
                                    <TextBlock Grid.Column="0" Text="{Binding Nazwa}" FontSize="14" FontWeight="SemiBold"
                                               Foreground="#E2E8F0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>

                                    <!-- Slupek -->
                                    <Grid Grid.Column="1" Margin="12,0">
                                        <Border Background="#334155" CornerRadius="4" Height="28"/>
                                        <Border Background="{Binding Kolor}" CornerRadius="4" Height="28"
                                                HorizontalAlignment="Left" Width="{Binding SzerokoscSlupka}">
                                            <Border.Effect>
                                                <DropShadowEffect Color="{Binding KolorCien}" BlurRadius="8" ShadowDepth="0" Opacity="0.5"/>
                                            </Border.Effect>
                                        </Border>
                                    </Grid>

                                    <!-- Wartosc -->
                                    <TextBlock Grid.Column="2" Text="{Binding Suma}" FontSize="16" FontWeight="Bold"
                                               Foreground="{Binding Kolor}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- TABELA DANYCH -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" MaxHeight="280">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="SZCZEGOLOWE DANE MIESIECZNE" FontSize="16" FontWeight="Bold"
                           Foreground="{StaticResource TextLight}" Margin="0,0,0,12"/>

                <DataGrid x:Name="tabelaDane" Grid.Row="1"
                          Style="{StaticResource DarkDataGrid}"
                          ColumnHeaderStyle="{StaticResource DarkColumnHeader}"
                          CellStyle="{StaticResource DarkDataGridCell}"
                          RowStyle="{StaticResource DarkDataGridRow}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Handlowiec" Binding="{Binding Nazwa}" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>
