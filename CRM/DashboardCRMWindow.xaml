<Window x:Class="Kalendarz1.CRM.DashboardCRMWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard CRM"
        Width="1400" Height="850"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F8FAFC"
        FontFamily="Segoe UI">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#2563EB"/>
        <SolidColorBrush x:Key="TextDark" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextGray" Color="#64748B"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E2E8F0"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER - CZYSTY, BEZ GRADIENTU -->
        <Border Grid.Row="0" Background="#1E293B" CornerRadius="8" Padding="20,14" Margin="0,0,0,16">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="DASHBOARD CRM" FontSize="22" FontWeight="Bold" Foreground="White"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <!-- FILTR HANDLOWCA -->
                    <Border Background="#334155" CornerRadius="6" Padding="10,5" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Handlowiec:" FontSize="11" Foreground="#94A3B8" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <ComboBox x:Name="cmbHandlowiec" Width="140" Padding="6,3" FontSize="11" BorderThickness="0" Background="White" SelectionChanged="CmbHandlowiec_SelectionChanged">
                                <ComboBoxItem Content="Wszyscy" Tag="" IsSelected="True"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- WYBÓR OKRESU -->
                    <Border Background="#334155" CornerRadius="6" Padding="10,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Okres:" FontSize="11" Foreground="#94A3B8" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <ComboBox x:Name="cmbOkres" Width="110" Padding="6,3" FontSize="11" BorderThickness="0" Background="White" SelectionChanged="CmbOkres_SelectionChanged">
                                <ComboBoxItem Content="Dzisiaj" IsSelected="True"/>
                                <ComboBoxItem Content="7 dni"/>
                                <ComboBoxItem Content="14 dni"/>
                                <ComboBoxItem Content="30 dni"/>
                                <ComboBoxItem Content="Ten miesiąc"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- GŁÓWNA ZAWARTOŚĆ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEWA KOLUMNA -->
            <Grid Grid.Column="0" Margin="0,0,16,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- KARTY KPI -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,6,6">
                        <StackPanel>
                            <TextBlock Text="TELEFONY" FontSize="9" FontWeight="Bold" Foreground="#64748B"/>
                            <TextBlock x:Name="txtTelefonyTotal" Text="0" FontSize="28" FontWeight="Bold" Foreground="#0EA5E9" Margin="0,4,0,0"/>
                            <TextBlock x:Name="txtTelefonyInfo" Text="połączeń" FontSize="9" Foreground="#94A3B8"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource CardStyle}" Margin="6,0,0,6">
                        <StackPanel>
                            <TextBlock Text="STATUSY" FontSize="9" FontWeight="Bold" Foreground="#64748B"/>
                            <TextBlock x:Name="txtStatusyTotal" Text="0" FontSize="28" FontWeight="Bold" Foreground="#10B981" Margin="0,4,0,0"/>
                            <TextBlock x:Name="txtStatusyInfo" Text="zmian" FontSize="9" Foreground="#94A3B8"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,6,6,0">
                        <StackPanel>
                            <TextBlock Text="NOTATKI" FontSize="9" FontWeight="Bold" Foreground="#64748B"/>
                            <TextBlock x:Name="txtNotatkiTotal" Text="0" FontSize="28" FontWeight="Bold" Foreground="#F59E0B" Margin="0,4,0,0"/>
                            <TextBlock x:Name="txtNotatkiInfo" Text="dodanych" FontSize="9" Foreground="#94A3B8"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}" Margin="6,6,0,0" Background="#1E293B">
                        <StackPanel>
                            <TextBlock Text="RAZEM" FontSize="9" FontWeight="Bold" Foreground="#94A3B8"/>
                            <TextBlock x:Name="txtAktywnoscTotal" Text="0" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,4,0,0"/>
                            <TextBlock x:Name="txtAktywnoscInfo" Text="akcji" FontSize="9" Foreground="#64748B"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- RANKING -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="RANKING HANDLOWCÓW" FontSize="11" FontWeight="Bold" Foreground="#64748B" Margin="0,0,0,10"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="listaHandlowcy">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding TloKarty}" CornerRadius="6" Padding="10,8" Margin="0,0,0,6"
                                                Cursor="Hand" MouseLeftButtonUp="Handlowiec_Click" Tag="{Binding Nazwa}"
                                                BorderBrush="{Binding KolorRamki}" BorderThickness="2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="26"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Background="{Binding KolorPozycji}" Width="22" Height="22" CornerRadius="11">
                                                    <TextBlock Text="{Binding Pozycja}" FontSize="10" FontWeight="Bold" Foreground="White"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>

                                                <StackPanel Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Nazwa}" FontSize="12" FontWeight="SemiBold"
                                                               Foreground="#1E293B" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding StatsTekst}" FontSize="9" Foreground="#64748B" Margin="0,2,0,0"/>
                                                </StackPanel>

                                                <TextBlock Grid.Column="2" Text="{Binding Suma}" FontSize="18" FontWeight="Bold"
                                                           Foreground="{Binding KolorPozycji}" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- PRAWA KOLUMNA - WYKRES -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="180"/>
                </Grid.RowDefinitions>

                <!-- WYKRES -->
                <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,12">
                            <TextBlock Text="AKTYWNOŚĆ W CZASIE" FontSize="12" FontWeight="Bold" Foreground="#64748B"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <!-- WIDOK: DNI / MIESIĄCE -->
                                <Border Background="#F1F5F9" CornerRadius="6" Padding="8,4" Margin="0,0,10,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Widok:" FontSize="10" Foreground="#64748B" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <ComboBox x:Name="cmbWidokWykresu" Width="80" Padding="4,2" FontSize="10" BorderThickness="0" SelectionChanged="CmbWidokWykresu_SelectionChanged">
                                            <ComboBoxItem Content="Dni" IsSelected="True" Tag="dni"/>
                                            <ComboBoxItem Content="Miesiące" Tag="miesiace"/>
                                        </ComboBox>
                                    </StackPanel>
                                </Border>

                                <!-- MIESIĄC (dla widoku dni) -->
                                <Border x:Name="panelMiesiac" Background="#F1F5F9" CornerRadius="6" Padding="8,4" Margin="0,0,10,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Miesiąc:" FontSize="10" Foreground="#64748B" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <ComboBox x:Name="cmbMiesiac" Width="90" Padding="4,2" FontSize="10" BorderThickness="0" SelectionChanged="CmbWykresOkres_SelectionChanged">
                                            <ComboBoxItem Content="Styczeń" Tag="1"/>
                                            <ComboBoxItem Content="Luty" Tag="2"/>
                                            <ComboBoxItem Content="Marzec" Tag="3"/>
                                            <ComboBoxItem Content="Kwiecień" Tag="4"/>
                                            <ComboBoxItem Content="Maj" Tag="5"/>
                                            <ComboBoxItem Content="Czerwiec" Tag="6"/>
                                            <ComboBoxItem Content="Lipiec" Tag="7"/>
                                            <ComboBoxItem Content="Sierpień" Tag="8"/>
                                            <ComboBoxItem Content="Wrzesień" Tag="9"/>
                                            <ComboBoxItem Content="Październik" Tag="10"/>
                                            <ComboBoxItem Content="Listopad" Tag="11"/>
                                            <ComboBoxItem Content="Grudzień" Tag="12"/>
                                        </ComboBox>
                                    </StackPanel>
                                </Border>

                                <!-- ROK -->
                                <Border Background="#F1F5F9" CornerRadius="6" Padding="8,4">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Rok:" FontSize="10" Foreground="#64748B" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <ComboBox x:Name="cmbRok" Width="60" Padding="4,2" FontSize="10" BorderThickness="0" SelectionChanged="CmbWykresOkres_SelectionChanged"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!-- Canvas wykresu -->
                        <Grid Grid.Row="1" Margin="50,10,20,40">
                            <Canvas x:Name="canvasWykres" Background="Transparent" ClipToBounds="True"/>
                            <StackPanel x:Name="panelOsY" Orientation="Vertical" HorizontalAlignment="Left" Margin="-45,0,0,0"/>
                            <StackPanel x:Name="panelOsX" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,-35"/>
                        </Grid>

                        <!-- Legenda -->
                        <Border Grid.Row="2" Background="#F8FAFC" CornerRadius="6" Padding="10,6">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                <WrapPanel x:Name="panelLegenda" Orientation="Horizontal"/>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Border>

                <!-- SŁUPKI OSTATNICH DNI -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="OSTATNIE 14 DNI" FontSize="10" FontWeight="Bold" Foreground="#64748B" Margin="0,0,0,8"/>

                        <ItemsControl Grid.Row="1" x:Name="listaAktywnoscDni">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding TloKarty}" CornerRadius="4" Padding="3,6" Margin="1,0"
                                            BorderBrush="{Binding KolorRamki}" BorderThickness="1">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding DzienSkrot}" FontSize="8" FontWeight="Bold" Foreground="#94A3B8" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding DataSkrot}" FontSize="7" Foreground="#CBD5E1" HorizontalAlignment="Center"/>
                                            <Grid Height="60" Width="30" Margin="0,3,0,3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="0" Background="#0EA5E9" CornerRadius="2,2,0,0" Height="{Binding WysokoscTelefony}" VerticalAlignment="Bottom" Margin="0,0,1,0" ToolTip="{Binding TooltipTelefony}"/>
                                                <Border Grid.Column="1" Background="#10B981" CornerRadius="2,2,0,0" Height="{Binding WysokoscStatusy}" VerticalAlignment="Bottom" Margin="0,0,1,0" ToolTip="{Binding TooltipStatusy}"/>
                                                <Border Grid.Column="2" Background="#F59E0B" CornerRadius="2,2,0,0" Height="{Binding WysokoscNotatki}" VerticalAlignment="Bottom" ToolTip="{Binding TooltipNotatki}"/>
                                            </Grid>
                                            <TextBlock Text="{Binding Suma}" FontSize="11" FontWeight="Bold" Foreground="#1E293B" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
