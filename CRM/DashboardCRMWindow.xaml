<Window x:Class="Kalendarz1.CRM.DashboardCRMWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard CRM"
        Width="1400" Height="850"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#FAFAFA"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- MOTYW BIAÅO-CZERWONO-ZIELONY -->
        <SolidColorBrush x:Key="PrimaryRed" Color="#DC2626"/>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#16A34A"/>
        <SolidColorBrush x:Key="AccentRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#22C55E"/>
        <SolidColorBrush x:Key="LightRed" Color="#FEE2E2"/>
        <SolidColorBrush x:Key="LightGreen" Color="#DCFCE7"/>
        <SolidColorBrush x:Key="TextDark" Color="#1F2937"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>
        <SolidColorBrush x:Key="BorderLight" Color="#E5E7EB"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.06" BlurRadius="12" ShadowDepth="2" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER - BIAÅO-CZERWONO-ZIELONY -->
        <Border Grid.Row="0" CornerRadius="12" Padding="24,16" Margin="0,0,0,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#DC2626" Offset="0"/>
                    <GradientStop Color="#B91C1C" Offset="0.5"/>
                    <GradientStop Color="#16A34A" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="DASHBOARD CRM" FontSize="26" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text=" - AktywnoÅ›Ä‡ handlowcÃ³w" FontSize="16" Foreground="#FECACA" VerticalAlignment="Bottom" Margin="12,0,0,3"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <!-- FILTR HANDLOWCA -->
                    <Border Background="White" CornerRadius="8" Padding="12,6" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Handlowiec:" FontSize="12" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <ComboBox x:Name="cmbHandlowiec" Width="160" Padding="8,4" FontSize="12" BorderThickness="0" Background="White" SelectionChanged="CmbHandlowiec_SelectionChanged">
                                <ComboBoxItem Content="Wszyscy" Tag="" IsSelected="True"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- WYBÃ“R OKRESU -->
                    <Border Background="White" CornerRadius="8" Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Okres:" FontSize="12" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <ComboBox x:Name="cmbOkres" Width="130" Padding="8,4" FontSize="12" BorderThickness="0" Background="White" SelectionChanged="CmbOkres_SelectionChanged">
                                <ComboBoxItem Content="Dzisiaj" IsSelected="True"/>
                                <ComboBoxItem Content="7 dni"/>
                                <ComboBoxItem Content="14 dni"/>
                                <ComboBoxItem Content="30 dni"/>
                                <ComboBoxItem Content="Ten miesiÄ…c"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- GÅÃ“WNA ZAWARTOÅšÄ† -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEWA KOLUMNA - STATYSTYKI + RANKING -->
            <Grid Grid.Column="0" Margin="0,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- KARTY KPI - 2x2 -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Telefony - CZERWONY -->
                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,8,8" BorderBrush="#FECACA">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Fill="#DC2626" Width="8" Height="8" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Text="TELEFONY" FontSize="10" FontWeight="Bold" Foreground="#DC2626"/>
                            </StackPanel>
                            <TextBlock x:Name="txtTelefonyTotal" Text="0" FontSize="32" FontWeight="Bold" Foreground="#DC2626" Margin="0,6,0,0"/>
                            <TextBlock x:Name="txtTelefonyInfo" Text="poÅ‚Ä…czeÅ„" FontSize="10" Foreground="#9CA3AF"/>
                        </StackPanel>
                    </Border>

                    <!-- Statusy - ZIELONY -->
                    <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource CardStyle}" Margin="8,0,0,8" BorderBrush="#BBF7D0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Fill="#16A34A" Width="8" Height="8" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Text="STATUSY" FontSize="10" FontWeight="Bold" Foreground="#16A34A"/>
                            </StackPanel>
                            <TextBlock x:Name="txtStatusyTotal" Text="0" FontSize="32" FontWeight="Bold" Foreground="#16A34A" Margin="0,6,0,0"/>
                            <TextBlock x:Name="txtStatusyInfo" Text="zmian" FontSize="10" Foreground="#9CA3AF"/>
                        </StackPanel>
                    </Border>

                    <!-- Notatki - SZARY -->
                    <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,8,8,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Fill="#6B7280" Width="8" Height="8" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Text="NOTATKI" FontSize="10" FontWeight="Bold" Foreground="#6B7280"/>
                            </StackPanel>
                            <TextBlock x:Name="txtNotatkiTotal" Text="0" FontSize="32" FontWeight="Bold" Foreground="#374151" Margin="0,6,0,0"/>
                            <TextBlock x:Name="txtNotatkiInfo" Text="dodanych" FontSize="10" Foreground="#9CA3AF"/>
                        </StackPanel>
                    </Border>

                    <!-- Suma - GRADIENT -->
                    <Border Grid.Row="1" Grid.Column="1" CornerRadius="12" Padding="16" Margin="8,8,0,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#DC2626" Offset="0"/>
                                <GradientStop Color="#16A34A" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>
                            <TextBlock Text="RAZEM" FontSize="10" FontWeight="Bold" Foreground="#FFFFFF" Opacity="0.8"/>
                            <TextBlock x:Name="txtAktywnoscTotal" Text="0" FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,6,0,0"/>
                            <TextBlock x:Name="txtAktywnoscInfo" Text="akcji" FontSize="10" Foreground="#FFFFFF" Opacity="0.8"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- RANKING HANDLOWCÃ“W -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="ðŸ†" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="RANKING HANDLOWCÃ“W" FontSize="12" FontWeight="Bold" Foreground="#374151"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="listaHandlowcy">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding TloKarty}" CornerRadius="10" Padding="12,10" Margin="0,0,0,8"
                                                Cursor="Hand" MouseLeftButtonUp="Handlowiec_Click" Tag="{Binding Nazwa}"
                                                BorderBrush="{Binding KolorRamki}" BorderThickness="2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="32"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Background="{Binding KolorPozycji}" Width="28" Height="28" CornerRadius="14">
                                                    <TextBlock Text="{Binding Pozycja}" FontSize="12" FontWeight="Bold" Foreground="White"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>

                                                <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Nazwa}" FontSize="13" FontWeight="SemiBold"
                                                               Foreground="#1F2937" TextTrimming="CharacterEllipsis"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                        <Border Background="#FEE2E2" CornerRadius="4" Padding="4,1" Margin="0,0,4,0">
                                                            <TextBlock Text="{Binding TelefonyTekst}" FontSize="9" Foreground="#DC2626" FontWeight="SemiBold"/>
                                                        </Border>
                                                        <Border Background="#DCFCE7" CornerRadius="4" Padding="4,1" Margin="0,0,4,0">
                                                            <TextBlock Text="{Binding StatusyTekst}" FontSize="9" Foreground="#16A34A" FontWeight="SemiBold"/>
                                                        </Border>
                                                        <Border Background="#F3F4F6" CornerRadius="4" Padding="4,1">
                                                            <TextBlock Text="{Binding NotatkiTekst}" FontSize="9" Foreground="#6B7280" FontWeight="SemiBold"/>
                                                        </Border>
                                                    </StackPanel>
                                                </StackPanel>

                                                <TextBlock Grid.Column="2" Text="{Binding Suma}" FontSize="22" FontWeight="Bold"
                                                           Foreground="{Binding KolorPozycji}" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- PRAWA KOLUMNA - WYKRES -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <!-- WYKRES LINIOWY - WSZYSCY HANDLOWCY -->
                <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“ˆ" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="AKTYWNOÅšÄ† HANDLOWCÃ“W W CZASIE" FontSize="13" FontWeight="Bold" Foreground="#374151"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Border Background="#F9FAFB" CornerRadius="8" Padding="10,6" Margin="0,0,8,0" BorderBrush="#E5E7EB" BorderThickness="1">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="MiesiÄ…c:" FontSize="11" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <ComboBox x:Name="cmbMiesiac" Width="100" Padding="6,2" FontSize="11" BorderThickness="0" SelectionChanged="CmbWykresOkres_SelectionChanged">
                                            <ComboBoxItem Content="StyczeÅ„" Tag="1"/>
                                            <ComboBoxItem Content="Luty" Tag="2"/>
                                            <ComboBoxItem Content="Marzec" Tag="3"/>
                                            <ComboBoxItem Content="KwiecieÅ„" Tag="4"/>
                                            <ComboBoxItem Content="Maj" Tag="5"/>
                                            <ComboBoxItem Content="Czerwiec" Tag="6"/>
                                            <ComboBoxItem Content="Lipiec" Tag="7"/>
                                            <ComboBoxItem Content="SierpieÅ„" Tag="8"/>
                                            <ComboBoxItem Content="WrzesieÅ„" Tag="9"/>
                                            <ComboBoxItem Content="PaÅºdziernik" Tag="10"/>
                                            <ComboBoxItem Content="Listopad" Tag="11"/>
                                            <ComboBoxItem Content="GrudzieÅ„" Tag="12"/>
                                        </ComboBox>
                                    </StackPanel>
                                </Border>
                                <Border Background="#F9FAFB" CornerRadius="8" Padding="10,6" BorderBrush="#E5E7EB" BorderThickness="1">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Rok:" FontSize="11" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <ComboBox x:Name="cmbRok" Width="70" Padding="6,2" FontSize="11" BorderThickness="0" SelectionChanged="CmbWykresOkres_SelectionChanged"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!-- Canvas wykresu -->
                        <Grid Grid.Row="1" Margin="50,10,20,40">
                            <Canvas x:Name="canvasWykres" Background="Transparent" ClipToBounds="True"/>
                            <StackPanel x:Name="panelOsY" Orientation="Vertical" HorizontalAlignment="Left" Margin="-45,0,0,0"/>
                            <StackPanel x:Name="panelOsX" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,-35"/>
                        </Grid>

                        <!-- Legenda handlowcÃ³w -->
                        <Border Grid.Row="2" Background="#F9FAFB" CornerRadius="8" Padding="12,8">
                            <StackPanel>
                                <TextBlock Text="LEGENDA:" FontSize="10" FontWeight="Bold" Foreground="#9CA3AF" Margin="0,0,0,6"/>
                                <WrapPanel x:Name="panelLegenda" Orientation="Horizontal"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- SÅUPKI OSTATNICH DNI -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="ðŸ“Š" FontSize="12" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="OSTATNIE 14 DNI" FontSize="11" FontWeight="Bold" Foreground="#374151"/>
                        </StackPanel>

                        <ItemsControl Grid.Row="1" x:Name="listaAktywnoscDni">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding TloKarty}" CornerRadius="8" Padding="4,8" Margin="2,0"
                                            BorderBrush="{Binding KolorRamki}" BorderThickness="1">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding DzienSkrot}" FontSize="9" FontWeight="Bold" Foreground="#9CA3AF" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding DataSkrot}" FontSize="8" Foreground="#D1D5DB" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                            <Grid Height="70" Width="36" Margin="0,4,0,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="0" Background="#DC2626" CornerRadius="3,3,0,0" Height="{Binding WysokoscTelefony}" VerticalAlignment="Bottom" Margin="0,0,1,0" ToolTip="{Binding TooltipTelefony}"/>
                                                <Border Grid.Column="1" Background="#16A34A" CornerRadius="3,3,0,0" Height="{Binding WysokoscStatusy}" VerticalAlignment="Bottom" Margin="0,0,1,0" ToolTip="{Binding TooltipStatusy}"/>
                                                <Border Grid.Column="2" Background="#6B7280" CornerRadius="3,3,0,0" Height="{Binding WysokoscNotatki}" VerticalAlignment="Bottom" ToolTip="{Binding TooltipNotatki}"/>
                                            </Grid>
                                            <TextBlock Text="{Binding Suma}" FontSize="13" FontWeight="Bold" Foreground="#DC2626" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
