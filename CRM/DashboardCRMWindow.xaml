<Window x:Class="Kalendarz1.CRM.DashboardCRMWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard Motywacyjny - AktywnoÅ›Ä‡ ZespoÅ‚u"
        Width="1500" Height="950"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFC"
        FontFamily="Segoe UI">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#16A34A"/>
        <SolidColorBrush x:Key="PhoneColor" Color="#3B82F6"/>
        <SolidColorBrush x:Key="StatusColor" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="NoteColor" Color="#F59E0B"/>
        <SolidColorBrush x:Key="TextDark" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextGray" Color="#64748B"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E2E8F0"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.06" BlurRadius="24" ShadowDepth="4" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="12" ShadowDepth="2" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlowText" TargetType="TextBlock">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#16A34A" Opacity="0.3" BlurRadius="8" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER z animowanym tytuÅ‚em -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Border Background="Linear Gradient" CornerRadius="20" Padding="28,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#16A34A" Offset="0"/>
                        <GradientStop Color="#059669" Offset="0.5"/>
                        <GradientStop Color="#0D9488" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ†" FontSize="42" VerticalAlignment="Center" Margin="0,0,16,0"/>
                        <StackPanel>
                            <TextBlock Text="DASHBOARD MOTYWACYJNY" FontSize="28" FontWeight="Bold" Foreground="White" Style="{StaticResource GlowText}"/>
                            <TextBlock x:Name="txtPodtytul" Text="Razem osiÄ…gamy wiÄ™cej! ÅšledÅº postÄ™py zespoÅ‚u." FontSize="14" Foreground="#DCFCE7" Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Border Background="White" CornerRadius="12" Padding="4">
                            <ComboBox x:Name="cmbOkres" Width="160" Padding="12,10" FontSize="13" BorderThickness="0" SelectionChanged="CmbOkres_SelectionChanged">
                                <ComboBoxItem Content="ðŸ“… Dzisiaj" IsSelected="True"/>
                                <ComboBoxItem Content="ðŸ“… Ostatnie 7 dni"/>
                                <ComboBoxItem Content="ðŸ“… Ostatnie 14 dni"/>
                                <ComboBoxItem Content="ðŸ“… Ostatnie 30 dni"/>
                                <ComboBoxItem Content="ðŸ“… Ten miesiÄ…c"/>
                                <ComboBoxItem Content="ðŸ“… Poprzedni miesiÄ…c"/>
                            </ComboBox>
                        </Border>
                        <Button Content="ðŸ”„ OdÅ›wieÅ¼" Padding="18,12" Margin="12,0,0,0" Background="White"
                                Foreground="#16A34A" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="BtnOdswiez_Click" FontSize="13">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- STATYSTYKI GLOBALNE - 4 karty -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Telefony -->
            <Border Grid.Column="0" Style="{StaticResource StatBadge}" Background="White">
                <Grid>
                    <Border Background="#DBEAFE" CornerRadius="50" Width="70" Height="70" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-5,-5,0,0" Opacity="0.5"/>
                    <StackPanel Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#3B82F6" CornerRadius="12" Width="48" Height="48" Margin="0,0,14,0">
                                <TextBlock Text="ðŸ“ž" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="TELEFONY" FontSize="11" FontWeight="Bold" Foreground="#64748B" CharacterSpacing="50"/>
                                <TextBlock x:Name="txtTelefonyTotal" Text="0" FontSize="36" FontWeight="Bold" Foreground="#1E40AF" Margin="0,-4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock x:Name="txtTelefonyInfo" Text="wykonanych poÅ‚Ä…czeÅ„" FontSize="12" Foreground="#3B82F6" Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Zmiany statusÃ³w -->
            <Border Grid.Column="1" Style="{StaticResource StatBadge}" Background="White">
                <Grid>
                    <Border Background="#EDE9FE" CornerRadius="50" Width="70" Height="70" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-5,-5,0,0" Opacity="0.5"/>
                    <StackPanel Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#8B5CF6" CornerRadius="12" Width="48" Height="48" Margin="0,0,14,0">
                                <TextBlock Text="ðŸ”„" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="STATUSY" FontSize="11" FontWeight="Bold" Foreground="#64748B" CharacterSpacing="50"/>
                                <TextBlock x:Name="txtStatusyTotal" Text="0" FontSize="36" FontWeight="Bold" Foreground="#5B21B6" Margin="0,-4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock x:Name="txtStatusyInfo" Text="zmian statusÃ³w" FontSize="12" Foreground="#8B5CF6" Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Notatki -->
            <Border Grid.Column="2" Style="{StaticResource StatBadge}" Background="White">
                <Grid>
                    <Border Background="#FEF3C7" CornerRadius="50" Width="70" Height="70" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-5,-5,0,0" Opacity="0.5"/>
                    <StackPanel Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#F59E0B" CornerRadius="12" Width="48" Height="48" Margin="0,0,14,0">
                                <TextBlock Text="ðŸ“" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="NOTATKI" FontSize="11" FontWeight="Bold" Foreground="#64748B" CharacterSpacing="50"/>
                                <TextBlock x:Name="txtNotatkiTotal" Text="0" FontSize="36" FontWeight="Bold" Foreground="#B45309" Margin="0,-4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock x:Name="txtNotatkiInfo" Text="dodanych notatek" FontSize="12" Foreground="#F59E0B" Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ÅÄ…czna aktywnoÅ›Ä‡ -->
            <Border Grid.Column="3" Style="{StaticResource StatBadge}" Margin="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#DCFCE7" Offset="0"/>
                        <GradientStop Color="#BBF7D0" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <StackPanel Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#16A34A" CornerRadius="12" Width="48" Height="48" Margin="0,0,14,0">
                                <TextBlock Text="âš¡" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="RAZEM" FontSize="11" FontWeight="Bold" Foreground="#166534" CharacterSpacing="50"/>
                                <TextBlock x:Name="txtAktywnoscTotal" Text="0" FontSize="36" FontWeight="Bold" Foreground="#166534" Margin="0,-4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock x:Name="txtAktywnoscInfo" Text="wszystkich akcji" FontSize="12" Foreground="#16A34A" Margin="0,8,0,0" FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- GÅÃ“WNA ZAWARTOÅšÄ† -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="380"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="220"/>
            </Grid.RowDefinitions>

            <!-- WYKRES LINIOWY - TRENDY MIESIÄ˜CZNE -->
            <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,16,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="ðŸ“ˆ" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Trendy miesiÄ™czne" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                        <TextBlock Text=" - aktywnoÅ›Ä‡ zespoÅ‚u w czasie" FontSize="14" Foreground="{StaticResource TextGray}" VerticalAlignment="Bottom" Margin="0,0,0,2"/>
                    </StackPanel>

                    <!-- Wykres liniowy -->
                    <Grid Grid.Row="1" Margin="40,10,20,30">
                        <Canvas x:Name="canvasWykres" Background="Transparent" ClipToBounds="True"/>
                        <!-- Etykiety osi Y -->
                        <StackPanel x:Name="panelOsY" Orientation="Vertical" HorizontalAlignment="Left" Margin="-40,0,0,0"/>
                        <!-- Etykiety osi X -->
                        <StackPanel x:Name="panelOsX" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,-25"/>
                    </Grid>

                    <!-- Legenda -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                            <Border Background="#3B82F6" Width="24" Height="4" CornerRadius="2" VerticalAlignment="Center"/>
                            <Ellipse Fill="#3B82F6" Width="10" Height="10" Margin="-5,0,8,0"/>
                            <TextBlock Text="Telefony" FontSize="12" Foreground="{StaticResource TextDark}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                            <Border Background="#8B5CF6" Width="24" Height="4" CornerRadius="2" VerticalAlignment="Center"/>
                            <Ellipse Fill="#8B5CF6" Width="10" Height="10" Margin="-5,0,8,0"/>
                            <TextBlock Text="Zmiany statusÃ³w" FontSize="12" Foreground="{StaticResource TextDark}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#F59E0B" Width="24" Height="4" CornerRadius="2" VerticalAlignment="Center"/>
                            <Ellipse Fill="#F59E0B" Width="10" Height="10" Margin="-5,0,8,0"/>
                            <TextBlock Text="Notatki" FontSize="12" Foreground="{StaticResource TextDark}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- RANKING HANDLOWCÃ“W -->
            <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="ðŸ…" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Ranking zespoÅ‚u" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                    </StackPanel>

                    <!-- PODIUM TOP 3 -->
                    <Grid Grid.Row="1" Margin="0,0,0,20" Height="140">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 2 miejsce -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                            <TextBlock x:Name="txtTop2Nazwa" Text="-" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextDark}" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis" MaxWidth="90"/>
                            <TextBlock x:Name="txtTop2Punkty" Text="0" FontSize="16" FontWeight="Bold" Foreground="#64748B" HorizontalAlignment="Center"/>
                            <Border Background="#E2E8F0" Height="60" Width="80" CornerRadius="8,8,0,0" Margin="0,4,0,0">
                                <TextBlock Text="ðŸ¥ˆ" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <!-- 1 miejsce -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                            <TextBlock x:Name="txtTop1Nazwa" Text="-" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextDark}" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis" MaxWidth="90"/>
                            <TextBlock x:Name="txtTop1Punkty" Text="0" FontSize="18" FontWeight="Bold" Foreground="#16A34A" HorizontalAlignment="Center"/>
                            <Border Height="90" Width="90" CornerRadius="8,8,0,0" Margin="0,4,0,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#FEF3C7" Offset="0"/>
                                        <GradientStop Color="#FDE68A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="ðŸ¥‡" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <!-- 3 miejsce -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                            <TextBlock x:Name="txtTop3Nazwa" Text="-" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextDark}" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis" MaxWidth="90"/>
                            <TextBlock x:Name="txtTop3Punkty" Text="0" FontSize="16" FontWeight="Bold" Foreground="#92400E" HorizontalAlignment="Center"/>
                            <Border Background="#FFEDD5" Height="45" Width="80" CornerRadius="8,8,0,0" Margin="0,4,0,0">
                                <TextBlock Text="ðŸ¥‰" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Lista pozostaÅ‚ych -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="listaHandlowcy">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding TloKarty}" CornerRadius="12" Padding="14,12" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="32"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Background="{Binding KolorPozycji}" Width="28" Height="28" CornerRadius="14" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Pozycja}" FontSize="12" FontWeight="Bold" Foreground="White"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Nazwa}" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextDark}" TextTrimming="CharacterEllipsis"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                    <Border Background="#DBEAFE" CornerRadius="4" Padding="5,1" Margin="0,0,4,0">
                                                        <TextBlock Text="{Binding TelefonyTekst}" FontSize="9" Foreground="#1E40AF" FontWeight="SemiBold"/>
                                                    </Border>
                                                    <Border Background="#EDE9FE" CornerRadius="4" Padding="5,1" Margin="0,0,4,0">
                                                        <TextBlock Text="{Binding StatusyTekst}" FontSize="9" Foreground="#5B21B6" FontWeight="SemiBold"/>
                                                    </Border>
                                                    <Border Background="#FEF3C7" CornerRadius="4" Padding="5,1">
                                                        <TextBlock Text="{Binding NotatkiTekst}" FontSize="9" Foreground="#B45309" FontWeight="SemiBold"/>
                                                    </Border>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding Suma}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" HorizontalAlignment="Right"/>
                                                <TextBlock Text="pkt" FontSize="9" Foreground="{StaticResource TextGray}" HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- AKTYWNOÅšÄ† OSTATNICH DNI - dolny panel -->
            <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="ðŸ“Š" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="AktywnoÅ›Ä‡ ostatnich dni" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                    </StackPanel>

                    <ItemsControl Grid.Row="1" x:Name="listaAktywnoscDni">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="1"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding TloKarty}" CornerRadius="12" Padding="12,10" Margin="4,0">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding DzienSkrot}" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Data}" FontSize="10" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center" Margin="0,2,0,8"/>

                                        <!-- SÅ‚upki pionowe -->
                                        <Grid Height="80" Width="50">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Background="#3B82F6" CornerRadius="3,3,0,0" Height="{Binding WysokoscTelefony}" VerticalAlignment="Bottom" Margin="1,0">
                                                <Border.ToolTip>
                                                    <TextBlock Text="{Binding TooltipTelefony}"/>
                                                </Border.ToolTip>
                                            </Border>
                                            <Border Grid.Column="1" Background="#8B5CF6" CornerRadius="3,3,0,0" Height="{Binding WysokoscStatusy}" VerticalAlignment="Bottom" Margin="1,0">
                                                <Border.ToolTip>
                                                    <TextBlock Text="{Binding TooltipStatusy}"/>
                                                </Border.ToolTip>
                                            </Border>
                                            <Border Grid.Column="2" Background="#F59E0B" CornerRadius="3,3,0,0" Height="{Binding WysokoscNotatki}" VerticalAlignment="Bottom" Margin="1,0">
                                                <Border.ToolTip>
                                                    <TextBlock Text="{Binding TooltipNotatki}"/>
                                                </Border.ToolTip>
                                            </Border>
                                        </Grid>

                                        <TextBlock Text="{Binding Suma}" FontSize="14" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
