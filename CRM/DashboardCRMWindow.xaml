<Window x:Class="Kalendarz1.CRM.DashboardCRMWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard Motywacyjny - AktywnoÅ›Ä‡ ZespoÅ‚u"
        Width="1500" Height="950"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A"
        FontFamily="Segoe UI">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#10B981"/>
        <SolidColorBrush x:Key="PhoneColor" Color="#3B82F6"/>
        <SolidColorBrush x:Key="StatusColor" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="NoteColor" Color="#F59E0B"/>
        <SolidColorBrush x:Key="TextLight" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="TextDark" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextGray" Color="#94A3B8"/>
        <SolidColorBrush x:Key="BorderColor" Color="#334155"/>
        <SolidColorBrush x:Key="CardBackground" Color="#1E293B"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="GlowText" TargetType="TextBlock">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#10B981" Opacity="0.5" BlurRadius="12" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style dla DataGrid -->
        <Style x:Key="DarkDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Foreground" Value="#F1F5F9"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="#1E293B"/>
            <Setter Property="AlternatingRowBackground" Value="#273548"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#334155"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
        </Style>

        <Style x:Key="DarkColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#0F172A"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <Style x:Key="DarkDataGridCell" TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#F1F5F9"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#334155"/>
                    <Setter Property="Foreground" Value="#10B981"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DarkDataGridRow" TargetType="DataGridRow">
            <Setter Property="Background" Value="#1E293B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2D3A4F"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#334155"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Border CornerRadius="20" Padding="28,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#065F46" Offset="0"/>
                        <GradientStop Color="#047857" Offset="0.5"/>
                        <GradientStop Color="#0F766E" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ†" FontSize="42" VerticalAlignment="Center" Margin="0,0,16,0"/>
                        <StackPanel>
                            <TextBlock Text="DASHBOARD MOTYWACYJNY" FontSize="28" FontWeight="Bold" Foreground="White" Style="{StaticResource GlowText}"/>
                            <TextBlock x:Name="txtPodtytul" Text="Razem osiÄ…gamy wiÄ™cej! ÅšledÅº postÄ™py zespoÅ‚u." FontSize="14" Foreground="#A7F3D0" Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Border Background="#1E293B" CornerRadius="12" Padding="4">
                            <ComboBox x:Name="cmbOkres" Width="160" Padding="12,10" FontSize="13" BorderThickness="0" SelectionChanged="CmbOkres_SelectionChanged">
                                <ComboBoxItem Content="ðŸ“… Dzisiaj" IsSelected="True"/>
                                <ComboBoxItem Content="ðŸ“… Ostatnie 7 dni"/>
                                <ComboBoxItem Content="ðŸ“… Ostatnie 14 dni"/>
                                <ComboBoxItem Content="ðŸ“… Ostatnie 30 dni"/>
                                <ComboBoxItem Content="ðŸ“… Ten miesiÄ…c"/>
                                <ComboBoxItem Content="ðŸ“… Poprzedni miesiÄ…c"/>
                            </ComboBox>
                        </Border>
                        <Button Content="ðŸ”„ OdÅ›wieÅ¼" Padding="18,12" Margin="12,0,0,0" Background="#10B981"
                                Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="BtnOdswiez_Click" FontSize="13">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <!-- Filtry zakresu wykresu -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,16,0,0">
                        <TextBlock Text="Wykres:" FontSize="13" Foreground="#A7F3D0" VerticalAlignment="Center" Margin="0,0,10,0"/>

                        <Border Background="#1E293B" CornerRadius="8" Padding="4" Margin="0,0,8,0">
                            <ComboBox x:Name="cmbRok" Width="80" Padding="8,6" FontSize="12" BorderThickness="0" SelectionChanged="CmbZakres_SelectionChanged"/>
                        </Border>

                        <TextBlock Text="od:" FontSize="13" Foreground="#A7F3D0" VerticalAlignment="Center" Margin="8,0,8,0"/>
                        <Border Background="#1E293B" CornerRadius="8" Padding="4">
                            <ComboBox x:Name="cmbMiesiacOd" Width="100" Padding="8,6" FontSize="12" BorderThickness="0" SelectionChanged="CmbZakres_SelectionChanged">
                                <ComboBoxItem Content="StyczeÅ„" Tag="1"/>
                                <ComboBoxItem Content="Luty" Tag="2"/>
                                <ComboBoxItem Content="Marzec" Tag="3"/>
                                <ComboBoxItem Content="KwiecieÅ„" Tag="4"/>
                                <ComboBoxItem Content="Maj" Tag="5"/>
                                <ComboBoxItem Content="Czerwiec" Tag="6"/>
                                <ComboBoxItem Content="Lipiec" Tag="7"/>
                                <ComboBoxItem Content="SierpieÅ„" Tag="8"/>
                                <ComboBoxItem Content="WrzesieÅ„" Tag="9"/>
                                <ComboBoxItem Content="PaÅºdziernik" Tag="10"/>
                                <ComboBoxItem Content="Listopad" Tag="11"/>
                                <ComboBoxItem Content="GrudzieÅ„" Tag="12"/>
                            </ComboBox>
                        </Border>

                        <TextBlock Text="do:" FontSize="13" Foreground="#A7F3D0" VerticalAlignment="Center" Margin="8,0,8,0"/>
                        <Border Background="#1E293B" CornerRadius="8" Padding="4">
                            <ComboBox x:Name="cmbMiesiacDo" Width="100" Padding="8,6" FontSize="12" BorderThickness="0" SelectionChanged="CmbZakres_SelectionChanged">
                                <ComboBoxItem Content="StyczeÅ„" Tag="1"/>
                                <ComboBoxItem Content="Luty" Tag="2"/>
                                <ComboBoxItem Content="Marzec" Tag="3"/>
                                <ComboBoxItem Content="KwiecieÅ„" Tag="4"/>
                                <ComboBoxItem Content="Maj" Tag="5"/>
                                <ComboBoxItem Content="Czerwiec" Tag="6"/>
                                <ComboBoxItem Content="Lipiec" Tag="7"/>
                                <ComboBoxItem Content="SierpieÅ„" Tag="8"/>
                                <ComboBoxItem Content="WrzesieÅ„" Tag="9"/>
                                <ComboBoxItem Content="PaÅºdziernik" Tag="10"/>
                                <ComboBoxItem Content="Listopad" Tag="11"/>
                                <ComboBoxItem Content="GrudzieÅ„" Tag="12"/>
                            </ComboBox>
                        </Border>

                        <TextBlock Text="Handlowiec:" FontSize="13" Foreground="#A7F3D0" VerticalAlignment="Center" Margin="20,0,10,0"/>
                        <Border Background="#1E293B" CornerRadius="8" Padding="4">
                            <ComboBox x:Name="cmbHandlowiec" Width="150" Padding="8,6" FontSize="12" BorderThickness="0" SelectionChanged="CmbHandlowiec_SelectionChanged">
                                <ComboBoxItem Content="Wszyscy" Tag="" IsSelected="True"/>
                            </ComboBox>
                        </Border>

                        <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                            <RadioButton x:Name="rbMiesiace" Content="MiesiÄ…ce" Foreground="#A7F3D0" FontSize="12" VerticalAlignment="Center" IsChecked="True" GroupName="WidokWykresu" Checked="RbWidok_Checked"/>
                            <RadioButton x:Name="rbTygodnie" Content="Tygodnie" Foreground="#A7F3D0" FontSize="12" VerticalAlignment="Center" Margin="16,0,0,0" GroupName="WidokWykresu" Checked="RbWidok_Checked"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- GÅÃ“WNA ZAWARTOÅšÄ† -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="450"/>
            </Grid.ColumnDefinitions>

            <!-- WYKRES -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="ðŸ“ˆ" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Trendy aktywnoÅ›ci" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextLight}"/>
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="40,10,20,30">
                        <Canvas x:Name="canvasWykres" Background="Transparent" ClipToBounds="True"/>
                        <StackPanel x:Name="panelOsY" Orientation="Vertical" HorizontalAlignment="Left" Margin="-40,0,0,0"/>
                        <StackPanel x:Name="panelOsX" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,-25"/>
                    </Grid>

                    <WrapPanel x:Name="panelLegenda" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                </Grid>
            </Border>

            <!-- TABELA DANYCH -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="ðŸ“Š" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Dane aktywnoÅ›ci" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextLight}"/>
                    </StackPanel>

                    <DataGrid x:Name="tabelaDane" Grid.Row="1"
                              Style="{StaticResource DarkDataGrid}"
                              ColumnHeaderStyle="{StaticResource DarkColumnHeader}"
                              CellStyle="{StaticResource DarkDataGridCell}"
                              RowStyle="{StaticResource DarkDataGridRow}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Handlowiec" Binding="{Binding Nazwa}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="8,0"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
