<Window x:Class="Kalendarz1.CRM.Dialogs.EmailTemplateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wyslij email"
        Width="800" Height="700"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <SolidColorBrush x:Key="BgPrimary" Color="#0F172A"/>
        <SolidColorBrush x:Key="BgSecondary" Color="#1E293B"/>
        <SolidColorBrush x:Key="BgTertiary" Color="#334155"/>
        <SolidColorBrush x:Key="AccentPrimary" Color="#6366F1"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#22C55E"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#94A3B8"/>
        <SolidColorBrush x:Key="BorderColor" Color="#334155"/>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#22C55E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#16A34A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="#475569"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#475569"/>
            <Setter Property="Padding" Value="16,10"/>
        </Style>

        <Style x:Key="TemplateButton" TargetType="Button">
            <Setter Property="Background" Value="#334155"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#334155"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="BorderBrush" Value="#475569"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BgPrimary}" CornerRadius="16" BorderThickness="1" BorderBrush="{StaticResource BorderColor}">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.5" BlurRadius="30"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#166534" CornerRadius="16,16,0,0" Padding="24,18" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Path Fill="White" Stretch="Uniform" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,14,0"
                          Data="M20,4H4C2.9,4,2.01,4.9,2.01,6L2,18c0,1.1,0.9,2,2,2h16c1.1,0,2-0.9,2-2V6C22,4.9,21.1,4,20,4z M20,8l-8,5L4,8V6l8,5l8-5V8z"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Wyslij email" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="txtRecipient" Text="Do: kontakt@firma.pl" FontSize="12" Foreground="#86EFAC" Margin="0,3,0,0"/>
                    </StackPanel>
                    <Button Grid.Column="2" Style="{StaticResource SecondaryButton}" Content="X" Padding="10,6" Click="BtnClose_Click"/>
                </Grid>
            </Border>

            <!-- Templates -->
            <Border Grid.Row="1" Background="{StaticResource BgSecondary}" Padding="20,14">
                <StackPanel>
                    <TextBlock Text="Szablony:" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,0,0,10"/>
                    <WrapPanel>
                        <Button Style="{StaticResource TemplateButton}" Content="Oferta handlowa" Tag="offer" Click="BtnTemplate_Click"/>
                        <Button Style="{StaticResource TemplateButton}" Content="Follow-up" Tag="followup" Click="BtnTemplate_Click"/>
                        <Button Style="{StaticResource TemplateButton}" Content="Przypomnienie" Tag="reminder" Click="BtnTemplate_Click"/>
                        <Button Style="{StaticResource TemplateButton}" Content="Podziekowanie" Tag="thanks" Click="BtnTemplate_Click"/>
                        <Button Style="{StaticResource TemplateButton}" Content="Informacja" Tag="info" Click="BtnTemplate_Click"/>
                    </WrapPanel>
                    <TextBlock Text="Zmienne: {{Nazwa}}, {{Miasto}}, {{OsobaKontaktowa}}, {{Handlowiec}}" Foreground="#64748B" FontSize="10" Margin="0,6,0,0"/>
                </StackPanel>
            </Border>

            <!-- Subject -->
            <Border Grid.Row="2" Background="{StaticResource BgPrimary}" Padding="20,10">
                <StackPanel>
                    <TextBlock Text="Temat:" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,0,0,6"/>
                    <TextBox x:Name="txtSubject" Style="{StaticResource DarkTextBox}" Text=""/>
                </StackPanel>
            </Border>

            <!-- Body -->
            <Border Grid.Row="3" Margin="16,8,16,16" Background="{StaticResource BgSecondary}" CornerRadius="10" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Tresc wiadomosci:" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,0,0,10"/>

                    <TextBox x:Name="txtBody" Grid.Row="1" Style="{StaticResource DarkTextBox}"
                             AcceptsReturn="True" AcceptsTab="True" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto" VerticalContentAlignment="Top"/>
                </Grid>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="4" Background="{StaticResource BgSecondary}" CornerRadius="0,0,16,16" Padding="20,14">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <CheckBox x:Name="chkSaveNote" Content="Zapisz jako notatke" Foreground="{StaticResource TextPrimary}" IsChecked="True" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <Button Grid.Column="1" Style="{StaticResource SecondaryButton}" Content="Anuluj" Click="BtnClose_Click" Margin="0,0,10,0"/>
                    <Button Grid.Column="2" x:Name="btnSend" Style="{StaticResource ActionButton}" Content="Wyslij email" Click="BtnSend_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
