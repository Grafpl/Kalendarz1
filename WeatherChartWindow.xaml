<Window x:Class="Kalendarz1.WeatherChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Prognoza pogody - 4 dni"
        Height="800" Width="1400"
        MinHeight="600" MinWidth="1000"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#1E2A38">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NAGLOWEK -->
        <Border Grid.Row="0" Background="#2C3E50" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="PROGNOZA POGODY - 4 DNI (CO 5 GODZIN)"
                               FontSize="28" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="txtLokalizacja" Text="Lokalizacja: Dmosin (95-061)"
                               FontSize="14" Foreground="#95A5A6" Margin="0,8,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Content="Zamknij" Background="#E74C3C" Foreground="White"
                        Padding="25,12" Cursor="Hand" BorderThickness="0" Click="BtnClose_Click"
                        FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0392B"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- KARTY Z AKTUALNA POGODA I STATYSTYKAMI -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Aktualna temperatura -->
            <Border Grid.Column="0" Background="#2C3E50" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="TERAZ" FontSize="12" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock x:Name="txtAktualnaTemp" Text="--" FontSize="32" FontWeight="Bold" Foreground="#3498DB"/>
                        <TextBlock Text="°C" FontSize="20" Foreground="#3498DB" VerticalAlignment="Top" Margin="2,5,0,0"/>
                    </StackPanel>
                    <TextBlock x:Name="txtAktualnyOpis" Text="--" FontSize="12" Foreground="#95A5A6" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Najnizsza temperatura -->
            <Border Grid.Column="1" Background="#2C3E50" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="MIN (4 DNI)" FontSize="12" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock x:Name="txtMinTemp" Text="--" FontSize="32" FontWeight="Bold" Foreground="#27AE60"/>
                        <TextBlock Text="°C" FontSize="20" Foreground="#27AE60" VerticalAlignment="Top" Margin="2,5,0,0"/>
                    </StackPanel>
                    <TextBlock x:Name="txtMinDzien" Text="--" FontSize="12" Foreground="#95A5A6" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Najwyzsza temperatura -->
            <Border Grid.Column="2" Background="#2C3E50" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="MAX (4 DNI)" FontSize="12" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock x:Name="txtMaxTemp" Text="--" FontSize="32" FontWeight="Bold" Foreground="#E74C3C"/>
                        <TextBlock Text="°C" FontSize="20" Foreground="#E74C3C" VerticalAlignment="Top" Margin="2,5,0,0"/>
                    </StackPanel>
                    <TextBlock x:Name="txtMaxDzien" Text="--" FontSize="12" Foreground="#95A5A6" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Srednia temperatura -->
            <Border Grid.Column="3" Background="#2C3E50" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="ŚREDNIA" FontSize="12" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock x:Name="txtSredniaTemp" Text="--" FontSize="32" FontWeight="Bold" Foreground="#9B59B6"/>
                        <TextBlock Text="°C" FontSize="20" Foreground="#9B59B6" VerticalAlignment="Top" Margin="2,5,0,0"/>
                    </StackPanel>
                    <TextBlock Text="z 4 dni prognozy" FontSize="12" Foreground="#95A5A6" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Roznica temperatur -->
            <Border Grid.Column="4" Background="#2C3E50" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="AMPLITUDA" FontSize="12" Foreground="#7F8C8D" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock x:Name="txtAmplituda" Text="--" FontSize="32" FontWeight="Bold" Foreground="#F39C12"/>
                        <TextBlock Text="°C" FontSize="20" Foreground="#F39C12" VerticalAlignment="Top" Margin="2,5,0,0"/>
                    </StackPanel>
                    <TextBlock Text="max - min" FontSize="12" Foreground="#95A5A6" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- WYKRES -->
        <Border Grid.Row="2" Background="#2C3E50" CornerRadius="8" Padding="15">
            <lvc:CartesianChart x:Name="chartWeather" DisableAnimations="False"
                                LegendLocation="None" Hoverable="True"
                                DataTooltip="{x:Null}">
                <lvc:CartesianChart.Series>
                    <lvc:LineSeries x:Name="seriesTemp"
                                    Title="Temperatura"
                                    Values="{Binding TempValues}"
                                    Stroke="#3498DB"
                                    StrokeThickness="3"
                                    Fill="#333498DB"
                                    PointGeometrySize="10"
                                    PointForeground="#3498DB"
                                    LineSmoothness="0.7"
                                    DataLabels="True"
                                    LabelPoint="{Binding LabelFormatter}"
                                    Foreground="White"/>
                </lvc:CartesianChart.Series>
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Data i godzina" Labels="{Binding TimeLabels}"
                              FontSize="11" Foreground="#BDC3C7"
                              ShowLabels="True" LabelsRotation="-15">
                        <lvc:Axis.Separator>
                            <lvc:Separator StrokeThickness="0.5" Stroke="#3D4F5F" Step="1"/>
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Temperatura (°C)" LabelFormatter="{Binding YFormatter}"
                              FontSize="12" Foreground="#BDC3C7"
                              MinValue="{Binding YAxisMin}" MaxValue="{Binding YAxisMax}">
                        <lvc:Axis.Separator>
                            <lvc:Separator StrokeThickness="0.5" Stroke="#3D4F5F"/>
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </Border>

        <!-- STOPKA Z PROGNOZA GODZINOWA -->
        <Border Grid.Row="3" Background="#2C3E50" CornerRadius="8" Padding="15" Margin="0,15,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="WYBRANE PUNKTY PROGNOZY" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

                <ItemsControl x:Name="forecastPanel" Grid.Row="1">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#34495E" CornerRadius="6" Padding="10" Margin="5,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding DayName}" FontSize="12" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Time}" FontSize="16" FontWeight="Bold" Foreground="#3498DB" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                    <TextBlock Text="{Binding Icon}" FontSize="24" HorizontalAlignment="Center" Margin="0,5"/>
                                    <TextBlock Text="{Binding Temperature}" FontSize="16" FontWeight="Bold" Foreground="#F39C12" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Description}" FontSize="10" Foreground="#95A5A6" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <!-- LOADING OVERLAY -->
        <Border x:Name="loadingOverlay" Grid.RowSpan="4" Background="#EE1E2A38" Visibility="Visible" CornerRadius="8">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Ładowanie prognozy pogody..." FontSize="20" Foreground="White" HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Width="300" Height="6" Margin="0,20,0,0"/>
                <TextBlock Text="Proszę czekać..." FontSize="12" Foreground="#95A5A6" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
