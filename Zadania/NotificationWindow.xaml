<Window x:Class="Kalendarz1.Zadania.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Powiadomienia"
        Width="700" Height="580"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#27AE60" Offset="0"/>
            <GradientStop Color="#1E8449" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BlueGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#3498DB" Offset="0"/>
            <GradientStop Color="#2980B9" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#9B59B6" Offset="0"/>
            <GradientStop Color="#8E44AD" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="RedGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E74C3C" Offset="0"/>
            <GradientStop Color="#C0392B" Offset="1"/>
        </LinearGradientBrush>

        <!-- Compact Button Style -->
        <Style x:Key="CompactButton" TargetType="Button">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34495E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Green Button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource GreenGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark ComboBox Style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#1A1F26"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border" Background="#1A1F26" BorderBrush="#2C3E50" BorderThickness="1" CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0" Margin="10,8" Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" VerticalAlignment="Center"/>
                                    <ToggleButton Grid.Column="1" Width="24" Background="Transparent" BorderThickness="0" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" ClickMode="Press">
                                        <Path Fill="#7F8C8D" Data="M0,0 L4,4 L8,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>
                            <Popup x:Name="PART_Popup" IsOpen="{TemplateBinding IsDropDownOpen}" Placement="Bottom" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Border Background="#1A1F26" BorderBrush="#2C3E50" BorderThickness="1" CornerRadius="8" Margin="0,4,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3" Color="#000"/>
                                    </Border.Effect>
                                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#3498DB"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#3498DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2C3E50"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#34495E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#0F1419" CornerRadius="16" BorderBrush="#2C3E50" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="2" Opacity="0.5" Color="#000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Header -->
                <RowDefinition Height="*"/>     <!-- Two Columns Content -->
                <RowDefinition Height="Auto"/>  <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- ==================== HEADER ==================== -->
            <Border Grid.Row="0" Padding="20,16,20,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <Border Grid.Column="0" Width="44" Height="44" CornerRadius="12" Margin="0,0,14,0"
                            Background="{StaticResource GreenGradient}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.5" Color="#27AE60"/>
                        </Border.Effect>
                        <TextBlock Text="ðŸ“‹" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title & Date -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="TwÃ³j DzieÅ„" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="txtSubtitle" FontSize="11" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Grid.Column="2" Content="âœ•"
                            Background="Transparent" Foreground="#7F8C8D"
                            BorderThickness="0" FontSize="18" FontWeight="Light"
                            Padding="8,4" Cursor="Hand"
                            Click="BtnClose_Click"/>
                </Grid>
            </Border>

            <!-- ==================== TWO COLUMNS CONTENT ==================== -->
            <Grid Grid.Row="1" Margin="16,0,16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT COLUMN - SPOTKANIA -->
                <Border Grid.Column="0" Background="#1A1F26" CornerRadius="14" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Meetings Header -->
                        <Border Grid.Row="0" Padding="16,14,16,12">
                            <StackPanel Orientation="Horizontal">
                                <Border Width="32" Height="32" CornerRadius="8" Background="{StaticResource PurpleGradient}" Margin="0,0,10,0">
                                    <TextBlock Text="ðŸ“…" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="SPOTKANIA" FontSize="12" FontWeight="Bold" Foreground="#9B59B6"/>
                                    <TextBlock x:Name="txtMeetingsCount" Text="0 zaplanowanych" FontSize="10" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Meetings List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="12,0,12,12">
                            <StackPanel x:Name="meetingsPanel">
                                <!-- Meetings will be added here -->
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- RIGHT COLUMN - ZADANIA -->
                <Border Grid.Column="2" Background="#1A1F26" CornerRadius="14" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Tasks Header -->
                        <Border Grid.Row="0" Padding="16,14,16,12">
                            <StackPanel Orientation="Horizontal">
                                <Border Width="32" Height="32" CornerRadius="8" Background="{StaticResource BlueGradient}" Margin="0,0,10,0">
                                    <TextBlock Text="âœ“" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="ZADANIA" FontSize="12" FontWeight="Bold" Foreground="#3498DB"/>
                                    <TextBlock x:Name="txtTasksCount" Text="0 do wykonania" FontSize="10" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Tasks List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="12,0,12,12">
                            <StackPanel x:Name="tasksPanel">
                                <!-- Tasks will be added here -->
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Hidden elements for compatibility -->
            <Border x:Name="liveNowSection" Visibility="Collapsed">
                <StackPanel x:Name="liveMeetingsPanel"/>
            </Border>
            <Border x:Name="liveIndicator" Visibility="Collapsed"/>
            <Border x:Name="liveNowCard" Visibility="Collapsed"/>
            <Border x:Name="liveDot" Visibility="Collapsed"/>
            <StackPanel x:Name="contentPanel" Visibility="Collapsed"/>
            <StackPanel x:Name="liveNowStat" Visibility="Collapsed">
                <TextBlock x:Name="txtLiveCount"/>
            </StackPanel>
            <StackPanel x:Name="tasksStat" Visibility="Collapsed">
                <TextBlock x:Name="txtTasksLabel"/>
            </StackPanel>
            <TextBlock x:Name="txtMeetingsLabel" Visibility="Collapsed"/>
            <TextBlock x:Name="txtUrgentCount" Visibility="Collapsed"/>
            <TextBlock x:Name="txtUrgentLabel" Visibility="Collapsed"/>

            <!-- ==================== FOOTER ==================== -->
            <Border Grid.Row="2" Padding="20,12,20,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Snooze -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <ComboBox x:Name="cmbSnooze" Width="110" VerticalAlignment="Center"
                                  Style="{StaticResource DarkComboBox}">
                            <ComboBoxItem Content="15 min"/>
                            <ComboBoxItem Content="30 min"/>
                            <ComboBoxItem Content="1 godz"/>
                            <ComboBoxItem Content="2 godz" IsSelected="True"/>
                        </ComboBox>
                        <Button Content="OdÅ‚Ã³Å¼" Style="{StaticResource CompactButton}"
                                Margin="8,0,0,0" Click="BtnSnooze_Click"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <Button Grid.Column="1" Content="Panel zadaÅ„" Style="{StaticResource CompactButton}"
                            Margin="0,0,8,0" Click="BtnOpenTasksPanel_Click"/>
                    <Button Grid.Column="2" Content="Panel spotkaÅ„" Style="{StaticResource PrimaryButton}"
                            Click="BtnOpenMeetingsPanel_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
