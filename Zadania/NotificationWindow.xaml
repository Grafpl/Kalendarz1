<Window x:Class="Kalendarz1.Zadania.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Przypomnienia"
        Width="420" Height="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#3a3a5c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4a4a6c"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#1a1a2e" CornerRadius="12" BorderBrush="#3a3a5c" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#252542" CornerRadius="12,12,0,0" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="ðŸ””" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Przypomnienia" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock x:Name="txtSubtitle" Text="Masz zadania do wykonania" FontSize="11" Foreground="#888"/>
                    </StackPanel>

                    <Button Grid.Column="2" Content="âœ•"
                            Background="Transparent" Foreground="#888"
                            BorderThickness="0" FontSize="16"
                            Padding="8,4" Cursor="Hand"
                            Click="BtnClose_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
                <StackPanel x:Name="contentPanel">
                    <!-- Sekcje bÄ™dÄ… dodawane dynamicznie -->
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#252542" CornerRadius="0,0,12,12" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox x:Name="cmbSnooze" Grid.Column="0" Width="140" HorizontalAlignment="Left">
                        <ComboBoxItem Content="OdÅ‚Ã³Å¼ na 15 min" IsSelected="True"/>
                        <ComboBoxItem Content="OdÅ‚Ã³Å¼ na 30 min"/>
                        <ComboBoxItem Content="OdÅ‚Ã³Å¼ na 1 godz"/>
                        <ComboBoxItem Content="OdÅ‚Ã³Å¼ na 2 godz"/>
                        <ComboBoxItem Content="Nie przypominaj dziÅ›"/>
                    </ComboBox>

                    <Button Grid.Column="1" Content="OdÅ‚Ã³Å¼" Style="{StaticResource ActionButton}"
                            Margin="10,0,0,0" Click="BtnSnooze_Click"/>

                    <Button Grid.Column="2" Content="OtwÃ³rz panel" Style="{StaticResource PrimaryButton}"
                            Margin="10,0,0,0" Click="BtnOpenPanel_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
