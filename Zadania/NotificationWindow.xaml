<Window x:Class="Kalendarz1.Zadania.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Przypomnienia"
        Width="450" Height="550"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Company Colors: Green #27AE60, Red #C0392B -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34495E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#219A52"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TabButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#95A5A6"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#1C2833" CornerRadius="12" BorderBrush="#27AE60" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.6" Color="#000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#212F3D" CornerRadius="12,12,0,0" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Width="36" Height="36" CornerRadius="8" Background="#27AE60" Margin="0,0,12,0">
                        <TextBlock Text="ðŸ””" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Centrum powiadomieÅ„" FontSize="15" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock x:Name="txtSubtitle" Text="Zadania i spotkania" FontSize="11" Foreground="#95A5A6"/>
                    </StackPanel>

                    <Button Grid.Column="2" Content="âœ•"
                            Background="Transparent" Foreground="#95A5A6"
                            BorderThickness="0" FontSize="16"
                            Padding="8,4" Cursor="Hand"
                            Click="BtnClose_Click"/>
                </Grid>
            </Border>

            <!-- Tabs -->
            <Border Grid.Row="1" Background="#212F3D" Padding="0,0,0,0">
                <StackPanel x:Name="tabPanel" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnTabZadania" Content="Zadania" Style="{StaticResource TabButton}"
                            Click="BtnTabZadania_Click" BorderBrush="#27AE60" Foreground="White"/>
                    <Button x:Name="btnTabSpotkania" Content="Spotkania" Style="{StaticResource TabButton}"
                            Click="BtnTabSpotkania_Click"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="15">
                <StackPanel x:Name="contentPanel">
                    <!-- Sekcje bÄ™dÄ… dodawane dynamicznie -->
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="3" Background="#212F3D" CornerRadius="0,0,12,12" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox x:Name="cmbSnooze" Grid.Column="0" Width="140" HorizontalAlignment="Left"
                              Background="#2C3E50" Foreground="White" BorderBrush="#34495E">
                        <ComboBoxItem Content="OdÅ‚Ã³Å¼ na 15 min" IsSelected="True"/>
                        <ComboBoxItem Content="OdÅ‚Ã³Å¼ na 30 min"/>
                        <ComboBoxItem Content="OdÅ‚Ã³Å¼ na 1 godz"/>
                        <ComboBoxItem Content="OdÅ‚Ã³Å¼ na 2 godz"/>
                        <ComboBoxItem Content="Nie przypominaj dziÅ›"/>
                    </ComboBox>

                    <Button Grid.Column="1" Content="OdÅ‚Ã³Å¼" Style="{StaticResource ActionButton}"
                            Margin="10,0,0,0" Click="BtnSnooze_Click"/>

                    <Button Grid.Column="2" Content="OtwÃ³rz panel" Style="{StaticResource PrimaryButton}"
                            Margin="10,0,0,0" Click="BtnOpenPanel_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
