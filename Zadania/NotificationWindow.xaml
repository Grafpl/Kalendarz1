<Window x:Class="Kalendarz1.Zadania.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Centrum ZadaÅ„ i SpotkaÅ„"
        Width="900" Height="920"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Pulsing animation for live meetings -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="1.0" To="0.6" Duration="0:0:0.8"
                           AutoReverse="True"/>
        </Storyboard>

        <Storyboard x:Key="GlowAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)"
                           From="15" To="25" Duration="0:0:1"
                           AutoReverse="True"/>
        </Storyboard>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34495E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#219A52"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tab Button Style -->
        <Style x:Key="TabButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="TabBorder" Background="{TemplateBinding Background}"
                                BorderBrush="Transparent" BorderThickness="0,0,0,3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#BDC3C7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Tab Button Style -->
        <Style x:Key="TabButtonActive" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#27AE60"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#27AE60" BorderThickness="0,0,0,3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="#212F3D"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="18,16"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
        </Style>
    </Window.Resources>

    <Border Background="#1A242F" CornerRadius="20" BorderBrush="#2C3E50" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" ShadowDepth="3" Opacity="0.6" Color="#000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Header -->
                <RowDefinition Height="Auto"/>  <!-- Stats -->
                <RowDefinition Height="Auto"/>  <!-- Live Now Section -->
                <RowDefinition Height="Auto"/>  <!-- Tabs -->
                <RowDefinition Height="*"/>     <!-- Content -->
                <RowDefinition Height="Auto"/>  <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- ==================== HEADER ==================== -->
            <Border Grid.Row="0" Background="#212F3D" CornerRadius="20,20,0,0" Padding="24,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo/Icon -->
                    <Border Grid.Column="0" Width="52" Height="52" CornerRadius="12" Margin="0,0,16,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#27AE60" Offset="0"/>
                                <GradientStop Color="#1E8449" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="ðŸ“‹" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title & Subtitle -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Centrum ZadaÅ„ i SpotkaÅ„" FontSize="20" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock x:Name="txtSubtitle" Text="TwÃ³j przeglÄ…d na dziÅ›" FontSize="13" Foreground="#7F8C8D" Margin="0,3,0,0"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Grid.Column="2" Content="âœ•"
                            Background="Transparent" Foreground="#7F8C8D"
                            BorderThickness="0" FontSize="20"
                            Padding="12,8" Cursor="Hand"
                            Click="BtnClose_Click"
                            ToolTip="Zamknij"/>
                </Grid>
            </Border>

            <!-- ==================== STATISTICS CARDS ==================== -->
            <Border Grid.Row="1" Padding="24,16,24,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Trwa teraz -->
                    <Border x:Name="liveNowCard" Grid.Column="0" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Border x:Name="liveDot" Width="10" Height="10" CornerRadius="5" Background="#E74C3C" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="TRWA TERAZ" FontSize="10" FontWeight="Bold" Foreground="#E74C3C" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock x:Name="txtLiveCount" Text="0" FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,6,0,0"/>
                            <TextBlock x:Name="txtLiveLabel" Text="spotkaÅ„" FontSize="11" Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>

                    <!-- Pilne -->
                    <Border Grid.Column="1" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="10" Height="10" CornerRadius="5" Background="#F39C12" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="PILNE" FontSize="10" FontWeight="Bold" Foreground="#F39C12" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock x:Name="txtUrgentCount" Text="0" FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,6,0,0"/>
                            <TextBlock x:Name="txtUrgentLabel" Text="elementÃ³w" FontSize="11" Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>

                    <!-- Zadania -->
                    <Border Grid.Column="2" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="10" Height="10" CornerRadius="5" Background="#3498DB" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="ZADANIA" FontSize="10" FontWeight="Bold" Foreground="#3498DB" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock x:Name="txtTasksCount" Text="0" FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,6,0,0"/>
                            <TextBlock x:Name="txtTasksLabel" Text="do wykonania" FontSize="11" Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>

                    <!-- Spotkania -->
                    <Border Grid.Column="3" Style="{StaticResource StatCard}" Margin="0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="10" Height="10" CornerRadius="5" Background="#9B59B6" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="SPOTKANIA" FontSize="10" FontWeight="Bold" Foreground="#9B59B6" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock x:Name="txtMeetingsCount" Text="0" FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,6,0,0"/>
                            <TextBlock x:Name="txtMeetingsLabel" Text="zaplanowanych" FontSize="11" Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- ==================== LIVE NOW MEETINGS SECTION ==================== -->
            <Border x:Name="liveNowSection" Grid.Row="2" Visibility="Collapsed" Margin="24,0,24,12">
                <Border Background="#2D1F1F" CornerRadius="14" Padding="18,14" BorderBrush="#E74C3C" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="#E74C3C"/>
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Border x:Name="liveIndicator" Width="12" Height="12" CornerRadius="6" Background="#E74C3C" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="TRWA TERAZ" FontSize="13" FontWeight="Bold" Foreground="#E74C3C" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel x:Name="liveMeetingsPanel">
                            <!-- Live meetings will be added here dynamically -->
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Border>

            <!-- ==================== TAB NAVIGATION ==================== -->
            <Border Grid.Row="3" Background="#212F3D" Padding="12,0,12,0" Margin="24,8,24,0" CornerRadius="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="tabAll" Grid.Column="0" Content="ðŸ“‹ Wszystko"
                            Style="{StaticResource TabButtonActive}" Click="TabAll_Click"/>
                    <Button x:Name="tabTasks" Grid.Column="1" Content="âœ“ Zadania"
                            Style="{StaticResource TabButton}" Click="TabTasks_Click"/>
                    <Button x:Name="tabMeetings" Grid.Column="2" Content="ðŸ“… Spotkania"
                            Style="{StaticResource TabButton}" Click="TabMeetings_Click"/>
                </Grid>
            </Border>

            <!-- ==================== MAIN CONTENT ==================== -->
            <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto" Margin="24,14,24,0">
                <StackPanel x:Name="contentPanel">
                    <!-- Sections will be added dynamically -->
                </StackPanel>
            </ScrollViewer>

            <!-- ==================== FOOTER ==================== -->
            <Border Grid.Row="5" Background="#212F3D" CornerRadius="0,0,20,20" Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Snooze options -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <ComboBox x:Name="cmbSnooze" Width="160" VerticalAlignment="Center"
                                  Background="#2C3E50" Foreground="White" BorderBrush="#34495E" Padding="12,10">
                            <ComboBoxItem Content="OdÅ‚Ã³Å¼ na 15 min" IsSelected="True"/>
                            <ComboBoxItem Content="OdÅ‚Ã³Å¼ na 30 min"/>
                            <ComboBoxItem Content="OdÅ‚Ã³Å¼ na 1 godz"/>
                            <ComboBoxItem Content="OdÅ‚Ã³Å¼ na 2 godz"/>
                            <ComboBoxItem Content="Nie przypominaj dziÅ›"/>
                        </ComboBox>
                        <Button Content="OdÅ‚Ã³Å¼" Style="{StaticResource ActionButton}"
                                Margin="12,0,0,0" Click="BtnSnooze_Click"/>
                    </StackPanel>

                    <!-- Action buttons -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <Button Content="ðŸ“‹ Panel zadaÅ„" Style="{StaticResource ActionButton}"
                                Margin="0,0,12,0" Click="BtnOpenTasksPanel_Click"/>
                        <Button Content="ðŸ“… Panel spotkaÅ„" Style="{StaticResource PrimaryButton}"
                                Click="BtnOpenMeetingsPanel_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
