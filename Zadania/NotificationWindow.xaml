<Window x:Class="Kalendarz1.Zadania.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Powiadomienia"
        Width="480" Height="620"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#27AE60" Offset="0"/>
            <GradientStop Color="#1E8449" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BlueGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#3498DB" Offset="0"/>
            <GradientStop Color="#2980B9" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#9B59B6" Offset="0"/>
            <GradientStop Color="#8E44AD" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="RedGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E74C3C" Offset="0"/>
            <GradientStop Color="#C0392B" Offset="1"/>
        </LinearGradientBrush>

        <!-- Compact Button Style -->
        <Style x:Key="CompactButton" TargetType="Button">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34495E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Green Button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource GreenGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#0F1419" CornerRadius="16" BorderBrush="#2C3E50" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="2" Opacity="0.5" Color="#000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Header -->
                <RowDefinition Height="Auto"/>  <!-- Mini Stats -->
                <RowDefinition Height="*"/>     <!-- Content -->
                <RowDefinition Height="Auto"/>  <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- ==================== HEADER ==================== -->
            <Border Grid.Row="0" Padding="20,16,20,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Animated Icon -->
                    <Border Grid.Column="0" Width="44" Height="44" CornerRadius="12" Margin="0,0,14,0"
                            Background="{StaticResource GreenGradient}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.5" Color="#27AE60"/>
                        </Border.Effect>
                        <TextBlock Text="ðŸ“‹" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title & Date -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="TwÃ³j DzieÅ„" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="txtSubtitle" FontSize="11" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Grid.Column="2" Content="âœ•"
                            Background="Transparent" Foreground="#7F8C8D"
                            BorderThickness="0" FontSize="18" FontWeight="Light"
                            Padding="8,4" Cursor="Hand"
                            Click="BtnClose_Click"/>
                </Grid>
            </Border>

            <!-- ==================== MINI STATS BAR ==================== -->
            <Border Grid.Row="1" Margin="20,0,20,10">
                <Border Background="#1A1F26" CornerRadius="12" Padding="14,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Live Now -->
                        <StackPanel x:Name="liveNowStat" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" Visibility="Collapsed">
                            <Border x:Name="liveDot" Width="8" Height="8" CornerRadius="4" Background="#E74C3C" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtLiveCount" Text="0" FontSize="16" FontWeight="Bold" Foreground="#E74C3C" VerticalAlignment="Center"/>
                            <TextBlock Text=" live" FontSize="11" Foreground="#E74C3C" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Tasks -->
                        <StackPanel Grid.Column="0" x:Name="tasksStat" Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Name="txtTasksCount" Text="0" FontSize="16" FontWeight="Bold" Foreground="#3498DB" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtTasksLabel" Text=" zadaÅ„" FontSize="11" Foreground="#7F8C8D" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Border Grid.Column="1" Width="1" Height="20" Background="#2C3E50"/>

                        <!-- Meetings -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Name="txtMeetingsCount" Text="0" FontSize="16" FontWeight="Bold" Foreground="#9B59B6" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtMeetingsLabel" Text=" spotkaÅ„" FontSize="11" Foreground="#7F8C8D" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Border Grid.Column="3" Width="1" Height="20" Background="#2C3E50"/>

                        <!-- Urgent -->
                        <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Name="txtUrgentCount" Text="0" FontSize="16" FontWeight="Bold" Foreground="#F39C12" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtUrgentLabel" Text=" pilne" FontSize="11" Foreground="#7F8C8D" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Border>

            <!-- ==================== LIVE NOW INDICATOR (hidden elements for compatibility) ==================== -->
            <Border x:Name="liveNowSection" Visibility="Collapsed">
                <StackPanel x:Name="liveMeetingsPanel"/>
            </Border>
            <Border x:Name="liveIndicator" Visibility="Collapsed"/>
            <Border x:Name="liveNowCard" Visibility="Collapsed"/>

            <!-- ==================== MAIN CONTENT ==================== -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="20,0,20,0">
                <StackPanel x:Name="contentPanel">
                    <!-- Dynamic content will be added here -->
                </StackPanel>
            </ScrollViewer>

            <!-- ==================== FOOTER ==================== -->
            <Border Grid.Row="3" Padding="20,12,20,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Snooze -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <ComboBox x:Name="cmbSnooze" Width="120" VerticalAlignment="Center"
                                  Background="#1A1F26" Foreground="White" BorderBrush="#2C3E50" Padding="10,8" FontSize="11">
                            <ComboBoxItem Content="15 min" IsSelected="True"/>
                            <ComboBoxItem Content="30 min"/>
                            <ComboBoxItem Content="1 godz"/>
                            <ComboBoxItem Content="2 godz"/>
                        </ComboBox>
                        <Button Content="OdÅ‚Ã³Å¼" Style="{StaticResource CompactButton}"
                                Margin="8,0,0,0" Click="BtnSnooze_Click"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <Button Grid.Column="1" Content="Zadania" Style="{StaticResource CompactButton}"
                            Margin="0,0,8,0" Click="BtnOpenTasksPanel_Click"/>
                    <Button Grid.Column="2" Content="Spotkania" Style="{StaticResource PrimaryButton}"
                            Click="BtnOpenMeetingsPanel_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
