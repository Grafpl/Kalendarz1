<Window x:Class="Kalendarz1.Zadania.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Centrum ZadaÅ„ i SpotkaÅ„"
        Width="700" Height="750"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Company Colors: Green #27AE60, Red #C0392B -->

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34495E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#219A52"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tab Button Style -->
        <Style x:Key="TabButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="TabBorder" Background="{TemplateBinding Background}"
                                BorderBrush="Transparent" BorderThickness="0,0,0,3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#BDC3C7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Tab Button Style -->
        <Style x:Key="TabButtonActive" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#27AE60"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#27AE60" BorderThickness="0,0,0,3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="#212F3D"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
    </Window.Resources>

    <Border Background="#1A242F" CornerRadius="16" BorderBrush="#2C3E50" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="2" Opacity="0.5" Color="#000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Header -->
                <RowDefinition Height="Auto"/>  <!-- Stats -->
                <RowDefinition Height="Auto"/>  <!-- Tabs -->
                <RowDefinition Height="*"/>     <!-- Content -->
                <RowDefinition Height="Auto"/>  <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- ==================== HEADER ==================== -->
            <Border Grid.Row="0" Background="#212F3D" CornerRadius="16,16,0,0" Padding="20,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo/Icon -->
                    <Border Grid.Column="0" Width="44" Height="44" CornerRadius="10" Margin="0,0,14,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#27AE60" Offset="0"/>
                                <GradientStop Color="#219A52" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="ðŸ“‹" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title & Subtitle -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Centrum ZadaÅ„ i SpotkaÅ„" FontSize="17" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock x:Name="txtSubtitle" Text="TwÃ³j przeglÄ…d na dziÅ›" FontSize="12" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Grid.Column="2" Content="âœ•"
                            Background="Transparent" Foreground="#7F8C8D"
                            BorderThickness="0" FontSize="18"
                            Padding="10,6" Cursor="Hand"
                            Click="BtnClose_Click"
                            ToolTip="Zamknij"/>
                </Grid>
            </Border>

            <!-- ==================== STATISTICS CARDS ==================== -->
            <Border Grid.Row="1" Padding="20,12,20,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Pilne -->
                    <Border Grid.Column="0" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="8" Height="8" CornerRadius="4" Background="#E74C3C" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="PILNE" FontSize="10" FontWeight="SemiBold" Foreground="#E74C3C" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock x:Name="txtUrgentCount" Text="0" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,4,0,0"/>
                            <TextBlock x:Name="txtUrgentLabel" Text="elementÃ³w" FontSize="10" Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>

                    <!-- Zadania -->
                    <Border Grid.Column="1" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="8" Height="8" CornerRadius="4" Background="#F39C12" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="ZADANIA" FontSize="10" FontWeight="SemiBold" Foreground="#F39C12" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock x:Name="txtTasksCount" Text="0" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,4,0,0"/>
                            <TextBlock x:Name="txtTasksLabel" Text="do wykonania" FontSize="10" Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>

                    <!-- Spotkania -->
                    <Border Grid.Column="2" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="8" Height="8" CornerRadius="4" Background="#3498DB" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="SPOTKANIA" FontSize="10" FontWeight="SemiBold" Foreground="#3498DB" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock x:Name="txtMeetingsCount" Text="0" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,4,0,0"/>
                            <TextBlock x:Name="txtMeetingsLabel" Text="zaplanowanych" FontSize="10" Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>

                    <!-- DziÅ› -->
                    <Border Grid.Column="3" Style="{StaticResource StatCard}" Margin="0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="8" Height="8" CornerRadius="4" Background="#27AE60" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="DZIÅš" FontSize="10" FontWeight="SemiBold" Foreground="#27AE60" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock x:Name="txtTodayCount" Text="0" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,4,0,0"/>
                            <TextBlock x:Name="txtTodayLabel" Text="na dziÅ›" FontSize="10" Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- ==================== TAB NAVIGATION ==================== -->
            <Border Grid.Row="2" Background="#212F3D" Padding="10,0,10,0" Margin="20,8,20,0" CornerRadius="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="tabAll" Grid.Column="0" Content="ðŸ“‹ Wszystko"
                            Style="{StaticResource TabButtonActive}" Click="TabAll_Click"/>
                    <Button x:Name="tabTasks" Grid.Column="1" Content="âœ“ Zadania"
                            Style="{StaticResource TabButton}" Click="TabTasks_Click"/>
                    <Button x:Name="tabMeetings" Grid.Column="2" Content="ðŸ“… Spotkania"
                            Style="{StaticResource TabButton}" Click="TabMeetings_Click"/>
                </Grid>
            </Border>

            <!-- ==================== MAIN CONTENT ==================== -->
            <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" Margin="20,12,20,0">
                <StackPanel x:Name="contentPanel">
                    <!-- Sekcje bÄ™dÄ… dodawane dynamicznie -->
                </StackPanel>
            </ScrollViewer>

            <!-- ==================== FOOTER ==================== -->
            <Border Grid.Row="4" Background="#212F3D" CornerRadius="0,0,16,16" Padding="20,14">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Snooze options -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <ComboBox x:Name="cmbSnooze" Width="150" VerticalAlignment="Center"
                                  Background="#2C3E50" Foreground="White" BorderBrush="#34495E" Padding="10,8">
                            <ComboBoxItem Content="OdÅ‚Ã³Å¼ na 15 min" IsSelected="True"/>
                            <ComboBoxItem Content="OdÅ‚Ã³Å¼ na 30 min"/>
                            <ComboBoxItem Content="OdÅ‚Ã³Å¼ na 1 godz"/>
                            <ComboBoxItem Content="OdÅ‚Ã³Å¼ na 2 godz"/>
                            <ComboBoxItem Content="Nie przypominaj dziÅ›"/>
                        </ComboBox>
                        <Button Content="OdÅ‚Ã³Å¼" Style="{StaticResource ActionButton}"
                                Margin="10,0,0,0" Click="BtnSnooze_Click"/>
                    </StackPanel>

                    <!-- Action buttons -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <Button Content="ðŸ“‹ Panel zadaÅ„" Style="{StaticResource ActionButton}"
                                Margin="0,0,10,0" Click="BtnOpenTasksPanel_Click"/>
                        <Button Content="ðŸ“… Panel spotkaÅ„" Style="{StaticResource PrimaryButton}"
                                Click="BtnOpenMeetingsPanel_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
