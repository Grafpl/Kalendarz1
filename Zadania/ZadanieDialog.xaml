<Window x:Class="Kalendarz1.Zadania.ZadanieDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zadanie" Height="650" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#1a1a2e">

    <Window.Resources>
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#252542"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3a3a5c"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#3a3a5c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4a4a6c"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TypeButton" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="#252542" BorderBrush="#3a3a5c"
                                BorderThickness="1" CornerRadius="4" Padding="12,8" Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="icon" Text="{TemplateBinding Tag}" FontSize="16"
                                           Foreground="#888" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="text" Text="{TemplateBinding Content}"
                                           Foreground="#888" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2d4a2d"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4CAF50"/>
                                <Setter TargetName="icon" Property="Foreground" Value="#4CAF50"/>
                                <Setter TargetName="text" Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#5a5a8c"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="txtHeader" Text="Nowe Zadanie" FontSize="22" FontWeight="Bold"
                   Foreground="White" Margin="0,0,0,15"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="220"/>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0,0,15,0">
                    <!-- Typ zadania -->
                    <TextBlock Text="Typ zadania *" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtTypZadania" Style="{StaticResource FormTextBox}"/>

                    <!-- Opis -->
                    <TextBlock Text="Opis" Style="{StaticResource FormLabel}" Margin="0,12,0,5"/>
                    <TextBox x:Name="txtOpis" Style="{StaticResource FormTextBox}"
                             TextWrapping="Wrap" AcceptsReturn="True" Height="70"
                             VerticalScrollBarVisibility="Auto"/>

                    <!-- Termin -->
                    <TextBlock Text="Termin wykonania *" Style="{StaticResource FormLabel}" Margin="0,12,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="90"/>
                        </Grid.ColumnDefinitions>
                        <DatePicker x:Name="dpTermin" Background="#252542" BorderBrush="#3a3a5c"
                                    Foreground="White" FontSize="14"/>
                        <TextBox x:Name="txtGodzina" Grid.Column="1" Style="{StaticResource FormTextBox}"
                                 Margin="10,0,0,0" Text="12:00"/>
                    </Grid>

                    <!-- Priorytet -->
                    <TextBlock Text="Priorytet" Style="{StaticResource FormLabel}" Margin="0,12,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="rbNiski" Content="Niski" Foreground="#4CAF50"
                                     GroupName="Priority" Margin="0,0,20,0"/>
                        <RadioButton x:Name="rbSredni" Content="Åšredni" Foreground="#FF9800"
                                     GroupName="Priority" IsChecked="True" Margin="0,0,20,0"/>
                        <RadioButton x:Name="rbWysoki" Content="Wysoki" Foreground="#f44336"
                                     GroupName="Priority"/>
                    </StackPanel>

                    <!-- Typ przypisania -->
                    <TextBlock Text="Typ przypisania" Style="{StaticResource FormLabel}" Margin="0,12,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="rbIndywidualne" Content="Indywidualne" Tag="ðŸ‘¤"
                                     GroupName="AssignType" Style="{StaticResource TypeButton}"
                                     IsChecked="True" Margin="0,0,10,0"/>
                        <RadioButton x:Name="rbZespolowe" Content="ZespoÅ‚owe" Tag="ðŸ‘¥"
                                     GroupName="AssignType" Style="{StaticResource TypeButton}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Przypisani pracownicy -->
                <Border Grid.Column="1" Background="#252542" BorderBrush="#3a3a5c"
                        BorderThickness="1" CornerRadius="6">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Przypisz do:" Foreground="White" FontWeight="SemiBold"
                                   Margin="12,10,12,5"/>

                        <!-- Wyszukiwanie -->
                        <TextBox x:Name="txtSzukajPracownika" Grid.Row="1"
                                 Background="#1a1a2e" Foreground="White"
                                 BorderBrush="#3a3a5c" BorderThickness="1"
                                 Margin="10,0,10,10" Padding="8,6"
                                 Text="" GotFocus="TxtSzukaj_GotFocus" LostFocus="TxtSzukaj_LostFocus"
                                 TextChanged="TxtSzukaj_TextChanged"/>

                        <!-- Lista pracownikÃ³w -->
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="5,0,5,10">
                            <StackPanel x:Name="pnlPracownicy"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Wybrani pracownicy info -->
            <StackPanel x:Name="pnlWybrani" Orientation="Horizontal" VerticalAlignment="Center"/>

            <Button Grid.Column="2" Content="Anuluj" Style="{StaticResource CancelButton}"
                    Click="BtnAnuluj_Click" Margin="0,0,10,0"/>
            <Button Grid.Column="3" x:Name="btnZapisz" Content="Zapisz" Style="{StaticResource ActionButton}"
                    Click="BtnZapisz_Click"/>
        </Grid>
    </Grid>
</Window>
