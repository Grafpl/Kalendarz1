<Window x:Class="Kalendarz1.Zadania.ZadanieDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zadanie" Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1a1a2e">

    <Window.Resources>
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#252542"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3a3a5c"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="FormComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#252542"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3a3a5c"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#3a3a5c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4a4a6c"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="txtHeader" Text="Nowe Zadanie" FontSize="22" FontWeight="Bold"
                   Foreground="White" Margin="0,0,0,20"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Typ zadania -->
                <TextBlock Text="Typ zadania *" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="txtTypZadania" Style="{StaticResource FormTextBox}"/>

                <!-- Opis -->
                <TextBlock Text="Opis" Style="{StaticResource FormLabel}" Margin="0,15,0,5"/>
                <TextBox x:Name="txtOpis" Style="{StaticResource FormTextBox}"
                         TextWrapping="Wrap" AcceptsReturn="True" Height="80"
                         VerticalScrollBarVisibility="Auto"/>

                <!-- Firma -->
                <TextBlock Text="Firma / Kontrahent" Style="{StaticResource FormLabel}" Margin="0,15,0,5"/>
                <ComboBox x:Name="cmbFirma" Style="{StaticResource FormComboBox}"
                          IsEditable="True" IsTextSearchEnabled="True"/>

                <!-- Termin -->
                <TextBlock Text="Termin wykonania *" Style="{StaticResource FormLabel}" Margin="0,15,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <DatePicker x:Name="dpTermin" Background="#252542" BorderBrush="#3a3a5c"
                                Foreground="White" FontSize="14"/>
                    <TextBox x:Name="txtGodzina" Grid.Column="1" Style="{StaticResource FormTextBox}"
                             Margin="10,0,0,0" Text="12:00"/>
                </Grid>

                <!-- Priorytet -->
                <TextBlock Text="Priorytet" Style="{StaticResource FormLabel}" Margin="0,15,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="rbNiski" Content="Niski" Foreground="#4CAF50"
                                 GroupName="Priority" Margin="0,0,20,0"/>
                    <RadioButton x:Name="rbSredni" Content="Åšredni" Foreground="#FF9800"
                                 GroupName="Priority" IsChecked="True" Margin="0,0,20,0"/>
                    <RadioButton x:Name="rbWysoki" Content="Wysoki" Foreground="#f44336"
                                 GroupName="Priority"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" Content="Anuluj" Style="{StaticResource CancelButton}"
                    Click="BtnAnuluj_Click" Margin="0,0,10,0"/>
            <Button Grid.Column="2" x:Name="btnZapisz" Content="Zapisz" Style="{StaticResource ActionButton}"
                    Click="BtnZapisz_Click"/>
        </Grid>
    </Grid>
</Window>
