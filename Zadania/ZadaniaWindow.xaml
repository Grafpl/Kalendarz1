<Window x:Class="Kalendarz1.Zadania.ZadaniaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel ZadaÅ„" Height="850" Width="1300"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#1a1a2e">

    <Window.Resources>
        <!-- Style dla przyciskÃ³w -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3a3a5c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4a4a6c"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="#f44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#d32f2f"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FilterButton" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="#3a3a5c" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4CAF50"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3a3a5c"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Panel ZadaÅ„" FontSize="28" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="txtSummary" Text="Åadowanie..." FontSize="14" Foreground="#888" Margin="0,5,0,0"/>
            </StackPanel>

            <Button Grid.Column="1" Content="+ Nowe Zadanie" Style="{StaticResource ActionButton}"
                    Click="BtnNoweZadanie_Click" FontSize="14"/>
        </Grid>

        <!-- Filters -->
        <Border Grid.Row="1" Background="#252542" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status filters -->
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <RadioButton x:Name="filterWszystkie" Content="Wszystkie" Style="{StaticResource FilterButton}"
                                 IsChecked="True" Checked="Filter_Changed" GroupName="StatusFilter"/>
                    <RadioButton x:Name="filterAktywne" Content="Aktywne" Style="{StaticResource FilterButton}"
                                 Margin="8,0,0,0" Checked="Filter_Changed" GroupName="StatusFilter"/>
                    <RadioButton x:Name="filterZalegle" Content="ZalegÅ‚e" Style="{StaticResource FilterButton}"
                                 Margin="8,0,0,0" Checked="Filter_Changed" GroupName="StatusFilter"/>
                    <RadioButton x:Name="filterWykonane" Content="Wykonane" Style="{StaticResource FilterButton}"
                                 Margin="8,0,0,0" Checked="Filter_Changed" GroupName="StatusFilter"/>
                </StackPanel>

                <!-- Search -->
                <Border Grid.Column="1" Background="#1a1a2e" CornerRadius="4" Margin="20,0" Padding="10,5">
                    <Grid>
                        <TextBlock Text="Szukaj..." Foreground="#666" VerticalAlignment="Center"
                                   Visibility="{Binding Text.IsEmpty, ElementName=txtSearch, Converter={x:Null}}"/>
                        <TextBox x:Name="txtSearch" Background="Transparent" BorderThickness="0"
                                 Foreground="White" FontSize="14" VerticalAlignment="Center"
                                 TextChanged="TxtSearch_TextChanged"/>
                    </Grid>
                </Border>

                <!-- Priority filter -->
                <StackPanel Orientation="Horizontal" Grid.Column="2">
                    <TextBlock Text="Priorytet:" Foreground="#888" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="cmbPriorytet" Width="120" SelectionChanged="Filter_Changed">
                        <ComboBoxItem Content="Wszystkie" IsSelected="True"/>
                        <ComboBoxItem Content="Wysoki"/>
                        <ComboBoxItem Content="Åšredni"/>
                        <ComboBoxItem Content="Niski"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tasks List -->
        <Border Grid.Row="2" Background="#252542" CornerRadius="8">
            <Grid>
                <!-- Header -->
                <Border Background="#1e1e36" CornerRadius="8,8,0,0" Height="45" VerticalAlignment="Top">
                    <Grid Margin="15,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="" Foreground="#888" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="Priorytet" Foreground="#888" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="Zadanie" Foreground="#888" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="Firma" Foreground="#888" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Text="Termin" Foreground="#888" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="5" Text="Status" Foreground="#888" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="6" Text="Akcje" Foreground="#888" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- List -->
                <ScrollViewer Margin="0,45,0,0" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="tasksList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2a2a4a" Margin="5" CornerRadius="6" Padding="15,10"
                                        BorderBrush="{Binding BorderColor}" BorderThickness="0,0,0,3">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Checkbox -->
                                        <CheckBox Grid.Column="0" IsChecked="{Binding Wykonane}"
                                                  Checked="TaskCheckbox_Changed" Unchecked="TaskCheckbox_Changed"
                                                  Tag="{Binding Id}" VerticalAlignment="Center"/>

                                        <!-- Priority -->
                                        <Border Grid.Column="1" Background="{Binding PriorityColor}"
                                                CornerRadius="4" Padding="6,2" HorizontalAlignment="Left"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding PriorityText}" Foreground="White" FontSize="11"/>
                                        </Border>

                                        <!-- Task info -->
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding TypZadania}" Foreground="White" FontWeight="SemiBold"
                                                       TextDecorations="{Binding TextDecoration}"/>
                                            <TextBlock Text="{Binding Opis}" Foreground="#888" FontSize="12"
                                                       TextTrimming="CharacterEllipsis" MaxWidth="300"/>
                                        </StackPanel>

                                        <!-- Company -->
                                        <TextBlock Grid.Column="3" Text="{Binding Firma}" Foreground="#aaa"
                                                   VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>

                                        <!-- Due date -->
                                        <StackPanel Grid.Column="4" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding TerminText}" Foreground="{Binding TerminColor}"/>
                                            <TextBlock Text="{Binding TerminRelative}" Foreground="#666" FontSize="11"/>
                                        </StackPanel>

                                        <!-- Status -->
                                        <Border Grid.Column="5" Background="{Binding StatusColor}"
                                                CornerRadius="4" Padding="8,4" HorizontalAlignment="Left"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding StatusText}" Foreground="White" FontSize="11"/>
                                        </Border>

                                        <!-- Actions -->
                                        <StackPanel Grid.Column="6" Orientation="Horizontal"
                                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Button Content="âœï¸" Style="{StaticResource SecondaryButton}"
                                                    Tag="{Binding Id}" Click="BtnEdytuj_Click"
                                                    ToolTip="Edytuj" Padding="8,4"/>
                                            <Button Content="ðŸ—‘ï¸" Style="{StaticResource DangerButton}"
                                                    Tag="{Binding Id}" Click="BtnUsun_Click"
                                                    ToolTip="UsuÅ„" Padding="8,4" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty state -->
                <StackPanel x:Name="emptyState" Visibility="Collapsed"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“‹" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Brak zadaÅ„" FontSize="18" Foreground="#666"
                               HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    <TextBlock Text="Kliknij 'Nowe Zadanie' aby dodaÄ‡ pierwsze zadanie"
                               FontSize="13" Foreground="#555" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Footer stats -->
        <Border Grid.Row="3" Background="#252542" CornerRadius="8" Padding="15" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock x:Name="statWszystkie" Text="0" FontSize="24" FontWeight="Bold"
                               Foreground="#4CAF50" HorizontalAlignment="Center"/>
                    <TextBlock Text="Wszystkich" Foreground="#888" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock x:Name="statAktywne" Text="0" FontSize="24" FontWeight="Bold"
                               Foreground="#2196F3" HorizontalAlignment="Center"/>
                    <TextBlock Text="Aktywnych" Foreground="#888" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock x:Name="statZalegle" Text="0" FontSize="24" FontWeight="Bold"
                               Foreground="#f44336" HorizontalAlignment="Center"/>
                    <TextBlock Text="ZalegÅ‚ych" Foreground="#888" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock x:Name="statWykonane" Text="0" FontSize="24" FontWeight="Bold"
                               Foreground="#9E9E9E" HorizontalAlignment="Center"/>
                    <TextBlock Text="Wykonanych" Foreground="#888" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
