<Window x:Class="Kalendarz1.KartotekaOdbiorcowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kartoteka Odbiorców - CRM" 
        Height="950" Width="1700"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F7FA"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Kolory -->
        <SolidColorBrush x:Key="ColorPrimary" Color="#2563EB"/>
        <SolidColorBrush x:Key="ColorPrimaryDark" Color="#1D4ED8"/>
        <SolidColorBrush x:Key="ColorSuccess" Color="#10B981"/>
        <SolidColorBrush x:Key="ColorWarning" Color="#F59E0B"/>
        <SolidColorBrush x:Key="ColorDanger" Color="#EF4444"/>
        <SolidColorBrush x:Key="ColorText" Color="#374151"/>
        <SolidColorBrush x:Key="ColorTextLight" Color="#6B7280"/>
        <SolidColorBrush x:Key="ColorBorder" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="ColorBackground" Color="#F9FAFB"/>

        <!-- Style przycisków -->
        <Style x:Key="ButtonPrimary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ColorPrimary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ColorPrimaryDark}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonSuccess" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
            <Setter Property="Background" Value="{StaticResource ColorSuccess}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonDanger" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
            <Setter Property="Background" Value="{StaticResource ColorDanger}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonSecondary" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
            <Setter Property="Background" Value="#6B7280"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4B5563"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style dla TextBox -->
        <Style x:Key="TextBoxModern" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="8,6"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource ColorPrimary}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style dla ComboBox -->
        <Style x:Key="ComboBoxModern" TargetType="ComboBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Style dla DataGrid -->
        <Style x:Key="DataGridModern" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
            <Setter Property="RowHeight" Value="40"/>
        </Style>

        <!-- Style nagłówka -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource ColorPrimary}"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource ColorText}"/>
        </Style>

        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{StaticResource ColorText}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Background="White" Padding="20,15" BorderBrush="{StaticResource ColorBorder}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="👥" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Kartoteka Odbiorców" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock x:Name="txtPodtytul" Text="Zarządzaj danymi i relacjami z klientami" 
                                   FontSize="13" Foreground="{StaticResource ColorTextLight}" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Zalogowany:" FontSize="11" Foreground="{StaticResource ColorTextLight}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock x:Name="txtUserID" FontSize="12" FontWeight="Bold" Foreground="{StaticResource ColorPrimary}" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Panel wyszukiwania -->
        <Border Grid.Row="1" Background="White" Padding="20,15" Margin="0,0,0,0" BorderBrush="{StaticResource ColorBorder}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="🔍 Wyszukaj odbiorcy" Style="{StaticResource LabelTextStyle}"/>
                    <TextBox x:Name="txtSzukaj" Style="{StaticResource TextBoxModern}" 
                             TextChanged="TxtSzukaj_TextChanged"
                             Width="350" HorizontalAlignment="Left"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0">
                    <TextBlock Text="Kategoria" Style="{StaticResource LabelTextStyle}"/>
                    <ComboBox x:Name="cmbKategoria" Style="{StaticResource ComboBoxModern}" Width="120"
                              SelectionChanged="CmbFiltr_SelectionChanged">
                        <ComboBoxItem Content="Wszystkie" IsSelected="True"/>
                        <ComboBoxItem Content="A"/>
                        <ComboBoxItem Content="B"/>
                        <ComboBoxItem Content="C"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="10,0">
                    <TextBlock Text="Typ" Style="{StaticResource LabelTextStyle}"/>
                    <ComboBox x:Name="cmbTypOdbiorcy" Style="{StaticResource ComboBoxModern}" Width="150"
                              SelectionChanged="CmbFiltr_SelectionChanged">
                        <ComboBoxItem Content="Wszystkie" IsSelected="True"/>
                        <ComboBoxItem Content="Hurtownia"/>
                        <ComboBoxItem Content="Sklep"/>
                        <ComboBoxItem Content="Restauracja"/>
                        <ComboBoxItem Content="Export"/>
                        <ComboBoxItem Content="Przetwórnia"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="3" Margin="10,0">
                    <TextBlock Text="Status" Style="{StaticResource LabelTextStyle}"/>
                    <ComboBox x:Name="cmbStatus" Style="{StaticResource ComboBoxModern}" Width="120"
                              SelectionChanged="CmbFiltr_SelectionChanged">
                        <ComboBoxItem Content="Aktywni" IsSelected="True"/>
                        <ComboBoxItem Content="Nieaktywni"/>
                        <ComboBoxItem Content="Wszyscy"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="15,0,0,0">
                    <Button Content="➕ Nowy Odbiorca" Style="{StaticResource ButtonSuccess}" 
                            Width="150" Click="BtnNowyOdbiorca_Click" Margin="0,0,10,0"/>
                    <Button Content="🔄 Odśwież" Style="{StaticResource ButtonPrimary}" 
                            Width="120" Click="BtnOdswiez_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Główna zawartość z zakładkami -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lista odbiorców -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15" 
                    BorderBrush="{StaticResource ColorBorder}" BorderThickness="1" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Lista Odbiorców" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,15"/>

                    <DataGrid x:Name="dgOdbiorcy" Grid.Row="1" Style="{StaticResource DataGridModern}"
                              SelectionChanged="DgOdbiorcy_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nazwa" Binding="{Binding NazwaSkrot}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="8,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Kat." Binding="{Binding KategoriaOdbiorcy}" Width="45">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Miasto" Binding="{Binding Miejscowosc}" Width="110">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="8,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Łącznie: " FontSize="12" Foreground="{StaticResource ColorTextLight}" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtLiczbaOdbiorcow" Text="0" FontSize="13" FontWeight="Bold" 
                                   Foreground="{StaticResource ColorPrimary}" VerticalAlignment="Center"/>
                        <TextBlock Text=" odbiorców" FontSize="12" Foreground="{StaticResource ColorTextLight}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Szczegóły odbiorcy z zakładkami -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" 
                    BorderBrush="{StaticResource ColorBorder}" BorderThickness="1">
                <TabControl x:Name="tabControl" SelectionChanged="TabControl_SelectionChanged">
                    <TabItem Header="📋 Dane Podstawowe">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="20">
                                <!-- Będzie w pliku code-behind -->
                                <Grid x:Name="gridDanePodstawowe"/>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Header="📞 Kontakty">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                                <Button Content="➕ Dodaj Kontakt" Style="{StaticResource ButtonSuccess}" 
                                        Click="BtnDodajKontakt_Click" Margin="0,0,10,0"/>
                                <Button Content="✏️ Edytuj" Style="{StaticResource ButtonPrimary}" 
                                        x:Name="btnEdytujKontakt" Click="BtnEdytujKontakt_Click" Margin="0,0,10,0"/>
                                <Button Content="🗑️ Usuń" Style="{StaticResource ButtonDanger}" 
                                        x:Name="btnUsunKontakt" Click="BtnUsunKontakt_Click"/>
                            </StackPanel>

                            <DataGrid x:Name="dgKontakty" Grid.Row="1" Style="{StaticResource DataGridModern}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Typ Kontaktu" Binding="{Binding TypKontaktu}" Width="130"/>
                                    <DataGridTextColumn Header="Imię i Nazwisko" Binding="{Binding ImieNazwisko}" Width="*"/>
                                    <DataGridTextColumn Header="Stanowisko" Binding="{Binding Stanowisko}" Width="150"/>
                                    <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" Width="120"/>
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>

                    <TabItem Header="💰 Dane Finansowe">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="20">
                                <Grid x:Name="gridDaneFinansowe"/>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Header="🚚 Transport">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="20">
                                <Grid x:Name="gridTransport"/>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Header="📝 Notatki CRM">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Button Grid.Row="0" Content="➕ Dodaj Notatkę" Style="{StaticResource ButtonSuccess}" 
                                    HorizontalAlignment="Left" Margin="0,0,0,15" Click="BtnDodajNotatke_Click"/>

                            <DataGrid x:Name="dgNotatki" Grid.Row="1" Style="{StaticResource DataGridModern}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Data" Binding="{Binding DataUtworzenia, StringFormat=dd.MM.yyyy HH:mm}" Width="130"/>
                                    <DataGridTextColumn Header="Treść" Binding="{Binding Tresc}" Width="*"/>
                                    <DataGridTextColumn Header="Autor" Binding="{Binding KtoStworzyl}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>

                    <TabItem Header="🗺️ Lokalizacja">
                        <Grid Margin="20">
                            <StackPanel>
                                <Grid x:Name="gridLokalizacja"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <TabItem Header="📊 Statystyki">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="20">
                                <Grid x:Name="gridStatystyki"/>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
    </Grid>
</Window>
