<Window x:Class="Kalendarz1.KartotekaOdbiorcowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kartoteka Odbiorców"
        Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F3F4F6"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Kolory -->
        <SolidColorBrush x:Key="ColorPrimary" Color="#2563EB"/>
        <SolidColorBrush x:Key="ColorPrimaryDark" Color="#1D4ED8"/>
        <SolidColorBrush x:Key="ColorSuccess" Color="#10B981"/>
        <SolidColorBrush x:Key="ColorWarning" Color="#F59E0B"/>
        <SolidColorBrush x:Key="ColorDanger" Color="#EF4444"/>
        <SolidColorBrush x:Key="ColorText" Color="#374151"/>
        <SolidColorBrush x:Key="ColorTextLight" Color="#6B7280"/>
        <SolidColorBrush x:Key="ColorBorder" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="ColorBackground" Color="#F9FAFB"/>

        <!-- Kompaktowe przyciski -->
        <Style x:Key="ButtonPrimary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ColorPrimary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ColorPrimaryDark}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonSuccess" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
            <Setter Property="Background" Value="{StaticResource ColorSuccess}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonDanger" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
            <Setter Property="Background" Value="{StaticResource ColorDanger}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonSecondary" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
            <Setter Property="Background" Value="#6B7280"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4B5563"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Kompaktowy TextBox -->
        <Style x:Key="TextBoxModern" TargetType="TextBox">
            <Setter Property="Padding" Value="4,3"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="4,2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource ColorPrimary}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Kompaktowy ComboBox -->
        <Style x:Key="ComboBoxModern" TargetType="ComboBox">
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Kompaktowy DataGrid -->
        <Style x:Key="DataGridModern" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F3F4F6"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFBFC"/>
            <Setter Property="RowHeight" Value="26"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <!-- Style nagłówków -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource ColorPrimary}"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource ColorText}"/>
        </Style>

        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{StaticResource ColorTextLight}"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>

        <!-- Styl zakładek -->
        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Kompaktowy nagłówek z wyszukiwaniem -->
        <Border Grid.Row="0" Background="White" Padding="8,5" BorderBrush="{StaticResource ColorBorder}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Tytuł -->
                <TextBlock Grid.Column="0" Text="Kartoteka Odbiorców" Style="{StaticResource HeaderTextStyle}"
                           VerticalAlignment="Center" Margin="0,0,15,0"/>

                <!-- Wyszukiwanie -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="Szukaj:" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0" Foreground="{StaticResource ColorTextLight}"/>
                    <TextBox x:Name="txtSzukaj" Style="{StaticResource TextBoxModern}"
                             TextChanged="TxtSzukaj_TextChanged" Width="150"/>
                </StackPanel>

                <!-- Kategoria -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,6,0">
                    <TextBlock Text="Kat:" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0" Foreground="{StaticResource ColorTextLight}"/>
                    <ComboBox x:Name="cmbKategoria" Style="{StaticResource ComboBoxModern}" Width="70"
                              SelectionChanged="CmbFiltr_SelectionChanged">
                        <ComboBoxItem Content="Wszystkie" IsSelected="True"/>
                        <ComboBoxItem Content="A"/>
                        <ComboBoxItem Content="B"/>
                        <ComboBoxItem Content="C"/>
                    </ComboBox>
                </StackPanel>

                <!-- Typ -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,6,0">
                    <TextBlock Text="Typ:" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0" Foreground="{StaticResource ColorTextLight}"/>
                    <ComboBox x:Name="cmbTypOdbiorcy" Style="{StaticResource ComboBoxModern}" Width="90"
                              SelectionChanged="CmbFiltr_SelectionChanged">
                        <ComboBoxItem Content="Wszystkie" IsSelected="True"/>
                        <ComboBoxItem Content="Hurtownia"/>
                        <ComboBoxItem Content="Sklep"/>
                        <ComboBoxItem Content="Restauracja"/>
                        <ComboBoxItem Content="Export"/>
                        <ComboBoxItem Content="Przetwórnia"/>
                    </ComboBox>
                </StackPanel>

                <!-- Status -->
                <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="Status:" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0" Foreground="{StaticResource ColorTextLight}"/>
                    <ComboBox x:Name="cmbStatus" Style="{StaticResource ComboBoxModern}" Width="75"
                              SelectionChanged="CmbFiltr_SelectionChanged">
                        <ComboBoxItem Content="Aktywni" IsSelected="True"/>
                        <ComboBoxItem Content="Nieaktywni"/>
                        <ComboBoxItem Content="Wszyscy"/>
                    </ComboBox>
                </StackPanel>

                <!-- Przyciski -->
                <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="+ Nowy" Style="{StaticResource ButtonSuccess}"
                            Click="BtnNowyOdbiorca_Click" Margin="0,0,5,0"/>
                    <Button Content="Odśwież" Style="{StaticResource ButtonPrimary}"
                            Click="BtnOdswiez_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Główna zawartość -->
        <Grid Grid.Row="1" Margin="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lista odbiorców -->
            <Border Grid.Column="0" Background="White" CornerRadius="4" Padding="6"
                    BorderBrush="{StaticResource ColorBorder}" BorderThickness="1" Margin="0,0,6,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Odbiorcy" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,4"/>

                    <DataGrid x:Name="dgOdbiorcy" Grid.Row="1" Style="{StaticResource DataGridModern}"
                              SelectionChanged="DgOdbiorcy_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nazwa" Binding="{Binding NazwaSkrot}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Medium"/>
                                        <Setter Property="Padding" Value="2,0"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="K" Binding="{Binding KategoriaOdbiorcy}" Width="22">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Miasto" Binding="{Binding Miejscowosc}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="2,0"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="Razem: " FontSize="10" Foreground="{StaticResource ColorTextLight}" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtLiczbaOdbiorcow" Text="0" FontSize="11" FontWeight="Bold"
                                   Foreground="{StaticResource ColorPrimary}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Panel szczegółów -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Karta podsumowania klienta -->
                <Border x:Name="panelPodsumowanieKlienta" Grid.Row="0" Background="White" CornerRadius="4"
                        Padding="10,6" Margin="0,0,0,6" BorderBrush="{StaticResource ColorBorder}" BorderThickness="1"
                        Visibility="Collapsed">
                    <Grid x:Name="gridPodsumowanieKlienta">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Nazwa i typ -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock x:Name="txtKlientNazwa" Text="-" FontSize="13" FontWeight="Bold" Foreground="{StaticResource ColorPrimary}"/>
                            <TextBlock x:Name="txtKlientTyp" Text="-" FontSize="10" Foreground="{StaticResource ColorTextLight}"/>
                        </StackPanel>

                        <!-- Adres -->
                        <StackPanel Grid.Column="2" Margin="0,0,15,0">
                            <TextBlock Text="Adres" FontSize="9" Foreground="{StaticResource ColorTextLight}"/>
                            <TextBlock x:Name="txtKlientAdres" Text="-" FontSize="11" FontWeight="Medium"/>
                        </StackPanel>

                        <!-- Telefon -->
                        <StackPanel Grid.Column="3" Margin="0,0,15,0">
                            <TextBlock Text="Tel" FontSize="9" Foreground="{StaticResource ColorTextLight}"/>
                            <TextBlock x:Name="txtKlientTelefon" Text="-" FontSize="11" FontWeight="Medium"/>
                        </StackPanel>

                        <!-- Saldo -->
                        <StackPanel Grid.Column="4" Margin="0,0,15,0">
                            <TextBlock Text="Saldo" FontSize="9" Foreground="{StaticResource ColorTextLight}"/>
                            <TextBlock x:Name="txtKlientSaldo" Text="-" FontSize="11" FontWeight="Bold"/>
                        </StackPanel>

                        <!-- Ostatnie zamówienie -->
                        <StackPanel Grid.Column="5">
                            <TextBlock Text="Ost. zam." FontSize="9" Foreground="{StaticResource ColorTextLight}"/>
                            <TextBlock x:Name="txtKlientOstatnieZam" Text="-" FontSize="11" FontWeight="Medium"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Zakładki -->
                <Border Grid.Row="1" Background="White" CornerRadius="4"
                        BorderBrush="{StaticResource ColorBorder}" BorderThickness="1">
                    <TabControl x:Name="tabControl" SelectionChanged="TabControl_SelectionChanged" Padding="0">
                        <TabItem Header="Dane">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="8">
                                    <Grid x:Name="gridDanePodstawowe"/>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Kontakty">
                            <Grid Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
                                    <Button Content="+ Dodaj" Style="{StaticResource ButtonSuccess}"
                                            Click="BtnDodajKontakt_Click" Margin="0,0,5,0"/>
                                    <Button Content="Edytuj" Style="{StaticResource ButtonPrimary}"
                                            x:Name="btnEdytujKontakt" Click="BtnEdytujKontakt_Click" Margin="0,0,5,0"/>
                                    <Button Content="Usuń" Style="{StaticResource ButtonDanger}"
                                            x:Name="btnUsunKontakt" Click="BtnUsunKontakt_Click"/>
                                </StackPanel>

                                <DataGrid x:Name="dgKontakty" Grid.Row="1" Style="{StaticResource DataGridModern}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Typ" Binding="{Binding TypKontaktu}" Width="80"/>
                                        <DataGridTextColumn Header="Imię i Nazwisko" Binding="{Binding ImieNazwisko}" Width="*"/>
                                        <DataGridTextColumn Header="Stanowisko" Binding="{Binding Stanowisko}" Width="100"/>
                                        <DataGridTextColumn Header="Tel" Binding="{Binding Telefon}" Width="95"/>
                                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>

                        <TabItem Header="Finanse">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="8">
                                    <Grid x:Name="gridDaneFinansowe"/>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Transport">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="8">
                                    <Grid x:Name="gridTransport"/>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Notatki">
                            <Grid Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Content="+ Notatka" Style="{StaticResource ButtonSuccess}"
                                        HorizontalAlignment="Left" Margin="0,0,0,6" Click="BtnDodajNotatke_Click"/>

                                <DataGrid x:Name="dgNotatki" Grid.Row="1" Style="{StaticResource DataGridModern}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Data" Binding="{Binding DataUtworzenia, StringFormat=dd.MM.yy HH:mm}" Width="90"/>
                                        <DataGridTextColumn Header="Treść" Binding="{Binding Tresc}" Width="*"/>
                                        <DataGridTextColumn Header="Autor" Binding="{Binding KtoStworzyl}" Width="50"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>

                        <TabItem Header="Lokalizacja">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="8">
                                    <Grid x:Name="gridLokalizacja"/>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Statystyki">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="8">
                                    <Grid x:Name="gridStatystyki"/>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Koszty">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="8">
                                    <Grid x:Name="gridAnalizaKosztow"/>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Rentowność">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="8">
                                    <Grid x:Name="gridRentownosc"/>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
