<Window x:Class="Kalendarz1.AnalizaTygodniowa.AnalizaTygodniowaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalendarz1.PrognozyUboju"
        mc:Ignorable="d"
        Title="Dashboard Analizy Tygodniowej (Produkcja vs. Sprzedaż)" 
        Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F0F2F5">

    <Window.Resources>
        <local:ValueToSignConverter x:Key="ValueToSignConverter"/>

        <Style TargetType="Button" x:Key="FilterButton">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#D9D9D9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#40A9FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell" x:Key="CenteredCell">
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="DataGridCell" x:Key="RightAlignedCell">
            <Setter Property="TextBlock.TextAlignment" Value="Right"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0,0,10,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#34495e" Padding="20,15">
            <TextBlock Text="DASHBOARD ANALIZY TYGODNIOWEJ" FontSize="22" FontWeight="Bold" Foreground="White"/>
        </Border>

        <Border Grid.Row="1" Background="White" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Zakres dat:" VerticalAlignment="Center" Margin="5,0" FontWeight="SemiBold"/>
                <DatePicker x:Name="dpDataOd" Width="120" Margin="5,0"/>
                <TextBlock Text="-" VerticalAlignment="Center" Margin="5,0"/>
                <DatePicker x:Name="dpDataDo" Width="120" Margin="5,0"/>

                <TextBlock Text="Towar:" VerticalAlignment="Center" Margin="15,0,5,0" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbTowar" Width="200" Margin="5,0" DisplayMemberPath="DisplayText" SelectedValuePath="Id"/>

                <TextBlock Text="Handlowiec:" VerticalAlignment="Center" Margin="15,0,5,0" FontWeight="SemiBold"/>
                <Button x:Name="btnWybierzHandlowcow" Content="Wybierz..." Width="110" Style="{StaticResource FilterButton}" Click="BtnWybierzHandlowcow_Click"/>

                <TextBlock Text="Odbiorca:" VerticalAlignment="Center" Margin="15,0,5,0" FontWeight="SemiBold"/>
                <Button x:Name="btnWybierzOdbiorcow" Content="Wybierz..." Width="110" Style="{StaticResource FilterButton}" Click="BtnWybierzOdbiorcow_Click"/>

                <CheckBox x:Name="chkUkryjKorekty" Content="Ukryj korekty (zwroty)" VerticalAlignment="Center" Margin="20,0,0,0"
                          Click="ChkUkryjKorekty_Click"/>

                <Button x:Name="btnAnalizuj" Content="🔄 Analizuj" Width="110" Margin="20,0,5,0" Background="#1890FF" Foreground="White" FontWeight="Bold" Click="BtnAnalizuj_Click"/>
                <Button x:Name="btnInstrukcja" Content="📖 Instrukcja" Width="110" Margin="5,0" Background="#f39c12" Foreground="White" FontWeight="Bold" Click="BtnInstrukcja_Click"/>
                <TextBlock x:Name="txtStatus" Text="Gotowy" VerticalAlignment="Center" Margin="15,0" FontStyle="Italic" Foreground="Gray"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Background="#FAFAFA" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="20" Margin="10">
                    <StackPanel>
                        <TextBlock Text="CAŁKOWITA PRODUKCJA" FontSize="12" Foreground="Gray"/>
                        <TextBlock x:Name="kpiProdukcja" Text="0 kg" FontSize="24" FontWeight="Bold" Foreground="#34495e" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="20" Margin="10">
                    <StackPanel>
                        <TextBlock Text="CAŁKOWITA SPRZEDAŻ" FontSize="12" Foreground="Gray"/>
                        <TextBlock x:Name="kpiSprzedaz" Text="0 kg" FontSize="24" FontWeight="Bold" Foreground="#27ae60" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="20" Margin="10">
                    <StackPanel>
                        <TextBlock Text="WSPÓŁCZYNNIK SPRZEDAŻY" FontSize="12" Foreground="Gray"/>
                        <TextBlock x:Name="kpiProcent" Text="0%" FontSize="24" FontWeight="Bold" Foreground="#3498db" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="20" Margin="10">
                    <StackPanel>
                        <TextBlock Text="POZOSTAŁO (RYZYKO)" FontSize="12" Foreground="Gray"/>
                        <TextBlock x:Name="kpiWariancja" Text="0 kg" FontSize="24" FontWeight="Bold" Foreground="#e74c3c" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DataGrid Grid.Column="0" x:Name="dgPodsumowanieDni" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single"
                      SelectionChanged="DgPodsumowanieDni_SelectionChanged" CanUserAddRows="False" GridLinesVisibility="Vertical" VerticalGridLinesBrush="#E0E0E0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Data" Binding="{Binding Data, StringFormat='yyyy-MM-dd'}" Width="1.2*" CellStyle="{StaticResource CenteredCell}"/>
                    <DataGridTextColumn Header="Dzień" Binding="{Binding DzienTygodnia}" Width="1.2*" CellStyle="{StaticResource CenteredCell}"/>
                    <DataGridTextColumn Header="Produkcja (kg)" Binding="{Binding IloscWyprodukowana, StringFormat='N0'}" Width="*" CellStyle="{StaticResource RightAlignedCell}" FontWeight="SemiBold"/>
                    <DataGridTextColumn Header="Sprzedaż (kg)" Binding="{Binding IloscSprzedana, StringFormat='N0'}" Width="*" CellStyle="{StaticResource RightAlignedCell}" FontWeight="SemiBold"/>
                    <DataGridTextColumn Header="Wariancja (Prod-Sprzed)" Binding="{Binding Wariancja, StringFormat='N0'}" Width="1.5*" CellStyle="{StaticResource RightAlignedCell}" FontWeight="Bold"/>
                    <DataGridTextColumn Header="Sprzedano %" Binding="{Binding ProcentSprzedazy, StringFormat='N1'}" Width="*" CellStyle="{StaticResource RightAlignedCell}"/>
                </DataGrid.Columns>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Wariancja, Converter={StaticResource ValueToSignConverter}}" Value="-1">
                                <Setter Property="Background" Value="#E8F5E9"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Wariancja, Converter={StaticResource ValueToSignConverter}}" Value="1">
                                <Setter Property="Background" Value="#FFF0F0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#E0E0E0"/>

            <TabControl Grid.Column="2">
                <TabItem Header="Szczegóły Sprzedaży dla wybranego dnia">
                    <DataGrid x:Name="dgSzczegolySprzedazy" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nr dokumentu" Binding="{Binding NumerDokumentu}" Width="*"/>
                            <DataGridTextColumn Header="Odbiorca" Binding="{Binding NazwaKontrahenta}" Width="2*"/>
                            <DataGridTextColumn Header="Towar" Binding="{Binding KodTowaru}" Width="*"/>
                            <DataGridTextColumn Header="Nazwa" Binding="{Binding NazwaTowaru}" Width="1.5*"/>
                            <DataGridTextColumn Header="Handlowiec" Binding="{Binding Handlowiec}" Width="*"/>
                            <DataGridTextColumn Header="Ilość (kg)" Binding="{Binding Ilosc, StringFormat='N2'}" Width="*" CellStyle="{StaticResource RightAlignedCell}"/>
                            <DataGridTextColumn Header="Cena (zł/kg)" Binding="{Binding Cena, StringFormat='N2'}" Width="*" CellStyle="{StaticResource RightAlignedCell}"/>
                            <DataGridTextColumn Header="Wartość (zł)" Binding="{Binding Wartosc, StringFormat='N2'}" Width="*" CellStyle="{StaticResource RightAlignedCell}" FontWeight="Bold"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Szczegóły Produkcji dla wybranego dnia">
                    <DataGrid x:Name="dgSzczegolyProdukcji" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Dokument PW" Binding="{Binding NumerDokumentu}" Width="*"/>
                            <DataGridTextColumn Header="Towar" Binding="{Binding KodTowaru}" Width="*"/>
                            <DataGridTextColumn Header="Nazwa" Binding="{Binding NazwaTowaru}" Width="2*"/>
                            <DataGridTextColumn Header="Ilość (kg)" Binding="{Binding Ilosc, StringFormat='N2'}" Width="*" CellStyle="{StaticResource RightAlignedCell}" FontWeight="Bold"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>