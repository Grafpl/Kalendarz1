<Window x:Class="Kalendarz1.Kartoteka.Views.KontaktEdycjaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edycja kontaktu"
        Width="450" Height="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/KartotekaStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NagÅ‚Ã³wek -->
        <Border Grid.Row="0" Padding="16,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#166534" Offset="0"/>
                    <GradientStop Color="#059669" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock x:Name="TextTytul" Text="Nowy kontakt" FontSize="15" FontWeight="Bold" Foreground="White"/>
        </Border>

        <!-- Formularz -->
        <StackPanel Grid.Row="1" Margin="16">
            <TextBlock Text="Typ kontaktu" FontSize="11" Foreground="#6B7280" Margin="0,0,0,4"/>
            <ComboBox x:Name="CmbTypKontaktu" Padding="8,6" Margin="0,0,0,12">
                <ComboBoxItem Content="GÅ‚Ã³wny" IsSelected="True"/>
                <ComboBoxItem Content="KsiÄ™gowoÅ›Ä‡"/>
                <ComboBoxItem Content="Opakowania"/>
                <ComboBoxItem Content="WÅ‚aÅ›ciciel"/>
                <ComboBoxItem Content="Magazyn"/>
                <ComboBoxItem Content="Inny"/>
            </ComboBox>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,8,12">
                    <TextBlock Text="ImiÄ™" FontSize="11" Foreground="#6B7280" Margin="0,0,0,4"/>
                    <TextBox x:Name="TxtImie" Padding="8,6" BorderBrush="#BBF7D0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="8,0,0,12">
                    <TextBlock Text="Nazwisko" FontSize="11" Foreground="#6B7280" Margin="0,0,0,4"/>
                    <TextBox x:Name="TxtNazwisko" Padding="8,6" BorderBrush="#BBF7D0"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="Stanowisko" FontSize="11" Foreground="#6B7280" Margin="0,0,0,4"/>
            <TextBox x:Name="TxtStanowisko" Padding="8,6" BorderBrush="#BBF7D0" Margin="0,0,0,12"/>

            <TextBlock Text="Telefon" FontSize="11" Foreground="#6B7280" Margin="0,0,0,4"/>
            <TextBox x:Name="TxtTelefon" Padding="8,6" BorderBrush="#BBF7D0" Margin="0,0,0,12"/>

            <TextBlock Text="Email" FontSize="11" Foreground="#6B7280" Margin="0,0,0,4"/>
            <TextBox x:Name="TxtEmail" Padding="8,6" BorderBrush="#BBF7D0" Margin="0,0,0,12"/>

            <TextBlock Text="Notatka" FontSize="11" Foreground="#6B7280" Margin="0,0,0,4"/>
            <TextBox x:Name="TxtNotatka" Padding="8,6" BorderBrush="#BBF7D0" TextWrapping="Wrap"
                     AcceptsReturn="True" MinHeight="60" MaxHeight="100" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- Przyciski -->
        <Border Grid.Row="2" Background="#F0FDF4" Padding="16,10" BorderBrush="#BBF7D0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Anuluj" Padding="20,8" Margin="0,0,8,0"
                        Click="ButtonAnuluj_Click" Cursor="Hand"/>
                <Button Content="ðŸ’¾ Zapisz" Style="{StaticResource KartotekaPrimaryButton}"
                        Padding="20,8" Click="ButtonZapisz_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
