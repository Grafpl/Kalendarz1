<Window x:Class="Kalendarz1.Kartoteka.Features.Scoring.ScoringPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scoring kredytowy" Width="520" Height="580"
        WindowStartupLocation="CenterScreen" Background="#F3F4F6">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nag贸wek -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock x:Name="txtNaglowek" Text=" Scoring kredytowy" FontSize="18" FontWeight="Bold" Foreground="#166534"/>
            <TextBlock x:Name="txtKlient" Text="" FontSize="12" Foreground="#6B7280" Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Okrgy wska藕nik -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,12"
                BorderBrush="#E5E7EB" BorderThickness="1" HorizontalAlignment="Center">
            <StackPanel HorizontalAlignment="Center">
                <Grid Width="120" Height="120" HorizontalAlignment="Center">
                    <!-- To koa -->
                    <Ellipse Width="120" Height="120" StrokeThickness="10" Stroke="#E5E7EB"/>
                    <!-- Kolorowe koo (postp) -->
                    <Ellipse x:Name="scoreRing" Width="120" Height="120" StrokeThickness="10"
                             StrokeDashArray="0 100" RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <RotateTransform Angle="-90"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <!-- Tekst score -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock x:Name="txtScore" Text="--" FontSize="32" FontWeight="Bold"
                                   HorizontalAlignment="Center" Foreground="#166534"/>
                        <TextBlock x:Name="txtKategoriaBadge" Text="" FontSize="11" FontWeight="SemiBold"
                                   HorizontalAlignment="Center" Foreground="#6B7280"/>
                    </StackPanel>
                </Grid>
                <Button x:Name="btnPrzelicz" Content=" Przelicz scoring" Margin="0,12,0,0"
                        Padding="16,6" FontSize="12" FontWeight="SemiBold" Cursor="Hand"
                        Background="#059669" Foreground="White" BorderThickness="0"
                        Click="BtnPrzelicz_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#166534"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>

        <!-- Skadniki scoringu -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="16" Margin="0,0,0,12"
                BorderBrush="#E5E7EB" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Skadniki scoringu" FontWeight="Bold" FontSize="13" Foreground="#374151" Margin="0,0,0,10"/>
                <Grid x:Name="gridSkladniki">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="35"/>
                        <ColumnDefinition Width="160"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="28"/>
                    </Grid.RowDefinitions>

                    <!-- Nag贸wki -->
                    <!-- Terminowo -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text=" Terminowo patnoci" VerticalAlignment="Center" FontSize="12"/>
                    <TextBlock x:Name="txtTerminowosc" Grid.Row="0" Grid.Column="1" Text="--/40" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="SemiBold" FontSize="12"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="pkt" VerticalAlignment="Center" Margin="4,0,0,0" FontSize="10" Foreground="#9CA3AF"/>
                    <ProgressBar x:Name="pbTerminowosc" Grid.Row="0" Grid.Column="3" Height="12" Margin="8,0,0,0" Maximum="40" Background="#E5E7EB" Foreground="#10B981"/>

                    <!-- Historia -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text=" Historia wsp贸pracy" VerticalAlignment="Center" FontSize="12"/>
                    <TextBlock x:Name="txtHistoria" Grid.Row="1" Grid.Column="1" Text="--/20" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="SemiBold" FontSize="12"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="pkt" VerticalAlignment="Center" Margin="4,0,0,0" FontSize="10" Foreground="#9CA3AF"/>
                    <ProgressBar x:Name="pbHistoria" Grid.Row="1" Grid.Column="3" Height="12" Margin="8,0,0,0" Maximum="20" Background="#E5E7EB" Foreground="#3B82F6"/>

                    <!-- Regularno -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text=" Regularno zam贸wie" VerticalAlignment="Center" FontSize="12"/>
                    <TextBlock x:Name="txtRegularnosc" Grid.Row="2" Grid.Column="1" Text="--/20" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="SemiBold" FontSize="12"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="pkt" VerticalAlignment="Center" Margin="4,0,0,0" FontSize="10" Foreground="#9CA3AF"/>
                    <ProgressBar x:Name="pbRegularnosc" Grid.Row="2" Grid.Column="3" Height="12" Margin="8,0,0,0" Maximum="20" Background="#E5E7EB" Foreground="#8B5CF6"/>

                    <!-- Trend -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text=" Trend obrot贸w" VerticalAlignment="Center" FontSize="12"/>
                    <TextBlock x:Name="txtTrend" Grid.Row="3" Grid.Column="1" Text="--/10" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="SemiBold" FontSize="12"/>
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="pkt" VerticalAlignment="Center" Margin="4,0,0,0" FontSize="10" Foreground="#9CA3AF"/>
                    <ProgressBar x:Name="pbTrend" Grid.Row="3" Grid.Column="3" Height="12" Margin="8,0,0,0" Maximum="10" Background="#E5E7EB" Foreground="#F59E0B"/>

                    <!-- Limit -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text=" Wykorzystanie limitu" VerticalAlignment="Center" FontSize="12"/>
                    <TextBlock x:Name="txtLimit" Grid.Row="4" Grid.Column="1" Text="--/10" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="SemiBold" FontSize="12"/>
                    <TextBlock Grid.Row="4" Grid.Column="2" Text="pkt" VerticalAlignment="Center" Margin="4,0,0,0" FontSize="10" Foreground="#9CA3AF"/>
                    <ProgressBar x:Name="pbLimit" Grid.Row="4" Grid.Column="3" Height="12" Margin="8,0,0,0" Maximum="10" Background="#E5E7EB" Foreground="#EF4444"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Rekomendacja -->
        <Border Grid.Row="3" x:Name="borderRekomendacja" Background="#DCFCE7" CornerRadius="8" Padding="14" Margin="0,0,0,12"
                BorderBrush="#BBF7D0" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Rekomendacja" FontWeight="Bold" FontSize="12" Foreground="#166534"/>
                <TextBlock x:Name="txtRekomendacja" Text="Brak danych scoringowych." FontSize="12" Foreground="#374151"
                           TextWrapping="Wrap" Margin="0,4,0,0"/>
                <TextBlock x:Name="txtDataObliczenia" Text="" FontSize="10" Foreground="#6B7280" Margin="0,6,0,0"/>
            </StackPanel>
        </Border>

        <!-- Status -->
        <TextBlock Grid.Row="5" x:Name="txtStatus" FontSize="11" Foreground="#6B7280" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
