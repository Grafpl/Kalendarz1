<dx:ThemedWindow x:Class="Kalendarz1.HandlowiecDashboard.Views.KontrahentPlatnosciWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
        Title="Platnosci Kontrahenta" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="#1A1D21">

    <dx:ThemedWindow.Resources>
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#1A1D21"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#252A31"/>
        <SolidColorBrush x:Key="CardBackgroundLightBrush" Color="#2D333B"/>
        <SolidColorBrush x:Key="AccentOrangeBrush" Color="#F4A261"/>
        <SolidColorBrush x:Key="AccentGreenBrush" Color="#4ECDC4"/>
        <SolidColorBrush x:Key="AccentRedBrush" Color="#FF6B6B"/>
        <SolidColorBrush x:Key="AccentYellowBrush" Color="#FFE66D"/>
        <SolidColorBrush x:Key="AccentPurpleBrush" Color="#AA96DA"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#8B949E"/>
        <SolidColorBrush x:Key="BorderColorBrush" Color="#30363D"/>
    </dx:ThemedWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Naglowek -->
        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" Padding="20,12"
                BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="40" Height="40" CornerRadius="8" Background="{StaticResource AccentRedBrush}" Margin="0,0,12,0">
                        <TextBlock Text="P" FontSize="20" FontWeight="Bold" Foreground="#FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Platnosci: " FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock x:Name="txtKontrahentNazwa" Text="" FontSize="18" FontWeight="Bold" Foreground="{StaticResource AccentOrangeBrush}"/>
                        </StackPanel>
                        <TextBlock x:Name="txtHandlowiec" Text="" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
                <dx:SimpleButton Grid.Column="2" x:Name="btnOdswiez" Content="Odswiez" Click="BtnOdswiez_Click"
                                 Glyph="{dx:DXImage SvgImages/Outlook Inspired/Reload.svg}"
                                 Background="{StaticResource AccentOrangeBrush}" Foreground="#1A1D21"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Karty podsumowania -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Limit kredytu -->
                    <Border Grid.Column="0" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="12" Margin="0,0,5,0">
                        <StackPanel>
                            <TextBlock Text="LIMIT KREDYTU" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock x:Name="txtLimitKredytu" Text="0 zl" FontSize="22" FontWeight="Bold" Foreground="#FFFFFF" Margin="0,3,0,0"/>
                            <TextBlock x:Name="txtWykorzystanieLimit" Text="" FontSize="11" Foreground="#8B949E" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Do zaplaty -->
                    <Border Grid.Column="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="12" Margin="5,0,5,0">
                        <StackPanel>
                            <TextBlock Text="DO ZAPLATY" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock x:Name="txtDoZaplaty" Text="0 zl" FontSize="22" FontWeight="Bold" Foreground="{StaticResource AccentOrangeBrush}" Margin="0,3,0,0"/>
                            <TextBlock x:Name="txtIloscFaktur" Text="0 faktur" FontSize="11" Foreground="#8B949E" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Terminowe -->
                    <Border Grid.Column="2" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="12" Margin="5,0,5,0">
                        <StackPanel>
                            <TextBlock Text="TERMINOWE" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock x:Name="txtTerminowe" Text="0 zl" FontSize="22" FontWeight="Bold" Foreground="{StaticResource AccentGreenBrush}" Margin="0,3,0,0"/>
                            <TextBlock x:Name="txtTerminoweProcent" Text="0%" FontSize="11" Foreground="{StaticResource AccentGreenBrush}" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Przeterminowane -->
                    <Border Grid.Column="3" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="12" Margin="5,0,5,0">
                        <StackPanel>
                            <TextBlock Text="PRZETERMINOWANE" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock x:Name="txtPrzeterminowane" Text="0 zl" FontSize="22" FontWeight="Bold" Foreground="{StaticResource AccentRedBrush}" Margin="0,3,0,0"/>
                            <TextBlock x:Name="txtPrzeterminowaneProcent" Text="0%" FontSize="11" Foreground="{StaticResource AccentRedBrush}" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Max dni przeterminowania -->
                    <Border Grid.Column="4" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="12" Margin="5,0,0,0">
                        <StackPanel>
                            <TextBlock Text="MAX DNI PRZET." FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock x:Name="txtMaxDni" Text="0 dni" FontSize="22" FontWeight="Bold" Foreground="{StaticResource AccentPurpleBrush}" Margin="0,3,0,0"/>
                            <TextBlock x:Name="txtPrzekroczonyLimit" Text="" FontSize="11" Foreground="{StaticResource AccentRedBrush}" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Aging Analysis -->
                <Border Grid.Row="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="ANALIZA WIEKOWA NALEZNOSCI" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 0-30 dni -->
                            <Border Grid.Column="0" Background="#1A1D21" CornerRadius="5" Padding="15" Margin="0,0,5,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="0-30 dni" FontSize="12" Foreground="#4ECDC4" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtAging030" Text="0 zl" FontSize="20" FontWeight="Bold" Foreground="#4ECDC4" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <TextBlock x:Name="txtAging030Faktury" Text="0 faktur" FontSize="10" Foreground="#8B949E" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- 31-60 dni -->
                            <Border Grid.Column="1" Background="#1A1D21" CornerRadius="5" Padding="15" Margin="5,0,5,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="31-60 dni" FontSize="12" Foreground="#FFE66D" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtAging3160" Text="0 zl" FontSize="20" FontWeight="Bold" Foreground="#FFE66D" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <TextBlock x:Name="txtAging3160Faktury" Text="0 faktur" FontSize="10" Foreground="#8B949E" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- 61-90 dni -->
                            <Border Grid.Column="2" Background="#1A1D21" CornerRadius="5" Padding="15" Margin="5,0,5,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="61-90 dni" FontSize="12" Foreground="#F4A261" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtAging6190" Text="0 zl" FontSize="20" FontWeight="Bold" Foreground="#F4A261" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <TextBlock x:Name="txtAging6190Faktury" Text="0 faktur" FontSize="10" Foreground="#8B949E" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- 90+ dni -->
                            <Border Grid.Column="3" Background="#1A1D21" CornerRadius="5" Padding="15" Margin="5,0,0,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="90+ dni" FontSize="12" Foreground="#FF6B6B" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtAging90Plus" Text="0 zl" FontSize="20" FontWeight="Bold" Foreground="#FF6B6B" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <TextBlock x:Name="txtAging90PlusFaktury" Text="0 faktur" FontSize="10" Foreground="#8B949E" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Trend platnosci i historia -->
                <Grid Grid.Row="2" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <!-- Wykres trend platnosci - DevExpress ChartControl -->
                    <Border Grid.Column="0" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="0,0,7,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="TREND SALDA (OSTATNIE 6 MIESIECY)" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" Margin="0,0,0,10"/>
                            <dxc:ChartControl Grid.Row="1" x:Name="chartTrendSaldo" Height="180" Background="Transparent">
                                <dxc:ChartControl.CrosshairOptions>
                                    <dxc:CrosshairOptions ShowArgumentLine="True" ShowValueLine="True"/>
                                </dxc:ChartControl.CrosshairOptions>
                                <dxc:XYDiagram2D>
                                    <dxc:XYDiagram2D.AxisX>
                                        <dxc:AxisX2D>
                                            <dxc:AxisX2D.Label>
                                                <dxc:AxisLabel Foreground="#FFFFFF" FontSize="10"/>
                                            </dxc:AxisX2D.Label>
                                        </dxc:AxisX2D>
                                    </dxc:XYDiagram2D.AxisX>
                                    <dxc:XYDiagram2D.AxisY>
                                        <dxc:AxisY2D>
                                            <dxc:AxisY2D.Title>
                                                <dxc:AxisTitle Content="Saldo (zl)" Foreground="#FFFFFF"/>
                                            </dxc:AxisY2D.Title>
                                            <dxc:AxisY2D.Label>
                                                <dxc:AxisLabel Foreground="#FFFFFF" FontSize="10"/>
                                            </dxc:AxisY2D.Label>
                                        </dxc:AxisY2D>
                                    </dxc:XYDiagram2D.AxisY>
                                    <dxc:LineSeries2D x:Name="seriesTrendSaldo" DisplayName="Saldo"
                                                      ArgumentDataMember="Miesiac" ValueDataMember="Saldo"
                                                      LabelsVisibility="True">
                                        <dxc:LineSeries2D.Brush>
                                            <SolidColorBrush Color="#F4A261"/>
                                        </dxc:LineSeries2D.Brush>
                                        <dxc:LineSeries2D.MarkerModel>
                                            <dxc:CircleMarker2DModel/>
                                        </dxc:LineSeries2D.MarkerModel>
                                        <dxc:LineSeries2D.Label>
                                            <dxc:SeriesLabel dxc:MarkerSeries2D.Angle="45" Foreground="#FFFFFF">
                                                <dxc:SeriesLabel.ElementTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Text}" Foreground="#FFFFFF"/>
                                                    </DataTemplate>
                                                </dxc:SeriesLabel.ElementTemplate>
                                            </dxc:SeriesLabel>
                                        </dxc:LineSeries2D.Label>
                                    </dxc:LineSeries2D>
                                </dxc:XYDiagram2D>
                                <dxc:ChartControl.Legend>
                                    <dxc:Legend Visibility="Collapsed"/>
                                </dxc:ChartControl.Legend>
                            </dxc:ChartControl>
                        </Grid>
                    </Border>

                    <!-- Podsumowanie -->
                    <Border Grid.Column="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="7,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="HISTORIA PLATNOSCI (12 MIES.)" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" Margin="0,0,0,10"/>
                            <StackPanel Grid.Row="1">
                                <Border Background="#1A1D21" CornerRadius="5" Padding="10" Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="Suma zaplacona" FontSize="10" Foreground="#8B949E"/>
                                        <TextBlock x:Name="txtSumaZaplacona" Text="0 zl" FontSize="18" FontWeight="Bold" Foreground="#4ECDC4"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#1A1D21" CornerRadius="5" Padding="10" Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="Sredni czas platnosci" FontSize="10" Foreground="#8B949E"/>
                                        <TextBlock x:Name="txtSredniCzas" Text="0 dni" FontSize="18" FontWeight="Bold" Foreground="#FFE66D"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#1A1D21" CornerRadius="5" Padding="10" Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="Ostatnia platnosc" FontSize="10" Foreground="#8B949E"/>
                                        <TextBlock x:Name="txtOstatniaPlatnosc" Text="-" FontSize="18" FontWeight="Bold" Foreground="#F4A261"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#1A1D21" CornerRadius="5" Padding="10">
                                    <StackPanel>
                                        <TextBlock Text="Liczba opoznien" FontSize="10" Foreground="#8B949E"/>
                                        <TextBlock x:Name="txtLiczbaOpoznien" Text="0" FontSize="18" FontWeight="Bold" Foreground="#FF6B6B"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Tabela faktur - DevExpress GridControl -->
                <Border Grid.Row="3" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="SZCZEGOLY DOKUMENTOW" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock x:Name="txtLiczbaWynikow" Text="" FontSize="11" Foreground="{StaticResource AccentOrangeBrush}" Margin="15,0,0,0"/>
                        </StackPanel>
                        <dxg:GridControl Grid.Row="1" x:Name="gridFaktury" AutoGenerateColumns="None" MaxHeight="250">
                            <dxg:GridControl.View>
                                <dxg:TableView ShowGroupPanel="False" 
                                               AllowEditing="False"
                                               AlternateRowBackground="#2D333B"
                                               RowStyle="{x:Null}"
                                               AutoWidth="True"
                                               ShowIndicator="False"
                                               ShowColumnHeaders="True"
                                               AllowScrollAnimation="True"/>
                            </dxg:GridControl.View>
                            <dxg:GridControl.Columns>
                                <dxg:GridColumn FieldName="NrDokumentu" Header="Nr dokumentu" Width="120"/>
                                <dxg:GridColumn FieldName="DataTekst" Header="Data" Width="85"/>
                                <dxg:GridColumn FieldName="TerminTekst" Header="Termin" Width="85"/>
                                <dxg:GridColumn FieldName="KwotaBruttoTekst" Header="Kwota brutto" Width="100">
                                    <dxg:GridColumn.CellStyle>
                                        <Style TargetType="dxg:LightweightCellEditor">
                                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        </Style>
                                    </dxg:GridColumn.CellStyle>
                                </dxg:GridColumn>
                                <dxg:GridColumn FieldName="RozliczoneTekst" Header="Rozliczone" Width="100">
                                    <dxg:GridColumn.CellStyle>
                                        <Style TargetType="dxg:LightweightCellEditor">
                                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="#4ECDC4"/>
                                        </Style>
                                    </dxg:GridColumn.CellStyle>
                                </dxg:GridColumn>
                                <dxg:GridColumn FieldName="DoZaplatyTekst" Header="Do zaplaty" Width="100">
                                    <dxg:GridColumn.CellStyle>
                                        <Style TargetType="dxg:LightweightCellEditor">
                                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="#F4A261"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </dxg:GridColumn.CellStyle>
                                </dxg:GridColumn>
                                <dxg:GridColumn FieldName="DniPrzeterminowania" Header="Dni" Width="50">
                                    <dxg:GridColumn.CellStyle>
                                        <Style TargetType="dxg:LightweightCellEditor">
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        </Style>
                                    </dxg:GridColumn.CellStyle>
                                </dxg:GridColumn>
                                <dxg:GridColumn FieldName="Status" Header="Status" Width="100"/>
                            </dxg:GridControl.Columns>
                        </dxg:GridControl>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Loading overlay - DevExpress WaitIndicator -->
        <dx:WaitIndicator Grid.RowSpan="2" x:Name="loadingIndicator" DeferedVisibility="False" Content="Ladowanie danych..."/>
    </Grid>
</dx:ThemedWindow>
