<Window x:Class="Kalendarz1.HandlowiecDashboard.Views.AnalizaCenHandlowcaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
        Title="Analiza Cen Handlowca" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="#1A1D21">

    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#1A1D21"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#252A31"/>
        <SolidColorBrush x:Key="CardBackgroundLightBrush" Color="#2D333B"/>
        <SolidColorBrush x:Key="AccentOrangeBrush" Color="#F4A261"/>
        <SolidColorBrush x:Key="AccentGreenBrush" Color="#4ECDC4"/>
        <SolidColorBrush x:Key="AccentRedBrush" Color="#FF6B6B"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#8B949E"/>
        <SolidColorBrush x:Key="BorderColorBrush" Color="#30363D"/>

        <Style x:Key="DarkComboBoxStyle" TargetType="dxe:ComboBoxEdit">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>

        <Style x:Key="DarkButtonStyle" TargetType="dx:SimpleButton">
            <Setter Property="Background" Value="{StaticResource AccentOrangeBrush}"/>
            <Setter Property="Foreground" Value="#1A1D21"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="FilterLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Naglowek -->
        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" Padding="20,12"
                BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="40" Height="40" CornerRadius="8" Background="{StaticResource AccentOrangeBrush}" Margin="0,0,12,0">
                        <TextBlock Text="C" FontSize="20" FontWeight="Bold" Foreground="#1A1D21" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Analiza Cen: " FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock x:Name="txtHandlowiecNazwa" Text="" FontSize="18" FontWeight="Bold" Foreground="{StaticResource AccentOrangeBrush}"/>
                        </StackPanel>
                        <TextBlock x:Name="txtOkres" Text="" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Towar:" Style="{StaticResource FilterLabelStyle}"/>
                    <dxe:ComboBoxEdit x:Name="cmbTowar" Style="{StaticResource DarkComboBoxStyle}" Width="250" EditValueChanged="CmbTowar_SelectionChanged"/>
                    <dx:SimpleButton x:Name="btnOdswiez" Content="Odswiez" Margin="12,0,0,0" Style="{StaticResource DarkButtonStyle}" Click="BtnOdswiez_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Karty podsumowania -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Suma kg -->
                    <Border Grid.Column="0" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="0,0,5,0">
                        <StackPanel>
                            <TextBlock Text="SUMA KG" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock x:Name="txtSumaKg" Text="0 kg" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentGreenBrush}" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Srednia cena -->
                    <Border Grid.Column="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="5,0">
                        <StackPanel>
                            <TextBlock Text="SREDNIA CENA" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock x:Name="txtSredniaCena" Text="0,00 zl/kg" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Min cena -->
                    <Border Grid.Column="2" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="5,0">
                        <StackPanel>
                            <TextBlock Text="MIN CENA" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock x:Name="txtMinCena" Text="0,00 zl/kg" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentRedBrush}" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Max cena -->
                    <Border Grid.Column="3" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="5,0">
                        <StackPanel>
                            <TextBlock Text="MAX CENA" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock x:Name="txtMaxCena" Text="0,00 zl/kg" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentGreenBrush}" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Suma wartosc -->
                    <Border Grid.Column="4" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="5,0,0,0">
                        <StackPanel>
                            <TextBlock Text="SUMA WARTOSC" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock x:Name="txtSumaWartosc" Text="0 zl" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentOrangeBrush}" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Wykres cen w czasie -->
                <Border Grid.Row="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="250"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="HISTORIA CEN" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" Margin="0,0,0,10"/>
                        <dxc:ChartControl Grid.Row="1" x:Name="chartCenyWCzasie" Background="Transparent">
                            <dxc:ChartControl.Legend>
                                <dxc:Legend Visibility="Collapsed"/>
                            </dxc:ChartControl.Legend>
                            <dxc:XYDiagram2D>
                                <dxc:XYDiagram2D.AxisX>
                                    <dxc:AxisX2D x:Name="axisXCeny">
                                        <dxc:AxisX2D.Label>
                                            <dxc:AxisLabel Foreground="#FFFFFF" Angle="45"/>
                                        </dxc:AxisX2D.Label>
                                    </dxc:AxisX2D>
                                </dxc:XYDiagram2D.AxisX>
                                <dxc:XYDiagram2D.AxisY>
                                    <dxc:AxisY2D x:Name="axisYCeny" Title="Cena (zl/kg)">
                                        <dxc:AxisY2D.Label>
                                            <dxc:AxisLabel Foreground="#FFFFFF"/>
                                        </dxc:AxisY2D.Label>
                                    </dxc:AxisY2D>
                                </dxc:XYDiagram2D.AxisY>
                                <dxc:LineSeries2D x:Name="seriesCeny" DisplayName="Cena" Brush="#F4A261" MarkerVisible="True">
                                    <dxc:LineSeries2D.Model>
                                        <dxc:SimpleLine2DModel/>
                                    </dxc:LineSeries2D.Model>
                                </dxc:LineSeries2D>
                            </dxc:XYDiagram2D>
                        </dxc:ChartControl>
                    </Grid>
                </Border>

                <!-- Tabela per kontrahent -->
                <Border Grid.Row="2" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="PODSUMOWANIE PER KONTRAHENT" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" Margin="0,0,0,10"/>
                        <dxg:GridControl Grid.Row="1" x:Name="gridPerKontrahent" AutoGenerateColumns="None" MaxHeight="250">
                            <dxg:GridControl.View>
                                <dxg:TableView ShowGroupPanel="False" AllowEditing="False" AutoWidth="True" ShowIndicator="False"/>
                            </dxg:GridControl.View>
                            <dxg:GridControl.Columns>
                                <dxg:GridColumn FieldName="Kontrahent" Header="Kontrahent" Width="200"/>
                                <dxg:GridColumn FieldName="SumaKgTekst" Header="Suma kg" Width="100">
                                    <dxg:GridColumn.CellStyle>
                                        <Style TargetType="dxg:CellContentPresenter">
                                            <Setter Property="Foreground" Value="#4ECDC4"/>
                                        </Style>
                                    </dxg:GridColumn.CellStyle>
                                </dxg:GridColumn>
                                <dxg:GridColumn FieldName="CenaTekst" Header="Cena (zl/kg)" Width="90"/>
                                <dxg:GridColumn FieldName="WartoscTekst" Header="Wartosc (zl)" Width="100">
                                    <dxg:GridColumn.CellStyle>
                                        <Style TargetType="dxg:CellContentPresenter">
                                            <Setter Property="Foreground" Value="#F4A261"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </dxg:GridColumn.CellStyle>
                                </dxg:GridColumn>
                            </dxg:GridControl.Columns>
                        </dxg:GridControl>
                    </Grid>
                </Border>

                <!-- Tabela per produkt -->
                <Border Grid.Row="3" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="PODSUMOWANIE PER PRODUKT" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" Margin="0,0,0,10"/>
                        <dxg:GridControl Grid.Row="1" x:Name="gridPerProdukt" AutoGenerateColumns="None" MaxHeight="250">
                            <dxg:GridControl.View>
                                <dxg:TableView ShowGroupPanel="False" AllowEditing="False" AutoWidth="True" ShowIndicator="False"/>
                            </dxg:GridControl.View>
                            <dxg:GridControl.Columns>
                                <dxg:GridColumn FieldName="Kod" Header="Kod" Width="80"/>
                                <dxg:GridColumn FieldName="Towar" Header="Towar" Width="250"/>
                                <dxg:GridColumn FieldName="SumaKgTekst" Header="Suma kg" Width="100">
                                    <dxg:GridColumn.CellStyle>
                                        <Style TargetType="dxg:CellContentPresenter">
                                            <Setter Property="Foreground" Value="#4ECDC4"/>
                                        </Style>
                                    </dxg:GridColumn.CellStyle>
                                </dxg:GridColumn>
                                <dxg:GridColumn FieldName="SredniaCenaTekst" Header="Srednia cena" Width="100"/>
                                <dxg:GridColumn FieldName="MinCenaTekst" Header="Min cena" Width="90">
                                    <dxg:GridColumn.CellStyle>
                                        <Style TargetType="dxg:CellContentPresenter">
                                            <Setter Property="Foreground" Value="#FF6B6B"/>
                                        </Style>
                                    </dxg:GridColumn.CellStyle>
                                </dxg:GridColumn>
                                <dxg:GridColumn FieldName="MaxCenaTekst" Header="Max cena" Width="90">
                                    <dxg:GridColumn.CellStyle>
                                        <Style TargetType="dxg:CellContentPresenter">
                                            <Setter Property="Foreground" Value="#4ECDC4"/>
                                        </Style>
                                    </dxg:GridColumn.CellStyle>
                                </dxg:GridColumn>
                                <dxg:GridColumn FieldName="SumaWartoscTekst" Header="Suma wartosc" Width="110">
                                    <dxg:GridColumn.CellStyle>
                                        <Style TargetType="dxg:CellContentPresenter">
                                            <Setter Property="Foreground" Value="#F4A261"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </dxg:GridColumn.CellStyle>
                                </dxg:GridColumn>
                                <dxg:GridColumn FieldName="LiczbaTransakcji" Header="Transakcji" Width="80"/>
                            </dxg:GridControl.Columns>
                        </dxg:GridControl>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Loading overlay -->
        <Border Grid.RowSpan="2" Background="#CC1A1D21" x:Name="loadingOverlay" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <dx:WaitIndicator DeferedVisibility="True" ShowShadow="True"/>
                <TextBlock Text="Ladowanie danych..." FontSize="14" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,15,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
