<dx:ThemedWindow x:Class="Kalendarz1.HandlowiecDashboard.Views.KontrahentOpakowaniaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        Title="Dokumenty opakowan kontrahenta"
        Height="700" Width="1100"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        Background="#1A1D21">

    <dx:ThemedWindow.Resources>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#21262D"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#E6EDF3"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#8B949E"/>
        <SolidColorBrush x:Key="AccentOrangeBrush" Color="#F4A261"/>
        <SolidColorBrush x:Key="AccentTealBrush" Color="#4ECDC4"/>
    </dx:ThemedWindow.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Naglowek -->
        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="txtKontrahent" Text="Kontrahent" FontSize="20" FontWeight="Bold" Foreground="{StaticResource AccentOrangeBrush}"/>
                    <TextBlock x:Name="txtHandlowiec" Text="Handlowiec: -" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="30,0">
                    <TextBlock Text="SALDO E2" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                    <TextBlock x:Name="txtSaldoE2" Text="0" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentTealBrush}"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="30,0">
                    <TextBlock Text="SALDO H1" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                    <TextBlock x:Name="txtSaldoH1" Text="0" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentOrangeBrush}"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Margin="30,0,0,0">
                    <TextBlock Text="DOKUMENTOW" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                    <TextBlock x:Name="txtLiczbaDokumentow" Text="0" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filtry -->
        <Border Grid.Row="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15,10" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Rok:" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <dxe:ComboBoxEdit x:Name="cmbRok" Width="120" EditValueChanged="CmbRok_EditValueChanged"
                                  DisplayMember="Text" ValueMember="Value"
                                  Background="#2D333B" Foreground="#FFFFFF" BorderBrush="#30363D"/>
                <TextBlock Text="Typ:" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="20,0,8,0"/>
                <dxe:ComboBoxEdit x:Name="cmbTyp" Width="180" EditValueChanged="CmbTyp_EditValueChanged"
                                  DisplayMember="Text" ValueMember="Value"
                                  Background="#2D333B" Foreground="#FFFFFF" BorderBrush="#30363D"/>
            </StackPanel>
        </Border>

        <!-- Tabela dokumentow - DevExpress GridControl -->
        <Border Grid.Row="2" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15">
            <dxg:GridControl x:Name="gridDokumenty" AutoGenerateColumns="None">
                <dxg:GridControl.View>
                    <dxg:TableView ShowGroupPanel="False" 
                                   AllowEditing="False"
                                   AlternateRowBackground="#2D333B"
                                   RowStyle="{x:Null}"
                                   AutoWidth="True"
                                   ShowIndicator="False"
                                   ShowColumnHeaders="True"
                                   AllowScrollAnimation="True"/>
                </dxg:GridControl.View>
                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="Data" Header="Data" Width="100">
                        <dxg:GridColumn.EditSettings>
                            <dxe:DateEditSettings DisplayFormat="yyyy-MM-dd"/>
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>
                    <dxg:GridColumn FieldName="NrDokumentu" Header="Nr dokumentu" Width="150"/>
                    <dxg:GridColumn FieldName="Typ" Header="Typ" Width="80"/>
                    <dxg:GridColumn FieldName="Opakowanie" Header="Opakowanie" Width="180"/>
                    <dxg:GridColumn FieldName="Ilosc" Header="Ilosc" Width="80">
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings DisplayFormat="N0" HorizontalContentAlignment="Right"/>
                        </dxg:GridColumn.EditSettings>
                        <!-- FontWeight usuniety - LightweightCellEditor nie obsluguje tej wlasciwosci -->
                    </dxg:GridColumn>
                    <dxg:GridColumn FieldName="SaldoE2" Header="Saldo E2" Width="80">
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings DisplayFormat="N0" HorizontalContentAlignment="Right"/>
                        </dxg:GridColumn.EditSettings>
                        <dxg:GridColumn.CellDisplayTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Value}" Foreground="#4ECDC4" HorizontalAlignment="Right"/>
                            </DataTemplate>
                        </dxg:GridColumn.CellDisplayTemplate>
                    </dxg:GridColumn>
                    <dxg:GridColumn FieldName="SaldoH1" Header="Saldo H1" Width="80">
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings DisplayFormat="N0" HorizontalContentAlignment="Right"/>
                        </dxg:GridColumn.EditSettings>
                        <dxg:GridColumn.CellDisplayTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Value}" Foreground="#F4A261" HorizontalAlignment="Right"/>
                            </DataTemplate>
                        </dxg:GridColumn.CellDisplayTemplate>
                    </dxg:GridColumn>
                    <dxg:GridColumn FieldName="Uwagi" Header="Uwagi" Width="*"/>
                </dxg:GridControl.Columns>
            </dxg:GridControl>
        </Border>
    </Grid>
</dx:ThemedWindow>
