<Window x:Class="Kalendarz1.HandlowiecDashboard.Views.HandlowiecDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Dashboard Handlowca" Height="850" Width="1300"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="#1A1D21">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#1A1D21"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#252A31"/>
        <SolidColorBrush x:Key="CardBackgroundLightBrush" Color="#2D333B"/>
        <SolidColorBrush x:Key="AccentOrangeBrush" Color="#C0392B"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#8B949E"/>
        <SolidColorBrush x:Key="BorderColorBrush" Color="#30363D"/>

        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border" Background="{StaticResource CardBackgroundBrush}"
                                Padding="{TemplateBinding Padding}" Margin="0,0,2,0"
                                CornerRadius="8,8,0,0" BorderThickness="1,1,1,0"
                                BorderBrush="{StaticResource BorderColorBrush}">
                            <ContentPresenter ContentSource="Header" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource CardBackgroundLightBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentOrangeBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D333B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Background="#000000" BorderBrush="#555555" BorderThickness="1"
                                Focusable="false" IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="#000000" BorderBrush="#555555" BorderThickness="1" CornerRadius="3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="1" Background="#222222" CornerRadius="0,3,3,0">
                                                    <Path Fill="#FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" Content="{TemplateBinding SelectionBoxItem}"
                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" Margin="10,3,23,3" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock"><Setter Property="Foreground" Value="#FFFFFF"/></Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid x:Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="#000000" BorderBrush="#555555" BorderThickness="1"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Padding" Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#333333"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DarkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentOrangeBrush}"/>
            <Setter Property="Foreground" Value="#1A1D21"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SmallButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3D4450"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#17A589"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FilterLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <Style x:Key="DescriptionStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Ciemny styl dla DefaultTooltip -->
        <Style TargetType="lvc:DefaultTooltip">
            <Setter Property="Background" Value="#2D333B"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Naglowek -->
        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" Padding="20,12"
                BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="40" Height="40" CornerRadius="8" Background="{StaticResource AccentOrangeBrush}" Margin="0,0,12,0">
                        <TextBlock Text="H" FontSize="20" FontWeight="Bold" Foreground="#1A1D21" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Dashboard Handlowca" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Analiza sprzedazy z faktur" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="btnOdswiez" Content="Odswiez" Margin="12,0,0,0" Style="{StaticResource DarkButtonStyle}" Click="BtnOdswiez_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <TabControl Grid.Row="1" x:Name="tabControl" Margin="10" SelectionChanged="TabControl_SelectionChanged">

            <!-- Tab: Sprzedaz miesieczna -->
            <TabItem Header="Sprzedaz miesieczna">
                <Border Background="{StaticResource CardBackgroundLightBrush}" CornerRadius="0,8,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" Padding="15,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Rok:" Style="{StaticResource FilterLabelStyle}"/>
                                <ComboBox x:Name="cmbRokSprzedaz" Style="{StaticResource DarkComboBoxStyle}" Width="80" SelectionChanged="CmbRokSprzedaz_SelectionChanged"/>
                                <TextBlock Text="Miesiac:" Style="{StaticResource FilterLabelStyle}" Margin="20,0,8,0"/>
                                <ComboBox x:Name="cmbMiesiacSprzedaz" Style="{StaticResource DarkComboBoxStyle}" Width="120" SelectionChanged="CmbMiesiacSprzedaz_SelectionChanged"/>
                                <TextBlock Text="Sprzedaz per handlowiec w wybranym miesiacu. Rozwin handlowca aby zobaczyc jego klientow." Style="{StaticResource DescriptionStyle}"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Row="1" Background="{StaticResource CardBackgroundBrush}" Padding="15,10" Margin="0,1,0,0">
                            <TextBlock x:Name="txtSumaSprzedaz" Text="" FontSize="14" FontWeight="Bold" Foreground="{StaticResource AccentOrangeBrush}" HorizontalAlignment="Center"/>
                        </Border>
                        <Grid Grid.Row="3" Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="400"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <lvc:CartesianChart x:Name="chartSprzedaz" Margin="10" LegendLocation="None">
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis x:Name="axisXSprzedaz" ShowLabels="True" FontSize="11" Foreground="#FFFFFF" LabelsRotation="0">
                                            <lvc:Axis.Separator><lvc:Separator StrokeThickness="0"/></lvc:Axis.Separator>
                                        </lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis x:Name="axisYSprzedaz" Title="Wartosc (zl)" MinValue="0" Foreground="#FFFFFF" FontSize="10">
                                            <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                        </lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>
                                <Canvas x:Name="canvasSprzedazAvatary" IsHitTestVisible="False" Margin="10"/>
                            </Grid>
                            <Border Grid.Column="1" Background="#1A1D21" CornerRadius="8" Margin="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="Szczegoly per handlowiec (kliknij aby rozwinac)" FontWeight="Bold" Foreground="#C0392B" Margin="10,10,10,5"/>
                                    <TreeView Grid.Row="1" x:Name="treeSprzedaz" Background="Transparent" BorderThickness="0" Foreground="#FFFFFF"
                                              VirtualizingPanel.IsVirtualizing="True"
                                              VirtualizingPanel.VirtualizationMode="Recycling"
                                              ScrollViewer.IsDeferredScrollingEnabled="True"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Tab: Top 15 odbiorcy -->
            <TabItem Header="Top 15 odbiorcy">
                <Border Background="{StaticResource CardBackgroundLightBrush}" CornerRadius="0,8,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" Padding="15,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Rok:" Style="{StaticResource FilterLabelStyle}"/>
                                <ComboBox x:Name="cmbRokTop10" Style="{StaticResource DarkComboBoxStyle}" Width="80" SelectionChanged="CmbTop10_SelectionChanged"/>
                                <TextBlock Text="Miesiac:" Style="{StaticResource FilterLabelStyle}" Margin="20,0,8,0"/>
                                <ComboBox x:Name="cmbMiesiacTop10" Style="{StaticResource DarkComboBoxStyle}" Width="120" SelectionChanged="CmbTop10_SelectionChanged"/>
                                <TextBlock Text="Towar:" Style="{StaticResource FilterLabelStyle}" Margin="20,0,8,0"/>
                                <ComboBox x:Name="cmbTowarTop10" Style="{StaticResource DarkComboBoxStyle}" Width="250" SelectionChanged="CmbTop10_SelectionChanged"/>
                            </StackPanel>
                        </Border>
                        <!-- Legenda kolorow handlowcow -->
                        <Border Grid.Row="1" Background="{StaticResource CardBackgroundBrush}" Padding="10,8" Margin="0,1,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Legenda: " FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <StackPanel Grid.Column="1" x:Name="panelLegendaTop15" Orientation="Horizontal" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <Border Grid.Row="2" Background="{StaticResource CardBackgroundBrush}" Padding="10,8" Margin="0,1,0,0">
                            <TextBlock x:Name="txtTop10Info" Text="" FontSize="12" Foreground="#FFFFFF" HorizontalAlignment="Center"/>
                        </Border>
                        <Grid Grid.Row="3">
                            <lvc:CartesianChart x:Name="chartTop10" Margin="20" LegendLocation="None">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis x:Name="axisXTop10" Title="Wartosc (zl)" MinValue="0" Foreground="#FFFFFF" FontSize="10">
                                        <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis x:Name="axisYTop10" ShowLabels="True" FontSize="10" Foreground="#FFFFFF" IsMerged="False">
                                        <lvc:Axis.Separator><lvc:Separator StrokeThickness="0" Step="1"/></lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>
                            <Canvas x:Name="canvasTop10Avatary" IsHitTestVisible="False" Margin="20"/>
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Tab: Udzial handlowcow -->
            <TabItem Header="Udzial handlowcow">
                <Border Background="{StaticResource CardBackgroundLightBrush}" CornerRadius="0,8,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" Padding="15,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Od:" Style="{StaticResource FilterLabelStyle}"/>
                                <ComboBox x:Name="cmbRokUdzialOd" Style="{StaticResource DarkComboBoxStyle}" Width="80" SelectionChanged="CmbUdzial_SelectionChanged"/>
                                <ComboBox x:Name="cmbMiesiacUdzialOd" Style="{StaticResource DarkComboBoxStyle}" Width="110" Margin="5,0,0,0" SelectionChanged="CmbUdzial_SelectionChanged"/>
                                <TextBlock Text="Do:" Style="{StaticResource FilterLabelStyle}" Margin="20,0,8,0"/>
                                <ComboBox x:Name="cmbRokUdzialDo" Style="{StaticResource DarkComboBoxStyle}" Width="80" SelectionChanged="CmbUdzial_SelectionChanged"/>
                                <ComboBox x:Name="cmbMiesiacUdzialDo" Style="{StaticResource DarkComboBoxStyle}" Width="110" Margin="5,0,0,0" SelectionChanged="CmbUdzial_SelectionChanged"/>
                                <TextBlock Text="Procentowy udzial kazdego handlowca w sprzedazy w czasie" Style="{StaticResource DescriptionStyle}"/>
                            </StackPanel>
                        </Border>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="180"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <lvc:CartesianChart x:Name="chartUdzial" Margin="20" LegendLocation="None">
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis x:Name="axisXUdzial" ShowLabels="True" FontSize="10" Foreground="#FFFFFF" LabelsRotation="45">
                                            <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                        </lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis x:Name="axisYUdzial" Title="Udzial (%)" MinValue="0" Foreground="#FFFFFF" FontSize="10">
                                            <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                        </lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>
                                <!-- Overlay canvas for avatars on chart -->
                                <Canvas x:Name="canvasUdzialAvatary" IsHitTestVisible="False" Margin="20"/>
                            </Grid>

                            <!-- Legenda z avatarami -->
                            <Border Grid.Column="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Margin="0,20,20,20" Padding="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="HANDLOWCY" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" Margin="0,0,0,8"/>
                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                        <StackPanel x:Name="panelUdzialLegenda"/>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Tab: Analiza cen -->
            <TabItem Header="Analiza cen">
                <Border Background="{StaticResource CardBackgroundLightBrush}" CornerRadius="0,8,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" Padding="15,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Rok:" Style="{StaticResource FilterLabelStyle}"/>
                                <ComboBox x:Name="cmbRokCeny" Style="{StaticResource DarkComboBoxStyle}" Width="80" SelectionChanged="CmbCeny_SelectionChanged"/>
                                <TextBlock Text="Miesiac:" Style="{StaticResource FilterLabelStyle}" Margin="20,0,8,0"/>
                                <ComboBox x:Name="cmbMiesiacCeny" Style="{StaticResource DarkComboBoxStyle}" Width="120" SelectionChanged="CmbCeny_SelectionChanged"/>
                                <TextBlock Text="Towar:" Style="{StaticResource FilterLabelStyle}" Margin="20,0,8,0"/>
                                <ComboBox x:Name="cmbTowarCeny" Style="{StaticResource DarkComboBoxStyle}" Width="250" SelectionChanged="CmbCeny_SelectionChanged"/>
                                <TextBlock Text="Kliknij 2x na handlowca aby otworzyc szczegoly" Style="{StaticResource DescriptionStyle}"/>
                            </StackPanel>
                        </Border>
                        <Grid Grid.Row="1" Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Column="0" Grid.Row="0">
                                <lvc:CartesianChart x:Name="chartCeny" Margin="0,0,10,0" LegendLocation="None">
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis x:Name="axisXCeny" ShowLabels="True" FontSize="11" Foreground="#FFFFFF" LabelsRotation="30">
                                            <lvc:Axis.Separator><lvc:Separator StrokeThickness="0"/></lvc:Axis.Separator>
                                        </lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis x:Name="axisYCeny" Title="Cena (zl/kg)" MinValue="0" Foreground="#FFFFFF" FontSize="10">
                                            <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                        </lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>
                                <Canvas x:Name="canvasCenyAvatary" IsHitTestVisible="False" Margin="0,0,10,0"/>
                            </Grid>
                            <Grid Grid.Column="1" Grid.Row="0">
                                <lvc:CartesianChart x:Name="chartCenyKg" Margin="10,0,0,0" LegendLocation="None">
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis x:Name="axisXCenyKg" ShowLabels="True" FontSize="11" Foreground="#FFFFFF" LabelsRotation="30">
                                            <lvc:Axis.Separator><lvc:Separator StrokeThickness="0"/></lvc:Axis.Separator>
                                        </lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis x:Name="axisYCenyKg" Title="Ilosc (kg)" MinValue="0" Foreground="#FFFFFF" FontSize="10">
                                            <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                        </lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>
                                <Canvas x:Name="canvasCenyKgAvatary" IsHitTestVisible="False" Margin="10,0,0,0"/>
                            </Grid>
                            <!-- Tabela handlowcow - nowoczesny design -->
                            <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#1E2530" CornerRadius="12" Margin="0,12,0,0"
                                    BorderBrush="#3D4A5C" BorderThickness="1">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="4" BlurRadius="12" Opacity="0.3" Direction="270" Color="Black"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Naglowek tabeli -->
                                    <Border Grid.Row="0" Background="#252D3A" CornerRadius="12,12,0,0" Padding="16,12">
                                        <Grid>
                                            <TextBlock Text="ANALIZA HANDLOWCOW" FontSize="14" FontWeight="Bold" Foreground="#F59E0B" VerticalAlignment="Center"/>
                                            <TextBlock Text="Kliknij 2x aby zobaczyc szczegoly" FontSize="11" Foreground="#64748B" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>

                                    <DataGrid Grid.Row="1" x:Name="gridAnalizaCeny" AutoGenerateColumns="False" IsReadOnly="True"
                                          Background="Transparent" BorderThickness="0"
                                          RowBackground="#1E2530" AlternatingRowBackground="#242C3A"
                                          Foreground="#E2E8F0" GridLinesVisibility="None"
                                          HeadersVisibility="Column" CanUserAddRows="False" CanUserDeleteRows="False"
                                          MaxHeight="260" MouseDoubleClick="GridAnalizaCeny_MouseDoubleClick"
                                          VirtualizingPanel.IsVirtualizing="True"
                                          VirtualizingPanel.VirtualizationMode="Recycling"
                                          EnableRowVirtualization="True"
                                          RowHeight="56"
                                          FontSize="15"
                                          AlternationCount="2">
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#2A3444"/>
                                            <Setter Property="Foreground" Value="#94A3B8"/>
                                            <Setter Property="Padding" Value="16,14"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="FontSize" Value="12"/>
                                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                            <Setter Property="BorderBrush" Value="#3B4A5F"/>
                                            <Setter Property="Height" Value="50"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Margin" Value="8,2"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2D3A4F"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#3D4A5F"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.RowStyle>
                                    <DataGrid.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="DataGridCell">
                                                        <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                                                            <ContentPresenter VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </DataGrid.CellStyle>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="HANDLOWIEC" Binding="{Binding Handlowiec}" Width="2.5*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Setter Property="FontSize" Value="15"/>
                                                    <Setter Property="Foreground" Value="#FBBF24"/>
                                                    <Setter Property="Padding" Value="4,0,0,0"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="ILOSC KG" Binding="{Binding SumaKgTekst}" Width="1.3*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="#34D399"/>
                                                    <Setter Property="FontSize" Value="15"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="SR. CENA" Binding="{Binding SredniaCenaTekst}" Width="1.1*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="FontSize" Value="16"/>
                                                    <Setter Property="Foreground" Value="#F8FAFC"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="MIN" Binding="{Binding MinCenaTekst}" Width="0.9*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="#FB7185"/>
                                                    <Setter Property="FontSize" Value="14"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="MAX" Binding="{Binding MaxCenaTekst}" Width="0.9*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="#34D399"/>
                                                    <Setter Property="FontSize" Value="14"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="WARTOSC ZL" Binding="{Binding SumaWartoscTekst}" Width="1.6*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="#FB923C"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="FontSize" Value="16"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="TRANS." Binding="{Binding LiczbaTransakcji}" Width="0.8*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="FontSize" Value="14"/>
                                                    <Setter Property="Foreground" Value="#A78BFA"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="KLIENT." Binding="{Binding LiczbaKontrahentow}" Width="0.8*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="FontSize" Value="14"/>
                                                    <Setter Property="Foreground" Value="#38BDF8"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Tab: Swieze vs Mrozone -->
            <TabItem Header="Swieze vs Mrozone">
                <Border Background="{StaticResource CardBackgroundLightBrush}" CornerRadius="0,8,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" Padding="15,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Rok:" Style="{StaticResource FilterLabelStyle}"/>
                                <ComboBox x:Name="cmbRokSM" Style="{StaticResource DarkComboBoxStyle}" Width="80" SelectionChanged="CmbSM_SelectionChanged"/>
                                <TextBlock Text="Miesiac:" Style="{StaticResource FilterLabelStyle}" Margin="20,0,8,0"/>
                                <ComboBox x:Name="cmbMiesiacSM" Style="{StaticResource DarkComboBoxStyle}" Width="120" SelectionChanged="CmbSM_SelectionChanged"/>
                                <TextBlock Text="Porownanie sprzedazy produktow swiezych i mrozonych" Style="{StaticResource DescriptionStyle}"/>
                            </StackPanel>
                        </Border>
                        <lvc:CartesianChart Grid.Row="1" x:Name="chartSwiezeMrozone" Margin="20">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis x:Name="axisXSM" ShowLabels="True" FontSize="14" Foreground="#FFFFFF">
                                    <lvc:Axis.Separator><lvc:Separator StrokeThickness="0"/></lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis x:Name="axisYSM" Title="Ilosc (kg)" MinValue="0" Foreground="#FFFFFF" FontSize="10">
                                    <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Tab: Porownanie okresow -->
            <TabItem Header="Porownanie okresow">
                <Border Background="{StaticResource CardBackgroundLightBrush}" CornerRadius="0,8,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" Padding="15,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Rok 1:" Style="{StaticResource FilterLabelStyle}"/>
                                <ComboBox x:Name="cmbRokPorown1" Style="{StaticResource DarkComboBoxStyle}" Width="80" SelectionChanged="CmbPorown_SelectionChanged"/>
                                <TextBlock Text="Rok 2:" Style="{StaticResource FilterLabelStyle}" Margin="20,0,8,0"/>
                                <ComboBox x:Name="cmbRokPorown2" Style="{StaticResource DarkComboBoxStyle}" Width="80" SelectionChanged="CmbPorown_SelectionChanged"/>
                                <TextBlock Text="Porownanie sprzedazy rok do roku w poszczegolnych miesiacach" Style="{StaticResource DescriptionStyle}"/>
                            </StackPanel>
                        </Border>
                        <lvc:CartesianChart Grid.Row="1" x:Name="chartPorownanie" Margin="20" LegendLocation="Top">
                            <lvc:CartesianChart.ChartLegend>
                                <lvc:DefaultLegend BulletSize="12" Foreground="#FFFFFF"/>
                            </lvc:CartesianChart.ChartLegend>
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis x:Name="axisXPorown" ShowLabels="True" FontSize="11" Foreground="#FFFFFF">
                                    <lvc:Axis.Separator><lvc:Separator StrokeThickness="0"/></lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis x:Name="axisYPorown" Title="Wartosc (zl)" MinValue="0" Foreground="#FFFFFF" FontSize="10">
                                    <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Tab: Trend sprzedazy -->
            <TabItem Header="Trend sprzedazy">
                <Border Background="{StaticResource CardBackgroundLightBrush}" CornerRadius="0,8,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" Padding="15,10">
