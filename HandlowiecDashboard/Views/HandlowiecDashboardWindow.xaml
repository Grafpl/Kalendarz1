                            <Border Grid.Column="3" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="12" Margin="5,0,0,0">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="MALEJE U" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                                        <TextBlock Text=" (dobrze)" FontSize="9" Foreground="#10B981" FontWeight="Normal"/>
                                    </StackPanel>
                                    <TextBlock x:Name="txtOpakMaleje" Text="0 klientow" FontSize="22" FontWeight="Bold" Foreground="#10B981" Margin="0,3,0,0"/>
                                    <TextBlock x:Name="txtOpakMalejeSuma" Text="-0 szt" FontSize="10" Foreground="#10B981" Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Gorny panel - dwa wykresy slupkowe poziome -->
                        <Grid Grid.Row="2" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Wykres slupkowy per kontrahent (Top 12) -->
                            <Border x:Name="borderChartE2" Grid.Column="0" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="10" Margin="0,0,5,0">
