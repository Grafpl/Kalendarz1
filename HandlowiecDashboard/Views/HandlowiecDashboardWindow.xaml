                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5,0,0,5">
                                        <TextBlock x:Name="txtOpakChartKlienciTytul" Text="SALDO WG KLIENTA (Top 12)" FontSize="12" FontWeight="Bold" Foreground="#8B5CF6"/>
