                                    </StackPanel>
                                    <lvc:CartesianChart Grid.Row="1" x:Name="chartOpakowaniaE2" Margin="0" DataClick="ChartOpakowaniaE2_DataClick"
                                                        AnimationsSpeed="0:0:0.5" Hoverable="True" DisableAnimations="False">
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis x:Name="axisXOpakE2" Title="" MinValue="0" Foreground="#FFFFFF" FontSize="9">
                                                <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
