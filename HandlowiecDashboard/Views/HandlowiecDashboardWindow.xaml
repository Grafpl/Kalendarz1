                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis x:Name="axisXOpakH1" Title="" MinValue="0" Foreground="#FFFFFF" FontSize="9">
                                                <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                            </lvc:Axis>
                                        </lvc:CartesianChart.AxisX>
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis x:Name="axisYOpakH1" ShowLabels="True" FontSize="9" Foreground="#FFFFFF">
                                                <lvc:Axis.Separator><lvc:Separator StrokeThickness="0"/></lvc:Axis.Separator>
