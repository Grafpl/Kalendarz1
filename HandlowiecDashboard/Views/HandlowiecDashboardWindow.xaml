<Window x:Class="Kalendarz1.HandlowiecDashboard.Views.HandlowiecDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Dashboard Handlowca" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen" Background="#1A1D21">

    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#1A1D21"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#252A31"/>
        <SolidColorBrush x:Key="CardBackgroundLightBrush" Color="#2D333B"/>
        <SolidColorBrush x:Key="AccentOrangeBrush" Color="#F4A261"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#8B949E"/>
        <SolidColorBrush x:Key="BorderColorBrush" Color="#30363D"/>
        <SolidColorBrush x:Key="GreenBrush" Color="#4ECDC4"/>
        <SolidColorBrush x:Key="RedBrush" Color="#FF6B6B"/>
        <SolidColorBrush x:Key="YellowBrush" Color="#FFE66D"/>
        <SolidColorBrush x:Key="PurpleBrush" Color="#AA96DA"/>

        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border" Background="{StaticResource CardBackgroundBrush}"
                                Padding="{TemplateBinding Padding}" Margin="0,0,2,0"
                                CornerRadius="8,8,0,0" BorderThickness="1,1,1,0"
                                BorderBrush="{StaticResource BorderColorBrush}">
                            <Grid>
                                <ContentPresenter ContentSource="Header" HorizontalAlignment="Center"/>
                                <!-- Alert badge -->
                                <Border x:Name="alertBadge" Background="#FF6B6B" CornerRadius="8"
                                        MinWidth="16" Height="16" Margin="0,-8,-8,0"
                                        HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Collapsed">
                                    <TextBlock x:Name="alertCount" Text="0" FontSize="9" FontWeight="Bold"
                                               Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource CardBackgroundLightBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentOrangeBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D333B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Background="#000000" BorderBrush="#555555" BorderThickness="1"
                                Focusable="false" IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="#000000" BorderBrush="#555555" BorderThickness="1" CornerRadius="3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="1" Background="#222222" CornerRadius="0,3,3,0">
                                                    <Path Fill="#FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" Content="{TemplateBinding SelectionBoxItem}"
                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" Margin="10,3,23,3" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock"><Setter Property="Foreground" Value="#FFFFFF"/></Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid x:Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="#000000" BorderBrush="#555555" BorderThickness="1"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Padding" Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#333333"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DarkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentOrangeBrush}"/>
            <Setter Property="Foreground" Value="#1A1D21"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SmallButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3D444D"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4D545D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FilterLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <Style x:Key="DescriptionStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Ciemny styl dla DefaultTooltip -->
        <Style TargetType="lvc:DefaultTooltip">
            <Setter Property="Background" Value="#2D333B"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>

        <!-- Styl dla mini kalendarza -->
        <Style x:Key="CalendarDayStyle" TargetType="Border">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Naglowek z panelem powiadomien -->
        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" Padding="20,12"
                BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="40" Height="40" CornerRadius="8" Background="{StaticResource AccentOrangeBrush}" Margin="0,0,12,0">
                        <TextBlock Text="H" FontSize="20" FontWeight="Bold" Foreground="#1A1D21" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Dashboard Handlowca" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Analiza sprzedazy z faktur" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Srodkowa czesc - alert badges podsumowanie -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border x:Name="badgePrzeterminowane" Background="#FF6B6B" CornerRadius="12" Padding="12,4" Margin="5,0" Visibility="Collapsed" Cursor="Hand" MouseDown="BadgePrzeterminowane_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="!" FontWeight="Bold" Foreground="White" Margin="0,0,5,0"/>
                            <TextBlock x:Name="txtBadgePrzeterminowane" Text="0 przeterminowanych" FontSize="11" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    <Border x:Name="badgeOpakowania" Background="#F4A261" CornerRadius="12" Padding="12,4" Margin="5,0" Visibility="Collapsed" Cursor="Hand" MouseDown="BadgeOpakowania_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="!" FontWeight="Bold" Foreground="White" Margin="0,0,5,0"/>
                            <TextBlock x:Name="txtBadgeOpakowania" Text="0 alert. opakowania" FontSize="11" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Przycisk powiadomien -->
                    <Border x:Name="btnNotifications" Background="#3D444D" CornerRadius="5" Padding="10,8" Margin="0,0,12,0" Cursor="Hand" MouseDown="BtnNotifications_Click">
                        <Grid>
                            <TextBlock Text="&#x1F514;" FontSize="16"/>
                            <Border x:Name="notificationBadge" Background="#FF6B6B" CornerRadius="7" Width="14" Height="14"
                                    Margin="0,-10,-10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Collapsed">
                                <TextBlock x:Name="txtNotificationCount" Text="0" FontSize="8" FontWeight="Bold" Foreground="White"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                    <!-- Zapisz/Wczytaj filtry -->
                    <Button x:Name="btnZapiszFiltry" Content="Zapisz filtry" Style="{StaticResource SmallButtonStyle}" Margin="0,0,5,0" Click="BtnZapiszFiltry_Click"/>
                    <Button x:Name="btnWczytajFiltry" Content="Wczytaj" Style="{StaticResource SmallButtonStyle}" Margin="0,0,12,0" Click="BtnWczytajFiltry_Click"/>
                    <Button x:Name="btnOdswiez" Content="Odswiez" Style="{StaticResource DarkButtonStyle}" Click="BtnOdswiez_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Panel powiadomien (popup) -->
        <Popup x:Name="popupNotifications" Placement="Bottom" PlacementTarget="{Binding ElementName=btnNotifications}" StaysOpen="False" AllowsTransparency="True">
            <Border Background="#252A31" BorderBrush="#30363D" BorderThickness="1" CornerRadius="8" Width="350" MaxHeight="400">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="#1A1D21" Padding="12,8" CornerRadius="8,8,0,0">
                        <TextBlock Text="POWIADOMIENIA" FontWeight="Bold" Foreground="#F4A261" FontSize="11"/>
                    </Border>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="350">
                        <StackPanel x:Name="panelNotifications" Margin="8"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Popup>

        <TabControl Grid.Row="1" x:Name="tabControl" Margin="10" SelectionChanged="TabControl_SelectionChanged">

            <!-- Tab: Sprzedaz miesieczna z heatmapa -->
            <TabItem Header="Sprzedaz miesieczna">
                <Border Background="{StaticResource CardBackgroundLightBrush}" CornerRadius="0,8,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" Padding="15,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Rok:" Style="{StaticResource FilterLabelStyle}"/>
                                <ComboBox x:Name="cmbRokSprzedaz" Style="{StaticResource DarkComboBoxStyle}" Width="80" SelectionChanged="CmbRokSprzedaz_SelectionChanged"/>
                                <TextBlock Text="Miesiac:" Style="{StaticResource FilterLabelStyle}" Margin="20,0,8,0"/>
                                <ComboBox x:Name="cmbMiesiacSprzedaz" Style="{StaticResource DarkComboBoxStyle}" Width="120" SelectionChanged="CmbMiesiacSprzedaz_SelectionChanged"/>
                                <TextBlock Text="Sprzedaz per handlowiec w wybranym miesiacu" Style="{StaticResource DescriptionStyle}"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Row="1" Background="{StaticResource CardBackgroundBrush}" Padding="15,10" Margin="0,1,0,0">
                            <TextBlock x:Name="txtSumaSprzedaz" Text="" FontSize="14" FontWeight="Bold" Foreground="{StaticResource AccentOrangeBrush}" HorizontalAlignment="Center"/>
                        </Border>
                        <Grid Grid.Row="2" Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="380"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Wykres glowny -->
                            <lvc:CartesianChart Grid.Column="0" Grid.Row="0" x:Name="chartSprzedaz" Margin="10">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis x:Name="axisXSprzedaz" ShowLabels="True" FontSize="11" Foreground="#FFFFFF" LabelsRotation="0">
                                        <lvc:Axis.Separator><lvc:Separator StrokeThickness="0"/></lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis x:Name="axisYSprzedaz" Title="Wartosc (zl)" MinValue="0" Foreground="#FFFFFF" FontSize="10">
                                        <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>

                            <!-- Heatmapa sprzedazy -->
                            <Border Grid.Column="0" Grid.Row="1" Background="#1A1D21" CornerRadius="8" Padding="10" Margin="10,0,10,10" Height="160">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="HEATMAPA SPRZEDAZY (dni tygodnia)" FontWeight="Bold" Foreground="#F4A261" FontSize="11" Margin="0,0,0,8"/>
                                    <Grid Grid.Row="1" x:Name="gridHeatmap">
                                        <!-- Heatmapa generowana dynamicznie -->
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- Panel szczegolowy z mini kalendarzem -->
                            <Border Grid.Column="1" Grid.RowSpan="2" Background="#1A1D21" CornerRadius="8" Margin="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Mini kalendarz -->
                                    <Border Grid.Row="0" Background="#252A31" CornerRadius="8" Padding="10" Margin="10,10,10,5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" x:Name="txtKalendarzMiesiac" Text="GRUDZIEN 2025" FontWeight="Bold" Foreground="#F4A261" FontSize="10" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                            <!-- Naglowki dni tygodnia -->
                                            <UniformGrid Grid.Row="1" Columns="7" Margin="0,0,0,3">
                                                <TextBlock Text="Pn" FontSize="9" Foreground="#8B949E" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Wt" FontSize="9" Foreground="#8B949E" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Sr" FontSize="9" Foreground="#8B949E" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Cz" FontSize="9" Foreground="#8B949E" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Pt" FontSize="9" Foreground="#8B949E" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Sb" FontSize="9" Foreground="#8B949E" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Nd" FontSize="9" Foreground="#8B949E" HorizontalAlignment="Center"/>
                                            </UniformGrid>
                                            <UniformGrid Grid.Row="2" x:Name="gridKalendarz" Columns="7">
                                                <!-- Dni generowane dynamicznie -->
                                            </UniformGrid>
                                        </Grid>
                                    </Border>

                                    <TextBlock Grid.Row="1" Text="SZCZEGOLY (kliknij aby rozwinac)" FontWeight="Bold" Foreground="#F4A261" Margin="10,10,10,5" FontSize="11"/>
                                    <TreeView Grid.Row="2" x:Name="treeSprzedaz" Background="Transparent" BorderThickness="0" Foreground="#FFFFFF" Margin="5,0,5,10"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Tab: Top 10 odbiorcy -->
            <TabItem Header="Top 10 odbiorcy">
                <Border Background="{StaticResource CardBackgroundLightBrush}" CornerRadius="0,8,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" Padding="15,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Rok:" Style="{StaticResource FilterLabelStyle}"/>
                                <ComboBox x:Name="cmbRokTop10" Style="{StaticResource DarkComboBoxStyle}" Width="80" SelectionChanged="CmbTop10_SelectionChanged"/>
                                <TextBlock Text="Miesiac:" Style="{StaticResource FilterLabelStyle}" Margin="20,0,8,0"/>
                                <ComboBox x:Name="cmbMiesiacTop10" Style="{StaticResource DarkComboBoxStyle}" Width="120" SelectionChanged="CmbTop10_SelectionChanged"/>
                                <TextBlock Text="Towar:" Style="{StaticResource FilterLabelStyle}" Margin="20,0,8,0"/>
                                <ComboBox x:Name="cmbTowarTop10" Style="{StaticResource DarkComboBoxStyle}" Width="250" SelectionChanged="CmbTop10_SelectionChanged"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Row="1" Background="{StaticResource CardBackgroundBrush}" Padding="10,8" Margin="0,1,0,0">
                            <TextBlock x:Name="txtTop10Info" Text="" FontSize="12" Foreground="#FFFFFF" HorizontalAlignment="Center"/>
                        </Border>
                        <Grid Grid.Row="2" Margin="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="300"/>
                            </Grid.ColumnDefinitions>
                            <lvc:CartesianChart Grid.Column="0" x:Name="chartTop10">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis x:Name="axisXTop10" Title="Wartosc (zl)" MinValue="0" Foreground="#FFFFFF" FontSize="10">
                                        <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis x:Name="axisYTop10" ShowLabels="True" FontSize="10" Foreground="#FFFFFF">
                                        <lvc:Axis.Separator><lvc:Separator StrokeThickness="0"/></lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>
                            <!-- Panel ze sparklines -->
                            <Border Grid.Column="1" Background="#1A1D21" CornerRadius="8" Padding="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="TREND 6 MIESIECY" FontWeight="Bold" Foreground="#F4A261" FontSize="11" Margin="0,0,0,10"/>
                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                        <StackPanel x:Name="panelSparklines">
                                            <!-- Sparklines generowane dynamicznie -->
                                        </StackPanel>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Tab: Udzial handlowcow -->
            <TabItem Header="Udzial handlowcow">
                <Border Background="{StaticResource CardBackgroundLightBrush}" CornerRadius="0,8,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" Padding="15,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Od:" Style="{StaticResource FilterLabelStyle}"/>
                                <ComboBox x:Name="cmbRokUdzialOd" Style="{StaticResource DarkComboBoxStyle}" Width="80" SelectionChanged="CmbUdzial_SelectionChanged"/>
                                <ComboBox x:Name="cmbMiesiacUdzialOd" Style="{StaticResource DarkComboBoxStyle}" Width="110" Margin="5,0,0,0" SelectionChanged="CmbUdzial_SelectionChanged"/>
                                <TextBlock Text="Do:" Style="{StaticResource FilterLabelStyle}" Margin="20,0,8,0"/>
                                <ComboBox x:Name="cmbRokUdzialDo" Style="{StaticResource DarkComboBoxStyle}" Width="80" SelectionChanged="CmbUdzial_SelectionChanged"/>
                                <ComboBox x:Name="cmbMiesiacUdzialDo" Style="{StaticResource DarkComboBoxStyle}" Width="110" Margin="5,0,0,0" SelectionChanged="CmbUdzial_SelectionChanged"/>
                                <TextBlock Text="Procentowy udzial kazdego handlowca w sprzedazy w czasie" Style="{StaticResource DescriptionStyle}"/>
                            </StackPanel>
                        </Border>
                        <lvc:CartesianChart Grid.Row="1" x:Name="chartUdzial" Margin="20" LegendLocation="None">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis x:Name="axisXUdzial" ShowLabels="True" FontSize="10" Foreground="#FFFFFF" LabelsRotation="45">
                                    <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis x:Name="axisYUdzial" Title="Udzial (%)" MinValue="0" Foreground="#FFFFFF" FontSize="10">
                                    <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Tab: Analiza cen -->
            <TabItem Header="Analiza cen">
                <Border Background="{StaticResource CardBackgroundLightBrush}" CornerRadius="0,8,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" Padding="15,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Rok:" Style="{StaticResource FilterLabelStyle}"/>
                                <ComboBox x:Name="cmbRokCeny" Style="{StaticResource DarkComboBoxStyle}" Width="80" SelectionChanged="CmbCeny_SelectionChanged"/>
                                <TextBlock Text="Miesiac:" Style="{StaticResource FilterLabelStyle}" Margin="20,0,8,0"/>
