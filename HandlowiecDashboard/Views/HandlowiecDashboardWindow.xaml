            <!-- Tab: Saldo opakowan - rozbudowane -->
            <TabItem Header="Opakowania">
                <Border Background="{StaticResource CardBackgroundLightBrush}" CornerRadius="0,8,8,8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Filtry -->
                            <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15,10" Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Handlowiec:" Style="{StaticResource FilterLabelStyle}"/>
                                    <ComboBox x:Name="cmbHandlowiecOpak" Style="{StaticResource DarkComboBoxStyle}" Width="150" SelectionChanged="CmbOpakowania_SelectionChanged"/>
                                    <TextBlock Text="Saldo opakowan - Pojemniki E2 i Palety H1 (dodatnie = u klienta)" Style="{StaticResource DescriptionStyle}" Margin="20,0,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Karty statystyk -->
                            <Grid Grid.Row="1" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="0,0,5,0">
                                    <StackPanel>
                                        <TextBlock Text="POJEMNIKI E2" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                                        <TextBlock x:Name="txtOpakE2Aktualne" Text="0" FontSize="28" FontWeight="Bold" Foreground="#4ECDC4" Margin="0,5,0,0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock x:Name="txtOpakE2Zmiana" Text="" FontSize="12" Foreground="#8B949E"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="5,0,5,0">
                                    <StackPanel>
                                        <TextBlock Text="PALETY H1" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                                        <TextBlock x:Name="txtOpakH1Aktualne" Text="0" FontSize="28" FontWeight="Bold" Foreground="#F4A261" Margin="0,5,0,0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock x:Name="txtOpakH1Zmiana" Text="" FontSize="12" Foreground="#8B949E"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="5,0,5,0">
                                    <StackPanel>
                                        <TextBlock x:Name="txtOpakOstatniaNiedzielaData" Text="OSTATNIA NIEDZIELA" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="E2: " FontSize="14" Foreground="#FFFFFF"/>
                                            <TextBlock x:Name="txtOpakE2Niedziela1" Text="0" FontSize="14" FontWeight="Bold" Foreground="#4ECDC4"/>
                                            <TextBlock Text="  H1: " FontSize="14" Foreground="#FFFFFF" Margin="10,0,0,0"/>
                                            <TextBlock x:Name="txtOpakH1Niedziela1" Text="0" FontSize="14" FontWeight="Bold" Foreground="#F4A261"/>
                                        </StackPanel>
                                        <TextBlock x:Name="txtOpakRazemNiedziela1" Text="Razem: 0" FontSize="12" Foreground="#8B949E" Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="3" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="5,0,0,0">
                                    <StackPanel>
                                        <TextBlock x:Name="txtOpakPoprzedniaNiedzielaData" Text="POPRZEDNIA NIEDZIELA" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="E2: " FontSize="14" Foreground="#FFFFFF"/>
                                            <TextBlock x:Name="txtOpakE2Niedziela2" Text="0" FontSize="14" FontWeight="Bold" Foreground="#4ECDC4"/>
                                            <TextBlock Text="  H1: " FontSize="14" Foreground="#FFFFFF" Margin="10,0,0,0"/>
                                            <TextBlock x:Name="txtOpakH1Niedziela2" Text="0" FontSize="14" FontWeight="Bold" Foreground="#F4A261"/>
                                        </StackPanel>
                                        <TextBlock x:Name="txtOpakRazemNiedziela2" Text="Razem: 0" FontSize="12" Foreground="#8B949E" Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Wykres waterfall + Area chart -->
                            <Grid Grid.Row="2" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Wykres Waterfall (bilans) -->
                                <Border Grid.Column="0" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="10" Margin="0,0,5,0" Height="180">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="BILANS OPAKOWAN (wydane - zwrocone)" FontWeight="Bold" Foreground="#F4A261" FontSize="11" Margin="0,0,0,5"/>
                                        <lvc:CartesianChart Grid.Row="1" x:Name="chartWaterfall">
                                            <lvc:CartesianChart.AxisX>
                                                <lvc:Axis x:Name="axisXWaterfall" ShowLabels="True" FontSize="10" Foreground="#FFFFFF">
                                                    <lvc:Axis.Separator><lvc:Separator StrokeThickness="0"/></lvc:Axis.Separator>
                                                </lvc:Axis>
                                            </lvc:CartesianChart.AxisX>
                                            <lvc:CartesianChart.AxisY>
                                                <lvc:Axis x:Name="axisYWaterfall" Foreground="#FFFFFF" FontSize="9">
                                                    <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                                </lvc:Axis>
                                            </lvc:CartesianChart.AxisY>
                                        </lvc:CartesianChart>
                                    </Grid>
                                </Border>

                                <!-- Area chart trend -->
                                <Border Grid.Column="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="10" Margin="5,0,0,0" Height="180">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="TREND TYGODNIOWY (area chart)" FontWeight="Bold" Foreground="#F4A261" FontSize="11" Margin="0,0,0,5"/>
                                        <lvc:CartesianChart Grid.Row="1" x:Name="chartOpakowaniaArea">
                                            <lvc:CartesianChart.AxisX>
                                                <lvc:Axis x:Name="axisXOpakArea" ShowLabels="True" FontSize="10" Foreground="#FFFFFF">
                                                    <lvc:Axis.Separator><lvc:Separator StrokeThickness="0"/></lvc:Axis.Separator>
                                                </lvc:Axis>
                                            </lvc:CartesianChart.AxisX>
                                            <lvc:CartesianChart.AxisY>
                                                <lvc:Axis x:Name="axisYOpakArea" Foreground="#FFFFFF" FontSize="9" MinValue="0">
                                                    <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                                </lvc:Axis>
                                            </lvc:CartesianChart.AxisY>
                                        </lvc:CartesianChart>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!-- Mapa cieplna zwrotow + alerty -->
                            <Grid Grid.Row="3" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="300"/>
                                </Grid.ColumnDefinitions>

                                <!-- Mapa cieplna -->
                                <Border Grid.Column="0" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="10" Margin="0,0,5,0" Height="150">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="MAPA CIEPLNA ZWROTOW (kolor = opoznienie w zwrotach)" FontWeight="Bold" Foreground="#F4A261" FontSize="11" Margin="0,0,0,5"/>
                                        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                            <StackPanel x:Name="panelHeatmapZwroty" Orientation="Vertical">
                                                <!-- Generowane dynamicznie -->
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Grid>
                                </Border>

                                <!-- Alerty opakowaniowe -->
                                <Border Grid.Column="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="10" Margin="5,0,0,0" Height="150">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="ALERTY OPAKOWANIOWE" FontWeight="Bold" Foreground="#FF6B6B" FontSize="11"/>
                                            <Border x:Name="alertOpakCount" Background="#FF6B6B" CornerRadius="8" MinWidth="20" Height="16" Margin="8,0,0,0">
                                                <TextBlock x:Name="txtAlertOpakCount" Text="0" FontSize="9" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                            <StackPanel x:Name="panelAlertyOpakowania">
                                                <!-- Generowane dynamicznie -->
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!-- Stare wykresy slupkowe -->
                            <Border Grid.Row="4" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="10" Margin="0,0,0,10" Height="150">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <lvc:CartesianChart Grid.Column="0" x:Name="chartOpakowaniaE2" Margin="5">
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis x:Name="axisXOpakE2" ShowLabels="True" FontSize="10" Foreground="#FFFFFF">
                                                <lvc:Axis.Separator><lvc:Separator StrokeThickness="0"/></lvc:Axis.Separator>
                                            </lvc:Axis>
                                        </lvc:CartesianChart.AxisX>
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis x:Name="axisYOpakE2" Title="E2" Foreground="#4ECDC4" FontSize="10" MinValue="0">
                                                <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                            </lvc:Axis>
                                        </lvc:CartesianChart.AxisY>
                                    </lvc:CartesianChart>
                                    <lvc:CartesianChart Grid.Column="1" x:Name="chartOpakowaniaH1" Margin="5">
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis x:Name="axisXOpakH1" ShowLabels="True" FontSize="10" Foreground="#FFFFFF">
                                                <lvc:Axis.Separator><lvc:Separator StrokeThickness="0"/></lvc:Axis.Separator>
                                            </lvc:Axis>
                                        </lvc:CartesianChart.AxisX>
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis x:Name="axisYOpakH1" Title="H1" Foreground="#F4A261" FontSize="10" MinValue="0">
                                                <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                            </lvc:Axis>
                                        </lvc:CartesianChart.AxisY>
                                    </lvc:CartesianChart>
                                </Grid>
                            </Border>

                            <!-- Tabela -->
                            <DataGrid Grid.Row="5" x:Name="gridOpakowania" AutoGenerateColumns="False" IsReadOnly="True"
                                      Background="Transparent" BorderThickness="0"
                                      RowBackground="#252A31" AlternatingRowBackground="#2D333B"
                                      Foreground="#FFFFFF" GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#30363D"
                                      HeadersVisibility="Column" CanUserAddRows="False" CanUserDeleteRows="False" MaxHeight="250">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#1A1D21"/>
                                        <Setter Property="Foreground" Value="#F4A261"/>
                                        <Setter Property="Padding" Value="10,8"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                        <Setter Property="BorderBrush" Value="#30363D"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Kontrahent" Binding="{Binding Kontrahent}" Width="220"/>
                                    <DataGridTextColumn Header="Handlowiec" Binding="{Binding Handlowiec}" Width="120"/>
                                    <DataGridTextColumn Header="E2 Teraz" Binding="{Binding PojemnikiE2, StringFormat=N0}" Width="90">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Foreground" Value="#4ECDC4"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="E2 Zm.Tydz" Binding="{Binding ZmianaE2Tydzien, StringFormat=N0}" Width="90">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ZmianaE2TydzienAlert}" Value="True">
                                                        <Setter Property="Foreground" Value="#FF6B6B"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ZmianaE2TydzienGood}" Value="True">
                                                        <Setter Property="Foreground" Value="#4ECDC4"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="H1 Teraz" Binding="{Binding PaletaH1, StringFormat=N0}" Width="90">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Foreground" Value="#F4A261"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="H1 Zm.Tydz" Binding="{Binding ZmianaH1Tydzien, StringFormat=N0}" Width="90">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ZmianaH1TydzienAlert}" Value="True">
                                                        <Setter Property="Foreground" Value="#FF6B6B"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ZmianaH1TydzienGood}" Value="True">
                                                        <Setter Property="Foreground" Value="#4ECDC4"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Razem" Binding="{Binding Razem, StringFormat=N0}" Width="90">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </ScrollViewer>
                </Border>
            </TabItem>

            <!-- Tab: Platnosci - rozbudowane -->
            <TabItem Header="Platnosci">
                <Border Background="{StaticResource CardBackgroundLightBrush}" CornerRadius="0,8,8,8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Filtry -->
                            <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15,10" Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Handlowiec:" Style="{StaticResource FilterLabelStyle}"/>
                                    <ComboBox x:Name="cmbHandlowiecPlat" Style="{StaticResource DarkComboBoxStyle}" Width="150" SelectionChanged="CmbPlatnosci_SelectionChanged"/>
                                    <TextBlock Text="Kompleksowy przeglad platnosci i naleznosci" Style="{StaticResource DescriptionStyle}" Margin="20,0,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Glowne karty statystyk -->
                            <Grid Grid.Row="1" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="12" Margin="0,0,5,0">
                                    <StackPanel>
                                        <TextBlock Text="DO ZAPLATY" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                                        <TextBlock x:Name="txtPlatSumaDoZaplaty" Text="0 zl" FontSize="22" FontWeight="Bold" Foreground="#FFFFFF" Margin="0,3,0,0"/>
                                        <TextBlock x:Name="txtPlatIloscKlientow" Text="0 klientow" FontSize="11" Foreground="#8B949E" Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="12" Margin="5,0,5,0">
                                    <StackPanel>
                                        <TextBlock Text="TERMINOWE" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                                        <TextBlock x:Name="txtPlatTerminowe" Text="0 zl" FontSize="22" FontWeight="Bold" Foreground="#4ECDC4" Margin="0,3,0,0"/>
                                        <TextBlock x:Name="txtPlatTerminoweProcent" Text="0%" FontSize="11" Foreground="#4ECDC4" Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="12" Margin="5,0,5,0">
                                    <StackPanel>
                                        <TextBlock Text="PRZETERMINOWANE" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                                        <TextBlock x:Name="txtPlatPrzeterminowane" Text="0 zl" FontSize="22" FontWeight="Bold" Foreground="#FF6B6B" Margin="0,3,0,0"/>
                                        <TextBlock x:Name="txtPlatPrzeterminowaneProcent" Text="0% (0 klientow)" FontSize="11" Foreground="#FF6B6B" Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="3" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="12" Margin="5,0,5,0">
                                    <StackPanel>
                                        <TextBlock Text="PRZEKR. LIMIT" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                                        <TextBlock x:Name="txtPlatPrzekroczony" Text="0 zl" FontSize="22" FontWeight="Bold" Foreground="#F4A261" Margin="0,3,0,0"/>
                                        <TextBlock x:Name="txtPlatPrzekroczonyIlosc" Text="0 klientow" FontSize="11" Foreground="#F4A261" Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="4" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="12" Margin="5,0,0,0">
                                    <StackPanel>
                                        <TextBlock Text="MAX DNI PRZET." FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                                        <TextBlock x:Name="txtPlatMaxDni" Text="0 dni" FontSize="22" FontWeight="Bold" Foreground="#AA96DA" Margin="0,3,0,0"/>
                                        <TextBlock x:Name="txtPlatMaxDniKlient" Text="" FontSize="10" Foreground="#8B949E" Margin="0,3,0,0" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Donut chart + Aging Analysis -->
                            <Grid Grid.Row="2" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Donut chart -->
                                <Border Grid.Column="0" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="10" Margin="0,0,5,0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="STRUKTURA NALEZNOSCI" FontWeight="Bold" Foreground="#F4A261" FontSize="11" Margin="0,0,0,5"/>
                                        <lvc:PieChart Grid.Row="1" x:Name="chartDonutPlatnosci" LegendLocation="Bottom" InnerRadius="50" Hoverable="True">
                                            <lvc:PieChart.ChartLegend>
                                                <lvc:DefaultLegend BulletSize="10" Foreground="#FFFFFF"/>
                                            </lvc:PieChart.ChartLegend>
                                        </lvc:PieChart>
                                    </Grid>
                                </Border>

                                <!-- Aging Analysis -->
                                <Border Grid.Column="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="5,0,0,0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="ANALIZA WIEKOWA NALEZNOSCI" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" Margin="0,0,0,10"/>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Background="#1A1D21" CornerRadius="5" Padding="10" Margin="0,0,5,0">
                                                <StackPanel HorizontalAlignment="Center">
                                                    <TextBlock Text="0-30 dni" FontSize="11" Foreground="#4ECDC4" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                    <TextBlock x:Name="txtAging030" Text="0 zl" FontSize="16" FontWeight="Bold" Foreground="#4ECDC4" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                                                    <TextBlock x:Name="txtAging030Procent" Text="0%" FontSize="10" Foreground="#8B949E" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Grid.Column="1" Background="#1A1D21" CornerRadius="5" Padding="10" Margin="5,0,5,0">
                                                <StackPanel HorizontalAlignment="Center">
                                                    <TextBlock Text="31-60 dni" FontSize="11" Foreground="#FFE66D" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                    <TextBlock x:Name="txtAging3160" Text="0 zl" FontSize="16" FontWeight="Bold" Foreground="#FFE66D" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                                                    <TextBlock x:Name="txtAging3160Procent" Text="0%" FontSize="10" Foreground="#8B949E" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Grid.Column="2" Background="#1A1D21" CornerRadius="5" Padding="10" Margin="5,0,5,0">
                                                <StackPanel HorizontalAlignment="Center">
                                                    <TextBlock Text="61-90 dni" FontSize="11" Foreground="#F4A261" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                    <TextBlock x:Name="txtAging6190" Text="0 zl" FontSize="16" FontWeight="Bold" Foreground="#F4A261" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                                                    <TextBlock x:Name="txtAging6190Procent" Text="0%" FontSize="10" Foreground="#8B949E" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Grid.Column="3" Background="#1A1D21" CornerRadius="5" Padding="10" Margin="5,0,0,0">
                                                <StackPanel HorizontalAlignment="Center">
                                                    <TextBlock Text="90+ dni" FontSize="11" Foreground="#FF6B6B" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                    <TextBlock x:Name="txtAging90Plus" Text="0 zl" FontSize="16" FontWeight="Bold" Foreground="#FF6B6B" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                                                    <TextBlock x:Name="txtAging90PlusProcent" Text="0%" FontSize="10" Foreground="#8B949E" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!-- Timeline platnosci + Top dluznicy -->
                            <Grid Grid.Row="3" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="350"/>
                                </Grid.ColumnDefinitions>

                                <!-- Timeline platnosci -->
                                <Border Grid.Column="0" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="10" Margin="0,0,5,0" Height="180">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="TIMELINE PLATNOSCI (nadchodzace terminy)" FontWeight="Bold" Foreground="#F4A261" FontSize="11" Margin="0,0,0,8"/>
                                        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                            <StackPanel x:Name="panelTimeline" Orientation="Horizontal">
                                                <!-- Generowane dynamicznie -->
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Grid>
                                </Border>

                                <!-- Top dluznicy -->
                                <Border Grid.Column="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="10" Margin="5,0,0,0" Height="180">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="150"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="TOP 5 DLUZNICY" FontWeight="Bold" Foreground="#F4A261" FontSize="11" Margin="0,0,0,5"/>
                                        <lvc:CartesianChart Grid.Row="1" Grid.Column="0" x:Name="chartTopDluznicy">
                                            <lvc:CartesianChart.AxisX>
                                                <lvc:Axis x:Name="axisXDluznicy" MinValue="0" Foreground="#FFFFFF" FontSize="9">
                                                    <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                                </lvc:Axis>
                                            </lvc:CartesianChart.AxisX>
                                            <lvc:CartesianChart.AxisY>
                                                <lvc:Axis x:Name="axisYDluznicy" ShowLabels="True" FontSize="9" Foreground="#FFFFFF">
                                                    <lvc:Axis.Separator><lvc:Separator StrokeThickness="0"/></lvc:Axis.Separator>
                                                </lvc:Axis>
                                            </lvc:CartesianChart.AxisY>
                                        </lvc:CartesianChart>
                                        <Border Grid.Row="1" Grid.Column="1" Background="#1A1D21" CornerRadius="5" Padding="8">
                                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                <StackPanel x:Name="panelTopDluznicy"/>
                                            </ScrollViewer>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!-- Tabela -->
                            <DataGrid Grid.Row="5" x:Name="gridPlatnosci" AutoGenerateColumns="False" IsReadOnly="True"
                                      Background="Transparent" BorderThickness="0"
                                      RowBackground="#252A31" AlternatingRowBackground="#2D333B"
                                      Foreground="#FFFFFF" GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#30363D"
                                      HeadersVisibility="Column" CanUserAddRows="False" CanUserDeleteRows="False" MaxHeight="200">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#1A1D21"/>
                                        <Setter Property="Foreground" Value="#F4A261"/>
                                        <Setter Property="Padding" Value="8,6"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                        <Setter Property="BorderBrush" Value="#30363D"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Kontrahent" Binding="{Binding Kontrahent}" Width="180"/>
                                    <DataGridTextColumn Header="Handlowiec" Binding="{Binding Handlowiec}" Width="100"/>
                                    <DataGridTextColumn Header="Limit" Binding="{Binding LimitKredytu, StringFormat=N0}" Width="85">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Do zaplaty" Binding="{Binding DoZaplaty, StringFormat=N0}" Width="95">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Terminowe" Binding="{Binding Terminowe, StringFormat=N0}" Width="90">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Foreground" Value="#4ECDC4"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Przetermin." Binding="{Binding Przeterminowane, StringFormat=N0}" Width="95">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding PrzeterminowaneAlert}" Value="True">
                                                        <Setter Property="Foreground" Value="#FF6B6B"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Przekr.Lim" Binding="{Binding PrzekroczonyLimit, StringFormat=N0}" Width="85">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding PrzekroczonyLimitAlert}" Value="True">
                                                        <Setter Property="Foreground" Value="#FF6B6B"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Dni" Binding="{Binding DniPrzeterminowania}" Width="50">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding PrzeterminowaneAlert}" Value="True">
                                                        <Setter Property="Foreground" Value="#FF6B6B"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Kategoria" Binding="{Binding KategoriaWiekowa}" Width="80">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="FontSize" Value="10"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </ScrollViewer>
                </Border>
            </TabItem>

        </TabControl>

        <Border Grid.RowSpan="2" Background="#CC1A1D21" x:Name="loadingOverlay" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="{StaticResource AccentOrangeBrush}"/>
                <TextBlock Text="Ladowanie danych..." FontSize="14" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,15,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
