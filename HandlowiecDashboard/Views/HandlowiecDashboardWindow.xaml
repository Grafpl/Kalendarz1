<Window x:Class="Kalendarz1.HandlowiecDashboard.Views.HandlowiecDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Dashboard Handlowca" Height="950" Width="1600"
        WindowStartupLocation="CenterScreen" Background="#1A1D21">

    <Window.Resources>
        <!-- Kolory ciemnego motywu -->
        <Color x:Key="BackgroundDark">#1A1D21</Color>
        <Color x:Key="CardBackground">#252A31</Color>
        <Color x:Key="CardBackgroundLight">#2D333B</Color>
        <Color x:Key="AccentOrange">#F4A261</Color>
        <Color x:Key="AccentBlue">#4EA8DE</Color>
        <Color x:Key="AccentGreen">#27AE60</Color>
        <Color x:Key="AccentRed">#E74C3C</Color>
        <Color x:Key="TextPrimary">#FFFFFF</Color>
        <Color x:Key="TextSecondary">#8B949E</Color>
        <Color x:Key="BorderColor">#30363D</Color>

        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
        <SolidColorBrush x:Key="CardBackgroundLightBrush" Color="{StaticResource CardBackgroundLight}"/>
        <SolidColorBrush x:Key="AccentOrangeBrush" Color="{StaticResource AccentOrange}"/>
        <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}"/>
        <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreen}"/>
        <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRed}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
        <SolidColorBrush x:Key="BorderColorBrush" Color="{StaticResource BorderColor}"/>

        <!-- Style KPI Card Maly (30 Day Summary) -->
        <Style x:Key="KpiCardSmallStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Style Section Card -->
        <Style x:Key="SectionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Style naglowka sekcji -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Style KPI Value Big -->
        <Style x:Key="KpiValueBigStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>

        <!-- Style KPI Value Small -->
        <Style x:Key="KpiValueSmallStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>

        <!-- Style KPI label -->
        <Style x:Key="KpiLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>

        <!-- Style zmiana pozytywna -->
        <Style x:Key="ChangePositiveStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}"/>
        </Style>

        <!-- Style zmiana negatywna -->
        <Style x:Key="ChangeNegativeStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
        </Style>

        <!-- DataGrid Style Dark -->
        <Style x:Key="DarkDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="#1F2428"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="28"/>
        </Style>

        <Style x:Key="DarkDataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#1F2428"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColorBrush}"/>
        </Style>

        <Style x:Key="DarkDataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#30363D"/>
                    <Setter Property="Foreground" Value="{StaticResource AccentOrangeBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox Dark Style -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource CardBackgroundLightBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Button Dark Style -->
        <Style x:Key="DarkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentOrangeBrush}"/>
            <Setter Property="Foreground" Value="#1A1D21"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Naglowek -->
        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" Padding="20,12" BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="40" Height="40" CornerRadius="8" Background="{StaticResource AccentOrangeBrush}" Margin="0,0,12,0">
                        <TextBlock Text="H" FontSize="20" FontWeight="Bold" Foreground="#1A1D21" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Dashboard Handlowca" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Analiza sprzedazy i relacji z klientami" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Handlowiec:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                    <ComboBox x:Name="cmbHandlowiec" Width="180" Height="32" SelectionChanged="CmbHandlowiec_SelectionChanged" Style="{StaticResource DarkComboBoxStyle}"/>
                    <Button x:Name="btnOdswiez" Content="Odswiez" Margin="12,0,0,0" Style="{StaticResource DarkButtonStyle}" Click="BtnOdswiez_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Gorny panel: Sprzedaz dzienna + 30 Day Summary -->
        <Grid Grid.Row="1" Margin="10,10,10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sprzedaz dzienna (Sales by Day) -->
            <Border Grid.Column="0" Style="{StaticResource SectionCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Sprzedaz dzienna" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        <TextBlock x:Name="txtSprzedazDziennaWartosc" Text="" FontSize="18" FontWeight="Bold" Foreground="{StaticResource AccentOrangeBrush}" Margin="15,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtSprzedazDziennaZmiana" Text="" FontSize="11" Foreground="{StaticResource AccentGreenBrush}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <lvc:CartesianChart Grid.Row="1" x:Name="chartDzienne" Margin="0,5,0,0" MinHeight="140">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis x:Name="axisXDzienne" ShowLabels="True" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}">
                                <lvc:Axis.Separator>
                                    <lvc:Separator StrokeThickness="0"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis MinValue="0" Foreground="{StaticResource TextSecondaryBrush}" FontSize="9">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Stroke="#30363D" StrokeThickness="1"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </Grid>
            </Border>

            <!-- Sprzedaz wg Regionu (Top 10 Wojewodztw) -->
            <Border Grid.Column="1" Style="{StaticResource SectionCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Sprzedaz wg Regionu (Top 10)" Style="{StaticResource SectionHeaderStyle}"/>

                    <DataGrid Grid.Row="1" x:Name="dgRegiony" Style="{StaticResource DarkDataGridStyle}"
                              ColumnHeaderStyle="{StaticResource DarkDataGridHeaderStyle}"
                              CellStyle="{StaticResource DarkDataGridCellStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Woj." Binding="{Binding Wojewodztwo}" Width="*" MinWidth="80"/>
                            <DataGridTextColumn Header="Wartosc" Binding="{Binding WartoscTekst}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- 30 Day Summary -->
        <Border Grid.Row="2" Background="{StaticResource CardBackgroundBrush}" Margin="10,5" Padding="15,10" CornerRadius="8" BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Podsumowanie 30 dni" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" Margin="0,0,30,0"/>

                <UniformGrid Grid.Column="1" Columns="5">
                    <!-- Sprzedaz -->
                    <Border Style="{StaticResource KpiCardSmallStyle}">
                        <StackPanel>
                            <TextBlock x:Name="txt30Sprzedaz" Text="0 zl" Style="{StaticResource KpiValueSmallStyle}"/>
                            <TextBlock Text="Sprzedaz" Style="{StaticResource KpiLabelStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Zamowienia -->
                    <Border Style="{StaticResource KpiCardSmallStyle}">
                        <StackPanel>
                            <TextBlock x:Name="txt30Zamowienia" Text="0" Style="{StaticResource KpiValueSmallStyle}"/>
                            <TextBlock Text="Zamowienia" Style="{StaticResource KpiLabelStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Anulowane -->
                    <Border Style="{StaticResource KpiCardSmallStyle}">
                        <StackPanel>
                            <TextBlock x:Name="txt30Anulowane" Text="0" Style="{StaticResource KpiValueSmallStyle}"/>
                            <TextBlock Text="Anulowane" Style="{StaticResource KpiLabelStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Srednia wartosc -->
                    <Border Style="{StaticResource KpiCardSmallStyle}">
                        <StackPanel>
                            <TextBlock x:Name="txt30Srednia" Text="0 zl" Style="{StaticResource KpiValueSmallStyle}"/>
                            <TextBlock Text="Sr. zamowienie" Style="{StaticResource KpiLabelStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Srednia cena/kg -->
                    <Border Style="{StaticResource KpiCardSmallStyle}">
                        <StackPanel>
                            <TextBlock x:Name="txt30CenaKg" Text="0 zl/kg" Style="{StaticResource KpiValueSmallStyle}"/>
                            <TextBlock Text="Sr. cena/kg" Style="{StaticResource KpiLabelStyle}"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </Grid>
        </Border>

        <!-- Srodkowy panel: Trend miesieczny + Typ dostawy + Top Odbiorcy -->
        <Grid Grid.Row="3" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Trend miesieczny (12 mies) -->
            <Border Grid.Column="0" Style="{StaticResource SectionCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <TextBlock Text="Trend sprzedazy i reklamy" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        <TextBlock x:Name="txtTrendWartosc" Text="" FontSize="14" FontWeight="Bold" Foreground="{StaticResource AccentOrangeBrush}" Margin="15,0,5,0"/>
                        <TextBlock x:Name="txtTrendZmiana" Text="" FontSize="11" Foreground="{StaticResource AccentGreenBrush}" VerticalAlignment="Bottom" Margin="0,0,0,2"/>
                    </StackPanel>

                    <lvc:CartesianChart Grid.Row="1" x:Name="chartTrend" Margin="0,10,0,0">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis x:Name="axisXTrend" ShowLabels="True" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}">
                                <lvc:Axis.Separator>
                                    <lvc:Separator StrokeThickness="0"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="" MinValue="0" Foreground="{StaticResource TextSecondaryBrush}" FontSize="9">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Stroke="#30363D" StrokeThickness="1"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </Grid>
            </Border>

            <!-- Typ dostawy (Pie Chart) -->
            <Border Grid.Column="1" Style="{StaticResource SectionCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Typ dostawy" Style="{StaticResource SectionHeaderStyle}"/>

                    <lvc:PieChart Grid.Row="1" x:Name="chartDostawa" LegendLocation="Bottom" Hoverable="True" InnerRadius="40">
                        <lvc:PieChart.ChartLegend>
                            <lvc:DefaultLegend BulletSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </lvc:PieChart.ChartLegend>
                    </lvc:PieChart>
                </Grid>
            </Border>

            <!-- Top 10 Odbiorcow -->
            <Border Grid.Column="2" Style="{StaticResource SectionCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Top 10 Odbiorcow (3 mies.)" Style="{StaticResource SectionHeaderStyle}"/>

                    <DataGrid Grid.Row="1" x:Name="dgTopOdbiorcy" Style="{StaticResource DarkDataGridStyle}"
                              ColumnHeaderStyle="{StaticResource DarkDataGridHeaderStyle}"
                              CellStyle="{StaticResource DarkDataGridCellStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Pozycja}" Width="25"/>
                            <DataGridTextColumn Header="Odbiorca" Binding="{Binding Nazwa}" Width="*" MinWidth="90"/>
                            <DataGridTextColumn Header="Wartosc" Binding="{Binding SumaWartoscTekst}" Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- Dolny panel: CRM + Statystyki + Porownanie + Srednia dzienna -->
        <Grid Grid.Row="4" Margin="10,5,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>

            <!-- CRM Panel -->
            <Border Grid.Column="0" Style="{StaticResource SectionCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="CRM - Zadania" Style="{StaticResource SectionHeaderStyle}"/>

                    <StackPanel Grid.Row="1">
                        <!-- Dzisiaj -->
                        <Border Background="#1F2428" CornerRadius="5" Padding="10,8" Margin="0,0,0,6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Kontakty dzisiaj" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                <TextBlock x:Name="txtCRMDzisiaj" Grid.Column="1" Text="0" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentOrangeBrush}"/>
                            </Grid>
                        </Border>

                        <!-- Zalegle -->
                        <Border Background="#1F2428" CornerRadius="5" Padding="10,8" Margin="0,0,0,6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Zalegle kontakty" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                <TextBlock x:Name="txtCRMZalegle" Grid.Column="1" Text="0" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentRedBrush}"/>
                            </Grid>
                        </Border>

                        <!-- Proby kontaktu -->
                        <Border Background="#1F2428" CornerRadius="5" Padding="10,8" Margin="0,0,0,6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Proby kontaktu" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                <TextBlock x:Name="txtCRMProby" Grid.Column="1" Text="0" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBlueBrush}"/>
                            </Grid>
                        </Border>

                        <!-- Nawiazane -->
                        <Border Background="#1F2428" CornerRadius="5" Padding="10,8" Margin="0,0,0,6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Nawiazane kontakty" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                <TextBlock x:Name="txtCRMNawiazane" Grid.Column="1" Text="0" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentGreenBrush}"/>
                            </Grid>
                        </Border>

                        <!-- Do wyslania oferty -->
                        <Border Background="#1F2428" CornerRadius="5" Padding="10,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Do wyslania oferty" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                <TextBlock x:Name="txtCRMOferty" Grid.Column="1" Text="0" FontSize="16" FontWeight="Bold" Foreground="#9B59B6"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Zamowienia dzis/jutro + Top Produkty -->
            <Border Grid.Column="1" Style="{StaticResource SectionCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Zamowienia dzis/jutro -->
                    <TextBlock Grid.Row="0" Text="Zamowienia dzis/jutro" Style="{StaticResource SectionHeaderStyle}"/>

                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- DZIS -->
                        <Border Grid.Column="0" Background="#1F2428" CornerRadius="5" Padding="8" Margin="0,0,3,0">
                            <StackPanel>
                                <TextBlock Text="DZIS" FontSize="10" Foreground="{StaticResource AccentOrangeBrush}" FontWeight="Bold"/>
                                <TextBlock x:Name="txtZamDzisLiczba" Text="0 zam." FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,2,0,0"/>
                                <TextBlock x:Name="txtZamDzisKg" Text="0 kg" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- JUTRO -->
                        <Border Grid.Column="1" Background="#1F2428" CornerRadius="5" Padding="8" Margin="3,0,0,0">
                            <StackPanel>
                                <TextBlock Text="JUTRO" FontSize="10" Foreground="{StaticResource AccentBlueBrush}" FontWeight="Bold"/>
                                <TextBlock x:Name="txtZamJutroLiczba" Text="0 zam." FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,2,0,0"/>
                                <TextBlock x:Name="txtZamJutroKg" Text="0 kg" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Top Produkty -->
                    <StackPanel Grid.Row="2">
                        <TextBlock Text="Top 5 produktow (30 dni)" Style="{StaticResource SectionHeaderStyle}" Margin="0,5,0,5"/>
                        <DataGrid x:Name="dgTopProdukty" Style="{StaticResource DarkDataGridStyle}"
                                  ColumnHeaderStyle="{StaticResource DarkDataGridHeaderStyle}"
                                  CellStyle="{StaticResource DarkDataGridCellStyle}"
                                  MaxHeight="130">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding Pozycja}" Width="20"/>
                                <DataGridTextColumn Header="Produkt" Binding="{Binding NazwaProduktu}" Width="*" MinWidth="80"/>
                                <DataGridTextColumn Header="Wartosc" Binding="{Binding WartoscTekst}" Width="60"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Porownanie miesiecy -->
            <Border Grid.Column="2" Style="{StaticResource SectionCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Porownanie miesiecy" Style="{StaticResource SectionHeaderStyle}"/>

                    <DataGrid Grid.Row="1" x:Name="dgPorownanie" Style="{StaticResource DarkDataGridStyle}"
                              ColumnHeaderStyle="{StaticResource DarkDataGridHeaderStyle}"
                              CellStyle="{StaticResource DarkDataGridCellStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Miesiac" Binding="{Binding OkresNazwa}" Width="*"/>
                            <DataGridTextColumn Header="Zam." Binding="{Binding LiczbaZamowien}" Width="40"/>
                            <DataGridTextColumn Header="Kg" Binding="{Binding SumaKg, StringFormat=N0}" Width="60"/>
                            <DataGridTextColumn Header="Wartosc" Binding="{Binding SumaWartosc, StringFormat=N0}" Width="70"/>
                        </DataGrid.Columns>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding JestBiezacy}" Value="True">
                                        <Setter Property="Background" Value="#2D4A3E"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Srednia wartosc zamowienia dziennie -->
            <Border Grid.Column="3" Style="{StaticResource SectionCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <TextBlock Text="Sr. wartosc zamowienia dziennie" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                    </StackPanel>

                    <lvc:CartesianChart Grid.Row="1" x:Name="chartSredniaDzienna" Margin="0,5,0,0">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis x:Name="axisXSrednia" ShowLabels="True" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}">
                                <lvc:Axis.Separator>
                                    <lvc:Separator StrokeThickness="0"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis MinValue="0" Foreground="{StaticResource TextSecondaryBrush}" FontSize="9">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Stroke="#30363D" StrokeThickness="1"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading overlay -->
        <Border Grid.RowSpan="5" Background="#CC1A1D21" x:Name="loadingOverlay" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="{StaticResource AccentOrangeBrush}"/>
                <TextBlock Text="Ladowanie danych..." FontSize="14" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,15,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
