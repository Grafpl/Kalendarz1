                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <Rectangle Width="12" Height="12" Fill="#10B981" RadiusX="2" RadiusY="2"/>
                                        <TextBlock Text=" E2" FontSize="10" Foreground="#10B981" VerticalAlignment="Center" Margin="3,0,15,0"/>
                                        <Rectangle Width="12" Height="12" Fill="#3B82F6" RadiusX="2" RadiusY="2"/>
                                        <TextBlock Text=" H1" FontSize="10" Foreground="#3B82F6" VerticalAlignment="Center" Margin="3,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Wykres slupkowy per handlowiec -->
                            <Border x:Name="borderChartH1" Grid.Column="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="10" Margin="5,0,0,0">
