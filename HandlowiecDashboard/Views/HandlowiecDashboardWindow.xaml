                                                <Border Grid.Column="1" Background="#2D333B" CornerRadius="2" Height="10" VerticalAlignment="Center" Margin="4,0">
                                                    <Border x:Name="barLimit300k" Background="#F97316" CornerRadius="2" HorizontalAlignment="Left" Width="0"/>
                                                </Border>
                                                <TextBlock Grid.Column="2" x:Name="txtLimit300k" Text="0 zl" FontSize="10" FontWeight="Bold" Foreground="#F97316" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="3" x:Name="txtLimit300kKlientow" Text="0 kl." FontSize="8" Foreground="#8B949E" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                        <!-- 300-500k -->
                                        <Border Grid.Row="2" Background="#1A1D21" CornerRadius="4" Padding="6,4" Margin="0,0,0,2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="55"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="35"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="300-500k" FontSize="9" Foreground="#EF4444" FontWeight="Bold" VerticalAlignment="Center"/>
                                                <Border Grid.Column="1" Background="#2D333B" CornerRadius="2" Height="10" VerticalAlignment="Center" Margin="4,0">
                                                    <Border x:Name="barLimit500k" Background="#EF4444" CornerRadius="2" HorizontalAlignment="Left" Width="0"/>
                                                </Border>
                                                <TextBlock Grid.Column="2" x:Name="txtLimit500k" Text="0 zl" FontSize="10" FontWeight="Bold" Foreground="#EF4444" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="3" x:Name="txtLimit500kKlientow" Text="0 kl." FontSize="8" Foreground="#8B949E" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                        <!-- 500k+ -->
                                        <Border Grid.Row="3" Background="#1A1D21" CornerRadius="4" Padding="6,4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="55"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="35"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="500k+" FontSize="9" Foreground="#DC2626" FontWeight="Bold" VerticalAlignment="Center"/>
                                                <Border Grid.Column="1" Background="#2D333B" CornerRadius="2" Height="10" VerticalAlignment="Center" Margin="4,0">
                                                    <Border x:Name="barLimit500kPlus" Background="#DC2626" CornerRadius="2" HorizontalAlignment="Left" Width="0"/>
                                                </Border>
                                                <TextBlock Grid.Column="2" x:Name="txtLimit500kPlus" Text="0 zl" FontSize="10" FontWeight="Bold" Foreground="#DC2626" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="3" x:Name="txtLimit500kPlusKlientow" Text="0 kl." FontSize="8" Foreground="#8B949E" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                    <!-- Wskazniki - zintegrowane na dole -->
                                    <Border Grid.Row="2" Background="#1A1D21" CornerRadius="4" Padding="6,4" Margin="0,4,0,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                <TextBlock Text="Srednie dni" Foreground="#8B949E" FontSize="8" HorizontalAlignment="Center"/>
                                                <TextBlock x:Name="txtWskaznikSrednieDni" Text="0" Foreground="#FFE66D" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                <TextBlock Text="% przet." Foreground="#8B949E" FontSize="8" HorizontalAlignment="Center"/>
                                                <TextBlock x:Name="txtWskaznikProcentPrzeterminowanych" Text="0%" Foreground="#FF6B6B" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                                <TextBlock Text="Dyscyplina" Foreground="#8B949E" FontSize="8" HorizontalAlignment="Center"/>
                                                <TextBlock x:Name="txtWskaznikDyscyplina" Text="0%" Foreground="#17A589" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Top przeterminowani - kompaktowy -->
                            <Border Grid.Column="3" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="8" Margin="4,0,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text=" TOP PRZETERMINOWANI" FontSize="9" Foreground="#EF4444" FontWeight="Bold" Margin="0,0,0,4"/>
                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                        <ItemsControl x:Name="listTopPrzeterminowani">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#1A1D21" CornerRadius="4" Padding="6,4" Margin="0,0,0,2">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="16"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="0" Text="{Binding Pozycja}" FontSize="9" Foreground="#8B949E" FontWeight="Bold" VerticalAlignment="Center"/>
                                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                <TextBlock Text="{Binding Kontrahent}" FontSize="10" Foreground="#FFFFFF" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                                                <TextBlock Text="{Binding DniTekst}" FontSize="8" Foreground="#EF4444"/>
                                                            </StackPanel>
                                                            <TextBlock Grid.Column="2" Text="{Binding KwotaTekst}" FontSize="10" FontWeight="Bold" Foreground="#EF4444" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- Ukryte wskazniki - zachowane dla kompatybilnosci -->
                        <TextBlock x:Name="txtWskaznikLiczbaKlientow" Visibility="Collapsed"/>
                        <TextBlock x:Name="txtWskaznikPrzekroczonyLimit" Visibility="Collapsed"/>

                        <!-- ROW 2: Tabela platnosci - nowoczesny design -->
                        <Border Grid.Row="2" Background="#1A2332" CornerRadius="12" BorderBrush="#2D3A4F" BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="4" BlurRadius="12" Opacity="0.25" Direction="270" Color="Black"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Naglowek tabeli -->
                                <Border Grid.Row="0" CornerRadius="12,12,0,0" Padding="16,10">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#1E5B45" Offset="0"/>
                                            <GradientStop Color="#1A4A3A" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="SZCZEGOLY PLATNOSCI" FontSize="13" FontWeight="Bold" Foreground="#4ADE80" VerticalAlignment="Center"/>
                                            <Border Background="#10B981" CornerRadius="4" Padding="6,2" Margin="12,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="Kliknij 2x = szczegoly" FontSize="10" Foreground="#FFFFFF"/>
                                            </Border>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Border Background="#16A34A" CornerRadius="3" Width="12" Height="12" Margin="0,0,4,0"/>
                                            <TextBlock Text="OK" FontSize="10" Foreground="#86EFAC" Margin="0,0,12,0"/>
                                            <Border Background="#EA580C" CornerRadius="3" Width="12" Height="12" Margin="0,0,4,0"/>
                                            <TextBlock Text="1-30 dni" FontSize="10" Foreground="#FDBA74" Margin="0,0,12,0"/>
                                            <Border Background="#DC2626" CornerRadius="3" Width="12" Height="12" Margin="0,0,4,0"/>
                                            <TextBlock Text="30+ dni" FontSize="10" Foreground="#FCA5A5"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <DataGrid Grid.Row="1" x:Name="gridPlatnosci" AutoGenerateColumns="False" IsReadOnly="True"
                                      Background="Transparent" BorderThickness="0"
                                      RowBackground="#1A2332" AlternatingRowBackground="#1F2A3C"
                                      Foreground="#E2E8F0" GridLinesVisibility="None"
                                      HeadersVisibility="Column" CanUserAddRows="False" CanUserDeleteRows="False"
                                      CanUserSortColumns="True" Sorting="GridPlatnosci_Sorting"
                                      MouseDoubleClick="GridPlatnosci_MouseDoubleClick"
                                      VirtualizingPanel.IsVirtualizing="True"
                                      VirtualizingPanel.VirtualizationMode="Recycling"
                                      EnableRowVirtualization="True"
                                      RowHeight="54"
                                      FontSize="14"
                                      AlternationCount="2">
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Background" Value="#1A2332"/>
                                        <Setter Property="Margin" Value="6,2"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsGreenRow}" Value="True">
                                                <Setter Property="Background" Value="#132E23"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsOrangeRow}" Value="True">
                                                <Setter Property="Background" Value="#2E2515"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsRedRow}" Value="True">
                                                <Setter Property="Background" Value="#2E1515"/>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2A3A4F"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#2D4A5F"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#243344"/>
                                        <Setter Property="Foreground" Value="#94A3B8"/>
                                        <Setter Property="Padding" Value="14,12"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                        <Setter Property="BorderBrush" Value="#334155"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Height" Value="46"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                        <Setter Property="Padding" Value="10,6"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DataGridCell">
                                                    <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                                                        <ContentPresenter VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DataGrid.CellStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="KONTRAHENT" Binding="{Binding Kontrahent}" Width="2.5*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="FontSize" Value="14"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="Foreground" Value="#34D399"/>
                                                <Setter Property="Padding" Value="6,0,0,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="LIMIT" Binding="{Binding LimitKredytuTekst}" Width="1.1*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="FontSize" Value="14"/>
                                                <Setter Property="Foreground" Value="#A78BFA"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="DO ZAPLATY" Binding="{Binding DoZaplatyTekst}" Width="1.3*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="FontSize" Value="15"/>
                                                <Setter Property="Foreground" Value="#F8FAFC"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="PRZEKR. LIMIT" Binding="{Binding PrzekroczonyLimitTekst}" Width="1.2*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="FontSize" Value="14"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding PrzekroczonyLimitAlert}" Value="True">
                                                        <Setter Property="Foreground" Value="#FB7185"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="FontSize" Value="15"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="TERMINOWE" Binding="{Binding TerminoweTekst}" Width="1.1*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="Foreground" Value="#34D399"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="FontSize" Value="14"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="PRZETERMIN." Binding="{Binding PrzeterminowaneTekst}" Width="1.2*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="FontSize" Value="14"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding PrzeterminowaneAlert}" Value="True">
                                                        <Setter Property="Foreground" Value="#FB7185"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="FontSize" Value="15"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTemplateColumn Header="NAJSTARSZA" Width="1.4*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="" Foreground="#FB7185" FontSize="16" Margin="0,0,6,0" VerticalAlignment="Center"
                                                               Visibility="{Binding PrzeterminowaneAlert, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                    <TextBlock Text="{Binding NajpozniejszaPlatnoscTekst}"
                                                               Foreground="#FB923C" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>

        </TabControl>

        <Border Grid.RowSpan="2" Background="#CC1A1D21" x:Name="loadingOverlay" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="{StaticResource AccentOrangeBrush}"/>
                <TextBlock Text="Ladowanie danych..." FontSize="14" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,15,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
