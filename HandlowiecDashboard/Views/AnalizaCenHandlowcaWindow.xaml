<Window x:Class="Kalendarz1.HandlowiecDashboard.Views.AnalizaCenHandlowcaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Analiza Cen Handlowca" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="#1A1D21">

    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#1A1D21"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#252A31"/>
        <SolidColorBrush x:Key="CardBackgroundLightBrush" Color="#2D333B"/>
        <SolidColorBrush x:Key="AccentOrangeBrush" Color="#F4A261"/>
        <SolidColorBrush x:Key="AccentGreenBrush" Color="#4ECDC4"/>
        <SolidColorBrush x:Key="AccentRedBrush" Color="#FF6B6B"/>
        <SolidColorBrush x:Key="AccentYellowBrush" Color="#FFE66D"/>
        <SolidColorBrush x:Key="AccentPurpleBrush" Color="#AA96DA"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#8B949E"/>
        <SolidColorBrush x:Key="BorderColorBrush" Color="#30363D"/>

        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Background="#000000" BorderBrush="#555555" BorderThickness="1"
                                Focusable="false" IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="#000000" BorderBrush="#555555" BorderThickness="1" CornerRadius="3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="1" Background="#222222" CornerRadius="0,3,3,0">
                                                    <Path Fill="#FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" Content="{TemplateBinding SelectionBoxItem}"
                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" Margin="10,3,23,3" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock"><Setter Property="Foreground" Value="#FFFFFF"/></Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid x:Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="#000000" BorderBrush="#555555" BorderThickness="1"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Padding" Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#333333"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FilterLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <Style x:Key="DarkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentOrangeBrush}"/>
            <Setter Property="Foreground" Value="#1A1D21"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Naglowek -->
        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" Padding="20,12"
                BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="40" Height="40" CornerRadius="8" Background="{StaticResource AccentGreenBrush}" Margin="0,0,12,0">
                        <TextBlock Text="C" FontSize="20" FontWeight="Bold" Foreground="#1A1D21" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Analiza Cen: " FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock x:Name="txtHandlowiecNazwa" Text="" FontSize="18" FontWeight="Bold" Foreground="{StaticResource AccentOrangeBrush}"/>
                        </StackPanel>
                        <TextBlock Text="Szczegolowa analiza cen i ilosci z faktur sprzedazy" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Rok:" Style="{StaticResource FilterLabelStyle}"/>
                    <ComboBox x:Name="cmbRok" Style="{StaticResource DarkComboBoxStyle}" Width="80" SelectionChanged="CmbFiltr_SelectionChanged"/>
                    <TextBlock Text="Miesiac:" Style="{StaticResource FilterLabelStyle}" Margin="15,0,8,0"/>
                    <ComboBox x:Name="cmbMiesiac" Style="{StaticResource DarkComboBoxStyle}" Width="100" SelectionChanged="CmbFiltr_SelectionChanged"/>
                    <Button x:Name="btnOdswiez" Content="Odswiez" Margin="15,0,0,0" Style="{StaticResource DarkButtonStyle}" Click="BtnOdswiez_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Karty podsumowania -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Suma KG -->
                    <Border Grid.Column="0" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="12" Margin="0,0,5,0">
                        <StackPanel>
                            <TextBlock Text="SUMA KG" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock x:Name="txtSumaKg" Text="0 kg" FontSize="22" FontWeight="Bold" Foreground="{StaticResource AccentGreenBrush}" Margin="0,3,0,0"/>
                            <TextBlock x:Name="txtSumaKgZmiana" Text="" FontSize="11" Foreground="#8B949E" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Suma Wartosc -->
                    <Border Grid.Column="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="12" Margin="5,0,5,0">
                        <StackPanel>
                            <TextBlock Text="SUMA WARTOSC" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock x:Name="txtSumaWartosc" Text="0 zl" FontSize="22" FontWeight="Bold" Foreground="{StaticResource AccentOrangeBrush}" Margin="0,3,0,0"/>
                            <TextBlock x:Name="txtSumaWartoscZmiana" Text="" FontSize="11" Foreground="#8B949E" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Srednia Cena -->
                    <Border Grid.Column="2" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="12" Margin="5,0,5,0">
                        <StackPanel>
                            <TextBlock Text="SREDNIA CENA" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock x:Name="txtSredniaCena" Text="0.00 zl/kg" FontSize="22" FontWeight="Bold" Foreground="#FFFFFF" Margin="0,3,0,0"/>
                            <TextBlock x:Name="txtSredniaCenaZmiana" Text="" FontSize="11" Foreground="#8B949E" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Min Cena -->
                    <Border Grid.Column="3" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="12" Margin="5,0,5,0">
                        <StackPanel>
                            <TextBlock Text="MIN CENA" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock x:Name="txtMinCena" Text="0.00 zl/kg" FontSize="22" FontWeight="Bold" Foreground="{StaticResource AccentRedBrush}" Margin="0,3,0,0"/>
                            <TextBlock x:Name="txtMinCenaTowar" Text="" FontSize="10" Foreground="#8B949E" Margin="0,3,0,0" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Border>

                    <!-- Max Cena -->
                    <Border Grid.Column="4" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="12" Margin="5,0,5,0">
                        <StackPanel>
                            <TextBlock Text="MAX CENA" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock x:Name="txtMaxCena" Text="0.00 zl/kg" FontSize="22" FontWeight="Bold" Foreground="{StaticResource AccentGreenBrush}" Margin="0,3,0,0"/>
                            <TextBlock x:Name="txtMaxCenaTowar" Text="" FontSize="10" Foreground="#8B949E" Margin="0,3,0,0" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Border>

                    <!-- Liczba transakcji -->
                    <Border Grid.Column="5" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="12" Margin="5,0,0,0">
                        <StackPanel>
                            <TextBlock Text="TRANSAKCJI" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock x:Name="txtLiczbaTransakcji" Text="0" FontSize="22" FontWeight="Bold" Foreground="{StaticResource AccentPurpleBrush}" Margin="0,3,0,0"/>
                            <TextBlock x:Name="txtLiczbaKontrahentow" Text="0 kontrahentow" FontSize="11" Foreground="#8B949E" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Wykresy - cena i kg w czasie -->
                <Border Grid.Row="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15" Height="220">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="TREND DZIENNY - SREDNIA CENA I ILOSC KG" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" Margin="0,0,0,10"/>
                        <lvc:CartesianChart Grid.Row="1" Grid.Column="0" x:Name="chartTrendCena" Margin="0,0,10,0">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis x:Name="axisXTrendCena" ShowLabels="True" FontSize="9" Foreground="#FFFFFF" LabelsRotation="45">
                                    <lvc:Axis.Separator><lvc:Separator StrokeThickness="0"/></lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis x:Name="axisYTrendCena" Title="Cena (zl/kg)" MinValue="0" Foreground="#FFFFFF" FontSize="10">
                                    <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                        <lvc:CartesianChart Grid.Row="1" Grid.Column="1" x:Name="chartTrendKg" Margin="10,0,0,0">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis x:Name="axisXTrendKg" ShowLabels="True" FontSize="9" Foreground="#FFFFFF" LabelsRotation="45">
                                    <lvc:Axis.Separator><lvc:Separator StrokeThickness="0"/></lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis x:Name="axisYTrendKg" Title="Ilosc (kg)" MinValue="0" Foreground="#FFFFFF" FontSize="10">
                                    <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>
                </Border>

                <!-- Top produkty i Top kontrahenci -->
                <Grid Grid.Row="2" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Top produkty -->
                    <Border Grid.Column="0" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="0,0,7,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="TOP 10 PRODUKTOW WG WARTOSCI" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" Margin="0,0,0,10"/>
                            <lvc:CartesianChart Grid.Row="1" x:Name="chartTopProdukty" Height="200">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis x:Name="axisXTopProdukty" Title="Wartosc (zl)" MinValue="0" Foreground="#FFFFFF" FontSize="10">
                                        <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis x:Name="axisYTopProdukty" ShowLabels="True" FontSize="9" Foreground="#FFFFFF">
                                        <lvc:Axis.Separator><lvc:Separator StrokeThickness="0"/></lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>
                        </Grid>
                    </Border>

                    <!-- Top kontrahenci -->
                    <Border Grid.Column="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="7,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="TOP 10 KONTRAHENTOW WG WARTOSCI" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" Margin="0,0,0,10"/>
                            <lvc:CartesianChart Grid.Row="1" x:Name="chartTopKontrahenci" Height="200">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis x:Name="axisXTopKontrahenci" Title="Wartosc (zl)" MinValue="0" Foreground="#FFFFFF" FontSize="10">
                                        <lvc:Axis.Separator><lvc:Separator Stroke="#30363D" StrokeThickness="1"/></lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis x:Name="axisYTopKontrahenci" ShowLabels="True" FontSize="9" Foreground="#FFFFFF">
                                        <lvc:Axis.Separator><lvc:Separator StrokeThickness="0"/></lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Tabela wszystkich transakcji -->
                <Border Grid.Row="3" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="WSZYSTKIE TRANSAKCJE" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock x:Name="txtLiczbaWynikow" Text="" FontSize="11" Foreground="{StaticResource AccentOrangeBrush}" Margin="15,0,0,0"/>
                        </StackPanel>
                        <DataGrid Grid.Row="1" x:Name="gridTransakcje" AutoGenerateColumns="False" IsReadOnly="True"
                                  Background="Transparent" BorderThickness="0"
                                  RowBackground="#252A31" AlternatingRowBackground="#2D333B"
                                  Foreground="#FFFFFF" GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#30363D"
                                  HeadersVisibility="Column" CanUserAddRows="False" CanUserDeleteRows="False"
                                  MaxHeight="300">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#1A1D21"/>
                                    <Setter Property="Foreground" Value="#F4A261"/>
                                    <Setter Property="Padding" Value="8,6"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                    <Setter Property="BorderBrush" Value="#30363D"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Data" Binding="{Binding DataTekst}" Width="80"/>
                                <DataGridTextColumn Header="Nr dokumentu" Binding="{Binding NrDokumentu}" Width="120"/>
                                <DataGridTextColumn Header="Kontrahent" Binding="{Binding Kontrahent}" Width="150"/>
                                <DataGridTextColumn Header="Towar" Binding="{Binding Towar}" Width="200"/>
                                <DataGridTextColumn Header="Ilosc (kg)" Binding="{Binding IloscTekst}" Width="90">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="#4ECDC4"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Cena (zl/kg)" Binding="{Binding CenaTekst}" Width="90">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Wartosc (zl)" Binding="{Binding WartoscTekst}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="#F4A261"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- Tabela per produkt -->
                <Border Grid.Row="4" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="PODSUMOWANIE PER PRODUKT" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" Margin="0,0,0,10"/>
                        <DataGrid Grid.Row="1" x:Name="gridPerProdukt" AutoGenerateColumns="False" IsReadOnly="True"
                                  Background="Transparent" BorderThickness="0"
                                  RowBackground="#252A31" AlternatingRowBackground="#2D333B"
                                  Foreground="#FFFFFF" GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#30363D"
                                  HeadersVisibility="Column" CanUserAddRows="False" CanUserDeleteRows="False"
                                  MaxHeight="250">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#1A1D21"/>
                                    <Setter Property="Foreground" Value="#F4A261"/>
                                    <Setter Property="Padding" Value="8,6"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                    <Setter Property="BorderBrush" Value="#30363D"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Kod" Binding="{Binding Kod}" Width="80"/>
                                <DataGridTextColumn Header="Towar" Binding="{Binding Towar}" Width="250"/>
                                <DataGridTextColumn Header="Suma kg" Binding="{Binding SumaKgTekst}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="#4ECDC4"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Srednia cena" Binding="{Binding SredniaCenaTekst}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Min cena" Binding="{Binding MinCenaTekst}" Width="90">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="#FF6B6B"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Max cena" Binding="{Binding MaxCenaTekst}" Width="90">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="#4ECDC4"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Suma wartosc" Binding="{Binding SumaWartoscTekst}" Width="110">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="#F4A261"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Transakcji" Binding="{Binding LiczbaTransakcji}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Loading overlay -->
        <Border Grid.RowSpan="2" Background="#CC1A1D21" x:Name="loadingOverlay" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="{StaticResource AccentOrangeBrush}"/>
                <TextBlock Text="Ladowanie danych..." FontSize="14" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,15,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
