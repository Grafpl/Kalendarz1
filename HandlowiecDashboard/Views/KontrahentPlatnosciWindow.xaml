<Window x:Class="Kalendarz1.HandlowiecDashboard.Views.KontrahentPlatnosciWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Platnosci Kontrahenta" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="#0F1419">

    <Window.Resources>
        <SolidColorBrush x:Key="CardBg" Color="#1A2332"/>
        <SolidColorBrush x:Key="CardBgLight" Color="#1F2A3C"/>
        <SolidColorBrush x:Key="Green" Color="#34D399"/>
        <SolidColorBrush x:Key="Red" Color="#FB7185"/>
        <SolidColorBrush x:Key="Orange" Color="#FB923C"/>
        <SolidColorBrush x:Key="Yellow" Color="#FBBF24"/>
        <SolidColorBrush x:Key="Purple" Color="#A78BFA"/>
        <SolidColorBrush x:Key="Blue" Color="#38BDF8"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#94A3B8"/>
        <SolidColorBrush x:Key="Border" Color="#2D3A4F"/>

        <Style x:Key="BtnStyle" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#059669"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ROW 0: Kompaktowy naglowek + KPI w jednym wierszu -->
        <Border Grid.Row="0" Background="{StaticResource CardBg}" CornerRadius="10" Padding="14,10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo + Nazwa -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                    <Border Width="36" Height="36" CornerRadius="8" Margin="0,0,10,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#10B981" Offset="0"/>
                                <GradientStop Color="#059669" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="P" FontSize="18" FontWeight="Bold" Foreground="#FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="txtKontrahentNazwa" Text="" FontSize="15" FontWeight="Bold" Foreground="{StaticResource Green}"/>
                        <TextBlock x:Name="txtHandlowiec" Text="" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>
                </StackPanel>

                <!-- KPI: Limit -->
                <Border Grid.Column="1" Background="#151C28" CornerRadius="6" Padding="12,6" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel>
                            <TextBlock Text="LIMIT" FontSize="9" Foreground="{StaticResource TextSecondary}" FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtLimitKredytu" Text="0 zl" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                        </StackPanel>
                        <TextBlock x:Name="txtWykorzystanieLimit" Text="" FontSize="9" Foreground="{StaticResource Blue}" VerticalAlignment="Bottom" Margin="8,0,0,2"/>
                    </StackPanel>
                </Border>

                <!-- KPI: Do zaplaty -->
                <Border Grid.Column="2" Background="#151C28" CornerRadius="6" Padding="12,6" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="DO ZAPLATY" FontSize="9" Foreground="{StaticResource TextSecondary}" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="txtDoZaplaty" Text="0 zl" FontSize="16" FontWeight="Bold" Foreground="{StaticResource Orange}"/>
                            <TextBlock x:Name="txtIloscFaktur" Text="" FontSize="9" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Bottom" Margin="6,0,0,2"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- KPI: Terminowe -->
                <Border Grid.Column="3" Background="#151C28" CornerRadius="6" Padding="12,6" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="TERMINOWE" FontSize="9" Foreground="{StaticResource TextSecondary}" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="txtTerminowe" Text="0 zl" FontSize="16" FontWeight="Bold" Foreground="{StaticResource Green}"/>
                            <TextBlock x:Name="txtTerminoweProcent" Text="" FontSize="9" Foreground="{StaticResource Green}" VerticalAlignment="Bottom" Margin="6,0,0,2"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- KPI: Przeterminowane -->
                <Border Grid.Column="4" Background="#151C28" CornerRadius="6" Padding="12,6" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="PRZETERMIN." FontSize="9" Foreground="{StaticResource TextSecondary}" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="txtPrzeterminowane" Text="0 zl" FontSize="16" FontWeight="Bold" Foreground="{StaticResource Red}"/>
                            <TextBlock x:Name="txtPrzeterminowaneProcent" Text="" FontSize="9" Foreground="{StaticResource Red}" VerticalAlignment="Bottom" Margin="6,0,0,2"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- KPI: Max dni -->
                <Border Grid.Column="5" Background="#151C28" CornerRadius="6" Padding="12,6" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="MAX DNI" FontSize="9" Foreground="{StaticResource TextSecondary}" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="txtMaxDni" Text="0" FontSize="16" FontWeight="Bold" Foreground="{StaticResource Purple}"/>
                            <TextBlock x:Name="txtPrzekroczonyLimit" Text="" FontSize="9" Foreground="{StaticResource Red}" VerticalAlignment="Bottom" Margin="6,0,0,2"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Przycisk odswiez -->
                <Button Grid.Column="7" x:Name="btnOdswiez" Content="Odswiez" Style="{StaticResource BtnStyle}" Click="BtnOdswiez_Click" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- ROW 1: Kompaktowy pasek - Aging + Historia w jednym wierszu -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- Aging Analysis - kompaktowy poziomy -->
            <Border Grid.Column="0" Background="{StaticResource CardBg}" CornerRadius="10" Padding="14,10" Margin="0,0,8,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="WIEK:" FontSize="10" Foreground="{StaticResource TextSecondary}" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,12,0"/>

                    <!-- 1-7 dni -->
                    <Border Grid.Column="1" Background="#1F1A10" CornerRadius="6" Padding="10,6" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="1-7d: " FontSize="10" Foreground="#FBBF24" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtAging17" Text="0 zl" FontSize="13" FontWeight="Bold" Foreground="#FBBF24" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtAging17Faktury" Text="" FontSize="9" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="4,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- 8-14 dni -->
                    <Border Grid.Column="2" Background="#1F1510" CornerRadius="6" Padding="10,6" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="8-14d: " FontSize="10" Foreground="#FB923C" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtAging814" Text="0 zl" FontSize="13" FontWeight="Bold" Foreground="#FB923C" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtAging814Faktury" Text="" FontSize="9" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="4,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- 15-21 dni -->
                    <Border Grid.Column="3" Background="#1F1010" CornerRadius="6" Padding="10,6" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="15-21d: " FontSize="10" Foreground="#FB7185" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtAging1521" Text="0 zl" FontSize="13" FontWeight="Bold" Foreground="#FB7185" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtAging1521Faktury" Text="" FontSize="9" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="4,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- 21+ dni -->
                    <Border Grid.Column="4" Background="#1F0A0A" CornerRadius="6" Padding="10,6">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="21+d: " FontSize="10" Foreground="#EF4444" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtAging21Plus" Text="0 zl" FontSize="13" FontWeight="Bold" Foreground="#EF4444" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtAging21PlusFaktury" Text="" FontSize="9" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="4,0,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Historia - kompaktowa -->
            <Border Grid.Column="1" Background="{StaticResource CardBg}" CornerRadius="10" Padding="14,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Zaplacono" FontSize="8" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtSumaZaplacona" Text="0" FontSize="12" FontWeight="Bold" Foreground="{StaticResource Green}" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="Sr. dni" FontSize="8" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtSredniCzas" Text="0" FontSize="12" FontWeight="Bold" Foreground="{StaticResource Yellow}" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="Ostatnia" FontSize="8" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtOstatniaPlatnosc" Text="-" FontSize="12" FontWeight="Bold" Foreground="{StaticResource Orange}" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                        <TextBlock Text="Opoznien" FontSize="8" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtLiczbaOpoznien" Text="0" FontSize="12" FontWeight="Bold" Foreground="{StaticResource Red}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- ROW 2: GLOWNA TABELA - 70% widoku -->
        <Border Grid.Row="2" Background="{StaticResource CardBg}" CornerRadius="10" BorderBrush="{StaticResource Border}" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" BlurRadius="10" Opacity="0.2" Direction="270" Color="Black"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Naglowek tabeli -->
                <Border Grid.Row="0" CornerRadius="10,10,0,0" Padding="16,10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#1E3A35" Offset="0"/>
                            <GradientStop Color="#1A4A3A" Offset="0.5"/>
                            <GradientStop Color="#1E3A35" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="SZCZEGOLY DOKUMENTOW" FontSize="13" Foreground="#34D399" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtLiczbaWynikow" Text="" FontSize="11" Foreground="{StaticResource Orange}" Margin="14,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Border Background="#34D399" CornerRadius="3" Width="10" Height="10" Margin="0,0,4,0"/>
                            <TextBlock Text="W terminie" FontSize="9" Foreground="#86EFAC" Margin="0,0,12,0"/>
                            <Border Background="#FB7185" CornerRadius="3" Width="10" Height="10" Margin="0,0,4,0"/>
                            <TextBlock Text="Przeterminowana" FontSize="9" Foreground="#FCA5A5"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <DataGrid Grid.Row="1" x:Name="gridFaktury" AutoGenerateColumns="False" IsReadOnly="True"
                          Background="Transparent" BorderThickness="0"
                          RowBackground="#1A2332" AlternatingRowBackground="#1F2A3C"
                          Foreground="#E2E8F0" GridLinesVisibility="None"
                          HeadersVisibility="Column" CanUserAddRows="False" CanUserDeleteRows="False"
                          RowHeight="44" FontSize="13" AlternationCount="2"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          EnableRowVirtualization="True">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#243344"/>
                            <Setter Property="Foreground" Value="#94A3B8"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="#334155"/>
                            <Setter Property="Height" Value="40"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Margin" Value="6,1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2D3A4F"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#2A4A5F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="NR DOKUMENTU" Binding="{Binding NrDokumentu}" Width="1.8*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="Foreground" Value="#38BDF8"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="DATA" Binding="{Binding DataTekst}" Width="1*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="TERMIN" Binding="{Binding TerminTekst}" Width="1*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="KWOTA BRUTTO" Binding="{Binding KwotaBruttoTekst}" Width="1.3*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#F8FAFC"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="ROZLICZONE" Binding="{Binding RozliczoneTekst}" Width="1.2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#34D399"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="DO ZAPLATY" Binding="{Binding DoZaplatyTekst}" Width="1.3*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#FB923C"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="14"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="DNI" Binding="{Binding DniPrzeterminowania}" Width="0.6*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding JestPrzeterminowana}" Value="True">
                                            <Setter Property="Foreground" Value="#FB7185"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="STATUS" Binding="{Binding Status}" Width="1.2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Przeterminowana">
                                            <Setter Property="Foreground" Value="#FB7185"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="W terminie">
                                            <Setter Property="Foreground" Value="#34D399"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Rozliczona">
                                            <Setter Property="Foreground" Value="#64748B"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Loading overlay -->
        <Border Grid.RowSpan="3" Background="#E60F1419" x:Name="loadingOverlay" Visibility="Collapsed">
            <Border Background="#1A2332" CornerRadius="12" Padding="30,20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <ProgressBar IsIndeterminate="True" Width="180" Height="3" Foreground="#34D399"/>
                    <TextBlock Text="Ladowanie..." FontSize="12" Foreground="#F8FAFC" Margin="0,12,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>

    <!-- Ukryty wykres dla kompatybilnosci -->
    <Window.Tag>
        <lvc:CartesianChart x:Name="chartTrendSaldo" Visibility="Collapsed">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis x:Name="axisXTrend"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis x:Name="axisYTrend"/>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Window.Tag>
</Window>
