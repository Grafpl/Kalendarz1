<Window x:Class="Kalendarz1.HandlowiecDashboard.Views.KontrahentPlatnosciWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Platnosci Kontrahenta" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="#0F1419">

    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#0F1419"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#1A2332"/>
        <SolidColorBrush x:Key="CardBackgroundLightBrush" Color="#1F2A3C"/>
        <SolidColorBrush x:Key="AccentGreenBrush" Color="#34D399"/>
        <SolidColorBrush x:Key="AccentRedBrush" Color="#FB7185"/>
        <SolidColorBrush x:Key="AccentOrangeBrush" Color="#FB923C"/>
        <SolidColorBrush x:Key="AccentYellowBrush" Color="#FBBF24"/>
        <SolidColorBrush x:Key="AccentPurpleBrush" Color="#A78BFA"/>
        <SolidColorBrush x:Key="AccentBlueBrush" Color="#38BDF8"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#94A3B8"/>
        <SolidColorBrush x:Key="BorderColorBrush" Color="#2D3A4F"/>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#059669"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Naglowek z gradientem -->
        <Border Grid.Row="0" Padding="24,16" BorderThickness="0,0,0,1" BorderBrush="#2D3A4F">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#1A2332" Offset="0"/>
                    <GradientStop Color="#1E3A35" Offset="0.5"/>
                    <GradientStop Color="#1A2332" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#10B981" Offset="0"/>
                                <GradientStop Color="#059669" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="P" FontSize="22" FontWeight="Bold" Foreground="#FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Platnosci: " FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock x:Name="txtKontrahentNazwa" Text="" FontSize="20" FontWeight="Bold" Foreground="{StaticResource AccentGreenBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="Handlowiec: " FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock x:Name="txtHandlowiec" Text="" FontSize="12" Foreground="{StaticResource AccentOrangeBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <Button Grid.Column="2" x:Name="btnOdswiez" Content="Odswiez dane" Style="{StaticResource ModernButtonStyle}" Click="BtnOdswiez_Click"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Karty KPI -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Limit kredytu -->
                    <Border Grid.Column="0" Background="{StaticResource CardBackgroundBrush}" CornerRadius="12" Padding="16" Margin="0,0,8,0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2" Direction="270" Color="Black"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="LIMIT KREDYTU" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtLimitKredytu" Text="0 zl" FontSize="26" FontWeight="Bold" Foreground="#F8FAFC" Margin="0,6,0,0"/>
                            <TextBlock x:Name="txtWykorzystanieLimit" Text="" FontSize="11" Foreground="{StaticResource AccentBlueBrush}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Do zaplaty -->
                    <Border Grid.Column="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="12" Padding="16" Margin="8,0,8,0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2" Direction="270" Color="Black"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="DO ZAPLATY" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtDoZaplaty" Text="0 zl" FontSize="26" FontWeight="Bold" Foreground="{StaticResource AccentOrangeBrush}" Margin="0,6,0,0"/>
                            <TextBlock x:Name="txtIloscFaktur" Text="0 faktur" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Terminowe -->
                    <Border Grid.Column="2" Background="{StaticResource CardBackgroundBrush}" CornerRadius="12" Padding="16" Margin="8,0,8,0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2" Direction="270" Color="Black"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="TERMINOWE" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtTerminowe" Text="0 zl" FontSize="26" FontWeight="Bold" Foreground="{StaticResource AccentGreenBrush}" Margin="0,6,0,0"/>
                            <TextBlock x:Name="txtTerminoweProcent" Text="0%" FontSize="11" Foreground="{StaticResource AccentGreenBrush}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Przeterminowane -->
                    <Border Grid.Column="3" Background="{StaticResource CardBackgroundBrush}" CornerRadius="12" Padding="16" Margin="8,0,8,0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2" Direction="270" Color="Black"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="PRZETERMINOWANE" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtPrzeterminowane" Text="0 zl" FontSize="26" FontWeight="Bold" Foreground="{StaticResource AccentRedBrush}" Margin="0,6,0,0"/>
                            <TextBlock x:Name="txtPrzeterminowaneProcent" Text="0%" FontSize="11" Foreground="{StaticResource AccentRedBrush}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Max dni przeterminowania -->
                    <Border Grid.Column="4" Background="{StaticResource CardBackgroundBrush}" CornerRadius="12" Padding="16" Margin="8,0,0,0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2" Direction="270" Color="Black"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="MAX DNI PRZET." FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtMaxDni" Text="0 dni" FontSize="26" FontWeight="Bold" Foreground="{StaticResource AccentPurpleBrush}" Margin="0,6,0,0"/>
                            <TextBlock x:Name="txtPrzekroczonyLimit" Text="" FontSize="11" Foreground="{StaticResource AccentRedBrush}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Aging Analysis -->
                <Border Grid.Row="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2" Direction="270" Color="Black"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,14">
                            <TextBlock Text="ANALIZA WIEKOWA PRZETERMINOWAN" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="SemiBold"/>
                            <Border Background="#FB7185" CornerRadius="4" Padding="8,3" Margin="12,0,0,0">
                                <TextBlock Text="Przeterminowane faktury" FontSize="10" Foreground="#FFFFFF"/>
                            </Border>
                        </StackPanel>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 1-7 dni -->
                            <Border Grid.Column="0" CornerRadius="10" Padding="18" Margin="0,0,8,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#2A2515" Offset="0"/>
                                        <GradientStop Color="#1F1A10" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="1-7 dni" FontSize="13" Foreground="#FBBF24" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtAging17" Text="0 zl" FontSize="24" FontWeight="Bold" Foreground="#FBBF24" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                    <TextBlock x:Name="txtAging17Faktury" Text="0 faktur" FontSize="11" Foreground="#94A3B8" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- 8-14 dni -->
                            <Border Grid.Column="1" CornerRadius="10" Padding="18" Margin="8,0,8,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#2A1D15" Offset="0"/>
                                        <GradientStop Color="#1F1510" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="8-14 dni" FontSize="13" Foreground="#FB923C" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtAging814" Text="0 zl" FontSize="24" FontWeight="Bold" Foreground="#FB923C" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                    <TextBlock x:Name="txtAging814Faktury" Text="0 faktur" FontSize="11" Foreground="#94A3B8" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- 15-21 dni -->
                            <Border Grid.Column="2" CornerRadius="10" Padding="18" Margin="8,0,8,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#2A1515" Offset="0"/>
                                        <GradientStop Color="#1F1010" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="15-21 dni" FontSize="13" Foreground="#FB7185" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtAging1521" Text="0 zl" FontSize="24" FontWeight="Bold" Foreground="#FB7185" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                    <TextBlock x:Name="txtAging1521Faktury" Text="0 faktur" FontSize="11" Foreground="#94A3B8" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- 21+ dni -->
                            <Border Grid.Column="3" CornerRadius="10" Padding="18" Margin="8,0,0,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#2A1010" Offset="0"/>
                                        <GradientStop Color="#1F0A0A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="21+ dni" FontSize="13" Foreground="#EF4444" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtAging21Plus" Text="0 zl" FontSize="24" FontWeight="Bold" Foreground="#EF4444" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                    <TextBlock x:Name="txtAging21PlusFaktury" Text="0 faktur" FontSize="11" Foreground="#94A3B8" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Trend platnosci i historia -->
                <Grid Grid.Row="2" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="380"/>
                    </Grid.ColumnDefinitions>

                    <!-- Wykres trend platnosci -->
                    <Border Grid.Column="0" Background="{StaticResource CardBackgroundBrush}" CornerRadius="12" Padding="20" Margin="0,0,10,0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2" Direction="270" Color="Black"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="TREND SALDA" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="SemiBold"/>
                                <Border Background="#38BDF8" CornerRadius="4" Padding="8,3" Margin="12,0,0,0">
                                    <TextBlock Text="Ostatnie 6 miesiecy" FontSize="10" Foreground="#FFFFFF"/>
                                </Border>
                            </StackPanel>
                            <lvc:CartesianChart Grid.Row="1" x:Name="chartTrendSaldo" Height="200">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis x:Name="axisXTrend" ShowLabels="True" FontSize="11" Foreground="#94A3B8">
                                        <lvc:Axis.Separator><lvc:Separator StrokeThickness="0"/></lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis x:Name="axisYTrend" Title="Saldo (zl)" MinValue="0" Foreground="#94A3B8" FontSize="10">
                                        <lvc:Axis.Separator><lvc:Separator Stroke="#2D3A4F" StrokeThickness="1"/></lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>
                        </Grid>
                    </Border>

                    <!-- Historia platnosci -->
                    <Border Grid.Column="1" Background="{StaticResource CardBackgroundBrush}" CornerRadius="12" Padding="20" Margin="10,0,0,0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2" Direction="270" Color="Black"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,14">
                                <TextBlock Text="HISTORIA PLATNOSCI" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="SemiBold"/>
                                <Border Background="#A78BFA" CornerRadius="4" Padding="8,3" Margin="12,0,0,0">
                                    <TextBlock Text="12 miesiecy" FontSize="10" Foreground="#FFFFFF"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Grid.Row="1">
                                <Border Background="#151C28" CornerRadius="10" Padding="14" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="Suma zaplacona" FontSize="11" Foreground="#94A3B8"/>
                                            <TextBlock x:Name="txtSumaZaplacona" Text="0 zl" FontSize="22" FontWeight="Bold" Foreground="#34D399" Margin="0,4,0,0"/>
                                        </StackPanel>
                                        <Border Grid.Column="1" Background="#34D399" CornerRadius="8" Width="40" Height="40" VerticalAlignment="Center">
                                            <TextBlock Text="$" FontSize="20" Foreground="#151C28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                <Border Background="#151C28" CornerRadius="10" Padding="14" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="Sredni czas platnosci" FontSize="11" Foreground="#94A3B8"/>
                                            <TextBlock x:Name="txtSredniCzas" Text="0 dni" FontSize="22" FontWeight="Bold" Foreground="#FBBF24" Margin="0,4,0,0"/>
                                        </StackPanel>
                                        <Border Grid.Column="1" Background="#FBBF24" CornerRadius="8" Width="40" Height="40" VerticalAlignment="Center">
                                            <TextBlock Text="T" FontSize="20" FontWeight="Bold" Foreground="#151C28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                <Border Background="#151C28" CornerRadius="10" Padding="14" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="Ostatnia platnosc" FontSize="11" Foreground="#94A3B8"/>
                                            <TextBlock x:Name="txtOstatniaPlatnosc" Text="-" FontSize="22" FontWeight="Bold" Foreground="#FB923C" Margin="0,4,0,0"/>
                                        </StackPanel>
                                        <Border Grid.Column="1" Background="#FB923C" CornerRadius="8" Width="40" Height="40" VerticalAlignment="Center">
                                            <TextBlock Text="D" FontSize="20" FontWeight="Bold" Foreground="#151C28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                <Border Background="#151C28" CornerRadius="10" Padding="14">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="Liczba opoznien" FontSize="11" Foreground="#94A3B8"/>
                                            <TextBlock x:Name="txtLiczbaOpoznien" Text="0" FontSize="22" FontWeight="Bold" Foreground="#FB7185" Margin="0,4,0,0"/>
                                        </StackPanel>
                                        <Border Grid.Column="1" Background="#FB7185" CornerRadius="8" Width="40" Height="40" VerticalAlignment="Center">
                                            <TextBlock Text="!" FontSize="20" FontWeight="Bold" Foreground="#151C28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Tabela faktur - nowoczesny design -->
                <Border Grid.Row="3" Background="{StaticResource CardBackgroundBrush}" CornerRadius="12" BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2" Direction="270" Color="Black"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Naglowek tabeli -->
                        <Border Grid.Row="0" CornerRadius="12,12,0,0" Padding="20,14">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#1E3A35" Offset="0"/>
                                    <GradientStop Color="#1A4A3A" Offset="0.5"/>
                                    <GradientStop Color="#1E3A35" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="SZCZEGOLY DOKUMENTOW" FontSize="14" Foreground="#34D399" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="txtLiczbaWynikow" Text="" FontSize="12" Foreground="{StaticResource AccentOrangeBrush}" Margin="16,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Border Background="#34D399" CornerRadius="3" Width="12" Height="12" Margin="0,0,4,0"/>
                                    <TextBlock Text="W terminie" FontSize="10" Foreground="#86EFAC" Margin="0,0,14,0"/>
                                    <Border Background="#FB7185" CornerRadius="3" Width="12" Height="12" Margin="0,0,4,0"/>
                                    <TextBlock Text="Przeterminowana" FontSize="10" Foreground="#FCA5A5"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <DataGrid Grid.Row="1" x:Name="gridFaktury" AutoGenerateColumns="False" IsReadOnly="True"
                                  Background="Transparent" BorderThickness="0"
                                  RowBackground="#1A2332" AlternatingRowBackground="#1F2A3C"
                                  Foreground="#E2E8F0" GridLinesVisibility="None"
                                  HeadersVisibility="Column" CanUserAddRows="False" CanUserDeleteRows="False"
                                  MaxHeight="280" RowHeight="48" FontSize="13" AlternationCount="2">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#243344"/>
                                    <Setter Property="Foreground" Value="#94A3B8"/>
                                    <Setter Property="Padding" Value="14,12"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                    <Setter Property="BorderBrush" Value="#334155"/>
                                    <Setter Property="Height" Value="44"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Margin" Value="8,2"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2D3A4F"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#2A4A5F"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    <Setter Property="Padding" Value="10,6"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.CellStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="NR DOKUMENTU" Binding="{Binding NrDokumentu}" Width="1.5*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="#38BDF8"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="DATA" Binding="{Binding DataTekst}" Width="1*"/>
                                <DataGridTextColumn Header="TERMIN" Binding="{Binding TerminTekst}" Width="1*"/>
                                <DataGridTextColumn Header="KWOTA BRUTTO" Binding="{Binding KwotaBruttoTekst}" Width="1.2*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="#F8FAFC"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="ROZLICZONE" Binding="{Binding RozliczoneTekst}" Width="1.2*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="#34D399"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="DO ZAPLATY" Binding="{Binding DoZaplatyTekst}" Width="1.2*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="#FB923C"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="DNI" Binding="{Binding DniPrzeterminowania}" Width="0.6*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding JestPrzeterminowana}" Value="True">
                                                    <Setter Property="Foreground" Value="#FB7185"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="STATUS" Binding="{Binding Status}" Width="1.1*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Przeterminowana">
                                                    <Setter Property="Foreground" Value="#FB7185"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="W terminie">
                                                    <Setter Property="Foreground" Value="#34D399"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Rozliczona">
                                                    <Setter Property="Foreground" Value="#64748B"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Loading overlay -->
        <Border Grid.RowSpan="2" Background="#E60F1419" x:Name="loadingOverlay" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Background="#1A2332" CornerRadius="16" Padding="40,30">
                    <StackPanel>
                        <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="#34D399"/>
                        <TextBlock Text="Ladowanie danych..." FontSize="14" Foreground="#F8FAFC" Margin="0,16,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
