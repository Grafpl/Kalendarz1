<Window x:Class="Kalendarz1.MarketIntelligence.Views.ArticleDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SzczegÃ³Å‚y artykuÅ‚u"
        Height="700" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#0F172A">

    <Window.Resources>
        <SolidColorBrush x:Key="BgPrimary" Color="#0F172A"/>
        <SolidColorBrush x:Key="BgSecondary" Color="#1E293B"/>
        <SolidColorBrush x:Key="BgTertiary" Color="#334155"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#94A3B8"/>
        <SolidColorBrush x:Key="TextMuted" Color="#64748B"/>
        <SolidColorBrush x:Key="AccentPrimary" Color="#6366F1"/>
        <SolidColorBrush x:Key="StatusWarning" Color="#F59E0B"/>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock x:Name="txtSeverityIcon" FontSize="24" Margin="0,0,12,0"/>
                <Border x:Name="brdCategory" Background="{StaticResource BgTertiary}"
                        CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                    <TextBlock x:Name="txtCategory" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                </Border>
            </StackPanel>
            <TextBlock x:Name="txtTitle"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="22" FontWeight="Bold"
                       TextWrapping="Wrap"
                       Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="txtSource" Foreground="{StaticResource AccentPrimary}" FontSize="12"/>
                <TextBlock Text=" â€¢ " Foreground="{StaticResource TextMuted}"/>
                <TextBlock x:Name="txtDate" Foreground="{StaticResource TextMuted}" FontSize="12"/>
            </StackPanel>
        </StackPanel>

        <Separator Grid.Row="1" Margin="0,16" Background="{StaticResource BgTertiary}"/>

        <!-- Body -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="txtBody"
                       Foreground="{StaticResource TextSecondary}"
                       FontSize="14"
                       LineHeight="24"
                       TextWrapping="Wrap"/>
        </ScrollViewer>

        <!-- AI Analysis -->
        <Border Grid.Row="3" Background="{StaticResource BgSecondary}"
                CornerRadius="8" Padding="16" Margin="0,16,0,0"
                x:Name="pnlAiAnalysis">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="ðŸ¤–" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="ANALIZA AI DLA PIÃ“RKOWSCY"
                               Foreground="{StaticResource StatusWarning}"
                               FontWeight="Bold"/>
                </StackPanel>
                <TextBlock x:Name="txtAiAnalysis"
                           Foreground="{StaticResource TextPrimary}"
                           FontSize="13"
                           LineHeight="22"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Tags & Close -->
        <Grid Grid.Row="4" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="txtTags" Grid.Column="0"
                       Foreground="{StaticResource TextMuted}"
                       FontSize="11"
                       VerticalAlignment="Center"/>
            <Button Grid.Column="1" Content="Zamknij"
                    Padding="16,8"
                    Background="{StaticResource BgTertiary}"
                    Foreground="{StaticResource TextPrimary}"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnClose_Click"/>
        </Grid>
    </Grid>
</Window>
