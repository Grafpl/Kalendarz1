                                                    <TextBlock Text="{Binding ShortPreview}"
                                                               Style="{StaticResource PreviewText}"/>
                                                </StackPanel>

                                                <!-- Expanded View -->
                                                <StackPanel Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVis}}">
                                                    <!-- Severity Badge + Meta -->
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                                        <Border Background="{Binding Severity, Converter={StaticResource SeverityToBg}}"
                                                                CornerRadius="3" Padding="8,3">
                                                            <TextBlock Text="{Binding SeverityText}"
                                                                       FontSize="9" FontWeight="Bold"
                                                                       Foreground="{Binding Severity, Converter={StaticResource SeverityToColor}}"/>
                                                        </Border>
                                                        <TextBlock Text="{Binding Category}"
                                                                   FontSize="10" FontWeight="SemiBold"
                                                                   Foreground="#C9A96E" Margin="12,0,0,0"
                                                                   VerticalAlignment="Center"/>
                                                        <TextBlock Text=" â€¢ " Foreground="#5A5248" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding Source}"
                                                                   FontSize="10" Foreground="#7A6F63"
                                                                   VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding FormattedDate}"
                                                                   FontSize="10" Foreground="#5A5248"
                                                                   HorizontalAlignment="Right" Margin="20,0,0,0"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>

                                                    <!-- Title (Featured) -->
                                                    <TextBlock Text="{Binding Title}"
                                                               Style="{StaticResource SerifArticleTitleFeatured}"
                                                               Margin="0,0,0,12"/>

                                                    <!-- Full Content -->
                                                    <TextBlock Text="{Binding FullContent}"
                                                               Style="{StaticResource BodyText}"
                                                               Margin="0,0,0,16"/>

                                                    <!-- Educational Section -->
                                                    <Border Background="#1E1A14" CornerRadius="6"
                                                            Padding="14" Margin="0,0,0,16"
                                                            BorderBrush="#2A2520" BorderThickness="1">
                                                        <StackPanel>
                                                            <TextBlock Text="KIM JEST / CO TO JEST"
                                                                       FontSize="9" FontWeight="Bold"
                                                                       Foreground="#8B7355" Margin="0,0,0,8"/>
                                                            <TextBlock Text="{Binding EducationalSection}"
                                                                       Style="{StaticResource BodyTextSmall}"
                                                                       Foreground="#D5CCC0"/>
                                                        </StackPanel>
                                                    </Border>

                                                    <!-- AI Analysis Section -->
                                                    <Border Background="#1E1A14" CornerRadius="6"
                                                            Padding="14" Margin="0,0,0,16"
                                                            BorderBrush="#C9A96E" BorderThickness="0,0,0,2">
                                                        <StackPanel>
                                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                                <TextBlock Text="CO TO ZNACZY DLA PIORKOWSCY"
                                                                           FontSize="9" FontWeight="Bold"
                                                                           Foreground="#C9A96E"/>
                                                                <TextBlock FontSize="9" FontWeight="Bold" Foreground="#C9A96E">
                                                                    <TextBlock.Text>
                                                                        <MultiBinding Converter="{StaticResource RoleAnalysisConverter}" ConverterParameter="Label">
                                                                            <Binding/>
                                                                            <Binding Path="DataContext.CurrentRole" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                                        </MultiBinding>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                            </StackPanel>
                                                            <TextBlock Style="{StaticResource BodyTextSmall}"
                                                                       FontStyle="Italic" Foreground="#F5EDE0"
                                                                       TextWrapping="Wrap">
                                                                <TextBlock.Text>
                                                                    <MultiBinding Converter="{StaticResource RoleAnalysisConverter}" ConverterParameter="Analysis">
                                                                        <Binding/>
                                                                        <Binding Path="DataContext.CurrentRole" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                                    </MultiBinding>
                                                                </TextBlock.Text>
                                                            </TextBlock>
                                                            <TextBlock Text="ZALECANE DZIALANIA:"
                                                                       FontSize="9" FontWeight="Bold"
                                                                       Foreground="#8B7355" Margin="0,12,0,6"/>
                                                            <TextBlock Style="{StaticResource BodyTextSmall}"
                                                                       Foreground="#D5CCC0" TextWrapping="Wrap">
                                                                <TextBlock.Text>
                                                                    <MultiBinding Converter="{StaticResource RoleAnalysisConverter}" ConverterParameter="Actions">
                                                                        <Binding/>
                                                                        <Binding Path="DataContext.CurrentRole" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                                    </MultiBinding>
                                                                </TextBlock.Text>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </Border>

                                                    <!-- Source Link -->
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                                        <TextBlock Text="ðŸ”— Zrodlo: " Foreground="#7A6F63" FontSize="11"/>
                                                        <TextBlock>
                                                            <Hyperlink Style="{StaticResource SourceLink}"
                                                                       NavigateUri="{Binding SourceUrl}"
                                                                       RequestNavigate="Hyperlink_RequestNavigate">
                                                                <Run Text="{Binding SourceUrl}"/>
                                                            </Hyperlink>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <!-- Tags -->
                                                    <ItemsControl ItemsSource="{Binding Tags}">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Style="{StaticResource TagPill}">
                                                                    <TextBlock Text="{Binding}" FontSize="9"
                                                                               Foreground="#7A6F63"/>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- RIGHT: SIDE PANEL                                                   -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Column="2" Background="#15120D" CornerRadius="6"
                    BorderBrush="#2A2520" BorderThickness="1">
                <TabControl x:Name="tcSidePanel" Style="{StaticResource BriefingTabControl}">
                    <TabControl.Resources>
                        <Style TargetType="TabItem" BasedOn="{StaticResource BriefingTabItem}"/>
                    </TabControl.Resources>

