                            <ToggleButton Content="Ceny" Margin="4,0,0,0"
                                          Style="{StaticResource FilterButton}"
                                          Click="FilterButton_Click" Tag="Ceny"/>
                            <ToggleButton Content="Konkurencja" Margin="4,0,0,0"
                                          Style="{StaticResource FilterButton}"
                                          Click="FilterButton_Click" Tag="Konkurencja"/>
                            <ToggleButton Content="Regulacje" Margin="4,0,0,0"
                                          Style="{StaticResource FilterButton}"
                                          Click="FilterButton_Click" Tag="Regulacje"/>
                            <ToggleButton Content="Klienci" Margin="4,0,0,0"
                                          Style="{StaticResource FilterButton}"
                                          Click="FilterButton_Click" Tag="Klienci"/>
                            <ToggleButton Content="Koszty" Margin="4,0,0,0"
                                          Style="{StaticResource FilterButton}"
                                          Click="FilterButton_Click" Tag="Koszty"/>
                            <ToggleButton Content="Logistyka" Margin="4,0,0,0"
                                          Style="{StaticResource FilterButton}"
                                          Click="FilterButton_Click" Tag="Logistyka"/>
                            <ToggleButton Content="Pogoda" Margin="4,0,0,0"
                                          Style="{StaticResource FilterButton}"
                                          Click="FilterButton_Click" Tag="Pogoda"/>
                        </StackPanel>

                        <!-- Search + Count -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
