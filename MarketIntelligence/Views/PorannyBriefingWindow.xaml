<Window x:Class="Kalendarz1.MarketIntelligence.Views.PorannyBriefingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Kalendarz1.MarketIntelligence.Views"
        xmlns:vm="clr-namespace:Kalendarz1.MarketIntelligence.ViewModels"
        xmlns:models="clr-namespace:Kalendarz1.MarketIntelligence.Models"
        Title="Poranny Briefing - Piorkowscy"
        Height="900" Width="1500"
        MinHeight="750" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#0C0A07">

    <Window.DataContext>
        <vm:PorannyBriefingViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/BriefingStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>

            <!-- Severity to Color Converter -->
            <local:SeverityToColorConverter x:Key="SeverityToColor"/>
            <local:SeverityToBgConverter x:Key="SeverityToBg"/>
            <local:DirectionToColorConverter x:Key="DirectionToColor"/>

            <!-- Role-based Analysis Converter -->
            <local:RoleBasedAnalysisConverter x:Key="RoleAnalysisConverter"/>

            <!-- Bool to Green/Red Color Converter -->
            <local:BoolToGreenRedConverter x:Key="BoolToGreenRed"/>

        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>      <!-- Header -->
            <RowDefinition Height="Auto"/>    <!-- Summary -->
            <RowDefinition Height="Auto"/>    <!-- Indicators -->
            <RowDefinition Height="Auto"/>    <!-- Tasks Panel (collapsible) -->
            <RowDefinition Height="*"/>       <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- ROW 0: HEADER                                                            -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="0" Background="#15120D" BorderBrush="#2A2520" BorderThickness="0,0,0,1">
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT: Title -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Poranny Briefing"
                               FontFamily="Georgia" FontSize="22" FontWeight="Bold"
                               Foreground="#F5EDE0"/>
                    <TextBlock Text="Piorkowscy  â€¢  Ubojnia Drobiu  â€¢  Brzeziny"
                               FontFamily="Segoe UI" FontSize="10"
                               Foreground="#7A6F63" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- CENTER: Role Switcher -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <RadioButton x:Name="rbCeo" GroupName="Role" IsChecked="True"
                                 Style="{StaticResource RoleButton}"
                                 Checked="RoleButton_Checked" Tag="CEO">
                        <TextBlock Text="CEO / Strategia" FontSize="11" Foreground="#C9A96E"/>
                    </RadioButton>
                    <RadioButton x:Name="rbSales" GroupName="Role" Margin="8,0,0,0"
                                 Style="{StaticResource RoleButton}"
                                 Checked="RoleButton_Checked" Tag="Sales">
                        <TextBlock Text="Handlowiec" FontSize="11" Foreground="#6DAF6D"/>
                    </RadioButton>
                    <RadioButton x:Name="rbBuyer" GroupName="Role" Margin="8,0,0,0"
                                 Style="{StaticResource RoleButton}"
                                 Checked="RoleButton_Checked" Tag="Buyer">
                        <TextBlock Text="Zakupowiec" FontSize="11" Foreground="#5AB8B8"/>
                    </RadioButton>
                </StackPanel>

                <!-- RIGHT: Date -->
                <StackPanel Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding DateDisplay}"
                               FontFamily="Georgia" FontSize="12"
                               Foreground="#D5CCC0"/>
                    <TextBlock Text="{Binding WeekDisplay}"
                               FontFamily="Segoe UI" FontSize="10"
                               Foreground="#7A6F63" Margin="0,2,0,0"
                               HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- ROW 1: AI SUMMARY                                                        -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="1" Background="#0C0A07" Padding="24,16">
            <StackPanel>
                <TextBlock Text="STRESZCZENIE PORANNE"
                           FontFamily="Segoe UI" FontSize="9" FontWeight="Bold"
                           Foreground="#8B7355" Margin="0,0,0,10"/>
                <TextBlock x:Name="txtSummary" TextWrapping="Wrap"
                           FontFamily="Georgia" FontSize="13" LineHeight="22"
                           Foreground="#F5EDE0"/>
            </StackPanel>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- ROW 2: INDICATORS BAR                                                    -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="2" Background="#15120D" BorderBrush="#2A2520" BorderThickness="0,1">
            <Grid Margin="24,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Indicators -->
                <ItemsControl Grid.Column="0" ItemsSource="{Binding Indicators}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                <TextBlock Text="{Binding Name}"
                                           FontSize="9" FontWeight="Bold"
                                           Foreground="#7A6F63"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding DisplayValue}"
                                           FontFamily="Consolas" FontSize="13" FontWeight="Bold"
                                           Foreground="#F5EDE0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Change}"
                                           FontFamily="Consolas" FontSize="10"
                                           Foreground="{Binding Direction, Converter={StaticResource DirectionToColor}}"
                                           VerticalAlignment="Center"
                                           Margin="6,0,0,0"/>
                                <TextBlock Text="|" Foreground="#3A352E" Margin="16,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Refresh from Internet Button -->
                    <Button x:Name="btnRefreshInternet" Margin="0,0,8,0"
                            Command="{Binding RefreshFromInternetCommand}"
                            Style="{StaticResource TasksButton}"
                            ToolTip="Pobierz artykuly z internetu i przeanalizuj przez AI (pelny skan ~3 min)">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Pobierz z internetu" FontSize="11" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <!-- Quick Refresh Button -->
                    <Button x:Name="btnQuickRefresh" Margin="0,0,8,0"
                            Command="{Binding QuickRefreshCommand}"
                            Style="{StaticResource TasksButton}"
                            ToolTip="Szybki briefing - 20 najwazniejszych zapytan (~30 sek)">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Szybki" FontSize="11" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <!-- Diagnostics Button -->
                    <Button x:Name="btnDiagnostics" Margin="0,0,8,0"
                            Command="{Binding ToggleDiagnosticsCommand}"
                            Style="{StaticResource TasksButton}"
                            ToolTip="Pokaz panel diagnostyczny API">
                        <TextBlock Text="Diagnostyka" FontSize="11" FontWeight="SemiBold"/>
                    </Button>

                    <!-- Tasks Button -->
                    <Button Style="{StaticResource TasksButton}"
                            Click="TasksButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding UrgentTasksCount, StringFormat={}{0} pilnych}"
                                       FontSize="11" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- ROW 2.5: PROGRESS BAR (when fetching)                                   -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="2" Background="#1A1510" BorderBrush="#2A2520" BorderThickness="0,0,0,1"
                Visibility="{Binding IsFetching, Converter={StaticResource BoolToVis}}"
                VerticalAlignment="Bottom" Padding="24,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding FetchProgressStage}"
                           FontSize="11" FontWeight="SemiBold" Foreground="#C9A96E"
                           VerticalAlignment="Center" Margin="0,0,12,0"/>
                <ProgressBar Grid.Column="1" Value="{Binding FetchProgressPercent}"
                             Minimum="0" Maximum="100" Height="6"
                             Background="#2A2520" Foreground="#C9A96E"/>
                <TextBlock Grid.Column="2" Text="{Binding FetchProgressDetail}"
                           FontSize="10" Foreground="#7A6F63"
                           VerticalAlignment="Center" Margin="12,0,12,0"
                           MaxWidth="300" TextTrimming="CharacterEllipsis"/>
                <Button Grid.Column="3" Content="Anuluj"
                        Command="{Binding CancelFetchCommand}"
                        FontSize="10" Padding="8,2"
                        Background="#5A2525" Foreground="#F5EDE0"
                        BorderThickness="0"/>
            </Grid>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- ROW 3: DIAGNOSTICS PANEL (Collapsible)                                  -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="3" Background="#12150F" BorderBrush="#2A3520" BorderThickness="0,0,0,1"
                Visibility="{Binding IsDiagnosticsPanelVisible, Converter={StaticResource BoolToVis}}"
                Padding="24,12" MaxHeight="250">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="280"/>
                    <ColumnDefinition Width="Auto" MinWidth="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- API Configuration -->
                <StackPanel Grid.Column="0" Margin="0,0,24,0">
                    <TextBlock Text="KONFIGURACJA API" FontSize="9" FontWeight="Bold"
                               Foreground="#6DAF6D" Margin="0,0,0,8"/>

                    <Grid Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Claude API:" FontSize="10" Foreground="#7A6F63"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="{Binding Diagnostics.ClaudeStatusIcon}" FontSize="10" FontWeight="Bold"
                                       Foreground="{Binding Diagnostics.IsClaudeConfigured, Converter={StaticResource BoolToGreenRed}}"/>
                            <TextBlock Text="{Binding Diagnostics.ClaudeApiKeyPreview}" FontSize="9"
                                       Foreground="#5A5248" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Model:" FontSize="10" Foreground="#7A6F63"/>
                        <TextBlock Grid.Column="1" Text="{Binding Diagnostics.ClaudeModel}" FontSize="9" Foreground="#D5CCC0"/>
                    </Grid>

                    <Grid Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Perplexity API:" FontSize="10" Foreground="#7A6F63"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="{Binding Diagnostics.PerplexityStatusIcon}" FontSize="10" FontWeight="Bold"
                                       Foreground="{Binding Diagnostics.IsPerplexityConfigured, Converter={StaticResource BoolToGreenRed}}"/>
                            <TextBlock Text="{Binding Diagnostics.PerplexityApiKeyPreview}" FontSize="9"
                                       Foreground="#5A5248" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Button Content="Test Claude" Command="{Binding TestClaudeApiCommand}"
                                FontSize="9" Padding="8,3" Margin="0,0,8,0"
                                Background="#2A3520" Foreground="#6DAF6D" BorderThickness="0"/>
                        <Button Content="Test Perplexity" Command="{Binding TestPerplexityApiCommand}"
                                FontSize="9" Padding="8,3"
                                Background="#2A3520" Foreground="#6DAF6D" BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Pipeline Stats -->
                <StackPanel Grid.Column="1" Margin="0,0,24,0">
                    <TextBlock Text="STATYSTYKI PIPELINE" FontSize="9" FontWeight="Bold"
                               Foreground="#C9A96E" Margin="0,0,0,8"/>

                    <Grid Margin="0,0,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Perplexity:" FontSize="10" Foreground="#7A6F63"/>
                        <TextBlock Grid.Column="1" Text="{Binding Diagnostics.PerplexityArticlesCount, StringFormat={}{0} art.}"
                                   FontSize="10" Foreground="#D5CCC0"/>
                        <TextBlock Grid.Column="2" Text="{Binding Diagnostics.PerplexityTimeDisplay}"
                                   FontSize="9" Foreground="#5A5248"/>
                    </Grid>

                    <Grid Margin="0,0,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Po filtrowaniu:" FontSize="10" Foreground="#7A6F63"/>
                        <TextBlock Grid.Column="1" Text="{Binding Diagnostics.FilteredCount}"
                                   FontSize="10" Foreground="#D5CCC0"/>
                    </Grid>

                    <Grid Margin="0,0,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Wzbogaconych:" FontSize="10" Foreground="#7A6F63"/>
                        <TextBlock Grid.Column="1" FontSize="10" Foreground="#D5CCC0">
                            <Run Text="{Binding Diagnostics.EnrichedCount, Mode=OneWay}"/>
                            <Run Text=" ("/>
                            <Run Text="{Binding Diagnostics.EnrichmentFailedCount, Mode=OneWay}" Foreground="#C05050"/>
                            <Run Text=" failed)"/>
                        </TextBlock>
                    </Grid>

                    <Grid Margin="0,0,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Przeanalizowanych AI:" FontSize="10" Foreground="#7A6F63"/>
                        <TextBlock Grid.Column="1" Text="{Binding Diagnostics.AnalyzedCount}"
                                   FontSize="10" FontWeight="Bold" Foreground="#6DAF6D"/>
                    </Grid>

                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Szacowany koszt:" FontSize="10" Foreground="#7A6F63"/>
                        <TextBlock Grid.Column="1" Text="{Binding Diagnostics.TotalCostDisplay}"
                                   FontSize="10" FontWeight="Bold" Foreground="#C9A96E"/>
                    </Grid>
                </StackPanel>

                <!-- Logs -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="LOGI" FontSize="9" FontWeight="Bold"
                               Foreground="#8B7355" Margin="0,0,0,8"/>
                    <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Diagnostics.LogEntries}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                        <TextBlock Text="{Binding TimestampDisplay}" FontSize="9"
                                                   Foreground="#5A5248" Width="50"/>
                                        <TextBlock Text="{Binding LevelIcon}" FontSize="9" Width="20"
                                                   FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#7A6F63"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Level}" Value="Error">
                                                            <Setter Property="Foreground" Value="#C05050"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Level}" Value="Success">
                                                            <Setter Property="Foreground" Value="#6DAF6D"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Level}" Value="Warning">
                                                            <Setter Property="Foreground" Value="#D4A035"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Message}" FontSize="9"
                                                   Foreground="#D5CCC0" TextWrapping="NoWrap"
                                                   TextTrimming="CharacterEllipsis" MaxWidth="400"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Grid>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- ROW 3b: TASKS PANEL (Collapsible)                                       -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="3" Background="#1C1210" BorderBrush="#5A2525" BorderThickness="0,0,0,1"
                Visibility="{Binding IsTasksPanelVisible, Converter={StaticResource BoolToVis}}"
                Padding="24,12">
            <ItemsControl ItemsSource="{Binding Tasks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#15120D" CornerRadius="4" Padding="12,8"
                                Margin="0,0,12,8" BorderThickness="3,0,0,0"
                                BorderBrush="{Binding Severity, Converter={StaticResource SeverityToColor}}">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}"
                                           FontSize="11" FontWeight="SemiBold"
                                           Foreground="#F5EDE0" TextWrapping="Wrap"
                                           MaxWidth="280"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="{Binding DeadlineDisplay}"
                                               FontSize="9" Foreground="#C05050"/>
                                    <TextBlock Text=" â€¢ " Foreground="#5A5248"/>
                                    <TextBlock Text="{Binding AssignedTo}"
                                               FontSize="9" Foreground="#7A6F63"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- ROW 4: MAIN CONTENT                                                     -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.Row="4" Margin="16,16,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="500"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="370"/>
            </Grid.ColumnDefinitions>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- LEFT: ARTICLES LIST                                                  -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
