                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="4"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Severity Bar -->
                                            <Border Grid.Column="0" CornerRadius="2,0,0,2"
                                                    Background="{Binding Severity, Converter={StaticResource SeverityToColor}}"/>

                                            <!-- Content -->
                                            <StackPanel Grid.Column="1" Margin="14,12,12,12">
                                                <!-- Collapsed View -->
                                                <StackPanel Visibility="{Binding IsExpanded, Converter={StaticResource InverseBoolToVis}}">
                                                    <!-- Meta Row -->
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                                        <Ellipse Width="6" Height="6"
                                                                 Fill="{Binding Severity, Converter={StaticResource SeverityToColor}}"
                                                                 VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                        <TextBlock Text="{Binding Category}"
                                                                   FontSize="10" FontWeight="SemiBold"
                                                                   Foreground="#C9A96E"/>
                                                        <TextBlock Text=" â€¢ " Foreground="#5A5248"/>
                                                        <TextBlock Text="{Binding Source}"
                                                                   FontSize="10" Foreground="#7A6F63"/>
                                                        <TextBlock Text=" â€¢ " Foreground="#5A5248"/>
                                                        <TextBlock Text="{Binding FormattedDate}"
                                                                   FontSize="10" Foreground="#5A5248"/>
                                                    </StackPanel>
                                                    <!-- Title -->
                                                    <TextBlock Text="{Binding Title}"
                                                               Style="{StaticResource SerifArticleTitle}"
                                                               Margin="0,0,0,4"/>
