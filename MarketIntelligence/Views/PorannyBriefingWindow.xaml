                            <StackPanel>
                                <TextBlock Text="BENCHMARK CENOWY UE (EUR/100kg)"
                                           FontSize="9" FontWeight="Bold"
                                           Foreground="#8B7355" Margin="0,0,0,12"/>
                                <ItemsControl ItemsSource="{Binding EuBenchmarks}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource SidePanelCard}">
