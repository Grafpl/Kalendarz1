                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="Tuszka" FontSize="8" Foreground="#7A6F63"/>
                                                            <TextBlock Text="{Binding TuszkaDisplay}"
                                                                       FontFamily="Consolas" FontSize="10"
                                                                       FontWeight="Bold" Foreground="#D5CCC0"/>
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="2">
                                                            <TextBlock Text="Udko" FontSize="8" Foreground="#7A6F63"/>
                                                            <TextBlock Text="{Binding UdkoDisplay}"
                                                                       FontFamily="Consolas" FontSize="10"
                                                                       FontWeight="Bold" Foreground="#D5CCC0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                        <TextBlock Text="{Binding Source}" FontSize="8" Foreground="#5A5248"/>
                                                        <TextBlock Text=" â€¢ " FontSize="8" Foreground="#5A5248"/>
                                                        <TextBlock Text="{Binding CheckDateDisplay}" FontSize="8" Foreground="#5A5248"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

