                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource SidePanelCard}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="50"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Commodity}"
                                                                   FontSize="11" Foreground="#D5CCC0"/>
                                                        <TextBlock Text="{Binding Contract}"
                                                                   FontSize="9" Foreground="#5A5248"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="1" Text="{Binding PriceDisplay}"
                                                               FontFamily="Consolas" FontSize="12"
                                                               FontWeight="Bold" Foreground="#F5EDE0"
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="2" Text="{Binding ChangeDisplay}"
                                                               FontFamily="Consolas" FontSize="10"
                                                               HorizontalAlignment="Right"
                                                               VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="#C05050"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsPositive}" Value="True">
                                                                        <Setter Property="Foreground" Value="#6DAF6D"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Retail Prices (Clickable) -->
                                <TextBlock Text="CENY DETALICZNE (kliknij aby otworzyc zrodlo)"
                                           FontSize="9" FontWeight="Bold"
                                           Foreground="#8B7355" Margin="0,16,0,8"/>
                                <ItemsControl ItemsSource="{Binding RetailPrices}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource SidePanelCard}"
                                                    Cursor="Hand"
                                                    Tag="{Binding SourceUrl}"
                                                    MouseLeftButtonUp="OpenUrl_Click">
                                                <StackPanel>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="{Binding ChainName}"
                                                                   FontSize="11" FontWeight="SemiBold"
                                                                   Foreground="#F5EDE0"/>
                                                        <TextBlock Grid.Column="1" Text="ðŸ”—"
                                                                   FontSize="10" Foreground="#C9A96E"
                                                                   VerticalAlignment="Center"/>
                                                    </Grid>
                                                    <Grid Margin="0,6,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="Filet" FontSize="8" Foreground="#7A6F63"/>
                                                            <TextBlock Text="{Binding FiletDisplay}"
                                                                       FontFamily="Consolas" FontSize="10"
                                                                       FontWeight="Bold" Foreground="#6DAF6D"/>
