                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <TextBlock Text="{Binding ArticleCount, StringFormat={}{0} artykulow}"
                                       Foreground="#7A6F63" FontSize="10"
                                       VerticalAlignment="Center" Margin="12,0,0,0"/>
