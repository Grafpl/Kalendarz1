                                                                        <DataTrigger Binding="{Binding IsImporter}" Value="True">
                                                                            <Setter Property="Background" Value="#C05050"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                        </Border>
                                                    </Grid>
                                                    <TextBlock Grid.Column="3" Text="{Binding PriceDisplay}"
                                                               FontFamily="Consolas" FontSize="10"
                                                               FontWeight="Bold" Foreground="#F5EDE0"
