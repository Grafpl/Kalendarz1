                                <TextBlock Text="POZIOM ZAGROZENIA"
                                           FontSize="9" FontWeight="Bold"
                                           Foreground="#8B7355" Margin="0,0,0,12"/>
                                <ItemsControl ItemsSource="{Binding Competitors}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource SidePanelCard}">
                                                <StackPanel>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="24"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="{Binding CountryFlag}"
                                                                   FontSize="14" VerticalAlignment="Center"/>
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding Name}"
                                                                       FontSize="11" FontWeight="SemiBold"
                                                                       Foreground="#F5EDE0"/>
                                                            <TextBlock Text="{Binding Owner}"
                                                                       FontSize="9" Foreground="#7A6F63"
                                                                       TextTrimming="CharacterEllipsis"/>
