                                        Margin="0,0,0,16">
                                    <Canvas x:Name="canvasChart">
                                        <!-- Chart will be drawn in code-behind -->
                                    </Canvas>
                                </Border>

                                <!-- Element Prices -->
                                <TextBlock Text="CENY ELEMENTOW"
                                           FontSize="9" FontWeight="Bold"
                                           Foreground="#8B7355" Margin="0,0,0,8"/>
                                <ItemsControl ItemsSource="{Binding ElementPrices}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource SidePanelCard}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="50"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding Name}"
                                                               FontSize="11" Foreground="#D5CCC0"
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding PriceDisplay}"
                                                               FontFamily="Consolas" FontSize="12"
                                                               FontWeight="Bold" Foreground="#F5EDE0"
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="2" Text="{Binding ChangeDisplay}"
                                                               FontFamily="Consolas" FontSize="10"
                                                               HorizontalAlignment="Right"
                                                               VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="#C05050"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsPositive}" Value="True">
                                                                        <Setter Property="Foreground" Value="#6DAF6D"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Feed Prices (MATIF) -->
                                <TextBlock Text="PASZE MATIF"
                                           FontSize="9" FontWeight="Bold"
                                           Foreground="#8B7355" Margin="0,16,0,8"/>
