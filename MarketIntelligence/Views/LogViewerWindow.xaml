<Window x:Class="Kalendarz1.MarketIntelligence.Views.LogViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szczegolowe Logi - Poranny Briefing"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#0C0A07">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="SZCZEGOLOWE LOGI PIPELINE"
                       FontSize="18" FontWeight="Bold" Foreground="#C9A96E"/>
            <TextBlock Text="Wszystkie logi mozna zaznaczac i kopiowac (Ctrl+A, Ctrl+C)"
                       FontSize="11" Foreground="#7A6F63" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Log Content -->
        <Border Grid.Row="1" Background="#15120D" CornerRadius="6"
                BorderBrush="#2A2520" BorderThickness="1">
            <TextBox x:Name="txtLogs"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     FontSize="11"
                     Foreground="#D5CCC0"
                     Background="Transparent"
                     BorderThickness="0"
                     Padding="12"/>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,16,0,0"
                    HorizontalAlignment="Right">
            <Button Content="Kopiuj wszystko" Click="CopyAll_Click"
                    Padding="16,8" Margin="0,0,8,0"
                    Background="#2A3520" Foreground="#6DAF6D"
                    BorderThickness="0" FontWeight="SemiBold"/>
            <Button Content="Wyczysc logi" Click="ClearLogs_Click"
                    Padding="16,8" Margin="0,0,8,0"
                    Background="#3A2520" Foreground="#C05050"
                    BorderThickness="0" FontWeight="SemiBold"/>
            <Button Content="Zapisz do pliku" Click="SaveToFile_Click"
                    Padding="16,8" Margin="0,0,8,0"
                    Background="#2A2520" Foreground="#C9A96E"
                    BorderThickness="0" FontWeight="SemiBold"/>
            <Button Content="Zamknij" Click="Close_Click"
                    Padding="16,8"
                    Background="#2A2520" Foreground="#D5CCC0"
                    BorderThickness="0" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
