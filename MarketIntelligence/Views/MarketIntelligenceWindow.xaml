        <!-- LOADING OVERLAY -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border x:Name="pnlLoading" Grid.RowSpan="3"
                Background="#E60B0F19" Visibility="Visible">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Background="{StaticResource AccentIndigo}"
                        Width="200" Height="3" CornerRadius="2" Margin="0,0,0,16">
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                     From="-200" To="200" Duration="0:0:1.5"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                    <Border.RenderTransform>
                        <TranslateTransform/>
                    </Border.RenderTransform>
                </Border>
                <TextBlock Text="Åadowanie danych..."
                           Foreground="{StaticResource TextSecondary}"
                           FontSize="13" HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtLoadingStatus"
                           Text="Inicjalizacja..."
                           Foreground="{StaticResource TextMuted}"
                           FontSize="11" Margin="0,6,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
