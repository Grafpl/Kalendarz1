<Window x:Class="Kalendarz1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Kalendarz1"
        Title="System Zarządzania - Piórkowscy" 
        Height="900" Width="1600"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#ECF0F1"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Kolory -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#5C8A3A"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#4B732F"/>
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="#E0F0D6"/>
        <SolidColorBrush x:Key="TextDarkBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextGrayBrush" Color="#7F8C8D"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#BDC3C7"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#ECF0F1"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="White"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#27AE60"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#E74C3C"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F39C12"/>
        <SolidColorBrush x:Key="InfoBrush" Color="#3498DB"/>

        <!-- Styl dla przycisków modułów -->
        <Style x:Key="ModuleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="135"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="8"/>
                            </Border.Effect>
                            <Grid Margin="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock x:Name="IconText" 
                                          Grid.Row="0"
                                          Text="{Binding IconText}"
                                          FontSize="32"
                                          Foreground="{Binding ColorBrush}"
                                          HorizontalAlignment="Left"
                                          Margin="0,0,0,8"/>
                                <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                                    <TextBlock Text="{Binding DisplayName}"
                                              FontSize="12"
                                              FontWeight="Bold"
                                              Foreground="{StaticResource TextDarkBrush}"
                                              TextWrapping="Wrap"
                                              MaxWidth="170"
                                              Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding Description}"
                                              FontSize="9"
                                              Foreground="{StaticResource TextGrayBrush}"
                                              TextWrapping="Wrap"
                                              MaxWidth="170"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                                <Setter TargetName="border" Property="Margin" Value="-2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                                <Setter TargetName="border" Property="Margin" Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl dla przycisków w sidebarze -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="15,5"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla kategorii -->
        <Style x:Key="CategoryHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextDarkBrush}"/>
            <Setter Property="Margin" Value="15,25,15,10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo i tytuł -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="30,0">
                    <TextBlock Text="🌿 PIÓRKOWSCY" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                    <TextBlock Text="System Zarządzania Produkcją" 
                              FontSize="11" 
                              Foreground="{StaticResource PrimaryLightBrush}"
                              Margin="45,5,0,0"/>
                </StackPanel>

                <!-- Info użytkownika -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center" 
                           Margin="0,0,30,0">
                    <TextBlock x:Name="TimeLabel" 
                              FontSize="11" 
                              Foreground="{StaticResource PrimaryLightBrush}"
                              VerticalAlignment="Center"
                              Margin="0,0,20,0"/>
                    <TextBlock x:Name="UserLabel" 
                              FontSize="12" 
                              FontWeight="Bold" 
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR (tylko dla admina) -->
            <Border x:Name="SidePanel" 
                    Grid.Column="0" 
                    Width="240" 
                    Background="{StaticResource TextDarkBrush}"
                    Visibility="Collapsed">
                <StackPanel>
                    <Button Content="⚙️ Panel Administracyjny"
                           Style="{StaticResource SidebarButtonStyle}"
                           Background="{StaticResource WarningBrush}"
                           Click="AdminPanelButton_Click"
                           Margin="15,20,15,5"/>

                    <Button Content="🚪 Wyloguj"
                           Style="{StaticResource SidebarButtonStyle}"
                           Background="{StaticResource DangerBrush}"
                           Click="LogoutButton_Click"/>

                    <Rectangle Height="2" 
                              Fill="{StaticResource BorderBrush}" 
                              Margin="15,20"/>

                    <TextBlock Text="Informacje systemowe" 
                              FontSize="10" 
                              Foreground="{StaticResource TextGrayBrush}"
                              Margin="20,10"/>

                    <TextBlock x:Name="VersionLabel"
                              FontSize="9" 
                              Foreground="{StaticResource TextGrayBrush}"
                              Margin="20,5"
                              Text="Wersja: 2.0.1"/>

                    <TextBlock x:Name="DateLabel"
                              FontSize="9" 
                              Foreground="{StaticResource TextGrayBrush}"
                              Margin="20,0"/>
                </StackPanel>
            </Border>

            <!-- CONTENT AREA -->
            <ScrollViewer Grid.Column="1" 
                         VerticalScrollBarVisibility="Auto"
                         Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT COLUMN -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <!-- ZAOPATRZENIE I ZAKUPY -->
                        <StackPanel x:Name="CategoryZaopatrzenie">
                            <TextBlock Text="▎ZAOPATRZENIE I ZAKUPY" 
                                      Style="{StaticResource CategoryHeaderStyle}"/>
                            <WrapPanel x:Name="ZaopatrzeniePanel" Orientation="Horizontal"/>
                        </StackPanel>

                        <!-- PRODUKCJA I MAGAZYN -->
                        <StackPanel x:Name="CategoryProdukcja">
                            <TextBlock Text="▎PRODUKCJA I MAGAZYN" 
                                      Style="{StaticResource CategoryHeaderStyle}"/>
                            <WrapPanel x:Name="ProdukcjaPanel" Orientation="Horizontal"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- RIGHT COLUMN -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <!-- SPRZEDAŻ I CRM -->
                        <StackPanel x:Name="CategorySprzedaz">
                            <TextBlock Text="▎SPRZEDAŻ I CRM" 
                                      Style="{StaticResource CategoryHeaderStyle}"/>
                            <WrapPanel x:Name="SprzedazPanel" Orientation="Horizontal"/>
                        </StackPanel>

                        <!-- OPAKOWANIA I TRANSPORT -->
                        <StackPanel x:Name="CategoryOpakowania">
                            <TextBlock Text="▎OPAKOWANIA I TRANSPORT" 
                                      Style="{StaticResource CategoryHeaderStyle}"/>
                            <WrapPanel x:Name="OpakowaniaPanel" Orientation="Horizontal"/>
                        </StackPanel>

                        <!-- FINANSE I ZARZĄDZANIE -->
                        <StackPanel x:Name="CategoryFinanse">
                            <TextBlock Text="▎FINANSE I ZARZĄDZANIE" 
                                      Style="{StaticResource CategoryHeaderStyle}"/>
                            <WrapPanel x:Name="FinansePanel" Orientation="Horizontal"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>