<Window x:Class="Kalendarz1.Komunikator.Views.ChatBubbleNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Notification"
        Width="320" Height="Auto"
        MinHeight="80" MaxHeight="280"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Animacja wejÅ›cia -->
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ThicknessAnimation Storyboard.TargetName="MainBorder" Storyboard.TargetProperty="Margin"
                               From="20,20,0,0" To="8,8,8,8" Duration="0:0:0.3">
                <ThicknessAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>

        <!-- Animacja wyjÅ›cia -->
        <Storyboard x:Key="FadeOut">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.2"/>
        </Storyboard>

        <!-- Animacja pulsowania badge'a -->
        <Storyboard x:Key="PulseBadge" RepeatBehavior="3x">
            <DoubleAnimation Storyboard.TargetName="BadgeScale" Storyboard.TargetProperty="ScaleX"
                           From="1" To="1.15" Duration="0:0:0.15" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="BadgeScale" Storyboard.TargetProperty="ScaleY"
                           From="1" To="1.15" Duration="0:0:0.15" AutoReverse="True"/>
        </Storyboard>
    </Window.Resources>

    <Border x:Name="MainBorder" Background="#1F2C33" CornerRadius="16"
            BorderBrush="#00A884" BorderThickness="2" Margin="8" Cursor="Hand"
            MouseLeftButtonUp="MainBorder_MouseLeftButtonUp"
            MouseEnter="MainBorder_MouseEnter" MouseLeave="MainBorder_MouseLeave">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="6" Opacity="0.6"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- NagÅ‚Ã³wek z badge -->
            <Grid Grid.Row="0" Margin="16,14,16,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Ikona wiadomoÅ›ci -->
                <Grid Width="44" Height="44" Margin="0,0,12,0">
                    <Ellipse Fill="#00A884"/>
                    <TextBlock Text="ðŸ’¬" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"
                              Margin="0,0,0,2"/>
                </Grid>

                <!-- TytuÅ‚ i podtytuÅ‚ -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Nowe wiadomoÅ›ci" Foreground="#E9EDEF" FontSize="15" FontWeight="SemiBold"/>
                    <TextBlock x:Name="SubtitleText" Foreground="#8696A0" FontSize="12" Margin="0,2,0,0"
                              Text="Kliknij aby otworzyÄ‡ czat"/>
                </StackPanel>

                <!-- Badge z liczbÄ… -->
                <Border Grid.Column="2" Background="#25D366" CornerRadius="14"
                        MinWidth="28" Height="28" Margin="8,0,0,0"
                        VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <ScaleTransform x:Name="BadgeScale" ScaleX="1" ScaleY="1"/>
                    </Border.RenderTransform>
                    <TextBlock x:Name="CountBadge" Text="0" Foreground="White" FontSize="13" FontWeight="Bold"
                              HorizontalAlignment="Center" VerticalAlignment="Center"
                              Margin="8,0,8,0"/>
                </Border>

                <!-- Przycisk zamknij -->
                <Button Grid.Column="3" Content="âœ•" FontSize="14" Width="28" Height="28"
                        Background="Transparent" Foreground="#8696A0"
                        BorderThickness="0" Cursor="Hand" VerticalAlignment="Center"
                        Margin="6,0,0,0" Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="14">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#E9EDEF"/>
                                    <Setter Property="Background" Value="#374248"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Lista nadawcÃ³w (max 3) -->
            <ItemsControl x:Name="SendersPanel" Grid.Row="1" Margin="16,0,16,14"
                         Visibility="Collapsed">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#2A3942" CornerRadius="10" Margin="0,0,0,6" Padding="10,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Avatar -->
                                <Grid Width="32" Height="32" Margin="0,0,10,0">
                                    <Ellipse>
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding Avatar}" Stretch="UniformToFill"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Grid>

                                <!-- Nazwa i treÅ›Ä‡ -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding SenderName}" Foreground="#E9EDEF"
                                              FontSize="13" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Preview}" Foreground="#8696A0"
                                              FontSize="12" TextTrimming="CharacterEllipsis"
                                              MaxWidth="200"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</Window>
