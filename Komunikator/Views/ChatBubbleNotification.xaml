<Window x:Class="Kalendarz1.Komunikator.Views.ChatBubbleNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Notification"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave">

    <Window.Resources>
        <!-- Kolory -->
        <SolidColorBrush x:Key="AccentGreen" Color="#00A884"/>
        <SolidColorBrush x:Key="BadgeGreen" Color="#25D366"/>
        <SolidColorBrush x:Key="DarkBg" Color="#1F2937"/>
        <SolidColorBrush x:Key="CardBg" Color="#374151"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#9CA3AF"/>

        <!-- Animacja wejÅ›cia - slide from right -->
        <Storyboard x:Key="SlideIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.25">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="SlideTransform"
                           Storyboard.TargetProperty="X"
                           From="60" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Animacja wyjÅ›cia -->
        <Storyboard x:Key="SlideOut">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="SlideTransform"
                           Storyboard.TargetProperty="X"
                           From="0" To="40" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- RozwiniÄ™cie -->
        <Storyboard x:Key="Expand">
            <DoubleAnimation Storyboard.TargetName="ExpandedContent"
                           Storyboard.TargetProperty="MaxHeight"
                           From="0" To="200" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ExpandedContent"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.15"/>
        </Storyboard>

        <!-- ZwiniÄ™cie -->
        <Storyboard x:Key="Collapse">
            <DoubleAnimation Storyboard.TargetName="ExpandedContent"
                           Storyboard.TargetProperty="MaxHeight"
                           From="200" To="0" Duration="0:0:0.15">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ExpandedContent"
                           Storyboard.TargetProperty="Opacity"
                           From="1" To="0" Duration="0:0:0.1"/>
        </Storyboard>

        <!-- Pulse badge -->
        <Storyboard x:Key="PulseBadge" RepeatBehavior="2x">
            <DoubleAnimation Storyboard.TargetName="BadgeScale"
                           Storyboard.TargetProperty="ScaleX"
                           From="1" To="1.12" Duration="0:0:0.12" AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="BadgeScale"
                           Storyboard.TargetProperty="ScaleY"
                           From="1" To="1.12" Duration="0:0:0.12" AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Border x:Name="MainBorder" Margin="12" Cursor="Hand"
            MouseLeftButtonUp="MainBorder_Click"
            RenderTransformOrigin="1,0.5">
        <Border.RenderTransform>
            <TranslateTransform x:Name="SlideTransform" X="0"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="16" ShadowDepth="2" Opacity="0.35" Direction="270"/>
        </Border.Effect>

        <Border Background="{StaticResource DarkBg}" CornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Kompaktowy nagÅ‚Ã³wek - zawsze widoczny -->
                <Border Grid.Row="0" Padding="12,10" CornerRadius="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Ikona + Badge -->
                        <Grid Width="36" Height="36">
                            <Ellipse Fill="{StaticResource AccentGreen}" Opacity="0.15"/>
                            <TextBlock Text="ðŸ’¬" FontSize="18"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>

                            <!-- Badge licznik -->
                            <Border x:Name="BadgeBorder"
                                    Background="{StaticResource BadgeGreen}"
                                    CornerRadius="9" MinWidth="18" Height="18"
                                    HorizontalAlignment="Right" VerticalAlignment="Top"
                                    Margin="0,-4,-4,0"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform x:Name="BadgeScale" ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <TextBlock x:Name="CountBadge" Text="1"
                                          Foreground="White" FontSize="10" FontWeight="Bold"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"
                                          Margin="4,0"/>
                            </Border>
                        </Grid>

                        <!-- Tekst -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                            <TextBlock x:Name="TitleText" Text="Nowa wiadomoÅ›Ä‡"
                                      Foreground="{StaticResource TextPrimary}"
                                      FontSize="13" FontWeight="SemiBold"/>
                            <TextBlock x:Name="SubtitleText" Text="Kliknij aby otworzyÄ‡"
                                      Foreground="{StaticResource TextSecondary}"
                                      FontSize="11" Margin="0,1,0,0"/>
                        </StackPanel>

                        <!-- Zamknij (widoczny tylko na hover) -->
                        <Button x:Name="CloseBtn" Grid.Column="2"
                                Content="âœ•" FontSize="12"
                                Width="24" Height="24"
                                Background="Transparent"
                                Foreground="{StaticResource TextSecondary}"
                                BorderThickness="0" Cursor="Hand"
                                Margin="8,0,0,0" Opacity="0"
                                Click="CloseButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="BtnBorder" Background="Transparent" CornerRadius="12">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="BtnBorder" Property="Background" Value="#4B5563"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <!-- Rozszerzona zawartoÅ›Ä‡ (widoczna na hover) -->
                <Border x:Name="ExpandedContent" Grid.Row="1"
                        MaxHeight="0" Opacity="0" ClipToBounds="True">
                    <StackPanel Margin="12,0,12,12">
                        <!-- Separator -->
                        <Border Height="1" Background="#374151" Margin="0,0,0,8"/>

                        <!-- Lista nadawcÃ³w -->
                        <ItemsControl x:Name="SendersPanel">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource CardBg}"
                                            CornerRadius="8" Margin="0,0,0,6" Padding="10,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Avatar -->
                                            <Border Width="32" Height="32" CornerRadius="16"
                                                    Margin="0,0,10,0" BorderThickness="2"
                                                    BorderBrush="{StaticResource AccentGreen}">
                                                <Border CornerRadius="14">
                                                    <Border.Background>
                                                        <ImageBrush ImageSource="{Binding Avatar}" Stretch="UniformToFill"/>
                                                    </Border.Background>
                                                </Border>
                                            </Border>

                                            <!-- Nazwa i treÅ›Ä‡ -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding SenderName}"
                                                          Foreground="{StaticResource TextPrimary}"
                                                          FontSize="12" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Preview}"
                                                          Foreground="{StaticResource TextSecondary}"
                                                          FontSize="11" TextTrimming="CharacterEllipsis"
                                                          MaxWidth="180"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Hint -->
                        <TextBlock Text="Kliknij aby otworzyÄ‡ komunikator"
                                  Foreground="{StaticResource TextSecondary}"
                                  FontSize="10" HorizontalAlignment="Center"
                                  Margin="0,4,0,0" Opacity="0.7"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>
