<Window x:Class="Kalendarz1.Komunikator.Views.ChatMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Kalendarz1.Komunikator.Views"
        Title="Komunikator Firmowy" Height="750" Width="1100"
        MinHeight="550" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#0B141A">

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

        <!-- Kolory WhatsApp Style -->
        <SolidColorBrush x:Key="BgDark" Color="#0B141A"/>
        <SolidColorBrush x:Key="SidebarBg" Color="#111B21"/>
        <SolidColorBrush x:Key="HeaderBg" Color="#1F2C33"/>
        <SolidColorBrush x:Key="InputBg" Color="#2A3942"/>
        <SolidColorBrush x:Key="MyMsgBg" Color="#005C4B"/>
        <SolidColorBrush x:Key="OtherMsgBg" Color="#1F2C33"/>
        <SolidColorBrush x:Key="GreenAccent" Color="#00A884"/>
        <SolidColorBrush x:Key="GreenLight" Color="#25D366"/>
        <SolidColorBrush x:Key="TextWhite" Color="#E9EDEF"/>
        <SolidColorBrush x:Key="TextGray" Color="#8696A0"/>
        <SolidColorBrush x:Key="HoverBg" Color="#2A3942"/>
        <SolidColorBrush x:Key="SelectedBg" Color="#2A3942"/>
        <SolidColorBrush x:Key="RedBadge" Color="#EF4444"/>
        <!-- Aliasy dla code-behind -->
        <SolidColorBrush x:Key="OnlineBrush" Color="#25D366"/>
        <SolidColorBrush x:Key="OfflineBrush" Color="#8696A0"/>

        <!-- Styl TextBox -->
        <Style x:Key="ChatInput" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>

        <!-- Styl przycisku -->
        <Style x:Key="SendBtn" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource GreenAccent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#008069"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl ListBox -->
        <Style x:Key="ContactList" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="VirtualizingStackPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingStackPanel.VirtualizationMode" Value="Recycling"/>
        </Style>

        <Style x:Key="ContactItem" TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Padding="12,10" Background="Transparent" Cursor="Hand"
                                BorderBrush="#2A3942" BorderThickness="0,0,0,1">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource HoverBg}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource SelectedBg}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- PANEL BOCZNY - KONTAKTY -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBg}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- NagÅ‚Ã³wek z avatarem uÅ¼ytkownika -->
                <Border Grid.Row="0" Padding="14,12" Background="{StaticResource HeaderBg}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Width="52" Height="52" Margin="0,0,14,0">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="CurrentUserAvatar" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Ellipse Width="14" Height="14" Fill="{StaticResource GreenLight}"
                                     HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                     Stroke="{StaticResource HeaderBg}" StrokeThickness="2"/>
                        </Grid>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="CurrentUserName" Text="..."
                                       Foreground="{StaticResource TextWhite}" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock Text="Online" Foreground="{StaticResource GreenAccent}" FontSize="13" Margin="0,2,0,0"/>
                        </StackPanel>

                        <Border x:Name="TotalUnreadBadge" Grid.Column="2"
                                Background="{StaticResource GreenAccent}" CornerRadius="12"
                                Padding="10,5" Visibility="Collapsed" VerticalAlignment="Center">
                            <TextBlock x:Name="TotalUnreadCount" Text="0" Foreground="White" FontSize="12" FontWeight="Bold"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Wyszukiwarka -->
                <Border Grid.Row="1" Padding="10,8" Background="{StaticResource SidebarBg}">
                    <Border Background="{StaticResource InputBg}" CornerRadius="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ”" FontSize="14" VerticalAlignment="Center" Margin="12,0,8,0" Foreground="{StaticResource TextGray}"/>
                            <TextBox x:Name="SearchBox" Grid.Column="1" Style="{StaticResource ChatInput}" TextChanged="SearchBox_TextChanged"/>
                            <TextBlock Grid.Column="1" Text="Szukaj lub rozpocznij nowy czat" Foreground="{StaticResource TextGray}"
                                       VerticalAlignment="Center" Margin="14,0" IsHitTestVisible="False" FontSize="14">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text.Length, ElementName=SearchBox}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Border>

                <!-- Lista kontaktÃ³w -->
                <ListBox x:Name="ContactsList" Grid.Row="2"
                         Style="{StaticResource ContactList}"
                         ItemContainerStyle="{StaticResource ContactItem}"
                         SelectionChanged="ContactsList_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Avatar -->
                                <Grid Width="54" Height="54" Margin="0,0,14,0">
                                    <Ellipse>
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding AvatarSource}" Stretch="UniformToFill"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <Ellipse Width="14" Height="14" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                             Stroke="{StaticResource SidebarBg}" StrokeThickness="2">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="{StaticResource TextGray}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsOnline}" Value="True">
                                                        <Setter Property="Fill" Value="{StaticResource GreenLight}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                </Grid>

                                <!-- Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextWhite}"
                                               FontSize="16" FontWeight="Medium" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding LastMessage}" Foreground="{StaticResource TextGray}"
                                               FontSize="13" TextTrimming="CharacterEllipsis" Margin="0,4,0,0" MaxWidth="170"/>
                                </StackPanel>

                                <!-- Czas i badge -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding FormattedLastMessageTime}" FontSize="12" HorizontalAlignment="Right">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasUnread}" Value="True">
                                                        <Setter Property="Foreground" Value="{StaticResource GreenAccent}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <Border Background="{StaticResource GreenAccent}" CornerRadius="12" Padding="8,3" Margin="0,6,0,0"
                                            HorizontalAlignment="Right"
                                            Visibility="{Binding HasUnread, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="{Binding UnreadCount}" Foreground="White" FontSize="12" FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- PANEL ROZMOWY -->
        <Grid Grid.Column="1" Background="{StaticResource BgDark}">

            <!-- Placeholder -->
            <StackPanel x:Name="NoConversationPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Background="#1F2C33" CornerRadius="50" Width="100" Height="100" Margin="0,0,0,20">
                    <TextBlock Text="ðŸ’¬" FontSize="44" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Komunikator Firmowy" FontSize="28" FontWeight="SemiBold" Foreground="{StaticResource TextWhite}" HorizontalAlignment="Center"/>
                <TextBlock Text="Wybierz rozmowÄ™ z listy kontaktÃ³w" Foreground="{StaticResource TextGray}" FontSize="14" HorizontalAlignment="Center" Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Panel aktywnej rozmowy -->
            <Grid x:Name="ConversationPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- NagÅ‚Ã³wek rozmowy -->
                <Border Grid.Row="0" Background="{StaticResource HeaderBg}" Padding="16,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Width="48" Height="48" Margin="0,0,14,0">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="SelectedUserAvatar" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Ellipse x:Name="SelectedUserOnlineIndicator" Width="12" Height="12"
                                     HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                     Fill="{StaticResource TextGray}" Stroke="{StaticResource HeaderBg}" StrokeThickness="2"/>
                        </Grid>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="SelectedUserName" Foreground="{StaticResource TextWhite}" FontSize="17" FontWeight="SemiBold"/>
                            <TextBlock x:Name="SelectedUserStatus" Foreground="{StaticResource TextGray}" FontSize="13" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- WiadomoÅ›ci -->
                <ScrollViewer x:Name="MessagesScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="50,16">
                    <ItemsControl x:Name="MessagesList"
                                  VirtualizingStackPanel.IsVirtualizing="True"
                                  VirtualizingStackPanel.VirtualizationMode="Recycling">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <!-- WiadomoÅ›Ä‡ od innych (z avatarem po lewej) -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"
                                                Visibility="{Binding IsFromMe, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                        <Grid Width="36" Height="36" Margin="0,0,10,0" VerticalAlignment="Bottom">
                                            <Ellipse>
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding SenderAvatar}" Stretch="UniformToFill"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Grid>
                                        <Border MaxWidth="500" Background="{StaticResource OtherMsgBg}" CornerRadius="0,12,12,12" Padding="14,10">
                                            <StackPanel>
                                                <TextBlock Text="{Binding SenderName}" Foreground="{StaticResource GreenAccent}"
                                                           FontSize="13" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding Content}" Foreground="{StaticResource TextWhite}"
                                                           FontSize="15" TextWrapping="Wrap" LineHeight="22"/>
                                                <TextBlock Text="{Binding FormattedTime}" Foreground="{StaticResource TextGray}"
                                                           FontSize="11" HorizontalAlignment="Right" Margin="0,6,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>

                                    <!-- Moja wiadomoÅ›Ä‡ (po prawej) -->
                                    <Border HorizontalAlignment="Right" MaxWidth="500"
                                            Background="{StaticResource MyMsgBg}" CornerRadius="12,12,0,12" Padding="14,10"
                                            Visibility="{Binding IsFromMe, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Content}" Foreground="{StaticResource TextWhite}"
                                                       FontSize="15" TextWrapping="Wrap" LineHeight="22"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0">
                                                <TextBlock Text="{Binding FormattedTime}" Foreground="#8CCCBF" FontSize="11"/>
                                                <TextBlock Text="{Binding ReadStatus}" Margin="6,0,0,0" Foreground="#8CCCBF" FontSize="11"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Input -->
                <Border Grid.Row="2" Background="{StaticResource HeaderBg}" Padding="50,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="{StaticResource InputBg}" CornerRadius="10" Margin="0,0,14,0">
                            <TextBox x:Name="MessageInput" Style="{StaticResource ChatInput}"
                                     AcceptsReturn="False" TextWrapping="Wrap" MaxHeight="120"
                                     VerticalScrollBarVisibility="Auto" KeyDown="MessageInput_KeyDown"/>
                        </Border>

                        <Button Grid.Column="1" Content="âž¤" Style="{StaticResource SendBtn}" FontSize="18" Click="SendButton_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
