<Window x:Class="Kalendarz1.Komunikator.Views.ChatMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Kalendarz1.Komunikator.Views"
        Title="Komunikator Firmowy" Height="700" Width="1000"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#1A1A2E">

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

        <!-- Kolory -->
        <Color x:Key="AccentColor">#7C3AED</Color>
        <Color x:Key="AccentDarkColor">#6D28D9</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}"/>
        <SolidColorBrush x:Key="BgBrush" Color="#1A1A2E"/>
        <SolidColorBrush x:Key="SidebarBrush" Color="#16213E"/>
        <SolidColorBrush x:Key="CardBrush" Color="#1F2937"/>
        <SolidColorBrush x:Key="TextBrush" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="GreenBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="RedBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#374151"/>

        <!-- Styl TextBox -->
        <Style x:Key="ChatTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>

        <!-- Styl przycisku -->
        <Style x:Key="SendBtn" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentDarkBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl ListBox kontakt贸w -->
        <Style x:Key="ContactListStyle" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="VirtualizingStackPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingStackPanel.VirtualizationMode" Value="Recycling"/>
        </Style>

        <Style x:Key="ContactItemStyle" TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Padding="14,12" Background="Transparent" Cursor="Hand">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2A2A4A"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3B3B5C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- PANEL BOCZNY -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Nag贸wek u偶ytkownika -->
                <Border Grid.Row="0" Padding="16" Background="#0F172A">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Width="50" Height="50" Margin="0,0,12,0">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="CurrentUserAvatar" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Ellipse Width="14" Height="14" Fill="{StaticResource GreenBrush}"
                                     HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                     Stroke="#0F172A" StrokeThickness="2"/>
                        </Grid>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="CurrentUserName" Text="..."
                                       Foreground="{StaticResource TextBrush}" FontSize="15" FontWeight="SemiBold"/>
                            <TextBlock Text="Online" Foreground="{StaticResource GreenBrush}" FontSize="12" Margin="0,2,0,0"/>
                        </StackPanel>

                        <Border x:Name="TotalUnreadBadge" Grid.Column="2"
                                Background="{StaticResource RedBrush}" CornerRadius="12"
                                Padding="8,4" Visibility="Collapsed" VerticalAlignment="Center">
                            <TextBlock x:Name="TotalUnreadCount" Text="0" Foreground="White" FontSize="12" FontWeight="Bold"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Wyszukiwarka -->
                <Border Grid.Row="1" Padding="12,10">
                    <Border Background="#1F2937" CornerRadius="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="" FontSize="14" VerticalAlignment="Center" Margin="10,0,6,0" Foreground="{StaticResource TextMutedBrush}"/>
                            <TextBox x:Name="SearchBox" Grid.Column="1" Style="{StaticResource ChatTextBox}" TextChanged="SearchBox_TextChanged"/>
                            <TextBlock Grid.Column="1" Text="Szukaj..." Foreground="{StaticResource TextMutedBrush}"
                                       VerticalAlignment="Center" Margin="12,0" IsHitTestVisible="False" FontSize="13">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text.Length, ElementName=SearchBox}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Border>

                <!-- Lista kontakt贸w -->
                <ListBox x:Name="ContactsList" Grid.Row="2"
                         Style="{StaticResource ContactListStyle}"
                         ItemContainerStyle="{StaticResource ContactItemStyle}"
                         SelectionChanged="ContactsList_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Avatar -->
                                <Grid Width="48" Height="48" Margin="0,0,12,0">
                                    <Ellipse>
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding AvatarSource}" Stretch="UniformToFill"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <Ellipse Width="12" Height="12" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                             Stroke="{StaticResource SidebarBrush}" StrokeThickness="2">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="{StaticResource TextMutedBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsOnline}" Value="True">
                                                        <Setter Property="Fill" Value="{StaticResource GreenBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                </Grid>

                                <!-- Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextBrush}"
                                               FontSize="14" FontWeight="Medium" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding LastMessage}" Foreground="{StaticResource TextMutedBrush}"
                                               FontSize="12" TextTrimming="CharacterEllipsis" Margin="0,3,0,0" MaxWidth="150"/>
                                </StackPanel>

                                <!-- Czas i badge -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding FormattedLastMessageTime}" Foreground="{StaticResource TextMutedBrush}"
                                               FontSize="11" HorizontalAlignment="Right"/>
                                    <Border Background="{StaticResource RedBrush}" CornerRadius="10" Padding="6,2" Margin="0,4,0,0"
                                            HorizontalAlignment="Right"
                                            Visibility="{Binding HasUnread, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="{Binding UnreadCount}" Foreground="White" FontSize="11" FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- PANEL ROZMOWY -->
        <Grid Grid.Column="1" Background="{StaticResource BgBrush}">

            <!-- Placeholder -->
            <StackPanel x:Name="NoConversationPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Background="#2A2A4A" CornerRadius="40" Width="80" Height="80" Margin="0,0,0,16">
                    <TextBlock Text="" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Wybierz rozmow" FontSize="22" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
                <TextBlock Text="Kliknij na kontakt aby rozpocz czat" Foreground="{StaticResource TextMutedBrush}" FontSize="13" HorizontalAlignment="Center" Margin="0,6,0,0"/>
            </StackPanel>

            <!-- Panel aktywnej rozmowy -->
            <Grid x:Name="ConversationPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Nag贸wek rozmowy -->
                <Border Grid.Row="0" Background="#1F2937" Padding="16,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Width="46" Height="46" Margin="0,0,14,0">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="SelectedUserAvatar" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Ellipse x:Name="SelectedUserOnlineIndicator" Width="12" Height="12"
                                     HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                     Fill="{StaticResource TextMutedBrush}" Stroke="#1F2937" StrokeThickness="2"/>
                        </Grid>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="SelectedUserName" Foreground="{StaticResource TextBrush}" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock x:Name="SelectedUserStatus" Foreground="{StaticResource TextMutedBrush}" FontSize="12" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Wiadomoci -->
                <ScrollViewer x:Name="MessagesScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16,12">
                    <ItemsControl x:Name="MessagesList"
                                  VirtualizingStackPanel.IsVirtualizing="True"
                                  VirtualizingStackPanel.VirtualizationMode="Recycling">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <!-- Wiadomo od innych -->
                                    <Border HorizontalAlignment="Left" MaxWidth="480"
                                            Background="#374151" CornerRadius="16,16,16,4" Padding="14,10"
                                            Visibility="{Binding IsFromMe, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Content}" Foreground="{StaticResource TextBrush}"
                                                       FontSize="14" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding FormattedTime}" Foreground="{StaticResource TextMutedBrush}"
                                                       FontSize="10" HorizontalAlignment="Right" Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Moja wiadomo -->
                                    <Border HorizontalAlignment="Right" MaxWidth="480"
                                            Background="{StaticResource AccentBrush}" CornerRadius="16,16,4,16" Padding="14,10"
                                            Visibility="{Binding IsFromMe, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Content}" Foreground="White" FontSize="14" TextWrapping="Wrap"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding FormattedTime}" Foreground="#E0E0FF" FontSize="10"/>
                                                <TextBlock Text="{Binding ReadStatus}" Margin="6,0,0,0" Foreground="#E0E0FF" FontSize="10"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Input -->
                <Border Grid.Row="2" Background="#1F2937" Padding="16,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="#374151" CornerRadius="10" Margin="0,0,12,0">
                            <TextBox x:Name="MessageInput" Style="{StaticResource ChatTextBox}"
                                     AcceptsReturn="True" TextWrapping="Wrap" MaxHeight="100"
                                     VerticalScrollBarVisibility="Auto" KeyDown="MessageInput_KeyDown"/>
                        </Border>

                        <Button Grid.Column="1" Content="Wylij" Style="{StaticResource SendBtn}" Click="SendButton_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
