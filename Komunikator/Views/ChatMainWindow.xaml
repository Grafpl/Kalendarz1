<Window x:Class="Kalendarz1.Komunikator.Views.ChatMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Kalendarz1.Komunikator.Views"
        Title="Komunikator Firmowy" Height="750" Width="1100"
        MinHeight="550" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2E">

    <Window.Resources>
        <!-- Konwertery -->
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

        <!-- Kolory -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#7C3AED"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#6D28D9"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="SidebarBrush" Color="#252536"/>
        <SolidColorBrush x:Key="CardBrush" Color="#2D2D44"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="OnlineBrush" Color="#22C55E"/>
        <SolidColorBrush x:Key="OfflineBrush" Color="#6B7280"/>
        <SolidColorBrush x:Key="UnreadBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="MyMessageBrush" Color="#7C3AED"/>
        <SolidColorBrush x:Key="OtherMessageBrush" Color="#374151"/>
        <SolidColorBrush x:Key="InputBrush" Color="#374151"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#374151"/>
        <SolidColorBrush x:Key="SelectedBrush" Color="#4C1D95"/>

        <!-- Style dla ScrollViewer - ciemny scrollbar -->
        <Style TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter Grid.Column="0"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                       Grid.Column="1"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                       Width="8" Opacity="0.5"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style dla TextBox -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="SelectionBrush" Value="{StaticResource PrimaryBrush}"/>
        </Style>

        <!-- Style dla przycisku wysyÅ‚ania -->
        <Style x:Key="SendButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5B21B6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360" MinWidth="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- PANEL BOCZNY - LISTA KONTAKTÃ“W -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- NagÅ‚Ã³wek z avatarem uÅ¼ytkownika -->
                <Border Grid.Row="0" Padding="20,18" Background="{StaticResource CardBrush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Avatar aktualnego uÅ¼ytkownika - WIÄ˜KSZY 56px -->
                        <Grid Grid.Column="0" Width="56" Height="56" Margin="0,0,14,0">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="CurrentUserAvatar" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <!-- Status online indicator -->
                            <Ellipse Width="16" Height="16" Fill="{StaticResource OnlineBrush}"
                                     HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                     Stroke="{StaticResource CardBrush}" StrokeThickness="3"/>
                        </Grid>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="CurrentUserName" Text="Åadowanie..."
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="17" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                <Ellipse Width="8" Height="8" Fill="{StaticResource OnlineBrush}" Margin="0,0,6,0"/>
                                <TextBlock Text="Online" Foreground="{StaticResource OnlineBrush}" FontSize="13"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Badge nieprzeczytanych -->
                        <Border x:Name="TotalUnreadBadge" Grid.Column="2"
                                Background="{StaticResource UnreadBrush}"
                                CornerRadius="14" Padding="10,5" Visibility="Collapsed"
                                VerticalAlignment="Center">
                            <TextBlock x:Name="TotalUnreadCount" Text="0"
                                       Foreground="White" FontSize="13" FontWeight="Bold"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Wyszukiwarka -->
                <Border Grid.Row="1" Padding="16,14">
                    <Border Background="{StaticResource CardBrush}" CornerRadius="12" Padding="4,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="18"
                                       VerticalAlignment="Center" Margin="12,0,8,0"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBox x:Name="SearchBox" Grid.Column="1"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     TextChanged="SearchBox_TextChanged"/>
                            <TextBlock Grid.Column="1" Text="Szukaj pracownika..."
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" Margin="14,0"
                                       IsHitTestVisible="False" FontSize="14">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text.Length, ElementName=SearchBox}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Border>

                <!-- Lista kontaktÃ³w z wirtualizacjÄ… -->
                <ListBox x:Name="ContactsList" Grid.Row="2"
                         Background="Transparent" BorderThickness="0"
                         VirtualizingStackPanel.IsVirtualizing="True"
                         VirtualizingStackPanel.VirtualizationMode="Recycling"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         SelectionChanged="ContactsList_SelectionChanged">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd" Padding="16,14" Background="Transparent" Cursor="Hand">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource HoverBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource SelectedBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Avatar - WIÄ˜KSZY 54px -->
                                <Grid Grid.Column="0" Width="54" Height="54" Margin="0,0,14,0">
                                    <Ellipse>
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding AvatarSource}" Stretch="UniformToFill"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <Ellipse Width="14" Height="14"
                                             HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                             Stroke="{StaticResource SidebarBrush}" StrokeThickness="2">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="{StaticResource OfflineBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsOnline}" Value="True">
                                                        <Setter Property="Fill" Value="{StaticResource OnlineBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                </Grid>

                                <!-- Nazwa i ostatnia wiadomoÅ›Ä‡ -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontSize="15" FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding LastMessage}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="13" TextTrimming="CharacterEllipsis"
                                               Margin="0,3,0,0" MaxWidth="180"/>
                                </StackPanel>

                                <!-- Czas i badge -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding FormattedLastMessageTime}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="12" HorizontalAlignment="Right"/>
                                    <Border Background="{StaticResource UnreadBrush}"
                                            CornerRadius="11" Padding="8,3" Margin="0,6,0,0"
                                            HorizontalAlignment="Right"
                                            Visibility="{Binding HasUnread, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                                        <TextBlock Text="{Binding UnreadCount}"
                                                   Foreground="White" FontSize="12" FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- PANEL ROZMOWY -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.Column="1" Background="{StaticResource BackgroundBrush}">

            <!-- Placeholder gdy nie wybrano rozmowy -->
            <StackPanel x:Name="NoConversationPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Background="{StaticResource CardBrush}" CornerRadius="50" Width="100" Height="100"
                        HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="ðŸ’¬" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Wybierz rozmowÄ™" FontSize="26" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                <TextBlock Text="Kliknij na kontakt z listy aby rozpoczÄ…Ä‡ czat"
                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="15"
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Panel aktywnej rozmowy -->
            <Grid x:Name="ConversationPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- NagÅ‚Ã³wek rozmowy -->
                <Border Grid.Row="0" Background="{StaticResource CardBrush}" Padding="20,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Avatar rozmÃ³wcy - WIÄ˜KSZY 52px -->
                        <Grid Grid.Column="0" Width="52" Height="52" Margin="0,0,16,0">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="SelectedUserAvatar" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Ellipse x:Name="SelectedUserOnlineIndicator" Width="14" Height="14"
                                     HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                     Fill="{StaticResource OfflineBrush}"
                                     Stroke="{StaticResource CardBrush}" StrokeThickness="2"/>
                        </Grid>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="SelectedUserName" Text=""
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="18" FontWeight="SemiBold"/>
                            <TextBlock x:Name="SelectedUserStatus" Text=""
                                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Lista wiadomoÅ›ci z wirtualizacjÄ… -->
                <ScrollViewer x:Name="MessagesScrollViewer" Grid.Row="1"
                              VerticalScrollBarVisibility="Auto" Padding="20,16">
                    <ItemsControl x:Name="MessagesList"
                                  VirtualizingStackPanel.IsVirtualizing="True"
                                  VirtualizingStackPanel.VirtualizationMode="Recycling">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,6">
                                    <!-- WiadomoÅ›Ä‡ od innych (lewo) -->
                                    <Border HorizontalAlignment="Left" MaxWidth="550"
                                            Background="{StaticResource OtherMessageBrush}"
                                            CornerRadius="18,18,18,6" Padding="16,12"
                                            Visibility="{Binding IsFromMe, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Content}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontSize="15" TextWrapping="Wrap" LineHeight="22"/>
                                            <TextBlock Text="{Binding FormattedTime}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="11" HorizontalAlignment="Right" Margin="0,6,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Moje wiadomoÅ›ci (prawo) -->
                                    <Border HorizontalAlignment="Right" MaxWidth="550"
                                            Background="{StaticResource MyMessageBrush}"
                                            CornerRadius="18,18,6,18" Padding="16,12"
                                            Visibility="{Binding IsFromMe, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Content}"
                                                       Foreground="White"
                                                       FontSize="15" TextWrapping="Wrap" LineHeight="22"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0">
                                                <TextBlock Text="{Binding FormattedTime}"
                                                           Foreground="#E0E0F0" FontSize="11"/>
                                                <TextBlock Text="{Binding ReadStatus}" Margin="8,0,0,0"
                                                           Foreground="#E0E0F0" FontSize="11"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Pole wprowadzania wiadomoÅ›ci -->
                <Border Grid.Row="2" Background="{StaticResource CardBrush}" Padding="20,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="{StaticResource InputBrush}"
                                CornerRadius="14" Margin="0,0,14,0">
                            <TextBox x:Name="MessageInput"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MaxHeight="140"
                                     VerticalScrollBarVisibility="Auto"
                                     KeyDown="MessageInput_KeyDown"/>
                        </Border>

                        <Button Grid.Column="1" Content="WyÅ›lij âž¤"
                                Style="{StaticResource SendButtonStyle}"
                                Click="SendButton_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
