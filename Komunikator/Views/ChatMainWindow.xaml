<Window x:Class="Kalendarz1.Komunikator.Views.ChatMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Kalendarz1.Komunikator.Views"
        Title="Komunikator Firmowy" Height="750" Width="1100"
        MinHeight="550" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#0B141A">

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

        <!-- Kolory WhatsApp -->
        <SolidColorBrush x:Key="BgDark" Color="#0B141A"/>
        <SolidColorBrush x:Key="SidebarBg" Color="#111B21"/>
        <SolidColorBrush x:Key="HeaderBg" Color="#202C33"/>
        <SolidColorBrush x:Key="InputBg" Color="#2A3942"/>
        <SolidColorBrush x:Key="MyMsgBg" Color="#005C4B"/>
        <SolidColorBrush x:Key="OtherMsgBg" Color="#202C33"/>
        <SolidColorBrush x:Key="GreenAccent" Color="#00A884"/>
        <SolidColorBrush x:Key="GreenLight" Color="#25D366"/>
        <SolidColorBrush x:Key="TextWhite" Color="#E9EDEF"/>
        <SolidColorBrush x:Key="TextGray" Color="#8696A0"/>
        <SolidColorBrush x:Key="HoverBg" Color="#2A3942"/>
        <SolidColorBrush x:Key="SelectedBg" Color="#2A3942"/>
        <SolidColorBrush x:Key="OnlineBrush" Color="#25D366"/>
        <SolidColorBrush x:Key="OfflineBrush" Color="#8696A0"/>
        <SolidColorBrush x:Key="ChatBg" Color="#0B141A"/>

        <!-- Style -->
        <Style x:Key="ChatInput" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SendBtn" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource GreenAccent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="24">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#008069"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ContactList" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="VirtualizingStackPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingStackPanel.VirtualizationMode" Value="Recycling"/>
        </Style>

        <Style x:Key="ContactItem" TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Padding="10,12" Background="Transparent" Cursor="Hand">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource HoverBg}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2A3942"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- PANEL KONTAKTÃ“W -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBg}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header uÅ¼ytkownika -->
                <Border Grid.Row="0" Background="{StaticResource HeaderBg}" Padding="12,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Width="44" Height="44">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="CurrentUserAvatar" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Grid>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                            <TextBlock x:Name="CurrentUserName" Text="..."
                                       Foreground="{StaticResource TextWhite}" FontSize="16" FontWeight="Medium"/>
                            <TextBlock Text="Online" Foreground="{StaticResource GreenAccent}" FontSize="12"/>
                        </StackPanel>

                        <Border x:Name="TotalUnreadBadge" Grid.Column="2"
                                Background="{StaticResource GreenAccent}" CornerRadius="11"
                                Padding="8,4" Visibility="Collapsed" VerticalAlignment="Center">
                            <TextBlock x:Name="TotalUnreadCount" Text="0" Foreground="White" FontSize="12" FontWeight="Bold"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Wyszukiwarka -->
                <Border Grid.Row="1" Padding="10,8" Background="{StaticResource SidebarBg}">
                    <Border Background="{StaticResource InputBg}" CornerRadius="8" Height="36">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ”" FontSize="13" VerticalAlignment="Center" Margin="12,0,8,0" Foreground="{StaticResource TextGray}"/>
                            <TextBox x:Name="SearchBox" Grid.Column="1" Style="{StaticResource ChatInput}"
                                     FontSize="14" Padding="0,0,12,0" TextChanged="SearchBox_TextChanged"/>
                            <TextBlock Grid.Column="1" Text="Szukaj" Foreground="{StaticResource TextGray}"
                                       VerticalAlignment="Center" IsHitTestVisible="False" FontSize="14">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text.Length, ElementName=SearchBox}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Border>

                <!-- Lista kontaktÃ³w -->
                <ListBox x:Name="ContactsList" Grid.Row="2"
                         Style="{StaticResource ContactList}"
                         ItemContainerStyle="{StaticResource ContactItem}"
                         SelectionChanged="ContactsList_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="50">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Grid Width="50" Height="50">
                                    <Ellipse>
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding AvatarSource}" Stretch="UniformToFill"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Grid>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                                    <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextWhite}"
                                               FontSize="16" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding LastMessage}" Foreground="{StaticResource TextGray}"
                                               FontSize="13" TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" VerticalAlignment="Top" Margin="0,4,0,0">
                                    <TextBlock Text="{Binding FormattedLastMessageTime}" FontSize="12" HorizontalAlignment="Right">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasUnread}" Value="True">
                                                        <Setter Property="Foreground" Value="{StaticResource GreenAccent}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <Border Background="{StaticResource GreenAccent}" CornerRadius="10"
                                            Padding="6,2" Margin="0,6,0,0" HorizontalAlignment="Right"
                                            Visibility="{Binding HasUnread, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="{Binding UnreadCount}" Foreground="White" FontSize="11" FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- PANEL ROZMOWY -->
        <Grid Grid.Column="1">
            <!-- Placeholder -->
            <Grid x:Name="NoConversationPanel" Background="#0B141A">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Border Background="#1F2C33" CornerRadius="50" Width="100" Height="100" Margin="0,0,0,20">
                        <TextBlock Text="ðŸ’¬" FontSize="44" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Komunikator Firmowy" FontSize="28" FontWeight="Light"
                               Foreground="{StaticResource TextWhite}" HorizontalAlignment="Center"/>
                    <TextBlock Text="WysyÅ‚aj i odbieraj wiadomoÅ›ci" Foreground="{StaticResource TextGray}"
                               FontSize="14" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Aktywna rozmowa -->
            <Grid x:Name="ConversationPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header rozmowy -->
                <Border Grid.Row="0" Background="{StaticResource HeaderBg}" Padding="16,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Width="44" Height="44">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="SelectedUserAvatar" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Grid>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                            <TextBlock x:Name="SelectedUserName" Foreground="{StaticResource TextWhite}"
                                       FontSize="16" FontWeight="Medium"/>
                            <TextBlock x:Name="SelectedUserStatus" Foreground="{StaticResource TextGray}" FontSize="13"/>
                        </StackPanel>

                        <Ellipse x:Name="SelectedUserOnlineIndicator" Width="0" Height="0" Visibility="Collapsed"/>
                    </Grid>
                </Border>

                <!-- WiadomoÅ›ci z tÅ‚em WhatsApp -->
                <Border Grid.Row="1" Background="#0B141A">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <DrawingBrush TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute">
                                        <DrawingBrush.Drawing>
                                            <GeometryDrawing Brush="#0D1418">
                                                <GeometryDrawing.Geometry>
                                                    <RectangleGeometry Rect="0,0,100,100"/>
                                                </GeometryDrawing.Geometry>
                                            </GeometryDrawing>
                                        </DrawingBrush.Drawing>
                                    </DrawingBrush>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Border.Style>

                    <ScrollViewer x:Name="MessagesScrollViewer" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="MessagesList" Margin="60,10"
                                      VirtualizingStackPanel.IsVirtualizing="True"
                                      VirtualizingStackPanel.VirtualizationMode="Recycling">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <!-- Separator daty -->
                                        <Border HorizontalAlignment="Center" Margin="0,12"
                                                Visibility="{Binding IsDateSeparator, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <Border Background="#1D282F" CornerRadius="8" Padding="12,6">
                                                <TextBlock Text="{Binding DateText}" Foreground="#8696A0"
                                                           FontSize="12"/>
                                            </Border>
                                        </Border>

                                        <!-- WiadomoÅ›Ä‡ od innych -->
                                        <Grid HorizontalAlignment="Left" MaxWidth="520"
                                              Visibility="{Binding IsFromMe, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Margin" Value="0,1,0,1"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsDateSeparator}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsFirstInGroup}" Value="True">
                                                            <Setter Property="Margin" Value="0,6,0,1"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="42"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Width="32" Height="32" VerticalAlignment="Bottom" Margin="0,0,6,0"
                                                  Visibility="{Binding ShowAvatar, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <Ellipse>
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{Binding SenderAvatar}" Stretch="UniformToFill"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                            </Grid>

                                            <Border Grid.Column="1" Background="#202C33" Padding="9,6,9,6">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="8"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsFirstInGroup}" Value="True">
                                                                <Setter Property="CornerRadius" Value="0,8,8,8"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <TextBlock Text="{Binding Content}" Foreground="#E9EDEF"
                                                               FontSize="14" TextWrapping="Wrap" Margin="0,0,50,0"/>
                                                    <TextBlock Grid.Row="1" Text="{Binding FormattedTime}"
                                                               Foreground="#8696A0" FontSize="11"
                                                               HorizontalAlignment="Right" Margin="0,2,0,0"/>
                                                </Grid>
                                            </Border>
                                        </Grid>

                                        <!-- Moja wiadomoÅ›Ä‡ -->
                                        <Border HorizontalAlignment="Right" MaxWidth="520" Background="#005C4B" Padding="9,6,9,6">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="{Binding IsFromMe, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                    <Setter Property="Margin" Value="0,1,0,1"/>
                                                    <Setter Property="CornerRadius" Value="8"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsDateSeparator}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsFirstInGroup}" Value="True">
                                                            <Setter Property="Margin" Value="0,6,0,1"/>
                                                            <Setter Property="CornerRadius" Value="8,0,8,8"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <TextBlock Text="{Binding Content}" Foreground="#E9EDEF"
                                                           FontSize="14" TextWrapping="Wrap" Margin="0,0,55,0"/>
                                                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,2,0,0">
                                                    <TextBlock Text="{Binding FormattedTime}" Foreground="#7EBFAD" FontSize="11"/>
                                                    <TextBlock Text="{Binding ReadStatus}" Margin="4,0,0,0" Foreground="#53BDEB" FontSize="11"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Input -->
                <Border Grid.Row="2" Background="{StaticResource HeaderBg}" Padding="12,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="{StaticResource InputBg}" CornerRadius="8" Margin="0,0,10,0">
                            <TextBox x:Name="MessageInput" Style="{StaticResource ChatInput}"
                                     AcceptsReturn="False" TextWrapping="Wrap" MaxHeight="100"
                                     VerticalScrollBarVisibility="Auto" KeyDown="MessageInput_KeyDown"/>
                        </Border>

                        <Button Grid.Column="1" Style="{StaticResource SendBtn}" Click="SendButton_Click">
                            <TextBlock Text="âž¤" FontSize="20" Margin="2,0,0,0"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
